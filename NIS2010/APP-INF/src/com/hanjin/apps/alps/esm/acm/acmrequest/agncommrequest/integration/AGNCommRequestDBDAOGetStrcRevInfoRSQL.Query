<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AGNCommRequestDBDAOGetStrcRevInfoRSQL">
			<desc><![CDATA[GetStrcRevInfo

2014.04.16 박다은 [CHM-201429851] Gross Ocean Freight 기반의 계산건(IZMBA, DARBA) FRC중복계산되지 않도록 로직 변경 요청
]]></desc>
			<sql><![CDATA[
SELECT NVL(ROUND(SUM(DECODE(a.frt_term_cd, 'P', (A.CHG_AMT/DECODE(a.curr_cd, 'USD', 1, nvl(b.usd_locl_xch_rt, 0))), 0)), 13), 0) ppd_strc_rev, 
       NVL(ROUND(SUM(DECODE(a.frt_term_cd, 'C', (A.CHG_AMT/DECODE(a.curr_cd, 'USD', 1, nvl(b.usd_locl_xch_rt, 0))), 0)), 13), 0) cct_strc_rev 
  FROM BKG_CHG_RT a, gl_mon_xch_rt b 
 WHERE a.bkg_no = @[bkg_no] 
   AND A.FRT_INCL_XCLD_DIV_CD = 'N' 
   AND a.curr_cd = b.curr_cd 
   AND b.acct_xch_rt_yrmon = DECODE(SIGN(TO_NUMBER(TO_CHAR(SYSDATE, 'YYYYMM')) - TO_NUMBER(SUBSTR (@[sa_dt], 1, 6))), 1, SUBSTR (@[sa_dt], 1, 6),TO_CHAR(SYSDATE, 'YYYYMM')) 
   AND b.acct_xch_rt_lvl = '1' 
   AND a.CHG_CD IN (
   

        SELECT DISTINCT(CHG_CD)
        FROM ACM_AGN_SET_REV_CHG_CD R
        WHERE 1=1
        AND R.REV_FM_DT <=
            CASE WHEN R.REV_FM_DT_CD = 'S' THEN @[sa_dt] 
                 WHEN R.REV_FM_DT_CD = 'B' THEN @[bkg_cre_dt]
                 WHEN R.REV_FM_DT_CD = 'R' THEN @[rev_mon]||'01'
            END  
        
        AND R.REV_TO_DT >=
            CASE WHEN R.REV_TO_DT_CD = 'S' THEN @[sa_dt] 
                 WHEN R.REV_TO_DT_CD = 'B' THEN @[bkg_cre_dt]
                 WHEN R.REV_TO_DT_CD = 'R' THEN @[rev_mon]||'01'
            END  
            
        AND NVL(R.RHQ_CD,     @[rhq_cd])     = @[rhq_cd]
        AND NVL(R.SVC_SCP_CD, @[svc_scp_cd]) = @[svc_scp_cd]
   
   )
   AND 'N' = @[rev_div_cd] -- Gross 일 경우엔 Revenue Add 하지 않도록 한다.			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="sa_dt" type="12" value="" out="N"/>
				<param name="bkg_cre_dt" type="12" value="" out="N"/>
				<param name="rev_mon" type="12" value="" out="N"/>
				<param name="rhq_cd" type="12" value="" out="N"/>
				<param name="svc_scp_cd" type="12" value="" out="N"/>
				<param name="rev_div_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
