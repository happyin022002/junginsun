<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="TCharterIOInvoiceDBDAOSearchInvoiceByPaymentSlipVORSQL">
			<desc><![CDATA[Payment Slip화면에서 계약번호 선택 후 정산 관련 기본 정보를 조회한다]]></desc>
			<sql><![CDATA[
SELECT (SELECT INTG_CD_VAL_DP_DESC 
		  FROM COM_INTG_CD_DTL CD 
		 WHERE INTG_CD_ID = 'CD01513' 
           AND INTG_CD_VAL_CTNT = FLET_CTRT_TP_CD) FLET_CTRT_TP_CD,
        CASE WHEN SUBSTR(@[flet_ctrt_no],5,2) = 'TO' THEN
				  6260
			 ELSE
				  VNDR_SEQ
		 END VNDR_SEQ,
		(SELECT VNDR_LGL_ENG_NM 
           FROM MDM_VENDOR 
          WHERE VNDR_SEQ = DECODE(SUBSTR(@[flet_ctrt_no],5,2),'TO',6260,A.VNDR_SEQ) 
            AND DELT_FLG = 'N') VNDR_LGL_ENG_NM
       ,A.CUST_CNT_CD, A.CUST_SEQ
  FROM FMS_CONTRACT A
 WHERE FLET_CTRT_NO = @[flet_ctrt_no]			]]></sql>
			<params>
				<param name="flet_ctrt_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
