<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RFARateProposalDBDAORsltRtRouteMBListVORSQL">
			<desc><![CDATA[Rate 탭의 Route Detail Orgin/Dest별 Match Back 정보 취득

2015.06.26 CHM-201536492 Split05-주간 MAS Open에 따른 타모듈 프로그램 적용 요청]]></desc>
			<sql><![CDATA[
WITH LOC_INFO AS
    (
-- ROUTE DETAIL PORT
    SELECT ROUT_PNT_LOC_DEF_CD AS LOC_CD
      FROM PRI_RP_SCP_RT_ROUT_PNT
     WHERE PROP_NO = @[prop_no]
       AND AMDT_SEQ = @[amdt_seq]
       AND SVC_SCP_CD = @[svc_scp_cd]
       AND CMDT_HDR_SEQ = @[cmdt_hdr_seq]
#if (${org_dest_tp_cd} != '') 
       AND ORG_DEST_TP_CD = @[org_dest_tp_cd] -- ORIGIN/DEST
#end
       AND ROUT_PNT_LOC_TP_CD = 'L' 
     UNION ALL
-- LOCATION GROUP PORT
    SELECT LOC_CD
      FROM PRI_RP_SCP_RT_ROUT_PNT A, PRI_RP_SCP_GRP_LOC B, PRI_RP_SCP_GRP_LOC_DTL C
     WHERE A.PROP_NO = B.PROP_NO
       AND A.AMDT_SEQ = B.AMDT_SEQ
       AND A.SVC_SCP_CD = B.SVC_SCP_CD
       AND A.PROP_NO = C.PROP_NO
       AND A.AMDT_SEQ = C.AMDT_SEQ
       AND A.SVC_SCP_CD = C.SVC_SCP_CD
       AND A.ORG_DEST_TP_CD = B.ORG_DEST_TP_CD
       AND B.GRP_LOC_SEQ = C.GRP_LOC_SEQ
       AND A.ROUT_PNT_LOC_TP_CD = 'G' -- ROUT_PNT_LOC_TP_CD   범위유형 - G: GROUP LOCATION - L: LOCATI
       AND A.PROP_NO = @[prop_no]
       AND B.AMDT_SEQ = @[amdt_seq]
       AND C.SVC_SCP_CD = @[svc_scp_cd]
       AND A.CMDT_HDR_SEQ = @[cmdt_hdr_seq]
#if (${org_dest_tp_cd} != '') 
       AND A.ORG_DEST_TP_CD = @[org_dest_tp_cd] -- ORIGIN/DEST
#end
)
SELECT COST_YRMON, FCNTR_ECC_CD, LOC_CD, CNTR_TPSZ_CD, CNTR_IO_VOL_STS_CD, CNTR_IO_VOL_STS_NM
  FROM (
    SELECT COST_YRMON, FCNTR_ECC_CD, D.LOC_CD, CNTR_TPSZ_CD, CNTR_IO_VOL_STS_CD
         , (SELECT INTG_CD_VAL_DP_DESC FROM COM_INTG_CD_DTL WHERE INTG_CD_ID = 'CD00849' AND INTG_CD_VAL_CTNT = CNTR_IO_VOL_STS_CD) CNTR_IO_VOL_STS_NM
         , DENSE_RANK() OVER (PARTITION BY FCNTR_ECC_CD ORDER BY COST_YRMON DESC ) ROW_NUM
      FROM MAS_FULL_ECC_IMBAL A
         , MDM_EQ_ORZ_CHT B
         , MDM_LOCATION C
         , (
            SELECT LOC_CD
              FROM LOC_INFO
             GROUP BY LOC_CD
         ) D
     WHERE A.FCNTR_ECC_CD = B.ECC_CD
       AND B.SCC_CD = C.SCC_CD
       AND B.DELT_FLG = 'N'
       AND C.DELT_FLG = 'N'
       AND COST_LOC_GRP_CD = 'E'
       AND C.LOC_CD = D.LOC_CD
#if (${cntr_tpsz_cd} != '') 
       AND CNTR_TPSZ_CD = @[cntr_tpsz_cd]
#end
#if (${fcntr_ecc_cd} != '')
       AND FCNTR_ECC_CD = @[fcntr_ecc_cd]
#end
       -- 백업&더미값을 제거하기 위해 올해나 작년 값을 취득
       AND (COST_YRMON LIKE TO_CHAR(SYSDATE, 'YYYY')||'%' OR COST_YRMON LIKE TO_CHAR(SYSDATE, 'YYYY') -1 ||'%')
  )
 WHERE ROW_NUM = 1			]]></sql>
			<params>
				<param name="prop_no" type="12" value="" out="N"/>
				<param name="amdt_seq" type="12" value="" out="N"/>
				<param name="svc_scp_cd" type="12" value="" out="N"/>
				<param name="cmdt_hdr_seq" type="12" value="" out="N"/>
				<param name="org_dest_tp_cd" type="12" value="" out="N"/>
				<param name="cntr_tpsz_cd" type="12" value="" out="N"/>
				<param name="fcntr_ecc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
