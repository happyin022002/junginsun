<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PRICommonDBDAOSearchMstRfaAuthListRSQL">
			<desc><![CDATA[Master RFA의 권한 PRI17과 승인권자 권한을 조회한다.]]></desc>
			<sql><![CDATA[
 SELECT --[usr_id] AS CD
       MAX(ETC1) AS CD -- 생성/Amend/Copy (PRI02 + PRI17)
     , '' AS NM
  FROM (
    SELECT A.USR_ID
         , DECODE(COUNT(A.USR_ID), 0, 'N', 'Y') ETC1
         , '' ETC2
      FROM COM_USER A
         , COM_USR_ROLE_MTCH C
         , COM_USR_ROLE_MTCH D
     WHERE A.USR_ID = C.USR_ID
       AND A.USR_ID = D.USR_ID
       AND A.USE_FLG = 'Y'
       AND C.USR_ROLE_CD = 'PRI02'
       AND D.USR_ROLE_CD = 'PRI17'
	   AND A.USR_ID = @[usr_id]
     GROUP BY A.USR_ID
  ) A			]]></sql>
			<params>
				<param name="usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
