<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SalesRPTDBDAOsearchBkg0061ListRSQL">
			<desc><![CDATA[SCE_COP_HDR, BKG_BOOKING, _BKG_INFO, _BKG_COST_DTL 테이블의 데이터 조회


1. 관련 Table : BKG Info
2. 조건 :  BKG INFo Table에서 조회 조건으로 where조건 구성
3. Route 정보만 넘김

2012.03.12 김종준 [CHM-201216637-01] Inquiry by BKG 화면에 Bill Type Indicator 추가
2015.06.26 손진환 [CHM-201536375] Inquiry by BKG 상 Route 중복 건 수정]]></desc>
			<sql><![CDATA[
SELECT ' '                                                                                      PCTL_NO
                  , A1.BKG_NO
                  , DECODE(A3.RNUM, 1, 'All', A2.COST_ROUT_NO) COST_ROUT_NO
				  , DECODE(A3.RNUM, 1, 'All', A1.ROUT_NO) COST_ROUT_NO2
                  , COA_LOC_FNC(A1.MTY_PKUP_YD_CD, 'LOC') AS MTY_PKUP_LOC
                  , COA_LOC_FNC(A1.MTY_PKUP_YD_CD, 'ECC') AS MTY_PKUP_ECC
                  , A1.POR_CD
                  , A1.POL_CD
                  , A1.N1ST_TS_PORT_CD
                  , A1.N2ND_TS_PORT_CD
                  , A1.N3RD_TS_PORT_CD
                  , A1.POD_CD
                  , A1.DEL_CD
                  , COA_LOC_FNC(A1.MTY_RTN_YD_CD, 'LOC') AS MTY_RTN_LOC
                  , COA_LOC_FNC(A1.MTY_RTN_YD_CD, 'ECC') AS MTY_RTN_ECC
                  , A1.OB_ITCHG_CTNT
                  , A1.IB_ITCHG_CTNT
                  , A1.SPCL_DG_CGO_FLG
                  , A1.SPCL_RC_FLG
                  , A1.SPCL_AWK_CGO_FLG
                  , A1.SPCL_BB_CGO_FLG
                  , A2.SOC_FLG                                                                             SOC_FLG
                  , A2.BKG_CGO_TP_CD
                  , A2.N1ST_RLANE_CD
                  , A2.N2ND_RLANE_CD
                  , A2.N3RD_RLANE_CD
                  , A2.N4TH_RLANE_CD
                  , A2.CLT_OFC_CD
                  , A2.SLS_OFC_CD
                  , A2.SHIPPER
                  , A2.IOC_CD
                  , A2.VVD
                  , A2.BKG_DE_TERM_CD
                  , A2.BKG_RCV_TERM_CD
                  , A2.REP_CMDT_CD
                  , A2.SHPR_NM
                  , A2.RLANE_CD
                  , NVL(A1.TTL_TZTM_HRS,0) / 24                                                            HRS
                  , A2.BKG_STS_CD
                  , A2.SLS_YRMON
                  , A2.COST_YRMON
                  , A2.COST_WK
                  , A2.BKG_CGO_WGT
                  , A2.BKG_WGT_TP_CD
				  , COA_GET_CD_NM_FNC('CD01639', NVL(RT_BL_TP_CD, 'X')) RT_BL_TP_NM
FROM     (SELECT DISTINCT A1.BKG_NO
						  ,'ROUTE'||DENSE_RANK() OVER (
		                   ORDER BY A3.MTY_PKUP_YD_CD, A3.POR_CD, A3.POL_CD, A3.POD_CD, A3.DEL_CD, A3.MTY_RTN_YD_CD, A3.TTL_TZTM_HRS ) ROUT_NO
                          , A2.DCGO_FLG    SPCL_DG_CGO_FLG
                          , A2.RC_FLG      SPCL_RC_FLG
                          , A2.AWK_CGO_FLG SPCL_AWK_CGO_FLG
                          , A2.BB_CGO_FLG  SPCL_BB_CGO_FLG
                          , A3.POR_CD
                          , A3.POL_CD
                          , A3.N1ST_TS_PORT_CD
                          , A3.N2ND_TS_PORT_CD
                          , A3.N3RD_TS_PORT_CD
                          , A3.POD_CD
                          , A3.DEL_NOD_CD
                          , A3.OB_ITCHG_CTNT
                          , A3.IB_ITCHG_CTNT
                          , A3.DEL_CD
                          -- ,a3.dg_spcl_flg
                          -- ,a3.rf_spcl_flg
                          -- ,a3.spcl_awk_cgo_flg
                          -- ,a3.bb_spcl_flg
                          , A3.TTL_TZTM_HRS
                          , COALESCE(A3.MTY_PKUP_YD_CD, A4.MTY_PKUP_YD_CD, A2.MTY_PKUP_YD_CD) MTY_PKUP_YD_CD
                          , COALESCE(A3.MTY_RTN_YD_CD, A4.MTY_PKUP_YD_CD, A2.MTY_RTN_YD_CD) MTY_RTN_YD_CD
          FROM   SCE_COP_HDR A1
                 , BKG_BOOKING A2
                 , PRD_PROD_CTL_MST A3
                 , COA_RGST_BKG A4
          WHERE  1 = 1
          AND A1.BKG_NO = @[f_bkg_no]
          AND A1.BKG_NO = A2.BKG_NO
          AND A1.PCTL_NO = A3.PCTL_NO
          AND A1.COP_STS_CD <> DECODE(A2.BKG_STS_CD,'S','Z','X')
          AND A1.BKG_NO = A4.BKG_NO) A1
         , (SELECT DISTINCT A.BKG_NO
				 , A.COST_ROUT_NO
				 , 'ROUTE'||SUBSTR(A.COST_ROUT_NO, -1) ROUT_NO
                 , A.RLANE_CD
                 , A.N1ST_RLANE_CD
                 , A.N2ND_RLANE_CD
                 , A.N3RD_RLANE_CD
                 , A.N4TH_RLANE_CD
                 , NVL(A.AGMT_SGN_OFC_CD,A.SLS_OFC_CD) CLT_OFC_CD
                 , A.SLS_OFC_CD
                 , A.SHPR_CNT_CD
                   ||A.SHPR_CUST_SEQ    SHIPPER
                 , A.IOC_CD
                 , A.VSL_CD
                   ||A.SKD_VOY_NO
                   ||A.DIR_CD VVD
                 , A.BKG_DE_TERM_CD
                 , A.BKG_RCV_TERM_CD
                 , A.REP_CMDT_CD
                 , A.SHPR_NM
                 , A.BKG_STS_CD
                 , A.BKG_CGO_TP_CD
                 , A.SOC_FLG
                 , A.SLS_YRMON
                 , A.COST_YRMON
                 , A.COST_WK
                 -- ,a.spcl_dg_cgo_flg
                 -- ,a.spcl_rc_flg
                 -- ,a.spcl_awk_cgo_flg
                 -- ,a.spcl_bb_cgo_flg
                 , A.BKG_CGO_WGT
                 , A.BKG_WGT_TP_CD
				 , A.RT_BL_TP_CD
          FROM   COA_BKG_EXPN_DTL A
          WHERE  A.BKG_NO = @[f_bkg_no]
          AND a.bl_no_tp      IN ('M','0')
          AND A.BKG_STS_CD IN ('F','S','W')
          AND A.BKG_CGO_TP_CD <> 'P') A2
         , (SELECT LEVEL AS RNUM
          FROM dual CONNECT BY LEVEL < 3 ) A3
WHERE    1 = 1
AND A1.BKG_NO = A2.BKG_NO
AND A1.ROUT_NO = A2.ROUT_NO
ORDER BY A3.RNUM, A2.COST_ROUT_NO			]]></sql>
			<params>
				<param name="f_bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
