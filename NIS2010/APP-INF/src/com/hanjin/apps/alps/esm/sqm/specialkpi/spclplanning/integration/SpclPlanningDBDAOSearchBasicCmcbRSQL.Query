<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SpclPlanningDBDAOSearchBasicCmcbRSQL">
			<desc><![CDATA[SpclPlanningDBDAOSearchBasicCmcb
2015.11.19 김용습 [CHM-201538495] [CSR 전환건] Basic CMCB 화면 보완 (Trade Direction 칼럼 추가)]]></desc>
			<sql><![CDATA[
SELECT DISTINCT
       A1.BSE_YR
      ,A1.RHQ_CD
      ,A1.BSE_QTR_CD
      ,A1.TRD_CD
      ,A1.RLANE_CD
      ,A1.DIR_CD
      ,A1.CONV_DIR_CD
      ,DECODE(MAS.HUL_BND_CD,'BH','B/H','H/H') HUL_BND_CD
      ,A1.RGN_OFC_CD
      ,A1.GID_PA_CM_UC_AMT
      ,A1.GID_RA_CM_UC_AMT
      ,A1.PA_CM_UC_AMT
      ,A1.RA_CM_UC_AMT
  FROM SQM_SPCL_LANE_OFC_COST A1, MAS_LANE_RGST MAS
 WHERE 1=1
   AND A1.BSE_TP_CD     = @[f_bse_tp_cd]    --필수
   AND A1.SPCL_TGT_CD   = @[f_spcl_tgt_cd]  --필수
   AND A1.BSE_YR        = @[f_bse_yr]       --필수
#if(${f_bse_qtr_cd} != 'All')
   AND A1.BSE_QTR_CD    = @[f_bse_qtr_cd]   --All이 아닐때 필수
#end
#if(${f_rhq_cd} != 'All')
   AND A1.RHQ_CD        = @[f_rhq_cd]
#end
#if(${f_trd_cd} != 'All')
   AND A1.TRD_CD        = @[f_trd_cd]
#end
#if(${f_rlane_cd} != 'All')
   AND A1.RLANE_CD      = @[f_rlane_cd]
#end
#if(${f_trd_dir} != 'on' && ${f_conv_dir_cd} != 'All')
   AND A1.CONV_DIR_CD   = @[f_conv_dir_cd]
#end
#if(${f_rgn_ofc_cd} != 'All')
   AND A1.RGN_OFC_CD    = @[f_rgn_ofc_cd]
#end

AND A1.TRD_CD           = MAS.TRD_CD
AND A1.RLANE_CD         = MAS.RLANE_CD
AND A1.DIR_CD           = MAS.DIR_CD
#if (${f_trd_dir} == 'on' && ${f_hul_bnd_cd} != '' && ${f_hul_bnd_cd} != 'All')
AND MAS.HUL_BND_CD       = @[f_hul_bnd_cd]
#end
ORDER BY A1.RHQ_CD, A1.TRD_CD, A1.RLANE_CD, A1.DIR_CD, A1.CONV_DIR_CD, A1.RGN_OFC_CD, A1.BSE_QTR_CD			]]></sql>
			<params>
				<param name="f_bse_tp_cd" type="12" value="" out="N"/>
				<param name="f_spcl_tgt_cd" type="12" value="" out="N"/>
				<param name="f_bse_yr" type="12" value="" out="N"/>
				<param name="f_bse_qtr_cd" type="12" value="" out="N"/>
				<param name="f_rhq_cd" type="12" value="" out="N"/>
				<param name="f_trd_cd" type="12" value="" out="N"/>
				<param name="f_rlane_cd" type="12" value="" out="N"/>
				<param name="f_conv_dir_cd" type="12" value="" out="N"/>
				<param name="f_rgn_ofc_cd" type="12" value="" out="N"/>
				<param name="f_hul_bnd_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
