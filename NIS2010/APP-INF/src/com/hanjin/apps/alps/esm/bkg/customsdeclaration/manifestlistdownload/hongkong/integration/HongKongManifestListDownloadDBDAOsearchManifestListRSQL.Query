<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="HongKongManifestListDownloadDBDAOsearchManifestListRSQL">
			<desc><![CDATA[홍콩 세관에 적하목록을 신고하기 위해 BKG Manifest 정보를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT VVD_NUMBER, BKG_NO, BL_NO, MFSND_CODE, TERM_CD, CNHKG_CD, POR_CD, 
BV_POL_CD, BV_POD_CD, DEL_CD, ACT_WGT, WGT_UT_CD, PCK_QTY, VSL_CD, SKD_VOY_NO, SKD_DIR_CD,
FRT_TERM_CD, HOT_DE_FLG, RC_FLG, MF_SND_DT, COUNT(DISTINCT BL_NO) OVER() total_bl
FROM (
SELECT NVL(BV.VSL_CD,' ')||NVL(BV.SKD_VOY_NO,' ')||NVL(BV.SKD_DIR_CD,' ') vvd_number,
		BKG.BKG_NO ,BV.VSL_CD,BV.SKD_VOY_NO,BV.SKD_DIR_CD,
		NVL(BKG.BL_NO||BKG.BL_TP_CD,' ') bl_no, 
		DECODE(HSL.MF_SND_DT, '', 'F', 'A') mfsnd_code,
		NVL(BKG.RCV_TERM_CD||BKG.DE_TERM_CD,'  ') term_cd,
		DECODE(BV.POL_CD, 'CNHKG', DECODE(BKG.POL_CD, 'CNHKG', 'L', 'T'),
		DECODE(BV.POD_CD, 'CNHKG', DECODE(BKG.POD_CD,'CNHKG','L','T'), ' ')) CNHKG_CD,
		BKG.POR_CD, BV.POL_CD BV_POL_CD, BV.POD_CD BV_POD_CD, BKG.DEL_CD,
		DOC.ACT_WGT, DOC.WGT_UT_CD,
		DOC.PCK_QTY,
		NVL(BR.FRT_TERM_CD, ' ') FRT_TERM_CD,
		DECODE(BKG.HOT_DE_FLG, 'Y', 'H', ' ') HOT_DE_FLG,
		DECODE(BKG.RC_FLG, 'Y', 'R', ' ') RC_FLG,
		--MAX(TO_CHAR(HSL.MF_SND_DT,'YYYY-MM-DD')) MF_SND_DT
       (SELECT MAX(B.MF_SND_DT) 
          FROM BKG_CSTMS_HKG_BL B 
         WHERE B.VSL_CD=BV.VSL_CD 
           AND B.SKD_VOY_NO=BV.SKD_VOY_NO 
           AND B.SKD_DIR_CD=BV.SKD_DIR_CD 
           AND B.BL_NO=BKG.BKG_NO) MF_SND_DT
	FROM  BKG_BOOKING BKG, BKG_BL_DOC DOC, BKG_RATE BR, BKG_VVD BV, BKG_CSTMS_HKG_SND_LOG HSL
	WHERE BV.VSL_CD		= @[vsl_cd] 
	AND BV.SKD_VOY_NO	= @[skd_voy_no]
	AND BV.SKD_DIR_CD	= @[skd_dir_cd]
	AND BKG.BKG_NO       = BV.BKG_NO 
#if (${pol_cd}!= '')
              AND BV.POL_CD = @[pol_cd]
#end
#if (${pod_cd}!= '')
              AND BV.POd_CD = @[pod_cd]
#end  
	AND BV.VSL_CD       = HSL.VSL_CD(+) 
	AND BV.SKD_VOY_NO= HSL.SKD_VOY_NO(+) 
	AND BV.SKD_DIR_CD   = HSL.SKD_DIR_CD(+) 
	AND (BKG.BKG_STS_CD ='F' OR BKG.BKG_STS_CD = 'W') 
	AND BKG.BKG_CGO_TP_CD <> 'P' 		
	AND BKG.BL_NO IS NOT NULL 		
	AND BKG.BKG_NO       = DOC.BKG_NO 
	AND BKG.BKG_NO       = BR.BKG_NO 
	GROUP BY NVL(BV.VSL_CD,' ')||NVL(BV.SKD_VOY_NO,' ')||NVL(BV.SKD_DIR_CD,' '),
		BKG.BKG_NO ,BV.VSL_CD,BV.SKD_VOY_NO,BV.SKD_DIR_CD,
		NVL(BKG.BL_NO||BKG.BL_TP_CD,' '), 
		DECODE(HSL.MF_SND_DT, '', 'F', 'A'),
		NVL(BKG.RCV_TERM_CD||BKG.DE_TERM_CD,'  '),
		DECODE(BV.POL_CD, 'CNHKG', DECODE(BKG.POL_CD, 'CNHKG', 'L', 'T'),
		DECODE(BV.POD_CD, 'CNHKG', DECODE(BKG.POD_CD,'CNHKG','L','T'), ' ')),
		BKG.POR_CD, BV.POL_CD , BV.POD_CD , BKG.DEL_CD,
		DOC.ACT_WGT, DOC.WGT_UT_CD,
		DOC.PCK_QTY,
		NVL(BR.FRT_TERM_CD, ' '),
		DECODE(BKG.HOT_DE_FLG, 'Y', 'H', ' '),
		DECODE(BKG.RC_FLG, 'Y', 'R', ' ')
		ORDER BY BV.POL_CD, BV.POD_CD,NVL(BKG.BL_NO||BKG.BL_TP_CD,' '))			]]></sql>
			<params>
				<param name="vsl_cd" type="12" value="" out="N"/>
				<param name="skd_voy_no" type="12" value="" out="N"/>
				<param name="skd_dir_cd" type="12" value="" out="N"/>
				<param name="pol_cd" type="12" value="" out="N"/>
				<param name="pod_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
