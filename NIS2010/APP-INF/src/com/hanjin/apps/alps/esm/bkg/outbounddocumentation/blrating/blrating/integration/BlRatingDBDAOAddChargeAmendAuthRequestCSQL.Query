<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BlRatingDBDAOAddChargeAmendAuthRequestCSQL">
			<desc><![CDATA[PCT이후 운임 승인 권한 요청을 생성한다.]]></desc>
			<sql><![CDATA[
INSERT INTO BKG_CHG_AMD_AUTH
(   BKG_NO,
    CHG_AMD_SEQ,
    CHG_AMD_RSN_CD,
    CHG_AMD_RQST_STS_CD,
    RQST_OFC_CD,
    RQST_USR_ID,
    RQST_DT,
    APRO_OFC_CD,
    APRO_USR_ID,
    AUTH_USE_FLG,
    CHG_AMD_RMK,
    CRE_USR_ID,
    CRE_DT,
    UPD_USR_ID,
    UPD_DT
)
VALUES
(   @[bkg_no],
    (SELECT  NVL(MAX(CHG_AMD_SEQ),0)+1 
     FROM BKG_CHG_AMD_AUTH 
     WHERE BKG_NO = @[bkg_no]),    
    @[chg_amd_rsn_cd],
    'Q',
    @[rqst_ofc_cd],
    @[rqst_usr_id],
    GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[rqst_ofc_cd]),  
    @[apro_ofc_cd],
    @[apro_usr_id],
    'N',
    @[chg_amd_rmk],
    @[cre_usr_id],
    SYSDATE,
    @[upd_usr_id],
    SYSDATE
)			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="chg_amd_rsn_cd" type="12" value="" out="N"/>
				<param name="rqst_ofc_cd" type="12" value="" out="N"/>
				<param name="rqst_usr_id" type="12" value="" out="N"/>
				<param name="apro_ofc_cd" type="12" value="" out="N"/>
				<param name="apro_usr_id" type="12" value="" out="N"/>
				<param name="chg_amd_rmk" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
