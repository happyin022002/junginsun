<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PerformanceReportDBDAOModifyDocsUserCngGroupCdUSQL">
			<desc><![CDATA[PerformanceReportDBDAOModifyDocsUserCngGroupCdUSQL.Query

2011.11.17 정선용 [CHM-201114554] DPCS-Correction 기능 보완 요청
                           Minor : YYNN, Input/Rate/I&R에 FAX N으로 Flag 변경]]></desc>
			<sql><![CDATA[
UPDATE BKG_SR_CRNT_RQST 
SET  SR_WRK_STS_USR_ID = @[change_usr_id] 
   , PIC_CNG_USR_ID = @[change_usr_id] 
   , RTN_FM_USR_ID = @[usr_id]
#if(${ui_grp_cd} !='' && ${ui_grp_cd} =='A')
, BL_DOC_INP_FLG ='Y',BL_RT_FLG ='Y',BL_AUD_FLG ='N', BL_DRFT_FAX_OUT_FLG='N'
#elseif(${ui_grp_cd} !='' && ${ui_grp_cd} =='I')
, BL_DOC_INP_FLG ='N',BL_RT_FLG ='N',BL_AUD_FLG ='N', BL_DRFT_FAX_OUT_FLG='N'
#elseif(${ui_grp_cd} !='' && ${ui_grp_cd} =='R')
, BL_DOC_INP_FLG ='Y',BL_RT_FLG ='N',BL_AUD_FLG ='N', BL_DRFT_FAX_OUT_FLG='N'
#end
WHERE SR_KND_CD   = @[src_cd] 
AND SR_NO         = @[sr_no]    
AND BKG_NO        = @[bkg_no]
AND SR_KND_CD 	  = @[src_cd]
AND SR_AMD_TP_CD  = 'R'			]]></sql>
			<params>
				<param name="change_usr_id" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="src_cd" type="12" value="" out="N"/>
				<param name="sr_no" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
