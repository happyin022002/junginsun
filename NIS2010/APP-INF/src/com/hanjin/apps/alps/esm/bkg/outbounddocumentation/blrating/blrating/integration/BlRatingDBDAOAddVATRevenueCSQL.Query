<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BlRatingDBDAOAddVATRevenueCSQL">
			<desc><![CDATA[BlRatingDBDAOAddVATRevenueCSQL]]></desc>
			<sql><![CDATA[
INSERT INTO BKG_CHG_RT 
    (BKG_NO
    , RT_SEQ
    , CHG_CD
    , CURR_CD
    , CHG_UT_AMT
    , RAT_AS_QTY
    , RAT_UT_CD
    , CHG_AMT
    , FRT_TERM_CD
    , DP_SEQ
    , CGO_CATE_CD
    , RCV_TERM_CD
    , DE_TERM_CD
    , AUTO_RAT_CD
    , N3PTY_RCV_OFC_CD
    , N3PTY_CUST_CNT_CD
    , N3PTY_CUST_SEQ
    --, INCL_OFT_FLG
    , FRT_INCL_XCLD_DIV_CD
    , PRN_HDN_FLG
    , CRE_DT
    , CRE_USR_ID
    , UPD_DT
    , UPD_USR_ID)
(SELECT @[bkg_no]
    , NVL((SELECT MAX(RT_SEQ) + 1 FROM BKG_CHG_RT WHERE BKG_NO = @[bkg_no]), 1)
    , 'TVA' 
    , 'EUR'
    , NVL(@[vat_rate], 0)
    , 20
    , 'PC'
    , NVL(@[vat_rate], 0) * 0.2
    , 'C'
    , 430 
    , 'DR'
    , (SELECT RCV_TERM_CD FROM BKG_CONTAINER WHERE BKG_NO = @[bkg_no] AND CNTR_NO = @[cntr_no])
    , 'H'
    , 'I'
-- THIRD와 CCT동일한 경우 들어가지 않도록 함 2010.02.23 CATESHIN
	,DECODE(NVL((SELECT CLT_OFC_CD||CLT_PAYR_CNT_CD||CLT_PAYR_CUST_SEQ
		FROM BKG_RATE WHERE BKG_NO = @[bkg_no]), '*'),@[ofc_cd]||@[payer_cnt_cd]||@[payer_cust_seq],
		'', @[ofc_cd])
	,DECODE(NVL((SELECT CLT_OFC_CD||CLT_PAYR_CNT_CD||CLT_PAYR_CUST_SEQ
		FROM BKG_RATE WHERE BKG_NO = @[bkg_no]), '*'),@[ofc_cd]||@[payer_cnt_cd]||@[payer_cust_seq],
		'', @[payer_cnt_cd])
	,DECODE(NVL((SELECT CLT_OFC_CD||CLT_PAYR_CNT_CD||CLT_PAYR_CUST_SEQ
		FROM BKG_RATE WHERE BKG_NO = @[bkg_no]), '*'),@[ofc_cd]||@[payer_cnt_cd]||@[payer_cust_seq],
		'', @[payer_cust_seq])
    , 'N'
    , 'Y'
    , sysdate
    , @[cre_usr_id]
    , sysdate
    , @[upd_usr_id]
 FROM MDM_ORGANIZATION OFC
    , MDM_LOCATION LOC
WHERE OFC.OFC_CD = NVL(@[ofc_cd], (SELECT CLT_OFC_CD FROM BKG_RATE WHERE BKG_NO = @[bkg_no]))
  AND OFC.LOC_CD = LOC.LOC_CD
  AND LOC.CNT_CD = 'FR')			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="vat_rate" type="12" value="" out="N"/>
				<param name="cntr_no" type="12" value="" out="N"/>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="payer_cnt_cd" type="12" value="" out="N"/>
				<param name="payer_cust_seq" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
