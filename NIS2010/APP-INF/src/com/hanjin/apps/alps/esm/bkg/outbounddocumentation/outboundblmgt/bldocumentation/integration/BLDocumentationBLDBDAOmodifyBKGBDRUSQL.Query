<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BLDocumentationBLDBDAOmodifyBKGBDRUSQL">
			<desc><![CDATA[BKG_BL_DOC BKG BDR 처리
2010.09.01 김영철 [CHM-201004943-01] BDR 로직보완 ( Manual BDR이 되면 DB에 로그를 남김 )]]></desc>
			<sql><![CDATA[
#if (${hisFlg} == 'Y') 
UPDATE 	BKG_BL_DOC_HIS G
SET     UPD_USR_ID = @[upd_usr_id]
#else 
UPDATE 	BKG_BL_DOC G
SET    	BDR_USR_ID = @[upd_usr_id]
,       MNL_BDR_UPD_DT = SYSDATE  
,       UPD_USR_ID = @[upd_usr_id] 
#end
,		UPD_DT = SYSDATE  
,		BDR_FLG  =  DECODE(@[ibflag],'D','N','Y')
,      	BDR_DT   =	DECODE(@[ibflag],'D','',SYSDATE)
WHERE	BKG_NO = @[bkg_no]
#if (${hisFlg} == 'Y') 
 AND CORR_NO = 'TMP0000001'
#end			]]></sql>
			<params>
				<param name="upd_usr_id" type="12" value="" out="N"/>
				<param name="ibflag" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
