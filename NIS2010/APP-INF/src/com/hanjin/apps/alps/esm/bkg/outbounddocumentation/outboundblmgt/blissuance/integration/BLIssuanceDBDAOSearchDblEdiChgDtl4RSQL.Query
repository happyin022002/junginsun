<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BLIssuanceDBDAOSearchDblEdiChgDtl4RSQL">
			<desc><![CDATA[2012.08.29 변종건 [CHM-201219923-01]]]></desc>
			<sql><![CDATA[
SELECT '{CHARGE_TTL' || CHR(10) 
       || 'PPD_TOTAL:' || SUM(DECODE(FRT_TERM_CD, 'P', CHG_AMT, 0)) || CHR(10) 
       || 'CCT_TOTAL:' || SUM(DECODE(FRT_TERM_CD, 'C', CHG_AMT, 0)) || CHR(10) 
       || 'TOTAL_CUR:' || CURR_CD || CHR(10) 
       || 'LCL_TOT_AMT:' || CHR(10) 
       || 'CGO_RCV_DT:'  || CHR(10) 
       || 'ACT_CUST:' || CHR(10) 
       || '}CHARGE_TTL' || CHR(10)
FROM   BKG_CHG_RT
WHERE  BKG_NO = @[bkg_no]
AND    FRT_INCL_XCLD_DIV_CD = 'N'
AND    PRN_HDN_FLG = 'N'
AND    (    N3PTY_CUST_CNT_CD = 'US'
         OR (FRT_TERM_CD = ( SELECT 'P' C_FLG FROM BKG_RATE WHERE BKG_NO = @[bkg_no] AND PPD_PAYR_CNT_CD = 'US' ) AND N3PTY_CUST_CNT_CD IS NULL)
         OR (FRT_TERM_CD = ( SELECT 'C' C_FLG FROM BKG_RATE WHERE BKG_NO = @[bkg_no] AND CLT_PAYR_CNT_CD = 'US' ) AND N3PTY_CUST_CNT_CD IS NULL)
       )
GROUP BY FRT_TERM_CD, CURR_CD			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
