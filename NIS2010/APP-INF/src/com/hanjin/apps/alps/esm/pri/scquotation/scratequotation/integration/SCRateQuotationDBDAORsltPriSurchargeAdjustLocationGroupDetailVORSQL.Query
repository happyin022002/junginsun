<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SCRateQuotationDBDAORsltPriSurchargeAdjustLocationGroupDetailVORSQL">
			<desc><![CDATA[      Surcharge Adjust Location 상세 조회]]></desc>
			<sql><![CDATA[
SELECT loc_cd,loc_nm
	,qttn_no,qttn_ver_no,grp_loc_seq
FROM (
	SELECT loc_mdm.loc_cd,loc_mdm.loc_nm
		,loc_dtl.qttn_no,loc_dtl.qttn_ver_no,loc_dtl.grp_loc_seq
	FROM pri_sq_grp_loc_dtl loc_dtl
		, mdm_location loc_mdm
	WHERE loc_dtl.qttn_no = @[qttn_no]
		AND loc_dtl.qttn_ver_no = @[qttn_ver_no]
		AND loc_dtl.grp_loc_seq = @[grp_loc_seq]
		AND loc_dtl.loc_cd = loc_mdm.loc_cd
	    AND 'G' = @[rout_loc_tp_cd]
	UNION ALL
	SELECT loc_mdm.loc_cd , loc_mdm.loc_nm
	,'' ,'',0 AS grp_loc_seq
	FROM mdm_location loc_mdm
	WHERE 	loc_mdm.loc_cd = @[loc_cd]
		AND 'L' = @[rout_loc_tp_cd]
)
ORDER BY loc_cd			]]></sql>
			<params>
				<param name="qttn_no" type="12" value="" out="N"/>
				<param name="qttn_ver_no" type="12" value="" out="N"/>
				<param name="grp_loc_seq" type="2" value="" out="N"/>
				<param name="rout_loc_tp_cd" type="12" value="" out="N"/>
				<param name="loc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
