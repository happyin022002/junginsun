<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AGNCommRequestDBDAOGetSaDtInfoRSQL">
			<desc><![CDATA[GetSaDtInfo
부킹의 Sail Arrival Date를 구함]]></desc>
			<sql><![CDATA[
WITH O AS (
    SELECT 
     ROW_NUMBER()OVER(PARTITION BY V.BKG_NO ORDER BY VSL_PRE_PST_CD,VSL_SEQ )           RN_ASK
    ,ROW_NUMBER()OVER(PARTITION BY V.BKG_NO ORDER BY VSL_PRE_PST_CD DESC,VSL_SEQ DESC ) RN_DSK
    ,V.BKG_NO,V.VSL_PRE_PST_CD,V.VSL_SEQ,V.SLAN_CD,V.VSL_CD,V.SKD_VOY_NO,V.SKD_DIR_CD
    ,V.POL_CD 
    ,TO_CHAR(POL.VPS_ETA_DT,'YYYYMMDD') POL_ETA 
    ,TO_CHAR(POL.VPS_ETD_DT,'YYYYMMDD') POL_ETD

    ,DECODE(V.VSL_CD||V.SKD_VOY_NO||V.SKD_DIR_CD
           ,SUBSTR(NVL(N1ST_FINC_VVD_CD,'X'),1,9),N1ST_RLANE_CD
           ,SUBSTR(NVL(N2ND_FINC_VVD_CD,'X'),1,9),N2ND_RLANE_CD
           ,SUBSTR(NVL(N3RD_FINC_VVD_CD,'X'),1,9),N3RD_RLANE_CD
           ,SUBSTR(NVL(N4TH_FINC_VVD_CD,'X'),1,9),N4TH_RLANE_CD
           ,'')                                AS RLANE_CD
    ,DECODE(V.VSL_CD||V.SKD_VOY_NO||V.SKD_DIR_CD
           ,SUBSTR(NVL(N1ST_FINC_VVD_CD,'X'),1,9),SUBSTR(NVL(N1ST_FINC_VVD_CD,'X'),10,1)
           ,SUBSTR(NVL(N2ND_FINC_VVD_CD,'X'),1,9),SUBSTR(NVL(N2ND_FINC_VVD_CD,'X'),10,1)
           ,SUBSTR(NVL(N3RD_FINC_VVD_CD,'X'),1,9),SUBSTR(NVL(N3RD_FINC_VVD_CD,'X'),10,1)
           ,SUBSTR(NVL(N4TH_FINC_VVD_CD,'X'),1,9),SUBSTR(NVL(N4TH_FINC_VVD_CD,'X'),10,1)
           ,'')                               AS REV_DIR_CD
    FROM BKG_VVD V, 
         MAS_RGST_BKG C,
         VSK_VSL_PORT_SKD POL
    WHERE V.BKG_NO          = @[bkg_no] --'AAR200100200' AAR103480100
    AND C.BKG_NO            = V.BKG_NO 
    
    AND V.VSL_CD            = POL.VSL_CD
    AND V.SKD_VOY_NO        = POL.SKD_VOY_NO
    AND V.SKD_DIR_CD        = POL.SKD_DIR_CD
    AND V.POL_CD            = POL.VPS_PORT_CD
    AND NVL(V.POL_CLPT_IND_SEQ,1)  = NVL(POL.CLPT_IND_SEQ,1)
    AND NVL(POL.SKD_CNG_STS_CD,'*') <> 'S' 
    ORDER BY V.VSL_PRE_PST_CD,V.VSL_SEQ
)
,I AS(


    SELECT 
     ROW_NUMBER()OVER(PARTITION BY V.BKG_NO ORDER BY VSL_PRE_PST_CD,VSL_SEQ )           RN_ASK
    ,ROW_NUMBER()OVER(PARTITION BY V.BKG_NO ORDER BY VSL_PRE_PST_CD DESC,VSL_SEQ DESC ) RN_DSK
    ,V.BKG_NO,V.VSL_PRE_PST_CD,V.VSL_SEQ,V.SLAN_CD,V.VSL_CD,V.SKD_VOY_NO,V.SKD_DIR_CD
    ,V.POD_CD
    ,TO_CHAR(POD.VPS_ETA_DT,'YYYYMMDD') POD_ETA
    ,TO_CHAR(POD.VPS_ETD_DT,'YYYYMMDD') POD_ETD

    ,DECODE(V.VSL_CD||V.SKD_VOY_NO||V.SKD_DIR_CD
           ,SUBSTR(NVL(N1ST_FINC_VVD_CD,'X'),1,9),N1ST_RLANE_CD
           ,SUBSTR(NVL(N2ND_FINC_VVD_CD,'X'),1,9),N2ND_RLANE_CD
           ,SUBSTR(NVL(N3RD_FINC_VVD_CD,'X'),1,9),N3RD_RLANE_CD
           ,SUBSTR(NVL(N4TH_FINC_VVD_CD,'X'),1,9),N4TH_RLANE_CD
           ,'')                                AS RLANE_CD
    ,DECODE(V.VSL_CD||V.SKD_VOY_NO||V.SKD_DIR_CD
           ,SUBSTR(NVL(N1ST_FINC_VVD_CD,'X'),1,9),SUBSTR(NVL(N1ST_FINC_VVD_CD,'X'),10,1)
           ,SUBSTR(NVL(N2ND_FINC_VVD_CD,'X'),1,9),SUBSTR(NVL(N2ND_FINC_VVD_CD,'X'),10,1)
           ,SUBSTR(NVL(N3RD_FINC_VVD_CD,'X'),1,9),SUBSTR(NVL(N3RD_FINC_VVD_CD,'X'),10,1)
           ,SUBSTR(NVL(N4TH_FINC_VVD_CD,'X'),1,9),SUBSTR(NVL(N4TH_FINC_VVD_CD,'X'),10,1)
           ,'')                               AS REV_DIR_CD
    FROM BKG_VVD V, 
         MAS_RGST_BKG C,
         VSK_VSL_PORT_SKD POD
    WHERE V.BKG_NO          = @[bkg_no] --'AAR200100200' AAR103480100
    AND C.BKG_NO            = V.BKG_NO 
    
    AND V.VSL_CD            = POD.VSL_CD
    AND V.SKD_VOY_NO        = POD.SKD_VOY_NO
    AND V.SKD_DIR_CD        = POD.SKD_DIR_CD
    AND V.POD_CD            = POD.VPS_PORT_CD
    AND NVL(V.POD_CLPT_IND_SEQ,1)  = NVL(POD.CLPT_IND_SEQ,1)
    AND NVL(POD.SKD_CNG_STS_CD,'*') <> 'S' 

    ORDER BY V.VSL_PRE_PST_CD,V.VSL_SEQ    
)

SELECT 
  OB.BKG_NO
, OB.POL_ETD                              AS OB_SA_DT
, OB.VSL_CD||OB.SKD_VOY_NO||OB.SKD_DIR_CD AS OB_VVD
, OB.VSL_CD                               AS OB_VSL_CD
, OB.SKD_VOY_NO                           AS OB_SKD_VOY_NO
, OB.SKD_DIR_CD                           AS OB_SKD_DIR_CD
, OB.POL_CD                               AS OB_PORT
, OB.SLAN_CD                              AS OB_SLAN_CD
, OB.RLANE_CD                             AS OB_RLANE_CD
, OB.REV_DIR_CD                           AS OB_REV_DIR_CD

, IB.POD_ETA                              AS IB_SA_DT
, IB.VSL_CD||IB.SKD_VOY_NO||IB.SKD_DIR_CD AS IB_VVD
, IB.VSL_CD                               AS IB_VSL_CD
, IB.SKD_VOY_NO                           AS IB_SKD_VOY_NO
, IB.SKD_DIR_CD                           AS IB_SKD_DIR_CD
, IB.POD_CD                               AS IB_PORT
, IB.SLAN_CD                              AS IB_SLAN_CD
, IB.RLANE_CD                             AS IB_RLANE_CD
, IB.REV_DIR_CD                           AS IB_REV_DIR_CD

FROM O OB, I IB
WHERE 1=1
AND OB.VSL_PRE_PST_CD IN ( 'T','S' )
AND OB.RN_ASK = 1
AND IB.VSL_PRE_PST_CD IN ( 'T','U' )
AND IB.RN_DSK = 1			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
