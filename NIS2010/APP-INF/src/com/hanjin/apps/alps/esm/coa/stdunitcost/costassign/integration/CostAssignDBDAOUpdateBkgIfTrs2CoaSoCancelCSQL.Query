<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CostAssignDBDAOUpdateBkgIfTrs2CoaSoCancelCSQL">
			<desc><![CDATA[COA_COP_IF_MGMT 테이블의 TRS SO CANCEL IF   ]]></desc>
			<sql><![CDATA[
/*
--------------------------------------------------------
--//updateBkgIfTrs2CoaSoCancel 일배치 처리, BKG IF와 동일하게 처리할지 결정 후 쿼리 변경
--------------------------------------------------------
*/
MERGE INTO COA_COP_IF_MGMT B1
   USING (SELECT '${bkg_no}' BKG_NO
                ,'N' COA_DY_BAT_CD
                ,0 COA_DY_BAT_SEQ
                ,NULL COA_DY_BAT_DT
                , 'TRS' || ' - ' || TO_CHAR(SYSDATE, 'YYYYMMDD HH24:MI:SS') COST_IF_DY_RMK
                ,'TRS_SOCANCEL' CRE_USR_ID
                ,SYSDATE CRE_DT
                ,'TRS_SOCANCEL' UPD_USR_ID
                ,SYSDATE UPD_DT
            FROM DUAL) B2
   ON (    B1.BKG_NO = B2.BKG_NO)
   WHEN MATCHED THEN
      UPDATE
         SET B1.COA_DY_BAT_CD = B2.COA_DY_BAT_CD, B1.COA_DY_BAT_SEQ = B2.COA_DY_BAT_SEQ
            ,B1.COA_DY_BAT_DT = B2.COA_DY_BAT_DT, B1.COST_IF_DY_RMK = B2.COST_IF_DY_RMK
            ,B1.UPD_USR_ID = B2.UPD_USR_ID, B1.UPD_DT = B2.UPD_DT
   WHEN NOT MATCHED THEN
      INSERT(B1.BKG_NO, B1.COA_DY_BAT_CD, B1.COA_DY_BAT_SEQ, B1.COA_DY_BAT_DT
            ,B1.COST_IF_DY_RMK, B1.CRE_USR_ID, B1.CRE_DT, B1.UPD_USR_ID, B1.UPD_DT)
      VALUES(B2.BKG_NO, B2.COA_DY_BAT_CD, B2.COA_DY_BAT_SEQ, B2.COA_DY_BAT_DT
            ,B2.COST_IF_DY_RMK, B2.CRE_USR_ID, B2.CRE_DT, B2.UPD_USR_ID, B2.UPD_DT)			]]></sql>
			<params>
			</params>
		</query>
	</querys>
</sqls>
