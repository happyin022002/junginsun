<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BlRatingDBDAOSearchCurrentOftListRSQL">
			<desc><![CDATA[현재 BKG에 반영되어 있는 Interface Charge 정보를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT CHG_CD,
       CURR_CD,
       RAT_UT_CD,
       CHG_AMT CRNT_CHG_AMT,
       0 AMD_CHG_AMT,
       BKG_NO
FROM BKG_CHG_RT R
WHERE BKG_NO = @[bkg_no]
AND CHG_CD = @[chg_cd]
AND AUTO_RAT_CD = 'I'
AND CRE_DT = (SELECT MAX(CRE_DT)
              FROM BKG_CHG_RT T
              WHERE T.BKG_NO = R.BKG_NO
              AND T.CHG_CD = R.CHG_CD)
AND ROWNUM = 1			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="chg_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
