<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CostManageDBDAOSearchBasicCmcbForIasSectorListRSQL">
			<desc><![CDATA[Basic CMCB for IAS Sector List를 조회한다.

2015.06.15 김용습 [CHM-201536164] 주간 MAS Open에 따른 타모듈 프로그램 적용 요청
2015.09.14 김용습 [CHM-201537774] Basic CMCB (CM Cost Per Box)와 Basic CMCB for IAS Sector 두 화면 내 신규 칼럼 추가 (sector lane-office에서 active된 사항을 보여주는 컬럼 추가)
2015.10.19 김용습 [CHM-201538305] Basic CMCB (CM Cost Per Box) / Basic CMCB for IAS Sector 화면 내 신규 칼럼 추가
2015.11.06 김용습 [선반영] RPB 계산시 0인 값은 제외하고 평균값 구하도록 함]]></desc>
			<sql><![CDATA[
WITH BB AS
(
SELECT * FROM 
(SELECT BSE_TP_CD, BSE_YR, BSE_QTR_CD, RLANE_CD, DIR_CD, POL_CD, POD_CD, TRD_CD, SQM_ACT_FLG
        FROM SQM_SCTR_LANE_OFC 
        GROUP BY BSE_TP_CD, BSE_YR, BSE_QTR_CD, RLANE_CD, DIR_CD, POL_CD, POD_CD, TRD_CD, SQM_ACT_FLG
        )
        WHERE SQM_ACT_FLG = 'Y'
            AND BSE_TP_CD = @[f_bse_tp_cd]
            AND BSE_YR = @[f_bse_yr]
            AND BSE_QTR_CD = DECODE(@[f_bse_tp_cd], 'Y', '00', @[f_bse_qtr_cd])
            #if (${f_dir_cd} != '' && ${f_dir_cd} != 'All')
            AND DIR_CD = @[f_dir_cd]
            #end
            #if (${f_rlane_cd} != '' && ${f_rlane_cd} != 'All')
            AND RLANE_CD IN (${f_rlane_cd})
            #end
            #if (${f_pol_cd} != '' && ${f_pol_cd} != 'All')
            AND POL_CD = @[f_pol_cd]
            #end
            #if (${f_pod_cd} != '' && ${f_pod_cd} != 'All')
            AND POD_CD = @[f_pod_cd]
            #end
)
SELECT A1.BSE_TP_CD
      ,A1.BSE_YR
      ,A1.BSE_QTR_CD
      ,A1.TRD_CD
      ,A1.SUB_TRD_CD
      ,A1.RLANE_CD
      ,(SELECT INTG_CD_VAL_DP_DESC
		FROM COM_INTG_CD_DTL
		WHERE INTG_CD_ID = 'CD03218'
		AND INTG_CD_VAL_CTNT = A2.IAS_RGN_CD) IAS_RGN_CD
      ,A1.DIR_CD
      ,A1.POL_CD
      ,A1.POD_CD
      ,A1.GID_PA_CM_UC_AMT
      ,A1.GID_RA_CM_UC_AMT
#if (${f_chk_rpb_cmpb} != '')
      ,(SELECT MIN(GRS_RPB_REV) FROM SQM_SCTR_CFM_QTA CFM
        WHERE CFM.QTA_RLSE_VER_NO = SUBSTR(A1.BSE_YR,-2)||DECODE(A1.BSE_QTR_CD, 'Y', '00', A1.BSE_QTR_CD)||'01'
        AND CFM.BSE_TP_CD = A1.BSE_TP_CD
        AND CFM.BSE_YR = A1.BSE_YR
        AND CFM.BSE_QTR_CD = A1.BSE_QTR_CD
        AND CFM.TRD_CD = A1.TRD_CD
        AND CFM.RLANE_CD = A1.RLANE_CD
        AND CFM.DIR_CD = A1.DIR_CD
        AND CFM.POL_CD = A1.POL_CD
        AND CFM.POD_CD = A1.POD_CD
        AND CFM.GRS_RPB_REV != 0) AS INITIAL_RPB
      ,(SELECT MIN(GRS_RPB_REV)-MIN(RA_CM_UC_AMT) FROM SQM_SCTR_CFM_QTA CFM
        WHERE CFM.QTA_RLSE_VER_NO = SUBSTR(A1.BSE_YR,-2)||DECODE(A1.BSE_QTR_CD, 'Y', '00', A1.BSE_QTR_CD)||'01'
        AND CFM.BSE_TP_CD = A1.BSE_TP_CD
        AND CFM.BSE_YR = A1.BSE_YR
        AND CFM.BSE_QTR_CD = A1.BSE_QTR_CD
        AND CFM.TRD_CD = A1.TRD_CD
        AND CFM.RLANE_CD = A1.RLANE_CD
        AND CFM.DIR_CD = A1.DIR_CD
        AND CFM.POL_CD = A1.POL_CD
        AND CFM.POD_CD = A1.POD_CD
        AND CFM.GRS_RPB_REV != 0) AS INITIAL_CMPB_RA
#end
      ,NVL(A1.PA_CM_UC_AMT, A1.GID_PA_CM_UC_AMT) PA_CM_UC_AMT
      ,NVL(A1.RA_CM_UC_AMT, A1.GID_RA_CM_UC_AMT) RA_CM_UC_AMT
#if (${f_chk_rpb_cmpb} != '')
      ,(SELECT MIN(GRS_RPB_REV) FROM SQM_SCTR_CFM_QTA CFM
        WHERE CFM.QTA_RLSE_VER_NO = SUBSTR(A1.BSE_YR,-2)||DECODE(A1.BSE_QTR_CD, 'Y', '00', A1.BSE_QTR_CD)||'02'
        AND CFM.BSE_TP_CD = A1.BSE_TP_CD
        AND CFM.BSE_YR = A1.BSE_YR
        AND CFM.BSE_QTR_CD = A1.BSE_QTR_CD
        AND CFM.TRD_CD = A1.TRD_CD
        AND CFM.RLANE_CD = A1.RLANE_CD
        AND CFM.DIR_CD = A1.DIR_CD
        AND CFM.POL_CD = A1.POL_CD
        AND CFM.POD_CD = A1.POD_CD
        AND CFM.GRS_RPB_REV != 0) AS CURRENT_RPB
      ,(SELECT MIN(GRS_RPB_REV)-MIN(RA_CM_UC_AMT) FROM SQM_SCTR_CFM_QTA CFM
        WHERE CFM.QTA_RLSE_VER_NO = SUBSTR(A1.BSE_YR,-2)||DECODE(A1.BSE_QTR_CD, 'Y', '00', A1.BSE_QTR_CD)||'02'
        AND CFM.BSE_TP_CD = A1.BSE_TP_CD
        AND CFM.BSE_YR = A1.BSE_YR
        AND CFM.BSE_QTR_CD = A1.BSE_QTR_CD
        AND CFM.TRD_CD = A1.TRD_CD
        AND CFM.RLANE_CD = A1.RLANE_CD
        AND CFM.DIR_CD = A1.DIR_CD
        AND CFM.POL_CD = A1.POL_CD
        AND CFM.POD_CD = A1.POD_CD
        AND CFM.GRS_RPB_REV != 0) AS CURRENT_CMPB_RA
#end
      ,B.SQM_ACT_FLG
FROM SQM_SCTR_PAIR_COST A1, MAS_LANE_RGST A2, BB B
WHERE 1=1
AND A1.TRD_CD = A2.TRD_CD
AND A1.SUB_TRD_CD = A2.SUB_TRD_CD
AND A1.RLANE_CD = A2.RLANE_CD
AND A1.DIR_CD = A2.DIR_CD
AND A1.BSE_TP_CD = @[f_bse_tp_cd]
AND A1.BSE_YR = @[f_bse_yr]
AND A1.BSE_QTR_CD = DECODE(@[f_bse_tp_cd], 'Y', '00', @[f_bse_qtr_cd])
AND A1.SUB_TRD_CD = @[f_sub_trd_cd]
#if (${f_dir_cd} != '' && ${f_dir_cd} != 'All')
AND A1.DIR_CD = @[f_dir_cd]
#end
#if (${f_rlane_cd} != '' && ${f_rlane_cd} != 'All')
AND A1.RLANE_CD IN (${f_rlane_cd})
#end
#if (${f_pol_cd} != '' && ${f_pol_cd} != 'All')
AND A1.POL_CD = @[f_pol_cd]
#end
#if (${f_pod_cd} != '' && ${f_pod_cd} != 'All')
AND A1.POD_CD = @[f_pod_cd]
#end
#if (${f_ias_rgn_cd} != '' && ${f_ias_rgn_cd} != 'All')
AND A2.IAS_RGN_CD = @[f_ias_rgn_cd]
#end

AND A1.TRD_CD       = B.TRD_CD (+)
AND A1.RLANE_CD     = B.RLANE_CD (+)
AND A1.DIR_CD       = B.DIR_CD (+)
AND A1.BSE_TP_CD    = B.BSE_TP_CD (+)
AND A1.BSE_YR       = B.BSE_YR (+)
AND A1.BSE_QTR_CD   = B.BSE_QTR_CD (+)
AND A1.RLANE_CD     = B.RLANE_CD (+)
AND A1.POL_CD       = B.POL_CD (+)
AND A1.POD_CD       = B.POD_CD (+)
ORDER BY A1.RLANE_CD, A1.DIR_CD, A1.POL_CD, A1.POD_CD			]]></sql>
			<params>
				<param name="f_bse_tp_cd" type="12" value="" out="N"/>
				<param name="f_bse_yr" type="12" value="" out="N"/>
				<param name="f_bse_qtr_cd" type="12" value="" out="N"/>
				<param name="f_dir_cd" type="12" value="" out="N"/>
				<param name="f_pol_cd" type="12" value="" out="N"/>
				<param name="f_pod_cd" type="12" value="" out="N"/>
				<param name="f_sub_trd_cd" type="12" value="" out="N"/>
				<param name="f_ias_rgn_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
