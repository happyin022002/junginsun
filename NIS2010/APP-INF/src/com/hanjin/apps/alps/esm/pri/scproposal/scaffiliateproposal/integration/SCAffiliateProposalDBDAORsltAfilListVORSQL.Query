<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SCAffiliateProposalDBDAORsltAfilListVORSQL">
			<desc><![CDATA[Amd History Affiliate List
2012.02.23 이석준[CHM-201216153-01] S/C Amendment History 화면 기능 개선 요청]]></desc>
			<sql><![CDATA[
SELECT 
     A.PROP_NO             
    ,A.AMDT_SEQ            
    ,A.AFIL_SEQ           
	,A.CUST_CNT_CD
	,TO_CHAR(A.CUST_SEQ, '000000') CUST_SEQ
	,DECODE(A.MNL_INP_FLG, 'Y', '1', '0') MNL_INP_FLG

    ,MDM.RVIS_CNTR_CUST_TP_CD
    ,(SELECT INTG_CD_VAL_DESC
        FROM COM_INTG_CD_DTL
       WHERE INTG_CD_ID = 'CD00697'
         AND INTG_CD_VAL_CTNT = MDM.RVIS_CNTR_CUST_TP_CD) AS RVIS_CNTR_CUST_TP_NM

	,A.CUST_NM
	,A.CUST_ADDR
	,A.CUST_LOC_CD
    ,A.N1ST_CMNC_AMDT_SEQ 
    ,(SELECT TO_CHAR(EFF_DT, 'YYYYMMDD') FROM PRI_SP_MN WHERE PROP_NO = A.PROP_NO 
										AND AMDT_SEQ = A.N1ST_CMNC_AMDT_SEQ  ) EFF_DT
    ,CASE
        WHEN A.AMDT_SEQ = @[amdt_seq] THEN TO_CHAR(M.EXP_DT,'YYYYMMDD')
        ELSE
        (    
        SELECT CASE WHEN M.EFF_DT <= N.EXP_DT THEN TO_CHAR(M.EFF_DT - 1,'YYYYMMDD')
               ELSE TO_CHAR(N.EXP_DT,'YYYYMMDD')
               END AS EXP_DT
        FROM PRI_SP_MN N
        WHERE PROP_NO = M.PROP_NO AND AMDT_SEQ = M.AMDT_SEQ-1 
        )    
    END  EXP_DT            
    ,A.SRC_INFO_CD
    ,SRC.INTG_CD_VAL_DESC SRC_INFO_DTL       
    ,A.PRC_PROG_STS_CD
    ,STS.INTG_CD_VAL_DESC PRC_PROG_STS_DTL 
    ,A.ACPT_USR_ID
    ,A.ACPT_OFC_CD 
    ,TO_CHAR(A.ACPT_DT,'YYYYMMDD') ACPT_DT	
, FIRST_VALUE(A.CUST_CNT_CD||A.CUST_SEQ) OVER ( PARTITION BY A.AFIL_SEQ ORDER BY A.AMDT_SEQ ) FIRST_ORDER
, FIRST_VALUE(A.CUST_NM) OVER ( PARTITION BY A.AFIL_SEQ ORDER BY A.AMDT_SEQ ) SECOND_ORDER
FROM   
     PRI_SP_AFIL        A  
    ,PRI_SP_MN          M  
    ,MDM_CUSTOMER       MDM
    ,COM_INTG_CD_DTL    SRC
    ,COM_INTG_CD_DTL    STS
WHERE  
    M.PROP_NO           = A.PROP_NO
AND A.CUST_CNT_CD       = MDM.CUST_CNT_CD(+)
AND A.CUST_SEQ          = MDM.CUST_SEQ(+)
AND M.AMDT_SEQ          = @[amdt_seq]
AND A.PROP_NO = @[prop_no]
AND A.AMDT_SEQ IN ( @[amdt_seq], DECODE((SELECT LGCY_IF_FLG FROM PRI_SP_MN TMP WHERE TMP.PROP_NO = @[prop_no] AND TMP.AMDT_SEQ = @[amdt_seq]), 'Y', @[amdt_seq], @[amdt_seq]-1))
AND    (( A.AMDT_SEQ = @[amdt_seq] AND A.SRC_INFO_CD <> DECODE((SELECT LGCY_IF_FLG FROM PRI_SP_MN TMP WHERE TMP.PROP_NO = @[prop_no] AND TMP.AMDT_SEQ = @[amdt_seq]),'Y','AD','ZZ'))
       OR ( A.AMDT_SEQ = @[amdt_seq]-1
            AND  A.SRC_INFO_CD <> 'AD'
            AND  NOT EXISTS ( SELECT 'X' FROM PRI_SP_AFIL B
                               WHERE 
                                   B.PROP_NO            = A.PROP_NO 
                               AND B.AMDT_SEQ           = @[amdt_seq]
							   AND B.AFIL_SEQ		    = A.AFIL_SEQ
                               AND B.N1ST_CMNC_AMDT_SEQ = A.N1ST_CMNC_AMDT_SEQ           
                             )
           )
       )
AND SRC.INTG_CD_VAL_CTNT = A.SRC_INFO_CD
AND SRC.INTG_CD_ID       = 'CD02064'
AND STS.INTG_CD_VAL_CTNT = A.PRC_PROG_STS_CD
AND STS.INTG_CD_ID       = 'CD01719'       
--AND A.AMDT_SEQ           = A.N1ST_CMNC_AMDT_SEQ -- Amend 된거만 히스토리 조회
#if (${con_flg} == '0')
AND EXISTS (SELECT 1 
	          FROM PRI_SP_AFIL
		     WHERE PROP_NO  		  = A.PROP_NO
		       AND AFIL_SEQ 		  = A.AFIL_SEQ
		       AND AMDT_SEQ           = @[amdt_seq]
			   AND (N1ST_CMNC_AMDT_SEQ = @[amdt_seq]  OR 'Y' = (SELECT LGCY_IF_FLG FROM PRI_SP_MN TMP WHERE TMP.PROP_NO =@[prop_no] AND TMP.AMDT_SEQ = @[amdt_seq]))
	           AND ROWNUM = 1)
#end
ORDER BY FIRST_ORDER, SECOND_ORDER, A.AMDT_SEQ			]]></sql>
			<params>
				<param name="amdt_seq" type="12" value="" out="N"/>
				<param name="prop_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
