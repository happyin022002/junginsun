<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SCRateQuotationDBDAORsltPriSurchargeAdjustCommodityDetailVORSQL">
			<desc><![CDATA[   Surcharge Adjust Commodity를 검색할때 group 또는 commodity 상세정보를 보여준다.]]></desc>
			<sql><![CDATA[
SELECT cmdt_mdm.cmdt_cd as  cmdt_def_cd , cmdt_mdm.cmdt_nm as cmdt_nm
	, '' AS qttn_no, '' AS qttn_ver_no, '' AS grp_cmdt_seq
    , '' AS cmdt_tp_cd 
FROM  pri_sq_grp_cmdt_dtl cmdt_dtl
	, mdm_commodity cmdt_mdm
WHERE 
	cmdt_dtl.qttn_no = @[qttn_no]
	AND cmdt_dtl.qttn_ver_no = @[qttn_ver_no]
	AND cmdt_dtl.grp_cmdt_seq = @[grp_cmdt_seq]
	AND cmdt_dtl.prc_cmdt_def_cd = cmdt_mdm.cmdt_cd
	AND 'G' = @[cmdt_tp_cd]
UNION ALL
SELECT  cmdt_mdm.cmdt_cd as  cmdt_def_cd , cmdt_mdm.cmdt_nm as cmdt_nm
		,'','','',''
FROM mdm_commodity cmdt_mdm
WHERE 	cmdt_mdm.cmdt_cd = @[cmdt_def_cd]
	AND 'C' = @[cmdt_tp_cd]
ORDER BY cmdt_def_cd			]]></sql>
			<params>
				<param name="qttn_no" type="12" value="" out="N"/>
				<param name="qttn_ver_no" type="12" value="" out="N"/>
				<param name="grp_cmdt_seq" type="2" value="" out="N"/>
				<param name="cmdt_tp_cd" type="12" value="" out="N"/>
				<param name="cmdt_def_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
