<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BlRatingDBDAOModifyChargeAmendAuthRequestStatusUSQL">
			<desc><![CDATA[Charge Amend Request에 대한 Approve/Reject 결과를 업데이트]]></desc>
			<sql><![CDATA[
UPDATE BKG_CHG_AMD_AUTH
SET CHG_AMD_RQST_STS_CD = @[chg_amd_rqst_sts_cd],
    APRO_OFC_CD = @[apro_ofc_cd],
    APRO_USR_ID = @[apro_usr_id],
    APRO_DT = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[apro_ofc_cd]),
    UPD_USR_ID = @[apro_usr_id],
    UPD_DT = SYSDATE,
    APRO_RMK = @[apro_rmk]
WHERE BKG_NO = @[bkg_no]
AND CHG_AMD_SEQ = @[chg_amd_seq]			]]></sql>
			<params>
				<param name="chg_amd_rqst_sts_cd" type="12" value="" out="N"/>
				<param name="apro_ofc_cd" type="12" value="" out="N"/>
				<param name="apro_usr_id" type="12" value="" out="N"/>
				<param name="apro_rmk" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="chg_amd_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
