<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="FFCmpnAuditDBDAOSearchFFCmpnRateInfoListRSQL">
			<desc><![CDATA[SearchFFCmpnRateInfoList]]></desc>
			<sql><![CDATA[
SELECT A.FF_CNT_CD||TO_CHAR(A.FF_SEQ, 'FM000000') AS FF_CNT_SEQ,
       DECODE(TO_CHAR(A.FF_SEQ, 'FM000000'),
              '999999', 'All customer for General Rate Case',
              '888888', 'All customer for Special Rate Case',
              '777777', 'All customer for Canadian Special Rate Case',
              NVL(REPLACE(REPLACE(REPLACE(B.CUST_LGL_ENG_NM, '&', '&amp;'), CHR(13)||CHR(10), ''), CHR(9),''), '')) AS FF_CNT_CUST_NM,
       NVL(DECODE(A.SHPR_CNT_CD||TO_CHAR(A.SHPR_SEQ, 'FM000000'), '*000000', '*', A.SHPR_CNT_CD||TO_CHAR(A.SHPR_SEQ, 'FM000000')), '*') AS SHPR_CNT_SEQ,
       NVL(REPLACE(REPLACE(REPLACE(C.CUST_LGL_ENG_NM, '&', '&amp;'), CHR(13)||CHR(10), ''), CHR(9),''), '') AS SHPR_CNT_NM,
       NVL(A.POR_GRP_TP_CD, '*') AS POR_GRP_TP_CD,
       NVL(A.POR_ROUT_CD, '*') AS POR_ROUT_CD,
       NVL(A.POL_GRP_TP_CD, '*') AS POL_GRP_TP_CD,
       NVL(A.POL_ROUT_CD, '*') AS POL_ROUT_CD,
       NVL(A.POD_GRP_TP_CD, '*') AS POD_GRP_TP_CD,
       NVL(A.POD_ROUT_CD, '*') AS POD_ROUT_CD,
       TO_CHAR(TO_DATE(NVL(A.FM_EFF_DT, '2000-01-01'), 'YYYYMMDD'), 'YYYY-MM-DD') AS FM_EFF_DT,
       TO_CHAR(TO_DATE(NVL(A.TO_EFF_DT, '2999-12-31'), 'YYYYMMDD'), 'YYYY-MM-DD') AS TO_EFF_DT,
       NVL(A.SC_NO, '*') AS SC_NO,
       NVL(A.RFA_NO, '*') AS RFA_NO,
       NVL(A.CMDT_TP_CD, '*') AS CMDT_TP_CD,
       NVL(A.CMDT_CD, '*') AS CMDT_CD,
       DECODE (A.CMDT_TP_CD, '2', D.REP_CMDT_NM, '3', E.CMDT_NM) AS CMDT_NM,
       NVL(A.FF_DIV_CD, '') AS FF_DIV_CD,
       NVL(A.FF_BKG_RT, 0) FF_BKG_RT, NVL (A.FF_BX_AMT, 0) AS FF_BX_AMT,
       NVL(A.FF_TEU_AMT, 0) FF_TEU_AMT, NVL (A.FF_FEU_AMT, 0) AS FF_FEU_AMT,
       NVL(A.FF_RF_AMT, 0) AS FF_RF_AMT,
       NVL(A.FF_CHG_CTNT, '') AS FF_CHG_CTNT
       --NVL (A.BROG_KND_CD, 'F') AS BROG_KND_CD
  FROM ACM_FF_AGMT A,
       MDM_CUSTOMER B,
       MDM_CUSTOMER C,
       MDM_REP_CMDT D,
       MDM_COMMODITY E
 WHERE A.FF_CNT_CD = B.CUST_CNT_CD(+)
   AND A.FF_SEQ = B.CUST_SEQ(+)
   AND A.SHPR_CNT_CD = C.CUST_CNT_CD(+)
   AND A.SHPR_SEQ = C.CUST_SEQ(+)
   AND A.CMDT_CD = D.REP_CMDT_CD(+)
   AND A.CMDT_CD = E.CMDT_CD(+)
   AND A.FF_CNT_CD = @[ff_cnt_cd]
   AND A.FF_SEQ = @[ff_seq]
   AND A.FF_AGMT_SEQ = @[ff_agmt_seq]
			]]></sql>
			<params>
				<param name="ff_cnt_cd" type="12" value="" out="N"/>
				<param name="ff_seq" type="12" value="" out="N"/>
				<param name="ff_agmt_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
