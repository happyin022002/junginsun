<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ArApprovalDBDAOUpdateAproGwDtUSQL">
			<desc><![CDATA[RESULT 값에 따라 DATE 컬럼 업데이트]]></desc>
			<sql><![CDATA[
UPDATE AR_INV_HDR  
SET 
#if (${csr_apro_tp_cd} == 'GW')
	#if (${result} == 'P') 
		RQST_APRO_STEP_FLG = ''
    	,CSR_APRO_STEP_ASGN_DT = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[ofc_cd])
	#elseif (${result} == 'Y') 
		GW_AGMT_DOC_CFM_CD = @[gw_agmt_doc_cfm_cd]
		,CSR_APRO_CMPL_DT = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[ofc_cd])
	#elseif (${result} == 'D')
		CSR_CXL_DT = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[ofc_cd]) 
	#elseif (${result} == 'N')
		CSR_RJCT_DT = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[ofc_cd])    
	#else
		RQST_APRO_STEP_FLG = ''
	#end
#end
WHERE CSR_NO = @[csr_no] 
#if (${csr_apro_tp_cd} == 'GW')
	#if (${result} == 'P') 
		AND	RQST_APRO_STEP_FLG = 'Y'
		AND CSR_APRO_STEP_ASGN_RQST_DT IS NOT NULL
	#elseif (${result} == 'Y') 
		AND RQST_APRO_STEP_FLG IS NULL
	#elseif (${result} == 'D')
		AND RQST_APRO_STEP_FLG IS NULL
	#elseif (${result} == 'N')
		AND RQST_APRO_STEP_FLG IS NULL
	#else
		AND 1=1
	#end
#end			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="gw_agmt_doc_cfm_cd" type="12" value="" out="N"/>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
