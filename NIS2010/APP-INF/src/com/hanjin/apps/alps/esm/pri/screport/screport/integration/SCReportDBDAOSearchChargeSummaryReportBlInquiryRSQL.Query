<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SCReportDBDAOSearchChargeSummaryReportBlInquiryRSQL">
			<desc><![CDATA[Charge Summary Report - BL Inquiry 조회한다.
2013.06.17 송호진 [CHM-201324516] Detail View 와 B/L Inquiry 사이의 Route 비교 일치 ( COA -> BKG )
2013.06.24 송호진 [CHM-201324516] MDM_CHARGE 에 새로 추가된 MDT_RAT_FLG 적용
2013.07.04 전윤주 [CHM-201325625] Customer Classification 조건을 CC, RC, LC로 수정
2014.06.02 최성환 [CHM-201430519]Charge Summary Report 로직 보완 요청
2015.06.30 최성환 [CHM-201536493] Split03-주간 MAS Open에 따른 타모듈 프로그램 적용 요청]]></desc>
			<sql><![CDATA[
#if(${f_excel} == 'Y')
SELECT 'MONTH' COST_YRMON
      ,'WEEK' COST_WK
      ,'TRADE' TRD_CD
      ,'SUB-TRADE' SUB_TRD_CD
      ,'SCOPE' SVC_SCP_CD
      ,'RHQ' REGION
      ,'C.OFC' CTRT_OFC_CD
      ,'DIR(BOUND)' DIR_CD
      ,'LANE' RLANE_CD
      ,'TRUNK VVD' VVD_CD
      ,'BOOKING NO.' BKG_NO
      ,'CONTRACT NO.' CTRT_NO
      ,'CUSTOMER CODE' CUST_CD
      ,'CUSTOMER DESCRIPTION' CUST_LGL_ENG_NM
      ,'TEU' TEU
      ,'FEU' FEU
      ,'POR' BKG_POR_CD
      ,'POL COUNTRY' POL_CNT_CD
      ,'POL' BKG_POL_CD
      ,'POD' POD_CNT_CD
      ,'POD COUNTRY' BKG_POD_CD
      ,'DEL' BKG_DEL_CD
      ,'R/D TERM' RD_TERM_CD
      ,'SURCHARGE TYPE' REP_CHG_CD
      ,'PAYMENT' FRT_TERM_CD
      ,'SURCHARGE CODE' CHG_CD
      ,'MANDATORY RATING' MDTR_CD
      ,'PER' PER_CD
      ,'CARGO TYPE' CGO_CATE_CD
      ,'CUR.' CURR_CD
      ,'TARIFF TOTAL' TRF_USD_CHG_AMT
      ,'RATING TOTAL'  RAT_CHG_AMT
      ,'COLLECTION RATIO(%)' CLT_RATIO
FROM DUAL
UNION ALL
SELECT COST_YRMON
      ,COST_WK
      ,TRD_CD
      ,SUB_TRD_CD
      ,SVC_SCP_CD
      ,REGION
      ,CTRT_OFC_CD
      ,DIR_CD
      ,RLANE_CD
      ,VVD_CD
      ,BKG_NO
      ,CTRT_NO
      ,CUST_CD
      ,CUST_LGL_ENG_NM
      ,TO_CHAR(TEU) TEU
      ,TO_CHAR(FEU) FEU
      ,BKG_POR_CD
      ,POL_CNT_CD
      ,BKG_POL_CD
      ,POD_CNT_CD
      ,BKG_POD_CD
      ,BKG_DEL_CD
      ,RD_TERM_CD
      ,REP_CHG_CD
      ,FRT_TERM_CD
      ,CHG_CD
      ,MDTR_CD
      ,PER_CD
      ,CGO_CATE_CD
      ,CURR_CD
      ,TRF_USD_CHG_AMT
      ,RAT_CHG_AMT
      ,TRIM(TO_CHAR(TO_NUMBER(REPLACE(RAT_CHG_AMT,',',''))/REPLACE(trf_usd_chg_amt,',','') * 100,'99,999,999,999,990.9')) CLT_RATIO
FROM      
( 
#end
SELECT COST_YRMON
      ,COST_WK
      ,TRD_CD
      ,SUB_TRD_CD
      ,SVC_SCP_CD
      ,REGION
      ,CTRT_OFC_CD
      ,DIR_CD
      ,RLANE_CD
      ,VVD_CD
      ,BKG_NO
      ,CTRT_NO
      ,CUST_CD
      ,CUST_LGL_ENG_NM
#if(${f_excel} == 'Y')
      ,TO_CHAR(TEU) TEU
      ,TO_CHAR(FEU) FEU
#else
      ,TEU
      ,FEU
#end
      ,BKG_POR_CD
      ,POL_CNT_CD
      ,BKG_POL_CD
      ,POD_CNT_CD
      ,BKG_POD_CD
      ,BKG_DEL_CD
      ,RD_TERM_CD
      ,REP_CHG_CD
      ,FRT_TERM_CD
      ,CHG_CD 
      ,DECODE ( MDT_RAT_FLG, 'Y','YES','N','NO' ) AS MDTR_CD
       --User 의 요청에 따라 CNTR_SZ_CD 가 2,4,7 에 해당하지 않은 RAT_UT_CD 는 그대로 표시
      ,DISP_PER_CD AS PER_CD
--    ,DECODE(PER_CD, 'OT', 'Other', PER_CD) PER_CD
      ,CGO_CATE_CD
      ,CURR_CD
#if(${f_excel} == 'Y')
      ,TRIM(TO_CHAR(NVL(SUM(TRF_USD_CHG_AMT),0),'99,999,999,999,990.99')) TRF_USD_CHG_AMT
      ,TRIM(TO_CHAR(NVL((SELECT SUM(CHG_AMT)
         FROM BKG_CHG_RT C2
        WHERE C2.BKG_NO = C1.BKG_NO            
          AND C2.CHG_CD = C1.CHG_CD
                       --TRF RAT UT CODE를 PER 기준으로 환산하여 JOIN 함
          AND (DECODE((SELECT DECODE(RAT_UT_CD, 'BX', 'BX', 'BL', 'BL', CNTR_SZ_CD)
                       FROM PRI_RAT_UT
                     WHERE RAT_UT_CD(+) = C2.RAT_UT_CD) 
                           ,'2', '20'
                           ,'4', '40'
                           ,'7', '45'
                           ,'BX','BX'
                           ,'BL','BL' 
                           ,'OT') = C1.PER_CD
				 OR C1.PER_CD  IN ( 'BX', 'BL' )
               )
         AND C2.CGO_CATE_CD = C1.CGO_CATE_CD
         AND C2.FRT_INCL_XCLD_DIV_CD <> 'I'
      ),0),'99,999,999,999,990.99')) RAT_CHG_AMT
#else
      ,SUM(TRF_USD_CHG_AMT) TRF_USD_CHG_AMT
      ,(SELECT SUM(CHG_AMT)
         FROM BKG_CHG_RT C2
        WHERE C2.BKG_NO = C1.BKG_NO            
          AND C2.CHG_CD = C1.CHG_CD
		  --TRF RAT UT CODE를 PER 기준으로 환산하여 JOIN 함
          AND (DECODE((SELECT DECODE(RAT_UT_CD, 'BX', 'BX', 'BL', 'BL', CNTR_SZ_CD)
                       FROM PRI_RAT_UT
                      WHERE RAT_UT_CD(+) = C2.RAT_UT_CD) 
                           ,'2', '20'
                           ,'4', '40'
                           ,'7', '45'
                           ,'BX','BX'
                           ,'BL','BL' 
                           ,'OT') = C1.PER_CD
				 OR C1.PER_CD  IN ( 'BX', 'BL' )
               )
         AND C2.CGO_CATE_CD = C1.CGO_CATE_CD
         AND C2.FRT_INCL_XCLD_DIV_CD <> 'I'
      ) RAT_CHG_AMT
#end
FROM (
        SELECT B1.COST_YRMON
              ,B1.COST_WK
              ,B1.TRD_CD
              ,B1.SUB_TRD_CD
              ,B1.SVC_SCP_CD
              ,B1.REGION
              ,B1.CTRT_OFC_CD
              ,B1.DIR_CD
              ,B1.RLANE_CD
              ,B1.VVD_CD
              ,B1.BKG_NO
              ,B1.CTRT_NO
              ,B1.CUST_CD
              ,B1.CUST_LGL_ENG_NM
              ,B1.TEU
              ,B1.FEU
              ,B1.BKG_POR_CD
              ,B1.POL_CNT_CD
              ,B1.BKG_POL_CD
              ,B1.POD_CNT_CD
              ,B1.BKG_POD_CD
              ,B1.BKG_DEL_CD
              ,B1.RD_TERM_CD
              ,B3.REP_CHG_CD
              ,(SELECT INTG_CD_VAL_DP_DESC FROM COM_INTG_CD_DTL WHERE INTG_CD_ID = 'CD02318' AND INTG_CD_VAL_CTNT(+) = B2.FRT_TERM_CD) FRT_TERM_CD 
              ,B2.CHG_CD
              ,B3.MDT_RAT_FLG 
              --User 의 요청에 따라 CNTR_SZ_CD 가 2,4,7 에 해당하지 않은 RAT_UT_CD 는 그대로 표시
              ,( SELECT  DECODE ( CNTR_SZ_CD, '2', '20', '4', '40', '7', '45', RAT_UT_CD ) 
                 FROM    PRI_RAT_UT
                 WHERE   RAT_UT_CD(+) = B2.RAT_UT_CD ) DISP_PER_CD
              ,DECODE((SELECT DECODE(RAT_UT_CD, 'BX', 'BX', 'BL', 'BL', CNTR_SZ_CD)
                              FROM PRI_RAT_UT
                                WHERE RAT_UT_CD(+) = B2.RAT_UT_CD) 
                             ,'2', '20'
                             ,'4', '40'
                             ,'7', '45'
                             ,'BX','BX'
                             ,'BL','BL'
                             ,'OT') PER_CD 

              ,B2.CGO_CATE_CD
              ,B2.CURR_CD
              ,B2.CHG_AMT TRF_USD_CHG_AMT
         FROM (
                SELECT 
#if (${gubun} == '2' )
                       /*+ ORDERED USE_NL(A4) INDEX(A4 XPKMDM_CUSTOMER) INDEX(A1 XAK3MAS_BKG_EXPN_DTL) */ 
#end
#if (${gubun} == '1' )
                       /*+ ORDERED USE_NL(A4) INDEX(A4 XPKMDM_CUSTOMER) */
#end
                       A1.COST_YRMON
                      ,A1.COST_WK
                      ,A1.TRD_CD
                      ,A1.SUB_TRD_CD
                      ,A2.SVC_SCP_CD
                      ,A3.OFC_N3RD_LVL_CD REGION
                      ,A2.CTRT_OFC_CD
                      ,A1.DIR_CD
                      ,A1.RLANE_CD
                      ,A1.VSL_CD||A1.SKD_VOY_NO||A1.DIR_CD VVD_CD
                      ,A2.BKG_NO
                      ,COALESCE(A2.SC_NO, A2.RFA_NO,A2.TAA_NO) CTRT_NO
                      ,A2.CTRT_CUST_CNT_CD|| LPAD(A2.CTRT_CUST_SEQ, 6, '0') CUST_CD
                      ,A4.CUST_LGL_ENG_NM
                      ,SUM(DECODE(SUBSTR(A1.CNTR_TPSZ_CD,-1,1),'2',NVL(A1.BKG_QTY,0),NVL(A1.BKG_QTY,0)*2))  TEU
                      ,SUM(DECODE(SUBSTR(A1.CNTR_TPSZ_CD,-1,1),'2',NVL(A1.BKG_QTY,0)*0.5,NVL(A1.BKG_QTY,0)))  FEU
                      ,A1.BKG_POR_CD
                      ,SUBSTR(A1.BKG_POL_CD, 1,2) POL_CNT_CD
                      ,A1.BKG_POL_CD
                      ,SUBSTR(A1.BKG_POD_CD, 1,2) POD_CNT_CD
                      ,A1.BKG_POD_CD
                      ,A1.BKG_DEL_CD
                      ,A1.BKG_RCV_TERM_CD||'/'||A1.BKG_DE_TERM_CD RD_TERM_CD
                      ,CASE WHEN A4.NEW_KEY_ACCT_FLG =  'Y' THEN 'CC'
                          --  WHEN A4.GLO_ACCT_FLG = 'Y' THEN 'GA'
                            WHEN A4.RGN_ACCT_FLG =  'Y' THEN 'RC'
                       ELSE 'LC'
                       END CUST_CLSS
                      ,A4.RVIS_CNTR_CUST_TP_CD
                FROM 
#if (${gubun} == '2' )
                     --MONTH를 선택한 경우
                     MAS_BKG_EXPN_DTL A1
#end
#if (${gubun} == '1' || ${gubun} == '3')
                     -- WeeK를 선택한 경우, Applicatoin Date를 선택한 경우
                     MAS_BKG_EXPN_DTL_WK A1 
#end
                     ,BKG_BOOKING A2               
                     ,MDM_CUSTOMER A4
                     ,MAS_OFC_LVL A3
                WHERE A1.BKG_NO = A2.BKG_NO
                  AND A2.BKG_STS_CD <> 'X'
                  AND A2.BKG_CGO_TP_CD <> 'P'
                  AND A2.CTRT_OFC_CD = A3.OFC_CD
                  AND A2.CTRT_CUST_CNT_CD = A4.CUST_CNT_CD
                  AND A2.CTRT_CUST_SEQ = A4.CUST_SEQ
                  AND A3.OFC_LVL < '9'
                  				  
#if (${gubun} == '1' )
	#if(${f_sls_mon} == '' )
                  -- YEAR, WEEK만 들어올 때
                  AND  SUBSTR(SLS_YRMON,1,4)||COST_WK BETWEEN @[f_year]||@[f_fm_wk] AND @[f_year]||@[f_to_wk] 
    #end				  
    #if(${f_sls_mon} != '' )
                  --Year Week 중에 Month가 들어올 때
                  AND  SUBSTR(SLS_YRMON,5,2) = @[f_sls_mon] 
    #end
                  AND A1.SLS_YRMON BETWEEN A3.OFC_APLY_FM_YRMON AND A3.OFC_APLY_TO_YRMON
#end				 
#if (${gubun} == '2' )
                   --Year,Month 조건
                  AND A1.COST_YRMON BETWEEN @[f_year]||@[f_fm_mon] AND @[f_year]||@[f_to_mon] 
                  AND A1.COST_YRMON BETWEEN A3.OFC_APLY_FM_YRMON AND A3.OFC_APLY_TO_YRMON
#end				  
#if (${gubun} == '3' )
                  --Applicatoin Date를 선택한 경우
                  AND EXISTS (SELECT BKG_NO
                               FROM BKG_RATE
                              WHERE RT_APLY_DT >= TO_DATE(@[start_dt], 'YYYY-MM-DD')
                                AND RT_APLY_DT <= TO_DATE(@[end_dt], 'YYYY-MM-DD') + 0.99999 /* 0.99999 는 23시 59분 59초를 의미 */
                                AND BKG_NO = A2.BKG_NO) 
                  AND A1.SLS_YRMON BETWEEN A3.OFC_APLY_FM_YRMON AND A3.OFC_APLY_TO_YRMON
#end
#if (${rvis_cntr_cust_tp_cd} != '' )
                  --Main sheet에 있는 customer Type 필수
                  AND A4.RVIS_CNTR_CUST_TP_CD = @[rvis_cntr_cust_tp_cd] 
#end
#if (${ctrt_cust_cnt_cd} != '' )
                  --Main sheet에 있는 customer code 선택
                  AND A2.CTRT_CUST_CNT_CD = @[ctrt_cust_cnt_cd] 
#end
#if (${ctrt_cust_seq} != '' )
                  --Main sheet에 있는 customer code 선택
                  AND A2.CTRT_CUST_SEQ = @[ctrt_cust_seq] 
#end
#if (${cust_grp_id} != '' )
                  --Main sheet에 있는 group customer code 선택
                  AND A4.CUST_GRP_ID = @[cust_grp_id] 
#end
#if (${svc_scp_cd} != '' )
                  AND A2.SVC_SCP_CD = @[svc_scp_cd] 
#end
#if (${rhq_cd} != '' )
                  AND A3.OFC_N3RD_LVL_CD = @[rhq_cd] 
#end
#if (${ctrt_ofc_cd} != '' )
                  AND A2.CTRT_OFC_CD = @[ctrt_ofc_cd] 
#end
#if (${por_cd} != '')
                  AND A2.POR_CD LIKE @[por_cd]||'%' --POR 조건
#end 
#if (${pol_cd} != '')
                  AND A2.POL_CD LIKE @[pol_cd]||'%' -- POL 조건
#end 
#if (${pod_cd} != '')
                  AND A2.POD_CD LIKE @[pod_cd]||'%' -- POD 조건
#end 
#if (${del_cd} != '')
                  AND A2.DEL_CD LIKE @[del_cd]||'%' --DEL 조건 
#end
#if (${bkg_ofc_cd} != '')
                  AND A2.BKG_OFC_CD = @[bkg_ofc_cd] --BKG_OFC_CD 조건 
#end 
              GROUP BY A1.COST_YRMON
                      ,A1.COST_WK
                      ,A1.TRD_CD
                      ,A1.SUB_TRD_CD
                      ,A2.SVC_SCP_CD
                      ,A3.OFC_N3RD_LVL_CD
                      ,A2.CTRT_OFC_CD
                      ,A1.DIR_CD
                      ,A1.RLANE_CD
                      ,A1.VSL_CD||A1.SKD_VOY_NO||A1.DIR_CD
                      ,A2.BKG_NO
                      ,COALESCE(A2.SC_NO, A2.RFA_NO,A2.TAA_NO)
                      ,A2.CTRT_CUST_CNT_CD|| LPAD(A2.CTRT_CUST_SEQ, 6, '0')
                      ,A4.CUST_LGL_ENG_NM    
                      ,A1.BKG_POR_CD
                      ,SUBSTR(A1.BKG_POL_CD, 1,2)
                      ,A1.BKG_POL_CD
                      ,SUBSTR(A1.BKG_POD_CD, 1,2)
                      ,A1.BKG_POD_CD
                      ,A1.BKG_DEL_CD
                      ,A1.BKG_RCV_TERM_CD||'/'||A1.BKG_DE_TERM_CD
                      ,CASE WHEN A4.NEW_KEY_ACCT_FLG =  'Y' THEN 'CC'
                            --WHEN A4.GLO_ACCT_FLG = 'Y' THEN 'GA'
                            WHEN A4.RGN_ACCT_FLG =  'Y' THEN 'RC'
                       ELSE 'LC'
                       END
                      ,A4.RVIS_CNTR_CUST_TP_CD
              ) B1
        ,BKG_TRF_SCG_RT B2
        ,MDM_CHARGE B3
        WHERE B1.BKG_NO = B2.BKG_NO
          AND B2.CHG_CD = B3.CHG_CD
          AND B3.DELT_FLG <> 'Y'
#if (${rep_chg_cd} != '' )
          --Main sheet에 있는 REP_CHG_CD 필수
          AND B3.REP_CHG_CD = @[rep_chg_cd] 
#end
#if (${chg_cd} != '' )
          --Main sheet에 있는 CHG_CD 필수
          AND B3.CHG_CD = @[chg_cd]
#end

#if (${cust_clss} != '' )
          --Main sheet에 있는 CUST_CLSS 필수
          AND B1.CUST_CLSS = @[cust_clss]
#end

#if (${cgo_cate_cd} != '')
          AND B2.CGO_CATE_CD = @[cgo_cate_cd] -- 체크 박스에 체크하는대로 조회 조건 들어옴
#end
) C1
WHERE 1=1
#if (${per_cd} != '' )
-- Main sheet에 있는 PER 선택
AND PER_CD = @[per_cd] 
#end
GROUP BY COST_YRMON
      ,COST_WK
      ,TRD_CD
      ,SUB_TRD_CD
      ,SVC_SCP_CD
      ,REGION
      ,CTRT_OFC_CD
      ,DIR_CD
      ,RLANE_CD
      ,VVD_CD
      ,BKG_NO
      ,CTRT_NO
      ,CUST_CD
      ,CUST_LGL_ENG_NM
      ,TEU
      ,FEU
      ,BKG_POR_CD
      ,POL_CNT_CD
      ,BKG_POL_CD
      ,POD_CNT_CD
      ,BKG_POD_CD
      ,BKG_DEL_CD
      ,RD_TERM_CD
      ,REP_CHG_CD
      ,FRT_TERM_CD
      ,CHG_CD
      ,MDT_RAT_FLG
      ,DISP_PER_CD
      ,PER_CD 
      ,CGO_CATE_CD
      ,CURR_CD
#if(${f_excel} == 'Y')
)
#end			]]></sql>
			<params>
				<param name="f_year" type="12" value="" out="N"/>
				<param name="f_fm_wk" type="12" value="" out="N"/>
				<param name="f_to_wk" type="12" value="" out="N"/>
				<param name="f_sls_mon" type="12" value="" out="N"/>
				<param name="f_fm_mon" type="12" value="" out="N"/>
				<param name="f_to_mon" type="12" value="" out="N"/>
				<param name="start_dt" type="12" value="" out="N"/>
				<param name="end_dt" type="12" value="" out="N"/>
				<param name="rvis_cntr_cust_tp_cd" type="12" value="" out="N"/>
				<param name="ctrt_cust_cnt_cd" type="12" value="" out="N"/>
				<param name="ctrt_cust_seq" type="12" value="" out="N"/>
				<param name="cust_grp_id" type="12" value="" out="N"/>
				<param name="svc_scp_cd" type="12" value="" out="N"/>
				<param name="rhq_cd" type="12" value="" out="N"/>
				<param name="ctrt_ofc_cd" type="12" value="" out="N"/>
				<param name="por_cd" type="12" value="" out="N"/>
				<param name="pol_cd" type="12" value="" out="N"/>
				<param name="pod_cd" type="12" value="" out="N"/>
				<param name="del_cd" type="12" value="" out="N"/>
				<param name="bkg_ofc_cd" type="12" value="" out="N"/>
				<param name="rep_chg_cd" type="12" value="" out="N"/>
				<param name="chg_cd" type="12" value="" out="N"/>
				<param name="cust_clss" type="12" value="" out="N"/>
				<param name="cgo_cate_cd" type="12" value="" out="N"/>
				<param name="per_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
