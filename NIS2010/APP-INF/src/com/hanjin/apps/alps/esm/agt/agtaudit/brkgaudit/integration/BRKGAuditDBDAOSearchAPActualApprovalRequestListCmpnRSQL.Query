<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BRKGAuditDBDAOSearchAPActualApprovalRequestListCmpnRSQL">
			<desc><![CDATA[Brokerage Approval & Request 할 대상리스트를 가져온다]]></desc>
			<sql><![CDATA[
SELECT 
	FWDR, 
	VNDR_SEQ, 
	AP_OFC_CD, 
	FINC_RGN_CD 
FROM (
	SELECT 
		DISTINCT A.FRT_FWRD_CNT_CD||TO_CHAR(A.FRT_FWRD_SEQ, 'FM000000')  AS FWDR,
			A.VNDR_SEQ AS VNDR_SEQ, 
			A.AP_OFC_CD AS AP_OFC_CD, 
			FINC_RGN_CD
	FROM AGT_CMPN_COMM A, 
			MDM_ORGANIZATION B, 
			AGT_COMM_BKG_INFO C
#if (${sts_option} == '1') 
	WHERE A.VSL_DEP_DT BETWEEN TO_DATE(REPLACE(@[search_dt_fr], '-'), 'YYYYMMDD') AND TO_DATE(REPLACE(@[search_dt_to], '-'), 'YYYYMMDD')+0.999999--//:stsOpt,:frDate,:toDate
#elseif (${sts_option} == '2') 
	WHERE A.CRE_DT BETWEEN TO_DATE(REPLACE(@[search_dt_fr], '-'), 'YYYYMMDD') AND TO_DATE(REPLACE(@[search_dt_to], '-'), 'YYYYMMDD')+0.999999
#else 
	WHERE 1 = 1
#end
    AND A.COMM_PROC_STS_CD IN('AS')
    AND A.FRT_FWRD_CNT_CD||TO_CHAR(A.FRT_FWRD_SEQ,'FM000000')||A.VNDR_SEQ||A.AP_OFC_CD IN(${fwdr_vndr_seq_ap_ofc_cd})
    AND A.CMPN_IF_DT IS NULL
    AND A.CRE_USR_ID != 'COST'
    AND A.AP_OFC_CD = B.OFC_CD
    AND A.BKG_NO       = C.BKG_NO
    AND C.BL_NO IS NOT NULL
    AND A.CMPN_SEQ = (
		SELECT 
			MAX(D.CMPN_SEQ)
        FROM AGT_CMPN_COMM D
        WHERE D.BKG_NO = A.BKG_NO--//:stsOpt,:frDate,:toDate
        AND CMPN_IF_DT IS NULL
        GROUP BY D.BKG_NO
	) 
)			]]></sql>
			<params>
				<param name="search_dt_fr" type="12" value="" out="Y"/>
				<param name="search_dt_to" type="12" value="" out="Y"/>
			</params>
		</query>
	</querys>
</sqls>
