<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AGTAuditDBDAOAGTCommTobeApprovedEAIRSQL">
			<desc><![CDATA[ESM_AGT_0036 화면에서 Confirm 할때 범한 EDI I/F 용으로 조회한다.]]></desc>
			<sql><![CDATA[
SELECT 
	'I' AS EAI_STS,
	TO_CHAR	(SYSDATE, 'yyyymmddhh24miss') AS EAI_DT,
	'EDI' AS COMPANY,
	BKG_NO,
	AGN_CD,
	IO_BND_CD,
	AC_TP_CD,
	AC_SEQ,
	COMM_PROC_STS_CD,
	COMM_PROC_STS_RSN,
	VNDR_CNT_CD,
	VNDR_SEQ,
	ACT_COMM_AMT,
	ACT_IF_COMM_AMT,
	ACT_LOCL_COMM_AMT,
	ACT_IF_LOCL_COMM_AMT,
	CURR_CD,
	DECODE(XCH_RT_APLY_LVL, '1', VVD_XCH_RT, '2', MON_XCH_RT, '3', DLY_XCH_RT, '') AS XCH_RT,
	CRE_USR_ID
FROM AGT_AGN_COMM
WHERE COMM_APRO_NO	= @[s_apro_no]
AND AGN_CD IN ('SHACQ','TSNXY')
AND IO_BND_CD = 'O'
AND ((@[scn_id] = 'AGTCOMM' AND AC_TP_CD	<> 'T')	OR --//:scn_id
		(@[scn_id] = 'OTHER' AND AC_TP_CD =	'T')) --//:scn_id
AND COMM_PROC_STS_CD IN ('RS', 'AS',	'IF')
AND CRE_USR_ID != 'COST'
ORDER BY 
	BKG_NO, 
	AGN_CD, 
	IO_BND_CD, 
	AC_TP_CD, 
	AC_SEQ			]]></sql>
			<params>
				<param name="s_apro_no" type="12" value="" out="Y"/>
				<param name="scn_id" type="12" value="" out="Y"/>
			</params>
		</query>
	</querys>
</sqls>
