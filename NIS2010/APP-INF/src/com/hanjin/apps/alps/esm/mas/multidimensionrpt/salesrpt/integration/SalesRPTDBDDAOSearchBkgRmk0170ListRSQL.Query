<sqls>
	<querys>
		<query name="SalesRPTDBDDAOSearchBkgRmk0170ListRSQL">
			<desc><![CDATA[Inquiry by BKG Remark
2011.01.11 이윤정 [CHM-201108216-01] NIBC, NOBC 요율 반영 로직 수정.TMFDFL 계정에 대해서 TMFDMT으로 변환하여 보여주는 부분을 제거.
2011.01.28 이윤정 [CHM-201108646-01] [MAS]Inquiry by BKG Remark 화면 정보변경.
2011.12.30 최윤성 [CHM-201115391-01] [MAS] Pre CM/OP Simulation화면 U.I변경건 Inquiry by BKG / Product Catalog Inquiry 동일 적용요청 - LOC, NOD Chekc 로직 추가
2012.07.30 최윤성 [CHM-201219111-01] AWK 에 대한 Remark 처리 조건 추가
2014.01.21 김수정 [CHM-201428560] [MAS] RBCCO에 대한 Misc OP Rev. 추정에 대한 로직 수정 보완
2014.07.18 PEJ [CHM-201431133] [MAS] HJL에서 ETS모듈 통해 발행한 W/O에 대한 Vendor 참조 로직 보완 및 S/P Code 추가
                                                 CTRT_RTN_FLG = 'Y' 즉 CONTRACT 일경우 VENDOR 를 보여준다.
2015.03.24 [CHM-201534153] 김시몬 CM/OP계정 추가 및 변경에 따라 보완
]]></desc>
			<sql><![CDATA[
SELECT NOD_CD
    ,GRP
    ,STND_COST_CD
    ,DECODE(STND_COST_CD,'51701011','CM2 COST',STND_COST_NM) STND_COST_NM
    ,MAS_COST_SRC_CD
    ,DECODE(STND_COST_CD,'51701011','CM2 COST('||MAS_COST_SRC_NM||')',MAS_COST_SRC_NM) MAS_COST_SRC_NM
    ,AMT
    ,CTRT_RTN_FLG
    ,COST_CALC_RMK
    ,AVG_LVL_CHK
    ,VENDOR_SEQ
FROM (
    SELECT 'DEM/DET' NOD_CD
        ,2 COST_ACT_GRP_SEQ
        ,'' GRP
        ,'' STND_COST_CD
        ,'' STND_COST_NM
        ,'' MAS_COST_SRC_CD
        ,'' MAS_COST_SRC_NM
        ,ESTM_USD_TTL_AMT AMT
        ,DECODE(CTRT_RTN_FLG, 'Y', 'Contract','L', 'Actual', 'Average') CTRT_RTN_FLG
        ,REPLACE(COST_CALC_RMK, '>', '') COST_CALC_RMK
        ,'00' ACCT_DP_SEQ
        ,'N' AVG_LVL_CHK
        ,'' VENDOR_SEQ
    FROM MAS_BKG_COST_SRC_DTL
    WHERE BKG_NO                  = @[f_bkg_no]
        AND STND_COST_CD            = '43201011'
        AND NVL(ESTM_USD_TTL_AMT,0) <> 0
    UNION ALL
    SELECT 'Misc OP Rev' NOD_CD
        ,4 COST_ACT_GRP_SEQ
        ,'' GRP
        ,'' STND_COST_CD
        ,'' STND_COST_NM
        ,'' MAS_COST_SRC_CD
        ,'' MAS_COST_SRC_NM
        ,BKG_MISC_REV AMT
        ,'Average' CTRT_RTN_FLG
        ,CASE
            WHEN RLANE_CD <> 'RBCCO' AND IS_USE_TRD_UC = 'Y' THEN
                 'MRI Trade ' || '('||TRD_CD||', '||DIR_CD||')' || ROUND(TRD_UC_AMT, 2) || '*' || CNTR_TEU || '(TEU) + BKG MISC REV ' || '('||ROUND((BKG_MISC_REV-(TRD_UC_AMT*CNTR_TEU)), 3)||')'
            WHEN RLANE_CD <> 'RBCCO' AND IS_USE_TRD_UC = 'N' THEN         
                 'MRI Lane '  || '('||RLANE_CD||', '||DIR_CD||')' || ROUND(RLANE_UC_AMT, 2) || '*' || CNTR_TEU || '(TEU) + BKG MISC REV ' || '('||ROUND((BKG_MISC_REV-(RLANE_UC_AMT*CNTR_TEU)), 3)||')'
            WHEN RT_FLG = 'N' THEN
                 'F.Rev 50%'
            WHEN IS_USE_TRD_UC = 'Y' THEN  
                 'MRI Lane (' || ROUND(TRD_UC_AMT, 2) || ') * ' || CNTR_TEU || '(TEU) + BKG MISC REV ' || '('||ROUND((BKG_MISC_REV-(RLANE_UC_AMT*CNTR_TEU)), 3)||')'
            ELSE 'MRI Lane (' || ROUND(RLANE_UC_AMT, 2) || ') * ' || CNTR_TEU || '(TEU) + BKG MISC REV ' || '('||ROUND((BKG_MISC_REV-(RLANE_UC_AMT*CNTR_TEU)), 3)||')'
        END COST_CALC_RMK
        ,'00' ACCT_DP_SEQ
        ,'N' AVG_LVL_CHK
        ,'' VENDOR_SEQ
    FROM (
        SELECT A2.BKG_NO
            ,A2.COST_ACT_GRP_SEQ
            ,A2.CNTR_TPSZ_CD
            ,A2.CNTR_QTY
            ,DECODE(SUBSTR(A2.CNTR_TPSZ_CD, -1), '2', A2.CNTR_QTY, '3', A2.CNTR_QTY, A2.CNTR_QTY * 2) CNTR_TEU
            ,A3.REV_YRMON
            ,A1.TRD_CD --A3.TRD_CD
            ,A1.RLANE_CD --A3.RLANE_CD
            ,A1.DIR_CD--A3.DIR_CD
            ,NVL(A3.TRD_UC_AMT, 0) TRD_UC_AMT
            ,NVL(A3.RLANE_UC_AMT, 0) RLANE_UC_AMT
            ,A3.IS_USE_TRD_UC
            ,A1.BKG_MISC_REV + A1.SCR_CHG_REV BKG_MISC_REV
            ,DECODE(A4.BKG_NO, NULL, 'N', 'Y') RT_FLG
        FROM MAS_BKG_EXPN_DTL A1
            ,MAS_BKG_COST_SRC_DTL A2
            ,(
            SELECT REV_YRMON
                ,TRD_CD
                ,RLANE_CD
                ,DIR_CD
                ,MAX(TRD_UC_AMT) TRD_UC_AMT
                ,MAX(RLANE_UC_AMT) RLANE_UC_AMT
                ,MAX(IS_USE_TRD_UC) IS_USE_TRD_UC
            FROM (
                SELECT REV_YRMON
                    ,TRD_CD
                    ,DIR_CD
                    ,DECODE(RLANE_CD, 'XXXXX', NULL, RLANE_CD) RLANE_CD
                    ,DECODE(RLANE_CD, 'XXXXX', ETC_UT_REV_AMT, 0) TRD_UC_AMT
                    ,DECODE(RLANE_CD, 'XXXXX', 0, ETC_UT_REV_AMT) RLANE_UC_AMT
                    ,CASE
                         WHEN ETC_UT_REV_AMT > 100 AND TRD_TTL_QTY < 100 THEN
                              'Y'
                         ELSE 'N'
                     END AS IS_USE_TRD_UC
                FROM MAS_MON_MISC_REV_PRE_TEU
                WHERE REV_YRMON = MAS_BZC_COST_YRMON_FNC(@[f_bkg_no])
                )
            GROUP BY REV_YRMON, TRD_CD, RLANE_CD, DIR_CD
            ) A3
            ,(SELECT DISTINCT BKG_NO
                FROM BKG_CHG_RT
               WHERE BKG_NO = @[f_bkg_no]) A4
        WHERE A1.BKG_NO          = A2.BKG_NO
          AND A1.CNTR_TPSZ_CD    = A2.CNTR_TPSZ_CD
          AND A1.COST_ROUT_NO    = A2.COST_ROUT_NO
          AND A2.BKG_NO          = @[f_bkg_no]
          AND A2.MAS_COST_SRC_CD = '43201011'
          AND A3.REV_YRMON(+)    = MAS_BZC_COST_YRMON_FNC(@[f_bkg_no])
          AND A3.TRD_CD(+)       = A1.TRD_CD
          AND A3.RLANE_CD(+)     = A1.RLANE_CD
          AND A3.DIR_CD(+)       = A1.DIR_CD
          AND A4.BKG_NO(+)       = A1.BKG_NO
        )
    UNION ALL
    SELECT A4.NOD_CD
        ,A1.COST_ACT_GRP_SEQ
        ,MAS_GET_COM_NM_FNC('COST_ACT_GRP_CD', A1.COST_ACT_GRP_CD) GRP
        ,A1.STND_COST_CD
        ,A2.STND_COST_NM
        ,A1.MAS_COST_SRC_CD                                        -- 2011.01.11 이윤정 [CHM-201108216-01] TMFDFL 계정에 대해서 TMFDMT으로 변환하여 보여주는 부분을 제거.
        ,MAS_GET_COM_NM_FNC('MAS_COST_SRC_CD', A1.MAS_COST_SRC_CD) -- 2011.01.11 이윤정 [CHM-201108216-01] TMFDFL 계정에 대해서 TMFDMT으로 변환하여 보여주는 부분을 제거.
        ,DECODE(@[f_pro_vw], 'P', A1.ESTM_USD_TTL_AMT, A1.RESPB_USD_TTL_AMT) AMT
        -- ,DECODE(CTRT_RTN_FLG, 'Y', 'Contract','L', 'Actual', 'Average') CTRT_RTN_FLG
        , CASE WHEN A1.STND_COST_CD = '51401011' THEN DECODE(A1.COST_ASS_BSE_CD, 'C', 'Contract', 'Average')
               ELSE DECODE(CTRT_RTN_FLG, 'Y', 'Contract','L', 'Actual', 'Average')
               END AS CTRT_RTN_FLG
        ,CASE
            WHEN REGEXP_LIKE(A1.COST_CALC_RMK, '^>T[RE]S AVG-') THEN
                 SUBSTR(A1.COST_CALC_RMK, 2, 12) || ' -> ' || ROUND(ESTM_USD_UC_AMT, 2)
            WHEN REGEXP_LIKE(A1.COST_CALC_RMK, '^>AWK OOG-Qty') THEN    -- 2012.07.30 최윤성 [CHM-201219111-01] AWK 에 대한 Remark 처리 조건 추가
                 SUBSTR(A1.COST_CALC_RMK, 2, INSTR(A1.COST_CALC_RMK, '>T') + 10 ) || ' -> ' || ROUND(ESTM_USD_UC_AMT, 2)            
            ELSE DECODE(A1.MAS_COST_SRC_CD
                  ,'51601011', SUBSTR(A1.COST_CALC_RMK, 2)
                  ,'92404011', A4.COST_CALC_RMK   --ABC/STP
                  ,'65000000', A4.COST_CALC_RMK   --ABC/STP
                  ,'65901011', A4.COST_CALC_RMK   --ABC/STP
                  ,'65901021', A4.COST_CALC_RMK   --ABC/STP
                  ,'92202011', REPLACE(REPLACE(A1.COST_CALC_RMK, ', RepoPOR', ', RepoPOR'), ', CNTREQ', ', CNTREQ')
                  ,'92202012', REPLACE(A1.COST_CALC_RMK, ', Direction=', ', Direction=')
                  ,REPLACE(A1.COST_CALC_RMK, '>TP', 'TP')
            )
         END AS COST_CALC_RMK
        ,ACCT_DP_SEQ
        ,CASE WHEN REGEXP_LIKE(A1.COST_CALC_RMK, 'AVG-SCC|AVG-ECC|AVG-LCC|AVG-RCC') AND A2.SGRP_COST_CD = 'CVTR'
                 THEN 'Y'
                 ELSE 'N'
          END AS AVG_LVL_CHK
        ,A4.VENDOR_SEQ
    FROM (
          SELECT BKG_NO, CNTR_TPSZ_CD, COST_ROUT_NO, COST_ACT_GRP_SEQ, COST_ACT_GRP_CD, COST_ASS_BSE_CD, CTRT_RTN_FLG
               , (CASE WHEN MAS_COST_SRC_CD IN ('52101013', '52201013', '52101012', '52201012')
                          THEN '52101014'
                       WHEN MAS_COST_SRC_CD IN ('52301013', '52301012')
                          THEN '52301014'
                       WHEN MAS_COST_SRC_CD IN ('52401013', '52401012')
                          THEN '52401014'
                       WHEN MAS_COST_SRC_CD IN ('52601013', '52601012')
                          THEN '52601014'
                       ELSE MAS_COST_SRC_CD
                   END) AS MAS_COST_SRC_CD 
               , (CASE WHEN STND_COST_CD IN ('52101013', '52201013', '52101012', '52201012')
                          THEN '52101014'
                       WHEN STND_COST_CD IN ('52301013', '52301012')
                          THEN '52301014'
                       WHEN STND_COST_CD IN ('52401013', '52401012')
                          THEN '52401014'
                       WHEN STND_COST_CD IN ('52601013', '52601012')
                          THEN '52601014'
                       ELSE STND_COST_CD
                   END) AS STND_COST_CD
               , SUM(ESTM_USD_TTL_AMT) AS ESTM_USD_TTL_AMT, SUM(RESPB_USD_TTL_AMT) AS RESPB_USD_TTL_AMT, SUM(ESTM_USD_UC_AMT) AS ESTM_USD_UC_AMT
               , MAX(CASE WHEN STND_COST_CD IN ( '52101013', '52201013', '52101012', '52201012'
                                               , '52301013', '52301012'
                                               , '52401013', '52401012'
                                               , '52601013', '52601012'
                                               , '52101014', '52301014', '52401014', '52601014')
                                 AND ESTM_USD_TTL_AMT = 0 
                                 AND RESPB_USD_TTL_AMT = 0
                             THEN ''
                          ELSE COST_CALC_RMK
                      END) AS COST_CALC_RMK
            FROM MAS_BKG_COST_SRC_DTL
           WHERE BKG_NO = @[f_bkg_no]
           GROUP BY BKG_NO, CNTR_TPSZ_CD, COST_ROUT_NO, COST_ACT_GRP_SEQ, COST_ACT_GRP_CD, COST_ASS_BSE_CD, CTRT_RTN_FLG
                  , (CASE WHEN MAS_COST_SRC_CD IN ('52101013', '52201013', '52101012', '52201012')
                             THEN '52101014'
                          WHEN MAS_COST_SRC_CD IN ('52301013', '52301012')
                             THEN '52301014'
                          WHEN MAS_COST_SRC_CD IN ('52401013', '52401012')
                             THEN '52401014'
                          WHEN MAS_COST_SRC_CD IN ('52601013', '52601012')
                             THEN '52601014'
                          ELSE MAS_COST_SRC_CD
                      END)
                  , (CASE WHEN STND_COST_CD IN ('52101013', '52201013', '52101012', '52201012')
                             THEN '52101014'
                          WHEN STND_COST_CD IN ('52301013', '52301012')
                             THEN '52301014'
                          WHEN STND_COST_CD IN ('52401013', '52401012')
                             THEN '52401014'
                          WHEN STND_COST_CD IN ('52601013', '52601012')
                             THEN '52601014'
                          ELSE STND_COST_CD
                      END)
         ) A1
        ,MAS_STND_ACCT_V A2
        ,(
        SELECT DISTINCT COST_ACT_GRP_SEQ
            ,COST_ACT_GRP_CD
            ,N1ST_NOD_CD ORG_NOD_CD
            ,COALESCE(N4TH_NOD_CD, N3RD_NOD_CD, N2ND_NOD_CD) DEST_NOD_CD
            ,DECODE(N1ST_NOD_CD
                                ,N2ND_NOD_CD, N1ST_NOD_CD
                                ,  DECODE(N1ST_NOD_CD, NULL, ' ', N1ST_NOD_CD)
                                || DECODE(N2ND_NOD_CD, NULL, ' ', ' -> ' || N2ND_NOD_CD)
                                || DECODE(N3RD_NOD_CD, NULL, ' ', ' -> ' || N3RD_NOD_CD)
                                || DECODE(N4TH_NOD_CD, NULL, ' ', ' -> ' || N4TH_NOD_CD)
             ) NOD_CD
            ,COST_CALC_RMK
            ,BKG_NO
            ,CNTR_TPSZ_CD
            ,MAS_COST_SRC_CD
            ,COST_ROUT_NO
            ,CASE WHEN CTRT_RTN_FLG = 'Y' THEN -- CONTRACT 일경우 VENDOR 를 보여준다.
                          DECODE(TO_CHAR(N1ST_VNDR_SEQ), TO_CHAR(N2ND_VNDR_SEQ), TO_CHAR(N1ST_VNDR_SEQ), TO_CHAR(N1ST_VNDR_SEQ) || ',' || TO_CHAR(N2ND_VNDR_SEQ))
                       || DECODE(TO_CHAR(N2ND_VNDR_SEQ), TO_CHAR(N3RD_VNDR_SEQ), ' ', DECODE(TO_CHAR(N3RD_VNDR_SEQ), NULL, '', ',' || TO_CHAR(N3RD_VNDR_SEQ)))
                       || DECODE(TO_CHAR(N3RD_VNDR_SEQ), TO_CHAR(N4TH_VNDR_SEQ), ' ', DECODE(TO_CHAR(N4TH_VNDR_SEQ), NULL, '', ',' || TO_CHAR(N4TH_VNDR_SEQ)))
                       || DECODE(TO_CHAR(N4TH_VNDR_SEQ), TO_CHAR(N5TH_VNDR_SEQ), ' ', DECODE(TO_CHAR(N5TH_VNDR_SEQ), NULL, '', ',' || TO_CHAR(N5TH_VNDR_SEQ)))
                  ELSE NULL
             END VENDOR_SEQ        
        FROM MAS_BKG_COST_SRC_DTL
        WHERE BKG_NO       = @[f_bkg_no]
#if (${f_rout_no} != 'All')
            AND COST_ROUT_NO = @[f_rout_no]
#end
        ) a4
    WHERE A2.MAS_COST_SRC_PRT_CD IN(DECODE(@[f_pro_lvl], 'C', 'CO', 'CO'), DECODE(@[f_pro_vw], 'P', 'PA', 'RA'))
		AND	A2.STND_COST_TP_CD IN('C', DECODE(@[f_pro_lvl], 'C', 'C', 'M', 'C','O')) 
        AND A1.STND_COST_CD     = A2.STND_COST_CD
        AND A2.PA_VW            = 'BKG'
#if (${f_pro_lvl} != 'M') 
		AND A1.STND_COST_CD <> '51701011'
#end
        AND (   A1.ESTM_USD_TTL_AMT <> 0
            OR  A1.RESPB_USD_TTL_AMT <> 0
            )
        AND A1.BKG_NO           = A4.BKG_NO
        AND A1.CNTR_TPSZ_CD     = A4.CNTR_TPSZ_CD
        AND A1.COST_ACT_GRP_SEQ = A4.COST_ACT_GRP_SEQ
        AND A1.MAS_COST_SRC_CD  = A4.MAS_COST_SRC_CD
        AND A1.COST_ROUT_NO     = A4.COST_ROUT_NO
        AND A1.COST_ACT_GRP_CD  = A4.COST_ACT_GRP_CD
        AND A1.MAS_COST_SRC_CD  NOT IN ('92404011', '65000000', '65901011', '65901021')
    UNION ALL
    SELECT '' NOD
        ,990 COST_ACT_GRP_SEQ
        ,'Common AG' GRP
        ,B1.STND_COST_CD
        ,DECODE(B1.STND_COST_CD
                            ,'91401011', 'STP Income'
                            ,'92404011', 'STP Cost'
                            ,'65000000', 'Business Activity Cost'
                            ,'65901011', 'Own-Vol Activity Cost'
                            ,'65901021', 'Oth-Vol Activity Cost'
                            ,'Business Activity Cost'
         ) STND_COST_NM
        ,B1.RA_ACCT_CD MAS_COST_SRC_CD
        ,B2.SLS_ACT_DESC MAS_COST_SRC_NM
        ,B1.SVC_TRNS_PRC_AMT AMT
        ,'' CTRT_RTN_FLG
        ,'' COST_CALC_RMK
        ,'' ACCT_DP_SEQ
        ,'N' AVG_LVL_CHK
        ,'' VENDER_SEQ
    FROM MAS_BKG_SVC_TRNS_PRC B1
        ,MAS_OFC_ROUT_MAPG B2
    WHERE B1.SLS_ACT_CD       = B2.SLS_ACT_CD
        AND B1.OFC_CLSS_CD      = B2.OFC_CLSS_CD
        AND B2.COST_YRMON       = MAS_BZC_COST_YRMON_FNC(B1.BKG_NO)
        AND B1.BKG_NO           = @[f_bkg_no]
        AND B1.SVC_TRNS_PRC_AMT <> 0
#if (${f_pro_lvl} == 'O')
        AND B1.MAS_COST_SRC_CD  NOT IN ('91401011')
#else
        AND B1.MAS_COST_SRC_CD  NOT IN ('92404011', '65000000', '65901011', '65901021', '91401011')
#end

    UNION ALL

    SELECT ' ' AS NOD_CD 
           , COST_ACT_GRP_SEQ
           , GRP
           , STND_COST_CD
           , SUBSTR(STND_COST_NM,5) STND_COST_NM
           , STND_COST_CD
           , SUBSTR(STND_COST_NM,5) STND_COST_NM
           --, SGRP_COST_CD_DESC
           , NVL(AMT,0) AS AMT
           , 'Average' AS CTRT_RTN_FLG
           , '' AS COST_CALC_RMK
           , ACCT_DP_SEQ
           , 'Y' AS AVG_LVL_CHK 
           , '' AS VENDER_SEQ
      FROM ( 
            SELECT   D2.ACCT_DP_SEQ        AS COST_ACT_GRP_SEQ
                   , D2.MGRP_COST_CD_DESC  AS GRP
                   , D2.MGRP_COST_CD_DESC  AS SGRP_COST_CD_DESC
                   , D2.ACCT_DP_SEQ||D2.STND_COST_NM  AS STND_COST_NM
                   , D2.STND_COST_CD
                   , d2.ACCT_DP_SEQ2       AS ACCT_DP_SEQ
                   , D2.ESTM_USD_TTL_AMT   AS AMT
             FROM (                                
                     SELECT B.MGRP_COST_CD,
                            B.MGRP_COST_CD_DESC,
                            --B.SGRP_COST_CD,
                            B.STND_COST_CD,
                            B.STND_COST_NM,
                            DECODE(B.MGRP_COST_CD,'OV',1001,'VF',1002,'OF',1003,'GE',1004) AS ACCT_DP_SEQ,
                            B.ACCT_DP_SEQ AS ACCT_DP_SEQ2,
                            A.ESTM_USD_TTL_AMT
                       FROM (
                             SELECT A.STND_COST_CD,
                                    SUM(A.ESTM_USD_TTL_AMT) AS ESTM_USD_TTL_AMT
                               FROM MAS_BKG_OP_COST_SRC_DTL A
                              WHERE A.BKG_NO  = @[f_bkg_no]
                            #if (${f_rout_no} != 'All')
                                AND COST_ROUT_NO = @[f_rout_no]
                            #end
                              GROUP BY A.STND_COST_CD
                            ) A,
                            MAS_STND_ACCT_V         B
                     WHERE 1 = 1
                       AND A.STND_COST_CD(+)     = B.STND_COST_CD
                       AND B.MAS_COST_SRC_PRT_CD = 'PA'
                       AND B.MGRP_COST_CD IN ('OF','OV','VF','GE')
                       AND SUBSTR(B.STND_COST_CD,-1) != 9
                   ) D2
            )   
      WHERE @[f_pro_lvl] = 'O' 

    )
ORDER BY COST_ACT_GRP_SEQ, ACCT_DP_SEQ, 5, 9			]]></sql>
			<params>
				<param name="f_bkg_no" type="12" value="" out="N"/>
				<param name="f_pro_vw" type="12" value="" out="N"/>
				<param name="f_rout_no" type="12" value="" out="N"/>
				<param name="f_pro_lvl" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
