<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AGNCommApprovalDBDAOGetCsrHeaderApInvHdrInfoRSQL">
			<desc><![CDATA[AP_INV_HDR 정보를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT
           A.TJ_OFC_CD,
         (
               SELECT
                      COUNT (DISTINCT ATTR_CTNT1)
                 FROM AP_INV_DTRB
                WHERE CSR_NO = A.CSR_NO
         ) AS DTRB_CNT,
           A.VNDR_NO,
           A.INV_TERM_DT,
           A.CSR_CURR_CD,
           A.CSR_AMT,
           A.CRE_USR_ID,
		   A.CSR_NO
      FROM AP_INV_HDR A
     WHERE A.CSR_NO = @[csr_no]			]]></sql>
			<params>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
