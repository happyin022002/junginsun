<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BDRSettingDBDAOsearchBdrVvdListRSQL">
			<desc><![CDATA[searchBdrVvdList]]></desc>
			<sql><![CDATA[
SELECT VSL_CD,
       SKD_VOY_NO,
       SKD_DIR_CD,
       POL_CD,
       POD_CD,
       'TRNK' AS UPD_CD
FROM   BKG_VVD_BDR_LOG
WHERE  NVL(TRNK_MNL_BDR_DT,TRNK_ESTM_BDR_DT) > SYSDATE-15
AND    NVL(TRNK_MNL_BDR_DT,TRNK_ESTM_BDR_DT) <= SYSDATE -1
AND    NVL(TRNK_MNL_BDR_DT,TRNK_ESTM_BDR_DT) >  GLOBALDATE_PKG.TIME_CONV_FNC('KRPUS',SYSDATE-15,POL_CD) 
AND    NVL(TRNK_MNL_BDR_DT,TRNK_ESTM_BDR_DT) <=  GLOBALDATE_PKG.TIME_CONV_FNC('KRPUS',SYSDATE-1,POL_CD) 
AND    TO_CHAR(GLOBALDATE_PKG.TIME_CONV_FNC('KRPUS', SYSDATE, POL_CD), 'HH24') <= '03'
AND    'N' = TRNK_MNL_BDR_FLG
AND    'N' = TRNK_BDR_FLG
AND    (('M' = SLAN_TP_CD AND 'Y' = TRNK_AUTO_BDR_FLG) OR ('N' = TRNK_AUTO_BDR_FLG))
AND		TRNK_BDR_SET_CD = 'A'
UNION
SELECT VSL_CD,
       SKD_VOY_NO,
       SKD_DIR_CD,
       POL_CD,
       POD_CD,
       'FDR'
FROM   BKG_VVD_BDR_LOG
WHERE  NVL(FDR_MNL_BDR_DT,FDR_ESTM_BDR_DT) > SYSDATE-15
AND    NVL(FDR_MNL_BDR_DT,FDR_ESTM_BDR_DT) <= SYSDATE -1
AND    NVL(FDR_MNL_BDR_DT,FDR_ESTM_BDR_DT) >  GLOBALDATE_PKG.TIME_CONV_FNC('KRPUS',SYSDATE-15,POL_CD) 
AND    NVL(FDR_MNL_BDR_DT,FDR_ESTM_BDR_DT) <=  GLOBALDATE_PKG.TIME_CONV_FNC('KRPUS',SYSDATE-1,POL_CD) 
AND    TO_CHAR(GLOBALDATE_PKG.TIME_CONV_FNC('KRPUS', SYSDATE, POL_CD), 'HH24') <= '03'
AND    'N' = FDR_MNL_BDR_FLG 
AND    'N' = FDR_BDR_FLG 
AND	   'M' = SLAN_TP_CD
--AND    (('M' = SLAN_TP_CD AND 'Y' = FDR_AUTO_BDR_FLG) OR ('N' = FDR_AUTO_BDR_FLG))			]]></sql>
			<params>
			</params>
		</query>
	</querys>
</sqls>
