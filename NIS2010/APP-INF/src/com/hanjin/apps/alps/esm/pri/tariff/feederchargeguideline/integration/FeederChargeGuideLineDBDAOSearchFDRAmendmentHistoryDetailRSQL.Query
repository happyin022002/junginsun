<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="FeederChargeGuideLineDBDAOSearchFDRAmendmentHistoryDetailRSQL">
			<desc><![CDATA[Retrieve Add-on Tariff Amendment History detail (VO는 따로 생성)
2015.03.05 [CHM-201534279] 최성환  Pricing FeederIHC tariff 45 칼럼 추가
- HAMRU 45' 사용 그외는 40'로 적용함.]]></desc>
			<sql><![CDATA[
SELECT SUB.SVC_SCP_CD
     , SUB.ORG_DEST_TP_CD
     , SUB.FDR_TRF_NO
     , SUB.AMDT_SEQ
     , SUB.RT_SEQ
     , SUB.PNT_LOC_CD
     , (SELECT LOC_NM 
          FROM MDM_LOCATION 
         WHERE LOC_CD = SUB.PNT_LOC_CD
           AND DELT_FLG = 'N') AS PNT_LOC_NM     
     , SUB.BSE_PORT_LOC_CD
     , SUB.RCV_DE_TERM_CD
     , SUB.GLINE_20FT_FRT_RT_AMT
     , SUB.GLINE_40FT_FRT_RT_AMT
     , CASE WHEN SUB.RHQ_CD = 'HAMRU' THEN SUB.GLINE_45FT_FRT_RT_AMT ELSE SUB.GLINE_40FT_FRT_RT_AMT END GLINE_45FT_FRT_RT_AMT		--45'
     , SUB.GLINE_RF_20FT_FRT_RT_AMT
     , SUB.GLINE_RF_40FT_FRT_RT_AMT
     , SUB.RC_SVC_FLG
     , SUB.N1ST_CMNC_AMDT_SEQ
     , SUB.NEXT_N1ST_CMNC_AMDT_SEQ
     , (SELECT TO_CHAR(EFF_DT, 'YYYYMMDD')
          FROM PRI_TRF_FDR_MN
         WHERE SVC_SCP_CD = SUB.SVC_SCP_CD
           AND ORG_DEST_TP_CD = SUB.ORG_DEST_TP_CD
           AND FDR_TRF_NO = SUB.FDR_TRF_NO
           AND AMDT_SEQ = SUB.N1ST_CMNC_AMDT_SEQ) AS EFF_DT
     , (SELECT CASE
          WHEN M.AMDT_SEQ = SUB.AMDT_SEQ THEN DECODE(TO_CHAR(M.EXP_DT,'YYYYMMDD'),'99991231', NULL, TO_CHAR(M.EXP_DT,'YYYYMMDD'))
          WHEN M.AMDT_SEQ <> SUB.AMDT_SEQ THEN TO_CHAR(M.EFF_DT - 1, 'YYYYMMDD')
          WHEN M.EFF_DT <= N.EXP_DT THEN TO_CHAR(M.EFF_DT - 1, 'YYYYMMDD')
               ELSE DECODE(TO_CHAR(N.EXP_DT,'YYYYMMDD'),'99991231', NULL, TO_CHAR(N.EXP_DT,'YYYYMMDD')) END AS EXP_DT
          FROM PRI_TRF_FDR_MN M, PRI_TRF_FDR_MN N
         WHERE M.FDR_TRF_NO = SUB.FDR_TRF_NO
           AND N.FDR_TRF_NO = SUB.FDR_TRF_NO
           AND M.ORG_DEST_TP_CD = SUB.ORG_DEST_TP_CD
           AND N.ORG_DEST_TP_CD = SUB.ORG_DEST_TP_CD
           AND M.AMDT_SEQ = @[amdt_seq]
           AND N.AMDT_SEQ = M.AMDT_SEQ - DECODE('1', SUB.AMDT_SEQ, 0, 0, 0, 1)
           AND M.SVC_SCP_CD = SUB.SVC_SCP_CD
           AND N.SVC_SCP_CD = SUB.SVC_SCP_CD) AS EXP_DT           
     , SUB.SRC_INFO_CD
     , DECODE(SUB.COST_20FT_FRT_RT_AMT,'','V','') AS ADD_FLG
     , '' AS DETAIL_TP
     , SUB.RHQ_CD AS RHQ_CD
  FROM (SELECT SVC_SCP_CD
             , ORG_DEST_TP_CD
             , FDR_TRF_NO
             , AMDT_SEQ
             , RT_SEQ
             , PNT_LOC_CD
             , BSE_PORT_LOC_CD
             , RCV_DE_TERM_CD
             , GLINE_20FT_FRT_RT_AMT
             , GLINE_40FT_FRT_RT_AMT
             , GLINE_45FT_FRT_RT_AMT	-- 45'
             , GLINE_RF_20FT_FRT_RT_AMT
             , GLINE_RF_40FT_FRT_RT_AMT
             , COST_20FT_FRT_RT_AMT
             , RC_SVC_FLG
             , N1ST_CMNC_AMDT_SEQ
             , LEAD(N1ST_CMNC_AMDT_SEQ) OVER(PARTITION BY SVC_SCP_CD, FDR_TRF_NO, RT_SEQ ORDER BY AMDT_SEQ) AS NEXT_N1ST_CMNC_AMDT_SEQ
             , SRC_INFO_CD
			 , RHQ_CD		-- 45'
          FROM PRI_TRF_FDR_RT
         WHERE 1=1
           #if(${detail_tp} == '1')  
           AND AMDT_SEQ = @[amdt_seq]
           AND SRC_INFO_CD IN ('NW', 'PC', 'PM', 'GC', 'GM', 'AM')
           #end 
           #if(${detail_tp} == '2')  
           AND (AMDT_SEQ = @[amdt_seq] OR
               (AMDT_SEQ = @[amdt_seq] - 1 AND SRC_INFO_CD IN ('NW', 'PC', 'PM', 'GC', 'GM', 'AM')))
           #end    
           AND SVC_SCP_CD = @[svc_scp_cd] 
           AND FDR_TRF_NO = @[fdr_trf_no] 
           AND ORG_DEST_TP_CD = @[org_dest_tp_cd]
      ) SUB
 WHERE  
    #if(${detail_tp} == '1')    
        SUB.NEXT_N1ST_CMNC_AMDT_SEQ IS NULL
    #end    
    #if(${detail_tp} == '2')        
        (SUB.NEXT_N1ST_CMNC_AMDT_SEQ IS NULL AND SUB.N1ST_CMNC_AMDT_SEQ = SUB.AMDT_SEQ)
    #end
    OR SUB.N1ST_CMNC_AMDT_SEQ <> SUB.NEXT_N1ST_CMNC_AMDT_SEQ    
 ORDER BY SUB.RT_SEQ , SUB.AMDT_SEQ			]]></sql>
			<params>
				<param name="amdt_seq" type="12" value="" out="N"/>
				<param name="svc_scp_cd" type="12" value="" out="N"/>
				<param name="fdr_trf_no" type="12" value="" out="N"/>
				<param name="org_dest_tp_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
