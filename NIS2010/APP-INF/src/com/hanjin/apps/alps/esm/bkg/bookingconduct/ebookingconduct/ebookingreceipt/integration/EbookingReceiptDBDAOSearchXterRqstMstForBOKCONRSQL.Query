<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="EbookingReceiptDBDAOSearchXterRqstMstForBOKCONRSQL">
			<desc><![CDATA[e-bkg receipt BOKCON flat file 생성을 위해 Request master 정보를 조회한다.]]></desc>
			<sql><![CDATA[
--searchXterRqstMstForAck
SELECT  'IB_NO:'            || XTER_RQST_NO                                     ||CHR(10)||
        'BKG_NO_AUT:'       || B.BKG_NO                                         ||CHR(10)||
        'BKG_STS:'          || 'Y'                                              ||CHR(10)||
        'SED_IND:'          || DECODE(B.BKG_STS_CD, 'X', '3',
                                DECODE((SELECT COUNT(XTER_RQST_NO) 
                                        FROM BKG_XTER_RQST_MST
                                         WHERE XTER_SNDR_ID = M.XTER_SNDR_ID
										   AND XTER_RQST_NO = M.XTER_RQST_NO
                                           AND AUTO_CFM_EDI_FLG = 'Y'),0,'9',DECODE(XTER_BKG_RQST_STS_CD,'X','3','7')))  ||CHR(10)||
        'IB_PO_NO:'         || PO_NO                                            ||CHR(10)||
        'IB_C_ID:'          || CUST_ID                                          ||CHR(10)||
        'IB_POL_CD:'        || NVL(B.POL_CD,M.POL_CD)   ||CHR(10)||
        'IB_POL_NM:'        || NVL(D.POL_NM,M.POL_NM)   ||CHR(10)||
        'IB_POR_CD:'        || NVL(B.POR_CD,M.POR_CD)	||CHR(10)||
        'IB_POR_NM:'        || NVL(D.POR_NM,M.POR_NM)	||CHR(10)||
        'IB_POD_CD:'        || NVL(B.POD_CD,M.POD_CD)	||CHR(10)||
        'IB_POD_NM:'        || NVL(D.POD_NM,M.POD_NM)	||CHR(10)||
        'IB_DEL_CD:'        || NVL(B.DEL_CD,M.DEL_CD)	||CHR(10)||
        'IB_DEL_NM:'        || NVL(D.DEL_NM,M.DEL_NM)	||CHR(10)||
        'IB_SHIP_EXP_DT:'   || TO_CHAR(SHP_EXP_DT, 'YYYYMMDDHH24MI')||CHR(10)||
        'IB_SHIP_DT:'       || to_char(NVL(B.LODG_DUE_DT,M.RQST_DEP_DT),'YYYYMMDDHH24MI')||CHR(10)||
        'IB_VSL_CD:'        || NVL(B.VSL_CD,M.VSL_CD)	||CHR(10)||
        'IB_VVD_NM:'        || NVL((SELECT VSL_ENG_NM FROM MDM_VSL_CNTR WHERE VSL_CD = B.VSL_CD),M.VSL_NM)||CHR(10)||
        'IB_SKD_VOYAGE_NO:' || NVL(B.SKD_VOY_NO||B.SKD_DIR_CD,M.SKD_VOY_NO||M.SKD_DIR_CD)		||CHR(10)||
		'IB_PRE_VSL_NM:'	|| (SELECT MV.VSL_ENG_NM 
		                          FROM BKG_VVD PRE, MDM_VSL_CNTR MV 
								WHERE 'S' = PRE.VSL_PRE_PST_CD(+)					
		 					      AND B.PRE_RLY_PORT_CD= PRE.POD_CD(+)
		  					      AND B.BKG_NO = PRE.BKG_NO(+)
							      AND MV.VSL_CD = PRE.VSL_CD)||CHR(10)||
		'IB_PRE_VSL_VOY:'   || (SELECT PRE.SKD_VOY_NO||PRE.SKD_DIR_CD 
		                          FROM BKG_VVD PRE, MDM_VSL_CNTR MV 
								WHERE 'S' = PRE.VSL_PRE_PST_CD(+)					
		 					      AND B.PRE_RLY_PORT_CD= PRE.POD_CD(+)
		  					      AND B.BKG_NO = PRE.BKG_NO(+)
							      AND MV.VSL_CD = PRE.VSL_CD)||CHR(10)||
		'IB_POST_VSL_NM:'	|| (SELECT MV.VSL_ENG_NM 
		                          FROM BKG_VVD PST, MDM_VSL_CNTR MV 
								WHERE 'U' = PST.VSL_PRE_PST_CD(+)					
		 					      AND B.PRE_RLY_PORT_CD= PST.POD_CD(+)
		  					      AND B.BKG_NO = PST.BKG_NO(+)
							      AND MV.VSL_CD = PST.VSL_CD)||CHR(10)||
		'IB_POST_VSL_VOY:'   || (SELECT PST.SKD_VOY_NO||PST.SKD_DIR_CD 
		                          FROM BKG_VVD PST, MDM_VSL_CNTR MV 
								WHERE 'U' = PST.VSL_PRE_PST_CD(+)					
		 					      AND B.PRE_RLY_PORT_CD= PST.POD_CD(+)
		  					      AND B.BKG_NO = PST.BKG_NO(+)
							      AND MV.VSL_CD = PST.VSL_CD)||CHR(10)||
		'IB_FRT_TERM:'		|| FRT_TERM_CD ||CHR(10)||
		'IB_DEL_ETA:'		|| (SELECT to_char(MAX(ESTM_DT), 'RRRRMMDDHH24MI', 'NLS_DATE_LANGUAGE=ENGLISH') as DEL_EST_ARRIVAL_DATE
							  	FROM SCE_COP_HDR HDR, SCE_COP_DTL DTL
							 	WHERE B.BKG_NO  = HDR.BKG_NO
							   	AND HDR.COP_NO = DTL.COP_NO
							   	AND DTL.NOD_CD = B.DEL_NOD_CD
							   	AND HDR.COP_STS_CD IN ('C', 'T', 'F')
							   	AND (DTL.ACT_CD LIKE 'FI__A_' OR DTL.ACT_CD LIKE 'FU__U_')) ||CHR(10)||
		'IB_CY_CLOSE_DT:'	|| (SELECT TO_CHAR(NVL(MNL_SET_DT, SYS_SET_DT), 'RRRRMMDDHH24MI')
							  	FROM BKG_CLZ_TM CLZ
							 	WHERE B.BKG_NO = CLZ.BKG_NO
							   	AND CLZ_TP_CD = 'T') ||CHR(10)||
		'IB_PICKUP_CY_NM:'	|| (SELECT YD_NM
							   FROM MDM_YARD MY
							   WHERE B.MTY_PKUP_YD_CD = MY.YD_CD) ||CHR(10)||
        'IB_RMK:'           || NVL(REPLACE(B.XTER_RMK, CHR(13)||CHR(10), ' '),REPLACE(M.XTER_BKG_RMK1, CHR(13)||CHR(10), ' '))||CHR(10)||
        'IB_SI_NO:'         || SI_NO							||CHR(10) FLAT_FILE
  FROM BKG_XTER_RQST_MST M, BKG_BOOKING B, BKG_BL_DOC D    
 WHERE 1=1   
   AND XTER_SNDR_ID  = @[sender_id]
   AND XTER_RQST_NO  = @[rqst_no]
   AND XTER_RQST_SEQ = @[rqst_seq]
   AND M.BKG_NO = B.BKG_NO(+)
   AND B.BKG_NO = D.BKG_NO(+)
   and rownum =1			]]></sql>
			<params>
				<param name="sender_id" type="12" value="" out="N"/>
				<param name="rqst_no" type="12" value="" out="N"/>
				<param name="rqst_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
