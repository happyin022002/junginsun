<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CostAssignDBDAOModifyCoaCommonInterfaceCSQL">
			<desc><![CDATA[   COA_BKG_COM_IF테이블에 데이터를 INSERT/UPDATE]]></desc>
			<sql><![CDATA[
MERGE INTO COA_BKG_COM_IF A1
USING (
       SELECT @[bkg_no] BKG_NO
             ,@[cost_src_sys_cd] COST_SRC_SYS_CD
             ,SYSDATE IF_DT 
             ,@[if_rmk]IF_RMK 
             ,'M_'||@[cre_usr_id] CRE_USR_ID
             ,SYSDATE CRE_DT
             ,'M_'||@[upd_usr_id] UPD_USR_ID
             ,SYSDATE UPD_DT
        FROM DUAL
#if(${if_rmk} == 'COP MT Change' && ${cost_src_sys_cd} == 'SCE')
       where exists (select 'X'
                       from bkg_booking a, sce_cop_hdr b, sce_cop_dtl c
                      where a.bkg_no = b.bkg_no
                        and b.cop_no = c.cop_no
                        and a.bkg_no = @[bkg_no]
                        and c.act_cd in ('MOTYDO', 'MITYAD')
                        and decode(c.act_cd, 'MOTYDO', a.mty_pkup_yd_cd, a.mty_rtn_yd_cd) <> c.nod_cd)

#end
      ) A2
ON (A1.BKG_NO = A2.BKG_NO AND A1.COST_SRC_SYS_CD = A2.COST_SRC_SYS_CD)
WHEN MATCHED THEN
	UPDATE SET 
		A1.IF_DT = A2.IF_DT
	,	A1.IF_RMK = A2.IF_RMK
	,	A1.UPD_USR_ID = A2.UPD_USR_ID
	,	A1.UPD_DT = A2.UPD_DT
WHEN NOT MATCHED THEN
	INSERT(
		A1.BKG_NO
	,	A1.COST_SRC_SYS_CD
	,	A1.IF_DT
	,	A1.IF_RMK
	,	A1.CRE_USR_ID
	,	A1.CRE_DT
	,	A1.UPD_USR_ID
	,	A1.UPD_DT
	) VALUES( 
		A2.BKG_NO
	,	A2.COST_SRC_SYS_CD
	,	A2.IF_DT
	,	A2.IF_RMK
	,	A2.CRE_USR_ID
	,	A2.CRE_DT
	,	A2.UPD_USR_ID
	,	A2.UPD_DT)			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="cost_src_sys_cd" type="12" value="" out="N"/>
				<param name="if_rmk" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
