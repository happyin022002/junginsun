<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralBookingSearchDBDAOsearchRcvrBkgReviseNoticeRSQL">
			<desc><![CDATA[Booking Revise Notice 수신 대상을 조회한다.
Eml addres 별로 bkg no들을 조회한다.]]></desc>
			<sql><![CDATA[
WITH NTC AS
    (SELECT BK.BKG_NO, NTC_EML 
       FROM BKG_BOOKING BK, BKG_NTC_HIS NTC
      WHERE BK.BKG_NO = NTC.BKG_NO
        AND NTC.NTC_KND_CD = 'BK'   
        AND NTC.NTC_VIA_CD = 'M'
        AND NTC.HIS_SEQ = (SELECT MAX(HIS_SEQ) 
                             FROM BKG_NTC_HIS NTC2, COM_EML_SND_INFO EML
                            WHERE NTC2.BKG_NO     = NTC.BKG_NO
                              AND NTC2.NTC_VIA_CD = NTC.NTC_VIA_CD
                              AND NTC2.NTC_KND_CD = NTC.NTC_KND_CD
                              AND NTC2.SND_ID = EML.EML_SND_NO 
                              AND EML.EML_PROC_STS_CD = 3
                         )
        AND BK.BKG_NO IN (
#if (${bkgNos} != '')
       #foreach($bkgNosVal IN ${bkgNos})        
          #if($velocityCount < $bkgNos.size()) '$bkgNosVal', #else '$bkgNosVal' #end
       #end
#end
	   )	
    )
SELECT NTC_EML
     , BKG_JOIN_FNC( CURSOR(SELECT NTC2.BKG_NO
                              FROM NTC NTC2
                             WHERE NTC.NTC_EML = NTC2.NTC_EML)) BKG_NOS
	 , COUNT(1) CNT
  FROM NTC
 GROUP BY NTC_EML			]]></sql>
			<params>
			</params>
		</query>
	</querys>
</sqls>
