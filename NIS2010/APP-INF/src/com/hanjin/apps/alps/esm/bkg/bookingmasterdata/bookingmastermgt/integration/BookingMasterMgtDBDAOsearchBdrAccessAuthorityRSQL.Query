<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BookingMasterMgtDBDAOsearchBdrAccessAuthorityRSQL">
			<desc><![CDATA[BDR 권한 조회]]></desc>
			<sql><![CDATA[
SELECT 
         A.ATTR_CTNT3 AS CLOSE_AUTH
        ,A.ATTR_CTNT2 AS OPEN_AUTH
        ,A.ATTR_CTNT1 AS USR_ID
        ,B.USR_NM 
        ,B.OFC_CD 
        ,A.UPD_DT
        ,''SEARCH_BOX
        ,''SEARCH_OPTION 
        ,A.HRD_CDG_ID_SEQ
        ,''CRE_USR_ID
        ,''UPD_USR_ID
        ,''SHEET_USR_ID
    FROM BKG_HRD_CDG_CTNT A, COM_USER B
    WHERE A.HRD_CDG_ID='BDR_MAN_USER'
    AND A.ATTR_CTNT1 = B.USR_ID(+)
    AND A.ATTR_CTNT4 ='N'
    
    


#if (${sheet_usr_id} != '') 
		AND A.ATTR_CTNT1 = @[sheet_usr_id]
#else


    #if (${search_box} != '')    
    	#if (${search_option} == 'N') 
    		AND UPPER(B.USR_NM) LIKE UPPER(@[search_box])|| '%'
		
    		
    	#else 
    		AND UPPER(A.ATTR_CTNT1) LIKE UPPER(@[search_box])|| '%'
    	#end
    
    #end 
    


#end			]]></sql>
			<params>
				<param name="sheet_usr_id" type="12" value="" out="N"/>
				<param name="search_box" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
