<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SCRateProposalDBDAORsltPriSurchargeAdjustLocationGroupDetailVORSQL">
			<desc><![CDATA[      Surcharge Adjust Location 상세 조회]]></desc>
			<sql><![CDATA[
SELECT loc_cd,loc_nm
	,prop_no,amdt_seq,svc_scp_cd,grp_loc_seq
FROM (
	SELECT loc_mdm.loc_cd,loc_mdm.loc_nm
		,loc_dtl.prop_no,loc_dtl.amdt_seq,loc_dtl.svc_scp_cd,loc_dtl.grp_loc_seq
	FROM pri_sp_scp_grp_loc_dtl loc_dtl
		, mdm_location loc_mdm
	WHERE loc_dtl.prop_no = @[prop_no]
		AND loc_dtl.amdt_seq = @[amdt_seq]
		AND loc_dtl.svc_scp_cd = @[svc_scp_cd]
		AND loc_dtl.grp_loc_seq = @[grp_loc_seq]
		AND loc_dtl.loc_cd = loc_mdm.loc_cd
	    AND 'G' = @[rout_loc_tp_cd]
	UNION ALL
	SELECT loc_mdm.loc_cd , loc_mdm.loc_nm
	,'' AS prop_no,0 amdt_seq,'' AS svc_scp_cd,0 AS grp_loc_seq
	FROM mdm_location loc_mdm
	WHERE 	loc_mdm.loc_cd = @[loc_cd]
		AND 'L' = @[rout_loc_tp_cd]
)
ORDER BY loc_cd			]]></sql>
			<params>
				<param name="prop_no" type="12" value="" out="N"/>
				<param name="amdt_seq" type="12" value="" out="N"/>
				<param name="svc_scp_cd" type="12" value="" out="N"/>
				<param name="grp_loc_seq" type="12" value="" out="N"/>
				<param name="rout_loc_tp_cd" type="12" value="" out="N"/>
				<param name="loc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
