<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="WeeklyCMDBDAOSearchOwnTMLPfmcListVORSQL">
			<desc><![CDATA[ESM_COA_0118 화면 조회 결과 쿼리.
2010.08.25 이윤정 [CHM-201005513] 현재 입력건의 경우 ESM_COA_0118 화면상 "Curr."를 Local AMT가 아닌 Unit Cost에 대한 Curr.로 사용 변경]]></desc>
			<sql><![CDATA[
SELECT A.COST_YRMON 
  	  ,A.TML_CD 
  	  ,A.TML_TRF_ITM_CD 
  	  ,C.TML_TRF_ITM_DESC 
  	  ,A.TML_TRF_DTL_CD 
  	  ,C.TML_TRF_DTL_DESC 
  	  ,A.CNTR_TPSZ_CD 
  	  ,A.COA_COST_SRC_CD 
  	  ,B.COA_COST_SRC_CD_NM 
  	  ,A.TML_UT_CD 
  	  ,A.LOCL_CURR_CD 
  	 -- ,A.MN_ITM_CHK_FLG 
  	 -- ,A.MN_TRF_DTL_CD 
  	 -- ,A.TML_QTY 
  	 -- ,A.LOCL_TML_AMT 
  	 -- ,A.TML_USD_AMT 
  	  ,A.TML_UC_AMT 
	 -- ,A.CRE_USR_ID 
	 -- ,A.CRE_DT 
	 -- ,A.UPD_USR_ID 
	 -- ,A.UPD_DT 
	  ,A.UC_SLAN_CD
 FROM COA_INTER_OWN_TML_COST A, COA_COST_SRC_ACCT B, COA_TML_TRF_GRP C
WHERE A.COA_COST_SRC_CD = B.COA_COST_SRC_CD 
  AND A.TML_CD = C.TML_CD  
  AND A.TML_TRF_ITM_CD = C.TML_TRF_ITM_CD  
  AND A.TML_TRF_DTL_CD = C.TML_TRF_DTL_CD  

  #if (${f_cost_yrmon} != '') 
  AND A.COST_YRMON = @[f_cost_yrmon]
 #end
  
  #if (${f_tml_cd} != '') 
  AND A.TML_CD = @[f_tml_cd]
 #end
  
  #if (${f_cntr_tpsz_cd} != '') 
  AND A.CNTR_TPSZ_CD = @[f_cntr_tpsz_cd]
 #end
ORDER BY COST_YRMON, TML_CD, TML_TRF_ITM_CD, TML_TRF_DTL_CD, CNTR_TPSZ_CD			]]></sql>
			<params>
				<param name="f_cost_yrmon" type="12" value="" out="N"/>
				<param name="f_tml_cd" type="12" value="" out="N"/>
				<param name="f_cntr_tpsz_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
