<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AuthorizationAssignmentDBDAOChangeUserVORSQL">
			<desc><![CDATA[Change User]]></desc>
			<sql><![CDATA[
SELECT A.USR_ID 
     , A.USR_NM
     , A.OFC_CD
	 , A.USR_PWD
     , B.SREP_CD
FROM  COM_USER A
	, MDM_SLS_REP B
WHERE A.USR_ID = @[usr_id]
AND   A.USR_ID = B.EMPE_CD(+)
AND   A.USE_FLG = 'Y'			]]></sql>
			<params>
				<param name="usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
