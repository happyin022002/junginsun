<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ServiceScopeDBDAOCheckCodeValueRSQL">
			<desc><![CDATA[조회 조건 Code의 조회]]></desc>
			<sql><![CDATA[
#if (${org_dest_cd} == 'O' && ${org_tp_cd} == 'C')
	SELECT DECODE(COUNT(*), 0, 'N', 'Y') AS FLAG
	  FROM MDM_COUNTRY
	 WHERE CNT_CD = @[cd]
	   AND DELT_FLG = 'N'
#elseif (${org_dest_cd} == 'O' && ${org_tp_cd} == 'S')
	SELECT DECODE(COUNT(*), 0, 'N', 'Y') AS FLAG
	  FROM MDM_SUBCONTINENT
	 WHERE SCONTI_CD = @[cd]
	  AND DELT_FLG = 'N'
#elseif (${org_dest_cd} == 'O' && ${org_tp_cd} == 'R')
	SELECT DECODE(COUNT(*), 0, 'N', 'Y') AS FLAG
	  FROM MDM_REGION
	 WHERE RGN_CD = @[cd]
	   AND DELT_FLG = 'N'
#elseif (${org_dest_cd} == 'O' && ${org_tp_cd} == 'L')
	SELECT DECODE(COUNT(*), 0, 'N', 'Y') AS FLAG
	  FROM MDM_LOCATION
	 WHERE LOC_CD = @[cd]
	   AND DELT_FLG = 'N'
#elseif (${org_dest_cd} == 'D' && ${dest_tp_cd} == 'C')
	SELECT DECODE(COUNT(*), 0, 'N', 'Y') AS FLAG
	  FROM MDM_COUNTRY
	 WHERE CNT_CD = @[cd]
	   AND DELT_FLG = 'N'
#elseif (${org_dest_cd} == 'D' && ${dest_tp_cd} == 'S')
	SELECT DECODE(COUNT(*), 0, 'N', 'Y') AS FLAG
	  FROM MDM_SUBCONTINENT
	 WHERE SCONTI_CD = @[cd]
	   AND DELT_FLG = 'N'
#elseif (${org_dest_cd} == 'D' && ${dest_tp_cd} == 'R')
	SELECT DECODE(COUNT(*), 0, 'N', 'Y') AS FLAG
	  FROM MDM_REGION
	 WHERE RGN_CD = @[cd]
	   AND DELT_FLG = 'N'
#elseif (${org_dest_cd} == 'D' && ${dest_tp_cd} == 'L')
	SELECT DECODE(COUNT(*), 0, 'N', 'Y') AS FLAG
	  FROM MDM_LOCATION
	 WHERE LOC_CD = @[cd]
	   AND DELT_FLG = 'N'
#end			]]></sql>
			<params>
				<param name="cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
