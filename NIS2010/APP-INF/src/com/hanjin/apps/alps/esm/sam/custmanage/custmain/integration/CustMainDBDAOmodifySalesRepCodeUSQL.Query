<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CustMainDBDAOmodifySalesRepCodeUSQL">
			<desc><![CDATA[Sales Rep update]]></desc>
			<sql><![CDATA[
#if (${ibflag} == 'U')

	UPDATE BKG_CUST_SLS_REP
	SET DP_SEQ = '0',
		DELT_FLG = 'N',
		SREP_CUST_CLSS_CD =  NVL(SREP_CUST_CLSS_CD,'C'), 
		UPD_USR_ID =  @[user_id],
		UPD_DT =  SYSDATE
	WHERE SREP_CD = @[srep_cd]
	  AND CUST_CNT_CD = @[cust_cnt_cd]
	  AND CUST_SEQ = @[cust_seq] 	 

#elseif (${ibflag} == 'D')

	UPDATE BKG_CUST_SLS_REP
	SET DELT_FLG = 'Y',
	    UPD_USR_ID = @[user_id],
		UPD_DT = SYSDATE
	WHERE SREP_CD = @[srep_cd]
	  AND CUST_CNT_CD = @[cust_cnt_cd]
	  AND CUST_SEQ = @[cust_seq] 	

#end			]]></sql>
			<params>
				<param name="user_id" type="12" value="" out="N"/>
				<param name="srep_cd" type="12" value="" out="N"/>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
				<param name="cust_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
