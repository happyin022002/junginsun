<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RFARateQuotationDBDAOPriRqRtCmdtRoutEstmCostDetailVOUSQL">
			<desc><![CDATA[pri_rq_rt를 일괄 조정한다.]]></desc>
			<sql><![CDATA[
MERGE INTO PRI_RQ_RT_CMDT_ROUT A 
USING (
        SELECT QTTN_NO, QTTN_VER_NO
        ,CMDT_HDR_SEQ, ROUT_SEQ
        ,PRC_CGO_TP_CD AS CGO_TP_CD
        ,RAT_UT_CD
        ,PRS_RESPB_CMPB_AMT
        ,PRS_PFIT_CMPB_AMT
        ,PRS_RESPB_OPB_AMT
        FROM   (       
        SELECT  A.QTTN_NO, A.QTTN_VER_NO
              ,A.CMDT_HDR_SEQ, A.ROUT_SEQ
              ,B.PRC_CGO_TP_CD, B.RAT_UT_CD
              ,B.PRS_RESPB_CMPB_AMT, B.PRS_PFIT_CMPB_AMT, B.PRS_RESPB_OPB_AMT
		      ,ROW_NUMBER() OVER(PARTITION BY A.QTTN_NO,A.QTTN_VER_NO,A.CMDT_HDR_SEQ,A.ROUT_SEQ 
	               ORDER BY DECODE(B.PRC_CGO_TP_CD,'DR','00','RF','01','DG','02','AK','03','04')
	           || DECODE(B.RAT_UT_CD, 'D4','00', 'D5','01','02')   
	           || DECODE(M.CNTR_SZ_CD,'4','00','2','01','3','02','5','03','6','04','7','05','8','06','9','07','W','08','X','09','10')
	           ) RNK
         FROM  PRI_RQ_RT_CMDT_ROUT A
              ,PRI_RQ_RT B
              ,PRI_RAT_UT M
        WHERE  A.QTTN_NO = @[qttn_no]
          AND  A.QTTN_VER_NO = @[qttn_ver_no]
          AND  B.CMDT_HDR_SEQ = @[cmdt_hdr_seq]
          AND  B.ROUT_SEQ = @[rout_seq]
          AND  B.RT_SEQ = @[rt_seq]
          AND  A.QTTN_NO = B.QTTN_NO
          AND  A.QTTN_VER_NO = B.QTTN_VER_NO
          AND  A.CMDT_HDR_SEQ = B.CMDT_HDR_SEQ
          AND  A.ROUT_SEQ = B.ROUT_SEQ
          AND  B.RAT_UT_CD = M.RAT_UT_CD
          AND  B.PRS_RESPB_CMPB_AMT IS NOT NULL
          )   
          WHERE RNK = 1   
    ) B
ON (
   A.QTTN_NO = B.QTTN_NO
   AND  A.QTTN_VER_NO = B.QTTN_VER_NO
   AND  A.CMDT_HDR_SEQ = B.CMDT_HDR_SEQ
   AND  A.ROUT_SEQ = B.ROUT_SEQ
)
WHEN MATCHED THEN
UPDATE SET A.PRS_RAT_UT_CD = B.RAT_UT_CD
        ,A.PRS_CGO_TP_CD = B.CGO_TP_CD
        ,A.PRS_ESTM_RESPB_CMPB_AMT = B.PRS_RESPB_CMPB_AMT
        ,A.PRS_ESTM_PFIT_CMPB_AMT = B.PRS_PFIT_CMPB_AMT
        ,A.PRS_ESTM_RESPB_OPB_AMT = B.PRS_RESPB_OPB_AMT
        ,PRS_UPD_DT = SYSDATE
   			]]></sql>
			<params>
				<param name="qttn_no" type="12" value="" out="N"/>
				<param name="qttn_ver_no" type="12" value="" out="N"/>
				<param name="cmdt_hdr_seq" type="2" value="" out="N"/>
				<param name="rout_seq" type="12" value="" out="N"/>
				<param name="rt_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
