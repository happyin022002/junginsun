<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="TransferOrderIssueDBDAOcancelBkgTroDtlBySplitUSQL">
			<desc><![CDATA[cancelBkgTroDtlBySplit]]></desc>
			<sql><![CDATA[
UPDATE BKG_TRO_DTL A
   SET CXL_FLG = 'Y'
	  ,SPLIT_RMK = 
	  (SELECT BKG_NO
	     FROM SCE_TRO_MAPG B
	    WHERE B.BKG_NO IN (${target_bkg_no})
	      AND B.IO_BND_CD = A.IO_BND_CD
	      AND B.TRO_SEQ = A.TRO_SEQ
	      AND B.TRO_SUB_SEQ = A.TRO_SUB_SEQ
	      AND ROWNUM = 1
	  )
      ,UPD_USR_ID = @[usr_id]
	  ,UPD_DT = SYSDATE
 WHERE BKG_NO = @[source_bkg_no]
   AND (BKG_NO, IO_BND_CD, TRO_SEQ, TRO_SUB_SEQ)
       NOT IN
       (
       SELECT BKG_NO
             ,IO_BND_CD
             ,TRO_SEQ
             ,TRO_SUB_SEQ
         FROM SCE_TRO_MAPG B
        WHERE A.BKG_NO = B.BKG_NO
          AND A.IO_BND_CD = B.IO_BND_CD
          AND A.TRO_SEQ = B.TRO_SEQ
          AND A.TRO_SUB_SEQ = B.TRO_SUB_SEQ
       )   
   AND EXISTS (SELECT 'X'
                 FROM BKG_TRO C
                WHERE C.BKG_NO = A.BKG_NO
                  AND C.TRO_SEQ = A.TRO_SEQ
                  AND C.IO_BND_CD = A.IO_BND_CD
                  AND C.CFM_FLG = 'Y')			]]></sql>
			<params>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="source_bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
