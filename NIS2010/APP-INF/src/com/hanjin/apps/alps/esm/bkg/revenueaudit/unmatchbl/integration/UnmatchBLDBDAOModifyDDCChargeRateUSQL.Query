<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="UnmatchBLDBDAOModifyDDCChargeRateUSQL">
			<desc><![CDATA[BKG에 Rating된 DDC Charge와 Autorating된 DDC Charge의 Currency가 일치하지 않는 경우
Unit Amount 일치시 DDC Charge에 대한 Local - USD 환산 요율표에 따라 Autorating 결과를 Update한다.]]></desc>
			<sql><![CDATA[
MERGE INTO BKG_REV_AUD_CHG_TMP TMP
      USING  ( SELECT  T.OFT_CMB_SEQ,
                        T.CHG_CD,
                        T.RAT_UT_CD,
                        T.CGO_CATE_CD,
                        DECODE(C.CURR_CD, 'USD', H.CURR_CD, H.LOCL_CURR_CD) CURR_CD,
                        DECODE(C.CURR_CD, 'USD', H.CHG_UT_AMT, H.LOCL_CHG_UT_AMT) CHG_UT_AMT
                FROM BKG_REV_AUD_CHG_TMP T, BKG_BOOKING B, BKG_RATE R, BKG_CHG_RT C,BKG_REV_AUD_CHG_CONV H
                WHERE T.CHG_CD = 'DDC'
                AND T.BKG_NO = B.BKG_NO
                AND T.BKG_NO = R.BKG_NO
                AND T.BKG_NO = C.BKG_NO
                AND C.CHG_CD = 'DDC'
                AND C.RAT_UT_CD = T.RAT_UT_CD
                AND C.CGO_CATE_CD = T.CGO_CATE_CD
                AND C.CURR_CD <> T.CURR_CD
                AND B.SVC_SCP_CD = H.SVC_SCP_CD
                AND R.RT_APLY_DT BETWEEN EFF_FM_DT AND EFF_TO_DT
                AND H.CHG_CD = 'DDC'
                AND B.DEL_CD LIKE H.DEL_CNT_CD||'%'
                AND (SELECT CNTR_SZ_CD FROM PRI_RAT_UT WHERE RAT_UT_CD = T.RAT_UT_CD) = H.CNTR_SZ_CD
                AND T.CGO_CATE_CD = H.CGO_CATE_CD
                AND (
                     (C.CURR_CD = H.CURR_CD AND C.CHG_UT_AMT = H.CHG_UT_AMT)
                     OR
                     (C.CURR_CD = H.LOCL_CURR_CD AND C.CHG_UT_AMT = H.LOCL_CHG_UT_AMT)
                    ) 
             ) DDC
      ON (  TMP.OFT_CMB_SEQ = DDC.OFT_CMB_SEQ
        AND TMP.CHG_CD = DDC.CHG_CD
        AND TMP.RAT_UT_CD = DDC.RAT_UT_CD
        AND TMP.CGO_CATE_CD = DDC.CGO_CATE_CD
        )
WHEN MATCHED THEN
    UPDATE SET 
           TMP.CURR_CD = DDC.CURR_CD,
           TMP.CHG_UT_AMT = DDC.CHG_UT_AMT,
           TMP.CHG_AMT = DDC.CHG_UT_AMT * TMP.RAT_AS_QTY			]]></sql>
			<params>
			</params>
		</query>
	</querys>
</sqls>
