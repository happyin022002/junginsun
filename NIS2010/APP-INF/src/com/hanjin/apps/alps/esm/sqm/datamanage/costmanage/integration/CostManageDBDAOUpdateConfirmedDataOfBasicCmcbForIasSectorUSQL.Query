<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CostManageDBDAOUpdateConfirmedDataOfBasicCmcbForIasSectorUSQL">
			<desc><![CDATA[CHM-201639850 CMCB 수정 데이터 Creation 버튼 생성 CSR]]></desc>
			<sql><![CDATA[
MERGE INTO SQM_SCTR_CFM_QTA A1                                               
USING SQM_SCTR_PAIR_COST A2                                                                          
    ON (                                                                                   
                   A1.BSE_TP_CD                  = A2.BSE_TP_CD
               AND A1.BSE_YR                     = A2.BSE_YR
               AND A1.BSE_QTR_CD                 = A2.BSE_QTR_CD
               AND A1.TRD_CD                     = A2.TRD_CD
               AND A1.SUB_TRD_CD                 = A2.SUB_TRD_CD
               AND A1.RLANE_CD                   = A2.RLANE_CD
               AND A1.DIR_CD                     = A2.DIR_CD 
               AND A1.POL_CD                     = A2.POL_CD
               AND A1.POD_CD                     = A2.POD_CD
               AND A1.BSE_TP_CD                  = 'Q'
               AND A1.BSE_YR                     = @[bse_yr]
               AND A1.BSE_QTR_CD                 = @[bse_qtr_cd]
               AND SUBSTR(A1.QTA_RLSE_VER_NO,-2) = '02'
               
               AND A2.TRD_CD                     = @[trd_cd]
               AND A2.SUB_TRD_CD                 = @[sub_trd_cd]
               AND A2.RLANE_CD                   = @[rlane_cd]
               AND A2.DIR_CD                     = @[dir_cd] 
               AND A2.POL_CD                     = @[pol_cd]
               AND A2.POD_CD                     = @[pod_cd]
       )                                                                                   
WHEN MATCHED THEN                                                                        
                 UPDATE SET  A1.PA_CM_UC_AMT = A2.PA_CM_UC_AMT                    
                            ,A1.RA_CM_UC_AMT = A2.RA_CM_UC_AMT                
                            ,A1.UPD_USR_ID   = @[upd_usr_id]                                  
                            ,A1.UPD_DT       = SYSDATE
			]]></sql>
			<params>
				<param name="bse_yr" type="12" value="" out="N"/>
				<param name="bse_qtr_cd" type="12" value="" out="N"/>
				<param name="trd_cd" type="12" value="" out="N"/>
				<param name="sub_trd_cd" type="12" value="" out="N"/>
				<param name="rlane_cd" type="12" value="" out="N"/>
				<param name="dir_cd" type="12" value="" out="N"/>
				<param name="pol_cd" type="12" value="" out="N"/>
				<param name="pod_cd" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
