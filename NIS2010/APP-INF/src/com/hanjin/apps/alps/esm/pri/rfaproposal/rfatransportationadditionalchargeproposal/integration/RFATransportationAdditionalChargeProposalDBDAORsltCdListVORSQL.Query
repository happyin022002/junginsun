<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RFATransportationAdditionalChargeProposalDBDAORsltCdListVORSQL">
			<desc><![CDATA[공통코드 조회]]></desc>
			<sql><![CDATA[
#if (${code_tp} == 'LOC') 
SELECT LOC_CD CD
	 , LOC_NM NM
  FROM MDM_LOCATION
 WHERE LOC_CD = @[cd]
   AND DELT_FLG = 'N'

#elseif (${code_tp} == 'GRP') 
SELECT PRC_GRP_LOC_CD CD
     , PRC_GRP_LOC_DESC NM
  FROM PRI_RP_SCP_GRP_LOC
 WHERE SVC_SCP_CD 	= @[svc_scp_cd]
   AND PROP_NO 		= @[prop_no]
   AND AMDT_SEQ 	= @[amdt_seq]
   AND PRC_GRP_LOC_CD  = @[cd]

#elseif (${code_tp} == 'CUST') 
SELECT A.CUST_CNT_CD||LPAD(A.CUST_SEQ,6,0) CD
     , B.CUST_LGL_ENG_NM NM
  FROM PRI_RP_SCP_RT_ACT_CUST A
     , MDM_CUSTOMER B
 WHERE A.CUST_CNT_CD 	= B.CUST_CNT_CD
   AND A.CUST_SEQ 		= B.CUST_SEQ
   AND A.PROP_NO 		= @[prop_no]
   AND A.AMDT_SEQ 		= @[amdt_seq]
   AND A.SVC_SCP_CD 	= @[svc_scp_cd]
   AND A.CUST_CNT_CD 	= @[cd]
   AND A.CUST_SEQ 		= @[etc1]
   AND B.CNTR_DIV_FLG 	= 'Y'

#elseif (${code_tp} == 'ARBI_DUP') 
SELECT PROP_NO CD
  FROM PRI_RP_SCP_TRSP_ADD_CHG
 WHERE PROP_NO = @[prop_no]
       AND AMDT_SEQ = @[amdt_seq]
       AND SVC_SCP_CD = @[svc_scp_cd]
       AND ADD_CHG_TP_CD = @[etc1]
       AND ORG_DEST_TP_CD = @[etc2]
       AND BSE_PORT_DEF_CD = @[etc4]
       AND ROUT_PNT_LOC_DEF_CD = @[etc6]
       AND RAT_UT_CD = @[etc7]
       AND PRC_CGO_TP_CD = @[etc8]
       AND PRC_TRSP_MOD_CD = @[etc9]
       AND RCV_DE_TERM_CD = @[etc10]
#end			]]></sql>
			<params>
				<param name="cd" type="12" value="" out="N"/>
				<param name="svc_scp_cd" type="12" value="" out="N"/>
				<param name="prop_no" type="12" value="" out="N"/>
				<param name="amdt_seq" type="12" value="" out="N"/>
				<param name="etc1" type="12" value="" out="N"/>
				<param name="etc2" type="12" value="" out="N"/>
				<param name="etc4" type="12" value="" out="N"/>
				<param name="etc6" type="12" value="" out="N"/>
				<param name="etc7" type="12" value="" out="N"/>
				<param name="etc8" type="12" value="" out="N"/>
				<param name="etc9" type="12" value="" out="N"/>
				<param name="etc10" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
