<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RFAProposalMainDBDAOSearchProposalRequestListVORSQL">
			<desc><![CDATA[RFAProposalMainDBDAO + SearchProposalRequestListVORSQL]]></desc>
			<sql><![CDATA[
SELECT  
     -----------------------------------------------------------------------------------------------------------------------
     -- RFA NO 
     -----------------------------------------------------------------------------------------------------------------------  
		HDR.RFA_NO                                                                           AS RFA_NO
      , TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI')												 AS SRCH_DT				--조회 시점
      , MN.AMDT_SEQ                                                                          AS AMDT_SEQ
      , MN.PROP_NO                                                                           AS PROP_NO
	  , PROG.PROP_PROG_SEQ																	 AS PROP_PROG_SEQ
     -----------------------------------------------------------------------------------------------------------------------
     -- Status
     -----------------------------------------------------------------------------------------------------------------------  
      , MN.PROP_STS_CD                                                      			 	 AS PROP_STS_CD
      , (SELECT INTG_CD_VAL_DP_DESC
           FROM COM_INTG_CD_DTL
          WHERE INTG_CD_VAL_CTNT = MN.PROP_STS_CD
            AND INTG_CD_ID = 'CD01722')                                                      AS PROP_STS_NM
     -----------------------------------------------------------------------------------------------------------------------
     -- Customer
     ----------------------------------------------------------------------------------------------------------------------- 
      , (SELECT INTG_CD_VAL_DESC 
           FROM COM_INTG_CD_DTL 
          WHERE INTG_CD_VAL_CTNT = MN.PRC_CTRT_CUST_TP_CD 
            AND INTG_CD_ID = 'CD00697') 													 AS PRC_CTRT_CUST_TP_NM
	  , MN.CTRT_CUST_CNT_CD																	 AS CTRT_CUST_CNT_CD
      , MN.CTRT_CUST_SEQ											                         AS CTRT_CUST_SEQ
      , MN.CTRT_CUST_CNT_CD||LPAD(TO_CHAR(MN.CTRT_CUST_SEQ),6,'0')                           AS CTRT_CUST_CD
      , (SELECT CUST_LGL_ENG_NM
          FROM MDM_CUSTOMER
         WHERE CUST_CNT_CD = MN.CTRT_CUST_CNT_CD
           AND CUST_SEQ = MN.CTRT_CUST_SEQ )                                                 AS CTRT_CUST_NM
     -----------------------------------------------------------------------------------------------------------------------
     -- Request
     ----------------------------------------------------------------------------------------------------------------------- 
       , (SELECT SREP_CD
          FROM MDM_SLS_REP
         WHERE EMPE_CD = PROG.PROG_USR_ID
           AND SREP_STS_CD = 'N' 
           AND ROWNUM = 1 )                                                                 AS PROP_SREP_CD
     , PROG.PROG_OFC_CD                                                                     AS PROP_OFC_CD 
     , TO_CHAR( PROG.PROG_DT  ,'YYYYMMDD')                                                  AS PROP_RQST_DT 
     -----------------------------------------------------------------------------------------------------------------------
     -- Approval
     ----------------------------------------------------------------------------------------------------------------------- 
     , (SELECT PROG_USR_ID
                  FROM PRI_RP_PROG
                 WHERE PROP_NO = PROG.PROP_NO
                   AND AMDT_SEQ = PROG.AMDT_SEQ
                   AND PROP_PROG_SEQ = PROG.PROP_PROG_SEQ + 1 
                   AND PROP_STS_CD = 'A')                                                   AS PROP_APRO_STAFF_CD
     , (SELECT C.USR_NM
          FROM COM_USER C
         WHERE C.USR_ID = (SELECT PROG_USR_ID
                  FROM PRI_RP_PROG
                 WHERE PROP_NO = PROG.PROP_NO
                   AND AMDT_SEQ = PROG.AMDT_SEQ
                   AND PROP_PROG_SEQ = PROG.PROP_PROG_SEQ + 1 
                   AND PROP_STS_CD = 'A'))                            						AS PROP_APRO_STAFF_NM
     , (
         SELECT PROG_OFC_CD
           FROM PRI_RP_PROG
          WHERE PROP_NO = PROG.PROP_NO
            AND AMDT_SEQ = PROG.AMDT_SEQ
            AND PROP_PROG_SEQ = PROG.PROP_PROG_SEQ + 1 
            AND PROP_STS_CD = 'A')                                     						AS PROP_APRO_OFC_CD
     , TO_CHAR( (
         SELECT PROG_DT
           FROM PRI_RP_PROG
          WHERE PROP_NO = PROG.PROP_NO
            AND AMDT_SEQ = PROG.AMDT_SEQ
            AND PROP_PROG_SEQ = PROG.PROP_PROG_SEQ + 1
            AND PROP_STS_CD = 'A'
                )  ,'YYYYMMDD')                                                             AS PROP_APRO_DT       
     -----------------------------------------------------------------------------------------------------------------------
     -- SVC Scope
     ----------------------------------------------------------------------------------------------------------------------- 

	 , PRI_UTILS_PKG.JOIN_ROWS_VAR_FUNC(CURSOR(SELECT DISTINCT SCP.SVC_SCP_CD
                                  			     FROM PRI_RP_SCP_MN SCP
                                 				WHERE SCP.PROP_NO = MN.PROP_NO
  								   				  AND SCP.AMDT_SEQ = MN.AMDT_SEQ  ) , ', ') AS SVC_SCP_CD 

     -----------------------------------------------------------------------------------------------------------------------
     -- Date
     -----------------------------------------------------------------------------------------------------------------------   
      , TO_CHAR (MN.EFF_DT, 'YYYYMMDD')                                                   	AS EFF_DT
      , TO_CHAR (MN.EXP_DT, 'YYYYMMDD')                                                   	AS EXP_DT
      , TO_CHAR (MN.CRE_DT, 'YYYYMMDD')                                                     AS CRE_DT
	  ----------------------------------------------------------------------------------------------------  
	  -- PARAM VO 
	  ----------------------------------------------------------------------------------------------------  
	  ,@[dt_type] 																			AS DT_TYPE		-- PARAM VO 
	  ---------------------------------------------------------------------------------------------------- 
  FROM  PRI_RP_HDR HDR     
      , PRI_RP_MN MN                    
      , (
          SELECT T.*
            FROM
                (SELECT  T1.*
                       --, DENSE_RANK() OVER (PARTITION BY PROP_NO, AMDT_SEQ ORDER BY PROP_NO, AMDT_SEQ , PROP_PROG_SEQ DESC) AS SEQ  -- 현재의 정보
                       , (SELECT MAX(PROP_PROG_SEQ) FROM PRI_RP_PROG A WHERE A.PROP_NO = T1.PROP_NO AND A.AMDT_SEQ = T1.AMDT_SEQ AND A.PROP_STS_CD = T1.PROP_STS_CD) AS  MAX_PROP_PROG_SEQ 
                   FROM PRI_RP_PROG T1 -- MAX : PROP_STS_CD -  Q
                 WHERE 1 = 1   
             	-----------------------------------------------------------------------------------------------------------------------
             	-- Request Date
             	----------------------------------------------------------------------------------------------------------------------- 
                 AND PROG_DT >= TO_DATE(@[eff_dt], 'YYYY-MM-DD')        
                 AND PROG_DT <= TO_DATE(@[exp_dt], 'YYYY-MM-DD') + 0.99999
             	-----------------------------------------------------------------------------------------------------------------------                    
                     AND PROP_STS_CD IN ( 'Q' )                                                   
                   ) T
               --WHERE SEQ < 2  
               WHERE T.PROP_PROG_SEQ = T.MAX_PROP_PROG_SEQ              
        ) PROG   
        

        -- 1. MAX : PROP_STS_CD = Q   AND PROG_DT BETWEEND START_DATE AND END_DATE
        -- 2. MAX : PROP_STS_CD = R/A AND PROG_DT BETWEEND START_DATE AND END_DATE     
   WHERE HDR.PROP_NO 		= MN.PROP_NO
     AND MN.PROP_NO         = PROG.PROP_NO
     AND MN.AMDT_SEQ        = PROG.AMDT_SEQ
     AND MN.RFA_CTRT_TP_CD IN ('C','S')			-- G (Guideline 제외)
     AND MN.PROP_STS_CD IN ('Q', 'A' ,'R')		-- I (Iinitial 제외)
-------------------------------------------------------------------------------------------------------  조회 조건 추가 끝

#if (${rfa_no} != '')
	AND   HDR.RFA_NO = @[rfa_no]						-- RFA No
#end
#if (${prop_no} != '')
	AND   MN.PROP_NO = @[prop_no]						-- Proposal No
#end
#if (${prop_sts_cd} != '')
	AND MN.PROP_STS_CD = @[prop_sts_cd]					-- Status code
#end
#if (${prop_ofc_cd} != '')
	AND PROG.PROG_OFC_CD = @[prop_ofc_cd]				-- Request Office
#end
#if (${prop_srep_cd} != '')
    AND (SELECT SREP_CD
          FROM MDM_SLS_REP
         WHERE EMPE_CD = PROG.PROG_USR_ID
           AND SREP_STS_CD = 'N' 
           AND ROWNUM = 1 ) = @[prop_srep_cd]        	-- Sales Rep.
#end
#if (${prop_apro_staff_cd} != '')

	AND (SELECT PROG_USR_ID
                  FROM PRI_RP_PROG
                 WHERE PROP_NO = PROG.PROP_NO
                   AND AMDT_SEQ = PROG.AMDT_SEQ
                   AND PROP_PROG_SEQ = PROG.PROP_PROG_SEQ + 1 
                   AND PROP_STS_CD = 'A') IN (SELECT USR_ID 
                                                FROM COM_USER 
                                               WHERE UPPER(USR_NM) LIKE UPPER('%'||@[prop_apro_staff_cd]||'%'))		-- PROP_APRO_STAFF_CD 
#end
#if (${prop_apro_ofc_cd} != '')
	AND	(SELECT PROG_OFC_CD
           FROM PRI_RP_PROG
          WHERE PROP_NO = PROG.PROP_NO
            AND AMDT_SEQ = PROG.AMDT_SEQ
            AND PROP_PROG_SEQ = PROG.PROP_PROG_SEQ + 1 
            AND PROP_STS_CD = 'A') = @[prop_apro_ofc_cd]			-- Approval Office
#end
#if (${ctrt_cust_cnt_cd} != '' && ${ctrt_cust_seq} != '') 
	AND MN.CTRT_CUST_CNT_CD = @[ctrt_cust_cnt_cd] 					-- Customer
	AND MN.CTRT_CUST_SEQ    = @[ctrt_cust_seq]    					-- Customer
#end
-------------------------------------------------------------------------------------------------------  조회 조건 추가 끝
  ORDER BY MN.PROP_NO
         , MN.AMDT_SEQ			]]></sql>
			<params>
				<param name="dt_type" type="12" value="" out="N"/>
				<param name="eff_dt" type="12" value="" out="N"/>
				<param name="exp_dt" type="12" value="" out="N"/>
				<param name="rfa_no" type="12" value="" out="N"/>
				<param name="prop_no" type="12" value="" out="N"/>
				<param name="prop_sts_cd" type="12" value="" out="N"/>
				<param name="prop_ofc_cd" type="12" value="" out="N"/>
				<param name="prop_srep_cd" type="12" value="" out="N"/>
				<param name="prop_apro_staff_cd" type="12" value="" out="N"/>
				<param name="prop_apro_ofc_cd" type="12" value="" out="N"/>
				<param name="ctrt_cust_cnt_cd" type="12" value="" out="N"/>
				<param name="ctrt_cust_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
