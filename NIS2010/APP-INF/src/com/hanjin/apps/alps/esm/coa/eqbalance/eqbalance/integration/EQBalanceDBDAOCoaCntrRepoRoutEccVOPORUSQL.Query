<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="EQBalanceDBDAOCoaCntrRepoRoutEccVOPORUSQL">
			<desc><![CDATA[From(DEL) ECC 수정]]></desc>
			<sql><![CDATA[
MERGE INTO COA_CNTR_REPO_ROUT_ECC B1
   USING (SELECT @[cost_yrmon] COST_YRMON
                ,@[rcc_cd] RCC_CD
                ,@[ecc_cd] ECC_CD
                ,DECODE(SUBSTR(@[cntr_tpsz_cd], 1, 1), 'D', 'D', REPLACE(@[cntr_tpsz_cd], 'RD', 'R')) CNTR_TPSZ_CD
                ,DECODE(SUBSTR(@[cntr_tpsz_cd], 1, 1), 'R', 'Y', 'N') SPCL_CGO_RF_FLG
                ,DECODE(@[por_repo_flg], 1, 'Y', 'N') POR_REPO_FLG
                ,@[cre_usr_id] CRE_USR_ID
                ,SYSDATE CRE_DT
                ,@[upd_usr_id] UPD_USR_ID
                ,SYSDATE UPD_DT				
            FROM DUAL) B2
   ON (    B1.COST_YRMON = B2.COST_YRMON
       AND B1.RCC_CD = B2.RCC_CD
       AND B1.ECC_CD = B2.ECC_CD
       AND B1.CNTR_TPSZ_CD = B2.CNTR_TPSZ_CD )
   WHEN MATCHED THEN
      UPDATE
         SET B1.POR_REPO_FLG = B2.POR_REPO_FLG, B1.UPD_USR_ID = B2.UPD_USR_ID, B1.UPD_DT = B2.UPD_DT
   WHEN NOT MATCHED THEN
      INSERT(B1.COST_YRMON, B1.RCC_CD, B1.ECC_CD, B1.CNTR_TPSZ_CD, B1.SPCL_CGO_RF_FLG, B1.POR_REPO_FLG, B1.CRE_USR_ID, B1.CRE_DT, B1.UPD_USR_ID, B1.UPD_DT)
      VALUES(B2.COST_YRMON, B2.RCC_CD, B2.ECC_CD, B2.CNTR_TPSZ_CD, B2.SPCL_CGO_RF_FLG, B2.POR_REPO_FLG, B2.CRE_USR_ID, B2.CRE_DT, B2.UPD_USR_ID, B2.UPD_DT)			]]></sql>
			<params>
				<param name="cost_yrmon" type="12" value="" out="N"/>
				<param name="rcc_cd" type="12" value="" out="N"/>
				<param name="ecc_cd" type="12" value="" out="N"/>
				<param name="cntr_tpsz_cd" type="12" value="" out="N"/>
				<param name="por_repo_flg" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
