<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralBookingSearchDBDAOsearchCustAdvisoryNoticeSendCtntRSQL">
			<desc><![CDATA[VVD 별로 기 등록된 Advisory Notice 정보를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT  TO_CHAR( sysdate , 'DD Month RRRR', 'NLS_DATE_LANGUAGE = English') AS SND_DT
      , BKG_JOIN_FNC(
              CURSOR (SELECT ' ' || CNTR.CNTR_NO 
                      FROM BKG_CUST_AVC_NTC_CNTR CNTR
                      WHERE BL_NO = @[bl_no] )
                     )   AS CNTR_NO
      , BR.IMPT_NTC_RMK RMK
	  , BR.EML_SUBJ_CTNT
	  , BR.FILE_DESC
FROM    BKG_CUST_AVC_NTC_RMK BR 
WHERE   BR.VSL_CD   = SUBSTR(@[vvd], 1,4) 
AND     BR.SKD_VOY_NO = SUBSTR(@[vvd], 5,4)
AND     BR.SKD_DIR_CD = SUBSTR(@[vvd], 9,1)
AND     BR.OFC_CD = @[ofc_cd]
AND     BR.RMK_USE_FLG = 'Y'			]]></sql>
			<params>
				<param name="bl_no" type="12" value="" out="N"/>
				<param name="vvd" type="12" value="" out="N"/>
				<param name="ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
