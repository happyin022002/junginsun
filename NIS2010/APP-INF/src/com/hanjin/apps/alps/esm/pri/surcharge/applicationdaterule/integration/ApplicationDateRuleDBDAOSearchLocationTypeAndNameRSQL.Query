<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ApplicationDateRuleDBDAOSearchLocationTypeAndNameRSQL">
			<desc><![CDATA[2011.07.07 [CHM-201112030-01] Application Date Rule Creation 시스템 개발 요청
                                                - Location 체크 및 Location Type 을 조회한다.]]></desc>
			<sql><![CDATA[
#if (${cd_length} == '5') 
SELECT LOC_CD CD
     , LOC_NM NM
     , 'L' ETC1
  FROM MDM_LOCATION
 WHERE LOC_CD= @[cd]
   AND DELT_FLG ='N'
#elseif (${cd_length} == '3')
SELECT RGN_CD CD
     , RGN_NM NM
     , 'R' ETC1
  FROM MDM_REGION
 WHERE RGN_CD = @[cd]
   AND DELT_FLG = 'N'
#elseif (${cd_length} == '2') 
SELECT CNT_CD CD
     , CNT_NM NM
     , 'C' ETC1  
  FROM MDM_COUNTRY
 WHERE CNT_CD = @[cd]
   AND DELT_FLG = 'N'
#elseif (${cd_length} == '1') 
SELECT CONTI_CD CD
     , CONTI_NM NM
     , 'O' ETC1  
  FROM MDM_CONTINENT
 WHERE CONTI_CD = @[cd]
   AND DELT_FLG = 'N'
#end			]]></sql>
			<params>
				<param name="cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
