<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BookingMasterMgtDBDAOSearchInBoundCustListRSQL">
			<desc><![CDATA[ 0192 B/L Customer Information in CRM 조회			]]></desc>
			<sql><![CDATA[
SELECT *
FROM ( SELECT     DELT_FLG 
                ,  UPPER(HISTORY_YN) AS HISTORY_YN
                ,  UPPER(CUST_CNT_CD) AS CUST_CNT_CD
                ,  CUST_SEQ
                ,  UPPER(CODE) AS CODE
                ,  UPPER(CUST_NM) AS CUST_NM
                ,  UPPER(CUST_ADDR) AS CUST_ADDR
                ,  UPPER(OFC_CD) AS OFC_CD
                ,  UPPER(CTY_NM) AS CTY_NM
                ,  UPPER(STE_CD) AS STE_CD
                ,  UPPER(ZIP_CD) AS ZIP_CD
                ,  UPPER(BCO_TYPE) AS BCO_TYPE
                ,  ROWNUM RNUM
                ,  TOTAL_CNT
                ,  ROWS_PER_PAGE
                ,  CURR_PAGE 
                ,  NO_USE_RSN
                ,  PHN_NO
                ,  SREP_NM
                ,  FRT_FWRD_FMC_NO
				,  R_BKLST
				,  LOCATION_CODE
       FROM (  SELECT 
				CASE WHEN A.SLS_DELT_EFF_DT IS NOT NULL THEN 'No Use'
					 WHEN NVL(C.CUST_RLSE_CTRL_FLG, 'N') = 'Y' THEN 'Financial Risk'
					 --WHEN A.VBS_CLSS_CD = '01' THEN 'PREMIUM' 
                     --WHEN A.DELT_FLG = 'Y' THEN 'DELETE'Request by Woori Hong 
					 ELSE 'Use'
				      END DELT_FLG
					, NVL((SELECT 'Y' FROM BKG_IB_CUST_CNTC C
							WHERE 1=1
							AND C.CUST_CNT_CD = B.CUST_CNT_CD
							AND C.CUST_SEQ = B.CUST_SEQ 
							AND (C.FAX_NO IS NOT NULL OR C.CNTC_EML IS NOT NULL)
							AND ROWNUM =1),'N') HISTORY_YN
					,  A.CUST_CNT_CD
					,  A.CUST_SEQ
					,  A.CUST_CNT_CD || A.CUST_SEQ CODE
					,  A.CUST_LGL_ENG_NM CUST_NM 
                    ,  (SELECT CD.INTG_CD_VAL_DP_DESC 
                          FROM COM_INTG_CD_DTL CD 
                         WHERE CD.INTG_CD_VAL_CTNT = A.SLS_DELT_EFF_RSN_CD
                           AND CD.INTG_CD_ID = 'CD03011') AS NO_USE_RSN
                   #if (${cust_nm} != '') 
                    , INSTR(A.CUST_LGL_ENG_NM,@[cust_nm]) 
                   #end
					,  B.BZET_ADDR CUST_ADDR
					,  A.OFC_CD
					,  B.CTY_NM
					,  B.STE_CD
					,  B.ZIP_CD
					,  A.RVIS_CNTR_CUST_TP_CD BCO_TYPE
					,  COUNT(A.CUST_CNT_CD) OVER() TOTAL_CNT
					,  '' ROWS_PER_PAGE
					,  '' CURR_PAGE
					,  D.PHN_NO PHN_NO
					,  E.SREP_NM SREP_NM
					,  A.FRT_FWRD_FMC_NO FRT_FWRD_FMC_NO
					,  DECODE(NVL(C.CUST_RLSE_CTRL_FLG, 'N'),'Y','Yes','No')   R_BKLST
					,  F.LOC_CD || '-' || F.LOC_NM as LOCATION_CODE
			FROM  MDM_CUSTOMER  A
				, MDM_CUST_ADDR B
		        , MDM_CR_CUST C
		        , MDM_CUST_CNTC_PNT D
		        , MDM_SLS_REP E
				, MDM_LOCATION F
			WHERE A.CUST_CNT_CD = B.CUST_CNT_CD 
			AND   A.CUST_SEQ    = B.CUST_SEQ
			AND A.CUST_CNT_CD = C.CUST_CNT_CD(+)
			AND A.CUST_SEQ = C.CUST_SEQ (+)
			AND A.CUST_CNT_CD = D.CUST_CNT_CD 
            AND A.CUST_SEQ = D.CUST_SEQ 
            AND A.SREP_CD = E.SREP_CD (+)
            AND   A.DELT_FLG ='N'
            AND   A.CNTR_DIV_FLG = 'Y' 
            AND   B.PRMRY_CHK_FLG ='Y'  
			AND   B.CUST_CNT_CD = @[cust_cnt_cd]
			AND A.LOC_CD = F.LOC_CD(+)
			#if (${cust_seq} != '') 
			AND   B.CUST_SEQ    = TO_NUMBER(@[cust_seq])
			#end

			#if (${bco_type} == 'FF') 
			AND   A.RVIS_CNTR_CUST_TP_CD = @[bco_type]
			#end

			#if (${cust_nm} != '')
  				#if(${include} != '')
                  AND (REGEXP_REPLACE(UPPER(A.CUST_LGL_ENG_NM),'[^a-zA-Z0-9]','')  LIKE '%'||REGEXP_REPLACE(UPPER(@[cust_nm]),'[^a-zA-Z0-9]','')||'%')
				#else
				  AND UPPER(A.CUST_LGL_ENG_NM) LIKE UPPER(@[cust_nm]) || '%'
				#end
			#end

			#if (${cust_addr} != '')
			AND   UPPER(B.BZET_ADDR)        LIKE '%'||UPPER(@[cust_addr])||'%'
			#end

			#if (${cty_nm} != '')
			AND   UPPER(B.CTY_NM)           = UPPER(@[cty_nm])
			#end

			#if (${ste_cd} != '')
			AND   UPPER(B.STE_CD)           = UPPER(@[ste_cd])
			#end

			#if (${zip_cd} != '')
			AND   UPPER(B.ZIP_CD)           = UPPER(@[zip_cd])
			#end

			#if (${ofc_cd} != '') 
  			AND A.OFC_CD = @[ofc_cd]
			#end
			
			#if (${area_cd} != '') 
 			AND SUBSTR(LTRIM(PHN_NO,'1-'),0,3)  = @[area_cd]  
			#end

			#if (${no_use} != '') 
  			AND (A.SLS_DELT_EFF_DT IS NULL OR A.SLS_DELT_EFF_DT IS NOT NULL)
			#else
			AND  (A.SLS_DELT_EFF_DT IS NULL AND A.DELT_FLG ='N')
			#end

			#if (${bklst} != '') 
 			AND NVL(C.CUST_RLSE_CTRL_FLG, 'N') IN('N', 'Y')
			#else
 			AND NVL(C.CUST_RLSE_CTRL_FLG, 'N') = 'N'
			#end

			#if (${cust_nm} != '') 
			ORDER BY DELT_FLG DESC,INSTR(A.CUST_LGL_ENG_NM,@[cust_nm]),CUST_CNT_CD, CUST_SEQ
	  		#else
			ORDER BY DELT_FLG DESC,CUST_CNT_CD, CUST_SEQ
            #end
		)

			
    )
WHERE RNUM BETWEEN NVL(@[rows_per_page],50) * (NVL(@[curr_page],1) - 1) + 1
           AND     NVL(@[rows_per_page],50) *  NVL(@[curr_page],1)			]]></sql>
			<params>
				<param name="cust_nm" type="12" value="" out="N"/>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
				<param name="cust_seq" type="12" value="" out="N"/>
				<param name="bco_type" type="12" value="" out="N"/>
				<param name="cust_addr" type="12" value="" out="N"/>
				<param name="cty_nm" type="12" value="" out="N"/>
				<param name="ste_cd" type="12" value="" out="N"/>
				<param name="zip_cd" type="12" value="" out="N"/>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="area_cd" type="12" value="" out="N"/>
				<param name="rows_per_page" type="12" value="" out="N"/>
				<param name="curr_page" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
