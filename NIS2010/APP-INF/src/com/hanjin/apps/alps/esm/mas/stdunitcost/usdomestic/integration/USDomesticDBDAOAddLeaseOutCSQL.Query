<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="USDomesticDBDAOAddLeaseOutCSQL">
			<desc><![CDATA[4.1 EQ Off-hire 데이터 생성 (Sub lease out , CN Domestic)]]></desc>
			<sql><![CDATA[
--CN DOMESTIC|SUB LEASE OUT
 -- 최종
MERGE INTO MAS_USA_DMST_UT_COST A1 USING
(
             SELECT COST_YRMON
              , ECC_CD               AS ORG_RAIL_LOC_CD
              , 'E'                  AS COST_LOC_GRP_CD
              , CNTR_TPSZ_CD         AS CNTR_TPSZ_CD
              , SUM(CND_DMST_QTY)    AS CND_DMST_QTY
              , SUM(SUB_LSE_OUT_QTY) AS SUB_LSE_OUT_QTY
           FROM (
                         SELECT  REPLACE(@[f_cost_yrmon], '-', '' ) AS COST_YRMON
                              , B.ECC_CD
                              , B.SCC_CD
                              , C.VNDR_SEQ
                              , SUBSTR(NVL(D.VNDR_ABBR_NM, D.VNDR_SEQ), 0, 8) AS VNDR_ABBR_NM
                              , A.LSTM_CD
                              , DECODE(A.CNTR_TPSZ_CD,'D2','D2', 'D4','D4', 'D5','D5', 'D7','D7', 'OT') CNTR_TPSZ_CD
                              , DECODE(C.VNDR_SEQ, '105475', COUNT(B.CNTR_NO), 0) CND_DMST_QTY
                              , DECODE(C.VNDR_SEQ, '105475', 0, COUNT(B.CNTR_NO)) SUB_LSE_OUT_QTY
                           FROM MST_CONTAINER A
                              , MST_CNTR_STS_HIS B
                              , LSE_AGREEMENT C
                              , MDM_VENDOR D
                              , (
                                  SELECT DISTINCT ECC_CD
                                        FROM MAS_LOCATION_V
                                        WHERE RCC_CD = 'USNYC'
                                        AND LCC_CD IN ('USSFO', 'USPDX', 'USNYC', 'USSEA', 'CAVAN'
                                                      ,'USHOU', 'CATOR', 'USLGB', 'USATL', 'USCHI')
                              ) E
                          WHERE A.CNTR_NO     = B.CNTR_NO
                            AND B.AGMT_CTY_CD = C.AGMT_CTY_CD
                            AND B.AGMT_SEQ    = C.AGMT_SEQ
                            AND C.VNDR_SEQ    = D.VNDR_SEQ
                            AND A.HJS_CRE_FLG = 'N'
                            --  AND A.LST_STS_SEQ = B.CNTR_STS_SEQ
                            AND B.CNTR_STS_CD = 'SBO' --SUB LEASE OUT
                            AND B.RCC_CD      = 'USNYC'
                            AND B.ECC_CD      = E.ECC_CD
                                --   AND C.VNDR_SEQ = '105475' --CNRA20
                            AND B.CNTR_STS_EVNT_DT BETWEEN TO_DATE (REPLACE(@[f_cre_start_dt], '-', '' )||'01', 'rrrrmmdd') AND LAST_DAY(TO_DATE(REPLACE(@[f_cre_end_dt], '-', ''), 'YYYYMM')) + 0.99999
                       GROUP BY @[f_cost_yrmon]
                              , B.ECC_CD
                              , B.SCC_CD
                              , C.VNDR_SEQ
                              , SUBSTR(NVL(D.VNDR_ABBR_NM, D.VNDR_SEQ), 0, 8)
                              , A.LSTM_CD
                              , DECODE(A.CNTR_TPSZ_CD,'D2','D2', 'D4','D4', 'D5','D5', 'D7','D7', 'OT')
                )
        WHERE CNTR_TPSZ_CD <> 'OT'
        GROUP BY COST_YRMON
              , ECC_CD
              , CNTR_TPSZ_CD
) B1 ON ( A1.COST_YRMON = B1.COST_YRMON AND A1.ORG_RAIL_LOC_CD = B1.ORG_RAIL_LOC_CD AND A1.CNTR_TPSZ_CD = B1.CNTR_TPSZ_CD AND A1.COST_LOC_GRP_CD = B1.COST_LOC_GRP_CD )
WHEN MATCHED THEN
     UPDATE
        SET A1.CND_DMST_QTY    = B1.CND_DMST_QTY
          , A1.SUB_LSE_OUT_QTY = B1.SUB_LSE_OUT_QTY
          , A1.UPD_USR_ID      = @[upd_usr_id]
          , A1.UPD_DT          = SYSDATE
WHEN NOT MATCHED THEN
    INSERT (
          A1.COST_YRMON
        , A1.ORG_RAIL_LOC_CD
        , A1.COST_LOC_GRP_CD
        , A1.CNTR_TPSZ_CD
        , A1.CND_DMST_QTY
        , A1.SUB_LSE_OUT_QTY 
        , A1.CRE_USR_ID
        , A1.CRE_DT
        , A1.UPD_USR_ID
        , A1.UPD_DT
    )
    VALUES (
          B1.COST_YRMON
        , B1.ORG_RAIL_LOC_CD
        , B1.COST_LOC_GRP_CD
        , B1.CNTR_TPSZ_CD
        , B1.CND_DMST_QTY
        , B1.SUB_LSE_OUT_QTY 
        , @[cre_usr_id]
        , SYSDATE
        , @[upd_usr_id]
        , SYSDATE
    )			]]></sql>
			<params>
				<param name="f_cost_yrmon" type="12" value="" out="N"/>
				<param name="f_cre_start_dt" type="12" value="" out="N"/>
				<param name="f_cre_end_dt" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
