<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="OPCostDBDAOStndUtCostRSQL">
			<desc><![CDATA[StndUtCost
2015.03.26 컬럼 속성명 변경으로 수정()]]></desc>
			<sql><![CDATA[
SELECT
  COST_YR||'-'||BSE_QTR_CD AS COST_YR_QTR
, COST_YR
, BSE_QTR_CD AS COST_QTR_CD
, TRD_CD
, SUB_TRD_CD
, RLANE_CD
, DIR_CD
, HUL_BND_CD
, TO_CHAR(TO_DATE(EFF_FM_YRMON,'YYYYMM'),'YYYY-MM')||'~'||TO_CHAR(TO_DATE(EFF_TO_YRMON,'YYYYMM'),'YYYY-MM') AS EFF_YRMON
, TTL_AMT       --TTL Cost
, FNL_TTL_AMT   --Final Cost
, DAY_COST_AMT  --Cost/Day
, TGT_LOD_QTY   --Target Load or L/F
, TEU_UC_AMT    --COST / TEU
, STND_COST_CD
, UPD_USR_ID
  FROM MAS_STND_UT_COST
 WHERE STND_COST_CD = @[f_cobcost]
   AND COST_YR = @[f_year]
   AND BSE_QTR_CD = @[f_qtr]||'Q' 
#if(${f_trd_cd} != '')
   AND TRD_CD     = @[f_trd_cd]
#end
#if(${f_rlane_cd} != '')
   AND RLANE_CD   = @[f_rlane_cd]
#end
#if(${f_dir_cd} != '')
   AND DIR_CD     = @[f_dir_cd]
#end
#if(${f_hul_bnd_cd} != '')
   AND HUL_BND_CD = @[f_hul_bnd_cd]
#end
#if(${f_avg_grp_cd} == '')
   AND HUL_BND_CD != 'XX'
#else
   AND HUL_BND_CD = 'XX'
#end
 ORDER BY COST_YR,
       BSE_QTR_CD,
       TRD_CD,
       SUB_TRD_CD,
       RLANE_CD,
       DIR_CD			]]></sql>
			<params>
				<param name="f_cobcost" type="12" value="" out="N"/>
				<param name="f_year" type="12" value="" out="N"/>
				<param name="f_qtr" type="12" value="" out="N"/>
				<param name="f_trd_cd" type="12" value="" out="N"/>
				<param name="f_rlane_cd" type="12" value="" out="N"/>
				<param name="f_dir_cd" type="12" value="" out="N"/>
				<param name="f_hul_bnd_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
