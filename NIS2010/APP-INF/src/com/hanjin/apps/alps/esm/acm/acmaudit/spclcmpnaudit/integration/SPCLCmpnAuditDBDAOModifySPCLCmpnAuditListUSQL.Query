<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SPCLCmpnAuditDBDAOModifySPCLCmpnAuditListUSQL">
			<desc><![CDATA[ModifySPCLCmpnAuditList]]></desc>
			<sql><![CDATA[
UPDATE ACM_SPCL_CMPN
   SET  
        PAY_CHK_FLG		= DECODE(@[pay_chk],'1','Y','N'),
        PAY_CHK_USR_ID  = DECODE(@[pay_chk],'1',@[usr_id],NULL),
        PAY_CHK_DT		= DECODE(@[pay_chk],'1',SYSDATE,NULL),
        PAY_CHK_GDT		= DECODE(@[pay_chk],'1',GLOBALDATE_PKG.TIME_CONV_FNC('KRPUS',SYSDATE,'GMT'),NULL),
        UPD_USR_ID 		= @[usr_id],
        UPD_DT 			= SYSDATE
 WHERE BKG_NO           = @[bkg_no]
   AND SPCL_OFC_CD      = @[spcl_ofc_cd]
   AND SPCL_CMPN_SEQ    = @[spcl_cmpn_seq]
   AND SPCL_AGMT_SEQ    = @[spcl_agmt_seq]
   AND CUST_CNT_CD      = @[cust_cnt_cd]			]]></sql>
			<params>
				<param name="pay_chk" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="spcl_ofc_cd" type="12" value="" out="N"/>
				<param name="spcl_cmpn_seq" type="12" value="" out="N"/>
				<param name="spcl_agmt_seq" type="12" value="" out="N"/>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
