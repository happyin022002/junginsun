<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PerformanceReportDBDAOSearchQueueDetailList4RSQL">
			<desc><![CDATA[search]]></desc>
			<sql><![CDATA[
SELECT SUM(RATE_FLG) AS RATE
      ,SUM(INPUT_FLG) AS INPUT
  FROM (
SELECT DECODE(RT_BL_TP_CD,'B',1,'C',1,
             DECODE((SELECT COUNT(*) 
                       FROM BKG_CHG_RT
                      WHERE BKG_NO = @[bkg_no]),0,0,1)) RATE_FLG
      ,0 AS INPUT_FLG            
  FROM BKG_RATE
 WHERE BKG_NO = @[bkg_no]
UNION ALL
SELECT 0 AS RATE_FLG
      ,(SELECT NVL((SELECT DISTINCT DECODE(NVL(CUST_NM,'N'),'N',0,1)
                      FROM BKG_CUSTOMER
                     WHERE BKG_CUST_TP_CD ='C'
                       AND BKG_NO = @[bkg_no]),0) +
               NVL((SELECT DISTINCT 1 
                      FROM BKG_BL_MK_DESC
                     WHERE BKG_NO = @[bkg_no]),0) +
               NVL((SELECT DISTINCT 1 
                      FROM BKG_CNTR_MF_DESC
                     WHERE BKG_NO = @[bkg_no]),0) 
                      FROM DUAL) INPUT_FLG 
  FROM DUAL
  )			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
