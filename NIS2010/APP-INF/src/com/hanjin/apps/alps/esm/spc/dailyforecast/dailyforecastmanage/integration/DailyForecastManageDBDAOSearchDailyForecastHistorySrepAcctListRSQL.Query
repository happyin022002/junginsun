<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DailyForecastManageDBDAOSearchDailyForecastHistorySrepAcctListRSQL">
			<desc><![CDATA[Lee Sang-Yong : [프로젝트] Ticket ID : CHM-201004171 53ft 추가
[CHM-201322502-01] SPC 프로젝트 - 성수기 선복운영 개선을 위한 T/F추진
[Trouble Shooting] 진마리아 SC Join 오류 수정
[Trouble Shooting] 진마리아 Rlane이 대상항차와 join되어 있지 않아 조회가 두배로 되는 오류 수정
2014.02.04 [CHM-201428383-01] RFA 로직 추가
2014.05.22 [선반영] AES-SC관련 로직 추가
* 2014.07.30 [CHM-201431081] SPC Allocation Control Option 추가 보완 요청	]]></desc>
			<sql><![CDATA[
SELECT A.SLS_OFC_CD  AS SLS_OFC_CD ,
         A.SREP_USR_ID AS SREP_USR_ID,
         NVL(D.USR_NM, '*'||A.SREP_USR_ID) AS SREP_NM,
         TO_CHAR(A.MODI_GDT, 'YYYY-MM-DD HH24:MI:SS') AS MODI_GDT,
         NVL(E.USR_NM, '*'||A.CFM_USR_ID) AS MODI_USR,
         CASE WHEN A.CUST_CNT_CD = '00' THEN NULL
              ELSE 
                     NVL((SELECT DISTINCT CUST_CTRL_CD --20130424 DISTINCT 추가
                            FROM SPC_MDL_CUST_CTRL
                           WHERE COST_YRWK||'-'||VER_SEQ = (SELECT /*+INDEX_DESC (M XPKSPC_MDL_VER_MST) */
                                                                   DECODE(V.DIR_CD, NULL, '200001-1', COST_YRWK||'-'||VER_SEQ)
                                                              FROM SPC_MDL_VER_MST M
                                                             WHERE SUBSTR(V.SLS_YRMON, 1, 4)||V.COST_WK BETWEEN M.VER_ST_YRWK AND M.VER_END_YRWK
                                                               AND TRD_CD  = V.TRD_CD
                                                               AND CFM_FLG = 'Y'
                                                               AND ROWNUM  = 1)
                             AND TRD_CD          = V.TRD_CD
                             AND CUST_CNT_CD     = A.CUST_CNT_CD
                             AND CUST_SEQ        = A.CUST_SEQ
                             AND NVL(SC_NO,NVL(RFA_NO, 'X')) = NVL(A.SC_NO,NVL(A.RFA_NO, 'X'))
                             --AND DECODE(TRD_CD, 'AES', NVL(RFA_NO, 'X'), NVL(SC_NO, 'X')) = DECODE(TRD_CD, 'AES', NVL(A.RFA_NO, 'X'), NVL(A.SC_NO, 'X'))
                         ), 'C') 
         END AS FCAST_CUST_TP_CD,
         CASE WHEN A.CUST_CNT_CD='00' THEN NULL ELSE DECODE(A.USA_BKG_MOD_CD, 'X', 'OTHERS', 'OTH', 'OTHERS', A.USA_BKG_MOD_CD) END USA_BKG_MOD_CD,
         DECODE(A.CUST_CNT_CD, '00', NULL, A.CUST_CNT_CD||A.CUST_SEQ) AS CUST_CD         ,
         DECODE(B.CUST_ABBR_NM, NULL, B.CUST_LGL_ENG_NM, B.CUST_ABBR_NM)  AS CUST_NM         ,
         DECODE(A.CUST_CNT_CD, '00', '+', DECODE(A.POL_YD_CD, '0000000', '+', POL_YD_CD)) AS POL_CD,
         DECODE(A.CUST_CNT_CD, '00', '+', DECODE(A.POD_YD_CD, '0000000', '+', POD_YD_CD)) AS POD_CD,
         DECODE(A.CUST_CNT_CD, '00', '+', DECODE(A.POD_YD_CD, '0000000', '+', DECODE(A.DEST_LOC_CD, 'XXXXX', 'OTHERS', A.DEST_LOC_CD))) AS DEST_LOC_CD,
         NVL(A.FCAST_TTL_QTY, 0) + NVL(A.FCAST_40FT_HC_QTY, 0) * 2 + NVL(A.FCAST_45FT_HC_QTY, 0) * 2 + NVL(A.FCAST_53FT_QTY, 0) * 2  AS FCAST_TTL_TEU_QTY,
         A.FCAST_TTL_QTY        AS FCAST_TTL_QTY      ,
         NVL(A.FCAST_20FT_DRY_QTY, 0)        AS FCAST_20FT_DRY_QTY  ,
         NVL(A.FCAST_40FT_DRY_QTY, 0)        AS FCAST_40FT_DRY_QTY  ,
         A.FCAST_40FT_HC_QTY    AS FCAST_40FT_HC_QTY  ,
         A.FCAST_45FT_HC_QTY    AS FCAST_45FT_HC_QTY  ,
         A.FCAST_53FT_QTY       AS FCAST_53FT_QTY     ,
         A.FCAST_RF_QTY         AS FCAST_RF_QTY       ,
         NVL(A.FCAST_RD_QTY, 0)   AS FCAST_RD_QTY       ,
         A.FCAST_TTL_WGT        AS FCAST_TTL_WGT      ,
         A.USD_BKG_TTL_QTY      AS USD_BKG_TTL_QTY    ,
         A.USD_BKG_20FT_QTY     AS USD_BKG_20FT_QTY   ,
         A.USD_BKG_40FT_QTY     AS USD_BKG_40FT_QTY   ,
         NVL(A.USD_BKG_20FT_DRY_QTY, 0)        AS USD_BKG_20FT_DRY_QTY  ,
         NVL(A.USD_BKG_40FT_DRY_QTY, 0)        AS USD_BKG_40FT_DRY_QTY  ,
         A.USD_BKG_40FT_HC_QTY  AS USD_BKG_40FT_HC_QTY,
         A.USD_BKG_45FT_HC_QTY  AS USD_BKG_45FT_HC_QTY,
         A.USD_BKG_53FT_QTY     AS USD_BKG_53FT_QTY   ,
         A.USD_BKG_RF_QTY       AS USD_BKG_RF_QTY     ,
         NVL(A.USD_BKG_RD_QTY, 0)       AS USD_BKG_RD_QTY     ,
         A.USD_BKG_TTL_WGT      AS USD_BKG_TTL_WGT    ,
         NVL(A.CTRT_FCAST_TTL_QTY, 0) + NVL(A.CTRT_FCAST_40FT_HC_QTY, 0) * 2 + NVL(A.CTRT_FCAST_45FT_HC_QTY, 0) * 2 + NVL(A.CTRT_FCAST_53FT_QTY, 0) * 2  AS CFCAST_TTL_TEU_QTY,
         NVL(A.CTRT_FCAST_TTL_QTY, 0)        AS CFCAST_TTL_QTY      ,
         NVL(A.CTRT_FCAST_40FT_HC_QTY, 0)    AS CFCAST_40FT_HC_QTY  ,
         NVL(A.CTRT_FCAST_45FT_HC_QTY, 0)    AS CFCAST_45FT_HC_QTY  ,
         NVL(A.CTRT_FCAST_53FT_QTY, 0)       AS CFCAST_53FT_QTY     ,
         NVL(A.CTRT_FCAST_RF_QTY, 0)         AS CFCAST_RF_QTY       ,
         NVL(A.CTRT_FCAST_TTL_WGT, 0)        AS CFCAST_TTL_WGT      ,
         DECODE(A.USA_BKG_MOD_CD, 'X', 1, DECODE(A.CUST_CNT_CD, '00', 2, DECODE(A.POD_YD_CD, '0000000', 3, DECODE(A.DEST_LOC_CD, 'XXXXX', 4, 5)))) AS LVL
--         DECODE(A.CUST_CNT_CD, '00', 1, DECODE(A.POD_YD_CD, '0000000', 2, 3)) AS LVL
         --USA_BKG_MOD_CD, DEST_LOC_CD, FCAST_20FT_DRY_QTY, FCAST_40FT_DRY_QTY, FCAST_RD_QTY, CFM_20FT_DRY_QTY, CFM_40FT_DRY_QTY, CFM_RD_QTY, USD_BKG_20FT_DRY_QTY, USD_BKG_40FT_DRY_QTY, USD_BKG_RD_QTY 
    FROM SPC_DLY_FCAST_CUST_HIS A,
         MDM_CUSTOMER           B,
         MDM_SLS_REP            C,
         COM_USER               D,
         COM_USER               E,
         MAS_MON_VVD            V,
         SPC_HD_HUL_MST         H
   WHERE A.VSL_CD         = @[vslcd]
     AND A.SKD_VOY_NO     = @[skdvoyno]
     AND A.SKD_DIR_CD     = @[skddircd]
     AND A.IOC_TS_CD      = @[ioc]
     AND A.SLS_RGN_OFC_CD = @[salesOffice]
     AND A.SLS_OFC_CD  LIKE @[subOffice]||'%'
     AND A.CFM_FLG        = 'Y'
     AND A.VSL_CD         = V.VSL_CD
     AND A.SKD_VOY_NO     = V.SKD_VOY_NO
     AND A.SKD_DIR_CD     = V.DIR_CD
     AND DECODE(A.IOC_TS_CD, 'T', 'I', A.IOC_TS_CD) = V.IOC_CD     
     AND A.TRD_CD         = V.TRD_CD
     AND A.RLANE_CD       = V.RLANE_CD
     AND A.TRD_CD         = H.TRD_CD  (+)
     AND A.RLANE_CD       = H.RLANE_CD(+)
     AND A.SKD_DIR_CD     = H.DIR_CD  (+)
#if (${customer} != '')
     AND DECODE(A.FCAST_CUST_TP_CD, '0', '1', A.CUST_CNT_CD||TO_CHAR(A.CUST_SEQ, 'FM000000')) IN (${customer}, '1')
#end
     AND A.SREP_USR_ID LIKE @[salesRep]||'%'
     AND A.CUST_CNT_CD    = B.CUST_CNT_CD(+)
     AND A.CUST_SEQ       = B.CUST_SEQ   (+)
     AND A.SREP_USR_ID    = C.SREP_CD    (+)
     AND C.EMPE_CD        = D.USR_ID     (+)
     AND A.CFM_USR_ID     = E.USR_ID     (+)
#if (${customer} != '')
     AND EXISTS ( SELECT '1'
                    FROM SPC_DLY_FCAST_CUST_HIS B
                   WHERE A.RLANE_CD    = B.RLANE_CD
                     AND A.DIR_CD      = B.DIR_CD
                     AND A.VSL_CD      = B.VSL_CD
                     AND A.SKD_VOY_NO  = B.SKD_VOY_NO
                     AND A.SKD_DIR_CD  = B.SKD_DIR_CD
                     AND A.IOC_TS_CD   = B.IOC_TS_CD
                     AND A.SREP_USR_ID = B.SREP_USR_ID
                     AND B.CUST_CNT_CD||TO_CHAR(B.CUST_SEQ, 'FM000000') IN (${customer})
                     AND A.MODI_GDT    = B.MODI_GDT
                )
#end
ORDER BY SREP_USR_ID  ,
         MODI_GDT DESC,
         FCAST_CUST_TP_CD DESC,
         DECODE(CUST_CD, 'XX999999', 'ZZZZZ', CUST_CD),
         USA_BKG_MOD_CD,
         POL_CD ,
         POD_CD ,
         DECODE(DEST_LOC_CD, 'XXXXX', 'ZZZZZ', DEST_LOC_CD)			]]></sql>
			<params>
				<param name="vslcd" type="12" value="" out="N"/>
				<param name="skdvoyno" type="12" value="" out="N"/>
				<param name="skddircd" type="12" value="" out="N"/>
				<param name="ioc" type="12" value="" out="N"/>
				<param name="salesOffice" type="12" value="" out="N"/>
				<param name="subOffice" type="12" value="" out="N"/>
				<param name="salesRep" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
