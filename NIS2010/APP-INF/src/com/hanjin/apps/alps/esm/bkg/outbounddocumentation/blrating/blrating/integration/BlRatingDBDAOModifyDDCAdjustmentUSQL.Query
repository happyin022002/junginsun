<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BlRatingDBDAOModifyDDCAdjustmentUSQL">
			<desc><![CDATA[DDC Adjustment Currency를 업데이트 한다.]]></desc>
			<sql><![CDATA[
#if(${ca_flg} == 'N')
    UPDATE BKG_RATE
    SET DDC_CURR_CD = @[curr_cd],
        UPD_USR_ID = @[usr_id],
        UPD_DT = sysdate
    WHERE BKG_NO = @[bkg_no]
#else
    UPDATE BKG_RT_HIS
    SET DDC_CURR_CD = @[curr_cd],
        UPD_USR_ID = @[usr_id],
        UPD_DT = sysdate
    WHERE BKG_NO = @[bkg_no]
    AND CORR_NO = 'TMP0000001'
#end			]]></sql>
			<params>
				<param name="curr_cd" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
