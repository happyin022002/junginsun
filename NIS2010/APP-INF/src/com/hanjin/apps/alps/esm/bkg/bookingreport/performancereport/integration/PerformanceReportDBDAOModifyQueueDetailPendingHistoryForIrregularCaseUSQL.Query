<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PerformanceReportDBDAOModifyQueueDetailPendingHistoryForIrregularCaseUSQL">
			<desc><![CDATA[Irregular로 발생되는 Unpend 현상 보정을 위해 추가된 SQL.
Q-List상 Pending Status = 'N'이고, History상 Pending End가 없는 상태에서 Q-Detail Open시
사용자가 Q-Detail을 Open한 시간을 Pending End로 변경해 준다.]]></desc>
			<sql><![CDATA[
UPDATE BKG_SR_HIS SET
	ST_DT = GLOBALDATE_PKG.TIME_LOCAL_FNC('MYPKG')
,	ST_GDT = GLOBALDATE_PKG.TIME_LOCAL_FNC('MYPKG')
,	SR_PROC_HRS = GLOBALDATE_PKG.TIME_LOCAL_FNC('MYPKG') - SR_PROC_UPD_DT 
,	BL_DOC_WRK_HRS = (SELECT SUM(CASE WHEN TO_CHAR(ST_FM_DT,'D') IN (1,7) OR HOL_FLG = 'Y' THEN ST_FM_DT
                                    WHEN AEND_DT BETWEEN ST_FM_DT AND ST_TO_DT THEN AEND_DT
                                    WHEN ST_TO_DT < AEND_DT THEN ST_TO_DT
                                    WHEN AEND_DT < ST_FM_DT THEN ST_FM_DT
                                    ELSE ST_TO_DT + 1
                               END
                               -
                               CASE WHEN TO_CHAR(ST_FM_DT,'D') IN (1,7) OR HOL_FLG = 'Y' THEN ST_FM_DT
                                    WHEN AST_DT BETWEEN ST_FM_DT AND ST_TO_DT THEN AST_DT
                                    WHEN ST_FM_DT > AST_DT THEN ST_FM_DT 
                                    WHEN AST_DT > ST_TO_DT THEN ST_TO_DT 
                                    ELSE ST_FM_DT -1
                               END) BIZ_ELT
                        FROM ( SELECT AEND_DT, AST_DT, ST_FM_DT, ST_TO_DT,
                                     (SELECT DECODE(COUNT(DISTINCT HOL_DT),0,'N','Y')
                                        FROM DMT_HOLIDAY H, MDM_ORGANIZATION O,MDM_LOCATION L
                                       WHERE O.OFC_CD = (SELECT BKG_OFC_CD FROM BKG_BOOKING WHERE BKG_NO = @[bkg_no])
                                       AND O.LOC_CD = L.LOC_CD
                                       
									   AND (H.CNT_CD = L.CNT_CD OR H.CNT_CD = ' ')
                                       AND (H.RGN_CD = L.RGN_CD OR H.RGN_CD = ' ')
                                       AND (H.STE_CD = L.STE_CD OR H.STE_CD = ' ')
                                       AND (H.LOC_CD = L.LOC_CD OR H.LOC_CD = ' ')

                                       AND HOL_DT BETWEEN TRUNC(ST_FM_DT) AND TRUNC(ST_TO_DT)) HOL_FLG
                               FROM ( SELECT GLOBALDATE_PKG.TIME_LOCAL_FNC('MYPKG') AEND_DT, -- end
                                             H.SR_PROC_UPD_DT AST_DT, -- start,                                         
                                             TO_DATE(TO_CHAR(H.SR_PROC_UPD_DT,'YYYYMMDD')||W.DOC_WRK_ST_HRMNT,'YYYYMMDDHH24MI') 
                                              - DECODE(W.DOC_WRK_OVN_FLG,'Y',DECODE(SIGN(H.SR_PROC_UPD_DT- TO_DATE(TO_CHAR(H.SR_PROC_UPD_DT,'YYYYMMDD')||W.DOC_WRK_ST_HRMNT,'YYYYMMDDHH24MI')),-1,1,0),0) 
                                              + CNT -1 ST_FM_DT,
                                             TO_DATE(TO_CHAR(H.SR_PROC_UPD_DT+DECODE(W.DOC_WRK_OVN_FLG,'Y',1,0),'YYYYMMDD')||W.DOC_WRK_END_HRMNT,'YYYYMMDDHH24MI') 
                                              - DECODE(W.DOC_WRK_OVN_FLG,'Y',DECODE(SIGN(H.SR_PROC_UPD_DT- TO_DATE(TO_CHAR(H.SR_PROC_UPD_DT,'YYYYMMDD')||W.DOC_WRK_ST_HRMNT,'YYYYMMDDHH24MI')),-1,1,0),0) 
                                              + CNT -1 ST_TO_DT
                                       FROM BKG_SR_HIS H, BKG_DPCS_OFC_WRK_TM W, (SELECT ROWNUM CNT FROM DICT) C
                                       WHERE SR_KND_CD = @[src_cd]
                                       AND	SR_NO = @[sr_no]
                                       AND	BKG_NO = @[bkg_no]
                                       AND	SR_STS_CD = @[sr_sts_cd]
                                       AND	SR_HIS_SEQ = (SELECT MAX(SR_HIS_SEQ)
                                                          FROM	BKG_SR_HIS H
                                                          WHERE	H.SR_KND_CD = @[src_cd]
                                                          AND	H.SR_NO = @[sr_no]
                                                          AND	H.BKG_NO = @[bkg_no]
                                                          AND	H.SR_STS_CD = @[sr_sts_cd])
                                AND W.BKG_OFC_CD = (SELECT BKG_OFC_CD FROM BKG_BOOKING WHERE BKG_NO = H.BKG_NO)
                                AND C.CNT < GLOBALDATE_PKG.TIME_LOCAL_FNC('MYPKG') - H.SR_PROC_UPD_DT + 3))T
                        WHERE TRUNC(T.AEND_DT) >= TRUNC(T.ST_FM_DT)
                        AND ROWNUM = 1
					)
,   BL_DOC_OVT_HRS = (
                       SELECT T.AEND_DT - T.AST_DT -
                            SUM(CASE WHEN TO_CHAR(ST_FM_DT,'D') IN (1,7) OR HOL_FLG = 'Y' THEN ST_FM_DT
                                    WHEN AEND_DT BETWEEN ST_FM_DT AND ST_TO_DT THEN AEND_DT
                                    WHEN ST_TO_DT < AEND_DT THEN ST_TO_DT
                                    WHEN AEND_DT < ST_FM_DT THEN ST_FM_DT
                                    ELSE ST_TO_DT + 1
                               END
                               -
                               CASE WHEN TO_CHAR(ST_FM_DT,'D') IN (1,7) OR HOL_FLG = 'Y' THEN ST_FM_DT
                                    WHEN AST_DT BETWEEN ST_FM_DT AND ST_TO_DT THEN AST_DT
                                    WHEN ST_FM_DT > AST_DT THEN ST_FM_DT 
                                    WHEN AST_DT > ST_TO_DT THEN ST_TO_DT 
                                    ELSE ST_FM_DT -1
                               END) OVT
                        FROM (SELECT AEND_DT, AST_DT, ST_FM_DT, ST_TO_DT,
                                     (SELECT DECODE(COUNT(DISTINCT HOL_DT),0,'N','Y')
                                        FROM DMT_HOLIDAY H, MDM_ORGANIZATION O,MDM_LOCATION L
                                       WHERE O.OFC_CD = (SELECT BKG_OFC_CD FROM BKG_BOOKING WHERE BKG_NO = @[bkg_no])
                                       AND O.LOC_CD = L.LOC_CD
                                       
									   AND (H.CNT_CD = L.CNT_CD OR H.CNT_CD = ' ')
                                       AND (H.RGN_CD = L.RGN_CD OR H.RGN_CD = ' ')
                                       AND (H.STE_CD = L.STE_CD OR H.STE_CD = ' ')
                                       AND (H.LOC_CD = L.LOC_CD OR H.LOC_CD = ' ')

                                       AND HOL_DT BETWEEN TRUNC(ST_FM_DT) AND TRUNC(ST_TO_DT)) HOL_FLG
                              FROM ( SELECT GLOBALDATE_PKG.TIME_LOCAL_FNC('MYPKG') AEND_DT, -- end
                                             H.SR_PROC_UPD_DT AST_DT, -- start,                                         
                                             TO_DATE(TO_CHAR(H.SR_PROC_UPD_DT,'YYYYMMDD')||W.DOC_WRK_ST_HRMNT,'YYYYMMDDHH24MI') 
                                              - DECODE(W.DOC_WRK_OVN_FLG,'Y',DECODE(SIGN(H.SR_PROC_UPD_DT- TO_DATE(TO_CHAR(H.SR_PROC_UPD_DT,'YYYYMMDD')||W.DOC_WRK_ST_HRMNT,'YYYYMMDDHH24MI')),-1,1,0),0) 
                                              + CNT -1 ST_FM_DT,
                                             TO_DATE(TO_CHAR(H.SR_PROC_UPD_DT+DECODE(W.DOC_WRK_OVN_FLG,'Y',1,0),'YYYYMMDD')||W.DOC_WRK_END_HRMNT,'YYYYMMDDHH24MI') 
                                              - DECODE(W.DOC_WRK_OVN_FLG,'Y',DECODE(SIGN(H.SR_PROC_UPD_DT- TO_DATE(TO_CHAR(H.SR_PROC_UPD_DT,'YYYYMMDD')||W.DOC_WRK_ST_HRMNT,'YYYYMMDDHH24MI')),-1,1,0),0) 
                                              + CNT -1 ST_TO_DT
                                       FROM BKG_SR_HIS H, BKG_DPCS_OFC_WRK_TM W, (SELECT ROWNUM CNT FROM DICT) C
                                       WHERE SR_KND_CD = @[src_cd]
                                       AND	SR_NO = @[sr_no]
                                       AND	BKG_NO = @[bkg_no]
                                       AND	SR_STS_CD = @[sr_sts_cd]
                                       AND	SR_HIS_SEQ = (SELECT MAX(SR_HIS_SEQ)
                                                          FROM	BKG_SR_HIS H
                                                          WHERE	H.SR_KND_CD = @[src_cd]
                                                          AND	H.SR_NO = @[sr_no]
                                                          AND	H.BKG_NO = @[bkg_no]
                                                          AND	H.SR_STS_CD = @[sr_sts_cd])
                                AND W.BKG_OFC_CD = (SELECT BKG_OFC_CD FROM BKG_BOOKING WHERE BKG_NO = H.BKG_NO)
                                AND C.CNT < GLOBALDATE_PKG.TIME_LOCAL_FNC('MYPKG') - H.SR_PROC_UPD_DT + 3))T
                        WHERE TRUNC(T.AEND_DT) >= TRUNC(T.ST_FM_DT)
                        AND ROWNUM = 1
                        GROUP BY T.AEND_DT,T.AST_DT)
,   HOL_FLG = (SELECT (SELECT DECODE(COUNT(DISTINCT HOL_DT),0,'N','Y')
			             FROM DMT_HOLIDAY H, MDM_ORGANIZATION O,MDM_LOCATION L
				        WHERE O.OFC_CD = (SELECT BKG_OFC_CD FROM BKG_BOOKING WHERE BKG_NO = @[bkg_no])
                          AND O.LOC_CD = L.LOC_CD

  	  				      AND (H.CNT_CD = L.CNT_CD OR H.CNT_CD = ' ')
                          AND (H.RGN_CD = L.RGN_CD OR H.RGN_CD = ' ')
                          AND (H.STE_CD = L.STE_CD OR H.STE_CD = ' ')
                          AND (H.LOC_CD = L.LOC_CD OR H.LOC_CD = ' ')
 
                          AND HOL_DT BETWEEN trunc(SR_PROC_UPD_DT) AND trunc(GLOBALDATE_PKG.TIME_LOCAL_FNC('MYPKG'))
                       )
                FROM BKG_SR_HIS 
                WHERE SR_KND_CD = @[src_cd]
                AND	SR_NO = @[sr_no]
                AND	BKG_NO = @[bkg_no]
                AND	SR_STS_CD IN ( 'PN', 'FP' )
                AND	SR_HIS_SEQ = (SELECT 	MAX(SR_HIS_SEQ)
        						  FROM	BKG_SR_HIS H
        						  WHERE	H.SR_KND_CD = @[src_cd]
        						  AND	H.SR_NO = @[sr_no]
        						  AND	H.BKG_NO = @[bkg_no]
        						  AND	H.SR_STS_CD = @[sr_sts_cd))
,	DIFF_RMK = DIFF_RMK || DECODE(NVL(DIFF_RMK,' '),' ','',chr(13)) 
                        || '*****************************' || chr(13) 
                        || 'UnPend User: SYSTEM(Irregular Case)' || chr(13) 
                        || '======================' || chr(13) || null
WHERE	SR_KND_CD = @[src_cd]
AND		SR_NO = @[sr_no]
AND		BKG_NO = @[bkg_no]
AND		SR_STS_CD IN ( 'PN', 'FP' )
AND		SR_HIS_SEQ = (SELECT 	MAX(SR_HIS_SEQ)
						FROM	BKG_SR_HIS H
						WHERE	H.SR_KND_CD = @[src_cd]
						AND		H.SR_NO = @[sr_no]
						AND		H.BKG_NO = @[bkg_no])
AND EXISTS (SELECT 'X'
            FROM BKG_SR_CRNT_RQST R, BKG_SR_HIS H
            WHERE R.SR_KND_CD = @[src_cd]
            AND	R.SR_NO = @[sr_no]
            AND	R.BKG_NO = @[bkg_no]
            AND	R.SR_AMD_TP_CD = @[sr_kind] 
            AND R.SR_AMD_SEQ = (SELECT NVL(MAX(SR_AMD_SEQ),0)
                                                 FROM  BKG_SR_CRNT_RQST
                                                 WHERE SR_KND_CD = R.SR_KND_CD
                                                 AND SR_AMD_TP_CD = R.SR_AMD_TP_CD
                                                 AND BKG_NO = R.BKG_NO
                                                 AND SR_NO = R.SR_NO)
            AND R.SR_KND_CD = H.SR_KND_CD
            AND R.SR_NO = H.SR_NO
            AND R.BKG_NO = H.BKG_NO
            AND H.SR_STS_CD IN ( 'PN', 'FP' )
            AND H.ST_DT IS   NULL
            AND R.PND_FLG = 'N')			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="src_cd" type="12" value="" out="N"/>
				<param name="sr_no" type="12" value="" out="N"/>
				<param name="sr_sts_cd" type="12" value="" out="N"/>
				<param name="sr_kind" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
