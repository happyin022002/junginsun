<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BlRatingDBDAOSearchPpdChgAmtRSQL">
			<desc><![CDATA[BlRatingDBDAOSearchPpdChgAmtRSQL]]></desc>
			<sql><![CDATA[
SELECT MAX(USD_CHG_AMT) USD_CHG_AMT
FROM   (
        SELECT SUM(ROUND(CHG_AMT/USD_LOCL_XCH_RT,2)) USD_CHG_AMT
        FROM   BKG_CHG_RT BCR,
               GL_MON_XCH_RT GMR
        WHERE  1=1
        AND    BCR.BKG_NO = @[bkg_no] 
        AND    BCR.FRT_TERM_CD = 'P'
        AND    BCR.FRT_INCL_XCLD_DIV_CD <> 'I'
        AND    BCR.N3PTY_RCV_OFC_CD IS NULL
        AND    GMR.ACCT_XCH_RT_YRMON = TO_CHAR(SYSDATE, 'YYYYMM')
        AND    GMR.ACCT_XCH_RT_LVL = 1
        AND    GMR.CURR_CD = BCR.CURR_CD
        UNION ALL
        SELECT 0 FROM DUAL
       )			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
