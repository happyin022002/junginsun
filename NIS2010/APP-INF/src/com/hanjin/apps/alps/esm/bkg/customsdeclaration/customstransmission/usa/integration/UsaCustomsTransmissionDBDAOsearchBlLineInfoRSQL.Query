<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="UsaCustomsTransmissionDBDAOsearchBlLineInfoRSQL">
			<desc><![CDATA[조회]]></desc>
			<sql><![CDATA[
SELECT 
		B01,
		B01ISF5,
		IT_ITNO,
		IT_ITTYPE,		 
		IT_HUB,
		IT_LST_USA,
		IT_DEL,
		WGT_VAL,
		IT_PKG_QTY,
		IT_PKG_AMS,
		IT_IPI_LOCAL,
		CMDT_CD,
		AMS_CODE,
		B02,
		B04,
		B04_2,
		B04ISF5,
		MF_NO,
		BL_NO,
		ACT_FILE_SKD_DIR_CD,
        FPOD_CD,
        BOOKING_POD_CD,
		MF_STS_CD
		,CSTMS_LOC_CD
	FROM(	
		SELECT RPAD(
		            'B01'||
		            RPAD(IT.BL_NO, 12, ' ')||
		            LOC.LOC_AMS_PORT_CD||
		            SUBSTR(TO_CHAR(NVL(IT.PCK_QTY,0),'0999999999'),2)||
		            RPAD(NVL(IT.AMS_PCK_TP_CD,'PKGS'),5,' ')||
		            SUBSTR(TO_CHAR(NVL(IT.CGO_WGT,0),'0999999999'),2)||
		            NVL(SUBSTR(IT.WGT_UT_CD, 1, 2),'KG')||
                    DECODE(IT.FULL_MTY_CD,
                           'M', DECODE(IBD.CSTMS_CLR_TP_CD, 'F', 'B', 'V','B','2'),
                           DECODE(IBD.CSTMS_CLR_TP_CD,
                                  'F', DECODE(NVL(IT.MF_NO, 'MASTER'), 'MASTER',DECODE(IT.CSTMS_FILE_TP_CD, '3', 'B', 'O'), 'P'),
                                  'V', DECODE(NVL(IT.MF_NO, 'MASTER'), 'MASTER',DECODE(IT.CSTMS_FILE_TP_CD, '3', 'B', 'O'), 'P'),
                                  DECODE(NVL(IT.MF_NO, 'MASTER'), 'MASTER', DECODE(IT.CSTMS_FILE_TP_CD, '3', '0', 'M'),  'N')
                                         ))                                                          
		       ,80,' ')|| CHR(10) B01,
		       RPAD(
		            'B01'||
		            RPAD(IT.BL_NO, 12, ' ')||
		            LOC.LOC_AMS_PORT_CD||
		            SUBSTR(TO_CHAR(NVL(IT.PCK_QTY,0),'0999999999'),2)||
		            RPAD(NVL(IT.AMS_PCK_TP_CD,'PKGS'),5,' ')||
		            SUBSTR(TO_CHAR(NVL(IT.CGO_WGT,0),'0999999999'),2)||
		            NVL(SUBSTR(IT.WGT_UT_CD, 1, 2),'KG')||
                    DECODE(IT.FULL_MTY_CD,
                               'M', DECODE(IBD.CSTMS_CLR_TP_CD, 'F', 'B', 'V','B','2'),
                               DECODE(IBD.CSTMS_CLR_TP_CD,
                                      'F', DECODE(NVL(IT.MF_NO, 'MASTER'), 'MASTER',DECODE(IT.CSTMS_FILE_TP_CD, '3', 'Q', 'Q'), 'R'),
                                      'V', DECODE(NVL(IT.MF_NO, 'MASTER'), 'MASTER',DECODE(IT.CSTMS_FILE_TP_CD, '3', 'Q', 'Q'), 'R'),
                                      DECODE(NVL(IT.MF_NO, 'MASTER'), 'MASTER', DECODE(IT.CSTMS_FILE_TP_CD, '3', 'T', 'T'),  'S')
                                             ))                         
		       ,80,' ')|| CHR(10) B01ISF5,
		       NVL(IBD.IBD_TRSP_NO,' ') IT_ITNO, -- 
		       NVL(IBD.IBD_TRSP_TP_CD,'  ') IT_ITTYPE, -- 61,62,63
		       NVL(IT.HUB_LOC_CD,' ') IT_HUB,
		       NVL(IT.USA_LST_LOC_CD,' ') IT_LST_USA,
		       NVL(IT.DEL_CD,' ') IT_DEL,
		       SUBSTR(TO_CHAR(IT.CGO_WGT*20,'09999999'),2) WGT_VAL,
		       SUBSTR(TO_CHAR(NVL(IT.PCK_QTY,0),'0999999999'),2) IT_PKG_QTY,
		       NVL(IT.AMS_PCK_TP_CD,'PKG  ') IT_PKG_AMS,
		       NVL(IBD.CSTMS_CLR_TP_CD,' ') IT_IPI_LOCAL,
		       NVL(BKG.CMDT_CD,' ') CMDT_CD,
		       DECODE(IBD.IBD_TRSP_TP_CD,'61',LOC3.LOC_AMS_PORT_CD,'62',LOC2.LOC_AMS_PORT_CD,'63',LOC2.LOC_AMS_PORT_CD,LOC3.LOC_AMS_PORT_CD) AMS_CODE,
		       RPAD(
		            'B02'||
		            '          '||
		            '  '||
		            NVL(SUBSTR(LOC4.LOC_NM||'                 ',1,17),'                 ')
		            ||'            '||
		            DECODE(NVL(IT.MF_NO, ' '), 
		                  ' ', 
					(SELECT  NVL( MAX(  DECODE ( ATTR_CTNT2, 'ALL', ATTR_CTNT3, IT.CSTMS_POD_CD, ATTR_CTNT3  )   ) , '    ')
					FROM BKG_CSTMS_CD_CONV_CTNT
					WHERE CNT_CD = 'US'
					AND CSTMS_DIV_ID = 'SC_FIRMS_CD_MAP'
					AND ATTR_CTNT1 = BKG.SC_NO
					AND DELT_FLG = 'N' ), 'SMLM'
                       )||
						(SELECT  NVL( MAX(  DECODE ( ATTR_CTNT1,  IT.POD_NOD_CD  , ATTR_CTNT2  )   ) , '    ')
                            FROM BKG_CSTMS_CD_CONV_CTNT
                            WHERE CNT_CD = 'US'
                            AND CSTMS_DIV_ID = 'LOC_FIRMS_CD_MAP'
							AND DELT_FLG = 'N' )
						||
		           @[pol_last_ams]
		       ,80,' ')||CHR(10) B02,
		       RPAD('B04'||'OB SMLM'||IT.MF_NO,80,' ')||CHR(10) B04,
		       RPAD('B04'||'OL SMLM'||IT.PRE_MF_NO,80,' ')||CHR(10) B04_2,
			   RPAD('B04'||'CSK'||DECODE(substr(IT.POD_CD,1,2), 'US', LOC6.LOC_AMS_PORT_CD, LOC5.LOC_AMS_PORT_CD),80,' ')||CHR(10)||RPAD('B04'||'CSK'||LOC6.LOC_AMS_PORT_CD,80,' ')||CHR(10) B04ISF5,
			   RPAD(IT.BL_NO, 12, ' ') BL_NO,
			   NVL(IT.MF_NO, 'X') MF_NO,
			   ACT_FILE_SKD_DIR_CD,
               IT.POD_CD FPOD_CD,
               BKG.POD_CD BOOKING_POD_CD,
			   IT.MF_STS_CD
			   ,CSTMS_LOC_CD
		  FROM BKG_CSTMS_ADV_BL IT,  MDM_LOCATION  LOC, MDM_LOCATION LOC2, MDM_LOCATION LOC3, MDM_LOCATION LOC4, MDM_LOCATION LOC5, MDM_LOCATION LOC6, BKG_BOOKING BKG, BKG_CSTMS_ADV_IBD IBD
		 WHERE 
		   IT.CNT_CD = 'US'
		   AND IT.BL_NO  in (SELECT COLUMN_VALUE BL_NO FROM TABLE(BKG_SPLIT_CLOB_FNC(${bl_no},',')) WHERE COLUMN_VALUE IS NOT NULL)
		   AND IT.CSTMS_POL_CD   = LOC.LOC_CD
		   AND IT.USA_LST_LOC_CD = LOC2.LOC_CD(+)
		   AND IT.HUB_LOC_CD     = LOC3.LOC_CD(+)
		   AND IT.POR_CD     	 = LOC4.LOC_CD(+)
		   AND IT.CSTMS_POD_CD	 = LOC5.LOC_CD(+)
		   AND IT.DEL_CD	 	 = LOC6.LOC_CD(+)
		   AND IT.BKG_NO     	 = BKG.BKG_NO(+)
		   AND IT.BL_NO       	 = IBD.BL_NO(+)
		   AND IT.CNT_CD      	 = IBD.CNT_CD(+)
    )			]]></sql>
			<params>
				<param name="pol_last_ams" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
