<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="UsaCustomsTransmissionDBDAOsearchCustLineInfoOBRSQL">
			<desc><![CDATA[UsaCustomsTransmissionDBDAOsearchCustLineInfoOBRSQL]]></desc>
			<sql><![CDATA[
SELECT
         A.BKG_NO BL_NO ,
         RPAD('N00SH'||RPAD(BKG_SPCLCHAR_CONV_FNC(SCE_TOKEN_NL_FNC(RTRIM(A.CUST_NM),1), 'X'),35,' '),80,' ') BUF21,
         RPAD('N02'||RPAD(BKG_SPCLCHAR_CONV_FNC(SCE_TOKEN_NL_FNC(RTRIM(A.CUST_ADDR),1), 'X'),35,' ')||
            RPAD(NVL(RTRIM(BKG_SPCLCHAR_CONV_FNC(SCE_TOKEN_NL_FNC(RTRIM(A.CUST_ADDR),2), 'X')),'.'),35,' '),80,' ') BUF21_1,

         DECODE(SCE_TOKEN_NL_FNC(RTRIM(A.CUST_ADDR),3),NULL,SCE_TOKEN_NL_FNC(RTRIM(A.CUST_ADDR),3),
               RPAD('N03'||RPAD(BKG_SPCLCHAR_CONV_FNC(SCE_TOKEN_NL_FNC(RTRIM(A.CUST_ADDR),3), 'X'),35,' ')||
             --SUBSTR(NVL(RTRIM('A.PHN_NO'),' ')||NVL(RTRIM('A.FAX_NO'),' '),1,35),80,' ')) BUF22,
             SUBSTR(NVL(RTRIM(''),' ')||NVL(RTRIM(''),' '),1,35),80,' ')) BUF22,             
         RPAD('N00CN'||RPAD(NVL(RTRIM(BKG_SPCLCHAR_CONV_FNC(SCE_TOKEN_NL_FNC(RTRIM(B.CUST_NM),1), 'X')),'.'),35,' '),80) BUF23,
         RPAD('N02'||RPAD(NVL(RTRIM(BKG_SPCLCHAR_CONV_FNC(SCE_TOKEN_NL_FNC(RTRIM(B.CUST_ADDR),1), 'X')),'.'),35,' ')||
               RPAD(NVL(RTRIM(BKG_SPCLCHAR_CONV_FNC(SCE_TOKEN_NL_FNC(RTRIM(B.CUST_ADDR),2),'X')),'.'),35,' '),80,' ') BUF23_1,

         DECODE(SCE_TOKEN_NL_FNC(RTRIM(B.CUST_ADDR),3),NULL,SCE_TOKEN_NL_FNC(RTRIM(B.CUST_ADDR),3),
               RPAD('N03'||RPAD(BKG_SPCLCHAR_CONV_FNC(SCE_TOKEN_NL_FNC(RTRIM(B.CUST_ADDR),3),'X'),35,' ')||
            --SUBSTR(NVL(RTRIM('B.PHN_NO'),' ')||NVL(RTRIM('B.FAX_NO'),' '),1,35),80,' ')) BUF24,
            SUBSTR(NVL(RTRIM(''),' ')||NVL(RTRIM(''),' '),1,35),80,' ')) BUF24,         
         RPAD('N00N1'||RPAD(NVL(BKG_SPCLCHAR_CONV_FNC(SCE_TOKEN_NL_FNC(RTRIM(C.CUST_NM),1),'X'),'SAME AS CONSIGNEE'),35,' '),80,' ') BUF25,
         RPAD('N02'||RPAD(NVL(RTRIM(BKG_SPCLCHAR_CONV_FNC(SCE_TOKEN_NL_FNC(RTRIM(C.CUST_ADDR),1),'X')),'.'),35,' ')||
               RPAD(NVL(RTRIM(BKG_SPCLCHAR_CONV_FNC(SCE_TOKEN_NL_FNC(RTRIM(C.CUST_ADDR),2),'X')),'.'),35,' '),80,' ') BUF25_1,

         DECODE(SCE_TOKEN_NL_FNC(RTRIM(C.CUST_ADDR),3),NULL,SCE_TOKEN_NL_FNC(RTRIM(C.CUST_ADDR),3),
               RPAD('N03'||RPAD(BKG_SPCLCHAR_CONV_FNC(SCE_TOKEN_NL_FNC(RTRIM(C.CUST_ADDR),3),'X'),35,' ')||
            -- SUBSTR(NVL(RTRIM('C.PHN_NO'),' ')||NVL(RTRIM('C.FAX_NO'),' '),1,35),80,' ')) BUF26
            SUBSTR(NVL(RTRIM(''),' ')||NVL(RTRIM(''),' '),1,35),80,' ')) BUF26
         ,(
            SELECT 'X'
            FROM BKG_CSTMS_ADV_ORZ_PTY 
            WHERE NVL(CUST_CNT_CD, 'XXX') = DECODE(CUST_CNT_CD, '', 'XXX', DECODE(IT.CUST_TO_ORD_FLG, 'Y',  C.CUST_CNT_CD , B.CUST_CNT_CD )) -- TO ordre Flg ='Y' 이면 Notify 아니면, Consignee 의 Customer_cd와비교
			AND NVL(CUST_SEQ, 999999) = DECODE(CUST_SEQ, '', 999999, DECODE(IT.CUST_TO_ORD_FLG, 'Y',  C.CUST_SEQ , B.CUST_SEQ ))
            AND NVL(SC_NO, 'XXX') IN ('XXX', IT.SC_NO)
            AND NVL(POD_CD, 'XXX') IN ('XXX',IT.POD_CD) 
            AND NVL(DEL_CD, 'XXX') IN ('XXX',IT.DEL_CD)
            AND DELT_FLG = 'N'
            AND ROWNUM=1
         ) BUF27
    FROM BKG_CUSTOMER A, BKG_CUSTOMER B, BKG_CUSTOMER C, BKG_CUSTOMER BS, BKG_CUSTOMER BC, BKG_CUSTOMER BN, MDM_LOCATION L1, MDM_LOCATION L2, BKG_BOOKING IT
     WHERE 1=1
			  AND A.BKG_NO in (SELECT COLUMN_VALUE BL_NO FROM TABLE(BKG_SPLIT_CLOB_FNC(${bl_no},',')) WHERE COLUMN_VALUE IS NOT NULL)
              AND A.BKG_CUST_TP_CD    = 'S'
              AND A.BKG_NO     = B.BKG_NO
              AND B.BKG_CUST_TP_CD    = 'C'
              AND A.BKG_NO     = C.BKG_NO(+)
              AND C.BKG_CUST_TP_CD(+)    = 'N'  
              AND A.BKG_NO     = IT.BKG_NO
              AND IT.BKG_NO			= BS.BKG_NO (+)
              AND BS.BKG_CUST_TP_CD	(+)	= 'S'
              AND IT.BKG_NO			= BC.BKG_NO (+)
              AND BC.BKG_CUST_TP_CD (+)		= 'C'
              AND IT.BKG_NO			= BN.BKG_NO (+)
              AND BN.BKG_CUST_TP_CD	(+)	= 'N'
              AND IT.POR_CD			= L1.LOC_CD
              AND IT.POD_CD	= L2.LOC_CD			]]></sql>
			<params>
			</params>
		</query>
	</querys>
</sqls>
