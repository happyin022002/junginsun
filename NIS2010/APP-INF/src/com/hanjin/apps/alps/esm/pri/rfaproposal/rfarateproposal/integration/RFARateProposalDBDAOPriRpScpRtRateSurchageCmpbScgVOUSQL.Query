<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RFARateProposalDBDAOPriRpScpRtRateSurchageCmpbScgVOUSQL">
			<desc><![CDATA[   ]]></desc>
			<sql><![CDATA[
MERGE INTO PRI_RP_SCP_RT RT
USING (
        SELECT SUM(ADJ_SCG_USD_AMT)  AS ADJ_SCG_AMT
                ,PROP_NO ,AMDT_SEQ ,SVC_SCP_CD ,CMDT_HDR_SEQ ,ROUT_SEQ ,RT_SEQ
        FROM PRI_RP_SCP_RT_SCG
        WHERE   PROP_NO = @[prop_no]
            AND AMDT_SEQ = @[amdt_seq]
            AND SVC_SCP_CD = @[svc_scp_cd]

#if (${UPDATE_LEVEL} == '1') 
-- 모든 route에 적용
#elseif (${UPDATE_LEVEL} == '2') 
            AND CMDT_HDR_SEQ = @[cmdt_hdr_seq]
            AND ROUT_SEQ = @[rout_seq]
            AND RT_SEQ = @[rt_seq]
#end

        GROUP BY PROP_NO ,AMDT_SEQ ,SVC_SCP_CD ,CMDT_HDR_SEQ ,ROUT_SEQ ,RT_SEQ
) SCG
ON (
        RT.PROP_NO               = SCG.PROP_NO(+)
        AND RT.AMDT_SEQ          = SCG.AMDT_SEQ(+)
        AND RT.SVC_SCP_CD        = SCG.SVC_SCP_CD(+)
        AND RT.CMDT_HDR_SEQ      = SCG.CMDT_HDR_SEQ(+)
        AND RT.ROUT_SEQ          = SCG.ROUT_SEQ(+)
        AND RT.RT_SEQ            = SCG.RT_SEQ(+)
		AND RT.PROP_NO = @[prop_no]
        AND RT.AMDT_SEQ = @[amdt_seq]
        AND RT.SVC_SCP_CD = @[svc_scp_cd]

#if (${UPDATE_LEVEL} == '1') 
-- 모든 route에 적용
#elseif (${UPDATE_LEVEL} == '2') 
        AND RT.CMDT_HDR_SEQ = @[cmdt_hdr_seq]
        AND RT.ROUT_SEQ = @[rout_seq]
        AND RT.RT_SEQ = @[rt_seq]
#end

)  
WHEN MATCHED THEN
        UPDATE SET 
                  RT.PRS_SCG_AMT        =  SCG.ADJ_SCG_AMT
                , RT.PRS_RESPB_CMPB_AMT =  SCG.ADJ_SCG_AMT + RT.PROP_FRT_RT_AMT - RT.PRS_RESPB_CM_UC_AMT
                , RT.PRS_PFIT_CMPB_AMT  =  SCG.ADJ_SCG_AMT + RT.PROP_FRT_RT_AMT - RT.PRS_PFIT_CM_UC_AMT
                , RT.PRS_RESPB_OPB_AMT  =  SCG.ADJ_SCG_AMT + RT.PROP_FRT_RT_AMT - RT.PRS_RESPB_OPFIT_UC_AMT
                , RT.UPD_USR_ID            =  @[upd_usr_id]
                , RT.UPD_DT                =  SYSDATE			]]></sql>
			<params>
				<param name="prop_no" type="12" value="" out="N"/>
				<param name="amdt_seq" type="12" value="" out="N"/>
				<param name="svc_scp_cd" type="12" value="" out="N"/>
				<param name="cmdt_hdr_seq" type="12" value="" out="N"/>
				<param name="rout_seq" type="12" value="" out="N"/>
				<param name="rt_seq" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
