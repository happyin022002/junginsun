<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="StatusManageDBDAOCreateCfmTgtVvdCSQL">
			<desc><![CDATA[Qta Freezing 시 Confirm TGT VVVD 생성
IAS Sector Sales 관련 TARGET VVD 제외로직 추가

* 2015.02.27 이혜민 SLS_YRMON 추가/ 처음에는 COST_YRMON을 넣고 나중에 조정
* 2015.06.15 김용습 [CHM-201536164] 주간 MAS Open에 따른 타모듈 프로그램 적용 요청
20160422 CHM-201641278 [SQM] IAS Trade 판매목표 수립 Portion 연결 시스템 수정 요청 CSR]]></desc>
			<sql><![CDATA[
INSERT INTO SQM_CFM_TGT_VVD (
       QTA_RLSE_VER_NO
      ,BSE_TP_CD
      ,BSE_YR
      ,BSE_QTR_CD
      ,QTA_TGT_CD
      ,TRD_CD
      ,RLANE_CD
      ,DIR_CD
      ,VSL_CD
      ,SKD_VOY_NO
      ,SKD_DIR_CD
      ,BSE_MON
      ,BSE_WK
      ,SLS_YRMON
      ,CONV_DIR_CD
      ,SUB_TRD_CD
      ,IOC_CD
      ,FNL_BSA_CAPA
      ,LOD_QTY
      ,GRS_REV
      ,CRE_USR_ID
      ,CRE_DT
      ,UPD_USR_ID
      ,UPD_DT
)
SELECT SUBSTR(@[f_bse_yr], 3, 2) || A1.BSE_QTR_CD || DECODE(CPY_NO, 0, '01', '02') AS QTA_RLSE_VER_NO
      ,A1.BSE_TP_CD
      ,A1.BSE_YR
      ,A1.BSE_QTR_CD
      ,'D' AS QTA_TGT_CD
      ,A1.TRD_CD
      ,A1.RLANE_CD
      ,A1.DIR_CD
      ,A1.VSL_CD
      ,A1.SKD_VOY_NO
      ,A1.SKD_DIR_CD
      ,A1.BSE_MON
      ,A1.BSE_WK
#if (${f_bse_tp_cd} == 'Q')
      ,A5.COST_YRMON
#else
      ,(SELECT TV.BSE_YR||TV.BSE_MON FROM SQM_QTA_TGT_VVD TV
         WHERE A1.TRD_CD     = TV.TRD_CD
           AND A1.RLANE_CD   = TV.RLANE_CD
           AND A1.IOC_CD     = TV.IOC_CD
           AND A1.DIR_CD     = TV.DIR_CD
           AND A1.VSL_CD     = TV.VSL_CD
           AND A1.SKD_VOY_NO = TV.SKD_VOY_NO
           AND ROWNUM < 2) COST_YRMON
#end
      ,A2.CONV_DIR_CD
      ,A1.SUB_TRD_CD
      ,A1.IOC_CD
      ,NVL(DECODE(A1.SUB_TRD_CD, 'IP', 0, A1.FNL_BSA_CAPA), 0) AS FNL_BSA_CAPA
      ,ROUND(DECODE(A2.SUB_TRD_CD,'IP', A2.LOD_QTY, A2.FNL_BSA_CAPA * A2.LDF_RTO / 100), 0) AS LOD_QTY
      ,NVL(A2.GRS_RPB_REV * ROUND(DECODE(A2.SUB_TRD_CD,'IP', A2.LOD_QTY, A2.FNL_BSA_CAPA * A2.LDF_RTO / 100), 0), 0) AS GRS_REV
      ,@[f_usr_id] AS CRE_USR_ID
      ,SYSDATE     AS CRE_DT
      ,@[f_usr_id] AS UPD_USR_ID
      ,SYSDATE     AS UPD_DT
  FROM SQM_QTA_TGT_VVD A1
      ,SQM_QTA_LOD_REV A2
      ,COM_CPY_NO      A3
      ,SQM_QTA_LANE_MGMT A4
#if (${f_bse_tp_cd} == 'Q')
      ,MAS_MON_VVD A5
#end
 WHERE A1.BSE_TP_CD  = A2.BSE_TP_CD
   AND A1.BSE_YR     = A2.BSE_YR
   AND A1.BSE_QTR_CD = A2.BSE_QTR_CD
   AND A1.TRD_CD     = A2.TRD_CD
   AND A1.RLANE_CD   = A2.RLANE_CD
   AND A1.DIR_CD     = A2.DIR_CD
   AND A1.VSL_CD     = A2.VSL_CD
   AND A1.SKD_VOY_NO = A2.SKD_VOY_NO
   AND A1.SKD_DIR_CD = A2.SKD_DIR_CD

   AND A1.TRD_CD     = A4.TRD_CD
   AND A1.RLANE_CD   = A4.RLANE_CD

#if (${f_bse_tp_cd} == 'Q')
   AND A1.TRD_CD     = A5.TRD_CD
   AND A1.RLANE_CD   = A5.RLANE_CD
   AND A1.IOC_CD     = A5.IOC_CD
   AND A1.DIR_CD     = A5.DIR_CD
   AND A1.VSL_CD     = A5.VSL_CD
   AND A1.SKD_VOY_NO = A5.SKD_VOY_NO
#end

   AND A1.DIR_CD     = NVL(A4.LANE_DIR_CD, A1.DIR_CD)
--   AND A4.IAS_SCTR_FLG IS NULL
   AND A1.BSE_TP_CD  = @[f_bse_tp_cd]
   AND A1.BSE_YR     = @[f_bse_yr]
   AND A1.BSE_QTR_CD = DECODE(@[f_bse_tp_cd], 'Y', '00', @[f_bse_qtr_cd])
   AND A1.RLANE_CD  <> 'RBCCO'
   AND A1.DELT_FLG   = 'N'
   AND A3.CPY_NO     < 2
UNION ALL
SELECT SUBSTR(@[f_bse_yr], 3, 2) || A1.BSE_QTR_CD || DECODE(CPY_NO, 0, '01', '02') AS QTA_RLSE_VER_NO
      ,A1.BSE_TP_CD
      ,A1.BSE_YR
      ,A1.BSE_QTR_CD
      ,'D' AS QTA_TGT_CD
      ,A1.TRD_CD
      ,A1.RLANE_CD
      ,A1.DIR_CD
      ,A1.VSL_CD
      ,A1.SKD_VOY_NO
      ,A1.SKD_DIR_CD
      ,A1.BSE_MON
      ,A1.BSE_WK
#if (${f_bse_tp_cd} == 'Q')
      ,A3.COST_YRMON
#else
      ,(SELECT TV.BSE_YR||TV.BSE_MON FROM SQM_QTA_TGT_VVD TV
         WHERE A1.TRD_CD     = TV.TRD_CD
           AND A1.RLANE_CD   = TV.RLANE_CD
           AND A1.IOC_CD     = TV.IOC_CD
           AND A1.DIR_CD     = TV.DIR_CD
           AND A1.VSL_CD     = TV.VSL_CD
           AND A1.SKD_VOY_NO = TV.SKD_VOY_NO
           AND ROWNUM < 2) COST_YRMON
#end
      ,A1.DIR_CD
      ,A1.SUB_TRD_CD
      ,A1.IOC_CD
      ,NVL(A1.FNL_BSA_CAPA, 0) AS FNL_BSA_CAPA
      ,0 AS LOD_QTY
      ,0 AS GRS_REV
      ,@[f_usr_id] AS CRE_USR_ID
      ,SYSDATE     AS CRE_DT
      ,@[f_usr_id] AS UPD_USR_ID
      ,SYSDATE     AS UPD_DT
  FROM SQM_QTA_TGT_VVD A1
      ,COM_CPY_NO      A2
#if (${f_bse_tp_cd} == 'Q')
      ,MAS_MON_VVD 	   A3
#end
 WHERE A1.BSE_TP_CD  = @[f_bse_tp_cd]
   AND A1.BSE_YR     = @[f_bse_yr]
   AND A1.BSE_QTR_CD = DECODE(@[f_bse_tp_cd], 'Y', '00', @[f_bse_qtr_cd])
   AND A1.RLANE_CD   = 'RBCCO'
   AND A1.DELT_FLG   = 'N'
   AND A2.CPY_NO     < 2
#if (${f_bse_tp_cd} == 'Q')
   AND A1.TRD_CD     = A3.TRD_CD
   AND A1.RLANE_CD   = A3.RLANE_CD
   AND A1.IOC_CD     = A3.IOC_CD
   AND A1.DIR_CD     = A3.DIR_CD
   AND A1.VSL_CD     = A3.VSL_CD
   AND A1.SKD_VOY_NO = A3.SKD_VOY_NO
#end			]]></sql>
			<params>
				<param name="f_bse_yr" type="12" value="" out="N"/>
				<param name="f_usr_id" type="12" value="" out="N"/>
				<param name="f_bse_tp_cd" type="12" value="" out="N"/>
				<param name="f_bse_qtr_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
