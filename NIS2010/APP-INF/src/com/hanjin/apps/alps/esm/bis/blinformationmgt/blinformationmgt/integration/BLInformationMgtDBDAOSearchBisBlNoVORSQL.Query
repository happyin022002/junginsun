<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BLInformationMgtDBDAOSearchBisBlNoVORSQL">
			<desc><![CDATA[bkg별 BDR, C/A 상태 조회]]></desc>
			<sql><![CDATA[
SELECT BK.BKG_NO
,	   '' NCB_NO
,      BK.BL_NO
,      BL.BDR_FLG
,      DECODE(NVL(BL.CORR_NO, 'N'), 'N', 'N', DECODE(BL.CORR_USR_ID, @[ca_usr_id], 'Y', 'N')) CA_FLG
,	   BL.CORR_USR_ID 	CA_USR_ID
,      BL.CORR_NO 		CA_NO
,      BK.BL_TP_CD
,      BK.BKG_STS_CD
,      '' BL_NO_CHK
,      BK.PCTL_NO
,	   '' MAP_SEQ
,      NVL(( SELECT 'Y' 
               FROM BIS_CORRECTION
              WHERE BKG_NO  = BK.BKG_NO
                AND CORR_NO != 'TMP0000001' 
                AND ROWNUM = 1), 'N') CA_EXIST_FLG
,      '' POL_CD
,      BK.POR_CD POR_CD
FROM   BIS_BOOKING BK
     , BIS_BL_DOC BL
     , BIS_VVD VVD
WHERE  BK.BKG_NO = BL.BKG_NO
AND BK.BKG_NO         = VVD.BKG_NO(+)
AND BK.PST_RLY_PORT_CD= VVD.POL_CD(+)
AND 'U'               = VVD.VSL_PRE_PST_CD(+)
#if (${bkg_no} != '') 
AND    BK.BKG_NO = @[bkg_no]
#else 
AND    BK.BL_NO = SUBSTR(@[bl_no], 1, 12)
#end			]]></sql>
			<params>
				<param name="ca_usr_id" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="bl_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
