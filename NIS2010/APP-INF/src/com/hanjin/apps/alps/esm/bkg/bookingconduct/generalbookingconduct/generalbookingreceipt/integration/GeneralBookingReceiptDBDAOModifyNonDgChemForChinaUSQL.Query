<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralBookingReceiptDBDAOModifyNonDgChemForChinaUSQL">
			<desc><![CDATA[북중국 Non DG Chemical Flag 업데이트]]></desc>
			<sql><![CDATA[
#if (${ca_flg} == 'Y')
UPDATE BKG_BKG_HIS
#else
UPDATE BKG_BOOKING
#end
   SET NON_DG_CHEM_FLG = 'Y'
 WHERE BKG_NO = @[bkg_no]
#if (${ca_flg} == 'Y')
   AND CORR_NO = 'TMP0000001'
#end
   AND OB_SLS_OFC_CD IN ( SELECT REP.OFC_CD 
                            FROM MDM_SLS_REP      REP
                               , MDM_ORGANIZATION ORG
                               , MDM_LOCATION     LOC
                           WHERE REP.OFC_CD  = ORG.OFC_CD
                             AND ORG.OFC_TP_CD IN ('BS','BB')
                             AND LOC.LOC_CD  = ORG.LOC_CD
                             AND RGN_CD      = 'CNN' 
                        ) -- L.OFC 가 북중국 지역
   AND CMDT_CD = '380036' --(CHEMICALS, NON-HAZARDOUS, NOS)  			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
