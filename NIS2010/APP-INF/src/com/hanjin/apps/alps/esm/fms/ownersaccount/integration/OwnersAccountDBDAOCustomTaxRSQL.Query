<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="OwnersAccountDBDAOCustomTaxRSQL">
			<desc><![CDATA[CustomTax 조회]]></desc>
			<sql><![CDATA[
SELECT 
     TAX_INV_YRMON		
    ,OFC_CD			
    ,DOC_EVID_TP_CD AS TAX_ISS_CD		
    ,TAX_VAT_TP_CD		
    ,TAX_NAID_FLG    	
    ,TAX_DIV_CD     	
    ,FA_FLG     		
    ,TAX_PL_CD			
    ,TAX_NSL_FLG		
    ,SPL_RGST_NO		
    ,OWNR_NM  			
    ,CO_NM  			
    ,BZCT_NM			
    ,BZTP_NM			
    ,SPL_ADDR			
    ,ISS_DT			
    ,SPL_AMT			
    ,TAX_AMT			
    ,TOTAL_AMT			
    ,SUBSTR(@[csr_no],1,2) AS SLP_TP_CD
    ,SUBSTR(@[csr_no],3,1) AS SLP_FUNC_CD
    ,DECODE(LENGTH(@[csr_no]), 19, SUBSTR(@[csr_no], 4, 5), SUBSTR(@[csr_no], 4, 6)) AS SLP_OFC_CD
    ,DECODE(LENGTH(@[csr_no]), 19, SUBSTR(@[csr_no], 9, 6), SUBSTR(@[csr_no], 10, 6)) AS SLP_ISS_DT
    ,DECODE(LENGTH(@[csr_no]), 19, SUBSTR(@[csr_no], 15, 5), SUBSTR(@[csr_no], 16, 5)) AS SLP_SER_NO
    ,CRE_USR_ID		
    ,UPD_USR_ID
  FROM (
        SELECT SUBSTR(TAX_INV_YRMON,1,4) || '-' || 
               SUBSTR(TAX_INV_YRMON,5,2) TAX_INV_YRMON,
               OFC_CD,
			   DOC_EVID_TP_CD,
               TAX_VAT_TP_CD,
               TAX_NAID_FLG,
               TAX_DIV_CD,
               FA_FLG,
               TAX_PL_CD,
               TAX_NSL_FLG,
               SUBSTR(SPL_RGST_NO,1,3) || '-' || 
               SUBSTR(SPL_RGST_NO,4,2) || '-' || 
               SUBSTR(SPL_RGST_NO,6) SPL_RGST_NO,
               OWNR_NM,
               CO_NM,
               BZCT_NM,
               BZTP_NM,
               SPL_ADDR,
               SUBSTR(ISS_DT,1,4) || '-' || 
               SUBSTR(ISS_DT,5,2) || '-' || 
               SUBSTR(ISS_DT,7,2) ISS_DT,
               TO_CHAR(SPL_AMT,'FM999,999,999,999,999,990') SPL_AMT,
               TO_CHAR(TAX_AMT,'FM999,999,999,999,999,990') TAX_AMT,
               TO_CHAR(SPL_AMT + TAX_AMT,'FM999,999,999,999,999,990') TOTAL_AMT
			   ,CRE_USR_ID		
			   ,UPD_USR_ID			  
          FROM FMS_TAX
         WHERE    SLP_TP_CD
               || SLP_FUNC_CD
               || SLP_OFC_CD
               || SLP_ISS_DT
               || SLP_SER_NO = @[csr_no]
       )
UNION ALL
SELECT BIL_INV_YRMON,
       OFC_CD,
	   DOC_EVID_TP_CD,
       BIL_VAT_TP_CD,
       BIL_NAID_FLG,
       BIL_DIV_CD,
       FA_FLG,
       BIL_PL_CD,
       BIL_NSL_FLG,
       SPL_RGST_NO,
       OWNR_NM,
       CO_NM,
       BZCT_NM,
       BZTP_NM,
       SPL_ADDR,
       ISS_DT,
       SPL_AMT,
       BIL_AMT,
       TOTAL_AMT
       ,SUBSTR(@[csr_no],1,2) AS SLP_TP_CD
       ,SUBSTR(@[csr_no],3,1) AS SLP_FUNC_CD
       ,DECODE(LENGTH(@[csr_no]), 19, SUBSTR(@[csr_no], 4, 5), SUBSTR(@[csr_no], 4, 6)) AS SLP_OFC_CD
       ,DECODE(LENGTH(@[csr_no]), 19, SUBSTR(@[csr_no], 9, 6), SUBSTR(@[csr_no], 10, 6)) AS SLP_ISS_DT
       ,DECODE(LENGTH(@[csr_no]), 19, SUBSTR(@[csr_no], 15, 5), SUBSTR(@[csr_no], 16, 5)) AS SLP_SER_NO
       ,CRE_USR_ID		
       ,UPD_USR_ID
  FROM (
        SELECT SUBSTR(BIL_INV_YRMON,1,4) || '-' || 
               SUBSTR(BIL_INV_YRMON,5,2) BIL_INV_YRMON,
               OFC_CD,
			   DOC_EVID_TP_CD,
               NULL BIL_VAT_TP_CD,
               NULL BIL_NAID_FLG,
               BIL_DIV_CD,
               NULL FA_FLG,
               BIL_PL_CD,
               NULL BIL_NSL_FLG,
               SUBSTR(SPL_RGST_NO,1,3) || '-' || 
               SUBSTR(SPL_RGST_NO,4,2) || '-' || 
               SUBSTR(SPL_RGST_NO,6) SPL_RGST_NO,
               OWNR_NM,
               CO_NM,
               BZCT_NM,
               BZTP_NM,
               SPL_ADDR,
               SUBSTR(ISS_DT,1,4) || '-' || 
               SUBSTR(ISS_DT,5,2) || '-' || 
               SUBSTR(ISS_DT,7,2) ISS_DT,
               TO_CHAR(SPL_AMT,'FM999,999,999,999,999,990') SPL_AMT,
               '0' BIL_AMT,
               TO_CHAR(SPL_AMT,'FM999,999,999,999,999,990') TOTAL_AMT
               ,CRE_USR_ID		
			   ,UPD_USR_ID	
          FROM FMS_BILL
         WHERE    SLP_TP_CD
               || SLP_FUNC_CD
               || SLP_OFC_CD
               || SLP_ISS_DT
               || SLP_SER_NO = @[csr_no]
       )			]]></sql>
			<params>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
