<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="JapanManifestListDownloadDBDAOsearchMfrCustRSQL">
			<desc><![CDATA[searchMfrCust]]></desc>
			<sql><![CDATA[
SELECT 
	A.BL_NO||A.BL_SPLIT_NO BL_NUMBER,
	A.VSL_CD||A.SKD_VOY_NO||A.SKD_DIR_CD VVD_CD,
	NVL(@[pod_cd], '') POD_CD,
	'' CLPT_IND_SEQ,
	C1.CUST_CNT_CD CUST_CNT_CD,      
	C1.CUST_SEQ CUST_SEQ,
	REPLACE(C1.CUST_NM,'"','""') CUST_NM,
	REPLACE(C1.CUST_ADDR,'"','""') CUST_ADDR,
	C1.PHN_NO PHN_NO,     
	C1.FAX_NO FAX_NO,
	C2.CUST_CNT_CD CUST_CNT_CD2,      
	C2.CUST_SEQ CUST_SEQ2,
	REPLACE(C2.CUST_NM,'"','""') CUST_NM2,
	REPLACE(C2.CUST_ADDR,'"','""') CUST_ADDR2,
	C2.PHN_NO PHN_NO2,     
	C2.FAX_NO FAX_NO2,
	C3.CUST_CNT_CD CUST_CNT_CD3,      
	C3.CUST_SEQ CUST_SEQ3,
	REPLACE(C3.CUST_NM,'"','""') CUST_NM3,
	REPLACE(C3.CUST_ADDR,'"','""') CUST_ADDR3,
	C3.PHN_NO PHN_NO3,     
	C3.FAX_NO FAX_NO3
FROM 
	BKG_CSTMS_JP_BL A, 
	VSK_VSL_PORT_SKD S,
	BKG_CSTMS_JP_BL_CUST C1, 
	BKG_CSTMS_JP_BL_CUST C2,
	BKG_CSTMS_JP_BL_CUST C3 
WHERE A.BL_NO       = SUBSTR(@[bl_number],1,12)
AND A.BL_SPLIT_NO = DECODE(SUBSTR(@[bl_number],13,2),NULL,'  ',SUBSTR(@[bl_number],13,2))
AND A.BL_NO       = C1.BL_NO(+)
AND A.BL_SPLIT_NO = C1.BL_SPLIT_NO(+)
AND C1.BKG_CUST_TP_CD(+)  = 'S'
AND A.BL_NO       = C2.BL_NO(+)
AND A.BL_SPLIT_NO = C2.BL_SPLIT_NO(+)
AND C2.BKG_CUST_TP_CD(+)  = 'C'
AND A.BL_NO       = C3.BL_NO(+)
AND A.BL_SPLIT_NO = C3.BL_SPLIT_NO(+)
AND C3.BKG_CUST_TP_CD(+)  = 'N'
AND A.VSL_CD        = S.VSL_CD(+)
AND A.SKD_VOY_NO = S.SKD_VOY_NO(+)
AND A.SKD_DIR_CD    = S.SKD_DIR_CD(+)
AND A.POD_CD       = S.VPS_PORT_CD(+)
AND S.CLPT_IND_SEQ(+)  = @[clpt_ind_seq]			]]></sql>
			<params>
				<param name="pod_cd" type="12" value="" out="N"/>
				<param name="bl_number" type="12" value="" out="N"/>
				<param name="clpt_ind_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
