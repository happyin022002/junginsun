<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BookingUtilDBDAOMdmCustVORSQL">
			<desc><![CDATA[BookingUtilDBDAOMdmCustVO]]></desc>
			<sql><![CDATA[
SELECT FINC_STS_LVL_CD BLOCK_FLAG,
       INDIV_CORP_DIV_CD CUST_TP_CD,
       UPPER(CUST_LGL_ENG_NM) NAME,
        (
            SELECT  UPPER(BZET_ADDR)
            FROM    MDM_CUST_ADDR
            WHERE   CUST_CNT_CD = CUST.CUST_CNT_CD
            AND     CUST_SEQ = CUST.CUST_SEQ
            AND     PRMRY_CHK_FLG = 'Y'
            AND     ROWNUM = 1
        ) ADDRESS,
		CASE WHEN SLS_DELT_EFF_DT IS NOT NULL THEN 'Y' 
			 ELSE 'N' END NO_USE_FLG,
		CUST.DELT_FLG, 
        CUST.CUST_CNT_CD,
        CUST.CUST_SEQ,
        FRT_FWRD_FMC_NO,
        RVIS_CNTR_CUST_TP_CD,
        NVL(NMD_CUST_FLG, 'N') NMD_CUST_FLG,
        (SELECT CHR(10) || '- NO USE REASON : ' || D.INTG_CD_VAL_DP_DESC
           FROM MDM_SLS_REP C
              , COM_INTG_CD_DTL D
          WHERE CUST.SREP_CD = C.SREP_CD(+)
            AND CUST.SLS_DELT_EFF_RSN_CD = D.INTG_CD_VAL_CTNT(+)
            AND D.INTG_CD_ID(+) = 'CD03011') NO_USE_RSN,
        DECODE(CR.CUST_RLSE_CTRL_FLG,'N','NO','Y','YES',NULL,'NO',CR.CUST_RLSE_CTRL_FLG) BKLST_FLG,
        CUST_RLSE_CTRL_RMK RLSE_CTRL_RSN,
         NVL(CR.CR_CLT_OFC_CD, CUST.OFC_CD) AR_OFC,
         (SELECT SREP_NM FROM MDM_SLS_REP SREP WHERE SREP.SREP_CD = CUST.SREP_CD) SREP_NM,
        DECODE(CUST.SLS_DELT_EFF_RSN_CD,'07','Y','N') EXCD_CR_FLG,
        CUST.IDA_GST_RGST_NO,
		CUST.CO_CHN_NO
  FROM MDM_CUSTOMER CUST, MDM_CR_CUST CR
 WHERE CUST.CUST_CNT_CD     = @[cust_cnt_cd]
   AND CUST.CUST_SEQ        = @[cust_seq]
   AND CUST.CNTR_DIV_FLG    = 'Y'
   AND CUST.CUST_CNT_CD     = CR.CUST_CNT_CD(+)
   AND CUST.CUST_SEQ        = CR.CUST_SEQ(+)
   AND 'N'                  = CR.DELT_FLG(+)			]]></sql>
			<params>
				<param name="cust_cnt_cd" type="12" value="KR" out="N"/>
				<param name="cust_seq" type="12" value="585" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
