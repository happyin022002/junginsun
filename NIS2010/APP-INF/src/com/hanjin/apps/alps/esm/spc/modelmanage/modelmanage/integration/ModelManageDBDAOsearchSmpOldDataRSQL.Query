<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ModelManageDBDAOsearchSmpOldDataRSQL">
			<desc><![CDATA[SMP History를 위해 old 값을 조회합니다.
[CHM-201322502-01] SPC 프로젝트 - 성수기 선복운영 개선을 위한 T/F추진
2014.02.04 [CHM-201428383-01] RFA 로직 추가
2014.05.16 [CHM-201430353] SMP / AES 보완요청 - SC 입력 기능 추가
2015.06.17 BKG 연동하는 부분에서 물량 비교시 Null이 들어와서 오류가 발생 따라서 NVL 처리를 해줌]]></desc>
			<sql><![CDATA[
--Null값비교
SELECT A.TRD_CD
      ,A.COST_YRWK
      ,A.VER_SEQ
      ,A.CUST_CNT_CD
      ,A.CUST_SEQ
      ,A.CTRT_OFC_CD
      ,A.SC_NO
      ,A.RFA_NO
      ,A.CUST_CTRL_CD
      ,A.SUB_TRD_CD
      ,A.SLS_RHQ_CD
#if (${flg} == '1')
      ,A.G1_CNG_USR
      ,A.CUST_ADJ_QTY
      ,B.OLD_CUST_ADJ_QTY
#elseif (${flg} == '2') 
      ,A.G2_CNG_USR
      ,A.SLS_RGN_OFC_CD
      ,NVL(NVL(A.SUB_TRD_ADJ_QTY, B.OLD_SUB_TRD_ADJ_QTY),0) AS SUB_TRD_ADJ_QTY --RHQ SAVE시
      ,NVL(B.OLD_SUB_TRD_ADJ_QTY,0) AS OLD_SUB_TRD_ADJ_QTY
#elseif (${flg} == '3')
      ,A.SLS_RGN_OFC_CD
      ,A.G3_CNG_USR
      ,A.RLANE_CD
      ,A.RLANE_ADJ_QTY
      ,B.OLD_RLANE_ADJ_QTY
#elseif (${flg} == '4')
      ,A.SLS_RGN_OFC_CD
      ,A.G3_CNG_USR
      ,A.RLANE_CD
      ,A.SPC_CTRL_MDL_RMK
      ,B.OLD_SPC_CTRL_MDL_RMK
#end
      ,A.USR_ID AS CRE_USR_ID
  FROM (SELECT @[trd_cd]         AS TRD_CD
              ,@[cost_yrwk]      AS COST_YRWK
              ,@[ver_seq]        AS VER_SEQ
              ,@[cust_cnt_cd]    AS CUST_CNT_CD
              ,@[cust_seq]       AS CUST_SEQ
              ,@[ctrt_ofc_cd]    AS CTRT_OFC_CD
              ,@[sc_no]          AS SC_NO
              ,@[rfa_no]         AS RFA_NO
              ,@[cust_ctrl_cd]   AS CUST_CTRL_CD
              ,@[sub_trd_cd]     AS SUB_TRD_CD
              ,@[sls_rhq_cd]     AS SLS_RHQ_CD
#if (${flg} != '1')
              ,@[sls_rgn_ofc_cd] AS SLS_RGN_OFC_CD
    #if (${flg} != '2')
              ,@[rlane_cd]       AS RLANE_CD
    #end
#end
#if (${flg} == '1')
              ,@[g1_cng_usr] AS G1_CNG_USR
              ,@[cust_adj_qty] * DECODE(@[unit], 'T', 1, 2) AS CUST_ADJ_QTY
#elseif (${flg} == '2')
              ,@[g2_cng_usr] AS G2_CNG_USR
              ,@[strd_adj_qty] * DECODE(@[unit], 'T', 1, 2) AS SUB_TRD_ADJ_QTY
#elseif (${flg} == '3')
              ,@[g3_cng_usr] AS G3_CNG_USR
              ,@[rlane_adj_qty] * DECODE(@[unit], 'T', 1, 2) AS RLANE_ADJ_QTY
#elseif (${flg} == '4')
              ,@[g3_cng_usr]       AS G3_CNG_USR
              ,@[spc_ctrl_mdl_rmk] AS SPC_CTRL_MDL_RMK
#end
              ,@[usr_id]           AS USR_ID
          FROM DUAL
       ) A,
       (SELECT 
#if (${flg} == '1')
               MAX(CUST_ADJ_QTY) AS OLD_CUST_ADJ_QTY
#elseif (${flg} == '2')
               MAX(SUB_TRD_ADJ_QTY) AS OLD_SUB_TRD_ADJ_QTY
#elseif (${flg} == '3')
               MAX(RLANE_ADJ_QTY) AS OLD_RLANE_ADJ_QTY
#elseif (${flg} == '4')
               MAX(SPC_CTRL_MDL_RMK) AS OLD_SPC_CTRL_MDL_RMK
#end
          FROM SPC_MDL_CUST_REV_LANE
         WHERE TRD_CD           = @[trd_cd]
           AND COST_YRWK        = @[cost_yrwk]
           AND VER_SEQ          = @[ver_seq]
           AND CUST_CNT_CD      = @[cust_cnt_cd]
           AND CUST_SEQ         = @[cust_seq]
           AND NVL(SC_NO , ' ') = NVL(@[sc_no] , NVL(SC_NO, ' '))
           AND NVL(RFA_NO, ' ') = NVL(@[rfa_no], ' ')
           AND SUB_TRD_CD       = @[sub_trd_cd]
           AND SLS_RHQ_CD       = @[sls_rhq_cd]
     	   AND CTRT_OFC_CD      = @[ctrt_ofc_cd]
#if (${flg} != '1') 
           AND SLS_RGN_OFC_CD   = @[sls_rgn_ofc_cd]
    #if (${flg} != '2')
           AND RLANE_CD         = @[rlane_cd]
    #end
#end
       ) B			]]></sql>
			<params>
				<param name="trd_cd" type="12" value="" out="N"/>
				<param name="cost_yrwk" type="12" value="" out="N"/>
				<param name="ver_seq" type="12" value="" out="N"/>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
				<param name="cust_seq" type="12" value="" out="N"/>
				<param name="ctrt_ofc_cd" type="12" value="" out="N"/>
				<param name="sc_no" type="12" value="" out="N"/>
				<param name="rfa_no" type="12" value="" out="N"/>
				<param name="cust_ctrl_cd" type="12" value="" out="N"/>
				<param name="sub_trd_cd" type="12" value="" out="N"/>
				<param name="sls_rhq_cd" type="12" value="" out="N"/>
				<param name="sls_rgn_ofc_cd" type="12" value="" out="N"/>
				<param name="rlane_cd" type="12" value="" out="N"/>
				<param name="g1_cng_usr" type="12" value="" out="N"/>
				<param name="cust_adj_qty" type="12" value="" out="N"/>
				<param name="unit" type="12" value="" out="N"/>
				<param name="g2_cng_usr" type="12" value="" out="N"/>
				<param name="strd_adj_qty" type="12" value="" out="N"/>
				<param name="g3_cng_usr" type="12" value="" out="N"/>
				<param name="rlane_adj_qty" type="12" value="" out="N"/>
				<param name="spc_ctrl_mdl_rmk" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
