<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RFAProposalDEMDETDBDAOPriRpDmdtAmendBasicVOCSQL">
			<desc><![CDATA[RFAProposalDEMDETDBDAOPriRpDmdtAmendBasicVOCSQL.Query]]></desc>
			<sql><![CDATA[
INSERT INTO PRI_RP_DMDT (
	
 	PROP_NO
,	AMDT_SEQ
,	DMDT_FT_TP_CD
,	PRC_PROG_STS_CD
,	SRC_INFO_CD
,	ACPT_USR_ID
,	ACPT_OFC_CD
,	ACPT_DT
,	CRE_USR_ID
,	CRE_DT
,	UPD_USR_ID
,	UPD_DT
,	N1ST_CMNC_AMDT_SEQ
) 
WITH MASTER_RFA_INFO AS (
    SELECT MN.PROP_NO, MAX(MN.AMDT_SEQ) AS AMDT_SEQ
       FROM PRI_RP_MN MN, PRI_RP_DMDT DMDT
      WHERE MN.PROP_NO = (SELECT PROP_NO FROM PRI_RP_HDR WHERE RFA_NO = @[mst_rfa_no]) -- Mst RFA No
        AND MN.PROP_NO = DMDT.PROP_NO
        AND MN.AMDT_SEQ = DMDT.AMDT_SEQ
        AND PROP_STS_CD = 'A'
      GROUP BY MN.PROP_NO
),
BASIC_RFA_INFO AS (
	SELECT PROP_NO, AMDT_SEQ
	  FROM PRI_RP_DMDT
	 WHERE PROP_NO = @[prop_no]
	   AND AMDT_SEQ =  @[amdt_seq]
)
SELECT B.PROP_NO
	  ,B.AMDT_SEQ + 1
	  ,M.DMDT_FT_TP_CD
	,DECODE(M.SRC_INFO_CD, 'AM', 'I', 'AD', 'I', M.PRC_PROG_STS_CD)
	,M.SRC_INFO_CD
    	,B.ACPT_USR_ID
    	,B.ACPT_OFC_CD
    	,B.ACPT_DT
	  , @[cre_usr_id] 
	  ,SYSDATE 
	  ,@[upd_usr_id]
	  ,SYSDATE

	 ,	CASE	WHEN M.SRC_INFO_CD IN ('AM', 'AD') THEN B.AMDT_SEQ+1 
			ELSE B.AMDT_SEQ 
		END AS N1ST_CMNC_AMDT_SEQ 
 FROM MASTER_RFA_INFO MST_INFO,
       PRI_RP_DMDT M,-- Master
       BASIC_RFA_INFO BSC_INFO,
       PRI_RP_DMDT B -- Basic
 WHERE 
   -- Master
       M.PROP_NO = MST_INFO.PROP_NO
   AND M.AMDT_SEQ = MST_INFO.AMDT_SEQ
   -- Basic
   AND B.PROP_NO = BSC_INFO.PROP_NO
   AND B.AMDT_SEQ = BSC_INFO.AMDT_SEQ			]]></sql>
			<params>
				<param name="mst_rfa_no" type="12" value="" out="N"/>
				<param name="prop_no" type="12" value="" out="N"/>
				<param name="amdt_seq" type="2" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
