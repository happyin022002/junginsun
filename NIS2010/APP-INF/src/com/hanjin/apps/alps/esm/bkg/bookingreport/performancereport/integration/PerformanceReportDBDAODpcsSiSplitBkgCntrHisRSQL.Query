<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PerformanceReportDBDAODpcsSiSplitBkgCntrHisRSQL">
			<desc><![CDATA[]]></desc>
			<sql><![CDATA[
#if (${xter_sndr_id} == '')
	SELECT BKG_NO
			,DOC_TP_CD
			,XTER_RQST_NO
			,SPLIT_STS_CD
			,XTER_BKG_RQST_STS_CD
			,BKG_UPLD_STS_CD
			,XTER_RQST_SEQ
			,RQST_DT
			,POL_CD
			,RQST_DEP_DT
			,VVD_CD
			,EDI_HLD_FLG
			,ORIGIN_CNTR_CNT
			,CNTR_CNT
            ,CNTR_DESC		
			,ORIGIN_BKG_QTY
			,BKG_QTY
			,XTER_RMK
			,XTER_RMK_ALL
			,PCK_QTY
			,PCK_TP_CD
			,NET_WGT
			,NET_WGT_UT_CD
			,MEAS_QTY
			,MEAS_UT_CD
			,XTER_SNDR_ID
			,VPS_ETD_DT
			,SEARCH_TYPE
			,CRE_DT
			,NO_RANK
	FROM   DUAL
#else 

WITH TEMP_T AS (
SELECT  /*+RULE */
       B.BKG_NO
,      X.DOC_TP_CD
,      X.XTER_RQST_NO
,      X.SPLIT_STS_CD
,      X.XTER_BKG_RQST_STS_CD
,      X.BKG_UPLD_STS_CD
,      X.XTER_RQST_SEQ
,      TO_CHAR(X.RQST_DT,'YYYY-MM-DD HH24:MI') AS RQST_DT
,      B.POL_CD
,      TO_CHAR(X.RQST_DEP_DT,'YYYY-MM-DD') AS RQST_DEP_DT
,      VVD.VSL_CD || VVD.SKD_VOY_NO || VVD.SKD_DIR_CD AS VVD_CD 
,      B.EDI_HLD_FLG

,      CASE WHEN X.XTER_SNDR_ID IS NULL THEN  0 ELSE X.ORG_BKG_QTY END AS  ORIGIN_BKG_QTY 
,      (SELECT  NVL(SUM(Q.OP_CNTR_QTY),0) FROM BKG_QUANTITY Q WHERE Q.BKG_NO = B.BKG_NO) AS  BKG_QTY   -- current
,      CASE WHEN X.XTER_SNDR_ID IS NULL THEN  0 ELSE X.ORG_BKG_CNTR_QTY END AS  ORIGIN_CNTR_CNT 
,      (SELECT NVL(SUM(C.CNTR_VOL_QTY),0) FROM BKG_CONTAINER C WHERE C.BKG_NO = B.BKG_NO) AS  CNTR_CNT -- current
,      BKG_JOIN_FNC(CURSOR(SELECT C.CNTR_NO  FROM BKG_CONTAINER C WHERE C.BKG_NO = B.BKG_NO),',') CNTR_DESC

,      REPLACE(SUBSTR(X.XTER_BKG_RMK1,1,100), CHR(13) || CHR(10), ' ') AS XTER_RMK
,      X.XTER_BKG_RMK1 AS XTER_RMK_ALL
,      (SELECT D.PCK_QTY FROM BKG_BL_DOC D WHERE D.BKG_NO = B.BKG_NO) AS PCK_QTY
,      (SELECT D.PCK_TP_CD FROM BKG_BL_DOC D WHERE D.BKG_NO = B.BKG_NO) AS PCK_TP_CD
,      (SELECT D.ACT_WGT FROM BKG_BL_DOC D WHERE D.BKG_NO = B.BKG_NO) AS  NET_WGT
,      (SELECT D.WGT_UT_CD FROM BKG_BL_DOC D WHERE D.BKG_NO = B.BKG_NO) AS  NET_WGT_UT_CD
,      (SELECT D.MEAS_QTY FROM BKG_BL_DOC D WHERE D.BKG_NO = B.BKG_NO) AS  MEAS_QTY
,      (SELECT D.MEAS_UT_CD FROM BKG_BL_DOC D WHERE D.BKG_NO = B.BKG_NO) AS  MEAS_UT_CD
,      X.XTER_SNDR_ID
,      TO_CHAR(VPS.VPS_ETD_DT,'YYYY-MM-DD') AS VPS_ETD_DT	
,      '' SEARCH_TYPE
,      X.CRE_DT
,      DENSE_RANK()  OVER(PARTITION BY X.BKG_NO ORDER BY X.CRE_DT,X.XTER_RQST_NO,X.XTER_RQST_SEQ   ) NO_RANK
FROM   BKG_XTER_RQST_MST X
,      BKG_BOOKING B
,      BKG_VVD VVD
,      VSK_VSL_PORT_SKD VPS

WHERE  1=1
AND    X.BKG_NO(+)       = B.BKG_NO
AND    VPS.VSL_CD     = VVD.VSL_CD
AND    VPS.SKD_VOY_NO     =   VVD.SKD_VOY_NO
AND    VPS.SKD_DIR_CD     =   VVD.SKD_DIR_CD
AND    VPS.CLPT_IND_SEQ   =   VVD.POL_CLPT_IND_SEQ
AND	   VPS.VPS_PORT_CD    =   VVD.POL_CD
AND    VVD.BKG_NO = B.BKG_NO
AND    VVD.VSL_PRE_PST_CD || VVD.VSL_SEQ =   (SELECT MIN(BV.VSL_PRE_PST_CD || BV.VSL_SEQ) 
                                              FROM   BKG_VVD BV
                                              WHERE  BV.BKG_NO = VVD.BKG_NO)
                          
AND  B.BL_NO LIKE (SELECT SUBSTR(BK.BL_NO,1,10)
                  FROM   BKG_BOOKING BK
                  WHERE  1 = 1 
                  AND    BK.BKG_STS_CD != 'X'
                  AND    BK.BKG_CGO_TP_CD = 'F' 
                  AND    BK.BKG_NO = (SELECT X2.BKG_NO
                                      FROM   BKG_XTER_RQST_MST X2
                                      WHERE  X2.XTER_SNDR_ID = @[xter_sndr_id] AND X2.XTER_RQST_NO = @[xter_rqst_no] AND X2.XTER_RQST_SEQ = @[xter_rqst_seq])
                  ) || '%'
                                  
AND    NVL(X.DOC_TP_CD,'S') = 'S'   
     
ORDER BY   X.CRE_DT   

) 
SELECT T1.* FROM TEMP_T T1  WHERE T1.NO_RANK =  NVL((SELECT MIN(NO_RANK) FROM TEMP_T T2 WHERE T1.BKG_NO = T2.BKG_NO AND NVL(ORIGIN_BKG_QTY,0) > 0),1)    ORDER BY BKG_NO        
#end			]]></sql>
			<params>
				<param name="xter_sndr_id" type="12" value="" out="N"/>
				<param name="xter_rqst_no" type="12" value="" out="N"/>
				<param name="xter_rqst_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
