<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BlRatingDBDAOAddChargeAmendAuthRequestDetailCSQL">
			<desc><![CDATA[PCT이후 운임 승인 권한 요청을 생성한다.]]></desc>
			<sql><![CDATA[
INSERT INTO BKG_CHG_AMD_AUTH_DTL
(
    BKG_NO,
    CHG_AMD_SEQ,
    CHG_RT_SEQ,
    CHG_CD,
    CURR_CD,
    RAT_UT_CD,
    CRNT_CHG_AMT,
    AMD_CHG_AMT,
    DIFF_CHG_AMT,
    CRE_USR_ID,
    CRE_DT,
    UPD_USR_ID,
    UPD_DT
)
VALUES
(
    @[bkg_no],
    (SELECT MAX(CHG_AMD_SEQ)
     FROM BKG_CHG_AMD_AUTH
     WHERE BKG_NO = @[bkg_no]),
    (SELECT  NVL(MAX(CHG_RT_SEQ),0)+1 
     FROM BKG_CHG_AMD_AUTH_DTL
     WHERE BKG_NO = @[bkg_no]
     AND CHG_AMD_SEQ = (SELECT MAX(CHG_AMD_SEQ)
                        FROM BKG_CHG_AMD_AUTH
                        WHERE BKG_NO = @[bkg_no])),
    @[chg_cd],
    @[curr_cd],
    @[rat_ut_cd],
    @[crnt_chg_amt],
    @[amd_chg_amt],
    @[diff_chg_amt],
    @[cre_usr_id],
    SYSDATE,
    @[upd_usr_id],
    SYSDATE
)			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="chg_cd" type="12" value="" out="N"/>
				<param name="curr_cd" type="12" value="" out="N"/>
				<param name="rat_ut_cd" type="12" value="" out="N"/>
				<param name="crnt_chg_amt" type="12" value="" out="N"/>
				<param name="amd_chg_amt" type="12" value="" out="N"/>
				<param name="diff_chg_amt" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
