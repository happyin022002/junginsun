<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BDRSettingDBDAOupdateBdrFlgUSQL">
			<desc><![CDATA[updateBdrFlg]]></desc>
			<sql><![CDATA[
UPDATE BKG_VVD_BDR_LOG
SET
       #if ('TRNK'==${upd_cd})
       TRNK_BDR_FLG = 'Y',
	   TRNK_AUTO_BDR_FLG = 'Y',	
       TRNK_AUTO_BDR_DT = GLOBALDATE_PKG.TIME_CONV_FNC('KRPUS',SYSDATE-1,POL_CD),
       #elseif ('FDR'==${upd_cd})
       FDR_BDR_FLG = 'Y',
	   FDR_AUTO_BDR_FLG = 'Y',		
       FDR_AUTO_BDR_DT = GLOBALDATE_PKG.TIME_CONV_FNC('KRPUS',SYSDATE-1,POL_CD),
       #end
       UPD_USR_ID = 'BDRBookingSetting',
       UPD_DT = SYSDATE
WHERE  VSL_CD = @[vsl_cd]
AND    SKD_VOY_NO = @[skd_voy_no]
AND    SKD_DIR_CD = @[skd_dir_cd]
AND    POL_CD = @[pol_cd]
AND    POD_CD = @[pod_cd]
#if ('TRNK'==${upd_cd})
AND    'N' = TRNK_BDR_FLG
#elseif ('FDR'==${upd_cd})
AND    'N' = FDR_BDR_FLG
#end			]]></sql>
			<params>
				<param name="vsl_cd" type="12" value="" out="N"/>
				<param name="skd_voy_no" type="12" value="" out="N"/>
				<param name="skd_dir_cd" type="12" value="" out="N"/>
				<param name="pol_cd" type="12" value="" out="N"/>
				<param name="pod_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
