<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BSAManageDBDAOModifySpcScBsaCapaUSQL">
			<desc><![CDATA[ModifySpcScBsaCapa]]></desc>
			<sql><![CDATA[
UPDATE BSA_SLT_CHTR_CRR_CAPA A
    SET A.UPD_USR_ID   = @[upd_usr_id],
        A.UPD_DT       = SYSDATE,
        A.CRR_BSA_CAPA = NVL((
                              SELECT --B.BSA_SEQ, B.RLANE_CD, B.DIR_CD, B.TRD_CD, B.VSL_SEQ, B.BSA_OP_CD, B.BSA_OP_JB_CD, B.CRR_CD,
                                     SUM(CASE WHEN B.BSA_OP_JB_CD IN ('001','002','004')
                                              THEN B.CRR_BSA_CAPA
                                              WHEN B.BSA_OP_JB_CD IN ('003','005')
                                              THEN B.CRR_BSA_CAPA*(-1)
                                              ELSE 0
                                     END) CRR_BSA_CAPA
                              FROM BSA_SLT_CHTR_CRR_CAPA B
                              WHERE 1=1
                                AND A.BSA_SEQ      = B.BSA_SEQ
                                AND A.TRD_CD       = B.TRD_CD
                                AND A.RLANE_CD     = B.RLANE_CD
                                AND A.DIR_CD       = B.DIR_CD
                                AND A.VSL_SEQ      = B.VSL_SEQ
                                AND A.BSA_OP_CD    = B.BSA_OP_CD
                                AND A.CRR_CD       = B.CRR_CD
                                AND B.BSA_OP_JB_CD IN ('001','002','003','004','005')
                              --GROUP BY B.BSA_SEQ, B.RLANE_CD, B.DIR_CD, B.TRD_CD, B.VSL_SEQ, B.BSA_OP_CD, B.BSA_OP_JB_CD, B.CRR_CD
                         ),0)
 WHERE A.BSA_SEQ      = @[bsa_seq]
   AND A.TRD_CD       = @[trd_cd]
   AND A.RLANE_CD     = @[rlane_cd]
   AND A.DIR_CD       = @[dir_cd]
   AND A.VSL_SEQ      = @[vsl_seq]
   AND A.BSA_OP_CD    = @[bsa_op_cd]
   AND A.BSA_OP_JB_CD = '007'			]]></sql>
			<params>
				<param name="upd_usr_id" type="12" value="" out="N"/>
				<param name="bsa_seq" type="12" value="" out="Y"/>
				<param name="trd_cd" type="12" value="" out="Y"/>
				<param name="rlane_cd" type="12" value="" out="Y"/>
				<param name="dir_cd" type="12" value="" out="Y"/>
				<param name="vsl_seq" type="12" value="" out="Y"/>
				<param name="bsa_op_cd" type="12" value="" out="Y"/>
			</params>
		</query>
	</querys>
</sqls>
