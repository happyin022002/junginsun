<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="TCharterIOInvoiceDBDAOSearchCsrInfoRSQL">
			<desc><![CDATA[CSR의 일부 정보를 조회]]></desc>
			<sql><![CDATA[
SELECT A.SLP_TP_CD,
       A.SLP_FUNC_CD,
       A.SLP_OFC_CD,
       A.SLP_ISS_DT,
       A.SLP_SER_NO,
       A.SLP_SEQ_NO,
       A.VSL_CD,
       A.SKD_VOY_NO,
       A.SKD_DIR_CD,
       A.REV_DIR_CD,
       (SELECT M.LOC_CD
        FROM MDM_ORGANIZATION M
        WHERE M.OFC_CD = @[ofc_cd]) LOC_CD,  
       (SELECT M.AP_CTR_CD
        FROM MDM_ORGANIZATION M
        WHERE M.OFC_CD = @[ofc_cd]) CTR_CD,  -- 2018.05.02 MDM 에서 구하도록 변경
       A.N1ST_CURR_CD,
       A.N1ST_AMT,
       A.AP_DESC,
       (SELECT M.VNDR_SEQ
        FROM MDM_ORGANIZATION M
        WHERE M.OFC_CD = @[ofc_cd]) VNDR_SEQ -- 2018.05.02 SELADG 하드코딩 제거

FROM FMS_OWNR_ACCT_SLP A
WHERE A.SLP_TP_CD||A.SLP_FUNC_CD||A.SLP_OFC_CD||A.SLP_ISS_DT||A.SLP_SER_NO||A.SLP_SEQ_NO  = @[csr_no]			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
