<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AGNCommApprovalDBDAOSearchGWACMCommInfoPrintMasterListRSQL">
			<desc><![CDATA[AGNCommApprovalDBDAOSearchGWACMCommInfoPrintMasterListRSQL]]></desc>
			<sql><![CDATA[
SELECT
       DECODE(SIGN(A.CSR_AMT),0,'TRANSFER SLIP','CONSULTATION SLIP') AS HDR_TITLE, 
       A.CSR_NO AS HDR_CSR_NO,   
       A.TJ_OFC_CD AS HDR_OFFICE,   
       A.ATTR_CTNT10  AS HDR_PRPD_BY,  
       (SELECT VNDR_LGL_ENG_NM FROM MDM_VENDOR WHERE VNDR_SEQ = A.VNDR_NO) AS HDR_PAY_TO, 
       DECODE(A.CSR_TP_CD,'STANDARD','Standard','CREDIT','Credit Memo','PREPAYMENT','Prepayment',A.CSR_TP_CD) AS HDR_CSR_TYPE, 
       A.INV_DESC AS HDR_DESC,
       A.INV_DESC AS SUBJECT,   --add > 일단 DESCRIPTION과 같은 내용으로 넘기기
	   SYSDATE AS CSR_DATE,		--add > SYSDATE
       '' AS VAT_REGIST_NO,     --add > 일단 빈값으로 넘기기
       A.PAY_GRP_LU_CD AS HDR_PAY_GRP,  
       A.ATTR_CATE_NM AS HDR_EVI_TP,    --modiffy
       (SELECT COUNT(DISTINCT ATTR_CTNT1) FROM AP_INV_DTRB WHERE CSR_NO = A.CSR_NO) AS QTY, --add > invoice knt
       TO_CHAR(TO_DATE(A.INV_DT,'YYYYMMDD') + A.VNDR_TERM_NM,'YYYY/MM/DD') AS HDR_DUE_DT,
       SUBSTR(A.ATTR_CTNT2,1,3)||SUBSTR(A.ATTR_CTNT2,8)||SUBSTR(A.ATTR_CTNT2,4,4) AS HDR_ASA_NO,   
       TO_CHAR(TO_DATE(A.INV_DT,'YYYYMMDD'),'YYYY/MM/DD') AS HDR_INV_DT,
       A.CSR_CURR_CD AS HDR_CURR_CD,
       A.ATTR_CTNT1 AS HDR_APPRD_BY,
       ROUND(A.CSR_AMT,2) AS HDR_AMOUNT,
       ROUND(A.CSR_AMT,2) AS HDR_AMT,
       '' AS AR_OFFSET_NO, 		--add > 일단 빈값으로 넘기기
       APRO_USR_JB_TIT_CD AS APR_LINE          --add > 결재선 고정 Flag (N, G, B, P) 우회처리/그룹장/본부장/사장 > 함수적용
       --'' AS LOGIN_OFFICE --add > 원 기안자  결재 부서 정보(변경 부서가 아님) > 공통에서처리
  FROM AP_INV_HDR A 
 WHERE A.CSR_NO = @[h_csr_no]
   AND A.RQST_APRO_STEP_FLG = 'Y'			]]></sql>
			<params>
				<param name="h_csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
