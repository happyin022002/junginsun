<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ArApprovalDBDAOSearchRqstAproStepFlgRSQL">
			<desc><![CDATA[GW에서 전송받은 결재 상태를 조회한다]]></desc>
			<sql><![CDATA[
SELECT 
    CASE WHEN CSR_APRO_CMPL_DT IS NOT NULL THEN 'Y'
         WHEN CSR_RJCT_DT IS NOT NULL THEN 'N'
         WHEN CSR_APRO_STEP_ASGN_DT IS NOT NULL THEN 'P'
         ELSE 'X'
    END RQST_APRO_STEP_FLG
FROM AR_INV_HDR 
WHERE CSR_NO = @[csr_no]			]]></sql>
			<params>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
