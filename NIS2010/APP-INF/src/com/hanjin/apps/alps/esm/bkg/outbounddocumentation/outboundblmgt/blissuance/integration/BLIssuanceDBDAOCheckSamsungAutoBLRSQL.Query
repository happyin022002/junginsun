<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BLIssuanceDBDAOCheckSamsungAutoBLRSQL">
			<desc><![CDATA[BL Issue시에 해당 조건에 맞으면 정해진 이메일 주소로 BL과 함께 이메일 전송]]></desc>
			<sql><![CDATA[
SELECT 'Y'
FROM BKG_BOOKING BKG, BKG_HRD_CDG_CTNT HRD, BKG_CUSTOMER CUS
WHERE HRD_CDG_ID = 'SAMSUNG'
AND BKG.BKG_NO = CUS.BKG_NO
--AND CUS.BKG_CUST_TP_CD ='C'
AND CUS.CUST_CNT_CD = HRD.ATTR_CTNT2
AND CUS.CUST_SEQ = TO_NUMBER(HRD.ATTR_CTNT3)
--AND BKG.RFA_NO = HRD.ATTR_CTNT4
--AND SUBSTR(BKG.POD_CD,0,2) = HRD.ATTR_CTNT5
AND BKG.BKG_NO = @[bkg_no]			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
