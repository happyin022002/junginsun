<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SpecialCargoReceiptDBDAOModifyDgSpclRqstByVvdChangeUSQL">
			<desc><![CDATA[VVD 변경시 prechecking 때문에 special request를 하게될 경우 Danger Cargo 정보를 수정한다.]]></desc>
			<sql><![CDATA[
update bkg_dg_cgo
   set spcl_rqst_flg = 'Y'
     , spcl_rqst_desc = nvl(@[spcl_rqst_desc], spcl_rqst_desc)
	 , upd_usr_id = @[usr_id]
	 , upd_dt = sysdate
 where bkg_no = @[bkg_no]
   and dcgo_seq = @[dcgo_seq]
   and SPCL_CGO_APRO_CD <> 'C'			]]></sql>
			<params>
				<param name="spcl_rqst_desc" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="dcgo_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
