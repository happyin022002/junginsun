<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CsScreenDBDAOsearchUsCustSvcInstrRSQL">
			<desc><![CDATA[Inbound C/S_USA SCREEN에서 저장된 Remark를 조회한다.
* History
2012.05.16 김보배 [CHM-201217815] [BKG] Inbound CS_USA 화면 및 기능 변경사항 요청]]></desc>
			<sql><![CDATA[
SELECT INSTR.BKG_NO
     , INSTR.INSTR_RMK_SEQ
     , INSTR.INSTR_RMK
--     , INSTR.INSTR_RMK_TP_CD
     , CCD.INTG_CD_VAL_DP_DESC AS INSTR_RMK_TP_CD
     , INSTR.CRE_USR_ID
     , USR.USR_NM
     , to_char(INSTR.UPD_LOCL_DT, 'YYYY/MM/DD HH24:MI')  UPD_LOCL_DT
     , to_char(INSTR.UPD_LOCL_GDT, 'YYYY/MM/DD HH24:MI') UPD_LOCL_GDT
FROM  BKG_USA_CUST_SVC_INSTR INSTR
    , COM_USER USR
    , COM_INTG_CD_DTL CCD
WHERE INSTR.BKG_NO = @[bkg_no]
  AND INSTR.DELT_FLG = 'N'
  AND INSTR.CRE_USR_ID = USR.USR_ID (+)
  AND CCD.INTG_CD_ID(+) = 'CD03056'
  AND INSTR.INSTR_RMK_TP_CD = CCD.INTG_CD_VAL_CTNT(+)
ORDER BY INSTR.BKG_NO, INSTR.INSTR_RMK_SEQ			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
