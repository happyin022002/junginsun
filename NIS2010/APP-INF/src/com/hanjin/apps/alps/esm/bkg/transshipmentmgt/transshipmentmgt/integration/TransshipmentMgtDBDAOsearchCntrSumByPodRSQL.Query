<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="TransshipmentMgtDBDAOsearchCntrSumByPodRSQL">
			<desc><![CDATA[select]]></desc>
			<sql><![CDATA[
select vvd.pod_cd 
     , SUM(DECODE(SUBSTR(cntr.cntr_tpsz_cd, 2, 1), '2', 1, 0)) ft20
    , SUM(DECODE(SUBSTR(cntr.cntr_tpsz_cd, 2, 1), '2', 0, 1)) ft40
  from bkg_booking bk, bkg_vvd vvd, bkg_container cntr
 where bk.bkg_no       = vvd.bkg_no 
   and bk.bkg_no       = cntr.bkg_no 

#if (${loc_cd} !='')
   and vvd.pod_cd      = @[loc_cd]
#end

#if (${bl_no_list} != '')
   and bk.bl_no in(
	#foreach($blno IN ${bl_no_list}) 
     	#if($velocityCount < $bl_no_list.size()) 
        	'$blno', 
     	#else
			'$blno'
		#end
    #end
    )
#end
 group by vvd.pod_cd  
 order by vvd.pod_cd			]]></sql>
			<params>
				<param name="loc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
