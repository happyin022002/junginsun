<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GhanaManifestListDownloadDBDAOsearchManifestListRSQL">
			<desc><![CDATA[가나 세관에 적하목록을 신고하기 위해 BKG Manifest 정보를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT T1.*
       , DECODE(T1.MF_SND_DT, NULL, 'F', 'A') MFSND_CODE
	   , COUNT(BL_NO) OVER() TOTAL_BL
FROM (
SELECT  BV.VSL_CD || BV.SKD_VOY_NO || BV.SKD_DIR_CD VVD_CD
		,BKG.BKG_NO ,BV.VSL_CD,BV.SKD_VOY_NO,BV.SKD_DIR_CD
		,NVL(BKG.BL_NO||BKG.BL_TP_CD,' ') BL_NO 
		,NVL(BKG.RCV_TERM_CD||BKG.DE_TERM_CD,'  ') TERM_CD
        
        #if (${pol_cd}!= '')
        ,DECODE(BV.POL_CD, @[pol_cd], DECODE(BKG.POL_CD, @[pol_cd], 'L', 'T'), '') GHTEM_CD
        #else 
        ,DECODE(BV.POD_CD, @[pod_cd], DECODE(BKG.POD_CD,@[pod_cd],'L','T'), '') GHTEM_CD
        #end
        
		,BKG.POR_CD, BV.POL_CD BV_POL_CD, BV.POD_CD BV_POD_CD, BKG.DEL_CD
		,DOC.ACT_WGT, DOC.WGT_UT_CD
		,DOC.PCK_QTY
		,NVL(BR.FRT_TERM_CD, ' ') FRT_TERM_CD
		,DECODE(BKG.HOT_DE_FLG, 'Y', 'H', ' ') HOT_DE_FLG
		,DECODE(BKG.RC_FLG, 'Y', 'R', ' ') RC_FLG
		,(SELECT MAX(B.MF_SND_DT) 
          FROM BKG_CSTMS_GH_BL B 
         WHERE B.VSL_CD=BV.VSL_CD 
           AND B.SKD_VOY_NO=BV.SKD_VOY_NO 
           AND B.SKD_DIR_CD=BV.SKD_DIR_CD 
           AND B.BL_NO=BKG.BL_NO) MF_SND_DT
        ,BV.POL_CD, BV.POD_CD   
	
	FROM  BKG_BOOKING BKG, BKG_BL_DOC DOC, BKG_RATE BR, BKG_VVD BV
	WHERE BV.VSL_CD		= SUBSTR(@[vvd_cd] , 1, 4)
	AND BV.SKD_VOY_NO	= SUBSTR(@[vvd_cd] , 5, 4)
	AND BV.SKD_DIR_CD	= SUBSTR(@[vvd_cd] , 9, 1)
	AND BKG.BKG_NO       = BV.BKG_NO 
#if (${pol_cd}!= '')
    AND BV.POL_CD = @[pol_cd]
#else
    AND BV.POD_CD = @[pod_cd]
#end  
	AND (BKG.BKG_STS_CD ='F' OR BKG.BKG_STS_CD = 'W') 
	AND BKG.BKG_CGO_TP_CD <> 'P' 		
	AND BKG.BL_NO IS NOT NULL 		
	AND BKG.BKG_NO       = DOC.BKG_NO 
	AND BKG.BKG_NO       = BR.BKG_NO 
    ORDER BY BV.POL_CD, BV.POD_CD,NVL(BKG.BL_NO||BKG.BL_TP_CD,' ')
) T1			]]></sql>
			<params>
				<param name="pol_cd" type="12" value="" out="N"/>
				<param name="pod_cd" type="12" value="" out="N"/>
				<param name="vvd_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
