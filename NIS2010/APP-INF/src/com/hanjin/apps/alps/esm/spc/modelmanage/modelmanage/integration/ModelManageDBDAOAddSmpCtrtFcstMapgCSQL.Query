<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ModelManageDBDAOAddSmpCtrtFcstMapgCSQL">
			<desc><![CDATA[SMP Confirm시 해당 season/version의 화주를 SPC_CTRT_FCAST_OFC_MAPG에 저장합니다.
[CHM-201322502-01] SPC 프로젝트 - 성수기 선복운영 개선을 위한 T/F추진
2014.02.04 [CHM-201428383-01] RFA 로직 추가
2014.05.16 [CHM-201430353] SMP / AES 보완요청 - SC 입력 기능 추가]]></desc>
			<sql><![CDATA[
INSERT INTO SPC_CTRT_FCAST_OFC_MAPG (
    TRD_CD        ,
    SUB_TRD_CD    ,
    RLANE_CD      ,
    DIR_CD        ,
    IOC_TS_CD     ,
    CTRT_OFC_CD   ,
    CUST_CNT_CD   ,
    CUST_SEQ      ,
    FCAST_SEQ     ,
    SLS_RGN_OFC_CD,
    SC_NO         ,
    RFA_NO        ,
    CRE_USR_ID    ,
    CRE_DT        ,
    UPD_USR_ID    ,
    UPD_DT
)
SELECT DISTINCT
       A.TRD_CD,
       A.SUB_TRD_CD,
       A.RLANE_CD,
       B.DIR_CD,
       DECODE(SUBSTR(A.TRD_CD,1,1), 'I', 'I', 'O') AS IOC_TS_CD,
       CTRT_OFC_CD,
       CUST_CNT_CD,
       CUST_SEQ,
       NVL((SELECT MAX(FCAST_SEQ)
              FROM SPC_CTRT_FCAST_OFC_MAPG C
             WHERE C.TRD_CD      = A.TRD_CD
               AND C.SUB_TRD_CD  = A.SUB_TRD_CD
               AND C.RLANE_CD    = A.RLANE_CD
               AND C.DIR_CD      = B.DIR_CD
               AND C.IOC_TS_CD   = DECODE(SUBSTR(A.TRD_CD,1,1), 'I', 'I', 'O')
               AND C.CTRT_OFC_CD = A.CTRT_OFC_CD
               AND C.CUST_CNT_CD = A.CUST_CNT_CD
               AND C.CUST_SEQ    = A.CUST_SEQ
               AND C.SLS_RGN_OFC_CD = A.SLS_RGN_OFC_CD
            ), 0) + ROW_NUMBER() OVER (PARTITION BY A.TRD_CD, A.SUB_TRD_CD, A.RLANE_CD, B.DIR_CD, DECODE(SUBSTR(A.TRD_CD,1,1), 'I', 'I', 'O'), CTRT_OFC_CD, CUST_CNT_CD, CUST_SEQ, SLS_RGN_OFC_CD ORDER BY A.TRD_CD) AS FCAST_SEQ,
       SLS_RGN_OFC_CD,
       SC_NO,
       RFA_NO,
       'SPC_USER' AS CRE_USR_ID,
       SYSDATE    AS CRE_DT    ,
       'SPC_USER' AS UPD_USR_ID,
       SYSDATE    AS UPD_DT
  FROM SPC_MDL_CUST_REV_LANE A,
       SPC_HD_HUL_MST        B
 WHERE A.TRD_CD        = @[trd_cd]
   AND A.COST_YRWK     = @[cost_yrwk]
   AND A.VER_SEQ       = @[ver_seq]
   AND A.TRD_CD        = B.TRD_CD
   AND A.RLANE_CD      = B.RLANE_CD
   AND A.SUB_TRD_CD    = B.SUB_TRD_CD
--   AND A.RLANE_ADJ_QTY > 0
   AND A.DELT_FLG      = 'N'
   AND NOT EXISTS (SELECT 'X'
                     FROM SPC_CTRT_FCAST_OFC_MAPG T
                    WHERE TRD_CD             = A.TRD_CD
                      AND SUB_TRD_CD         = A.SUB_TRD_CD
                      AND RLANE_CD           = A.RLANE_CD
                      AND DIR_CD             = B.DIR_CD
                      AND IOC_TS_CD          = DECODE(SUBSTR(A.TRD_CD,1,1), 'I', 'I', 'O')
                      AND CTRT_OFC_CD        = A.CTRT_OFC_CD
                      AND CUST_CNT_CD        = A.CUST_CNT_CD
                      AND CUST_SEQ           = A.CUST_SEQ
                      AND NVL(T.SC_NO , 'X') = NVL(A.SC_NO , NVL(T.SC_NO, 'X'))
                      AND NVL(T.RFA_NO, 'X') = NVL(A.RFA_NO, 'X')
--                      AND FCAST_SEQ          = A.DTL_SEQ
                      AND SLS_RGN_OFC_CD     = A.SLS_RGN_OFC_CD)			]]></sql>
			<params>
				<param name="trd_cd" type="12" value="" out="N"/>
				<param name="cost_yrwk" type="12" value="" out="N"/>
				<param name="ver_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
