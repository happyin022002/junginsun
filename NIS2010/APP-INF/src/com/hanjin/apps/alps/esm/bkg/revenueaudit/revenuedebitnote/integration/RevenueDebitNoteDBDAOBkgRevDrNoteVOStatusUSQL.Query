<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RevenueDebitNoteDBDAOBkgRevDrNoteVOStatusUSQL">
			<desc><![CDATA[rdn 상태 값을 변경]]></desc>
			<sql><![CDATA[
UPDATE	BKG_REV_DR_NOTE
SET 
	RDN_STS_CD		= @[rdn_sts_cd]
,	UPD_DT			= SYSDATE
#if (${bkg_corr_no} != '') 
,	BKG_CORR_NO		= @[bkg_corr_no]
#end
#if (${n3pty_no} != '')
,	N3PTY_NO	= @[n3pty_no]
#end
#if(${umch_tp_cd} == 'Non-Charged B/L')
,   UMCH_SUB_TP_CD	= @[umch_sub_tp_cd]
#end
#if (${rdn_sts_cd} == 'CL' || ${rdn_sts_cd} == 'CV' || ${rdn_sts_cd} == 'ST')
,	UMCH_TP_CD		= @[umch_tp_cd]
,	UMCH_SUB_TP_CD	= @[umch_sub_tp_cd]
,	RDN_ISS_RSN_CD	= @[rdn_iss_rsn_cd]
,	UMCH_RMK		= @[umch_rmk]
,	INV_NO		    = @[inv_no]
,	VVD_CD		    = @[vvd_cd]
#if (${umch_tp_cd} == 'O')
,	BKG_NO		    = @[bkg_no]
#end
#end
WHERE	RDN_NO		= @[rdn_no]
AND		RVIS_SEQ	= @[rvis_seq]			]]></sql>
			<params>
				<param name="rdn_sts_cd" type="12" value="" out="N"/>
				<param name="bkg_corr_no" type="12" value="" out="N"/>
				<param name="n3pty_no" type="12" value="" out="N"/>
				<param name="umch_sub_tp_cd" type="12" value="" out="N"/>
				<param name="umch_tp_cd" type="12" value="" out="N"/>
				<param name="rdn_iss_rsn_cd" type="12" value="" out="N"/>
				<param name="umch_rmk" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
				<param name="vvd_cd" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="rdn_no" type="12" value="" out="N"/>
				<param name="rvis_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
