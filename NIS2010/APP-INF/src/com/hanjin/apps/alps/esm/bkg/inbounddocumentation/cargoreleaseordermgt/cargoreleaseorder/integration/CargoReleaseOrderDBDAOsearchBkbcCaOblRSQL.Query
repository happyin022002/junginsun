<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CargoReleaseOrderDBDAOsearchBkbcCaOblRSQL">
			<desc><![CDATA[CA Cargo Relase 대상 조회]]></desc>
			<sql><![CDATA[
SELECT
	FOB_CA_CHK,
	OBL_CHK,
	OBL_CHK_CNT,
	OBL_RDEM_FLG,
	BL_NO,
	CNT_CD,
	(SELECT SUBSTR(POD_CD,1,2) FROM BKG_BOOKING WHERE BKG_NO = @[bl_no]) POD_CA_CHK
FROM (
SELECT MAX(VSK_CNT) AS FOB_CA_CHK,
       MAX(OBL_CHK) AS OBL_CHK,
       MAX(OBL_CHK_CNT) AS OBL_CHK_CNT,
       MAX(OBL_REAL_FLG) AS OBL_RDEM_FLG,
       @[bl_no] AS  BL_NO,
       DECODE(MAX(VSK_CNT),'Y','CA',NULL) AS CNT_CD
  FROM (       
        SELECT DECODE(SUBSTR(CSTMS_PORT_CD,1,2),'CA','Y','N') US_CHK,
               '' OBL_CHK,
               0 OBL_CHK_CNT,
               '' OBL_REAL_FLG,
               SUBSTR(CSTMS_PORT_CD,1,2) CNT_CD
          FROM BKG_CSTMS_ADV_BL
         WHERE CNT_CD = 'CA'
           AND BL_NO  = @[bl_no] 
        UNION ALL
        SELECT 'Y',
               DECODE(NVL(C.FRT_CLT_FLG,'N')||NVL(C.OBL_RDEM_FLG,'N')||NVL(C.CSTMS_CLR_CD,'N'),
                      NVL(C.FRT_CLT_FLG,'N')||(CASE WHEN A.BL_TP_CD='W' OR D.OBL_SRND_FLG='Y' THEN 'Y' ELSE 'N' END)||NVL(C.CSTMS_CLR_CD,'N'),'N','Y') FOC_YN,
               COUNT(C.BL_NO),
               CASE WHEN A.BL_TP_CD='W' OR D.OBL_SRND_FLG='Y' THEN 'Y' ELSE 'N' END,
               'CA'
          FROM BKG_BOOKING  A,
               BKG_BL_DOC   B,
               BKG_CGO_RLSE C,
               BKG_BL_ISS   D
         WHERE A.BL_NO   = @[bl_no]
           AND A.BKG_NO  = B.BKG_NO(+)
           AND A.BKG_NO  = D.BKG_NO(+)
           AND A.BL_NO   = C.BL_NO(+)
        GROUP BY DECODE(NVL(C.FRT_CLT_FLG,'N')||NVL(C.OBL_RDEM_FLG,'N')||NVL(C.CSTMS_CLR_CD,'N'),
                        NVL(C.FRT_CLT_FLG,'N')||(CASE WHEN A.BL_TP_CD='W' OR D.OBL_SRND_FLG='Y' THEN 'Y' ELSE 'N' END)||NVL(C.CSTMS_CLR_CD,'N'),'N','Y')   ,
                 CASE WHEN A.BL_TP_CD='W' OR D.OBL_SRND_FLG='Y' THEN 'Y' ELSE 'N' END
       ) AA,
       (
        SELECT DECODE(COUNT(*),0,'N','Y') VSK_CNT
          FROM (
                SELECT C.BL_NO
                  FROM BKG_VVD          A,
                       VSK_VSL_PORT_SKD B,
                       BKG_BOOKING      C
                 WHERE C.BL_NO      = @[bl_no] 
                   AND A.BKG_NO     = C.BKG_NO
                   AND A.VSL_CD     = B.VSL_CD
                   AND A.SKD_VOY_NO = B.SKD_VOY_NO
                   AND A.SKD_DIR_CD = B.SKD_DIR_CD
                   AND B.VPS_PORT_CD LIKE 'CA%'
                   AND SUBSTR(C.POL_CD,1,2) <> 'CA' 
                UNION
                SELECT BL_NO
                  FROM BKG_BOOKING
                 WHERE BL_NO = @[bl_no]
                   AND ( POD_CD LIKE 'CA%' OR DEL_CD LIKE 'CA%' )

               )
       ) BB
)			]]></sql>
			<params>
				<param name="bl_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
