<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DailyForecastManageDBDAOSpcDlyFcastCustSwitchUSQL">
			<desc><![CDATA[전임 S.REP이 입력한 Forecast 정보를 삭제한다.
[CHM-201322502-01] SPC 프로젝트 - 성수기 선복운영 개선을 위한 T/F추진]]></desc>
			<sql><![CDATA[
UPDATE SPC_DLY_FCAST_CUST A
   SET A.FCAST_TTL_QTY	       	= 0, 
       A.FCAST_40FT_HC_QTY     	= 0, 
       A.FCAST_45FT_HC_QTY     	= 0, 
       A.FCAST_RF_QTY          	= 0, 
       A.FCAST_TTL_WGT         	= 0, 
       A.CFM_TTL_QTY           	= 0, 
       A.CFM_40FT_HC_QTY       	= 0, 
       A.CFM_45FT_HC_QTY       	= 0, 
       A.CFM_RF_QTY            	= 0, 
       A.CFM_TTL_WGT           	= 0, 
       A.MODI_GDT              	= CAST(SYS_EXTRACT_UTC(TO_TIMESTAMP(SYSDATE, 'YYYY/MM/DD HH24:MI:SS')) AS DATE),
       A.USD_BKG_TTL_QTY       	= 0, 
       A.USD_BKG_20FT_QTY      	= 0, 
       A.USD_BKG_40FT_QTY      	= 0, 
       A.USD_BKG_40FT_HC_QTY   	= 0, 
       A.USD_BKG_45FT_HC_QTY   	= 0, 
       A.USD_BKG_RF_QTY        	= 0, 
       A.USD_BKG_TTL_WGT       	= 0, 
       A.UPD_USR_ID	        = @[upd_usr_id], 
       A.UPD_DT          	= SYSDATE, 
       A.FCAST_53FT_QTY        	= 0, 
       A.CFM_53FT_QTY          	= 0, 
       A.USD_BKG_53FT_QTY      	= 0, 
       A.FCAST_20FT_QTY        	= 0, 
       A.FCAST_40FT_QTY        	= 0
 WHERE A.TRD_CD      = @[trd_cd]
#if(${sub_trd_cd} != '')
   AND A.SUB_TRD_CD  = @[sub_trd_cd]
#end
#if(${rlane_cd} != '')
   AND A.RLANE_CD    IN (${rlane_cd})
#end
#if(${dir_cd} != '')
   AND A.DIR_CD      = @[dir_cd]
#end
   AND A.IOC_TS_CD   = @[ioc_ts_cd]
   AND A.CUST_CNT_CD = @[cust_cnt_cd]
   AND A.CUST_SEQ    = TO_NUMBER(@[cust_seq])
   AND A.SREP_USR_ID = @[srep_cd]
   AND EXISTS (SELECT 'A'
                 FROM MAS_MON_VVD V
                WHERE SUBSTR(V.SLS_YRMON, 1, 4)||V.COST_WK >= REPLACE(@[cost_wk], '-', '')
                  AND V.DELT_FLG   = 'N'
                  AND V.TRD_CD     = A.TRD_CD
                  AND V.RLANE_CD   = A.RLANE_CD
                  AND V.DIR_CD     = A.DIR_CD
                  AND V.SUB_TRD_CD = A.SUB_TRD_CD
                  AND V.VSL_CD     = A.VSL_CD
                  AND V.SKD_VOY_NO = A.SKD_VOY_NO
                  AND V.DIR_CD     = A.SKD_DIR_CD
                  AND V.IOC_CD     = DECODE(@[ioc_ts_cd], 'T', 'I', @[ioc_ts_cd])
              )			]]></sql>
			<params>
				<param name="upd_usr_id" type="12" value="" out="N"/>
				<param name="trd_cd" type="12" value="" out="N"/>
				<param name="sub_trd_cd" type="12" value="" out="N"/>
				<param name="dir_cd" type="12" value="" out="N"/>
				<param name="ioc_ts_cd" type="12" value="" out="N"/>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
				<param name="cust_seq" type="12" value="" out="N"/>
				<param name="srep_cd" type="12" value="" out="N"/>
				<param name="cost_wk" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
