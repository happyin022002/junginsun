<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SCBoilerPlateProposalDBDAOPriSpBlplCtntHistoryVORSQL">
			<desc><![CDATA[Boiler Plate Content History 조회
2012.02.23 이석준[CHM-201216153-01] S/C Amendment History 화면 기능 개선 요청]]></desc>
			<sql><![CDATA[
SELECT 
     A.PROP_NO             
    ,A.AMDT_SEQ            
    ,A.BLPL_SEQ  
	,A.BLPL_CTNT_SEQ         
	,A.BLPL_CTNT
    ,A.N1ST_CMNC_AMDT_SEQ 
    ,(SELECT TO_CHAR(EFF_DT, 'YYYYMMDD') FROM PRI_SP_MN WHERE PROP_NO = A.PROP_NO 
										AND AMDT_SEQ = A.N1ST_CMNC_AMDT_SEQ  ) EFF_DT 
    ,CASE
        WHEN A.AMDT_SEQ = @[amdt_seq] THEN TO_CHAR(M.EXP_DT,'YYYYMMDD')
        ELSE
        (    
        SELECT CASE WHEN M.EFF_DT <= N.EXP_DT THEN TO_CHAR(M.EFF_DT - 1,'YYYYMMDD')
               ELSE TO_CHAR(N.EXP_DT,'YYYYMMDD')
               END AS EXP_DT
        FROM PRI_SP_MN N
        WHERE PROP_NO = M.PROP_NO AND AMDT_SEQ = M.AMDT_SEQ-1 
        )    
    END  EXP_DT
	,A.DP_SEQ
    ,A.SRC_INFO_CD            
    ,SRC.INTG_CD_VAL_DP_DESC SRC_INFO_DTL       
    ,A.PRC_PROG_STS_CD 
    ,STS.INTG_CD_VAL_DP_DESC PRC_PROG_STS_DTL 
    ,A.ACPT_USR_ID
    ,A.ACPT_OFC_CD
    ,TO_CHAR(A.ACPT_DT,'YYYYMMDD') ACPT_DT	
	,(SELECT USR_NM FROM COM_USER WHERE USR_ID = A.ACPT_USR_ID)||' / '||A.ACPT_OFC_CD ACPT_USR_NM
FROM    
     PRI_SP_BLPL_CTNT   A  
    ,PRI_SP_MN          M  
    ,COM_INTG_CD_DTL    SRC
    ,COM_INTG_CD_DTL    STS
WHERE  
    M.PROP_NO           = A.PROP_NO
AND M.AMDT_SEQ          = @[amdt_seq]
AND A.PROP_NO 			= @[prop_no]
AND A.AMDT_SEQ IN ( @[amdt_seq], DECODE((SELECT LGCY_IF_FLG FROM PRI_SP_MN TMP WHERE TMP.PROP_NO = @[prop_no] AND TMP.AMDT_SEQ = @[amdt_seq]), 'Y', @[amdt_seq], @[amdt_seq]-1))
AND    (( A.AMDT_SEQ = @[amdt_seq] 
			AND A.SRC_INFO_CD <> DECODE((SELECT LGCY_IF_FLG FROM PRI_SP_MN TMP WHERE TMP.PROP_NO = @[prop_no] AND TMP.AMDT_SEQ = @[amdt_seq]),'Y','AD','ZZ')
#if (${con_flg} == '0')
 			AND A.N1ST_CMNC_AMDT_SEQ = DECODE((SELECT LGCY_IF_FLG FROM PRI_SP_MN TMP WHERE TMP.PROP_NO = @[prop_no] AND TMP.AMDT_SEQ = @[amdt_seq]),'Y', A.N1ST_CMNC_AMDT_SEQ , A.AMDT_SEQ)
#end
		 )
       OR ( A.AMDT_SEQ = @[amdt_seq]-1
            AND  A.SRC_INFO_CD <> 'AD'
            AND  NOT EXISTS ( SELECT 'X' FROM PRI_SP_BLPL_CTNT B
                               WHERE 
                                   B.PROP_NO         = A.PROP_NO 
                               AND B.AMDT_SEQ        = @[amdt_seq]
							   AND B.BLPL_SEQ		 = @[blpl_seq]
							   AND B.BLPL_CTNT_SEQ   = A.BLPL_CTNT_SEQ
                               AND B.N1ST_CMNC_AMDT_SEQ    = A.N1ST_CMNC_AMDT_SEQ           
                             )
           )
       )
AND A.BLPL_SEQ           = @[blpl_seq]
AND SRC.INTG_CD_VAL_CTNT = A.SRC_INFO_CD
AND SRC.INTG_CD_ID       = 'CD02064'
AND STS.INTG_CD_VAL_CTNT = A.PRC_PROG_STS_CD
AND STS.INTG_CD_ID       = 'CD01719'       
 #if (${con_flg} == '0') 
AND  0=0
#else
AND 1=1
#end
ORDER BY A.DP_SEQ,A.BLPL_CTNT_SEQ, A.AMDT_SEQ			]]></sql>
			<params>
				<param name="amdt_seq" type="12" value="" out="N"/>
				<param name="prop_no" type="12" value="" out="N"/>
				<param name="blpl_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
