<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CargoReleaseOrderDBDAOsearchCaCgoVvdMkFileRSQL">
			<desc><![CDATA[CargoReleaseOrderDBDAOsearchCaCgoVvdMkFileRSQL]]></desc>
			<sql><![CDATA[
SELECT '{BKGVVD'                                                                  || CHR(10) ||
       'BVVD1:'          || NVL(A.VSL_CD || A.SKD_VOY_NO || A.SKD_DIR_CD, ' ') || CHR(10) ||
       'VSL_CALLSIGN1:'  || NVL(D.CALL_SGN_NO, ' ')                             || CHR(10) ||
       'VSL_LLOYDCODE1:' || NVL(D.LLOYD_NO, ' ')                              || CHR(10) ||
       'VSL_FULLNAME1:'  || NVL(D.VSL_ENG_NM, ' ')                                || CHR(10) ||
       'BLPOL1:'         || NVL(A.POL_CD, ' ')                                   || CHR(10) ||
       'POL_FULLNAME1:'  || E.LOC_NM                                            || CHR(10) ||
       'BLPOD1:'         || NVL(A.POD_CD, ' ')                                   || CHR(10) ||
       'POD_FULLNAME1:'  || F.LOC_NM                                            || CHR(10) ||
       'POLETA1:'        || NVL(TO_CHAR(B.VPS_ETA_DT, 'YYYYMMDDHH24MI'), ' ')     || CHR(10) ||
       'POLETA1_GMT:'    || NVL(TO_CHAR(GLOBALDATE_PKG.TIME_CONV_FNC(B.VPS_PORT_CD,B.VPS_ETA_DT,'GMT' ), 'YYYYMMDDHH24MI'), ' ') || CHR(10) ||
       'POLATA1:'                                                                 || CHR(10) ||
       'POLATA1_GMT:'                                                             || CHR(10) ||
       'POLETD1:'        || NVL(TO_CHAR(B.VPS_ETA_DT, 'YYYYMMDDHH24MI'), ' ')     || CHR(10) ||
       'POLETD1_GMT:'    || NVL(TO_CHAR(GLOBALDATE_PKG.TIME_CONV_FNC(B.VPS_PORT_CD,B.VPS_ETA_DT,'GMT' ), 'YYYYMMDDHH24MI'), ' ') || CHR(10) ||
       'POLATD1:'                                                                 || CHR(10) ||
       'POLATD1_GMT:'                                                             || CHR(10) ||
       'PODETA1:'        || NVL(TO_CHAR(C.VPS_ETA_DT, 'YYYYMMDDHH24MI'), ' ')    || CHR(10) ||
       'PODETA1_GMT:'    || NVL(TO_CHAR(GLOBALDATE_PKG.TIME_CONV_FNC(C.VPS_PORT_CD,C.VPS_ETA_DT,'GMT' ), 'YYYYMMDDHH24MI'), ' ') || CHR(10) ||
       'PODATA1:'                                                                 || CHR(10) ||
       'PODATA1_GMT:'                                                             || CHR(10) ||
       'PODETD1:'        || NVL(TO_CHAR(C.VPS_ETA_DT, 'YYYYMMDDHH24MI'), ' ')     || CHR(10) ||
       'PODETD1_GMT:'    || NVL(TO_CHAR(GLOBALDATE_PKG.TIME_CONV_FNC(C.VPS_PORT_CD,C.VPS_ETA_DT,'GMT' ), 'YYYYMMDDHH24MI'), ' ') || CHR(10) ||
       'PODATD1:'        || CHR(10) ||
       'PODATD1_GMT:'    || CHR(10) ||
       '}BKGVVD' || CHR(10) AS flat_file_vvd
  FROM BKG_VVD          A,
       VSK_VSL_PORT_SKD B,
       VSK_VSL_PORT_SKD C,
       MDM_VSL_CNTR     D,
       MDM_LOCATION     E,
       MDM_LOCATION     F
 WHERE A.BKG_NO          = @[bkg_no] /* 변수 치환 */
   AND A.VSL_CD          = B.VSL_CD(+)
   AND A.SKD_VOY_NO      = B.SKD_VOY_NO(+)
   AND A.SKD_DIR_CD      = B.SKD_DIR_CD(+)
   AND A.POL_CD          = B.VPS_PORT_CD(+)
   AND B.CLPT_IND_SEQ(+) = '1'
   AND A.VSL_CD          = C.VSL_CD(+)
   AND A.SKD_VOY_NO      = C.SKD_VOY_NO(+)
   AND A.SKD_DIR_CD      = C.SKD_DIR_CD(+)
   AND A.POD_CD          = C.VPS_PORT_CD(+)
   AND C.CLPT_IND_SEQ(+) = '1'
   AND A.VSL_CD          = D.VSL_CD(+)
   AND A.POL_CD          = E.LOC_CD(+)
   AND A.POD_CD          = F.LOC_CD(+)			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
