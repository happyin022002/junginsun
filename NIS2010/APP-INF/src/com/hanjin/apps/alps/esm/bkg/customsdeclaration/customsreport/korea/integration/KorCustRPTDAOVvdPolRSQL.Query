<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="KorCustRPTDAOVvdPolRSQL">
			<desc><![CDATA[VVD, POL로 조회]]></desc>
			<sql><![CDATA[
SELECT MRN_NO||MRN_CHK_NO	  AS MRN  
, VSL_CD||SKD_VOY_NO||SKD_DIR_CD  AS VVD  
, NVL(POL_CD, ' ')		  AS POL  
, NVL(POD_CD, ' ')		  AS POD  
, NVL(OFC_CD, ' ')		  AS OFFICE  
, NVL(CRE_USR_ID, ' ')		  AS USERID  
, NVL(BL_KNT, 0)		  AS BLCOUNT  
, NVL(KR_CSTMS_DL_ACT_CD, ' ')	  AS AC  
, TO_CHAR(CRE_DT, 'YYYYMMDD')	  AS DT  
, TO_CHAR(CRE_DT, 'HH24:MI:SS')   AS DT2  
FROM BKG_CSTMS_KR_DL_HIS  
WHERE 1 = 1  
#if (${txt_vvd} != '')  
AND VSL_CD     = SUBSTR(@[txt_vvd],1,4)  
AND SKD_VOY_NO = SUBSTR(@[txt_vvd],5,4)  
AND SKD_DIR_CD = SUBSTR(@[txt_vvd],9,1)  
#end  
#if (${txt_pol} != '')  
AND POL_CD = @[txt_pol]  
#end  
ORDER BY MRN_NO||MRN_CHK_NO, VSL_CD||SKD_VOY_NO||SKD_DIR_CD			]]></sql>
			<params>
				<param name="txt_vvd" type="12" value="" out="N"/>
				<param name="txt_pol" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
