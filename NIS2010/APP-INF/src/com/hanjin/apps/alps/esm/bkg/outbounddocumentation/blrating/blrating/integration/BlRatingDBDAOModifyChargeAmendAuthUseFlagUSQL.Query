<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BlRatingDBDAOModifyChargeAmendAuthUseFlagUSQL">
			<desc><![CDATA[Charge Amend 권한 사용여부를 업데이트 한다.]]></desc>
			<sql><![CDATA[
UPDATE BKG_CHG_AMD_AUTH U
SET AUTH_USE_FLG = 'Y',
    AUTH_USE_DT = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[ofc_cd]),
    UPD_USR_ID = @[usr_id],
    UPD_DT = SYSDATE
WHERE U.BKG_NO = @[bkg_no]
AND U.CHG_AMD_SEQ = (SELECT MAX(CHG_AMD_SEQ)
                   FROM BKG_CHG_AMD_AUTH S
                   WHERE S.BKG_NO = U.BKG_NO)
AND U.CHG_AMD_RQST_STS_CD = 'A'
AND AUTH_USE_FLG = 'N'			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
