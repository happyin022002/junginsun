<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceCorrectionDBDAOARInvoiceListByVesselVORSQL">
			<desc><![CDATA[   ]]></desc>
			<sql><![CDATA[
SELECT
	A.BL_SRC_NO
	,A.BKG_NO
	,A.BKG_OFC_CD
	,A.REV_TP_CD
	,A.ACT_CUST_CNT_CD
	,A.POL_CD
	,A.POD_CD
	,A.AR_IF_NO
	,A.LOCL_CURR_CD
	,A.INV_TTL_LOCL_AMT
	,A.SAIL_ARR_DT
	,A.UPD_USR_ID
	,ROUND(SUM(A.CHG_AMT),A.DP_PRCS_KNT) CHG_AMT
	,A.DP_PRCS_KNT
FROM(
	SELECT    A.BL_SRC_NO
		,A.BKG_NO AS BKG_NO
		,A.SLS_OFC_CD AS BKG_OFC_CD
		,A.REV_TP_CD||A.REV_SRC_CD AS REV_TP_CD
		,A.ACT_CUST_CNT_CD||'-'||LPAD(A.ACT_CUST_SEQ,6,'0') AS ACT_CUST_CNT_CD
		,A.POL_CD
		,A.POD_CD
		,A.AR_IF_NO
		,A.LOCL_CURR_CD
		,A.INV_TTL_LOCL_AMT
		,A.SAIL_ARR_DT
		,A.UPD_USR_ID
		,C.CHG_AMT*INV_XCH_RT CHG_AMT
        ,F.DP_PRCS_KNT
		FROM    INV_AR_MN A,
				INV_AR_CHG C,
				MDM_CURRENCY F
		WHERE   A.AR_IF_NO = C.AR_IF_NO
		AND     C.CURR_CD = F.CURR_CD
		AND		A.INV_ISS_FLG ='N'
		AND		A.INV_DELT_DIV_CD <> 'Y'
		AND		A.VSL_CD = @[vsl_cd]
		AND     A.SKD_VOY_NO = @[skd_voy_no]
		AND     A.SKD_DIR_CD = @[skd_dir_cd]
		#if (${pol_cd} != '')
		AND		A.POL_CD = @[pol_cd]
		#end
		#if (${pod_cd} != '')
		AND		A.POD_CD = @[pod_cd]
		#end
		#if (${ofc2} != '' && ${ofc2} != 'ALL')
		AND		A.AR_OFC_CD = @[ofc2]
		#end
		#if (${svc_scp_cd} != '' && ${svc_scp_cd} != 'ALL')
		AND		A.SVC_SCP_CD = @[svc_scp_cd]
		#end
		#if (${io_bnd_cd} != '' && ${io_bnd_cd} != 'A')
		AND		A.IO_BND_CD = @[io_bnd_cd]
		#end
		#if (${bkg_ofc_cd} != '')
		AND		A.SLS_OFC_CD = @[bkg_ofc_cd]
		#end
		#if (${rev_tp_cd} != '')
		AND		A.REV_TP_CD = @[rev_tp_cd]
		#end
		#if (${slan_cd} != '')
		AND		A.SLAN_CD = @[slan_cd]
		#end
) A
GROUP BY A.BL_SRC_NO
		,A.BKG_NO
		,A.BKG_OFC_CD
		,A.REV_TP_CD
		,A.ACT_CUST_CNT_CD
		,A.POL_CD
		,A.POD_CD
		,A.AR_IF_NO
		,A.LOCL_CURR_CD
		,A.INV_TTL_LOCL_AMT
		,A.SAIL_ARR_DT
		,A.UPD_USR_ID
		,A.DP_PRCS_KNT			]]></sql>
			<params>
				<param name="vsl_cd" type="12" value="" out="N"/>
				<param name="skd_voy_no" type="12" value="" out="N"/>
				<param name="skd_dir_cd" type="12" value="" out="N"/>
				<param name="pol_cd" type="12" value="" out="N"/>
				<param name="pod_cd" type="12" value="" out="N"/>
				<param name="ofc2" type="12" value="" out="N"/>
				<param name="svc_scp_cd" type="12" value="" out="N"/>
				<param name="io_bnd_cd" type="12" value="" out="N"/>
				<param name="bkg_ofc_cd" type="12" value="" out="N"/>
				<param name="rev_tp_cd" type="12" value="" out="N"/>
				<param name="slan_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
