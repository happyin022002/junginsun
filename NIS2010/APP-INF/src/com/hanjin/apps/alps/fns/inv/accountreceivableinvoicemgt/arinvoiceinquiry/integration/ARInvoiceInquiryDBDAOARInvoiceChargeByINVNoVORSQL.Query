<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceInquiryDBDAOARInvoiceChargeByINVNoVORSQL">
			<desc><![CDATA[.]]></desc>
			<sql><![CDATA[
SELECT BL_SRC_NO
     , POL_CD
     , POD_CD
     , CHG_CD
     , CASE WHEN RAT_AS_CNTR_QTY < 0 THEN RAT_AS_CNTR_QTY * -1 ELSE RAT_AS_CNTR_QTY END RAT_AS_CNTR_QTY
     , CASE WHEN CHG_AMT < 0 THEN CASE WHEN TRF_RT_AMT > 0 THEN TRF_RT_AMT * -1
                                                           ELSE TRF_RT_AMT
                                       END
                             ELSE CASE WHEN TRF_RT_AMT < 0 THEN TRF_RT_AMT * -1
                                                           ELSE TRF_RT_AMT
                                       END
       END TRF_RT_AMT
     , PER_TP_CD
     , CURR_CD
     , CHG_AMT
     , INV_XCH_RT
     , ROUND(LOCAL_TOTAL, DP_PRCS_KNT_LOCAL) LOCAL_TOTAL
     , ROUND(GRID_TOTAL, DP_PRCS_KNT_LOCAL) GRID_TOTAL
     , DP_PRCS_KNT
     , DP_PRCS_KNT_LOCAL
	 --2017.08.01 인도 GST 세법 변경 관련 보완
	 , IDA_CGST_AMT
	 , IDA_SGST_AMT
	 , IDA_UGST_AMT
	 , IDA_IGST_AMT
  FROM (
         SELECT AA.BL_SRC_NO
              , AA.POL_CD
              , AA.POD_CD
              , AA.CHG_CD
              , DECODE(AA.PER_TP_CD, 'PC', AA.RAT_AS_CNTR_QTY, SUM(CASE WHEN AA.CHG_AMT > 0 THEN AA.RAT_AS_CNTR_QTY ELSE AA.RAT_AS_CNTR_QTY * -1 END)) RAT_AS_CNTR_QTY
              , DECODE(AA.PER_TP_CD, 'PC', SUM(CASE WHEN AA.CHG_AMT > 0 THEN AA.TRF_RT_AMT ELSE AA.TRF_RT_AMT * -1 END), AA.TRF_RT_AMT) TRF_RT_AMT
              , AA.PER_TP_CD
              , AA.CURR_CD
              , SUM(AA.CHG_AMT) CHG_AMT
              , AA.INV_XCH_RT
              , SUM(AA.CHG_AMT * AA.INV_XCH_RT) LOCAL_TOTAL
              , AA.GRID_TOTAL GRID_TOTAL
              , AA.DP_PRCS_KNT
              , AA.DP_PRCS_KNT_LOCAL
			  --2017.08.01 인도 GST 세법 변경 관련 보완
			  , SUM(IDA_CGST_AMT) IDA_CGST_AMT
			  , SUM(IDA_SGST_AMT) IDA_SGST_AMT
			  , SUM(IDA_UGST_AMT) IDA_UGST_AMT
			  , SUM(IDA_IGST_AMT) IDA_IGST_AMT
          FROM (
                 SELECT A.BL_SRC_NO
                      , A.POL_CD
                      , A.POD_CD
                      , B.CHG_CD
                      , B.RAT_AS_CNTR_QTY
                      , B.TRF_RT_AMT
                      , B.PER_TP_CD
                      , B.CURR_CD
                      , B.CHG_AMT
                      , D.DP_PRCS_KNT
                      , B.INV_XCH_RT
                      , A.LOCL_CURR_CD
                      , B.CHG_AMT*B.INV_XCH_RT LCL_AMT
                      , SUM(B.CHG_AMT*B.INV_XCH_RT) OVER (PARTITION BY B.CURR_CD) GRID_TOTAL
                      , E.DP_PRCS_KNT DP_PRCS_KNT_LOCAL
					  --2017.08.01 인도 GST 세법 변경 관련 보완
					  , B.IDA_CGST_AMT
					  , B.IDA_SGST_AMT
					  , B.IDA_UGST_AMT
					  , B.IDA_IGST_AMT
                   FROM INV_AR_MN A
                      , INV_AR_CHG B
                      , INV_AR_ISS_DTL C
                      , MDM_CURRENCY D
                      , MDM_CURRENCY E
                  WHERE A.AR_IF_NO = B.AR_IF_NO
                    AND B.AR_IF_NO = C.AR_IF_NO
                    AND B.CHG_SEQ = C.CHG_SEQ
                    AND D.CURR_CD = B.CURR_CD
                    AND E.CURR_CD = A.LOCL_CURR_CD
                    AND B.CHG_AMT <> 0
                    AND A.AR_OFC_CD = @[ofc]
                    AND NVL(A.INV_DELT_DIV_CD, 'N') <> 'Y'
                    AND C.INV_NO = @[inv_no]


                    UNION ALL
                    
                 SELECT B.BL_SRC_NO
                      , A.POL_CD
                      , A.POD_CD
                      , C.CHG_CD
                      , C.RAT_AS_CNTR_QTY
                      , C.TRF_RT_AMT
                      , C.PER_TP_CD
                      , C.CURR_CD
                      , C.CHG_AMT
                      , D.DP_PRCS_KNT
                      , C.INV_XCH_RT
                      , A.LOCL_CURR_CD
                      , C.CHG_AMT*C.INV_XCH_RT LCL_AMT
                      , SUM(C.CHG_AMT*C.INV_XCH_RT) OVER (PARTITION BY C.CURR_CD) GRID_TOTAL
                      , E.DP_PRCS_KNT DP_PRCS_KNT_LOCAL
					  --2017.08.01 인도 GST 세법 변경 관련 보완
					  --2018.05.24 인도 Split Invoice Issue 기능 보완
					  , C.IDA_CGST_AMT
					  , C.IDA_SGST_AMT
					  , C.IDA_UGST_AMT
					  , C.IDA_IGST_AMT
                   FROM INV_AR_MN A
                      , INV_AR_SPLIT_ISS B
                      , INV_AR_SPLIT_ISS_CHG C
                      , MDM_CURRENCY D
                      , MDM_CURRENCY E
                  WHERE A.AR_IF_NO = B.AR_IF_NO
                    AND B.INV_NO  = C.INV_NO
                    AND B.INV_SEQ = C.INV_SEQ
                    AND D.CURR_CD = C.CURR_CD
                    AND E.CURR_CD = A.LOCL_CURR_CD
                    AND C.CHG_AMT <> 0
                    AND B.AR_OFC_CD = @[ofc]
                    AND NVL(A.INV_DELT_DIV_CD, 'N') <> 'Y'
                    AND B.INV_NO = @[inv_no]


                ) AA
         GROUP BY AA.BL_SRC_NO, AA.POL_CD, AA.POD_CD, AA.CHG_CD, AA.RAT_AS_CNTR_QTY, AA.TRF_RT_AMT, AA.PER_TP_CD, AA.CURR_CD, AA.INV_XCH_RT, AA.GRID_TOTAL, AA.DP_PRCS_KNT, AA.DP_PRCS_KNT_LOCAL
    ORDER BY AA.BL_SRC_NO, AA.CHG_CD, AA.POL_CD, AA.POD_CD, AA.TRF_RT_AMT, AA.PER_TP_CD, AA.CURR_CD
      )
 WHERE CHG_AMT <> 0			]]></sql>
			<params>
				<param name="ofc" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
