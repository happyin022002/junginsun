<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceCustomerMgtDBDAOSearchCustomerSecurityListRSQL">
			<desc><![CDATA[]]></desc>
			<sql><![CDATA[
SELECT A.SCR_SEQ,
       B.CUST_LGL_ENG_NM CUST_NM,
       A.AR_OFC_CD,
       A.CUST_CNT_CD||'-'||LPAD(A.CUST_SEQ,6,0) CUST_CNT_CD,
       C.OB_CR_TERM_DYS,
       C.IB_CR_TERM_DYS,
       A.CUST_SCR_DIV_CD,
       A.CUST_SCR_AMT,
       A.CUST_SCR_USD_AMT,
	   A.CUST_SCR_KRW_AMT,
       A.SCR_ST_DT,
       A.SCR_END_DT,
       A.SCR_RMK,
	   A.CR_CURR_CD
  FROM INV_AR_SCR A,
       MDM_CUSTOMER B,
       MDM_CR_CUST C
 WHERE A.CUST_CNT_CD = B.CUST_CNT_CD(+)
   AND A.CUST_SEQ = B.CUST_SEQ(+)
   AND A.CUST_CNT_CD = C.CUST_CNT_CD(+)
   AND A.CUST_SEQ = C.CUST_SEQ(+)
#if (${cust_scr_div_cd} != '')
   AND A.CUST_SCR_DIV_CD = @[cust_scr_div_cd]
#end

#if (${fm_ob_term} != '')
   AND C.OB_CR_TERM_DYS BETWEEN @[fm_ob_term] AND @[to_ob_term] 
#end

#if (${fm_ib_term} != '')
   AND C.IB_CR_TERM_DYS BETWEEN @[fm_ib_term] AND @[to_ib_term]
#end
	    
   AND A.AR_OFC_CD = @[ofc]
#if (${cust_cnt_cd} != '')
   AND A.CUST_CNT_CD = @[cust_cnt_cd]
#end
#if (${cust_seq} != '')
   AND A.CUST_SEQ = @[cust_seq]
#end
#if (${to_dt} != '')
   AND A.SCR_ST_DT <= REPLACE(@[to_dt],'-','')
#end 
#if (${fm_dt} != '')
   AND A.SCR_END_DT >= REPLACE(@[fm_dt],'-','')
#end
 ORDER BY A.CUST_CNT_CD||'-'||LPAD(A.CUST_SEQ,6,0), A.SCR_SEQ			]]></sql>
			<params>
				<param name="cust_scr_div_cd" type="12" value="" out="N"/>
				<param name="fm_ob_term" type="12" value="" out="N"/>
				<param name="to_ob_term" type="12" value="" out="N"/>
				<param name="fm_ib_term" type="12" value="" out="N"/>
				<param name="to_ib_term" type="12" value="" out="N"/>
				<param name="ofc" type="12" value="" out="N"/>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
				<param name="cust_seq" type="12" value="" out="N"/>
				<param name="to_dt" type="12" value="" out="N"/>
				<param name="fm_dt" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
