<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueDBDAOModifyKORIssueMainUSQL">
			<desc><![CDATA[e-mail, FAX 전송 후 공통테이블에서 구한 SEND NO를 KOREA ISSUE MAIN 테이블에 업데이트 한다.
email send date , fax send date 도 업데이트 한다.]]></desc>
			<sql><![CDATA[
UPDATE INV_AR_KR_ISS
SET 
#if (${send_flag} == 'E') 
EML_SND_NO = @[send_no],
EML_SND_DT = SYSDATE,
#else
FAX_SND_NO = @[send_no],
FAX_SND_DT = SYSDATE,
#end
UPD_USR_ID = @[usr_id],
UPD_DT = SYSDATE
WHERE INV_NO = @[inv_no]
AND INV_SEQ = @[inv_seq]			]]></sql>
			<params>
				<param name="send_no" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
				<param name="inv_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
