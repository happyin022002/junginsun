<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceExRateMgtDBDAOsearchPortListVORSQL">
			<desc><![CDATA[[] ARInvoiceExRateMgtDBDAO::searchPortList ( ofc )  
LOCATION 테이블에서 Office 의 contry code에 해당하는 PORT를 조회하여 해당 List에 Setting한다.]]></desc>
			<sql><![CDATA[
#if (${svr_id} == 'EUR')
SELECT LOC_CD FROM MDM_LOCATION
WHERE CONTI_CD IN ( SELECT CONTI_CD
                      FROM    MDM_LOCATION WHERE SUBSTR(LOC_CD,1,2)=( SELECT SUBSTR(LOC_CD,1,2) 
                      FROM    MDM_ORGANIZATION WHERE OFC_CD=@[ofc_cd]))
AND CALL_PORT_FLG='Y'  
AND DELT_FLG='N'  
ORDER BY LOC_CD
#else
SELECT LOC_CD FROM MDM_LOCATION
WHERE LOC_CD IN ( SELECT LOC_CD
                      FROM    MDM_LOCATION WHERE SUBSTR(LOC_CD,1,2)=( SELECT SUBSTR(LOC_CD,1,2) 
                      FROM    MDM_ORGANIZATION WHERE OFC_CD=@[ofc_cd]))
AND CALL_PORT_FLG='Y'  
AND DELT_FLG='N'  
ORDER BY LOC_CD
#end			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
