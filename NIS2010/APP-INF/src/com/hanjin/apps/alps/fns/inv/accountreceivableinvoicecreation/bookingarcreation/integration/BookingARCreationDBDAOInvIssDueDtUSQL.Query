<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BookingARCreationDBDAOInvIssDueDtUSQL">
			<desc><![CDATA[InvIssDueDt]]></desc>
			<sql><![CDATA[
MERGE INTO INV_AR_MN X
USING (SELECT BL_SRC_NO,AR_IF_NO,REV_TP_CD
       ,MAX(CASE WHEN REV_TP_CD <> 'M' THEN DUE_DT END) OVER (PARTITION BY BL_SRC_NO) NEW_DUE_DT
        FROM (SELECT BL_SRC_NO,AR_IF_NO,REV_TP_CD,DUE_DT
                    ,MAX(CASE WHEN REV_TP_CD = 'M' THEN 'Y'  
                              ELSE 'N' 
                         END) OVER (PARTITION BY BL_SRC_NO) AA
                    ,MAX(CASE WHEN REV_TP_CD <> 'M' THEN 'Y'  
                              ELSE 'N' 
                         END) OVER (PARTITION BY BL_SRC_NO) BB  
                FROM INV_AR_MN A				
               WHERE AR_IF_NO IN (SELECT AR_IF_NO
                                    FROM INV_AR_ISS_FTR A
                                   WHERE INV_ISS_WRK_NO = @[wrk_no]
                                     AND BL_SRC_NO IN (SELECT BL_SRC_NO
                                                         FROM (SELECT BL_SRC_NO,AR_IF_NO 
                                                                     ,COUNT(*) OVER (PARTITION BY BL_SRC_NO) CNT 
                                                                 FROM (SELECT DISTINCT BL_SRC_NO,AR_IF_NO 
                                                                         FROM INV_AR_ISS_FTR   
                                                                        WHERE INV_ISS_WRK_NO =  @[wrk_no]  ) 
                                                               )
                                                         WHERE CNT > 1  
                                                        )
                                   )
				#if (${rev_type} != '')
					#if (${rev_type} == 'M')     
   					AND A.REV_TP_CD = 'M'
					#elseif (${rev_type} == 'F')     
   					AND A.REV_TP_CD <> 'M'
					#end
				#end
               )
       WHERE AA||BB = 'YY') Y   
    ON (    X.AR_IF_NO = Y.AR_IF_NO 
         AND X.REV_TP_CD ='M')      
  WHEN MATCHED THEN UPDATE SET X.DUE_DT = Y.NEW_DUE_DT			]]></sql>
			<params>
				<param name="wrk_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
