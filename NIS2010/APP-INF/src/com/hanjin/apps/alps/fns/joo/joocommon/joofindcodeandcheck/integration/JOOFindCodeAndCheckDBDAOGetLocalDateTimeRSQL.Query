<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="JOOFindCodeAndCheckDBDAOGetLocalDateTimeRSQL">
			<desc><![CDATA[Login 한 User의 LOC_CD로 현지시각을 계산해서 return한다.]]></desc>
			<sql><![CDATA[
SELECT 
       TO_CHAR(SYSDATE,'YYYYMMDDHH24MISS') AS CODE,
       TO_CHAR(GLOBALDATE_PKG.TIME_LOCAL_FNC((
           SELECT A.LOC_CD
           FROM   MDM_ORGANIZATION A
           WHERE  A.OFC_CD = @[ofc_cd]
        )),'YYYYMMDDHH24MISS') AS NAME
FROM   DUAL			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
