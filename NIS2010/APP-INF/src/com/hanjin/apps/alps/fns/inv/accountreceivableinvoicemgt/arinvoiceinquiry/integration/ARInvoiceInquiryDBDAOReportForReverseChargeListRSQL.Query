<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceInquiryDBDAOReportForReverseChargeListRSQL">
			<desc><![CDATA[]]></desc>
			<sql><![CDATA[
SELECT M.AR_OFC_CD
      ,M.GL_EFF_DT
      ,M.ACT_CUST_CNT_CD||LPAD(M.ACT_CUST_SEQ,6,'0') CUST_CD
      ,C.CUST_LGL_ENG_NM
      ,L.CNT_CD
      ,C.CUST_RGST_NO
      ,SUM(M.INV_TTL_LOCL_AMT) INV_AMT
      ,M.INV_NO
      ,M.BL_SRC_NO
	  ,M.POR_CD
	  ,M.POL_CD
      ,M.POD_CD
	  ,M.DEL_CD
  FROM INV_AR_MN M
      ,MDM_CUSTOMER C
      ,MDM_ORGANIZATION O
      ,MDM_LOCATION L
 WHERE M.ACT_CUST_CNT_CD = C.CUST_CNT_CD
   AND M.ACT_CUST_SEQ = C.CUST_SEQ
   AND M.AR_OFC_CD = O.OFC_CD
   AND O.LOC_CD = L.LOC_CD
   AND M.AR_OFC_CD = @[ar_ofc_cd]
   AND M.GL_EFF_DT BETWEEN REPLACE(@[fm_dt],'-','') AND REPLACE(@[to_dt],'-','')
   AND M.RVS_CHG_FLG = 'Y'
   AND NVL(M.INV_CLR_FLG,'N') = 'N'
 GROUP BY M.AR_OFC_CD
      ,M.GL_EFF_DT
      ,M.ACT_CUST_CNT_CD
      ,M.ACT_CUST_SEQ
      ,C.CUST_LGL_ENG_NM
      ,L.CNT_CD
      ,C.CUST_RGST_NO
      ,M.INV_NO
      ,M.BL_SRC_NO
	  ,M.POR_CD
	  ,M.POL_CD
      ,M.POD_CD
	  ,M.DEL_CD
 ORDER BY M.AR_OFC_CD ,M.BL_SRC_NO ,M.INV_NO			]]></sql>
			<params>
				<param name="ar_ofc_cd" type="12" value="" out="N"/>
				<param name="fm_dt" type="12" value="" out="N"/>
				<param name="to_dt" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
