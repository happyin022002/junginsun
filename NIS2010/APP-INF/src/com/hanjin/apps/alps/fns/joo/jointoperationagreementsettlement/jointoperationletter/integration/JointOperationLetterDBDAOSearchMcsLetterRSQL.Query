<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="JointOperationLetterDBDAOSearchMcsLetterRSQL">
			<desc><![CDATA[DESC Enter..]]></desc>
			<sql><![CDATA[
SELECT      JO_LTR_TMPLT_SEQ ,
            OFC_CD                         ,
            JO_TMPLT_NO                    ,
            JO_LTR_TP_CD                   ,
            OFC_ADDR                       ,
            N1ST_STMT_CTNT                 ,
            N2ND_STMT_CTNT                 ,
            N3RD_STMT_CTNT                 ,
  (  
    SELECT S.BANK_STMT_CTNT --,
    FROM JOO_LTR_TMPLT S
    WHERE S.JO_LTR_TMPLT_SEQ = (
        SELECT /*+ index_desc( A  XPKJOO_LTR_TMPLT) */
          JO_LTR_TMPLT_SEQ
        FROM JOO_LTR_TMPLT A
        WHERE OFC_CD = @[ofc_cd]
          AND JO_LTR_TP_CD = 'B'
          AND ROWNUM=1))BANK_STMT_CTNT,
  (
    SELECT S.SIG_STMT_CTNT
    FROM JOO_LTR_TMPLT S
    WHERE S.JO_LTR_TMPLT_SEQ = (
        SELECT /*+ index_desc( A  XPKJOO_LTR_TMPLT) */
          JO_LTR_TMPLT_SEQ
        FROM JOO_LTR_TMPLT A
        WHERE OFC_CD = @[ofc_cd]
          AND JO_LTR_TP_CD = 'B'
          AND ROWNUM=1))SIG_STMT_CTNT,
            CRE_DT                         ,
            CRE_USR_ID                     ,
            UPD_DT                         ,
            UPD_USR_ID
  FROM   JOO_LTR_TMPLT 
   WHERE JO_TMPLT_NO  = @[jo_tmplt_no]
    AND  JO_LTR_TP_CD = @[jo_ltr_tp_cd]
    AND  CRE_USR_ID   = @[cre_usr_id]			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="jo_tmplt_no" type="12" value="" out="N"/>
				<param name="jo_ltr_tp_cd" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
