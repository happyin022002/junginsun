<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BookingARCreationDBDAOsearchBLSumAmountRSQL">
			<desc><![CDATA[BookingARCreationDBDAOsearchBLSumAmountRSQL]]></desc>
			<sql><![CDATA[
SELECT NVL(ROUND(SUM(IA.CHG_AMT/RATE.USD_LOCL_XCH_RT),2), 0) BL_SUM_AMOUNT
  FROM INV_AR_CHG IA, INV_AR_MN IM, GL_MON_XCH_RT RATE
 WHERE IM.AR_OFC_CD = @[ofc_cd]
   AND IM.BL_SRC_NO = @[bl_src_no]
   AND IM.REV_SRC_CD IN ('IV','IC')
   AND RATE.ACCT_XCH_RT_LVL = '1'
   AND RATE.CURR_CD = IA.CURR_CD
   --AND RATE.ACCT_XCH_RT_YRMON = SUBSTR(IM.BL_INV_IF_DT, 1, 6)
   --20100410 KHH
   AND RATE.ACCT_XCH_RT_YRMON = SUBSTR(TO_CHAR(SYSDATE,'YYYYMMDD'), 1, 6)
   AND IA.AR_IF_NO = IM.AR_IF_NO			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="bl_src_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
