<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceInquiryDBDAOSearchSpainInvoiceEDIListRSQL">
			<desc><![CDATA[Spakin VLCBB Officed의 local SYSTEM용  엑셀데이터를 만들기 위한 데이터 조회.
issue date 기준으로 조회하며 .정해진 item 정보를 조회해 온다.]]></desc>
			<sql><![CDATA[
SELECT TB.AR_IF_NO,
  RPAD(NVL(TB.BL_NO, ' '), 12, ' ') BL_NO,
  RPAD(NVL(TB.BL_TP_CD, ' '), 1, ' ') BL_TP_CD,
  RPAD(NVL(TB.INV_NO, ' '), 9, ' ') INV_NO,
  RPAD(NVL(TB.BKG_CORR_NO, ' '), 10, ' ') BKG_CORR_NO,
  RPAD(NVL(TB.BKG_NO, ' '), 13, ' ') BKG_NO,
  TB.AR_HD_QTR_OFC_CD,
  TB.ACT_CUST_CNT_CD,
  TB.ACT_CUST_SEQ,
  TB.AR_OFC_CD,
  TB.REV_TP_CD,
  TB.REV_SRC_CD,
  TB.VSL_CD,
  TB.SKD_VOY_NO,
  TB.SKD_DIR_CD,
  TB.PORT,
  TB.LOCL_CURR_CD,
  TB.SVC_SCP_CD,
  TB.SAIL_ARR_DT,
  TB.SLAN_CD,
  TB.IO_BND_CD,
  TB.T_VVD,
  RPAD(NVL(TB.POR_CD, ' '), 5, ' ') POR_CD,
  RPAD(NVL(TB.POL_CD, ' '), 5, ' ') POL_CD,
  RPAD(NVL(TB.POD_CD, ' '), 5, ' ') POD_CD,
  RPAD(NVL(TB.DEL_CD, ' '), 5, ' ') DEL_CD,
  TO_CHAR(TB.USD_XCH_RT, '00000.000000') USD_XCH_RT,
  TO_CHAR(ROUND(TB.LCL_CHG, TB.DP_PRCS_KNT_LOCAL), '000000000000000.000') LCL_CHG, 
  TO_CHAR(TB.USD_TOT, '000000000000000.000') USD_TOT,
  TO_CHAR(ROUND(TB.USD_TOT*TB.USD_XCH_RT, TB.DP_PRCS_KNT_LOCAL), '000000000000000.000') USD_EQV,
  TO_CHAR(ROUND(TB.INV_TTL_LOCL_AMT, TB.DP_PRCS_KNT_LOCAL), '000000000000000.000') LCL_TOT,
  TO_CHAR(TB.CGO_WGT, '0000000000.000') CGO_WGT,
  TO_CHAR(TB.CGO_MEAS_QTY, '0000000000.000') CGO_MEAS_QTY,
  TO_CHAR(TB.BKG_TEU_QTY, '00000') BKG_TEU_QTY,
  TO_CHAR(TB.BKG_FEU_QTY, '00000') BKG_FEU_QTY,
  RPAD(NVL(TB.SC_NO, ' '), 8, ' ') SC_NO,
  RPAD(NVL(TB.RFA_NO, ' '), 8, ' ') RFA_NO,
  RPAD(NVL(TB.SREP_CD, ' '), 5, ' ') SREP_CD,
  TB.DUE_DT,
  TB.BL_INV_IF_DT,
  TB.ISS_DT,
  TB.BL_INV_CFM_DT,
  TB.GL_EFF_DT,
  NVL(TB.INV_SPLIT_CD, ' ') INV_SPLIT_CD,
  TO_CHAR(TB.INV_SEQ, '000') INV_SEQ,
  TO_CHAR(TB.CHG_SEQ, '000') CHG_SEQ,
  TB.CHG_CD,
  TB.CURR_CD,
  TB.PER_TP_CD,
  TO_CHAR(TB.TRF_RT_AMT, '000000000.000') TRF_RT_AMT,
  TO_CHAR(TB.RAT_AS_CNTR_QTY, '000000.000') RAT_AS_CNTR_QTY,
  RPAD(TO_CHAR(TB.CHG_AMT, '000000000000000.000'), 20, ' ') CHG_AMT,
  TO_CHAR(TB.INV_XCH_RT, '00000.000000') INV_XCH_RT,
  TB.TVA_FLG,
  DECODE(TVA_FLG,'Y', (SELECT ROUND((SELECT NVL(SUM(CHG_AMT),0) IVA_AMT 
                                  FROM INV_AR_CHG
                                 WHERE AR_IF_NO = TB.AR_IF_NO
                                   AND CHG_CD = 'IVA') / (SELECT DECODE(NVL(SUM(CHG_AMT),1),0,1,NVL(SUM(CHG_AMT),1)) CHG_AMT 
                                  FROM INV_AR_CHG
                                 WHERE AR_IF_NO = TB.AR_IF_NO
                                   AND TVA_FLG = 'Y') * 100) 
                          FROM DUAL) ,'' ) IVA_RATE,
  TB.MF_DIV_CD
FROM (
    SELECT A.AR_IF_NO,
      NVL(A.BL_NO, A.BL_SRC_NO) BL_NO,
      A.BL_TP_CD,
      C.INV_NO,
      A.BKG_CORR_NO,
      A.BKG_NO,
      E.AR_HD_QTR_OFC_CD,
      A.ACT_CUST_CNT_CD,
      LPAD(A.ACT_CUST_SEQ, 6, '0') ACT_CUST_SEQ,
      A.AR_OFC_CD,
      A.REV_TP_CD,
      A.REV_SRC_CD,
      A.VSL_CD,
      A.SKD_VOY_NO,
      A.SKD_DIR_CD,
      DECODE(A.IO_BND_CD, 'I', A.POD_CD, 'O', A.POL_CD) PORT,
      A.LOCL_CURR_CD,
      A.SVC_SCP_CD,
      A.SAIL_ARR_DT,
      A.SLAN_CD,
      DECODE(A.IO_BND_CD, 'I', 'I/B', 'O', 'O/B') IO_BND_CD,
      A.TRNK_VSL_CD||A.TRNK_SKD_VOY_NO||A.TRNK_SKD_DIR_CD T_VVD,
      A.POR_CD,
      A.POL_CD,
      A.POD_CD,
      A.DEL_CD,
      A.USD_XCH_RT, 
      (
        SELECT NVL(SUM(S1.CHG_AMT), 0)
        FROM INV_AR_CHG S1
        WHERE A.AR_IF_NO = S1.AR_IF_NO
          AND S1.CURR_CD != 'USD') LCL_CHG, 
      F.DP_PRCS_KNT DP_PRCS_KNT_LOCAL, -- 
      (
        SELECT NVL(SUM(S2.CHG_AMT), 0)
        FROM INV_AR_CHG S2
        WHERE A.AR_IF_NO = S2.AR_IF_NO
          AND S2.CURR_CD = 'USD') USD_TOT, -- 
      A.INV_TTL_LOCL_AMT, -- 
      A.CGO_WGT, 
      A.CGO_MEAS_QTY,
      A.BKG_TEU_QTY,
      A.BKG_FEU_QTY,
      A.SC_NO,
      A.RFA_NO,
      A.SREP_CD,
      A.DUE_DT,
      A.BL_INV_IF_DT,
      D.ISS_DT,
      A.BL_INV_CFM_DT,
      A.GL_EFF_DT,
      A.INV_SPLIT_CD,
      (
        SELECT MAX(S3.INV_SEQ)
        FROM INV_AR_ISS S3
        WHERE C.INV_NO = S3.INV_NO) INV_SEQ,
      B.CHG_SEQ,
      B.CHG_CD,
      B.CURR_CD,
      B.PER_TP_CD,
      B.TRF_RT_AMT,
      B.RAT_AS_CNTR_QTY,
      B.CHG_AMT,
      B.INV_XCH_RT,
      B.TVA_FLG,
      B.MF_DIV_CD
    FROM INV_AR_MN A,
      INV_AR_CHG B,
      INV_AR_ISS_DTL C,
      INV_AR_ISS D,
      MDM_ORGANIZATION E,
      MDM_CURRENCY F
    WHERE D.ISS_DT BETWEEN TO_CHAR(TO_DATE(@[iss_dt],'YYYYMMDD') - 6,'YYYYMMDD') AND @[iss_dt] 
      AND D.INV_SEQ = 1
      AND D.ISS_OFC_CD IN (
        SELECT OFC_CD
        FROM MDM_ORGANIZATION
        WHERE AR_OFC_CD = @[ar_ofc_cd] )
      AND D.INV_NO = C.INV_NO
      AND C.AR_IF_NO = B.AR_IF_NO
      AND C.CHG_SEQ = B.CHG_SEQ
      AND B.AR_IF_NO = A.AR_IF_NO
      AND A.AR_OFC_CD = @[ar_ofc_cd]
      AND NVL(A.INV_DELT_DIV_CD, 'N') <> 'Y'
      AND A.EDI_SND_DT IS NULL
      AND A.AR_OFC_CD = E.OFC_CD
      AND F.CURR_CD = A.LOCL_CURR_CD
) TB
ORDER BY INV_NO,CHG_SEQ			]]></sql>
			<params>
				<param name="iss_dt" type="12" value="20090901" out="N"/>
				<param name="ar_ofc_cd" type="12" value="VLCBB" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
