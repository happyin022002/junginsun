<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableEDISendDBDAOaddInvEdiGlovisChgCSQL">
			<desc><![CDATA[charge table에 입력]]></desc>
			<sql><![CDATA[
#if (${ind} == 'CANCEL') 
INSERT INTO INV_EDI_GLOVIS_CHG
(
        AR_IF_NO, IF_SEQ, CHG_SEQ, CHG_CD
        , CURR_CD, PER_TP_CD, TRF_RT_AMT, RAT_AS_CNTR_QTY, CHG_AMT, INV_XCH_RT, CHG_RMK
        , CRE_USR_ID, CRE_DT, UPD_USR_ID, UPD_DT
        , EURO_LOCL_XCH_RT
)
SELECT  AR_IF_NO, IF_SEQ, CHG_SEQ, CHG_CD
        , CURR_CD, PER_TP_CD, TRF_RT_AMT, RAT_AS_CNTR_QTY, CHG_AMT, INV_XCH_RT, CHG_RMK
        , CRE_USR_ID, CRE_DT, UPD_USR_ID, UPD_DT
        , EURO_LOCL_XCH_RT
FROM    INV_EDI_GLOVIS_CHG
WHERE   AR_IF_NO    = @[ar_if_no]
AND     IF_SEQ      = @[if_seq]
#else
INSERT INTO INV_EDI_GLOVIS_CHG
(
        AR_IF_NO, IF_SEQ, CHG_SEQ, CHG_CD
        , CURR_CD, PER_TP_CD, TRF_RT_AMT, RAT_AS_CNTR_QTY, CHG_AMT, INV_XCH_RT, CHG_RMK
        , CRE_USR_ID, CRE_DT, UPD_USR_ID, UPD_DT
        , EURO_LOCL_XCH_RT
)
SELECT  AR_IF_NO, @[if_seq], CHG_SEQ, CHG_CD, CURR_CD, PER_TP_CD, TRF_RT_AMT, RAT_AS_CNTR_QTY
        , CHG_AMT
        , DECODE(CURR_CD, 'KRW', INV_XCH_RT  , @[inv_xch_rt])
        , @[chg_rmk]
        , @[cre_usr_id], SYSDATE, @[upd_usr_id], SYSDATE
        , DECODE(CURR_CD||@[eur_gubun], 'USDY', @[euro_locl_xch_rt], 0)
FROM    INV_AR_CHG
WHERE   AR_IF_NO    = @[ar_if_no]
#end			]]></sql>
			<params>
				<param name="ar_if_no" type="12" value="" out="N"/>
				<param name="if_seq" type="12" value="" out="N"/>
				<param name="inv_xch_rt" type="12" value="" out="N"/>
				<param name="chg_rmk" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
				<param name="eur_gubun" type="12" value="" out="N"/>
				<param name="euro_locl_xch_rt" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
