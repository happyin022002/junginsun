<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="JointOperationConsultationDBDAOSearchRevDetailARDataInquirySumRSQL">
			<desc><![CDATA[SearchRevDetailARDataInquirySum]]></desc>
			<sql><![CDATA[
SELECT STL_USD_AMT,
  LOCL_CURR_CD,
  CSR_LOCL_AMT
FROM (
SELECT  
 S.LOCL_CURR_CD
 ,SUM(DECODE(S.RE_DIVR_CD, 'R', S.STL_LOCL_AMT / DECODE (S.LOCL_CURR_CD, 'USD', 1, (
                SELECT NVL(EX1.USD_LOCL_XCH_RT, 1)
                FROM GL_MON_XCH_RT EX1
                WHERE EX1.CURR_CD = S.LOCL_CURR_CD
                  AND EX1.ACCT_XCH_RT_YRMON = TO_CHAR(R.EFF_DT, 'YYYYMM')
                  AND EX1.ACCT_XCH_RT_LVL = '1' ) ) ) )  AS STL_USD_AMT
 ,SUM(DECODE(S.RE_DIVR_CD, 'R', SL.CSR_LOCL_AMT / DECODE (S.LOCL_CURR_CD, 'USD', 1, (
                SELECT NVL(EX1.USD_LOCL_XCH_RT, 1)
                FROM GL_MON_XCH_RT EX1
                WHERE EX1.CURR_CD = S.LOCL_CURR_CD
                  AND EX1.ACCT_XCH_RT_YRMON = TO_CHAR(R.EFF_DT, 'YYYYMM')
                  AND EX1.ACCT_XCH_RT_LVL = '1' ) ) ) )  AS CSR_LOCL_AMT
FROM    JOO_SLIP        SL  
,       JOO_SETTLEMENT  S
,       JOO_STL_CMB     CB
,       AR_MST_REV_VVD  AR
,       JOO_CSR         R 
,       (SELECT   TO_CHAR(ADD_MONTHS(TO_DATE(REPLACE(@[yrmon_fr],'-','')||'01', 'YYYYMMDD'), -12),'YYYY')||'01' PRE_YEAR01  
                     ,@[cb_ofc_cd] OFC_CD 
                     , REPLACE( @[yrmon_fr],'-','') CUR_YRMON
                FROM DUAL ) P 
,      (SELECT   DISTINCT 
                NVL( ORG1.OFC_CD, ORG2.OFC_CD ) OFC_CD, AP_P.LST_UPD_DT CLS_DT
               ,NVL( ORG1.AP_OFC_CD, ORG2.AR_HD_QTR_OFC_CD ) HD_OFC_CD
               ,ORG1.AP_OFC_CD
               ,ORG2.AR_HD_QTR_OFC_CD
        FROM   AP_PERIOD AP_P
        ,      MDM_ORGANIZATION ORG1
        ,      (SELECT    HD_ORG1.OFC_CD, HD_ORG1.AR_HD_QTR_OFC_CD  
                          FROM   MDM_ORGANIZATION HD_ORG1
                          ,      MDM_ORGANIZATION HD_ORG2
                          WHERE  HD_ORG1.OFC_CD =  HD_ORG2.AP_OFC_CD 
                        GROUP BY HD_ORG1.OFC_CD, HD_ORG1.AR_HD_QTR_OFC_CD  
                ) ORG2
         ,     (SELECT   TO_CHAR(ADD_MONTHS(TO_DATE(REPLACE(@[yrmon_fr],'-','')||'01', 'YYYYMMDD'), -12),'YYYY')||'01' PRE_YEAR01  
                     , REPLACE( @[yrmon_fr],'-','') CUR_YRMON
                FROM DUAL ) SUB_P 
       WHERE   AP_P.SYS_DIV_CD = '25'
         AND   AP_P.EFF_YRMON  =  SUB_P.CUR_YRMON
         AND   AP_P.RHQ_CD     =  ORG1.AP_OFC_CD(+)
         AND   AP_P.RHQ_CD     =  ORG2.AR_HD_QTR_OFC_CD(+)
         AND   (ORG1.AP_OFC_CD IS NOT NULL OR ORG2.AR_HD_QTR_OFC_CD IS NOT NULL)
        )CURR_YRMON_AP_P
,      (SELECT   DISTINCT 
                NVL( ORG1.OFC_CD, ORG2.OFC_CD ) OFC_CD,  AP_P.LST_UPD_DT CLS_DT
               ,NVL( ORG1.AP_OFC_CD, ORG2.AR_HD_QTR_OFC_CD ) HD_OFC_CD
               ,ORG1.AP_OFC_CD
               ,ORG2.AR_HD_QTR_OFC_CD
        FROM   AP_PERIOD AP_P
        ,      MDM_ORGANIZATION ORG1
        ,      (SELECT    HD_ORG1.OFC_CD, HD_ORG1.AR_HD_QTR_OFC_CD  
                          FROM   MDM_ORGANIZATION HD_ORG1
                          ,      MDM_ORGANIZATION HD_ORG2
                          WHERE  HD_ORG1.OFC_CD =  HD_ORG2.AP_OFC_CD 
                        GROUP BY HD_ORG1.OFC_CD, HD_ORG1.AR_HD_QTR_OFC_CD  
                ) ORG2
         ,     (SELECT   TO_CHAR(TO_DATE(REPLACE(@[yrmon_fr],'-','')||'01','YYYYMMDD')-1, 'YYYYMM') PREV_YRMON
                FROM DUAL ) P 
       WHERE   AP_P.SYS_DIV_CD = '25'
         AND   AP_P.EFF_YRMON  =  P.PREV_YRMON
         AND   AP_P.RHQ_CD     =  ORG1.AP_OFC_CD(+)
         AND   AP_P.RHQ_CD     =  ORG2.AR_HD_QTR_OFC_CD(+)
         AND   (ORG1.AP_OFC_CD IS NOT NULL OR ORG2.AR_HD_QTR_OFC_CD IS NOT NULL)
        )PREV_YRMON_AP_P   
WHERE   S.ACCT_YRMON     = SL.ACCT_YRMON
AND     S.STL_VVD_SEQ    = SL.STL_VVD_SEQ
AND     S.STL_SEQ        = SL.STL_SEQ


AND     CB.SLP_TP_CD    = SL.SLP_TP_CD  
AND     CB.SLP_FUNC_CD  = SL.SLP_FUNC_CD
AND     CB.SLP_OFC_CD   = SL.SLP_OFC_CD
AND     CB.SLP_ISS_DT   = SL.SLP_ISS_DT
AND     CB.SLP_SER_NO   = SL.SLP_SER_NO

AND     S.VSL_CD          = AR.VSL_CD
AND     S.SKD_VOY_NO      = AR.SKD_VOY_NO
AND     S.SKD_DIR_CD      = AR.SKD_DIR_CD
AND     S.REV_DIR_CD      = AR.RLANE_DIR_CD

AND     SL.SLP_TP_CD   = R.SLP_TP_CD
AND     SL.SLP_FUNC_CD = R.SLP_FUNC_CD
AND     SL.SLP_OFC_CD  = R.SLP_OFC_CD
AND     SL.SLP_ISS_DT  = R.SLP_ISS_DT
AND     SL.SLP_SER_NO  = R.SLP_SER_NO 
 
AND     SL.SLP_OFC_CD  =  CURR_YRMON_AP_P.OFC_CD
AND     SL.SLP_OFC_CD  =  PREV_YRMON_AP_P.OFC_CD

AND     SL.SLP_OFC_CD  =  DECODE(P.OFC_CD,'All',SL.SLP_OFC_CD,P.OFC_CD)

AND     NVL( AR.DELT_FLG, 'N') = 'N'

AND (
        (        
                S.ACCT_YRMON  = P.CUR_YRMON
         AND    AR.REV_YRMON <= P.CUR_YRMON
         AND    R.APRO_DT   BETWEEN   PREV_YRMON_AP_P.CLS_DT
                               AND    CURR_YRMON_AP_P.CLS_DT
        )
     OR
        (      S.ACCT_YRMON BETWEEN  P.PRE_YEAR01 AND P.CUR_YRMON
         AND   AR.REV_YRMON =  P.CUR_YRMON
         AND   R.APRO_DT  <=   CURR_YRMON_AP_P.CLS_DT
 
        )
     OR
       (
               S.ACCT_YRMON >    P.CUR_YRMON
         AND   AR.REV_YRMON <=   P.CUR_YRMON
         AND   R.APRO_DT    <=   CURR_YRMON_AP_P.CLS_DT
  
        )
  )
#if (${jo_crr_cd} != 'All') 
AND     S.JO_CRR_CD = @[jo_crr_cd]
#end
AND     SL.SLP_TP_CD   = '18'
AND     SL.DR_CR_CD    = 'DR'
AND     CB.RE_DIVR_CD  = 'R' 
GROUP BY S.LOCL_CURR_CD
)Z
			]]></sql>
			<params>
				<param name="yrmon_fr" type="12" value="" out="N"/>
				<param name="cb_ofc_cd" type="12" value="" out="N"/>
				<param name="jo_crr_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
