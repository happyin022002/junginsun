<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceInquiryDBDAOsearchOtherSplitInvoicesForBLRSQL">
			<desc><![CDATA[searchOtherSplitInvoicesForBL]]></desc>
			<sql><![CDATA[
SELECT BL_SRC_NO
     , INV_NO
     , ACT_CUST
     , POL_CD
     , POD_CD
     , CHG_CD
     , CASE WHEN RAT_AS_CNTR_QTY < 0 THEN RAT_AS_CNTR_QTY * -1 ELSE RAT_AS_CNTR_QTY END RAT_AS_CNTR_QTY
     , CASE WHEN CHG_AMT < 0 THEN CASE WHEN TRF_RT_AMT > 0 THEN TRF_RT_AMT * -1
                                                           ELSE TRF_RT_AMT
                                       END
                             ELSE CASE WHEN TRF_RT_AMT < 0 THEN TRF_RT_AMT * -1
                                                           ELSE TRF_RT_AMT
                                       END
       END TRF_RT_AMT
     , PER_TP_CD
     , CURR_CD
     , CHG_AMT
     , INV_XCH_RT
     , DP_PRCS_KNT
     , DP_PRCS_KNT_LOCAL
     , ROUND(LOCAL_TOTAL, DP_PRCS_KNT_LOCAL) LOCAL_TOTAL
     , ROUND(GRID_TOTAL, DP_PRCS_KNT_LOCAL) GRID_TOTAL
  FROM (
         SELECT AA.BL_SRC_NO
              , AA.INV_NO
              , AA.ACT_CUST
              , AA.POL_CD
              , AA.POD_CD
              , AA.CHG_CD
              , DECODE(AA.PER_TP_CD, 'PC', AA.RAT_AS_CNTR_QTY, SUM(CASE WHEN AA.CHG_AMT > 0 THEN AA.RAT_AS_CNTR_QTY ELSE AA.RAT_AS_CNTR_QTY * -1 END)) RAT_AS_CNTR_QTY
              , DECODE(AA.PER_TP_CD, 'PC', SUM(CASE WHEN AA.CHG_AMT > 0 THEN AA.TRF_RT_AMT ELSE AA.TRF_RT_AMT * -1 END), AA.TRF_RT_AMT) TRF_RT_AMT
              , AA.PER_TP_CD
              , AA.CURR_CD
              , SUM(AA.CHG_AMT) CHG_AMT
              , AA.INV_XCH_RT
              , SUM(AA.CHG_AMT * AA.INV_XCH_RT) LOCAL_TOTAL
              , AA.GRID_TOTAL GRID_TOTAL
              , AA.DP_PRCS_KNT
              , AA.DP_PRCS_KNT_LOCAL
          FROM (                 
                 SELECT B.BL_SRC_NO
                      , B.INV_NO
                      , B.ACT_CUST_CNT_CD||TO_CHAR(B.ACT_CUST_SEQ,'000000') ACT_CUST
                      , A.POL_CD
                      , A.POD_CD
                      , C.CHG_CD
                      , C.RAT_AS_CNTR_QTY
                      , C.TRF_RT_AMT
                      , C.PER_TP_CD
                      , C.CURR_CD
                      , C.CHG_AMT
                      , D.DP_PRCS_KNT
                      , C.INV_XCH_RT
                      , A.LOCL_CURR_CD
                      , C.CHG_AMT*C.INV_XCH_RT LCL_AMT
                      , SUM(C.CHG_AMT*C.INV_XCH_RT) OVER (PARTITION BY C.CURR_CD) GRID_TOTAL
                      , E.DP_PRCS_KNT DP_PRCS_KNT_LOCAL
                   FROM INV_AR_MN A
                      , ( SELECT INV_NO,INV_SEQ,AR_OFC_CD,ACT_CUST_CNT_CD,ACT_CUST_SEQ, BL_SRC_NO,BKG_NO, AR_IF_NO
                          FROM   INV_AR_SPLIT_ISS
                          WHERE  1=1
                          AND    AR_OFC_CD = @[ofc]
                          AND    BL_SRC_NO = @[bl_no]
                          AND   (AR_OFC_CD, BL_SRC_NO, INV_SPLIT_ISS_WRK_NO) IN (
                                                                                   SELECT AR_OFC_CD, BL_SRC_NO, MAX(INV_SPLIT_ISS_WRK_NO)
                                                                                   FROM   INV_AR_SPLIT_ISS
                                                                                   WHERE  INV_SPLIT_ISS_WRK_NO IS NOT NULL
                                                                                   GROUP BY AR_OFC_CD, BL_SRC_NO) ) B
                      , INV_AR_SPLIT_ISS_CHG C
                      , MDM_CURRENCY D
                      , MDM_CURRENCY E
                  WHERE A.AR_IF_NO = B.AR_IF_NO
                    AND B.INV_NO  = C.INV_NO
                    AND B.INV_SEQ = C.INV_SEQ
                    AND D.CURR_CD = C.CURR_CD
                    AND E.CURR_CD = A.LOCL_CURR_CD
                    AND C.CHG_AMT <> 0
                    AND B.AR_OFC_CD = @[ofc]
                    AND NVL(A.INV_DELT_DIV_CD, 'N') <> 'Y'
                    AND B.BL_SRC_NO = @[bl_no]                               
                ) AA
       GROUP BY AA.BL_SRC_NO, AA.INV_NO, AA.ACT_CUST, AA.POL_CD, AA.POD_CD, AA.CHG_CD, AA.RAT_AS_CNTR_QTY, AA.TRF_RT_AMT, AA.PER_TP_CD, AA.CURR_CD, AA.INV_XCH_RT, AA.GRID_TOTAL, AA.DP_PRCS_KNT, AA.DP_PRCS_KNT_LOCAL
       ORDER BY AA.INV_NO, AA.CHG_CD, AA.POL_CD, AA.POD_CD, AA.TRF_RT_AMT, AA.PER_TP_CD, AA.CURR_CD
      )
 WHERE CHG_AMT <> 0			]]></sql>
			<params>
				<param name="ofc" type="12" value="" out="N"/>
				<param name="bl_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
