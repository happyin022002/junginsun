<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="TonnageTaxStandardProfitConclusionDBDAOErpIFInquiryVORSQL">
			<desc><![CDATA[ERP I/F Inquiry  조회]]></desc>
			<sql><![CDATA[
     SELECT /*+INDEX(A XPKTOT_ERP_IF)*/
             VSL_CD                     VSL_CD
           , MAX(NRT_WGT)               NRT_WGT
           , DECODE(MAX(PER_TON_REV)*SUM(VOY_DYS) ,0,0,TRUNC((SUM(TONG_TAX_AMT)/(MAX(PER_TON_REV)*SUM(VOY_DYS)))*100,2)) USE
           , SUM(VOY_DYS)               VOY_DYS
           , SUM(TONG_TAX_AMT)          TONG_TAX_AMT
           , MAX(TONG_FLET_TP_CD)       TONG_FLET_TP_CD
           , MAX(CTRT_DYS)              CTRT_DYS
       FROM TOT_ERP_IF A
       WHERE  A.STL_YRMON BETWEEN @[s_stl_yrmon] and @[e_stl_yrmon]
       AND    A.BAT_JB_SEQ = (
              SELECT /*+INDEX_DESC(X XPKTOT_ERP_IF)*/
                     X.BAT_JB_SEQ
              FROM TOT_ERP_IF X
              WHERE X.STL_YRMON = A.STL_YRMON
              AND   ROWNUM = 1
              )
       GROUP BY VSL_CD,STL_YRMON, BAT_JB_SEQ			]]></sql>
			<params>
				<param name="s_stl_yrmon" type="12" value="" out="N"/>
				<param name="e_stl_yrmon" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
