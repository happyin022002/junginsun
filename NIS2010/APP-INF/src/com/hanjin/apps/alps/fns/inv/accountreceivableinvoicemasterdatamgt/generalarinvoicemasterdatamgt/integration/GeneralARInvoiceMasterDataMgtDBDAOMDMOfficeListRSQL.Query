<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralARInvoiceMasterDataMgtDBDAOMDMOfficeListRSQL">
			<desc><![CDATA[Office 정보 조회]]></desc>
			<sql><![CDATA[
SELECT AR_OFC_CD,
	   OFC_CD,
	   AR_HD_QTR_OFC_CD,
	   FINC_RGN_CD,
	   AR_CTR_CD,
	   BIL_CURR_CD,
	   AR_CURR_CD,
	   OB_CR_TERM_DYS,
	   IB_CR_TERM_DYS,
	   REP_CUST_CNT_CD||LPAD(REP_CUST_SEQ,6,'0') REP_TYPE,
	   INV_PFX_CD,
	   SUB_AGN_FLG,
	   AR_AGN_STL_CD,
	   SO_IF_CD,
	   ASA_CR_TERM_DYS,
       FX_CURR_RT,
	   DELT_FLG
  FROM MDM_ORGANIZATION
 WHERE 1=1
#if (${ar_ofc_cd} != '') 
   AND AR_OFC_CD = @[ar_ofc_cd]
#end
#if (${ofc_cd} != '') 
   AND OFC_CD = @[ofc_cd]
#end
#if (${ar_hd_qtr_ofc_cd} != '') 
   AND AR_HD_QTR_OFC_CD = @[ar_hd_qtr_ofc_cd]
#end
#if (${ar_ctr_cd} != '') 
   AND AR_CTR_CD = @[ar_ctr_cd]
#end
#if (${ar_curr_cd} != '') 
   AND AR_CURR_CD = @[ar_curr_cd]
#end
#if (${delt_flg} != '') 
   AND DELT_FLG = @[delt_flg]
#end
 ORDER BY AR_OFC_CD, OFC_CD			]]></sql>
			<params>
				<param name="ar_ofc_cd" type="12" value="" out="N"/>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="ar_hd_qtr_ofc_cd" type="12" value="" out="N"/>
				<param name="ar_ctr_cd" type="12" value="" out="N"/>
				<param name="ar_curr_cd" type="12" value="" out="N"/>
				<param name="delt_flg" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
