<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableEDISendDBDAOSearchHPEDIMakefileChargeRSQL">
			<desc><![CDATA[]]></desc>
			<sql><![CDATA[
SELECT   C.CHG_CD AS CH_FCTYPE
        ,C.TRF_RT_AMT AS CH_RATE
        ,C.RAT_AS_CNTR_QTY AS CH_RATED_AS
		,(SELECT ROUND(NVL(C.CHG_AMT*C.INV_XCH_RT,0),DP_PRCS_KNT) FROM MDM_CURRENCY WHERE CURR_CD = D.LOCL_CURR_CD) AS CH_BILL_CHARGE
        ,C.CHG_AMT AS CH_RATE_CHARGE
		,DECODE(C.CHG_CD ,'BUC',D.POL_CD||'_'||D.POD_CD||'_','BAF',D.POL_CD||'_'||D.POD_CD||'_','FRC',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'OTH',D.POL_CD||'_'||D.POD_CD||'_','ORC',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'MIS',D.POL_CD||'_'||D.POD_CD||'_','OTR',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'CAP',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'DDC',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'DIV',D.POL_CD||'_'||D.POD_CD||'_','ADF',D.POL_CD||'_'||D.POD_CD||'_','DVC',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'BCC',D.POL_CD||'_'||D.POD_CD||'_','BSF',D.POL_CD||'_'||D.POD_CD||'_','MCF',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'ERC',D.POL_CD||'_'||D.POD_CD||'_','EPS',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'DET',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'DMR',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'CLF',D.POL_CD||'_'||D.POD_CD||'_','SOC',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'WHC',D.POL_CD||'_'||D.POD_CD||'_','CFC',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'NSC',D.POL_CD||'_'||D.POD_CD||'_','OIH',D.POL_CD||'_'||D.POD_CD||'_'
						 ,'DIH',D.POL_CD||'_'||D.POD_CD||'_','OFT','N','') AS CH_RATE_STRING
        ,C.PER_TP_CD AS CH_PERTYPE
        ,C.CURR_CD AS CH_CUR_CD
        --,'VOLUME' AS CH_BL_RATED_QTY
		,D.BKG_FEU_QTY+D.BKG_TEU_QTY AS CH_BL_RATED_QTY
        ,'CN' AS CH_BL_RATED_QUAL
        ,'10' AS CH_PERCENT
        ,DECODE(D.IO_BND_CD,'O','P','I','C') AS CH_FRT_IND
        ,D.LOCL_CURR_CD AS CH_BILL_CUR
        ,TO_CHAR(C.INV_XCH_RT ,'FM999,990.0000') AS CH_EX_RATE    
FROM  INV_AR_ISS A
     ,INV_AR_ISS_DTL B
     ,INV_AR_CHG C
     ,INV_AR_MN D
WHERE A.INV_NO = @[inv_no] --'HM1457061'
  AND A.INV_SEQ  = 1
  AND A.INV_NO  = B.INV_NO
  AND B.AR_IF_NO = C.AR_IF_NO
  AND B.CHG_SEQ = C.CHG_SEQ
  AND B.AR_IF_NO = D.AR_IF_NO			]]></sql>
			<params>
				<param name="inv_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
