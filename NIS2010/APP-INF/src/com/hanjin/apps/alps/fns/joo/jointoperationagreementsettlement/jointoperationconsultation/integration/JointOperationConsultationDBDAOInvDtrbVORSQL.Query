<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="JointOperationConsultationDBDAOInvDtrbVORSQL">
			<desc><![CDATA[Detail 조회]]></desc>
			<sql><![CDATA[
SELECT
       CSR_NO,
       SLP_SEQ_NO AS LINE_SEQ,
       SLP_SEQ_NO AS LINE_NO,
       ITM AS LINE_TP_LU_CD,
       CSR_LOCL_AMT AS INV_AMT,
       SLP_DESC AS INV_DESC,
       TAX_CD AS INV_TAX_CD,
       COMP_CD AS DTRB_COA_CO_CD,
       SLP_ISS_RGN_CD AS DTRB_COA_RGN_CD,
       CTR_CD AS DTRB_COA_CTR_CD,
       ACCT_CD AS DTRB_COA_ACCT_CD,
       VVD AS DTRB_COA_VVD_CD,
       SLP_ISS_INTER_CO_CD AS DTRB_COA_INTER_CO_CD,
       '000000' DTRB_COA_FTU_N1ST_CD,
       '000000' DTRB_COA_FTU_N2ND_CD,
       ACCT_CD AS ATTR_CATE_NM,
       NULL AS ATTR_CTNT1  ,
       NULL AS ATTR_CTNT2  ,
       LOC_CD AS ATTR_CTNT3,
       NULL AS ATTR_CTNT4  ,
       NULL AS ATTR_CTNT5  ,
       NULL AS ATTR_CTNT6  ,
       NULL AS ATTR_CTNT7  ,
       NULL AS ATTR_CTNT8  ,
       NULL AS ATTR_CTNT9  ,
       NULL AS ATTR_CTNT10 ,
       NULL AS ATTR_CTNT11 ,
       NULL AS ATTR_CTNT12 ,
       NULL AS ATTR_CTNT13 ,
       NULL AS ATTR_CTNT14 ,
       NULL AS ATTR_CTNT15 ,
       NULL AS BKG_NO      ,
       NULL AS CNTR_TPSZ_CD,
       VVD  AS ACT_VVD_CD,
       'O'  AS PLN_SCTR_DIV_CD,
       NULL AS SO_CRR_CD    ,
       NULL AS YD_CD        ,
       NULL AS FTU_USE_CTNT1,
       NULL AS FTU_USE_CTNT2,
       NULL AS FTU_USE_CTNT3,
       NULL AS FTU_USE_CTNT4,
       NULL AS FTU_USE_CTNT5,
       '' AS CRE_USR_ID
FROM  (
      SELECT
             C.SLP_TP_CD ||C.SLP_FUNC_CD||C.SLP_OFC_CD||TO_CHAR(TO_DATE(C.SLP_ISS_DT,'YYYYMMDD'),'RRMMDD')||C.SLP_SER_NO AS CSR_NO
           , S.SLP_SEQ_NO
           , 'ITEM' AS ITM
           , S.CSR_LOCL_AMT
           , S.SLP_DESC
           , NULL AS TAX_CD
           , '01' AS COMP_CD
           , C.SLP_ISS_RGN_CD
           , S.CTR_CD
           , S.ACCT_CD
           , S.VSL_CD||S.SKD_VOY_NO||S.SKD_DIR_CD||S.REV_DIR_CD AS VVD
           , NVL(SLP_ISS_INTER_CO_CD,'00') AS SLP_ISS_INTER_CO_CD
           , S.LOC_CD
      FROM   JOO_CSR  C,
             JOO_SLIP S
      WHERE  C.SLP_TP_CD   = S.SLP_TP_CD
      AND    C.SLP_FUNC_CD = S.SLP_FUNC_CD
      AND    C.SLP_OFC_CD  = S.SLP_OFC_CD
      AND    C.SLP_ISS_DT  = S.SLP_ISS_DT
      AND    C.SLP_SER_NO  = S.SLP_SER_NO
      AND    S.DR_CR_CD    = 'DR'
      AND    C.SLP_TP_CD   = SUBSTR(@[csr_no],1,2)
      AND    C.SLP_FUNC_CD = SUBSTR(@[csr_no],3,1)
      AND    C.SLP_OFC_CD  = DECODE(LENGTH(@[csr_no]),20,SUBSTR(@[csr_no], 4, 6),19,SUBSTR(@[csr_no], 4, 5))
      AND    C.SLP_ISS_DT  = TO_CHAR(TO_DATE(DECODE(LENGTH(@[csr_no]),20,SUBSTR(@[csr_no],10, 6),19,SUBSTR(@[csr_no], 9, 6)),'RRMMDD'),'YYYYMMDD')
      AND    C.SLP_SER_NO  = DECODE(LENGTH(@[csr_no]),20,SUBSTR(@[csr_no],16, 5),19,SUBSTR(@[csr_no],15, 5))
      UNION ALL
      SELECT C.SLP_TP_CD||C.SLP_FUNC_CD||C.SLP_OFC_CD||C.SLP_ISS_DT||C.SLP_SER_NO CSR_NO
           , S.SLP_SEQ_NO
           , 'TAX' AS ITM
           , 0 AS CSR_LOCL_AMT
           , C.CSR_DESC AS SLP_DESC
           , DECODE(C.EVID_TP_CD, '1','매입0%일반','5', NULL) TAX_CD
           , '01' COMP_CD
           , C.SLP_ISS_RGN_CD
           , S.CTR_CD
           , '111811' AS ACCT_CD
           , '0000000000' VVD
           , C.SLP_ISS_INTER_CO_CD
           , S.LOC_CD
      FROM   JOO_CSR  C,
             JOO_SLIP S
      WHERE  C.SLP_TP_CD   = S.SLP_TP_CD
      AND    C.SLP_FUNC_CD = S.SLP_FUNC_CD
      AND    C.SLP_OFC_CD  = S.SLP_OFC_CD
      AND    C.SLP_ISS_DT  = S.SLP_ISS_DT
      AND    C.SLP_SER_NO  = S.SLP_SER_NO
      AND    S.DR_CR_CD    = 'CR'
      AND    C.EVID_TP_CD  = '1'
      AND    C.SLP_TP_CD   = SUBSTR(@[csr_no],1,2)
      AND    C.SLP_FUNC_CD = SUBSTR(@[csr_no],3,1)
      AND    C.SLP_OFC_CD  = DECODE(LENGTH(@[csr_no]),20,SUBSTR(@[csr_no], 4, 6),19,SUBSTR(@[csr_no], 4, 5))
      AND    C.SLP_ISS_DT  = TO_CHAR(TO_DATE(DECODE(LENGTH(@[csr_no]),20,SUBSTR(@[csr_no],10, 6),19,SUBSTR(@[csr_no], 9, 6)),'RRMMDD'),'YYYYMMDD')
      AND    C.SLP_SER_NO  = DECODE(LENGTH(@[csr_no]),20,SUBSTR(@[csr_no],16, 5),19,SUBSTR(@[csr_no],15, 5))
)			]]></sql>
			<params>
				<param name="csr_no" type="12" value="06SSELPIO09080500002" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
