<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceCustomerMgtDBDAOSubAgentListRSQL">
			<desc><![CDATA[INV_SUB_POD_AGN_CUST_CD 테이블에서 AR OFFICE로 등록된 Agent 내용을 조회한다.]]></desc>
			<sql><![CDATA[
SELECT 
	AR_OFC_CD,
	IO_BND_CD,
    DECODE(POR_CD, 'XXXXX', '', POR_CD) POR_CD,
    DECODE(POL_CD, 'XXXXX', '', POL_CD) POL_CD,
    DECODE(POD_CD, 'XXXXX', '', POD_CD) POD_CD,
    DECODE(DEL_CD, 'XXXXX', '', DEL_CD) DEL_CD,
	AGN_NM,
	DECODE(REP_CUST_CNT_CD,'','',DECODE(REP_CUST_SEQ,'','',REP_CUST_CNT_CD || '-' || LPAD(REP_CUST_SEQ,6,0))) CUST_CD,
	REP_CUST_CNT_CD,
	LPAD(REP_CUST_SEQ,6,0) REP_CUST_SEQ,
	DELT_FLG,
	CRE_USR_ID,
	CRE_DT,
	UPD_USR_ID,
	TO_CHAR(UPD_DT,'YYYY-MM-DD') UPD_DT,
	'-' REP_CUST_BAR
  FROM INV_SUB_AGN_CUST_CD
 WHERE AR_OFC_CD = @[ar_ofc_cd]			]]></sql>
			<params>
				<param name="ar_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
