<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceCorrectionDBDAOsearchARInvoiceChargeByBLRSQL">
			<desc><![CDATA[searchARInvoiceChargeByBL
AR Office Code와 BL Source No나 BKG No로 해당되는 Charge Data를 조회]]></desc>
			<sql><![CDATA[
SELECT CHG_CD, CURR_CD, TRF_RT_AMT, RAT_AS_CNTR_QTY, PER_TP_CD, INV_XCH_RT, 
       -- DECODE(AR_OFC_CD||IO_BND_CD||INV_REV_TP_SRC_CD||CHG_CD, 'BOMSCIMIVCHC', CHG_FULL_NM||' TO CFS', CHG_FULL_NM) 
	   CHG_FULL_NM, 
       TVA_FLG, 
       CHG_AMT, DP_PRCS_KNT
FROM (
        SELECT A.CHG_CD CHG_CD
        	 , A.CURR_CD CURR_CD
        	 , A.TRF_RT_AMT TRF_RT_AMT
        	 , A.RAT_AS_CNTR_QTY RAT_AS_CNTR_QTY
        	 , A.PER_TP_CD PER_TP_CD
        	 , A.INV_XCH_RT INV_XCH_RT
       		 , A.CHG_FULL_NM
         	 -- , B.AR_OFC_CD
        	 -- , B.IO_BND_CD
        	 -- , A.INV_REV_TP_SRC_CD
        	 , MAX(A.TVA_FLG) OVER (PARTITION BY A.CHG_CD) AS TVA_FLG
        	 , SUM(A.CHG_AMT) CHG_AMT
        	 , E.DP_PRCS_KNT DP_PRCS_KNT
        FROM INV_AR_CHG A,INV_AR_MN B,MDM_CURRENCY E
        WHERE 1=1
        AND A.AR_IF_NO = B.AR_IF_NO
		#if (${bl_src_no} != '') 	
			AND B.BL_SRC_NO = @[bl_src_no]
		#end
		#if (${bkg_no} != '') 
			AND B.BKG_NO = @[bkg_no]
		#end
		AND B.AR_OFC_CD = @[ar_ofc_cd]
    	AND B.INV_DELT_DIV_CD <> 'Y'
	    AND B.BL_INV_CFM_DT IS NOT NULL 
    	AND A.CURR_CD = E.CURR_CD
		-- 2018.05.16 인도지역 Split Invoice Issue 기능 보완 
		#if (${ar_ofc_cd} == 'BOMSC') 
            AND (((EXISTS (SELECT 'X'
                           FROM INV_AR_MN
                           WHERE AR_OFC_CD = B.AR_OFC_CD
                           AND BL_SRC_NO = B.BL_SRC_NO
                           AND NVL(IDA_ISS_TP_CD, 'P') IN ('T','C','D')) 
                   OR EXISTS (SELECT 'X'
                        	  FROM INV_AR_MN
                        	  WHERE AR_OFC_CD = B.AR_OFC_CD
                        	  AND BL_SRC_NO = B.BL_SRC_NO
                        	  AND NVL(IDA_INV_SPLIT_FLG, 'N') = 'Y')
                   )
                   AND B.INV_ISS_FLG = 'N'
                   AND NVL(B.IDA_INV_SPLIT_FLG, 'N') = 'N')
            	OR (NOT EXISTS (SELECT 'X'
                        		FROM INV_AR_MN
                        		WHERE AR_OFC_CD = B.AR_OFC_CD
                        		AND BL_SRC_NO = B.BL_SRC_NO
                        		AND NVL(IDA_ISS_TP_CD, 'P') IN ('T','C','D'))
                	AND NOT EXISTS (SELECT 'X'
                        			FROM INV_AR_MN
                        			WHERE AR_OFC_CD = B.AR_OFC_CD
                        			AND BL_SRC_NO = B.BL_SRC_NO
                        			AND NVL(B.IDA_INV_SPLIT_FLG, 'N') = 'Y')
                	AND B.INV_CLR_FLG = 'N'))
        #end
    	GROUP BY A.CHG_CD,A.CURR_CD, A.TRF_RT_AMT, A.RAT_AS_CNTR_QTY, A.PER_TP_CD, A.INV_XCH_RT, A.CHG_FULL_NM, 
             	 -- B.AR_OFC_CD, B.IO_BND_CD, A.INV_REV_TP_SRC_CD, 
				 A.TVA_FLG, E.DP_PRCS_KNT
	) 
WHERE CHG_AMT <> 0
ORDER BY CURR_CD, CHG_CD			]]></sql>
			<params>
				<param name="bl_src_no" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="ar_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
