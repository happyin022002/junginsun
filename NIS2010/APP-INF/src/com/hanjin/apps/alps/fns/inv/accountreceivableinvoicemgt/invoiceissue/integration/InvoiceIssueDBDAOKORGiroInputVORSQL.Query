<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueDBDAOKORGiroInputVORSQL">
			<desc><![CDATA[InvoiceIssueDB]]></desc>
			<sql><![CDATA[
SELECT DISTINCT
       A.AR_OFC_CD AR_OFC_CD                      -- Office
     , C.CUST_CNT_CD||'-'||LPAD(C.CUST_SEQ, 6, '0') CUST_CD          -- Cust Code
     , A.ISS_DT ISS_DT                            -- Issue Date
	 , A.BL_SRC_NO BL_SRC_NO                      -- B/L NO
	 , A.SPL_GIRO_AMT SPL_GIRO_AMT                -- 공급가액
	 , A.SPL_GIRO_AMT+A.TVA_GIRO_AMT TOT_GIRO_AMT -- 총액
	 , A.DUE_DT DUE_DT                            -- Due Date
	 , NVL(D.LOCL_NM, C.CUST_LGL_ENG_NM) CUST_LGL_ENG_NM          -- Cust Name
	 , A.VSL_CD||A.SKD_VOY_NO||A.SKD_DIR_CD VVD   -- VVD
	 , A.GIRO_NO GIRO_NO                          -- GIRO No
	 , A.TVA_GIRO_AMT TVA_GIRO_AMT                -- 세액
	 , A.DELT_FLG DELT_FLG                        -- DEL Mark
  FROM INV_AR_GIRO A
     , MDM_CUSTOMER C
     , MDM_CR_CUST D
 WHERE A.ACT_CUST_CNT_CD = C.CUST_CNT_CD(+)
   AND A.ACT_CUST_SEQ = C.CUST_SEQ(+)
   AND A.ACT_CUST_CNT_CD = D.CUST_CNT_CD(+)
   AND A.ACT_CUST_SEQ = D.CUST_SEQ(+)
#if (${iss_dt1} != '') 
   AND A.ISS_DT BETWEEN REPLACE(@[iss_dt1],'-','') AND REPLACE(@[iss_dt2],'-','') 
#end
#if (${ar_ofc_cd2} != '') 
   AND A.AR_OFC_CD = @[ar_ofc_cd2]
#end
#if (${cust_cnt_cd} != '')
   AND C.CUST_CNT_CD = @[cust_cnt_cd]
#end
#if (${cust_seq} != '')
   AND C.CUST_SEQ = TO_NUMBER(@[cust_seq])
#end
#if (${bl_src_no} != '')
   AND A.BL_SRC_NO = @[bl_src_no]
#end
#if (${giro_no} != '')
   AND A.GIRO_NO = @[giro_no]
#end			]]></sql>
			<params>
				<param name="iss_dt1" type="12" value="" out="N"/>
				<param name="iss_dt2" type="12" value="" out="N"/>
				<param name="ar_ofc_cd2" type="12" value="" out="N"/>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
				<param name="cust_seq" type="12" value="" out="N"/>
				<param name="bl_src_no" type="12" value="" out="N"/>
				<param name="giro_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
