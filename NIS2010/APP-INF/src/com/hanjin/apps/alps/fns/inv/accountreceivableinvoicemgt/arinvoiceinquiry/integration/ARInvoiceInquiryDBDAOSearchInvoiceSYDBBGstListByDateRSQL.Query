<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceInquiryDBDAOSearchInvoiceSYDBBGstListByDateRSQL">
			<desc><![CDATA[DESC Enter..]]></desc>
			<sql><![CDATA[
SELECT A.GL_EFF_DT,
  TO_CHAR(TO_DATE(F.ISS_DT, 'YYYY-MM-DD'), 'YYYY-MM-DD') ISS_DT,
  F.INV_NO,
  A.BL_SRC_NO,
  A.ACT_CUST_CNT_CD||'-'||LPAD(A.ACT_CUST_SEQ, 6, '0') CUSTOMER,
  D.CUST_LGL_ENG_NM,
  DECODE(A.IO_BND_CD, 'I', 'I/B', 'O/B') IO_BND_CD,
  SUM(DECODE(B.CURR_CD, 'AUD', DECODE(B.CHG_CD, 'CMR', B.CHG_AMT, 0), 0)) CMR_AUD,
  SUM(DECODE(B.CURR_CD, 'USD', DECODE(B.CHG_CD, 'CMR', B.CHG_AMT, 0), 0)) CMR_USD,
  SUM(DECODE(B.CURR_CD, 'AUD', DECODE(B.CHG_CD, 'DHF', B.CHG_AMT, 'DDF', B.CHG_AMT, 0), 0)) DHF_AUD,
  SUM(DECODE(B.CURR_CD, 'USD', DECODE(B.CHG_CD, 'DHF', B.CHG_AMT, 'DDF', B.CHG_AMT, 0), 0)) DHF_USD,
  SUM(DECODE(B.CURR_CD, 'AUD', DECODE(B.CHG_CD, 'DTH', B.CHG_AMT, 0), 0)) DTH_AUD,
  SUM(DECODE(B.CURR_CD, 'USD', DECODE(B.CHG_CD, 'DTH', B.CHG_AMT, 0), 0)) DTH_USD,
  SUM(DECODE(B.CURR_CD, 'AUD', DECODE(B.CHG_CD, 'EHC', B.CHG_AMT, 'OCH', B.CHG_AMT, 'DCH', B.CHG_AMT, 0), 0)) EHC_AUD,
  SUM(DECODE(B.CURR_CD, 'USD', DECODE(B.CHG_CD, 'EHC', B.CHG_AMT, 'OCH', B.CHG_AMT, 'DCH', B.CHG_AMT, 0), 0)) EHC_USD,
  SUM(DECODE(B.CURR_CD, 'AUD', DECODE(B.CHG_CD, 'DTS', B.CHG_AMT, 0), 0)) DTS_AUD,
  SUM(DECODE(B.CURR_CD, 'USD', DECODE(B.CHG_CD, 'DTS', B.CHG_AMT, 0), 0)) DTS_USD,
  SUM(DECODE(B.CURR_CD, 'AUD', DECODE(B.CHG_CD, 'DPS', B.CHG_AMT, 0), 0)) DPS_AUD,
  SUM(DECODE(B.CURR_CD, 'USD', DECODE(B.CHG_CD, 'DPS', B.CHG_AMT, 0), 0)) DPS_USD,
  SUM(DECODE(B.CURR_CD, 'AUD', DECODE(B.CHG_CD, 'DTC', B.CHG_AMT, 0), 0)) DTC_AUD,
  SUM(DECODE(B.CURR_CD, 'USD', DECODE(B.CHG_CD, 'DTC', B.CHG_AMT, 0), 0)) DTC_USD,
  SUM(DECODE(B.CURR_CD, 'AUD', DECODE(B.CHG_CD, 'AST', B.CHG_AMT, 0), 0)) AST_AUD,
  SUM(DECODE(B.CURR_CD, 'USD', DECODE(B.CHG_CD, 'AST', B.CHG_AMT, 0), 0)) AST_USD,
  SUM(DECODE(B.CURR_CD, 'AUD', DECODE(B.CHG_CD, 'TVA', B.CHG_AMT, 0), 0)) TVA_AUD,
  SUM(DECODE(B.CURR_CD, 'USD', DECODE(B.CHG_CD, 'TVA', B.CHG_AMT, 0), 0)) TVA_USD,
  SUM(DECODE(B.CURR_CD, 'AUD', DECODE(B.CHG_CD, 'CMR', 0, 'DHF', 0, 'DDF', 0, 'DTH', 0, 'EHC', 0, 'DTS', 0, 'DPS', 0, 'AST', 0, 'TVA', 0, 'DTC', 0, B.CHG_AMT), 0)) NON_TAXABLE_AUD,
  SUM(DECODE(B.CURR_CD, 'USD', DECODE(B.CHG_CD, 'CMR', 0, 'DHF', 0, 'DDF', 0, 'DTH', 0, 'EHC', 0, 'DTS', 0, 'DPS', 0, 'AST', 0, 'TVA', 0, B.CHG_AMT), 0)) NON_TAXABLE_USD,
  A.USD_XCH_RT,
  ROUND(SUM(DECODE(B.CURR_CD, 'USD', 0, B.CHG_AMT * B.INV_XCH_RT)), 2) LCL_AMT,
  SUM(DECODE(B.CURR_CD, 'USD', B.CHG_AMT, 0)) USD_AMT,
  ROUND(SUM(DECODE(B.CURR_CD, 'USD', B.CHG_AMT * A.USD_XCH_RT, 0)), 2) EQV_LCL,
  ROUND(SUM(B.CHG_AMT * B.INV_XCH_RT), 2) GRAND_TOTAL
FROM INV_AR_ISS F,
  INV_AR_ISS_DTL C,
  INV_AR_CHG B,
  INV_AR_MN A,
  MDM_CUSTOMER D,
  MDM_CURRENCY G
WHERE F.ISS_DT BETWEEN REPLACE(@[iss_fm_dt], '-', '') AND REPLACE(@[iss_to_dt], '-', '')
  AND F.ISS_OFC_CD IN (
    SELECT OFC_CD
    FROM MDM_ORGANIZATION
    WHERE AR_OFC_CD = @[office])
  AND F.INV_NO = C.INV_NO
  AND F.INV_SEQ = 1
  AND C.AR_IF_NO = B.AR_IF_NO
  AND C.CHG_SEQ = B.CHG_SEQ
  AND B.AR_IF_NO = A.AR_IF_NO
  AND A.AR_OFC_CD = @[office]
  AND A.ACT_CUST_CNT_CD = D.CUST_CNT_CD
  AND A.ACT_CUST_SEQ = D.CUST_SEQ
  AND A.LOCL_CURR_CD = G.CURR_CD
  AND A.INV_DELT_DIV_CD <>'Y'
#if (${act_cust_cnt_cd} != '')
  AND A.ACT_CUST_CNT_CD = @[act_cust_cnt_cd]
#end
#if (${act_cust_seq} != '')
  AND A.ACT_CUST_SEQ = @[act_cust_seq]
#end
  
#if (${vsl_cd} != '')
  AND A.VSL_CD = @[vsl_cd]
#end
#if (${skd_voy_no} != '')
  AND A.SKD_VOY_NO = @[skd_voy_no]
#end
#if (${skd_dir_cd} != '')
  AND A.SKD_DIR_CD = @[skd_dir_cd]
#end

#if (${bound} != '')  
  AND A.IO_BND_CD = @[bound]
#if ((${bound} == 'I') && (${port} != ''))
  AND A.POD_CD = @[port]
#elseif ((${bound} == 'O') && (${port} != ''))
  AND A.POL_CD = @[port]
#end
#else
#if (${port} != '')
  AND ((A.IO_BND_CD = 'I' AND A.POD_CD = @[port]) OR (A.IO_BND_CD = 'O' AND A.POL_CD = @[port]))
#end
#end
GROUP BY A.GL_EFF_DT, TO_CHAR(TO_DATE(F.ISS_DT, 'YYYY-MM-DD'), 'YYYY-MM-DD'), F.INV_NO, A.BL_SRC_NO, A.ACT_CUST_CNT_CD||'-'||LPAD(A.ACT_CUST_SEQ, 6, '0'), D.CUST_LGL_ENG_NM, DECODE(A.IO_BND_CD, 'I', 'I/B', 'O/B'), A.USD_XCH_RT
ORDER BY A.GL_EFF_DT, TO_CHAR(TO_DATE(F.ISS_DT, 'YYYY-MM-DD'), 'YYYY-MM-DD'), F.INV_NO, A.BL_SRC_NO			]]></sql>
			<params>
				<param name="iss_fm_dt" type="12" value="" out="N"/>
				<param name="iss_to_dt" type="12" value="" out="N"/>
				<param name="office" type="12" value="" out="N"/>
				<param name="act_cust_cnt_cd" type="12" value="" out="N"/>
				<param name="act_cust_seq" type="12" value="" out="N"/>
				<param name="vsl_cd" type="12" value="" out="N"/>
				<param name="skd_voy_no" type="12" value="" out="N"/>
				<param name="skd_dir_cd" type="12" value="" out="N"/>
				<param name="bound" type="12" value="" out="N"/>
				<param name="port" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
