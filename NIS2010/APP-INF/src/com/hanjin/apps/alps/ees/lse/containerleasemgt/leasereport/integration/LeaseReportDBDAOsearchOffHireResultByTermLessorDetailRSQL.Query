<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="LeaseReportDBDAOsearchOffHireResultByTermLessorDetailRSQL">
			<desc><![CDATA[임차장비 임차실적을 상세 조히 Off-Hire Result by Lease Term/Lessor-Option
2010.09.13 남궁진호 [CHM-201005773-01] USED DAYS계산시 FREE DYAS 제외,RENTAL CHARGE계산로직 수정
2010.12.13 이준범 [CHM-201007442-01] LT일때 Per-Diem LCC로 변경]]></desc>
			<sql><![CDATA[
SELECT
   ROW_SEQ
 , CNTRNO
 , TYSZ
 , AGMT_NO
 , TERM
 , REF_NO
 , CNMV_STS_CD
 , OHDATE
 , OHLOC
 , FDAYS
 , OFHDATE
 , OFHLOC
 , USEDDAYS
 , MINOHDAYS
 , TERM_CHANGE
 , DII 
 , IMMEDIATELY
 , NVL(RENTAL_CHARGE, 0 ) RENTAL_CHARGE
 , NVL(LON, 0 ) LON
 , NVL(PUC, 0 ) PUC
 , NVL(PCR, 0 ) PCR
 , NVL(LOF, 0 ) LOF
 , NVL(DOC, 0 ) DOC
 , NVL(DCR, 0 ) DCR
 , NVL(ON_HIRE_DRAYAGE, 0 ) ON_HIRE_DRAYAGE
 , NVL(OFF_HIRE_DRAYAGE, 0 ) OFF_HIRE_DRAYAGE
 , NVL(M_R_COST, 0 ) M_R_COST
 , NVL(DPP, 0 ) DPP
 , NVL(RENTAL_CHARGE, 0 ) + NVL(LON, 0 ) + NVL(PUC, 0 ) - NVL(PCR, 0 ) + NVL(LOF, 0 ) + NVL(DOC, 0 ) - NVL(DCR, 0 ) + NVL(DPP, 0 ) + NVL(M_R_COST, 0 ) + NVL(ON_HIRE_DRAYAGE, 0 ) + NVL(OFF_HIRE_DRAYAGE, 0 ) AS G_TTL
 , BKG_NO
 , POL_CD
 , POR_CD
 , POD_CD
 , DEL_CD
 , ETD_DT
 , ETA_DT
 , VVD      
FROM ( SELECT 
		 ROW_NUMBER() OVER(ORDER BY B.CNTR_NO , B.CNTR_TPSZ_CD) AS ROW_SEQ
       , B.CNTR_NO CNTRNO
       , B.CNTR_TPSZ_CD TYSZ
       , B.AGMT_CTY_CD||LPAD(B.AGMT_SEQ, 6, '0') AS AGMT_NO
       , B.LSTM_CD TERM
       , D.REF_NO
       , B.CNMV_STS_CD 
       , CASE WHEN ( D.LSTM_CD = 'OW' OR D.LSTM_CD = 'LP' OR D.LSTM_CD = 'OL' ) THEN TO_CHAR(B.ONH_DT, 'YYYYMMDD') ELSE TO_CHAR(E.CNTR_STS_EVNT_DT, 'YYYYMMDD') END OHDATE 
       , CASE WHEN ( D.LSTM_CD = 'OW' OR D.LSTM_CD = 'LP' OR D.LSTM_CD = 'OL' ) THEN F.YD_CD ELSE E.YD_CD END OHLOC 
       , NVL(A.RNTL_CHG_FREE_DYS , 0) FDAYS
       , TO_CHAR(A.CNTR_STS_EVNT_DT, 'YYYYMMDD') OFHDATE
       , A.YD_CD OFHLOC
       , CASE WHEN ( D.LSTM_CD = 'OW' OR D.LSTM_CD = 'LP' OR D.LSTM_CD = 'OL' ) THEN 
            NVL(A.CNTR_STS_EVNT_DT, TO_DATE(TO_CHAR(SYSDATE,'RRRR/MM/DD'),'RRRR/MM/DD')) -  B.MFT_DT  + 1
         ELSE 
            NVL(A.CNTR_STS_EVNT_DT, TO_DATE(TO_CHAR(SYSDATE,'RRRR/MM/DD'),'RRRR/MM/DD')) -  E.CNTR_STS_EVNT_DT  + 1
         END USEDDAYS
       , NVL(A.CNTR_MIN_ONH_DYS , 0 ) MINOHDAYS
       , A.CNTR_LSTM_CNG_FLG TERM_CHANGE
       , DECODE(A.CNTR_STS_CD,'DII','Y','N') DII
       , IMDT_EXT_FLG IMMEDIATELY
	   , GREATEST(
         CASE WHEN D.LSTM_CD IN('OW','LP','OL') 
              THEN NVL(
                   (SELECT  ( NVL(A.CNTR_STS_EVNT_DT, TO_DATE(TO_CHAR(SYSDATE,'RRRR/MM/DD'),'RRRR/MM/DD')) -  B.MFT_DT - NVL(E.RNTL_CHG_FREE_DYS , 0 ) + 1 ) * N1ST_CHG_AMT
                    FROM    LSE_AGMT_RT RT
                    WHERE   RT.AGMT_CTY_CD        (+) = A.AGMT_CTY_CD
                    AND     RT.AGMT_SEQ           (+) = A.AGMT_SEQ
                    AND     RT.LOC_CD             (+) = DECODE(D.LSTM_CD, 'LT', A.LCC_CD, 'KRSEL')
                    AND     RT.AGMT_CHG_VAL       (+) = 1
                    AND     RT.CNTR_TPSZ_CD       (+) = B.CNTR_TPSZ_CD
                    AND     RT.CNTR_RNTL_CHG_TP_CD(+) = 'PDGV'),
                   (SELECT  ( NVL(A.CNTR_STS_EVNT_DT, TO_DATE(TO_CHAR(SYSDATE,'RRRR/MM/DD'),'RRRR/MM/DD')) - B.MFT_DT - NVL(E.RNTL_CHG_FREE_DYS , 0 ) + 1 ) * AVG(N1ST_CHG_AMT)
                    FROM    LSE_AGMT_RT RT
                    WHERE   RT.AGMT_CTY_CD        (+) = A.AGMT_CTY_CD
                    AND     RT.AGMT_SEQ           (+) = A.AGMT_SEQ
                    AND     RT.AGMT_CHG_VAL       (+) = 1
                    AND     RT.CNTR_TPSZ_CD       (+) = B.CNTR_TPSZ_CD
                    AND     RT.CNTR_RNTL_CHG_TP_CD(+) = 'PDGV')) 
              ELSE  NVL(
                   (SELECT  ( NVL(A.CNTR_STS_EVNT_DT, TO_DATE(TO_CHAR(SYSDATE,'RRRR/MM/DD'),'RRRR/MM/DD')) - E.CNTR_STS_EVNT_DT - NVL(E.RNTL_CHG_FREE_DYS , 0 ) + 1 ) * N1ST_CHG_AMT
                    FROM    LSE_AGMT_RT RT
                    WHERE   RT.AGMT_CTY_CD        (+) = A.AGMT_CTY_CD
                    AND     RT.AGMT_SEQ           (+) = A.AGMT_SEQ
                    AND     RT.LOC_CD             (+) = DECODE(D.LSTM_CD, 'LT', A.LCC_CD, 'KRSEL')
                    AND     RT.AGMT_CHG_VAL       (+) = 1
                    AND     RT.CNTR_TPSZ_CD       (+) = B.CNTR_TPSZ_CD
                    AND     RT.CNTR_RNTL_CHG_TP_CD(+) = 'PDGV'),
                   (SELECT  ( NVL(A.CNTR_STS_EVNT_DT, TO_DATE(TO_CHAR(SYSDATE,'RRRR/MM/DD'),'RRRR/MM/DD')) - E.CNTR_STS_EVNT_DT - NVL(E.RNTL_CHG_FREE_DYS , 0 ) + 1 ) * AVG(N1ST_CHG_AMT)
                    FROM    LSE_AGMT_RT RT
                    WHERE   RT.AGMT_CTY_CD        (+) = A.AGMT_CTY_CD
                    AND     RT.AGMT_SEQ           (+) = A.AGMT_SEQ
                    AND     RT.AGMT_CHG_VAL       (+) = 1
                    AND     RT.CNTR_TPSZ_CD       (+) = B.CNTR_TPSZ_CD
                    AND     RT.CNTR_RNTL_CHG_TP_CD(+) = 'PDGV')) 
         END,0) AS RENTAL_CHARGE
       , NVL(E.CNTR_LFT_CHG_AMT,0) AS LON
       , DECODE(SIGN(E.CNTR_PKUP_CHG_AMT), 1, E.CNTR_PKUP_CHG_AMT, 0) AS PUC
       , DECODE(SIGN(E.CNTR_PKUP_CHG_AMT), -1, -E.CNTR_PKUP_CHG_AMT, 0) AS PCR
       , NVL(A.CNTR_LFT_CHG_AMT,0) AS LOF
       , DECODE(SIGN(A.CNTR_DRFF_CR_AMT), 1, A.CNTR_DRFF_CR_AMT, 0) AS DOC
       , DECODE(SIGN(A.CNTR_DRFF_CR_AMT), -1, -A.CNTR_DRFF_CR_AMT, 0) AS DCR
       , ( SELECT /*+ SO INDEX_DESC(XPKTRS_TRSP_SVC_ORD) */
                   SO.NEGO_AMT
           FROM    TRS_TRSP_SVC_ORD SO
           WHERE   SO.EQ_NO                = B.CNTR_NO
           AND     SO.TRSP_COST_DTL_MOD_CD = 'CN' --CNTR S/T ON-HIRE
           AND     ROWNUM                  = 1) AS ON_HIRE_DRAYAGE
       , ( SELECT  /*+ SO INDEX_DESC(XPKTRS_TRSP_SVC_ORD) */
                   SO.NEGO_AMT
           FROM    TRS_TRSP_SVC_ORD SO
           WHERE   SO.EQ_NO                = B.CNTR_NO
           AND     SO.TRSP_COST_DTL_MOD_CD = 'CF' --CNTR S/T OFF-HIRE
           AND     ROWNUM                  = 1) AS OFF_HIRE_DRAYAGE
       , ( SELECT  MNR_COMMON_PKG.MNR_GET_RPRCOST_FNC('U',  MC.CNTR_NO)
           FROM    MST_CONTAINER MC,
                   MNR_ORD_DTL OD,
                   MNR_ORD_HDR OH
           WHERE   MC.CNTR_NO             = OD.EQ_NO
           AND     MC.CNTR_NO             = B.CNTR_NO
           AND     OD.MNR_ORD_OFC_CTY_CD  = OH.MNR_ORD_OFC_CTY_CD
           AND     OD.MNR_ORD_SEQ         = OH.MNR_ORD_SEQ
           GROUP BY MC.CNTR_NO ) AS M_R_COST
       , (SELECT  RT.AGMT_CHG_VAL                                 
          FROM    LSE_AGMT_RT RT,        
                  LSE_AGREEMENT AM
          WHERE   RT.AGMT_CTY_CD         = AM.AGMT_CTY_CD
          AND     RT.AGMT_SEQ            = AM.AGMT_SEQ                              
          AND     RT.CNTR_RNTL_CHG_TP_CD = 'DPPV'     
          AND     AM.DPP_TP_CD           = 'Y'
          AND     RT.AGMT_CTY_CD         = E.AGMT_CTY_CD
          AND     RT.AGMT_SEQ            = E.AGMT_SEQ
          AND     RT.CNTR_TPSZ_CD        = B.CNTR_TPSZ_CD 
          AND     TO_CHAR(E.CNTR_STS_EVNT_DT, 'YYYYMMDD') BETWEEN @[period_stdt] AND @[period_eddt] ) AS DPP
       ,BKG.BKG_NO
       ,BKG.POL_CD
       ,BKG.POR_CD
       ,BKG.POD_CD
       ,BKG.DEL_CD
       ,TO_CHAR(BKG.POL_ETD_DT, 'YYYY-MM-DD') ETD_DT
       ,TO_CHAR(BKG.POD_ETA_DT, 'YYYY-MM-DD') ETA_DT
       ,BKG.VSL_CD || BKG.SKD_VOY_NO || BKG.SKD_DIR_CD VVD                   
      FROM MST_CNTR_STS_HIS A , MST_CONTAINER B , LSE_AGREEMENT D, MST_CNTR_STS_HIS E , 
           (SELECT A.YD_CD, A.LOC_CD, C.RCC_CD,C.LCC_CD, C.SCC_CD
            FROM   MDM_YARD       A,
                   MDM_LOCATION   B,
                   MDM_EQ_ORZ_CHT C
            WHERE  A.LOC_CD = B.LOC_CD
            AND    B.SCC_CD = C.SCC_CD) F
           ,BKG_BOOKING BKG
      WHERE A.CNTR_NO     = B.CNTR_NO
	  AND   B.HJS_CRE_FLG = 'N'
      AND   A.AGMT_CTY_CD = D.AGMT_CTY_CD
      AND   A.AGMT_SEQ    = D.AGMT_SEQ
      AND   B.ONH_YD_CD   = F.YD_CD
      AND   BKG.BKG_NO(+) = B.BKG_NO
      #if (${term_change} != '' )             
                AND A.CNTR_LSTM_CNG_FLG = @[term_change]
      #end
      #if (${dii} != '' )
        #if (${dii} == 'N' )
				AND A.CNTR_STS_CD IN ('LSO', 'TLL')
        #elseif (${dii} == 'Y' ) 
                AND A.CNTR_STS_CD = 'DIO'
        #end
      #else
                AND A.CNTR_STS_CD IN ('LSO', 'DIO', 'TLL')
      #end    
      AND   A.AGMT_SEQ     <> 999990
      AND   substr(nvl(A.CNTR_STS_RMK, ' '), 1, 6) <> 'SELLOE'
      AND   A.CNTR_STS_EVNT_DT BETWEEN TO_DATE(@[period_stdt],'yyyymmdd') AND TO_DATE(@[period_eddt],'yyyymmdd')
      AND   A.CNTR_NO      = E.CNTR_NO(+)
      AND   A.PRNR_STS_SEQ = E.CNTR_STS_SEQ(+)
      #if (${detail_lstm_cd} != '' ) 
      AND   D.LSTM_CD = @[detail_lstm_cd] 
      #end
      
      #if (${detail_vndr_seq} != '' ) 
      AND   D.VNDR_SEQ = @[detail_vndr_seq] 
      #end
      
      #if (${company} != '' )
      AND B.CNTR_USE_CO_CD = @[company]
      #end
      
      #if (${vndr_seq} != '' ) 
      AND   D.VNDR_SEQ = @[vndr_seq] 
      #end
      
      #if (${detail_cntr_tpsz_cd} != '' ) 
      AND   B.CNTR_TPSZ_CD = @[detail_cntr_tpsz_cd]
      #end
      
      #if (${cntr_tpsz_cd_str} != '' ) 
                AND B.CNTR_TPSZ_CD IN( #foreach($key IN ${cntr_tpsz_cd})
                                           #if($velocityCount < $cntr_tpsz_cd.size())
                                              '$key',
                                           #else
                                              '$key'
                                           #end
                                       #end )
      #end
      
      #if (${lstm_cd_str} != '' ) 
                AND D.LSTM_CD IN ( #foreach($key IN ${lstm_cd})
                                       #if($velocityCount < $lstm_cd.size())
                                           '$key',
                                       #else
                                           '$key'
                                       #end
                                   #end )
      #end
      
      ORDER BY B.CNTR_NO , B.CNTR_TPSZ_CD )
#if (${startno} != '') 
WHERE 	ROW_SEQ BETWEEN @[startno] AND @[endno]
#end			]]></sql>
			<params>
				<param name="period_stdt" type="12" value="" out="N"/>
				<param name="period_eddt" type="12" value="" out="N"/>
				<param name="term_change" type="12" value="" out="N"/>
				<param name="detail_lstm_cd" type="12" value="" out="N"/>
				<param name="detail_vndr_seq" type="12" value="" out="N"/>
				<param name="company" type="12" value="" out="N"/>
				<param name="vndr_seq" type="12" value="" out="N"/>
				<param name="detail_cntr_tpsz_cd" type="12" value="" out="N"/>
				<param name="startno" type="2" value="" out="N"/>
				<param name="endno" type="2" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
