<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="MnrSendGWAgreementInfoDBDAOPrintComCsrFileInfoRSQL">
			<desc><![CDATA[groupware 전송 xmlData File info
-- 2014.11 10만불 결제관련]]></desc>
			<sql><![CDATA[
SELECT 
      'MNR' AS L_FILE_MODULE_ID
      ,A.FILE_PATH_NM AS L_FILE_SAV_ID
      ,A.ORG_FILE_NM AS L_FILE_NM
FROM MNR_FILE_ATCH A
   , MNR_PAY_INV_WRK P
   , (select distinct A.CSR_NO, A.SRC_CTNT, A.VNDR_NO, D.ATTR_CTNT1 INV_NO, P.INV_RGST_NO
        from AP_INV_HDR A, AP_INV_DTRB D, AP_PAY_INV P
       where 1=1
         and A.CSR_NO = D.CSR_NO
         and A.CSR_NO = @[csr_no]  --// csr no.로 invoice를 찾아온다.
         and A.CSR_NO = P.CSR_NO
         and A.VNDR_NO = P.VNDR_SEQ
         and D.ATTR_CTNT1 = P.INV_NO
         and NVL(P.DELT_FLG,'N') <> 'Y'
         ) AP
WHERE 1=1
AND A.FILE_SEQ = P.FILE_SEQ
AND P.INV_NO = AP.INV_NO
AND P.MNR_PRNR_SEQ = AP.VNDR_NO
AND P.INV_RGST_NO = AP.INV_RGST_NO			]]></sql>
			<params>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
