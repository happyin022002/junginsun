<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueCollectionMgtDBDAOSearchOTSCleanByDetailList2RSQL">
			<desc><![CDATA[InvoiceIssueCollectionMgtDBDAOSearchOTSCleanByDetailList2RSQL]]></desc>
			<sql><![CDATA[
SELECT  INVNOO,VVDCDD,BKGNOO,
#if ( ${cntrflg} != '' )
		CNTR_NO,
#end
		BLNOOO,
		DECODE(@[curr_sel],'All',CURRCY,@[curr_sel]) AS CURRCY,
		SUM(ROUND(DECODE(@[curr_sel],'KRW',BILAMT * NVL(V_INV_CURR_RT,INV_CURR_RT),'USD',BILAMT / NVL(V_INV_CURR_RT,INV_CURR_RT), BILAMT) , 2 )) AS BILAMT,
		SUM(ROUND(DECODE(@[curr_sel],'KRW',TAXAMT * NVL(V_INV_CURR_RT,INV_CURR_RT),'USD',TAXAMT / NVL(V_INV_CURR_RT,INV_CURR_RT), TAXAMT) , 2 )) AS TAXAMT,
		SUM(ROUND(DECODE(@[curr_sel],'KRW',INVAMT * NVL(V_INV_CURR_RT,INV_CURR_RT),'USD',INVAMT / NVL(V_INV_CURR_RT,INV_CURR_RT), INVAMT) , 2 )) AS INVAMT,
		TARFTP,ISSEDT,ISSEOF,INVOVD,SHEETP,POR_CD,POL_CD,POD_CD,DEL_CD,OB_SREP_CD,
        RFA_NO,SC_NO,TAA_NO,SH_CUST_CD,SH_CUST_NM,CN_CUST_CD,CN_CUST_NM,INV_RMK,
		DECODE(@[curr_sel],'All',BZC_TRF_CURR_CD,@[curr_sel]) AS BZC_TRF_CURR_CD,
        SUM(ROUND(DECODE(@[curr_sel],'KRW',ORG_CHG_AMT * NVL(V_CHG_CURR_RT,CHG_CURR_RT),'USD',ORG_CHG_AMT / NVL(V_CHG_CURR_RT,CHG_CURR_RT), ORG_CHG_AMT) , 2 )) AS ORG_CHG_AMT,
		SUM(ROUND(DECODE(@[curr_sel],'KRW',CMDT_EXPT_AMT * NVL(V_CHG_CURR_RT,CHG_CURR_RT),'USD',CMDT_EXPT_AMT / NVL(V_CHG_CURR_RT,CHG_CURR_RT), CMDT_EXPT_AMT) , 2 )) AS CMDT_EXPT_AMT,
        SUM(ROUND(DECODE(@[curr_sel],'KRW',SC_RFA_EXPT_AMT * NVL(V_CHG_CURR_RT,CHG_CURR_RT),'USD',SC_RFA_EXPT_AMT / NVL(V_CHG_CURR_RT,CHG_CURR_RT), SC_RFA_EXPT_AMT) , 2 )) AS SC_RFA_EXPT_AMT, 
        SUM(ROUND(DECODE(@[curr_sel],'KRW',AFT_EXPT_DC_AMT * NVL(V_CHG_CURR_RT,CHG_CURR_RT),'USD',AFT_EXPT_DC_AMT / NVL(V_CHG_CURR_RT,CHG_CURR_RT), AFT_EXPT_DC_AMT) , 2 )) AFT_EXPT_DC_AMT,
		SUM(ROUND(DECODE(@[curr_sel],'KRW', ( ORG_CHG_AMT - CMDT_EXPT_AMT - SC_RFA_EXPT_AMT ) * NVL(V_CHG_CURR_RT,CHG_CURR_RT), 'USD', ( ORG_CHG_AMT - CMDT_EXPT_AMT - SC_RFA_EXPT_AMT ) / NVL(V_CHG_CURR_RT,CHG_CURR_RT), ( ORG_CHG_AMT - CMDT_EXPT_AMT - SC_RFA_EXPT_AMT )) , 2 )) NET_EXPT_AMT,
		PAYERC, PAYERN, IB_SLS_OFC_CD_NEW AS IB_SLS_OFC_CD, IB_SREP_CD,
		
		NF_CUST_CD,NF_CUST_NM,
		DECODE(@[curr_sel],'All',INV_CURR_CD,@[curr_sel]) AS INV_CURR_CD, DECODE(@[curr_sel],'All',CHG_CURR_CD,@[curr_sel]) AS CHG_CURR_CD, CMDT_EXPT_AMT, CMDT_CD,
		FT_DYS, FX_FT_OVR_DYS, FM_MVMT_YD_CD, TO_MVMT_YD_CD, FM_MVMT_DT, TO_MVMT_DT, FT_CMNC_DT, FT_END_DT,
        DMDT_AR_IF_CD, AR_IF_DT, ISSUDT, OVEDAY, CMDT_NM
FROM    (
        SELECT  M.DMDT_INV_NO                                           INVNOO ,        /*  INVOICE NO                  */
                M.VSL_CD||M.SKD_VOY_NO||M.SKD_DIR_CD                    VVDCDD ,        /*  VVD                         */
                M.BKG_NO                                                BKGNOO ,        /*  BKG NO                      */
                M.BL_NO                                                 BLNOOO ,        /*  BL NO                       */
                M.INV_CURR_CD                                           CURRCY ,        /*  INVOICE CURRENCY            */
                NVL(A.CNTR_INV_AMT,0)                                           	BILAMT ,        /*  INVOICE BILLING AMOUNT      */
                NVL(A.TAX_AMT,0)                                               TAXAMT ,        /*  INVOICE TAX AMOUNT          */
                NVL(A.CNTR_INV_AMT,0) + NVL(A.TAX_AMT,0)                                              INVAMT ,        /*  INVOICE AMOUNT              */
                M.DMDT_TRF_CD                                           TARFTP ,        /*  TARIFF TYPE                 */
                TO_CHAR(M.CRE_DT,'YYYY-MM-DD')                          ISSEDT ,        /*  INVOICE ISSUE DATE          */
                M.CRE_OFC_CD                                            ISSEOF ,        /*  INVOICE ISSUE OFFICE        */
                TO_DATE(TO_CHAR(SYSDATE ,'YYYYMMDD'),'YYYYMMDD') -
                TO_DATE(TO_CHAR(M.CRE_DT,'YYYYMMDD'),'YYYYMMDD')  		INVOVD ,         /*  INVOICE OVER DAY = SYSDATE - ISSUE DATE #ADD 2007.12.03 */
                'O' SHEETP ,
                M.POR_CD, M.POL_CD, M.POD_CD, M.DEL_CD, B.OB_SREP_CD,
                A.ORG_CHG_AMT,
                B.RFA_NO, B.SC_NO, B.TAA_NO, SH.CUST_CNT_CD||SH.CUST_SEQ SH_CUST_CD, SH.CUST_NM SH_CUST_NM,
                CN.CUST_CNT_CD||CN.CUST_SEQ CN_CUST_CD, CN.CUST_NM CN_CUST_NM,
				NF.CUST_CNT_CD||NF.CUST_SEQ NF_CUST_CD, NF.CUST_NM NF_CUST_NM,
                NVL(A.SC_RFA_EXPT_AMT,0) SC_RFA_EXPT_AMT, NVL(A.AFT_EXPT_DC_AMT,0) AFT_EXPT_DC_AMT,
                M.INV_RMK,
				DECODE( M.ACT_PAYR_CNT_CD , '00' , '' , M.ACT_PAYR_CNT_CD )||TO_CHAR( M.ACT_PAYR_SEQ , 'FM000000' )	PAYERC,
        		REPLACE( NVL( U.CUST_LGL_ENG_NM , V.VNDR_LGL_ENG_NM ) , '/' , '_' )									PAYERN,
				M.IB_SLS_OFC_CD_NEW, M.IB_SREP_CD,
		NVL(( 
				SELECT  INV_XCH_RT TMP_USD_LCL
                FROM    INV_VVD_XCH_RT
                WHERE   VSL_CD      = MAIN.VSL_CD
                AND     SKD_VOY_NO  = MAIN.SKD_VOY_NO
                AND     SKD_DIR_CD  = MAIN.SKD_DIR_CD
                AND     PORT_CD     = DECODE( SUBSTR(CALC.DMDT_TRF_CD,1,1), 'I', MAIN.POD_CD, MAIN.POL_CD )
                AND     LOCL_CURR_CD= @[curr_sel] -- fm_cur_cd : Charge Currency (From)
                AND     CHG_CURR_CD = M.CHG_CURR_CD
                AND     IO_BND_CD   = SUBSTR(CALC.DMDT_TRF_CD,1,1)
                AND     INV_XCH_RT  > 0
				AND     ROWNUM = 1
				), '') V_CHG_CURR_RT,
		NVL(( 
				SELECT  INV_XCH_RT TMP_USD_LCL
                FROM    INV_VVD_XCH_RT
                WHERE   VSL_CD      = MAIN.VSL_CD
                AND     SKD_VOY_NO  = MAIN.SKD_VOY_NO
                AND     SKD_DIR_CD  = MAIN.SKD_DIR_CD
                AND     PORT_CD     = DECODE( SUBSTR(CALC.DMDT_TRF_CD,1,1), 'I', MAIN.POD_CD, MAIN.POL_CD )
                AND     LOCL_CURR_CD= @[curr_sel] -- fm_cur_cd : Charge Currency (From)
                AND     CHG_CURR_CD = M.INV_CURR_CD
                AND     IO_BND_CD   = SUBSTR(CALC.DMDT_TRF_CD,1,1)
                AND     INV_XCH_RT  > 0
				AND		ROWNUM = 1
				), '') V_INV_CURR_RT,
		NVL(( 
				SELECT MAX(DECODE(@[curr_sel],'KRW',F.LOCL_KRW_XCH_RT,'USD',F.USD_LOCL_XCH_RT,1))
                  FROM GL_MON_XCH_RT F
				 WHERE 1=1
				   AND F.ACCT_XCH_RT_YRMON = TO_CHAR(M.CRE_DT, 'YYYYMM')
				   AND F.ACCT_XCH_RT_LVL   = '1'
                   AND F.CURR_CD           = M.CHG_CURR_CD
				), 1) CHG_CURR_RT,
		NVL(( 
				SELECT MAX(DECODE(@[curr_sel],'KRW',F.LOCL_KRW_XCH_RT,'USD',F.USD_LOCL_XCH_RT,1))
                  FROM GL_MON_XCH_RT F
				 WHERE 1=1
				   AND F.ACCT_XCH_RT_YRMON = TO_CHAR(M.CRE_DT, 'YYYYMM')
				   AND F.ACCT_XCH_RT_LVL   = '1'
                   AND F.CURR_CD           = M.INV_CURR_CD
				), 1) INV_CURR_RT,
				A.CNTR_NO, M.INV_CURR_CD, M.CHG_CURR_CD, NVL(CALC.CMDT_EXPT_AMT,0) CMDT_EXPT_AMT,  CALC.CMDT_CD,
				( SELECT CMDT_NM FROM MDM_COMMODITY WHERE CMDT_CD = CALC.CMDT_CD AND ROWNUM = 1 ) AS CMDT_NM,
				CALC.FT_DYS, CALC.FX_FT_OVR_DYS, CALC.FM_MVMT_YD_CD, CALC.TO_MVMT_YD_CD, CALC.FM_MVMT_DT, CALC.TO_MVMT_DT, CALC.FT_CMNC_DT, CALC.FT_END_DT,
      			M.DMDT_AR_IF_CD, M.AR_IF_DT, CALC.BZC_TRF_CURR_CD,			
				TO_CHAR ( M.CRE_DT , 'DDMonYY' , 'NLS_DATE_LANGUAGE=ENGLISH' ) AS ISSUDT,
				TO_DATE (TO_CHAR ( SYSDATE     , 'YYYYMMDD' ) , 'YYYYMMDD' ) - TO_DATE (TO_CHAR ( M.CRE_DT , 'YYYYMMDD' ) , 'YYYYMMDD' ) AS OVEDAY
        FROM    BKG_BOOKING   B
                , DMT_INV_DTL  A
      			,DMT_CHG_BKG_CNTR MAIN
				, DMT_CHG_CALC CALC
                , BKG_CUSTOMER  SH
                , BKG_CUSTOMER  CN
                , BKG_CUSTOMER  NF
        		, MDM_CUSTOMER  U
                , MDM_VENDOR    V
      ,( SELECT DISTINCT B.*,
          NVL(DECODE(IB_SLS_OFC_CD,HRD.ATTR_CTNT1,HRD.ATTR_CTNT1,'Others'),'Others') IB_SLS_OFC_CD,
          IB_SREP_CD, IB_SLS_OFC_CD IB_SLS_OFC_CD_NEW
        FROM DMT_INV_DTL A,
          DMT_INV_MN B,
          DMT_OTS_DTL F,
          DMT_HRD_CDG_CTNT HRD
        WHERE 1=1
          AND A.DMDT_INV_NO = B.DMDT_INV_NO
          AND A.CRE_OFC_CD = B.CRE_OFC_CD
          AND B.BKG_NO = F.BKG_NO
          AND A.CNTR_NO = F.CNTR_NO
          AND B.DMDT_TRF_CD = F.DMDT_TRF_CD
          AND F.IB_SLS_OFC_CD = HRD.ATTR_CTNT1 (+)
          AND HRD.HRD_CDG_ID (+) = 'OTS_SALES_TEAM'
          AND HRD.ATTR_CTNT2 (+) = 'Y'

#if ( ${invno} != '' )
AND     B.DMDT_INV_NO IN (
    #foreach( $dmdt_inv_no_p in ${tempINVNOList}) 
        #if($velocityCount < $tempINVNOList.size()) 
           '$dmdt_inv_no_p', 
        #else 
           '$dmdt_inv_no_p' 
        #end 
    #end
        )
#end

#if ( ${creof} != '' )
AND     B.CRE_OFC_CD IN (
    #foreach( $cre_ofc_cd_p in ${tempCREOFList}) 
        #if($velocityCount < $tempCREOFList.size()) 
           '$cre_ofc_cd_p', 
        #else 
           '$cre_ofc_cd_p' 
        #end 
    #end
        )
#end

) M
        WHERE   1 = 1
        AND     M.DMDT_INV_NO       = A.DMDT_INV_NO 
        AND     M.CRE_OFC_CD        = A.CRE_OFC_CD  
		AND     A.SYS_AREA_GRP_ID   = CALC.SYS_AREA_GRP_ID
		AND     A.CNTR_NO			= CALC.CNTR_NO
		AND		A.CNTR_CYC_NO		= CALC.CNTR_CYC_NO
		AND		A.DMDT_TRF_CD		= CALC.DMDT_TRF_CD
		AND		A.DMDT_CHG_LOC_DIV_CD = CALC.DMDT_CHG_LOC_DIV_CD
		AND 	A.CHG_SEQ			= CALC.CHG_SEQ
        AND     MAIN.SYS_AREA_GRP_ID = CALC.SYS_AREA_GRP_ID
        AND     MAIN.CNTR_NO         = CALC.CNTR_NO
        AND     MAIN.CNTR_CYC_NO     = CALC.CNTR_CYC_NO
        AND     M.BKG_NO        = SH.BKG_NO         (+)
        AND     'S'             = SH.BKG_CUST_TP_CD (+)
        AND     M.BKG_NO        = CN.BKG_NO         (+)
        AND     'C'             = CN.BKG_CUST_TP_CD (+)
        AND     M.BKG_NO        = NF.BKG_NO         (+)
        AND     'N'             = NF.BKG_CUST_TP_CD (+)
        AND     M.BKG_NO        = B.BKG_NO          (+)
		AND     M.ACT_PAYR_CNT_CD   =   U.CUST_CNT_CD(+)                                    
		AND     M.ACT_PAYR_SEQ      =   U.CUST_SEQ(+)
		AND     M.ACT_PAYR_SEQ      =   V.VNDR_SEQ(+)

        )
GROUP BY INVNOO,VVDCDD,BKGNOO,BLNOOO,CURRCY
#if ( ${cntrflg} != '' )
	   , CNTR_NO
#end
       , TARFTP,ISSEDT,ISSEOF,INVOVD,SHEETP,POR_CD,POL_CD,POD_CD,DEL_CD,OB_SREP_CD
       , RFA_NO,SC_NO,TAA_NO,SH_CUST_CD,SH_CUST_NM,CN_CUST_CD,CN_CUST_NM,INV_RMK
       , PAYERC, PAYERN, IB_SLS_OFC_CD_NEW, IB_SREP_CD
	   , NF_CUST_CD, NF_CUST_NM, CHG_CURR_CD, CMDT_EXPT_AMT,FT_DYS,
  FX_FT_OVR_DYS,
  FM_MVMT_YD_CD,
  TO_MVMT_YD_CD,
  FM_MVMT_DT,
  TO_MVMT_DT,
  FT_CMNC_DT,
  FT_END_DT,
  DMDT_AR_IF_CD, AR_IF_DT, CMDT_CD, BZC_TRF_CURR_CD, ISSUDT, OVEDAY, CMDT_NM
ORDER   BY PAYERC, PAYERN, INVNOO			]]></sql>
			<params>
				<param name="curr_sel" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
