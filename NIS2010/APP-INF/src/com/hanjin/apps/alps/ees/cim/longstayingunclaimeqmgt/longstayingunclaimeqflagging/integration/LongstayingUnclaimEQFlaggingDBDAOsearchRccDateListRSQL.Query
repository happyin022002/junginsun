<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="LongstayingUnclaimEQFlaggingDBDAOsearchRccDateListRSQL">
			<desc><![CDATA[RCC_CD에 해당하는 RCC_DATE 구한다.]]></desc>
			<sql><![CDATA[
SELECT RCC_CD, RCC_DATE, 'SELECT '''||RCC_CD||''' RCC_CD, TO_DATE('''||RCC_DATE||''',''yyyy-MM-dd HH24:mi:SS'') RCC_DATE FROM DUAL'||
    CASE WHEN RK = 1 THEN '' ELSE ' UNION ALL ' END DATE_STR
    FROM
		(SELECT RCC_CD, TO_CHAR(GLOBALDATE_PKG.TIME_LOCAL_FNC(RCC_CD),'YYYYMMDD HH24:mi:SS') RCC_DATE, RANK() OVER(ORDER BY RCC_CD DESC) RK 
		    FROM
		        (SELECT DISTINCT A.RCC_CD FROM MDM_EQ_ORZ_CHT A
					 
		        	#if (${loc_type_code} == '1')
		        		WHERE A.RCC_CD =@[loc_cd]
			        #elseif (${loc_type_code} == '7')
		        		WHERE A.RCC_CD =@[loc_cd]
			        #elseif (${loc_type_code} == '2')
		        		WHERE A.LCC_CD =@[loc_cd]
			        #elseif (${loc_type_code} == '3')
		    	    	WHERE A.LCC_CD =@[loc_cd]
			        #elseif (${loc_type_code} == '4')
		    	        WHERE A.ECC_CD =@[loc_cd]
		        	#elseif (${loc_type_code} == '5')
		            	WHERE A.SCC_CD =@[loc_cd]
			        #elseif (${loc_type_code} == '6')
						WHERE SCC_CD = (SELECT SCC_CD FROM MDM_LOCATION WHERE LOC_CD=SUBSTR(@[loc_cd],1,5))
			        #end     
				)
		ORDER BY RCC_CD
		)			]]></sql>
			<params>
				<param name="loc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
