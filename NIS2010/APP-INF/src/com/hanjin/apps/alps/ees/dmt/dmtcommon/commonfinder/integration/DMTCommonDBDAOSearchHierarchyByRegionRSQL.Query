<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DMTCommonDBDAOSearchHierarchyByRegionRSQL">
			<desc><![CDATA[SearchHierarchyByRegion]]></desc>
			<sql><![CDATA[
SELECT 
	D.CONTI_CD
,	D.CONTI_NM
,	B.CNT_CD
,	B.CNT_NM
,	A.RGN_CD
,	A.RGN_NM
  FROM MDM_REGION A
      ,MDM_COUNTRY B
      ,MDM_SUBCONTINENT C
      ,MDM_CONTINENT D
 WHERE A.RGN_CD = @[rgn_cd]
	AND A.DELT_FLG = 'N'
	AND A.CNT_CD = B.CNT_CD
	AND B.SCONTI_CD = C.SCONTI_CD
	AND C.CONTI_CD = D.CONTI_CD			]]></sql>
			<params>
				<param name="rgn_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
