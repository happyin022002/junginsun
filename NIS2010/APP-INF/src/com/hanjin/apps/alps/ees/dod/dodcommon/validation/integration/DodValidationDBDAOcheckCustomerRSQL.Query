<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DodValidationDBDAOcheckCustomerRSQL">
			<desc><![CDATA[Customern 코드 유효성 검사]]></desc>
			<sql><![CDATA[
SELECT COUNT(1) CNT
  FROM MDM_CUSTOMER C
 WHERE CUST_CNT_CD || LPAD(CUST_SEQ, 6, '0') = @[s_value]
   AND ROWNUM = 1
   AND NMD_CUST_FLG = 'N'
   AND DELT_FLG = 'N'
   AND NOT EXISTS (SELECT 'OK'
          FROM MDM_CUSTOMER A
         WHERE 1 = 1
           AND C.CUST_CNT_CD = A.CUST_CNT_CD
           AND C.CUST_SEQ = A.CUST_SEQ
           AND ( A.NMD_CUST_FLG = 'Y'
                    OR A.SLS_DELT_EFF_DT IS NOT NULL))			]]></sql>
			<params>
				<param name="s_value" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
