<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueCollectionMgtDBDAOSearchFaxEmailHistoryByPayerRSQL">
			<desc><![CDATA[InvoiceIssueCollectionMgtDBDAOSearchFaxEmailHistoryByPayerRSQL]]></desc>
			<sql><![CDATA[
select  decode(H.ACT_PAYR_CNT_CD, '00', '', H.ACT_PAYR_CNT_CD) || lpad(H.ACT_PAYR_SEQ, 6, '0')
													as INVNOO
	   ,H.DMDT_SND_DOC_TP_CD						as SHTYPE
	   ,decode(H.DMDT_FAX_EML_SND_TP_CD, 'F', H.DMDT_PAYR_FAX_NO, H.DMDT_PAYR_EML)	
													as FAXEML
	   ,decode(H.DMDT_FAX_EML_SND_TP_CD, 'E', (
													select  decode(EML_PROC_STS_CD, 3, 'Sent Successfully', '')
													  from  COM_EML_SND_INFO
													 where  EML_SND_NO = H.FAX_EML_SND_NO
												)
											 , (
													select  nvl(XPT_ERR_MSG , FAX_ERR_MSG)
													  from  COM_FAX_SND_INFO
													 where  RD_SUB_SYS_CD = 'DMT'
													   and  FAX_SND_NO    = H.FAX_EML_SND_NO
												)
		) 											as RSTMSG
	   ,to_char(H.CRE_DT, 'YYYY-MM-DD HH24:mi') 	as SNDDAT
	   ,H.CRE_OFC_CD                          		as SNDOFF
	   ,H.CRE_USR_ID                          		as SNDRID	
	   ,(
			select  USR_NM 
			  from  COM_USER 
			 where  USR_ID = H.CRE_USR_ID
		)                                   		as SNDRNM
  from  DMT_FAX_EML_SND_HIS H
 where  ACT_PAYR_CNT_CD = decode(length(@[payercd]), 8, nvl(substr(@[payercd], 1, 2), H.ACT_PAYR_CNT_CD), 6, H.ACT_PAYR_CNT_CD, H.ACT_PAYR_CNT_CD)
   and  ACT_PAYR_SEQ    = decode(length(@[payercd]), 8, nvl(substr(@[payercd], 3, 6), H.ACT_PAYR_SEQ),    6, @[payercd],        H.ACT_PAYR_SEQ)

#if ( ${shttppp} != 'A' )
   and  DMDT_SND_DOC_TP_CD = @[shttppp]
#end

group by  decode(H.ACT_PAYR_CNT_CD, '00', '', H.ACT_PAYR_CNT_CD) || lpad(H.ACT_PAYR_SEQ, 6, '0') 
         ,H.DMDT_SND_DOC_TP_CD
         ,H.DMDT_PAYR_FAX_NO
         ,H.DMDT_PAYR_EML
         ,H.FAX_EML_SND_RSLT_MSG
         ,H.CRE_DT
         ,H.CRE_OFC_CD
         ,H.CRE_USR_ID
         ,H.FAX_EML_SND_NO
         ,H.DMDT_FAX_EML_SND_TP_CD
		 
order by H.CRE_DT desc			]]></sql>
			<params>
				<param name="payercd" type="12" value="" out="N"/>
				<param name="shttppp" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
