<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeCalculationDBDAOClockStopVORSQL">
			<desc><![CDATA[Charge에 적용된 Clock Stop 관련 정보를 조회한다]]></desc>
			<sql><![CDATA[
SELECT	C.CLK_STOP_NO,
		TO_CHAR(S.CLK_STOP_FM_DT, 'YYYYMMDD') CLK_STOP_FM_DT,
		TO_CHAR(S.CLK_STOP_TO_DT, 'YYYYMMDD') CLK_STOP_TO_DT,
		ROUND(S.CLK_STOP_TO_DT - S.CLK_STOP_FM_DT, 0) STOP_DAY,
		REPLACE(REPLACE(S.CLK_STOP_RMK, '"', ''), CHR(13)||CHR(10), ' ') CLK_STOP_RMK

FROM	DMT_CHG_TM_CLK_STOP   C,
		DMT_TM_CLK_STOP       S

WHERE	C.CLK_STOP_NO		= S.CLK_STOP_NO
AND     C.SYS_AREA_GRP_ID	= @[svr_id]
AND		C.CNTR_NO			= @[cntr_no]
AND		C.CNTR_CYC_NO		= @[cntr_cyc_no]
AND		C.DMDT_TRF_CD		= @[dmdt_trf_cd]
AND     C.DMDT_CHG_LOC_DIV_CD = @[dmdt_chg_loc_div_cd]
AND		C.CHG_SEQ			= @[chg_seq]
AND		S.CXL_FLG     		= 'N'			]]></sql>
			<params>
				<param name="svr_id" type="12" value="" out="N"/>
				<param name="cntr_no" type="12" value="" out="N"/>
				<param name="cntr_cyc_no" type="12" value="" out="N"/>
				<param name="dmdt_trf_cd" type="12" value="" out="N"/>
				<param name="dmdt_chg_loc_div_cd" type="12" value="" out="N"/>
				<param name="chg_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
