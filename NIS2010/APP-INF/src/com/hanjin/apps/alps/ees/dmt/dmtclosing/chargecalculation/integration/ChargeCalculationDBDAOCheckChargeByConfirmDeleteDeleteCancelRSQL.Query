<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeCalculationDBDAOCheckChargeByConfirmDeleteDeleteCancelRSQL">
			<desc><![CDATA[modifyChargeByConfirm
modifyDeleteCancelCharge
modifyDeleteCharge

중복 체크]]></desc>
			<sql><![CDATA[
SELECT COUNT(*) AS CNT
FROM DMT_CHG_CALC
WHERE	
	SYS_AREA_GRP_ID = @[svr_id]
AND	CNTR_NO			= @[cntr_no]
AND	CNTR_CYC_NO 	= @[cntr_cyc_no]
AND	DMDT_TRF_CD 	= @[dmdt_trf_cd]
AND	DMDT_CHG_LOC_DIV_CD = @[dmdt_chg_loc_div_cd]
AND	CHG_SEQ			= @[chg_seq]
#if (${sts_cd} == 'CONFIRM') 
AND DMDT_CHG_STS_CD = 'F'
#elseif (${sts_cd} == 'DELETE') 
AND DMDT_CHG_STS_CD 	NOT IN ( 'I', 'D')
#elseif (${sts_cd} == 'CANCEL') 
AND DMDT_CHG_STS_CD = 'D'
#else
AND 1=2
#end			]]></sql>
			<params>
				<param name="svr_id" type="12" value="" out="N"/>
				<param name="cntr_no" type="12" value="" out="N"/>
				<param name="cntr_cyc_no" type="12" value="" out="N"/>
				<param name="dmdt_trf_cd" type="12" value="" out="N"/>
				<param name="dmdt_chg_loc_div_cd" type="12" value="" out="N"/>
				<param name="chg_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
