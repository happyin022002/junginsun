<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CntrPlanMTRepoPlanDBDAOManageMtyDchgPlnUSQL">
			<desc><![CDATA[MtyDchgPln 저장]]></desc>
			<sql><![CDATA[
MERGE INTO EQR_CTRL_MTY_DCHG_PLN V
USING  DUAL
ON (    V.VSL_CD = @[vsl_cd]
        AND V.SKD_VOY_NO = @[skd_voy_no]
        AND V.SKD_DIR_CD = @[skd_dir_cd]
        AND V.POL_CD = @[pol_cd]
        AND V.POD_CD = @[pod_cd]
)
WHEN MATCHED THEN
    UPDATE SET 
        POL_YD_CD = @[pol_yd_cd], 
        POD_YD_CD = @[pod_yd_cd],
        MTY_PLN_SHW_FLG = @[mty_pln_shw_flg],
        UPD_USR_ID =  @[upd_usr_id],
        UPD_DT = SYSDATE
WHEN NOT MATCHED THEN
    INSERT (
        VSL_CD,
        SKD_VOY_NO,
        SKD_DIR_CD,
        POL_CD,
        POD_CD,
        POL_YD_CD,
        POD_YD_CD,
        MTY_PLN_SHW_FLG,
        CRE_USR_ID,
        CRE_DT,
    	UPD_USR_ID,
    	UPD_DT
	) VALUES (
        @[vsl_cd],
        @[skd_voy_no],
        @[skd_dir_cd],
        @[pol_cd],
        @[pod_cd],
        @[pol_yd_cd],
        @[pod_yd_cd],
        @[mty_pln_shw_flg],
        @[cre_usr_id],
        SYSDATE,
        @[upd_usr_id],
        SYSDATE
    )			]]></sql>
			<params>
				<param name="vsl_cd" type="12" value="" out="N"/>
				<param name="skd_voy_no" type="12" value="" out="N"/>
				<param name="skd_dir_cd" type="12" value="" out="N"/>
				<param name="pol_cd" type="12" value="" out="N"/>
				<param name="pod_cd" type="12" value="" out="N"/>
				<param name="pol_yd_cd" type="12" value="" out="N"/>
				<param name="pod_yd_cd" type="12" value="" out="N"/>
				<param name="mty_pln_shw_flg" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
