<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeAmountDiscountMgtDBDAOSearchAfterBookingAproPathRSQL">
			<desc><![CDATA[ChargeAmountDiscountMgtDBDAOSearchAfterBookingAproPath]]></desc>
			<sql><![CDATA[
SELECT	AFT_PATH.AFT_BKG_PATH_LVL
	,	CD_DTL.INTG_CD_VAL_DP_DESC STS_DESC
	,	TO_CHAR(ADJ_PROG.PROG_DT, 'YYYY-MM-DD') PROG_DT
	,	CASE WHEN ADJ_PROG.PROG_OFC_CD IS NOT NULL THEN ADJ_PROG.PROG_OFC_CD
	         ELSE
	               NVL(AFT_PATH.APRO_OFC_CD,'ERROR')
              END
	    AS PROG_OFC_CD
	,	(SELECT USR_NM PROG_USR_NM FROM COM_USER WHERE USR_ID = ADJ_PROG.PROG_USR_ID ) PROG_USR_NM
	,	REPLACE(ADJ_PROG.PROG_RMK, '@*', chr(13) || chr(10)) PROG_RMK

FROM    DMT_AFT_BKG_ADJ_RQST ADJ_RQST
    ,   ( SELECT * FROM DMT_AFT_BKG_ADJ_PROG A
           WHERE 1=1
	#if(${dar_no} != '')
			 AND AFT_EXPT_DAR_NO = @[dar_no]
	#elseif(${apvl_no} != '')
             AND AFT_EXPT_DAR_NO = ( SELECT AFT_EXPT_DAR_NO FROM DMT_AFT_BKG_ADJ_RQST WHERE AFT_BKG_APRO_NO = @[apvl_no] )
	#end
             AND PROG_SEQ > ( SELECT MAX(PROG_SEQ) FROM DMT_AFT_BKG_ADJ_PROG WHERE AFT_EXPT_DAR_NO = A.AFT_EXPT_DAR_NO AND DMDT_EXPT_RQST_STS_CD = 'R' )
        ) ADJ_PROG
    ,   DMT_AFT_BKG_APRO_PATH AFT_PATH
   	,	COM_INTG_CD_DTL CD_DTL
    
WHERE   
	#if(${dar_no} != '')
        ADJ_RQST.AFT_EXPT_DAR_NO 		= @[dar_no]
	#elseif(${apvl_no} != '')
        ADJ_RQST.AFT_BKG_APRO_NO 		= @[apvl_no]
	#end

    AND ADJ_RQST.AFT_EXPT_DAR_NO 		= AFT_PATH.AFT_EXPT_DAR_NO
    AND AFT_PATH.AFT_EXPT_DAR_NO 		= ADJ_PROG.AFT_EXPT_DAR_NO(+)
    AND AFT_PATH.AFT_BKG_PATH_CD 	    = CD_DTL.INTG_CD_VAL_CTNT
    AND CD_DTL.INTG_CD_ID 				= 'CD03468'
    AND AFT_PATH.AFT_BKG_PATH_CD 	    = ADJ_PROG.AFT_BKG_PATH_CD(+)
    AND ADJ_PROG.DMDT_EXPT_RQST_STS_CD(+) != 'R'

	AND AFT_PATH.AFT_BKG_PATH_CPLS_FLG  = 'Y'

ORDER BY AFT_PATH.AFT_BKG_PATH_LVL			]]></sql>
			<params>
				<param name="dar_no" type="12" value="" out="N"/>
				<param name="apvl_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
