<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CntrRepoPlanSensitivityAnalysisDBDAOSearchPlanSensivityLimitLoadDischargeRSQL">
			<desc><![CDATA[Load/Discharge 민감도 조회]]></desc>
			<sql><![CDATA[
SELECT SUBSTR(PLN_YRWK,1,4) || '-' || SUBSTR(PLN_YRWK,5,2) WEEK        
       , @[sens_typ] SENSITY                                            
	   , @[obj_txt] OBJ                                             
	   , '' LANE                                               
	   , '' VVD 
#if (${limitobj} == 'L') 
       , B.ECC_CD FM_LOC                               		
	   , '' TO_LOC   
#elseif (${limitobj} == 'D') 
	   , B.ECC_CD FM_LOC                               		
	   , '' TO_LOC     
#end                                               
       , 'TEU' ts_type                                            
       ,  SUM(LOD_RNG_MIN_QTY) CURR_LIMIT                                         
       ,  SUM(LOD_RNG_MAX_QTY) CURR_LIMIT1                                         
#if (${limitobj} == 'L') 
       ,  SUM(LOD_SHDW_COST_AMT) SHADOW_PRC                   		
#elseif (${limitobj} == 'D') 
	   , SUM(DCHG_SHDW_COST_AMT) SHADOW_PRC                   	
#end  
	   , '' LIMIT_LANG                                        
FROM EQR_EQ_REPO_PLN A                                         
    , EQR_PORT_HNDL_SHDW B                                    
    , (SELECT ECC_CD, LCC_CD, RCC_CD FROM EQR_ECC_MST) C	   	
WHERE A.REPO_PLN_ID = B.REPO_PLN_ID                            
AND B.ECC_CD = C.ECC_CD                                  
AND A.REPO_PLN_ID = @[repo_pln_id]                                   
AND B.PLN_YRWK BETWEEN @[fmstartprd] AND @[fmendprd]                              	
#if (${fmecccd} != '') 
   	#if (${fmtype} == 'R')
    AND C.RCC_CD IN (${arrfmecccd}) 
	#end
    #if (${fmtype} == 'L')
    AND C.LCC_CD IN (${arrfmecccd})
	#end
    #if (${fmtype} == 'E')
    AND C.ECC_CD IN (${arrfmecccd})
	#end
#end
GROUP BY PLN_YRWK, B.ECC_CD                                        
ORDER BY PLN_YRWK, B.ECC_CD			]]></sql>
			<params>
				<param name="sens_typ" type="12" value="" out="N"/>
				<param name="obj_txt" type="12" value="" out="N"/>
				<param name="repo_pln_id" type="12" value="" out="N"/>
				<param name="fmstartprd" type="12" value="" out="N"/>
				<param name="fmendprd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
