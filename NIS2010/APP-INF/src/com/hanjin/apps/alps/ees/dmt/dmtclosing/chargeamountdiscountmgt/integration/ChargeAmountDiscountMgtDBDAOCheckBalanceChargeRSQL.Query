<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeAmountDiscountMgtDBDAOCheckBalanceChargeRSQL">
			<desc><![CDATA[Balance Charge 가 있는 CNTR 인지 체크하는 쿼리]]></desc>
			<sql><![CDATA[
SELECT	COUNT(CALC.SYS_AREA_GRP_ID)
FROM	DMT_CHG_BKG_CNTR BKG_CNTR
	,	DMT_CHG_CALC CALC
WHERE	BKG_CNTR.SYS_AREA_GRP_ID = CALC.SYS_AREA_GRP_ID
	AND	BKG_CNTR.CNTR_NO = CALC.CNTR_NO
	AND BKG_CNTR.CNTR_CYC_NO = CALC.CNTR_CYC_NO
#if(${bkg_no} != '')
	AND BKG_CNTR.BKG_NO = @[bkg_no]
#end
#if(${bl_no} != '')
	AND BKG_CNTR.BL_NO = @[bl_no]
#end
	AND CHG_SEQ > 1			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="bl_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
