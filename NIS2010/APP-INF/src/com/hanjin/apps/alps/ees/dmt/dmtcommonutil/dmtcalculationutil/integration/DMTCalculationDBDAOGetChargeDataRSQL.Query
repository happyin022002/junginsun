<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DMTCalculationDBDAOGetChargeDataRSQL">
			<desc><![CDATA[getChargeData]]></desc>
			<sql><![CDATA[
SELECT    C.DMDT_TRF_APLY_TP_CD                         AS Z_DC_APPL_RATE
        , C.BZC_TRF_CURR_CD                             AS Z_CUR_CD
        , C.OFC_CD                                      AS Z_OFC_CD
        , C.OFC_RHQ_CD                                  AS Z_OFC_RHQ
        , C.BZC_TRF_SEQ                                 AS Z_DTN_SEQ
        , NVL(C.BZC_DMDT_DE_TERM_CD, 'N')               AS BZC_DMDT_DE_TERM_CD
        , C.BZC_TRF_GRP_SEQ                             AS Z_DTG_GRP_ID
        , C.RFA_EXPT_APRO_NO                            AS Z_RFA_APPR_NO
        , C.RFA_EXPT_DAR_NO                             AS Z_RFA_DAR_NO
        , C.RFA_EXPT_MAPG_SEQ                           AS Z_RFA_MAPG_SEQ
        , C.RFA_EXPT_VER_SEQ                            AS Z_RFA_VER_SEQ
        , C.RFA_RQST_DTL_SEQ                            AS Z_RFA_DTL_SEQ
        , C.SC_NO                                       AS Z_SC_NO
        , C.SC_EXPT_VER_SEQ	                            AS Z_SC_VER_SEQ
        , C.SC_EXPT_GRP_SEQ                             AS Z_SC_GRP_SEQ
        , TO_CHAR(C.SC_RFA_EXPT_APLY_DT,'YYYYMMDD')     AS Z_SC_RFA_EXPT_APLY_DT
        , SUBSTR (C.DMDT_TRF_CD, 3, 1)                  AS Z_DBC_IO_BND
        , B.CNTR_TPSZ_CD                                AS Z_CNTRTS_CD
        , B.VSL_CD                                      AS Z_VSL_CD
        , B.SKD_VOY_NO                                  AS Z_SKD_VOYAGE_NO
        , B.SKD_DIR_CD                                  AS Z_SKD_DIR_CD
        , B.POL_CD                                      AS Z_POL_LOC
        , B.POD_CD                                      AS Z_POD_LOC
        , B.POR_CD                                      AS Z_POR_LOC
        , B.DEL_CD                                      AS Z_DEL_LOC
        , K.PST_RLY_PORT_CD                             AS Z_POST_RLY
        , K.PRE_RLY_PORT_CD                             AS Z_PRE_RLY
        , F.CURR_CD                                     AS Z_RFA_CUR_CD
        ,
        (
        SELECT  S.CURR_CD
        FROM    PRI_SP_HDR          P,
                DMT_SC_EXPT_GRP     S
        WHERE   P.PROP_NO           = S.PROP_NO
        AND     C.SC_NO             = P.SC_NO
        AND     C.SC_EXPT_VER_SEQ   = S.SC_EXPT_VER_SEQ
        AND     C.SC_EXPT_GRP_SEQ   = S.SC_EXPT_GRP_SEQ
        )                                               AS Z_SC_CUR_CD
        , TO_CHAR(C.BZC_TRF_APLY_DT,'YYYYMMDD')         AS BZC_TRF_APLY_DT
        , B.BKG_NO                                      AS Z_BKG_NO
        , NVL (C.OFC_TRNS_RHQ_CNG_FLG, 'N')             AS Z_DCC_TRS_IND
		, C.SC_RFA_EXPT_AMT
		, DECODE(SUBSTR(C.DMDT_TRF_CD,3,1),'I',V.POD_CLPT_IND_SEQ,V.POL_CLPT_IND_SEQ) AS CLPT_IND_SEQ
FROM    DMT_CHG_CALC         C,
        DMT_CHG_BKG_CNTR     B,
        BKG_BOOKING          K,
        DMT_RFA_EXPT_TRF_DTL F,
		BKG_VVD              V
WHERE   C.CNTR_NO                = @[cntr_no]
AND     C.CNTR_CYC_NO            = @[cntr_cyc_no]
AND     C.DMDT_TRF_CD            = @[dmdt_trf_cd]
AND     C.DMDT_CHG_LOC_DIV_CD    = @[dmdt_chg_loc_div_cd]
AND     C.CHG_SEQ                = 1
AND     C.SYS_AREA_GRP_ID        = B.SYS_AREA_GRP_ID
AND     C.CNTR_NO                = B.CNTR_NO
AND     C.CNTR_CYC_NO            = B.CNTR_CYC_NO
AND     B.BKG_NO                 = K.BKG_NO
AND     C.RFA_EXPT_DAR_NO        = F.RFA_EXPT_DAR_NO        (+)
AND     C.RFA_EXPT_MAPG_SEQ      = F.RFA_EXPT_MAPG_SEQ      (+)
AND     C.RFA_EXPT_VER_SEQ       = F.RFA_EXPT_VER_SEQ       (+)
AND     C.RFA_RQST_DTL_SEQ       = F.RFA_RQST_DTL_SEQ       (+)
AND		V.BKG_NO				 = B.BKG_NO
AND		DECODE(SUBSTR(C.DMDT_TRF_CD,3,1),'I',V.POD_CD,V.POL_CD)				 = DECODE(SUBSTR(C.DMDT_TRF_CD,3,1),'I',K.POD_CD,K.POL_CD)			]]></sql>
			<params>
				<param name="cntr_no" type="12" value="" out="N"/>
				<param name="cntr_cyc_no" type="12" value="" out="N"/>
				<param name="dmdt_trf_cd" type="12" value="" out="N"/>
				<param name="dmdt_chg_loc_div_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
