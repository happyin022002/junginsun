<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueCollectionMgtDBDAOSearchInterfaceTaxAmtRSQL">
			<desc><![CDATA[Tax Amt Search]]></desc>
			<sql><![CDATA[
SELECT A.DMDT_INV_NO
	,'' AS SRC_IF_DT
	,'' AS SRC_IF_SEQ
	,@[chg_seq] AS CHG_SEQ
	,A.INV_CURR_CD AS CURR_CD
	,CASE @[chg_flg] WHEN 'T' THEN DECODE((SELECT AR_OFC_CD  FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd]),'VLCSC','IVA','SYDSC','AST','TVA') 
                     WHEN 'S' THEN 'SBC' 
                     WHEN 'K' THEN 'KKC' END AS CHG_CD
	,'BL' AS PER_TP_CD
	,CASE @[chg_flg] WHEN 'T' THEN A.TAX_AMT
                     WHEN 'S' THEN A.IDA_LOCL_TAX
                     WHEN 'K' THEN A.IDA_N2ND_LOCL_TAX END AS TRF_RT_AMT
	,1 AS RAT_AS_CNTR_QTY
	,CASE @[chg_flg] WHEN 'T' THEN A.TAX_AMT
                     WHEN 'S' THEN A.IDA_LOCL_TAX
                     WHEN 'K' THEN A.IDA_N2ND_LOCL_TAX END AS CHG_AMT
	,'' AS TRF_NO
	,'N' TVA_FLG
	,'N' SBC_FLG
	,'N' KKC_FLG
	,A.CRE_USR_ID
	,TO_CHAR(A.CRE_DT,'yyyymmdd') AS CRE_DT
	,A.UPD_USR_ID
	,TO_CHAR(A.UPD_DT,'yyyymmdd') AS UPD_DT
FROM DMT_INV_MN A
WHERE A.DMDT_INV_NO = @[invoice_no]
AND A.CRE_OFC_CD = @[cre_ofc_cd]			]]></sql>
			<params>
				<param name="chg_seq" type="12" value="" out="N"/>
				<param name="chg_flg" type="12" value="" out="N"/>
				<param name="ar_ofc_cd" type="12" value="" out="N"/>
				<param name="invoice_no" type="12" value="" out="N"/>
				<param name="cre_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
