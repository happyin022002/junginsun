<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeCalculationDBDAOChargeByDRCancelDSQL">
			<desc><![CDATA[모든 Balance Charge를 Delete한다]]></desc>
			<sql><![CDATA[
DELETE	
FROM	DMT_CHG_CALC
WHERE	SYS_AREA_GRP_ID		=	@[svr_id]
AND		CNTR_NO				=	@[cntr_no]
AND		CNTR_CYC_NO			=	@[cntr_cyc_no]

#if (${dul_tp_expt_flg} != 'Y') 
AND		DMDT_TRF_CD			=	@[dmdt_trf_cd]
AND		DMDT_CHG_LOC_DIV_CD	=	@[dmdt_chg_loc_div_cd]

#else
	#if (${dmdt_trf_cd} == 'CTOC')
	AND (
			(		DMDT_TRF_CD			= 'CTOC'
        		AND DMDT_CHG_LOC_DIV_CD	= 'POR'
        	)
	        OR
	        (		DMDT_TRF_CD			= 'DTOC'
	        	AND DMDT_CHG_LOC_DIV_CD	= 'POR'
	        )
	        OR
	        (		DMDT_TRF_CD			= 'DMOF'
	        	AND DMDT_CHG_LOC_DIV_CD	= 'POL'
	        )
	    )
	#elseif (${dmdt_trf_cd} == 'CTIC')
	AND (
			(		DMDT_TRF_CD			= 'CTIC'
        		AND DMDT_CHG_LOC_DIV_CD	= 'DEL'
        	)
	        OR
	        (		DMDT_TRF_CD			= 'DMIF'
	        	AND DMDT_CHG_LOC_DIV_CD	= 'POD'
	        )
	        OR
	         (		DMDT_TRF_CD			= 'DTIC'
	        	AND DMDT_CHG_LOC_DIV_CD	= 'DEL'
	        )
	    )
	#end
#end

AND		CHG_SEQ				<>	1						/* first charge container */
AND		FM_MVMT_STS_CD		=	'DR'
AND		NVL(DMDT_CHG_STS_CD, ' ') <> 'I'				/* Invoiced */			]]></sql>
			<params>
				<param name="svr_id" type="12" value="" out="N"/>
				<param name="cntr_no" type="12" value="" out="N"/>
				<param name="cntr_cyc_no" type="12" value="" out="N"/>
				<param name="dmdt_trf_cd" type="12" value="" out="N"/>
				<param name="dmdt_chg_loc_div_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
