<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeAmountDiscountMgtDBDAOSearchAfterBookingListRSQL">
			<desc><![CDATA[After Booking Request 조회를 위한 쿼리]]></desc>
			<sql><![CDATA[
SELECT  DISTINCT 
        ADJ_RQST_DTL.AFT_EXPT_DAR_NO
	   ,ADJ_RQST_DTL.AFT_EXPT_ADJ_SEQ
       ,ADJ_RQST_DTL.DMDT_TRF_CD
	   ,ADJ_RQST_DTL.BKG_NO
	   ,ADJ_RQST_DTL.BL_NO
	   ,DECODE(ADJ_RQST_DTL.DC_FLG, 'N', 'D', 'S')								AS CNTR_TP
	   ,DECODE(ADJ_RQST_DTL.FT_ADJ_FLG, 'Y', 1, 0) 								AS FT_ADJ_FLG       
	   ,DECODE(ADJ_RQST_DTL.FT_ADD_DYS, 0, '', ADJ_RQST_DTL.FT_ADD_DYS) 		AS FT_ADD_DYS
	   ,DECODE(ADJ_RQST_DTL.FT_TTL_DYS, 0, '', ADJ_RQST_DTL.FT_TTL_DYS) 		AS FT_TTL_DYS
	   ,DECODE(ADJ_RQST_DTL.XCLD_SAT_FLG, 'Y', 1, 0) 							AS XCLD_SAT_FLG
	   ,DECODE(ADJ_RQST_DTL.XCLD_SUN_FLG, 'Y', 1, 0) 							AS XCLD_SUN_FLG
	   ,DECODE(ADJ_RQST_DTL.XCLD_HOL_FLG, 'Y', 1, 0) 							AS XCLD_HOL_FLG
	   ,DECODE(ADJ_RQST_DTL.DC_FLG, 'Y', 1, 0) 									AS DC_FLG
	   ,ADJ_RQST_DTL.CURR_CD
	   ,DECODE(ADJ_RQST_DTL.DC_AMT, 0, '', ADJ_RQST_DTL.DC_AMT) 				AS DC_AMT
	   ,DECODE(ADJ_RQST_DTL.DC_RTO, 0, '', ADJ_RQST_DTL.DC_RTO) 				AS DC_RTO
	   ,ADJ_RQST_DTL.EACH_CNTR_FLG
	   ,BKG.VSL_CD || BKG.SKD_VOY_NO || BKG.SKD_DIR_CD 							AS TVVD
	   ,BKG.POR_CD
	   ,BKG.POL_CD
	   ,BKG.POD_CD
	   ,BKG.DEL_CD
	   ,BKG.RCV_TERM_CD || '/' || BKG.DE_TERM_CD 								AS RD
	   ,(
        	SELECT  CASE WHEN SUM(DECODE(DCGO_FLG, 'Y', 1, 0)) >= 1 THEN 'Y' ELSE '' END
        	  FROM  DMT_CHG_BKG_CNTR
        	 WHERE  SYS_AREA_GRP_ID = CHG_CNTR.SYS_AREA_GRP_ID
               AND  BKG_NO = CHG_CNTR.BKG_NO
		) 																		AS DCGO_FLG
	   ,(
        	SELECT  CASE WHEN SUM(DECODE(RC_FLG, 'Y', 1, 0)) >= 1 THEN 'Y' ELSE '' END
        	  FROM  DMT_CHG_BKG_CNTR
        	 WHERE  SYS_AREA_GRP_ID = CHG_CNTR.SYS_AREA_GRP_ID
               AND  BKG_NO = CHG_CNTR.BKG_NO
		) 																		AS RC_FLG
	   ,(
        	SELECT  CASE WHEN SUM(DECODE(AWK_CGO_FLG, 'Y', 1, 0)) >= 1 THEN 'Y' ELSE '' END
        	  FROM  DMT_CHG_BKG_CNTR
        	 WHERE  SYS_AREA_GRP_ID = CHG_CNTR.SYS_AREA_GRP_ID
               AND  BKG_NO = CHG_CNTR.BKG_NO
		) 																		AS AWK_CGO_FLG
	   ,(
        	SELECT  CASE WHEN SUM(DECODE(BB_CGO_FLG, 'Y', 1, 0)) >= 1 THEN 'Y' ELSE '' END
        	  FROM  DMT_CHG_BKG_CNTR
        	 WHERE  SYS_AREA_GRP_ID = CHG_CNTR.SYS_AREA_GRP_ID
               AND  BKG_NO = CHG_CNTR.BKG_NO
		) 																		AS BB_CGO_FLG
	   ,(
        	SELECT  CASE WHEN SUM(DECODE(RD_CGO_FLG, 'Y', 1, 0)) >= 1 THEN 'Y' ELSE '' END
        	  FROM  DMT_CHG_BKG_CNTR
        	 WHERE  SYS_AREA_GRP_ID = CHG_CNTR.SYS_AREA_GRP_ID
            	AND BKG_NO = CHG_CNTR.BKG_NO
		) 																		AS RD_CGO_FLG
	   ,(
        	SELECT  CASE WHEN SUM(DECODE(SOC_FLG, 'Y', 1, 0)) >= 1 THEN 'Y' ELSE '' END
        	  FROM  DMT_CHG_BKG_CNTR
        	 WHERE  SYS_AREA_GRP_ID = CHG_CNTR.SYS_AREA_GRP_ID
               AND  BKG_NO = CHG_CNTR.BKG_NO
		) 																		AS SOC_FLG
	   ,BKG.CMDT_CD
	   ,CMDT.CMDT_NM
	   ,ADJ_RQST.RQST_OFC_CD
	   ,ADJ_RQST_DTL.AFT_BKG_CM_AMT
	   ,TO_CHAR(ADJ_RQST_DTL.AFT_BKG_XCH_RT) 									AS XCH_RT
	   ,DECODE(ADJ_RQST_DTL.AFT_BKG_XCH_RT_LVL, '1', 'V', '2', 'M', '') 		AS XCH_RT_LVL
	   ,( 
			SELECT  COUNT(*) 
			  FROM  DMT_AFT_BKG_CNTR 
			 WHERE  AFT_EXPT_DAR_NO = ADJ_RQST_DTL.AFT_EXPT_DAR_NO 
			   AND  AFT_EXPT_ADJ_SEQ = ADJ_RQST_DTL.AFT_EXPT_ADJ_SEQ
		) 																		AS CNTR_QTY  
	   ,(
			SELECT  SUM(DECODE(ADJ_RQST_DTL.EACH_CNTR_FLG
							,'N'
							,ROUND(RQST_BIL_AMT/ADJ_RQST_DTL.AFT_BKG_XCH_RT, 2)
							,CASE 
								WHEN NVL(CNTR_CHG_DC_AMT, 0) != 0 OR NVL(CNTR_CHG_DC_RTO, 0) != 0 THEN 
									ROUND(RQST_BIL_AMT/ADJ_RQST_DTL.AFT_BKG_XCH_RT, 2)
								ELSE 
									0 
							END 
					))
	          FROM  DMT_AFT_BKG_CNTR 
	         WHERE  AFT_EXPT_DAR_NO = ADJ_RQST.AFT_EXPT_DAR_NO 
	           AND  AFT_EXPT_ADJ_SEQ = ADJ_RQST_DTL.AFT_EXPT_ADJ_SEQ 
		) 																		AS BIL_TTL 
	   ,( 
			SELECT  SUM(ROUND(RQST_DC_AMT/ADJ_RQST_DTL.AFT_BKG_XCH_RT, 2)) 
	          FROM  DMT_AFT_BKG_CNTR 
	         WHERE  AFT_EXPT_DAR_NO = ADJ_RQST.AFT_EXPT_DAR_NO 
	           AND  AFT_EXPT_ADJ_SEQ = ADJ_RQST_DTL.AFT_EXPT_ADJ_SEQ 
		) 																		AS DC_TTL
	   ,( 
			SELECT  SUM(ROUND(RQST_BIL_AFT_DC_AMT/ADJ_RQST_DTL.AFT_BKG_XCH_RT,2)) 
	          FROM  DMT_AFT_BKG_CNTR 
	         WHERE  AFT_EXPT_DAR_NO = ADJ_RQST.AFT_EXPT_DAR_NO 
	           AND  AFT_EXPT_ADJ_SEQ = ADJ_RQST_DTL.AFT_EXPT_ADJ_SEQ 
		) 																		AS AFT_DC_TTL
       ,DECODE(( 
				SELECT  COUNT(*)
        	      FROM  ( 
							SELECT  OFC_CD
							       ,COUNT(*) 
							  FROM  DMT_CHG_BKG_CNTR 			A
							       ,DMT_CHG_CALC 				B
								   ,DMT_AFT_BKG_ADJ_RQST_DTL 	C
							 WHERE  1 = 1
                               AND  C.AFT_EXPT_DAR_NO = @[dar_no]
                               AND  A.SYS_AREA_GRP_ID = B.SYS_AREA_GRP_ID
                               AND  A.CNTR_NO = B.CNTR_NO
                               AND  A.CNTR_CYC_NO = B.CNTR_CYC_NO 
        					   AND  A.BKG_NO = C.BKG_NO
                               AND  B.DMDT_TRF_CD = C.DMDT_TRF_CD
                            GROUP BY OFC_CD 
						) 
			)
			,1
			,NVL(( 
					SELECT  OFC_CD 
				      FROM  DMT_CHG_BKG_CNTR 			A
					       ,DMT_CHG_CALC 				B
						   ,DMT_HRD_CDG_CTNT 			C
						   ,DMT_AFT_BKG_ADJ_RQST_DTL 	D
					 WHERE  1 = 1
                       AND  D.AFT_EXPT_DAR_NO = @[dar_no]
                       AND  A.SYS_AREA_GRP_ID = B.SYS_AREA_GRP_ID
                       AND  A.CNTR_NO = B.CNTR_NO
                       AND  A.CNTR_CYC_NO = B.CNTR_CYC_NO 
					   AND  A.BKG_NO = D.BKG_NO
                       AND  B.DMDT_TRF_CD = D.DMDT_TRF_CD
				       AND  C.HRD_CDG_ID = 'AFT_BKG_OFC_CHK'
				       AND  B.OFC_CD = C.ATTR_CTNT1
                       AND  ROWNUM = 1 
				),'N') 
			,'N') 																AS OFC_CD

  FROM  DMT_AFT_BKG_ADJ_RQST 		ADJ_RQST
	   ,DMT_AFT_BKG_ADJ_RQST_DTL 	ADJ_RQST_DTL
	   ,DMT_CHG_BKG_CNTR 			CHG_CNTR
	   ,BKG_BOOKING 				BKG
	   ,MDM_COMMODITY 				CMDT

 WHERE  #if(${dar_no} != '')
	    ADJ_RQST.AFT_EXPT_DAR_NO = @[dar_no]
        #elseif(${apvl_no} != '')
	    ADJ_RQST.AFT_BKG_APRO_NO = @[apvl_no]
        #end
   AND  ADJ_RQST.AFT_EXPT_DAR_NO = ADJ_RQST_DTL.AFT_EXPT_DAR_NO
   AND  ADJ_RQST_DTL.BKG_NO = CHG_CNTR.BKG_NO
   AND  CHG_CNTR.SYS_AREA_GRP_ID = 
		(
			SELECT  SYS_AREA_GRP_ID
			  FROM  COM_SYS_AREA_GRP_ID
			 WHERE  CNT_CD = 
					(
						CASE 
							WHEN SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 2, 1) = 'M' AND SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 3, 1) = 'I' THEN 
								SUBSTR(BKG.POD_CD, 0, 2)
							WHEN SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 2, 1) = 'M' AND SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 3, 1) = 'O' THEN 
								SUBSTR(BKG.POL_CD, 0, 2)
							WHEN SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 2, 1) = 'T' AND SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 3, 1) = 'I' THEN 
								SUBSTR(BKG.DEL_CD, 0, 2)
							WHEN SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 2, 1) = 'T' AND SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 3, 1) = 'O' THEN 
								SUBSTR(BKG.POR_CD, 0, 2)
						END    
					)
			   AND  CO_IND_CD = 'H'
		)
   AND  ADJ_RQST_DTL.BKG_NO = BKG.BKG_NO
   AND  BKG.CMDT_CD = CMDT.CMDT_CD

ORDER BY AFT_EXPT_ADJ_SEQ			]]></sql>
			<params>
				<param name="dar_no" type="12" value="" out="N"/>
				<param name="apvl_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
