<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DropOffCreationDBDAOSearchCrrDodDrpOffChgVOListRSQL">
			<desc><![CDATA[Booking-TRO에 데이터 중 Location과 cntr rtn yd cd가 다른 confirm한 데이터를 가져온다
Invoice Inquiry화면에서 호출하여 AR INV 보내고 난 후 RTN CY를 변경하기 위한 대상을 가져온다.]]></desc>
			<sql><![CDATA[
SELECT A.TRO_IB_CFM_OFC_CD,
       A.TRO_IB_CFM_DT,
       A.BKG_NO,
	   A.BL_NO,
       A.CNTR_NO,
       A.CNTR_TPSZ_CD,
       A.DEL_CD,
       A.ORG_CNTR_RTN_YD_CD,
       A.CNTR_RTN_DT,
       A.ORG_CURR_CD,
       A.CUST_CNT_CD,
       A.CUST_SEQ,
       A.CUST_LGL_ENG_NM,
       A.CUST_CD_SEQ,
       A.CUST_CNT_CD TMP_CUST_CNT_CD,
       A.CUST_SEQ TMP_CUST_SEQ,
       A.CUST_LGL_ENG_NM TMP_CUST_LGL_ENG_NM,
       A.CUST_CD_SEQ TMP_CUST_CD_SEQ,
       A.SPCL_CUST_CNT_CD,
       A.SPCL_CUST_SEQ,
       A.SPCL_CD_SEQ,
       A.SPCL_CUST_LGL_ENG_NM,
       A.ORG_GEN_TRF_AMT,
       A.ORG_SPCL_TRF_AMT,
       A.ORG_DC_AMT,
       A.ORG_SVC_FEE_AMT,
       A.ORG_TTL_AMT,
       A.TRO_IB_CXL_FLG,
       A.INV_SRC_NO,
	   A.DRP_OFF_CHG_MNL_FLG,
	   A.DRP_OFF_CHG_SEQ,
	   A.ATCH_FILE_LNK_ID,
       A.ATCH_FILE_LNK_CNT
  FROM (SELECT G.TRO_IB_CFM_OFC_CD,
               TO_CHAR(E.CFM_DT, 'YYYY-MM-DD HH24:MI:SS') TRO_IB_CFM_DT,
               G.BKG_NO,
			   B.BL_NO,
               G.CNTR_NO,
               G.CNTR_TPSZ_CD,
               G.DEL_CD,
               G.CNTR_RTN_YD_CD ORG_CNTR_RTN_YD_CD,
               TO_CHAR(E.CNTR_RTN_DT, 'YYYY-MM-DD HH24:MI:SS') CNTR_RTN_DT,
               G.CURR_CD ORG_CURR_CD,
               G.CUST_CNT_CD,
               G.CUST_SEQ,
               G.CUST_CNT_CD|| LPAD(G.CUST_SEQ, 6, 0) CUST_CD_SEQ,
               (SELECT SUBSTR(C.CUST_LGL_ENG_NM, 1, 50)
                  FROM MDM_CUSTOMER C
                 WHERE C.CUST_CNT_CD = G.CUST_CNT_CD
                   AND C.CUST_SEQ = G.CUST_SEQ ) CUST_LGL_ENG_NM,
               B.AGMT_ACT_CNT_CD SPCL_CUST_CNT_CD,
               DECODE(B.AGMT_ACT_CUST_SEQ, 0, '', B.AGMT_ACT_CUST_SEQ) SPCL_CUST_SEQ,
               B.AGMT_ACT_CNT_CD|| LPAD(DECODE(B.AGMT_ACT_CUST_SEQ, 0, '', B.AGMT_ACT_CUST_SEQ), 6, 0) SPCL_CD_SEQ,
               (SELECT SUBSTR(C.CUST_LGL_ENG_NM, 1, 50)
                  FROM MDM_CUSTOMER C
                 WHERE C.CUST_CNT_CD = B.AGMT_ACT_CNT_CD
                   AND C.CUST_SEQ = B.AGMT_ACT_CUST_SEQ ) SPCL_CUST_LGL_ENG_NM,
               G.GEN_TRF_AMT ORG_GEN_TRF_AMT,
               G.SPCL_TRF_AMT ORG_SPCL_TRF_AMT,
               G.DC_AMT ORG_DC_AMT,
               G.SVC_FEE_AMT ORG_SVC_FEE_AMT,
               G.TTL_AMT ORG_TTL_AMT,
               E.CXL_FLG TRO_IB_CXL_FLG,
               G.INV_SRC_NO,
               G.DRP_OFF_CHG_MNL_FLG,
			   G.DRP_OFF_CHG_SEQ,
			   G.ATCH_FILE_LNK_ID,
               (SELECT COUNT(1) FROM DOD_ATCH_FILE WHERE ATCH_FILE_LNK_ID = G.ATCH_FILE_LNK_ID) ATCH_FILE_LNK_CNT -- Attach File Count
          FROM DOD_DRP_OFF_CHG G,
               BKG_EUR_TRO E,
               BKG_BOOKING B
         WHERE 1 = 1
           AND G.TRO_IB_CXL_FLG = 'N'
           AND G.DRP_OFF_CHG_SEQ = (SELECT MAX(GG.DRP_OFF_CHG_SEQ)
                  FROM DOD_DRP_OFF_CHG GG
                 WHERE GG.BKG_NO = G.BKG_NO
                   AND GG.CNTR_NO = G.CNTR_NO )
           AND E.BKG_NO = G.BKG_NO
           AND E.BKG_NO = B.BKG_NO
           AND E.CNTR_NO = G.CNTR_NO
           AND E.TRO_SEQ = (SELECT MAX(TT.TRO_SEQ)
                  FROM BKG_EUR_TRO TT
                 WHERE TT.BKG_NO = E.BKG_NO
                   AND TT.CNTR_NO = E.CNTR_NO
                   AND TT.IO_BND_CD = 'I')
           AND E.CFM_FLG = 'Y'
#if (${bkg_no} != '') 
   AND G.BKG_NO = @[bkg_no]
#end
#if (${drp_off_chg_mnl_flg} != '')
   AND G.DRP_OFF_CHG_MNL_FLG = @[drp_off_chg_mnl_flg]
#end
 ) A			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="drp_off_chg_mnl_flg" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
