<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InterfaceMgtDBDAOsearchTempEstimateCostCdDataRSQL">
			<desc><![CDATA[searchTempEstimateCostCdData
-- COST CODE 추출로직 보강, 2014-07-15, 신용찬]]></desc>
			<sql><![CDATA[
/*
SELECT C.EQ_CMPO_CD,C.EQ_CMPO_NM,C.COST_CD FROM
(
  SELECT A.EQ_CMPO_CD, A.EQ_CMPO_NM,  DECODE(DM.EQ_KND_CD, 'Z', 'MRZSRC', 'G', 'MRGSRC', 'U', 
                                        DECODE(SUBSTR(DM.TP_SZ, 1, 1) ,'D', 'MRDRRC'
                                                                        ,'R',  DECODE(B.EQ_PRNT_CMPO_CD, 'K6', 'MRRURC', 'MRRFRC')
                                                                        ,'MRDSRC')) AS COST_CD
  FROM MNR_EQ_CMPO_CD A, MNR_EQ_CMPO_CD B,
       (SELECT [eq_knd_cd] EQ_KND_CD,  [tp_sz] TP_SZ, [cmpo_cd] CMPO_CD
        FROM DUAL
       ) DM
    WHERE A.EQ_CMPO_GRP_TP_CD(+) = 3
    AND   A.EQ_PRNT_CMPO_GRP_TP_CD = B.EQ_CMPO_GRP_TP_CD(+)
    AND   A.EQ_PRNT_CMPO_CD        = B.EQ_CMPO_CD(+)
    AND   DM.CMPO_CD = A.EQ_CMPO_CD(+)
    
) C
GROUP BY C.EQ_CMPO_CD,C.EQ_CMPO_NM,C.COST_CD
*/

SELECT C.EQ_CMPO_CD,C.EQ_CMPO_NM,C.COST_CD FROM
(
	SELECT A.EQ_CMPO_CD
	     , A.EQ_CMPO_NM
         ,CASE WHEN @[eq_knd_cd] = 'G' THEN 'MRGSRC'
               WHEN @[eq_knd_cd] = 'Z' THEN 'MRZSRC'
               WHEN @[eq_knd_cd] = 'U' THEN (
                                                SELECT DECODE(SUBSTR(@[tp_sz] , 1, 1) ,'D', 'MRDRRC'         
                                                                                      ,'R',  DECODE(MECD_2.EQ_PRNT_CMPO_CD, 'K6', 'MRRURC', 'MRRFRC')
                                                                                      ,'MRDSRC') AS COST_CD
                                                FROM MNR_EQ_CMPO_CD MECD_1 , MNR_EQ_CMPO_CD MECD_2
                                                WHERE MECD_1.EQ_CMPO_GRP_TP_CD      = 3
                                                AND   MECD_1.EQ_PRNT_CMPO_GRP_TP_CD = MECD_2.EQ_CMPO_GRP_TP_CD
                                                AND   MECD_1.EQ_PRNT_CMPO_CD        = MECD_2.EQ_CMPO_CD
                                                AND   MECD_1.EQ_CMPO_CD             = @[cmpo_cd]
                                                AND   SUBSTR(MECD_1.EQ_PRNT_CMPO_CD,1,2) IN ('K1','K4','K5','K6','K7') -- Container Cost Code 만 조회하도록 수정, 2014-07-15, 신용찬
                                                AND   ROWNUM = 1                                     
                                             )
          END COST_CD                         
                 
	FROM MNR_EQ_CMPO_CD A, MNR_EQ_CMPO_CD B
    WHERE A.EQ_CMPO_GRP_TP_CD      = 3
    AND   A.EQ_PRNT_CMPO_GRP_TP_CD = B.EQ_CMPO_GRP_TP_CD
	AND   A.EQ_PRNT_CMPO_CD        = B.EQ_CMPO_CD
    AND   A.EQ_CMPO_CD             = @[cmpo_cd]
    
) C
GROUP BY C.EQ_CMPO_CD,C.EQ_CMPO_NM,C.COST_CD			]]></sql>
			<params>
				<param name="eq_knd_cd" type="12" value="" out="N"/>
				<param name="tp_sz" type="12" value="" out="N"/>
				<param name="cmpo_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
