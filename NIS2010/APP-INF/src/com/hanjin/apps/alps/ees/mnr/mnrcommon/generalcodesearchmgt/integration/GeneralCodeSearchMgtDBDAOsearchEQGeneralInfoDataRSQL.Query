<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralCodeSearchMgtDBDAOsearchEQGeneralInfoDataRSQL">
			<desc><![CDATA[조회]]></desc>
			<sql><![CDATA[
SELECT   A.EQ_TYPE
       , A.EQ_NO
       , A.EQ_TPSZ_CD
       , A.DMG_FLAG
       , A.MANU_DT
       , A.LESSOR_NM
       , A.LSTM_CD
       , A.DSP_FLAG
       , A.OFF_HIRE
       , A.IMM_EXT
       , A.MVMT_CD
       , A.MVMT_DT
       , A.RPR_TYPE
       , A.STATUS
       , A.RPR_YD
       , A.RPR_DT
       , A.SP_NAME
       , A.COST
       , A.DV_CUR
       , CASE WHEN A.LSTM_CD = 'OW' THEN MNR_COMMON_PKG.MNR_CAL_DV_FNC(A.EQ_TYPE, A.EQ_NO, replace(@[total_loss_date],'-',''))
              WHEN A.LSTM_CD = 'LP' THEN MNR_COMMON_PKG.MNR_CAL_DV_FNC(A.EQ_TYPE, A.EQ_NO, replace(@[total_loss_date],'-',''))
              WHEN A.LSTM_CD = 'OL' THEN MNR_COMMON_PKG.MNR_CAL_DV_FNC(A.EQ_TYPE, A.EQ_NO, replace(@[total_loss_date],'-',''))
              ELSE 0
         END AS DV_VALUE
       , A.CRNT_YD_CD
       , A.HNGR_FLG_YD
       , A.HNGR_RCK_CD
       , NVL(A.BAR_ATCH_KNT,0) AS BAR_ATCH_KNT
       , A.BAR_TP_CD
       , A.HNGR_FLG_DT
       , A.FLG_RMK
	   , A.MTRL_CD 
	   , A.MTRL_NM 
	   , A.MKR_NM 
	   , A.MDL_NM
       , @[total_loss_date] AS TOTAL_LOSS_DATE
       , A.RPR_COST_AMT
	   , A.DPP_AMT
	   , A.MNR_HNGR_TRF_CD
  	   , A.MNR_HNGR_TRF_OTR_DESC
  	   , NVL(A.ACT_INVT_QTY,0) AS ACT_INVT_QTY
  	   , NVL(A.MNR_HNGR_DMG_QTY,0) AS MNR_HNGR_DMG_QTY
  	   , NVL(A.MNR_LOST_HNGR_QTY,0) AS MNR_LOST_HNGR_QTY
  	   , NVL(A.MNR_DISP_HNGR_QTY,0) AS MNR_DISP_HNGR_QTY
FROM     MNR_EQ_STS_V A
WHERE    1 = 1
AND      A.EQ_TYPE = @[eq_type]   
#if (${eq_no} != '')
AND      A.EQ_NO IN
         (
    #foreach ($user_eq_no IN ${eq_no})
        #if($velocityCount < $eq_no.size())
  			'$user_eq_no',
        #else
  			'$user_eq_no'
        #end
    #end			  
         )
#end			]]></sql>
			<params>
				<param name="total_loss_date" type="12" value="2006-11-03" out="N"/>
				<param name="eq_type" type="12" value="U" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
