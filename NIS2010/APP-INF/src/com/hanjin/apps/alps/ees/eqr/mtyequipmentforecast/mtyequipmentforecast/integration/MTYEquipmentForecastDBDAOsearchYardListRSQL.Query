<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="MTYEquipmentForecastDBDAOsearchYardListRSQL">
			<desc><![CDATA[ECC내 소속 야드 를 조회한다]]></desc>
			<sql><![CDATA[
SELECT 
    C.YD_CD,C.YD_NM 
FROM MDM_EQ_ORZ_CHT A,
     MDM_LOCATION B,
     MDM_YARD C
WHERE A.SCC_CD=B.SCC_CD
  AND B.LOC_CD = SUBSTR(C.YD_CD,1,5)
#if(${loc_grp_cd} == 'S')
  AND A.SCC_CD = @[loc_cd]  -- IF GRP_CD=S
#elseif(${loc_grp_cd} == 'E')
  AND A.ECC_CD = @[loc_cd]  -- IF GRP_CD=E
#elseif(${loc_grp_cd} == 'L')
  AND A.LCC_CD = @[loc_cd]  -- IF GRP_CD=L
#end
 ORDER BY C.YD_CD			]]></sql>
			<params>
				<param name="loc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
