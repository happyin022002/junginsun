<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ForecastReportDBDAOmodifyMtyWeeklySimulationUSQL">
			<desc><![CDATA[Weekly simulation 내용을 수정]]></desc>
			<sql><![CDATA[
/*
--  1.정의 : EQR_CTRL_MTY_WKY_SIM 수정쿼리
--  2.변수
--    :loc_grp_cd
--    :loc_cd
--    :week
--    :sim_tp_cd
--    :cntr_tpsz
--    :cntr_qty
    
 
--RI : Reposition In  COD에서 추출된 Repostion In  
--OT : Other(LT/ST/OW)  Balance Report 에서 추출된 Other Value(LT/ST/OW) 
--IF : IB Forecast  Balance Report 에서 추출된 IB Forecast  
--OF : OB Forecast  Balance Report 에서 추출된 OB Forecast 
--RO : Reposition Out  Balance Report 에서 추출된 Reposition Out 
l    
*/

UPDATE EQR_CTRL_MTY_WKY_SIM
SET CNTR_QTY = @[cntr_qty]
   ,UPD_USR_ID = @[usr_id]
   ,UPD_DT = SYSDATE
WHERE FCAST_YRWK    = @[week]
AND   LOC_GRP_CD    = @[loc_grp_cd]
AND   LOC_CD        = @[loc_cd]
AND   WKY_SIM_TP_CD = @[sim_tp_cd]
AND   CNTR_TPSZ_CD  = UPPER(@[cntr_tpsz])			]]></sql>
			<params>
				<param name="cntr_qty" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="week" type="12" value="" out="N"/>
				<param name="loc_grp_cd" type="12" value="" out="N"/>
				<param name="loc_cd" type="12" value="" out="N"/>
				<param name="sim_tp_cd" type="12" value="" out="N"/>
				<param name="cntr_tpsz" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
