<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueCollectionMgtDBDAOSearchPayerInfoListRSQL">
			<desc><![CDATA[DEM/DET Payer Info & Fax/E-mail]]></desc>
			<sql><![CDATA[
SELECT DISTINCT *
FROM 
(
SELECT P.SYS_AREA_GRP_ID
     , P.CUST_CNT_CD
     , P.CUST_SEQ
     , CASE WHEN P.CUST_CNT_CD = '00' THEN '' ELSE P.CUST_CNT_CD END || LPAD(P.CUST_SEQ, 6, '0') PAYR_CD
	 , CASE WHEN P.CUST_CNT_CD IN ('00', 'TB') THEN 'Y' ELSE 'N' END SP_YN
	 , CASE WHEN P.CUST_CNT_CD IN ('00', 'TB') THEN 'S/P' ELSE 'Customer' END PAYR_TP
     , NVL(P.DMDT_PAYR_NM, (SELECT CUST_LGL_ENG_NM FROM MDM_CUSTOMER WHERE CUST_CNT_CD = P.CUST_CNT_CD AND CUST_SEQ = P.CUST_SEQ)) PAYR_NM
     , (SELECT DECODE(COUNT(PAYR_CNTC_PNT_EML), 0, 'N', 'Y')
        FROM   DMT_PAYR_CNTC_PNT
        WHERE  SYS_AREA_GRP_ID = P.SYS_AREA_GRP_ID
        AND    CUST_CNT_CD = P.CUST_CNT_CD
        AND    CUST_SEQ = P.CUST_SEQ
        AND    REGEXP_LIKE(PAYR_CNTC_PNT_EML, @[reg_ex])) EML_EXIST_FLG
--     , NVL(SND_CYC_CD, 'D') 
	 , P.SND_CYC_CD
     , (SELECT INTG_CD_VAL_DP_DESC
		FROM   COM_INTG_CD_DTL
		WHERE  INTG_CD_ID = 'CD03506'
--		AND    INTG_CD_VAL_CTNT = NVL(SND_CYC_CD, 'D')) SND_CYC_DESC
		AND    INTG_CD_VAL_CTNT = P.SND_CYC_CD) SND_CYC_DESC
     , NVL(P.OTS_SH_GRP_CD, 'I') OTS_SH_GRP_CD
	 , (SELECT INTG_CD_VAL_DP_DESC
		FROM   COM_INTG_CD_DTL
		WHERE  INTG_CD_ID = 'CD03507'
		AND    INTG_CD_VAL_CTNT = NVL(P.OTS_SH_GRP_CD, 'I')) OTS_SH_GRP_DESC
     , NVL(P.SND_CNTR_LIST_FLG, 'Y') SND_CNTR_LIST_FLG
     , NVL(P.SND_INV_FLG, 'N') SND_INV_FLG
	 , P.UPD_USR_ID
	 , P.UPD_DT
	 , P.UPD_OFC_CD

#if (${ots_email_flg} != 'N')
	   ,C.CUST_CNTC_PNT_SEQ
       ,C.DMDT_PAYR_CNTC_PNT_NM AS PAYR_CNTC_PNT_NM
       ,C.PAYR_CNTC_PNT_PHN_NO
       ,C.PAYR_CNTC_PNT_FAX_NO
       ,C.PAYR_CNTC_PNT_EML
	   ,NVL(C.OTS_SND_FLG, 'Y') OTS_SND_FLG
	   , CASE WHEN NVL(( SELECT 'Y' FROM DMT_PAYR_CNTC_PNT
	                  WHERE 1=1
	                    AND P.SYS_AREA_GRP_ID = SYS_AREA_GRP_ID
	                    AND P.CUST_CNT_CD = CUST_CNT_CD
	                    AND P.CUST_SEQ = CUST_SEQ
	                    AND P.DMDT_PAYR_CNTC_PNT_NM = DMDT_PAYR_CNTC_PNT_NM 
        	            AND P.DMDT_PAYR_PHN_NO = PAYR_CNTC_PNT_PHN_NO
        	            AND P.DMDT_PAYR_FAX_NO = PAYR_CNTC_PNT_FAX_NO
        	            AND P.DMDT_PAYR_N1ST_EML = PAYR_CNTC_PNT_EML
        	            AND ROWNUM = 1 ),'N') = 'Y' THEN
                        	      CASE WHEN P.DMDT_PAYR_CNTC_PNT_NM = C.DMDT_PAYR_CNTC_PNT_NM 
                        	            AND P.DMDT_PAYR_PHN_NO = C.PAYR_CNTC_PNT_PHN_NO
                        	            AND P.DMDT_PAYR_FAX_NO = C.PAYR_CNTC_PNT_FAX_NO
                        	            AND P.DMDT_PAYR_N1ST_EML = C.PAYR_CNTC_PNT_EML THEN 1
                	                   ELSE 0 END
	         ELSE CASE WHEN CUST_CNTC_PNT_SEQ = 1 THEN 1
                       ELSE 0 END 
             END SHEET 
#end
FROM   DMT_PAYR_INFO P
#if (${ots_email_flg} != 'N')
    ,  DMT_PAYR_CNTC_PNT C
#end
WHERE  P.SYS_AREA_GRP_ID = @[sys_area_grp_id]
#if (${payr_cd} != '')
	AND (CASE WHEN P.CUST_CNT_CD = '00' THEN '' ELSE P.CUST_CNT_CD END || LPAD(P.CUST_SEQ, 6, '0')) LIKE '%$payr_cd%'
#else

#end
#if (${send_cyc_cd_list} != '')
	AND (1 = 0 
	#foreach($send_cyc_cd in ${send_cyc_cd_list}) 
		#if($send_cyc_cd == 'N')
		OR P.SND_CYC_CD IS NULL
		#end
    #end
		OR P.SND_CYC_CD IN (
	#foreach($send_cyc_cd in ${send_cyc_cd_list}) 
        #if($velocityCount < $send_cyc_cd_list.size()) '$send_cyc_cd', #else '$send_cyc_cd' #end
    #end
		)
    )
#end
#if (${sp_yn} != '')
	AND P.CUST_CNT_CD #if(${sp_yn} == 'N') NOT #end IN ('00', 'TB')
#end

#if (${ots_email_flg} != 'N')
    AND P.SYS_AREA_GRP_ID = C.SYS_AREA_GRP_ID(+)
    AND P.CUST_CNT_CD = C.CUST_CNT_CD(+)
    AND P.CUST_SEQ = C.CUST_SEQ(+)
#end

#if (${ots_email_flg} != 'N')
ORDER BY 1, 2, 3, C.CUST_CNTC_PNT_SEQ
#end
)

WHERE 1 = 1
#if (${eml_exist_flg} != 'A')
	AND EML_EXIST_FLG = @[eml_exist_flg]
#end			]]></sql>
			<params>
				<param name="reg_ex" type="12" value="" out="N"/>
				<param name="sys_area_grp_id" type="12" value="CHN" out="N"/>
				<param name="eml_exist_flg" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
