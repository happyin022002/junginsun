<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PlanMgtDBDAOsearchGuidelineInfoListDataRSQL">
			<desc><![CDATA[Guideline 정보를 조회하는 Operation]]></desc>
			<sql><![CDATA[
SELECT
         A.MNR_GLINE_SEQ
        ,A.MNR_GRP_TP_CD
        ,A.MNR_GLINE_NM
        ,A.MNR_GLINE_RMK
        ,A.FILE_SEQ
        ,A.FILE_DTL_SEQ
        ,A.CRE_USR_ID
        ,TO_CHAR(GLOBALDATE_PKG.TIME_CONV_OFC_FNC(MNR_COMMON_PKG.MNR_GET_HOOFC_FNC(), A.CRE_DT, @[ofc_cd]), 'yyyy-mm-dd') CRE_DT
        ,A.UPD_USR_ID
		,TO_CHAR(GLOBALDATE_PKG.TIME_CONV_OFC_FNC(MNR_COMMON_PKG.MNR_GET_HOOFC_FNC(), A.UPD_DT, @[ofc_cd]), 'yyyy-mm-dd') UPD_DT
        ,(SELECT OFC_CD FROM COM_USER WHERE USR_ID = A.CRE_USR_ID AND ROWNUM = 1) UPD_OFC_CD
        ,B.ORG_FILE_NM ORG_FILE_NM
        ,DECODE(A.file_seq, 0, '1','0') FILE_DW
        ,B.FILE_PATH_NM
FROM MNR_GUIDELINE A, MNR_FILE_ATCH B
WHERE A.MNR_GRP_TP_CD LIKE DECODE(@[mnr_grp_tp_cd], 'ALL', '', @[mnr_grp_tp_cd])||'%%'
AND   A.FILE_SEQ     = B.FILE_SEQ(+)
AND   A.FILE_DTL_SEQ = B.FILE_DTL_SEQ(+)			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="mnr_grp_tp_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
