<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DMTCommonDBDAOSearchUserRoleCodeRSQL">
			<desc><![CDATA[사용자의 DMT User Role Code 정보를 확인한다.]]></desc>
			<sql><![CDATA[
SELECT  DECODE(COUNT(*), 0, 'N', 'Y') AS USR_AUTH
FROM    DMT_USR_ROLE_MTCH
WHERE   1=1
AND     USR_ID      = @[usr_id]
#if (${prg_no} == 'EES_DMT_4001')
AND     USR_ROLE_CD IN ('DMT01', 'DMT02')
#else
AND     USR_ROLE_CD IN ('DMT01', 'DMT02', 'DMT03', 'DMT04')
#end			]]></sql>
			<params>
				<param name="usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
