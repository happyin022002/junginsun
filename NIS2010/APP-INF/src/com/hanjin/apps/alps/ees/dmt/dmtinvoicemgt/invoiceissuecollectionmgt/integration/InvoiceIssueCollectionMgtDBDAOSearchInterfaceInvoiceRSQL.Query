<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueCollectionMgtDBDAOSearchInterfaceInvoiceRSQL">
			<desc><![CDATA[INV A/R INVOICE INTERFACE 조회]]></desc>
			<sql><![CDATA[
SELECT  A.BL_NO
       ,CASE WHEN 
               (SELECT OFC_N3RD_LVL_CD FROM DMT_OFC_LVL_V WHERE OFC_N8TH_LVL_CD = @[ar_ofc_cd]) = 'NYCRA' 
           THEN 
               (CASE WHEN @[ar_ofc_cd] = 'SAOSC' THEN A.BL_NO
                ELSE A.DMDT_INV_NO
                END)
        ELSE 
               (CASE WHEN
                        (SELECT SYS_AREA_GRP_ID 
                         FROM COM_SYS_AREA_GRP_ID 
                         WHERE CNT_CD = (SELECT SUBSTR(LOC_CD,0,2) FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd])
                         AND CO_IND_CD = 'H'
                        ) = 'CHN'
                     THEN
                        (CASE WHEN @[ar_ofc_cd] = 'HKGSC' THEN A.BL_NO
                              WHEN @[ar_ofc_cd] = 'SZPSC' THEN A.BL_NO
                              WHEN @[ar_ofc_cd] = 'CANSO' THEN A.BL_NO
                         ELSE A.DMDT_INV_NO
                         END)
                 ELSE
                     A.DMDT_INV_NO
                 END)
        END 			AS BL_SRC_NO
       ,A.DMDT_INV_NO 	AS INV_SRC_NO
       ,A.BKG_NO
       ,CASE 
			WHEN SUBSTR(DMDT_TRF_CD,2,1) = 'T' AND A.ACT_PAYR_CNT_CD = '00' 
				THEN ( SELECT CUST_CNT_CD FROM MDM_CUSTOMER WHERE CUST_CNT_CD = 'TB' AND VNDR_SEQ = A.ACT_PAYR_SEQ )
			ELSE
				A.ACT_PAYR_CNT_CD
        END 			AS CUST_CNT_CD
       ,CASE 
			WHEN SUBSTR(DMDT_TRF_CD,2,1) = 'T' AND A.ACT_PAYR_CNT_CD = '00' 
				THEN ( SELECT CUST_SEQ FROM MDM_CUSTOMER WHERE CUST_CNT_CD = 'TB' AND VNDR_SEQ = A.ACT_PAYR_SEQ )
			ELSE
				A.ACT_PAYR_SEQ
        END 			AS CUST_SEQ
      , CASE 
			WHEN (SELECT AR_OFC_CD  FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd]) = 'ATLSC' AND SUBSTR(DMDT_TRF_CD,2,1) = 'T' THEN 'PHXSA'
            WHEN (SELECT AR_OFC_CD  FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd]) = 'CHISC' AND SUBSTR(DMDT_TRF_CD,2,1) = 'T' THEN 'PHXSA'
            WHEN (SELECT AR_OFC_CD  FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd]) = 'HOUSC' AND SUBSTR(DMDT_TRF_CD,2,1) = 'T' THEN 'PHXSA'
            WHEN (SELECT AR_OFC_CD  FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd]) = 'LGBSC' AND SUBSTR(DMDT_TRF_CD,2,1) = 'T' THEN 'PHXSA'
            WHEN (SELECT AR_OFC_CD  FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd]) = 'NYCSC' AND SUBSTR(DMDT_TRF_CD,2,1) = 'T' THEN 'PHXSA'
            WHEN (SELECT AR_OFC_CD  FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd]) = 'SEASC' AND SUBSTR(DMDT_TRF_CD,2,1) = 'T' THEN 'PHXSA'
            WHEN (SELECT AR_OFC_CD  FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd]) = 'SFOSO' AND SUBSTR(DMDT_TRF_CD,2,1) = 'T' THEN 'PHXSA'
            WHEN (SELECT AR_OFC_CD  FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd]) = 'VANSO' AND SUBSTR(DMDT_TRF_CD,2,1) = 'T' THEN 'PHXSA'
            WHEN (SELECT AR_OFC_CD  FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd]) = 'MTRBS' AND SUBSTR(DMDT_TRF_CD,2,1) = 'T' THEN 'PHXSA'
            WHEN (SELECT AR_OFC_CD  FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd]) = 'TORSC' AND SUBSTR(DMDT_TRF_CD,2,1) = 'T' THEN 'PHXSA'
            WHEN (SELECT AR_OFC_CD  FROM MDM_ORGANIZATION WHERE OFC_CD = @[ar_ofc_cd]) = 'PDXSO' AND SUBSTR(DMDT_TRF_CD,2,1) = 'T' THEN 'PHXSA'
			ELSE
				(SELECT AR_OFC_CD FROM MDM_ORGANIZATION WHERE OFC_CD= @[ar_ofc_cd])
	    END 			AS OFC_CD
      , CASE 
			WHEN SUBSTR(DMDT_TRF_CD,1,1) = 'C' THEN 'DEC'
            WHEN SUBSTR(DMDT_TRF_CD,2,1) = 'M' THEN 'DEM'
            WHEN SUBSTR(DMDT_TRF_CD,2,1) = 'T' THEN 'DET'
        END 			AS IF_SRC_CD
       ,A.VSL_CD
       ,A.SKD_VOY_NO
       ,A.SKD_DIR_CD
	   ,CASE 
			WHEN A.POL_CD IS NULL THEN A.POD_CD
			ELSE
				A.POL_CD
		END 			AS POL_CD
	   ,CASE 
			WHEN A.POD_CD IS NULL THEN A.POL_CD
			ELSE
				A.POD_CD
		END 			AS POD_CD
       ,A.VSL_CD 		AS TRNK_VSL_CD
       ,A.SKD_VOY_NO 	AS TRNK_SKD_VOY_NO
       ,A.SKD_DIR_CD 	AS TRNK_SKD_DIR_CD
       ,A.POR_CD 		AS POR_CD
       ,A.DEL_CD 		AS DEL_CD
       ,(SELECT SUM(DECODE(SUBSTR(CNTR_TPSZ_CD,2,1),'2',1,0)) FROM DMT_INV_DTL WHERE DMDT_INV_NO = A.DMDT_INV_NO) AS BKG_TEU_QTY
       ,(SELECT SUM(DECODE(SUBSTR(CNTR_TPSZ_CD,2,1),'2',0,1)) FROM DMT_INV_DTL WHERE DMDT_INV_NO = A.DMDT_INV_NO) AS BKG_FEU_QTY
       ,A.IO_BND_CD
       ,@[ar_ofc_cd] AS SLS_OFC_CD
       ,A.CRE_USR_ID
       ,A.CRE_OFC_CD
	   ,TO_CHAR(A.CRE_DT,'yyyymmdd') AS CRE_DT
       ,A.UPD_USR_ID
       ,A.UPD_OFC_CD
	   ,TO_CHAR(A.UPD_DT,'yyyymmdd') AS UPD_DT

	   ,INV_REF_NO
	   ,REPLACE(REPLACE(INV_RMK,'@*',' '), CHR(10), ' ') AS INV_RMK
	   ,(
			SELECT  B.DMDT_CHG_LOC_DIV_CD
			  FROM  DMT_INV_DTL B
			 WHERE  B.DMDT_INV_NO	      = A.DMDT_INV_NO
			   AND  B.CRE_OFC_CD	      = A.CRE_OFC_CD
			   AND  B.DMDT_CHG_LOC_DIV_CD = 'TSP'
			   AND  ROWNUM = 1 
		) 							AS DEST_TRNS_SVC_MOD_CD
	  , CR_INV_NO
	  
  FROM  DMT_INV_MN A
 WHERE  A.DMDT_INV_NO = @[invoice_no]
   AND  A.CRE_OFC_CD = @[cre_ofc_cd]			]]></sql>
			<params>
				<param name="ar_ofc_cd" type="12" value="" out="N"/>
				<param name="invoice_no" type="12" value="" out="N"/>
				<param name="cre_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
