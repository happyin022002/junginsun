<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CgmEdiSendDBDAOSearchEdiMsgToUsCaRSQL">
			<desc><![CDATA[1. 오늘시점에서 ETA-1 = 오늘인 VVD의 bkg중에 미주(US,CA) POD 인것 조회 (최초)
2. 1번 조건을 만족한 BKG - CNTR 로 F/F 에 입력할 정보를 추출]]></desc>
			<sql><![CDATA[
SELECT (
           SELECT CASE WHEN COUNT(1) > 0 THEN 'U' 
                                         ELSE 'O' 
                  END STATUS 
           FROM CGM_CHSS_EXPT_EDI_HIS 
           WHERE BKG_NO  = @[bkg_no]
           AND   CNTR_NO = @[cntr_no]
       ) BRAC
      ,A.BKG_NO BKGNBR
      ,A.BL_NO  BLNBR
      ,@[ie_ind]     IE_IND 
      ,A.RCV_TERM_CD||A.DE_TERM_CD RDTYP 
      
      ,@[chz_except]    CHZ_EXCEPT   --EDI 추출 - EXCEPTION 결정에서 추출
      ,@[chz_except_days]  CHZ_EXCEPT_DAYS --EDI 추출 - FREE DAY 결정에서 추출
      
      ,@[final_ind] FINAL_IND   
      
      -- VVD
      ,A.VSL_CD       VSL_CD
      ,A.SKD_VOY_NO   SKD_VOY
      ,A.SKD_DIR_CD   SKD_DIR
      ,(SELECT VSL_ENG_NM FROM MDM_VSL_CNTR WHERE VSL_CD = A.VSL_CD AND ROWNUM=1) VSL_NAME
      ,(SELECT LLOYD_NO   FROM MDM_VSL_CNTR WHERE VSL_CD = A.VSL_CD AND ROWNUM=1) VSL_LLOYD
      
      -- POR 
      ,(SELECT LOC_NM FROM MDM_LOCATION WHERE LOC_CD = A.POR_CD AND ROWNUM=1)     POR_NAME
      ,(SELECT DECODE(LENGTH(LOC_AMS_PORT_CD), 4, 'D', 5, 'K', ' ') FROM MDM_LOCATION WHERE LOC_CD = A.POR_CD AND ROWNUM=1)     POR_AMSQUAL      
      ,(SELECT LOC_AMS_PORT_CD FROM MDM_LOCATION WHERE LOC_CD = A.POR_CD AND ROWNUM=1)     POR_AMSPORT
      ,A.POR_CD     POR_UNLC
      ,A.POR_NOD_CD POR_YDCD
      
      -- POL 
      ,(SELECT LOC_NM FROM MDM_LOCATION WHERE LOC_CD = A.POL_CD AND ROWNUM=1)     POL_NAME
      ,(SELECT DECODE(LENGTH(LOC_AMS_PORT_CD), 4, 'D', 5, 'K', ' ') FROM MDM_LOCATION WHERE LOC_CD = A.POL_CD AND ROWNUM=1)     POL_AMSQUAL      
      ,(SELECT LOC_AMS_PORT_CD FROM MDM_LOCATION WHERE LOC_CD = A.POL_CD AND ROWNUM=1)     POL_AMSPORT
      ,A.POL_CD     POL_UNLC
      ,A.POL_NOD_CD POL_YDCD  
      
      -- POL 
      ,(SELECT LOC_NM FROM MDM_LOCATION WHERE LOC_CD = A.POL_CD AND ROWNUM=1)     POL_NAME
      ,(SELECT DECODE(LENGTH(LOC_AMS_PORT_CD), 4, 'D', 5, 'K', ' ') FROM MDM_LOCATION WHERE LOC_CD = A.POL_CD AND ROWNUM=1)     POL_AMSQUAL      
      ,(SELECT LOC_AMS_PORT_CD FROM MDM_LOCATION WHERE LOC_CD = A.POL_CD AND ROWNUM=1)     POL_AMSPORT
      ,A.POL_CD     POL_UNLC
      ,A.POL_NOD_CD POL_YDCD    
      
      -- POD 
      ,(SELECT LOC_NM FROM MDM_LOCATION WHERE LOC_CD = A.POD_CD AND ROWNUM=1)     POD_NAME
      ,(SELECT DECODE(LENGTH(LOC_AMS_PORT_CD), 4, 'D', 5, 'K', ' ') FROM MDM_LOCATION WHERE LOC_CD = A.POD_CD AND ROWNUM=1)     POD_AMSQUAL      
      ,(SELECT LOC_AMS_PORT_CD FROM MDM_LOCATION WHERE LOC_CD = A.POD_CD AND ROWNUM=1)     POD_AMSPORT
      ,A.POD_CD     POD_UNLC
      ,A.POD_NOD_CD POD_YDCD   
      
      -- DEL 
      ,(SELECT LOC_NM FROM MDM_LOCATION WHERE LOC_CD = A.DEL_CD AND ROWNUM=1)     DEL_NAME
      ,(SELECT DECODE(LENGTH(LOC_AMS_PORT_CD), 4, 'D', 5, 'K', ' ') FROM MDM_LOCATION WHERE LOC_CD = A.DEL_CD AND ROWNUM=1)     DEL_AMSQUAL      
      ,(SELECT LOC_AMS_PORT_CD FROM MDM_LOCATION WHERE LOC_CD = A.DEL_CD AND ROWNUM=1)     DEL_AMSPORT
      ,A.DEL_CD     DEL_UNLC
      ,A.DEL_NOD_CD DEL_YDCD   
      
      -- TOTAL WEIGHT
      ,(SELECT CNTR_MF_WGT FROM BKG_CNTR_MF_DESC WHERE BKG_NO  = @[bkg_no] AND   CNTR_NO = @[cntr_no] AND ROWNUM=1) TWGT
      ,(SELECT WGT_UT_CD   FROM BKG_CNTR_MF_DESC WHERE BKG_NO  = @[bkg_no] AND   CNTR_NO = @[cntr_no] AND ROWNUM=1) TWUNIT
      
      -- INDICATOR
      ,DECODE(A.BKG_CGO_TP_CD, 'F', 'F', 'P', 'M', A.BKG_CGO_TP_CD) FM_IND
      ,A.RD_CGO_FLG  RF_IND
      ,A.DCGO_FLG    DG_IND
      ,A.AWK_CGO_FLG AK_IND
      ,A.BB_CGO_FLG  BK_IND
      
      
      -- CNTR INFO
      ,@[cntr_no] CNTRNBR
      ,(SELECT CNTR_TPSZ_CD FROM MST_CONTAINER WHERE CNTR_NO = @[cntr_no] AND ROWNUM=1) CNTRTYPE
      ,(
			SELECT                
                ROUND(TO_NUMBER(CNTR_GRS_WGT) * 2.2046,0) TARE_WGT_LBS -- LBS 환산
			FROM 
				MST_CNTR_SPEC B, 
				MST_CONTAINER C 
			WHERE 1 = 1
			AND   C.CNTR_NO = @[cntr_no]
			AND   C.CNTR_SPEC_NO = B.CNTR_SPEC_NO(+)
            AND   ROWNUM=1
       ) CNTR_TOTAL_WGT
      ,'LBS'  CNTR_TOTAL_WGT_UNIT  -- 하드코딩
      -- SEAL NO
      ,(SELECT CNTR_SEAL_NO FROM BKG_CNTR_SEAL_NO WHERE BKG_NO  = @[bkg_no] AND   CNTR_NO = @[cntr_no] AND ROWNUM=1) SEAL_NO

FROM BKG_BOOKING  A
WHERE A.BKG_NO = @[bkg_no]			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="cntr_no" type="12" value="" out="N"/>
				<param name="ie_ind" type="12" value="" out="N"/>
				<param name="chz_except" type="12" value="" out="N"/>
				<param name="chz_except_days" type="12" value="" out="N"/>
				<param name="final_ind" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
