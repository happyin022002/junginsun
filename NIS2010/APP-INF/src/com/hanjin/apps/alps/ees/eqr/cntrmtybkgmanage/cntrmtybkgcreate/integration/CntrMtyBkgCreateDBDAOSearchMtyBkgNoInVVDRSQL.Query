<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CntrMtyBkgCreateDBDAOSearchMtyBkgNoInVVDRSQL">
			<desc><![CDATA[VVD 에 포함된 VL BKG NO 조회]]></desc>
			<sql><![CDATA[
SELECT BKG_NO
      ,BKG_NO_CD
      ,SEQ
FROM
(      
    SELECT 'ALL' BKG_NO
          ,'ALL'    BKG_NO_CD
          ,1 SEQ
    FROM DUAL      
    
    UNION ALL
    
    SELECT BKG_NO 
          ,BKG_NO BKG_NO_CD
          ,2 SEQ
    FROM BKG_BOOKING
    WHERE VSL_CD     = SUBSTR(@[vvd], 0, 4)
    AND   SKD_VOY_NO = SUBSTR(@[vvd], 5, 4)
    AND   SKD_DIR_CD = SUBSTR(@[vvd], 9, 1)
    AND   BKG_CGO_TP_CD = 'P'             -- EMPTY BKG
    AND   NVL(BKG_CRE_TP_CD, ' ') <> 'S'  -- SPLIT BKG 제외
    AND   BKG_STS_CD <> 'X'               -- CANCEL 제외
)
ORDER BY SEQ, BKG_NO			]]></sql>
			<params>
				<param name="vvd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
