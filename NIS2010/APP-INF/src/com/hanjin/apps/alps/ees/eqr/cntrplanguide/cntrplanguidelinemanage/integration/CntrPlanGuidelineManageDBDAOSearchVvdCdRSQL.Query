<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CntrPlanGuidelineManageDBDAOSearchVvdCdRSQL">
			<desc><![CDATA[Guideline Add/Amend Popup의 Form에 VVD를 변경할 경우 POL, ETA를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT /*+ INDEX_ASC(A XAK3VSK_VSL_PORT_SKD) */ 
 	   VSL_CD||SKD_VOY_NO||SKD_DIR_CD 	  VVD_CD
	  ,VPS_PORT_CD                        POL_CD
      ,TO_CHAR(VPS_ETA_DT, 'YYYYMMDD')    EFF_ST_DT -- HIDDEN
      ,TO_CHAR(VPS_ETA_DT, 'MON-DD')  	  ETA_DT    -- 화면표현
FROM VSK_VSL_PORT_SKD
WHERE 1=1
  --AND SLAN_CD		  = SUBSTR([lane],6)
  AND SLAN_CD		  = @[lane]
  AND VSL_CD          = SUBSTR(@[s_vvd_cd], 0, 4)  -- VVD 변수
  AND SKD_VOY_NO      = SUBSTR(@[s_vvd_cd], 5, 4)  -- VVD 변수
  AND SKD_DIR_CD      = SUBSTR(@[s_vvd_cd], 9, 1)  -- VVD 변수
#if (${h_eta_dt} != '') 
  AND VPS_ETA_DT > TO_DATE(@[h_eta_dt],'YYYYMMDD HH24MISS')+0.99999 --GUIDELINE AMEND
#else  
 -- AND VPS_ETA_DT > SYSDATE  --GUIDELINE ADD
#end
  AND ROWNUM = 1			]]></sql>
			<params>
				<param name="lane" type="12" value="" out="N"/>
				<param name="s_vvd_cd" type="12" value="" out="N"/>
				<param name="h_eta_dt" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
