<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DMTCommonDBDAOCountryByRHQRSQL">
			<desc><![CDATA[RHQ 코드로 해당 Country 정보를 조회하기 위해 사용하는 쿼리]]></desc>
			<sql><![CDATA[
SELECT  A.CNT_CD, B.CNT_NM
FROM    COM_SYS_AREA_GRP_ID A, MDM_COUNTRY B
WHERE   A.SYS_AREA_GRP_ID   = CASE WHEN @[svr_id] IN ('KOR', 'JPN') THEN 'XXX' ELSE @[svr_id] END
AND     A.CO_IND_CD         = 'H'
AND     A.CNT_CD            = B.CNT_CD
AND     B.DELT_FLG          = 'N'
UNION ALL
SELECT 	CNT_CD, CNT_NM
FROM 	MDM_COUNTRY
WHERE	CNT_CD    = DECODE(@[svr_id], 'KOR', 'KR', 'JPN', 'JP', 'VVO', 'RU')
ORDER BY CNT_CD ASC			]]></sql>
			<params>
				<param name="svr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
