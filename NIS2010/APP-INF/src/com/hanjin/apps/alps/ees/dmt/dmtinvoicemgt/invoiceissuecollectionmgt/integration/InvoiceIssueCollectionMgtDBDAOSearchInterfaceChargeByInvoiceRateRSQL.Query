<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueCollectionMgtDBDAOSearchInterfaceChargeByInvoiceRateRSQL">
			<desc><![CDATA[Invoice Rate 조회하여 Interface 한다.]]></desc>
			<sql><![CDATA[
SELECT   ''                                                 AS SRC_IF_DT
        ,''                                                 AS SRC_IF_SEQ
        , CHG_SEQ
        , CURR_CD
        , CHG_CD
        , PER_TP_CD
        , TRF_RT_AMT
        , RAT_AS_CNTR_QTY
        , (-1) * CHG_AMT                                    AS CHG_AMT
        , TRF_NO
        , 'N'                                               AS TVA_FLG
        , T2.CRE_USR_ID                                     AS CRE_USR_ID
        , TO_CHAR(T2.CRE_DT, 'YYYYMMDD')                    AS CRE_DT
        , T2.UPD_USR_ID                                     AS UPD_USR_ID
        , TO_CHAR(T2.UPD_DT, 'YYYYMMDD')                    AS UPD_DT
FROM    INV_AR_CHG      T1,
        DMT_INV_MN      T2
WHERE   1=1
AND     T1.AR_IF_NO     IN
        (
        SELECT  T1.AR_IF_NO
        FROM    DMT_INV_MN T1,
                DMT_INV_MN T2
        WHERE   T1.DMDT_INV_NO  = T2.CR_INV_NO
        AND     T2.DMDT_INV_NO  = @[invoice_no]
        AND     T2.CRE_OFC_CD   = @[cre_ofc_cd]
        )
AND     T2.DMDT_INV_NO  = @[invoice_no]
AND     T2.CRE_OFC_CD   = @[cre_ofc_cd]			]]></sql>
			<params>
				<param name="invoice_no" type="12" value="" out="N"/>
				<param name="cre_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
