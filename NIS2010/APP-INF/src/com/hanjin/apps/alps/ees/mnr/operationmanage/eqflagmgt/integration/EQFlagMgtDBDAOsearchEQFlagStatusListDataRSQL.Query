<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="EQFlagMgtDBDAOsearchEQFlagStatusListDataRSQL">
			<desc><![CDATA[2012.11.20  조경완 [CHM-201221414-01] 
[MNR] Damage Flagging/Unflagging [EES_MNR_0122, EES_MNR_S122] OOME 해결을 위한 Validation Script 추가
Yard Code like --> =]]></desc>
			<sql><![CDATA[
SELECT
   B.EQ_NO
,  B.EQ_TYPE EQ_KND_CD
,  B.EQ_TPSZ_CD
,  A.MNR_DMG_FLG
,  A.MNR_HNGR_FLG
,  A.MNR_DONA_FLG
,  A.MNR_SCRP_FLG
,  A.MNR_RPR_FLG
,  A.MNR_TTL_LSS_FLG
,  A.MNR_DISP_FLG
,  A.MNR_DISP_SEL_FLG
,  A.DISP_RSN_CD
,  A.MNR_HNGR_RCK_CD
,  A.MNR_HNGR_BAR_TP_CD
,  A.HNGR_BAR_ATCH_KNT
,  DECODE(A.MNR_DMG_FLG, 'Y',  TO_CHAR(A.MNR_DMG_FLG_DT,'YYYY-MM-DD')) AS MNR_DMG_FLG_DT
,  A.MNR_HNGR_FLG_DT
,  A.MNR_DONA_FLG_DT
,  A.MNR_SCRP_FLG_DT
,  A.MNR_RPR_FLG_DT
,  A.MNR_TTL_LSS_FLG_DT
,  A.MNR_DISP_FLG_DT
,  A.MNR_DISP_SEL_FLG_DT
,  B.CRNT_YD_CD MNR_DMG_FLG_YD_CD
,  A.MNR_HNGR_FLG_YD_CD
,  A.MNR_DONA_FLG_YD_CD
,  A.MNR_SCRP_FLG_YD_CD
,  A.MNR_RPR_FLG_YD_CD
,  A.MNR_TTL_LSS_FLG_YD_CD
,  A.MNR_DISP_FLG_YD_CD
,  A.MNR_DISP_SEL_FLG_YD_CD
,  A.MNR_STS_RMK
,  A.CRE_USR_ID
,  A.CRE_DT
,  A.UPD_USR_ID
,  A.UPD_DT
,  TRUNC(SYSDATE - A.MNR_DMG_FLG_DT) AS MNR_DMG_FLG_DT_OVER_DAY
FROM 	MNR_EQ_STS A, MNR_EQ_STS_V B
WHERE	B.EQ_NO = A.EQ_NO(+)
AND     B.ACIAC_DIV_CD = 'A'
AND     B.EQ_TYPE = @[eq_knd_cd]
#if (${mnr_dmg_flg_yd_cd} != '')
	AND	B.CRNT_YD_CD = @[mnr_dmg_flg_yd_cd]
#end
#if (${eq_tpsz_cd} != '')
	AND	B.EQ_TPSZ_CD IN (
		#foreach ($user_tpszCds IN ${tpszCds})
			#if($velocityCount < $tpszCds.size())
				'$user_tpszCds',
			#else
				'$user_tpszCds'
			#end
		#end			  
	)
#end
#if (${eq_list} != '')
	AND	B.EQ_NO IN (
		#foreach ($user_eqNos IN ${eqNos})
			#if($velocityCount < $eqNos.size())
				'$user_eqNos',
			#else
				'$user_eqNos'
			#end
		#end			  
	)
#end
#if (${flag_type} != 'ALL')
	AND NVL(A.MNR_DMG_FLG,'N') = @[flag_type]
#end
#if (${mnr_dmg_flg_dt_over_day} != '')
	AND TRUNC(SYSDATE - A.MNR_DMG_FLG_DT + 1) >= REPLACE(@[mnr_dmg_flg_dt_over_day],',','')
	AND NVL(A.MNR_DMG_FLG,'N') = 'Y'
#end			]]></sql>
			<params>
				<param name="eq_knd_cd" type="12" value="" out="N"/>
				<param name="mnr_dmg_flg_yd_cd" type="12" value="" out="N"/>
				<param name="flag_type" type="12" value="" out="N"/>
				<param name="mnr_dmg_flg_dt_over_day" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
