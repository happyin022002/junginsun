<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CntrAccuracyTrendDBDAOSearchCheckLocCdRSQL">
			<desc><![CDATA[Location Code 유효성 체크]]></desc>
			<sql><![CDATA[
SELECT CASE WHEN COUNT(1) > 0 THEN 'T'
                              ELSE 'F'
          END LOCA_FLAG                              
     FROM MDM_EQ_ORZ_CHT
    WHERE 1=1
#if (${rcc_cd} != '')
   	  AND RCC_CD  = @[rcc_cd]
#end
#if (${loc_tp_cd} == 'L')
	#if (${loc_cd} != '') 
	  AND LCC_CD  = @[loc_cd]
	#end
#elseif (${loc_tp_cd} == 'S')
	#if (${loc_cd} != '')  
	  AND SCC_CD  = @[loc_cd]
	#end
#elseif (${loc_tp_cd} == 'E') 
	#if (${loc_cd} != '') 
	  AND ECC_CD  = @[loc_cd]
	#end
#end
      AND DELT_FLG = 'N'			]]></sql>
			<params>
				<param name="rcc_cd" type="12" value="" out="N"/>
				<param name="loc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
