<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CntrForecastPrecisionManageDBDAOSearchMtyRailResultRSQL">
			<desc><![CDATA[SCE_RAIL_TZ_RPT 데이터 조회]]></desc>
			<sql><![CDATA[
WITH MTY_RAIL AS
(
	SELECT	FM_NOD_CD
			,TO_NOD_CD
			,EQ_TPSZ_CD
			,ORG_GATE_IN_DT
			,ORG_GATE_OUT_DT
			,NVL(ORG_GATE_OUT_DT,ORG_GATE_IN_DT+1) AS DEPARTURE_DATE
			,DEST_GATE_IN_DT
			,DEST_AVAL_DT
			,DEST_GATE_OUT_DT
			,NVL(DEST_GATE_IN_DT,NVL(DEST_AVAL_DT,DEST_GATE_OUT_DT)) AS ARRIVAL_DATE
            ,TRSP_SO_OFC_CTY_CD
            ,TRSP_SO_SEQ
	FROM	SCE_RAIL_TZ_RPT
	WHERE	CGO_TP_CD  = 'M'               -- MTY
		AND	DELT_FLG   = 'N'               -- S/O CANCEL 안된것만.
		AND (DEST_GATE_IN_DT IS NOT NULL OR DEST_AVAL_DT IS NOT NULL OR DEST_GATE_OUT_DT IS NOT NULL)
		AND	SO_CRE_DT  BETWEEN ADD_MONTHS(TO_DATE('${fm_dt} 00:00:00','YYYY-MM-DD HH24:MI:SS'),-3)
						 AND ADD_MONTHS(TO_DATE('${to_dt} 23:59:59','YYYY-MM-DD HH24:MI:SS'),3)
)

#if ( ${gubun} == 'A' )
SELECT	 B.LOC_CD		AS DEST1
		,NVL(C.LOC_CD,'Total')		AS DEST2
#elseif ( ${gubun} == 'B' )
SELECT	 A.FM_NOD_CD		AS DEST1
		,NVL(A.TO_NOD_CD,'Total')		AS DEST2
#end
		,SUM(DECODE(A.EQ_TPSZ_CD,A.EQ_TPSZ_CD,1,0))	AS TOTAL
	#foreach( $key in ${arrtpsz}) 
		,SUM(DECODE(A.EQ_TPSZ_CD,'$key',1,0))		AS ${key}_QTY
	#end
	#if ( ${gubun} == 'A' )
		,GROUPING(C.LOC_CD)+GROUPING(B.LOC_CD)	AS COLOR
	#elseif ( ${gubun} == 'B' )
		,GROUPING(A.FM_NOD_CD)+GROUPING(A.TO_NOD_CD)	AS COLOR
	#end
FROM	 MTY_RAIL A
		,MDM_YARD B
		,MDM_YARD C
#if ( ${rail_company} != '' ) 
		,TRS_TRSP_RAIL_BIL_VNDR_SET D
#end  
WHERE	A.FM_NOD_CD	= B.YD_CD
	AND	A.TO_NOD_CD	= C.YD_CD
	#if ( ${date_kind} == 'D' )	
	AND	A.DEPARTURE_DATE		BETWEEN  TO_DATE('${fm_dt} 00:00:00', 'YYYY-MM-DD HH24:MI:SS')  
								AND  TO_DATE('${to_dt} 23:59:59', 'YYYY-MM-DD HH24:MI:SS')
	#elseif ( ${date_kind} == 'A' )
	AND	A.ARRIVAL_DATE		BETWEEN  TO_DATE('${fm_dt} 00:00:00', 'YYYY-MM-DD HH24:MI:SS')  
								AND  TO_DATE('${to_dt} 23:59:59', 'YYYY-MM-DD HH24:MI:SS')
	#end
#if ( ${org_loc} != '' )
	AND B.LOC_CD = @[org_loc]
#end
#if ( ${dest_loc} != '' )
	AND C.LOC_CD = @[dest_loc]
#end
#if ( ${rail_company} != '' )
        	AND A.TRSP_SO_OFC_CTY_CD = D.TRSP_SO_OFC_CTY_CD
			AND A.TRSP_SO_SEQ = D.TRSP_SO_SEQ
			AND D.SUB_RAIL_SEQ	= '1'
			AND D.VNDR_SEQ		= @[rail_company]

#end
#if ( ${gubun} == 'A' )
HAVING GROUPING(B.LOC_CD)+GROUPING(C.LOC_CD) <> 2
GROUP BY ROLLUP(B.LOC_CD,C.LOC_CD)
#elseif ( ${gubun} == 'B' )
HAVING GROUPING(A.FM_NOD_CD)+GROUPING(A.TO_NOD_CD) <> 2
GROUP BY ROLLUP(A.FM_NOD_CD,A.TO_NOD_CD)
#end
UNION ALL
SELECT	'Total' AS DEST1
	#if ( ${gubun} == 'A' )
		,NVL(C.LOC_CD,'G.Total')	AS DEST2
	#elseif ( ${gubun} == 'B' )
		,NVL(A.TO_NOD_CD,'G.Total')	AS DEST2
	#end
		,SUM(DECODE(A.EQ_TPSZ_CD, A.EQ_TPSZ_CD, 1, 0)) AS TOTAL
	#foreach( $key in ${arrtpsz}) 
		,SUM(DECODE(A.EQ_TPSZ_CD,'$key',1,0))		AS ${key}_QTY
	#end
	#if ( ${gubun} == 'A' )
		,GROUPING(C.LOC_CD) + 2	AS COLOR
	#elseif ( ${gubun} == 'B' )
		,GROUPING(A.TO_NOD_CD) + 2	AS COLOR
	#end
FROM	 MTY_RAIL A
		,MDM_YARD B
		,MDM_YARD C
#if ( ${rail_company} != '' ) 
		,TRS_TRSP_RAIL_BIL_VNDR_SET D
#end  
WHERE	A.FM_NOD_CD	= B.YD_CD
	AND	A.TO_NOD_CD	= C.YD_CD
	#if ( ${date_kind} == 'D' )	
	AND	A.DEPARTURE_DATE		BETWEEN  TO_DATE('${fm_dt} 00:00:00', 'YYYY-MM-DD HH24:MI:SS')  
								AND  TO_DATE('${to_dt} 23:59:59', 'YYYY-MM-DD HH24:MI:SS')
	#elseif ( ${date_kind} == 'A' )
	AND	A.ARRIVAL_DATE		BETWEEN  TO_DATE('${fm_dt} 00:00:00', 'YYYY-MM-DD HH24:MI:SS')  
								AND  TO_DATE('${to_dt} 23:59:59', 'YYYY-MM-DD HH24:MI:SS')
	#end
#if ( ${org_loc} != '' )
	AND B.LOC_CD = @[org_loc]
#end
#if ( ${dest_loc} != '' )
	AND C.LOC_CD = @[dest_loc]
#end
#if ( ${rail_company} != '' )
        	AND A.TRSP_SO_OFC_CTY_CD = D.TRSP_SO_OFC_CTY_CD
			AND A.TRSP_SO_SEQ = D.TRSP_SO_SEQ
			AND D.SUB_RAIL_SEQ	= '1'
			AND D.VNDR_SEQ		= @[rail_company]
#end
#if ( ${gubun} == 'A' )
GROUP BY ROLLUP(C.LOC_CD)
#elseif ( ${gubun} == 'B' )
GROUP BY ROLLUP(A.TO_NOD_CD)
#end			]]></sql>
			<params>
				<param name="org_loc" type="12" value="" out="N"/>
				<param name="dest_loc" type="12" value="" out="N"/>
				<param name="rail_company" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
