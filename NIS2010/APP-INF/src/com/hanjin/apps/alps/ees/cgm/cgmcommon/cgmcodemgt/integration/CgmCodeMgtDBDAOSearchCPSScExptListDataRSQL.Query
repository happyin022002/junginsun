<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CgmCodeMgtDBDAOSearchCPSScExptListDataRSQL">
			<desc><![CDATA[S/C Exception으로 등록된 리스트를 조회]]></desc>
			<sql><![CDATA[
SELECT A.CRE_OFC_CD,
       A.RHQ_CD,
       A.CTRT_OFC_CD,
       A.CUST_GRP_ID,
       DECODE(C.CUST_GRP_NM, '', B.CUST_LGL_ENG_NM, C.CUST_GRP_NM) CUST_GRP_NM,
       REPLACE((A.CUST_CNT_CD || TO_CHAR(A.CUST_SEQ, '000000')), ' ', '') CUST_CD,
       B.CUST_LGL_ENG_NM,
       A.SC_CUST_TP_CD,
       A.SC_NO,
	   A.EFF_YRMON,
	   A.LOC_CD,
       A.USA_SC_EXPT_RMK,
       '' ERR1,
       '' ERR2,
       '' ERR3,
	   '' ERR4,
       '' INSFLG,
       '' UPDFLG,
       '' DELFLG
FROM CGM_CPS_SC_EXPT_LIST A, MDM_CUSTOMER B, MDM_CUST_PERF_GRP C
WHERE A.CUST_CNT_CD = B.CUST_CNT_CD
AND A.CUST_SEQ = B.CUST_SEQ
AND A.CUST_GRP_ID = C.CUST_GRP_ID(+)
#if (${eff_yrmon} != '')
AND EFF_YRMON = @[eff_yrmon]
#end
#if (${sc_no} != '')
AND SC_NO = @[sc_no]
#end
#if (${ctrt_ofc_cd} != '')
AND CTRT_OFC_CD = @[ctrt_ofc_cd]
#end
#if (${cre_ofc_cd} != '')
AND CRE_OFC_CD = @[cre_ofc_cd]
#end
ORDER BY A.SC_NO, A.EFF_YRMON, A.LOC_CD			]]></sql>
			<params>
				<param name="eff_yrmon" type="12" value="" out="N"/>
				<param name="sc_no" type="12" value="" out="N"/>
				<param name="ctrt_ofc_cd" type="12" value="" out="N"/>
				<param name="cre_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
