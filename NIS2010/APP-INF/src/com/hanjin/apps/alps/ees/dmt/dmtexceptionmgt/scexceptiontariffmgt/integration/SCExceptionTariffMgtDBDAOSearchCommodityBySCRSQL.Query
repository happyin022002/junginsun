<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SCExceptionTariffMgtDBDAOSearchCommodityBySCRSQL">
			<desc><![CDATA[S/C Exception Terms Entry 의 Group 에 소속된 Commodity 정보를 조회하는 쿼리]]></desc>
			<sql><![CDATA[
SELECT	DISTINCT 
        NEW.PROP_NO
       ,NEW.SC_EXPT_VER_SEQ
       ,NEW.SC_EXPT_GRP_SEQ
       ,NEW.CMDT_CD
       ,NEW.CMDT_NM
	   ,DECODE(OLD.SC_EXPT_GRP_SEQ, null, 'Y','N') AS NEW_FLG
FROM( SELECT A.PROP_NO
            ,A.SC_EXPT_VER_SEQ
            ,A.SC_EXPT_GRP_SEQ
            ,A.CMDT_CD
            ,B.CMDT_NM
      FROM	DMT_SC_EXPT_CMDT A, MDM_COMMODITY B
      WHERE	A.PROP_NO 			= @[prop_no]
      AND	A.SC_EXPT_VER_SEQ 	= @[sc_expt_ver_seq]
      AND   A.SC_EXPT_GRP_SEQ 	= @[sc_expt_grp_seq]
      AND   A.CMDT_CD 			= B.CMDT_CD
    ) NEW,
    (
    SELECT A.PROP_NO
          ,A.SC_EXPT_GRP_SEQ
          ,A.CMDT_CD
      FROM	DMT_SC_EXPT_CMDT A
      WHERE	A.PROP_NO 			= @[prop_no]
      AND	A.SC_EXPT_VER_SEQ 	= @[sc_expt_ver_seq]
      AND   A.SC_EXPT_GRP_SEQ 	= @[sc_expt_grp_seq]
      INTERSECT
      SELECT A.PROP_NO
            ,A.SC_EXPT_GRP_SEQ
            ,A.CMDT_CD
      FROM	DMT_SC_EXPT_CMDT A
      WHERE	A.PROP_NO 			= @[prop_no]
      AND	A.SC_EXPT_VER_SEQ 	= @[sc_expt_ver_seq] - 1
      AND   A.SC_EXPT_GRP_SEQ 	= @[sc_expt_grp_seq]
    ) OLD
WHERE  NEW.PROP_NO = OLD.PROP_NO(+)
AND    NEW.SC_EXPT_GRP_SEQ = OLD.SC_EXPT_GRP_SEQ(+)			]]></sql>
			<params>
				<param name="prop_no" type="12" value="" out="N"/>
				<param name="sc_expt_ver_seq" type="12" value="" out="N"/>
				<param name="sc_expt_grp_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
