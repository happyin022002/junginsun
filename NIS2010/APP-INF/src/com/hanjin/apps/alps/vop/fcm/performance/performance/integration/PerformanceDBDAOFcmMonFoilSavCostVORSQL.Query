<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PerformanceDBDAOFcmMonFoilSavCostVORSQL">
			<desc><![CDATA[Monthly Fuel Oil Saving Cost 정보를 조회한다.

History
2012.04.04 진마리아 CHM-201216636-01 [FCM] ALPS 모델 및 DB 구조 불일치 복구
2012.07.18 이혜민    CHM-201219005-01 [FCM] fuel_adt 컬럼명 fuel_adtv 로 수정]]></desc>
			<sql><![CDATA[
SELECT
SAV_ITM_CD,
SAV_COST_CRE_YRMON,
VSL_CD,
SKD_VOY_NO,
SKD_DIR_CD,
VSL_CD||SKD_VOY_NO||SKD_DIR_CD VVD,
VPS_PORT_CD,
VSL_CLSS_CD,
VSL_CLSS_SUB_CD,
VSL_SLAN_CD,
NVGT_DIST,
AVG_SPD,
AVG_RPM_PWR,
LOD_IND_QTY,
FOIL_CSM_WGT,
FOIL_CSM_COST_AMT,
SAV_RTO,
SAV_QTY,
SAV_COST_AMT,
PORT_PAIR_SEA_FOIL_CSM_WGT,
FUEL_ADTV_CSM_WGT,
FUEL_ADTV_UC_AMT,
FUEL_ADTV_CSM_COST_AMT,
FUEL_ADTV_DEP_CSM_COST_AMT,
FUEL_ADTV_SAV_COST_AMT,
CRE_USR_ID,
CRE_DT,
UPD_USR_ID,
UPD_DT,
(SELECT CLPT_SEQ FROM VSK_VSL_PORT_SKD WHERE VSL_CD=T1.VSL_CD AND SKD_VOY_NO=T1.SKD_VOY_NO AND SKD_DIR_CD=T1.SKD_DIR_CD AND VPS_PORT_CD=T1.VPS_PORT_CD AND CLPT_IND_SEQ=T1.CLPT_IND_SEQ) CLPT_SEQ
FROM FCM_MON_FUEL_OIL_SAV_COST T1
WHERE 1=1
AND SAV_ITM_CD=@[sav_itm_cd]
AND SAV_COST_CRE_YRMON BETWEEN @[fm_yrmon] AND @[to_yrmon]
#if (${vsl_slan_cd} != '') 
AND VSL_SLAN_CD=@[vsl_slan_cd]
#end
#if (${vsl_cd} != '') 
AND VSL_CD=@[vsl_cd]
#end
ORDER BY VSL_CLSS_CD, VSL_CD, SKD_VOY_NO, SKD_DIR_CD, CLPT_SEQ			]]></sql>
			<params>
				<param name="sav_itm_cd" type="12" value="" out="N"/>
				<param name="fm_yrmon" type="12" value="" out="N"/>
				<param name="to_yrmon" type="12" value="" out="N"/>
				<param name="vsl_slan_cd" type="12" value="" out="N"/>
				<param name="vsl_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
