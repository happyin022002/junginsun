<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="VesselReportDBDAOVslNoonRptVORSQL">
			<desc><![CDATA[주어진 조건에 대한 Lane별 Noon Report 현황을 조회한다.]]></desc>
			<sql><![CDATA[
SELECT
SLAN_CD VSL_SLAN_CD,
SUM(VVD_CNT) VVD_CNT,
SUM(PORT_DAYS) PORT_DAYS,
SUM(SEA_DAYS) SEA_DAYS,
SUM(NOON_RPT_CNT) NOON_RPT_CNT,
SUM(SEA_DAYS)-SUM(NOON_RPT_CNT) MSS_RPT_CNT,
(SELECT COUNT(*) FROM FCM_NOON_RPT T1
 WHERE 1=1
 AND (T1.VSL_CD, T1.SKD_VOY_NO, T1.SKD_DIR_CD) NOT IN
         (SELECT VSL_CD, SKD_VOY_NO, SKD_DIR_CD FROM VSK_VSL_PORT_SKD)
 AND T1.VSL_SLAN_CD=SLAN_CD
#if (${fm_dt} != '') 
 AND NOON_RPT_DT BETWEEN TO_DATE(REPLACE(@[fm_dt], '-', ''), 'YYYYMMDD')     -- 화면조건 : FM_DT
                 AND TO_DATE(REPLACE(@[to_dt], '-', ''), 'YYYYMMDD')+0.99999 -- 화면조건 : TO_DT
#end
#if( ${vsl_cd} != '' )
	-- 화면조건 : VSL_CD
    AND T1.VSL_CD IN (                     
		#foreach($sVslCd in ${vel_vsl_cd})  
			'$sVslCd',  
			#end  
			'') 
#end
#if (${skd_dir_cd} != '') 
    AND T1.SKD_DIR_CD=@[skd_dir_cd]                                        -- 화면조건 : SKD_DIR_CD
#end	
 ) MSS_MTCH_RPT_CNT
FROM (
    SELECT
    DECODE(ROW_NUMBER() OVER(PARTITION BY T2.VSL_CD, T2.SKD_VOY_NO, T2.SKD_DIR_CD ORDER BY T2.VSL_CD), 1, 1, 0) VVD_CNT,
    DECODE((SELECT DISTINCT 'X' FROM FCM_NOON_RPT WHERE VSL_CD=T2.VSL_CD
                                         AND SKD_VOY_NO=T2.SKD_VOY_NO
                                         AND SKD_DIR_CD=T2.SKD_DIR_CD), 'X', 1, 0) NOON_RPT_CNT,
    (TRUNC(T2.VPS_ETD_DT-T2.VPS_ETA_DT) + 
        DECODE(SIGN(TO_CHAR(T2.VPS_ETA_DT,'HH24')-'12'), -1, 1, 0) +
        DECODE(SIGN(TO_CHAR(T2.VPS_ETD_DT,'HH24')-'12'), 1, 1, 0) +
        DECODE(SIGN(TO_CHAR(T2.VPS_ETD_DT, 'HH24')-TO_CHAR(T2.VPS_ETA_DT, 'HH24')), 1, -1, 0)) PORT_DAYS,
    0 SEA_DAYS,
    T2.*
    FROM VSK_VSL_SKD T1, VSK_VSL_PORT_SKD T2, MDM_VSL_SVC_LANE T3, MDM_VSL_CNTR T4
    WHERE 1=1
    -- 기본 조건
    AND T1.VSL_CD=T2.VSL_CD
    AND T1.SKD_VOY_NO=T2.SKD_VOY_NO
    AND T1.SKD_DIR_CD=T2.SKD_DIR_CD
    AND T1.VSL_SLAN_CD=T3.VSL_SLAN_CD
    AND T1.VSL_CD=T4.VSL_CD
    AND T3.VSL_SVC_TP_CD<>'O'
    AND NVL(T1.ACT_CRR_CD, T4.CRR_CD)='SML'
    AND T2.TURN_PORT_IND_CD IN ('Y','N')
#if (${fm_dt} != '') 
    AND T2.VPS_ETD_DT BETWEEN TO_DATE(REPLACE(@[fm_dt], '-', ''), 'YYYYMMDD')     -- 화면조건 : FM_DT
                      AND TO_DATE(REPLACE(@[to_dt], '-', ''), 'YYYYMMDD')+0.99999 -- 화면조건 : TO_DT 
#end
#if( ${vsl_slan_cd} != '' )								  
	-- 화면조건 : VSL_SLAN_CD
    AND T1.VSL_SLAN_CD IN (                     
		#foreach($sVslSlanCd in ${vel_vsl_slan_cd})  
			'$sVslSlanCd',  
			#end  
			'') 
#end
#if( ${vsl_cd} != '' )
	-- 화면조건 : VSL_CD
    AND T1.VSL_CD IN (                     
		#foreach($sVslCd in ${vel_vsl_cd})  
			'$sVslCd',  
			#end  
			'') 
#end
#if( ${vps_port_cd} != '' )
	-- 화면조건 : VPS_PORT_CD
    AND T2.VPS_PORT_CD IN (                     
		#foreach($sVpsPortCd in ${vel_vps_port_cd})  
			'$sVpsPortCd',  
			#end  
			'') 
#end
#if (${skd_dir_cd} != '') 
    AND T1.SKD_DIR_CD=@[skd_dir_cd]                                        -- 화면조건 : SKD_DIR_CD
#end	

)
GROUP BY SLAN_CD
ORDER BY VSL_SLAN_CD			]]></sql>
			<params>
				<param name="fm_dt" type="12" value="" out="N"/>
				<param name="to_dt" type="12" value="" out="N"/>
				<param name="skd_dir_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
