<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralInvoiceAuditDBDAOSearchConvertedAmountOtherByXchRtRSQL">
			<desc><![CDATA[LOCAL -> USD, USD -> LOCAL이 아닌 경우 환율 계산을 하기 위함.]]></desc>
			<sql><![CDATA[
select round(@[amt] / @[mnl_inp_xch_rt], DP_USD) AS AMT
	  ,'1 '||@[curr_cd] ||'=' || @[mnl_inp_xch_rt] ||' '|| CURR_LOCAL	AS XCH  
      , @[mnl_inp_xch_rt]
  from (
         select  max(decode(CURR_CD, 'USD', 'USD'))            AS CURR_USD           
                ,max(decode(CURR_CD, 'USD', DP_PRCS_KNT))      AS DP_USD
                ,max(decode(CURR_CD, @[bcurr_cd], @[bcurr_cd]))  AS CURR_LOCAL
                ,max(decode(CURR_CD, @[bcurr_cd], DP_PRCS_KNT)) AS DP_LOCAL 
           from  MDM_CURRENCY
          where  CURR_CD IN (@[bcurr_cd], 'USD')
        )			]]></sql>
			<params>
				<param name="amt" type="12" value="" out="N"/>
				<param name="mnl_inp_xch_rt" type="12" value="" out="N"/>
				<param name="curr_cd" type="12" value="" out="N"/>
				<param name="bcurr_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
