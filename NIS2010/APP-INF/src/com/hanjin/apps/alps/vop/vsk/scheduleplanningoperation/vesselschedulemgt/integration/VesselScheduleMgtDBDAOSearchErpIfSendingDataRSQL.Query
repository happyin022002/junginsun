<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="VesselScheduleMgtDBDAOSearchErpIfSendingDataRSQL">
			<desc><![CDATA[SearchErpIfSendingData
-------------------------------------------------------------------------
2010.11.24 이석준 [CHM-201007341-01] Actual SKD ERP I/F 로직 변경
2012.12.18 김상수 [CHM-201221884-01] CNTR 진행기준 대상항차 선정기능 보완]]></desc>
			<sql><![CDATA[
SELECT  'FNS017-0001'                                                            AS LIFID
        , VSL_CD||SKD_VOY_NO||SKD_DIR_CD||TO_CHAR(SYSDATE,'YYYYMMDD HH24:MI:SS') AS SEQ
        , LINE_CNT                                                               AS TOTAL_COUNT
        , SEQ                                                                    AS ROW_NUM
        , VSL_CD                                                                 AS VSL    
        , SKD_VOY_NO                                                             AS VOY_NO
        , SKD_DIR_CD                                                             AS DEP
        , SKD_VOY_TP_CD                                                          AS VOY_TP
        , VSL_SLAN_CD                                                            AS LANE
        , LOAD_QNT
        , SURVEY
        , VESSEL_CHECK
        , LINE_CNT
        , DTL_VSL
        , DTL_VOY_NO
        , DTL_DEP
        , CLPT_SEQ                                                               AS PORT_SEQ
        , VPS_LOC_CD                                                             AS PT
        , TO_CHAR(EST_ARR_DT,'YYYYMMDD')                                         AS EST_ARR_DT
        , TO_CHAR(EST_SAIL_DT,'YYYYMMDD')                                        AS EST_SAIL_DT
        , TO_CHAR(ACT_ARR_DT,'YYYYMMDD')                                         AS ACT_ARR_DT
        , TO_CHAR(ACT_SAIL_DT,'YYYYMMDD')                                        AS ACT_SAIL_DT
        , POSITION
        , TO_CHAR(LOG_RGST,'DDMonRR')                                            AS LOG_RGST
        , TO_CHAR(LOG_UPDT,'DDMonRR')                                            AS LOG_UPDT
        , LOG_USERID
        , SKD_CNG_STS_CD                                                         AS CHANGE_IND
        ,CASE WHEN DELT_FLG = 'C' THEN   /* DELT_FLG = 'C' : 1개 PORT가 있고, SKIP되지 않은 VIRTUAL PORT가 있을 경우..'N' */
                DECODE((
                SELECT  COUNT(*)
                FROM    VSK_VSL_PORT_SKD 		S1
                WHERE   1 = 1
                AND     T21.VSL_CD          	= S1.VSL_CD
                AND     T21.SKD_VOY_NO      	= S1.SKD_VOY_NO
                AND     T21.SKD_DIR_CD      	= S1.SKD_DIR_CD
                AND     'S'                 	<> NVL(S1.SKD_CNG_STS_CD, ' ')
                AND     S1.TURN_PORT_IND_CD 	IN ('D', 'V', 'F'))
                , 0, 'Y', 'N')
            ELSE    DELT_FLG    END                                              AS DEL_MK
        , TURN_PORT_IND_CD                                                       AS TURN_IND
        , H_REMARK
        , D_REMARK
        , NEW_SAIL_DT
        , NEW_ARR_DT
        , SKD_STS_CD                                                             AS SKD_SKD_STAT
        , PORT_SKD_STS_CD                                                        AS VPS_SKD_STAT

        , CLPT_IND_SEQ
        , TURN_SKD_VOY_NO
        , TURN_SKD_DIR_CD
        , TURN_CLPT_IND_SEQ

FROM    (SELECT ROW_NUMBER() OVER (PARTITION BY T1.VSL_CD, T1.SKD_VOY_NO, T1.SKD_DIR_CD ORDER BY CLPT_SEQ)      AS SEQ
                ,T1.VSL_CD                                                                                      AS VSL_CD
                ,T1.SKD_VOY_NO                                                                                  AS SKD_VOY_NO
                ,T1.SKD_DIR_CD                                                                                  AS SKD_DIR_CD
                ,(SELECT DECODE(S1.VSL_SVC_TP_CD||DECODE(S2.VSL_OWN_IND_CD, 'O', 'O', 'C')||DECODE(S2.CRR_CD, 'SML', 'H', 'X'),
                                    'SOH', 'CJ', 'SCH', 'CV',
                                    'SOX', 'CB', 'SCX', 'CB',
                                    'JOH', 'CJ', 'JCH', 'CV',
                                    'JOX', 'CA', 'JCX', 'CA',
                                    'IOH', 'CI', 'ICH', 'CC',
                                    'IOX', 'CA', 'ICX', 'CA',
                                    'OOH', 'CJ', 'OCH', 'CV',
                                    'OOX', 'CB', 'OCX', 'CB'
                            )                                                                                   AS SKD_VOY_TP_CD
                    FROM    MDM_VSL_SVC_LANE 	S1
						, 	MDM_VSL_CNTR 		S2
                    WHERE   1 = 1
                    AND     S1.VSL_SLAN_CD   	= T1.VSL_SLAN_CD
                    AND     S2.VSL_CD        	= T1.VSL_CD
                    AND     S1.VSL_TP_CD     	= 'C' /*컨테이너선*/
                )                                                                                               AS SKD_VOY_TP_CD
                , T1.VSL_SLAN_CD                                                                                AS VSL_SLAN_CD
                , '0'                                                                                           AS LOAD_QNT
                , MAX(DECODE(T2.TURN_PORT_FLG, 'Y', 1, 0)) OVER (PARTITION BY T1.VSL_CD, T1.SKD_VOY_NO, T1.SKD_DIR_CD) AS SURVEY
                , 'Y'                                                                                           AS VESSEL_CHECK
                , COUNT(*) OVER ()                                                                              AS LINE_CNT
                , T1.VSL_CD                                                                                     AS DTL_VSL
                , T1.SKD_VOY_NO                                                                                 AS DTL_VOY_NO
                , T1.SKD_DIR_CD                                                                                 AS DTL_DEP
                , T2.CLPT_SEQ   
                , T2.VPS_PORT_CD                                                                                AS VPS_LOC_CD
                , DECODE(T2.PORT_SKD_STS_CD, NULL, T2.VPS_ETA_DT, NULL)                                         AS EST_ARR_DT
                , DECODE(T2.PORT_SKD_STS_CD, NULL, T2.VPS_ETD_DT, 'A', T2.VPS_ETD_DT, NULL)                     AS EST_SAIL_DT
                , DECODE(T2.PORT_SKD_STS_CD, 'A' , T2.VPS_ETA_DT, 'B', T2.VPS_ETA_DT, 'D', T2.VPS_ETA_DT, NULL) AS ACT_ARR_DT
                , DECODE(T2.PORT_SKD_STS_CD, 'B' , T2.VPS_ETD_DT, 'D', T2.VPS_ETD_DT,  NULL)                    AS ACT_SAIL_DT
                , 'N'                                                                                           AS POSITION
                , T2.CRE_DT                                                                                     AS LOG_RGST
                , T2.UPD_DT                                                                                     AS LOG_UPDT
                , T2.CRE_USR_ID                                                                                 AS LOG_USERID
                , T2.SKD_CNG_STS_CD                                                                             AS SKD_CNG_STS_CD
                , DECODE((
                        SELECT  COUNT(*)
                        FROM    VSK_VSL_PORT_SKD 	S1
                        WHERE   1 = 1
                        AND     T1.VSL_CD         	= S1.VSL_CD
                        AND     T1.SKD_VOY_NO     	= S1.SKD_VOY_NO
                        AND     T1.SKD_DIR_CD     	= S1.SKD_DIR_CD
                        AND     'S'              	<> NVL(S1.SKD_CNG_STS_CD, ' ')
                        AND     TURN_PORT_IND_CD 	NOT IN ('D', 'V', 'F')
                    ), 0, 'Y', 1, 'C', 'N')                                                                     AS DELT_FLG            /* SKIP & VIRUAL PORT를 제외한 COUNT가 0 이면 삭제 */
                , T2.TURN_PORT_IND_CD                                                                           AS TURN_PORT_IND_CD
                , SUBSTR(T1.SKD_RMK, 1, 400)                                                                    AS H_REMARK
                , SUBSTR(T2.VPS_RMK, 1, 400)                                                                    AS D_REMARK
                , SUBSTR(TO_CHAR(VPS_ETA_DT,'YYYYMMDDHH24MISS'),9,6)                                            AS NEW_ARR_DT
                , SUBSTR(TO_CHAR(VPS_ETD_DT,'YYYYMMDDHH24MISS'),9,6)                                            AS NEW_SAIL_DT
                , T1.SKD_STS_CD                                                                                 AS SKD_STS_CD
                , T2.PORT_SKD_STS_CD                                                                            AS PORT_SKD_STS_CD

                , T2.CLPT_IND_SEQ
                , T2.TURN_SKD_VOY_NO
                , T2.TURN_SKD_DIR_CD 
                , T2.TURN_CLPT_IND_SEQ

        FROM    VSK_VSL_SKD         	T1
			, 	VSK_VSL_PORT_SKD    	T2
			,	MDM_VSL_SVC_LANE    	T3
        WHERE   1   = 1
        AND     T1.VSL_CD          		= T2.VSL_CD
        AND     T1.SKD_VOY_NO      		= T2.SKD_VOY_NO
        AND     T1.SKD_DIR_CD      		= T2.SKD_DIR_CD
        AND     T1.VSL_SLAN_CD     		= T3.VSL_SLAN_CD
        AND     T1.SKD_STS_CD      		= 'ACT'            /* Activate된 SKD 정보만 ERP에 전송함 */
        AND     T3.VSL_TP_CD       		= 'C' /*컨테이너선*/
        AND     EXISTS    				(SELECT  'Y'
                           				 FROM    AR_ROUT_RNK 		S
                           				 WHERE   T3.VSL_SLAN_CD    	= SUBSTR(S.RLANE_CD, 1, 3)
                           				 AND     S.DELT_FLG        	= 'N'
                           				)
        AND     T1.VSL_CD          		= @[vsl_cd]
        AND     T1.SKD_VOY_NO      		= @[skd_voy_no]
        AND     T1.SKD_DIR_CD      		= @[skd_dir_cd]
        AND     T1.VSL_SLAN_CD     		= @[vsl_slan_cd]
        AND	    EXISTS 					(SELECT 'Y' FROM MDM_VSL_CNTR S WHERE S.VSL_CD = T1.VSL_CD AND S.VSL_CLSS_FLG != 'T')
        ) T21

UNION ALL

/* Delete된 SKD은 Ready, Close, Activate별로 전송할 필요 없음. ERP측에서 필터링 하기로 함. */
SELECT 'FNS017-0001'          AS LIFID
        ,@[vsl_cd]||@[skd_voy_no]||@[skd_dir_cd]||TO_CHAR(SYSDATE,'YYYYMMDD HH24:MI:SS') AS SEQ
        ,NULL                 AS TOTAL_COUNT
        ,NULL                 AS ROW_NUM
        ,@[vsl_cd]            AS VSL
        ,@[skd_voy_no]        AS VOY_NO
        ,@[skd_dir_cd]        AS DEP
        ,NULL                 AS VOY_TP
        ,@[vsl_slan_cd]       AS LANE
        ,NULL                 AS LOAD_QNT
        ,NULL                 AS SURVEY
        ,NULL                 AS VESSEL_CHECK
        ,NULL                 AS LINE_CNT
        ,NULL                 AS DTL_VSL
        ,NULL                 AS DTL_VOY_NO
        ,NULL                 AS DTL_DEP
        ,NULL                 AS PORT_SEQ
        ,NULL                 AS PT
        ,NULL                 AS EST_ARR_DT
        ,NULL                 AS EST_SAIL_DT
        ,NULL                 AS ACT_ARR_DT
        ,NULL                 AS ACT_SAIL_DT
        ,NULL                 AS POSITION
        ,NULL                 AS LOG_RGST
        ,NULL                 AS LOG_UPDT
        ,NULL                 AS LOG_USERID
        ,NULL                 AS CHANGE_IND
        ,'D'                  AS DEL_MK
        ,NULL                 AS TURN_IND
        ,NULL                 AS H_REMARK
        ,NULL                 AS D_REMARK
        ,NULL                 AS NEW_SAIL_DT
        ,NULL                 AS NEW_ARR_DT
        ,NULL                 AS SKD_SKD_STAT
        ,NULL                 AS VPS_SKD_STAT

        ,NULL				  AS CLPT_IND_SEQ
        ,NULL				  AS TURN_SKD_VOY_NO
        ,NULL				  AS TURN_SKD_DIR_CD
        ,NULL				  AS TURN_CLPT_IND_SEQ

FROM    DUAL
WHERE   EXISTS 				(SELECT   	'Y'
                			 FROM     	AR_ROUT_RNK
                			 WHERE    	SUBSTR(RLANE_CD, 1, 3) = @[vsl_slan_cd]
                			 AND      	DELT_FLG               = 'N')
AND     0 =    				(SELECT  	COUNT(*)
                			 FROM    	VSK_VSL_SKD 			T1
									, 	VSK_VSL_PORT_SKD 		T2
                			 WHERE   	1 = 1
                			 AND     	T1.VSL_CD            	= T2.VSL_CD
                			 AND     	T1.SKD_VOY_NO        	= T2.SKD_VOY_NO
                			 AND     	T1.SKD_DIR_CD        	= T2.SKD_DIR_CD
                			 AND     	T1.VSL_CD            	= @[vsl_cd]
                			 AND     	T1.SKD_VOY_NO        	= @[skd_voy_no]
                			 AND     	T1.SKD_DIR_CD        	= @[skd_dir_cd]
                			 AND     	T1.VSL_SLAN_CD       	= @[vsl_slan_cd]
                			 AND     	'S'                 	<> NVL(T2.SKD_CNG_STS_CD, ' ')
                			 AND     	T2.TURN_PORT_IND_CD 	NOT IN ('D', 'V', 'F')
               				)
AND     EXISTS 				(SELECT 'Y' FROM MDM_VSL_CNTR S WHERE S.VSL_CD = @[vsl_cd] AND S.VSL_CLSS_FLG != 'T')			]]></sql>
			<params>
				<param name="vsl_cd" type="12" value="" out="N"/>
				<param name="skd_voy_no" type="12" value="" out="N"/>
				<param name="skd_dir_cd" type="12" value="" out="N"/>
				<param name="vsl_slan_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
