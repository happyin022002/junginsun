<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="VSKCodeFinderDBDAOSearchLocationListRSQL">
			<desc><![CDATA[SearchLocationList]]></desc>
			<sql><![CDATA[
SELECT
T1.LOC_CD
,T1.SCC_CD
,T1.LOC_NM
,T1.RGN_CD
,T1.CNT_CD
,T1.STE_CD
,T1.CONTI_CD
,T1.PORT_INLND_CD
,T1.LOC_CHR_CD
,T1.BLK_PORT_FLG
,T1.HUB_LOC_CD
,T1.SLS_OFC_CD
,T1.LOC_GRD_NO
,T1.GMT_HRS
,T1.BKG_BL_PFX_CD
,T1.CALL_PORT_FLG
,T1.LOC_AMS_PORT_CD
,T1.FINC_CTRL_OFC_CD
,T1.EQ_CTRL_OFC_CD
,T1.MTY_PKUP_YD_CD
,T1.SEN_EQ_OFC_CD
,T1.EQ_RTN_YD_CD
,T1.UN_LOC_IND_CD
,T1.UN_LOC_CD
,T1.CML_ZN_FLG
,T1.CSTMS_CD
,T1.LOC_TP_CD
,T1.BFR_FINC_CTRL_OFC_CD
,T1.BFR_EQ_CTRL_OFC_CD
,T1.BFR_SLS_OFC_CD
,T1.BFR_OFC_CNG_DT
,T1.REP_ZN_CD
,T1.ZIP_CD
,T1.SCONTI_CD
,T1.EXPT_LGS_OFC_CD
,T1.EXPT_CUST_SVC_OFC_CD
,(
  	SELECT     
    		DECODE(
    				SUBSTR(LTRIM(MIN(TO_CHAR(LEVEL, '000')||OFC_CD || PRNT_OFC_CD)), 4)  , 
            		'SINRSSHARC', 'SINRS', SUBSTR(LTRIM(MAX(TO_CHAR(LEVEL, '000')||OFC_CD)), 4)
            		)
		-- 1. 2건에 RHQ Code가 발생할 경우, Level이 낮은 것을 기준으로 하고,
		-- 2, 'SINRSSHARC'일 경우에는 'SINRS'로 표시하고, 일반적으로는 Level에 Max를 표시한다.
    FROM     MDM_ORGANIZATION
    WHERE    1   = 1
    AND      OFC_KND_CD  ='2'
    AND      DELT_FLG    = 'N'
    START    WITH OFC_CD = T1.SLS_OFC_CD
    CONNECT BY PRIOR  PRNT_OFC_CD =OFC_CD
    ) AS VSKD_PORT_RHQ_CD
,T1.VOP_PORT_CTRL_OFC_CD
,T1.VOP_PORT_MNTR_FLG
,T1.VOP_LOC_URL
,T2.CNT_NM
,T2.CURR_CD
,T2.FRGN_VAT_FLG
,T2.ZN_DIV_BSEL_CD
,T2.BKG_ADDR_ORD_CD
,T2.BKG_ADDR_ORD_DESC
FROM MDM_LOCATION T1, MDM_COUNTRY T2
WHERE 1=1
AND T1.CNT_CD=T2.CNT_CD
#if (${cnt_cd} != '') 
AND T1.CNT_CD LIKE upper(@[cnt_cd]) || '%'
#end
#if (${loc_cd} != '') 
AND T1.LOC_CD LIKE upper(@[loc_cd]) || '%'
#end
#if (${loc_nm} != '') 
AND T1.LOC_NM LIKE '%' || upper(@[loc_nm]) || '%'
#end
#if (${vskd_port_rhq_cd} != '' && ${vskd_port_rhq_cd} != 'ALL') 
AND T1.VSKD_PORT_RHQ_CD = @[vskd_port_rhq_cd]
#end
#if (${vop_port_mntr_flg} != '')
AND T1.VOP_PORT_MNTR_FLG=@[vop_port_mntr_flg]
#end
AND T1.CALL_PORT_FLG='N'
AND T1.DELT_FLG = 'N'
AND T2.DELT_FLG = 'N'
ORDER BY LOC_CD			]]></sql>
			<params>
				<param name="cnt_cd" type="12" value="" out="N"/>
				<param name="loc_cd" type="12" value="" out="N"/>
				<param name="loc_nm" type="12" value="" out="N"/>
				<param name="vskd_port_rhq_cd" type="12" value="" out="N"/>
				<param name="vop_port_mntr_flg" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
