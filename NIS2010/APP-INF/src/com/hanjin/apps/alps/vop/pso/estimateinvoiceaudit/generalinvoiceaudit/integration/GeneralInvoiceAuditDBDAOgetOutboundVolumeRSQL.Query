<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralInvoiceAuditDBDAOgetOutboundVolumeRSQL">
			<desc><![CDATA[Tariff 비용 계산을 위해 해당 TDR 에서 ,Outbound Volume을 구한다.
=====================================================================
2011.03.28 진마리아 [선처리(SRM-201114694)] 사업계획 항비 로직 수정 요청
2011.05.03 진마리아 CHM-201110100-01 Ocean Volume만 포함되도록 로직 수정
2014.03.07 SKY  CHM-201429128 Tariff simulation 로직 수정 - Inbound Volume / Out Bound Volume 계산
- Outbound volume : Outbound cargo + T/S cargo + Inter port cargo + Interport T/S cargo ( full only) ]]></desc>
			<sql><![CDATA[
SELECT  
NVL(
SUM(DECODE(STATUS, 'LM', DECODE(CNTR_SIZE, '2', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY), 'R', DECODE(QTY, 0, 0, QTY), 0), 0), 0))     +     				
SUM(DECODE(STATUS, 'LM', DECODE(CNTR_SIZE, '3', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY), 'R', DECODE(QTY, 0, 0, QTY), 0), 0), 0))     +    				
SUM(DECODE(STATUS, 'LM', DECODE(CNTR_SIZE, '4', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY*2), 'R', DECODE(QTY, 0, 0, QTY*2), 0), 0), 0)) +     				
SUM(DECODE(STATUS, 'LM', DECODE(CNTR_SIZE, 'H', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY*2), 'R', DECODE(QTY, 0, 0, QTY*2), 0), 0), 0)) +    				
SUM(DECODE(STATUS, 'LM', DECODE(CNTR_SIZE, 'L', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY*2), 'R', DECODE(QTY, 0, 0, QTY*2), 0), 0), 0)) +     			
SUM(DECODE(STATUS, 'OT', DECODE(CNTR_SIZE, '2', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY), 'R', DECODE(QTY, 0, 0, QTY), 0), 0), 0))     +    				
SUM(DECODE(STATUS, 'OT', DECODE(CNTR_SIZE, '3', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY), 'R', DECODE(QTY, 0, 0, QTY), 0), 0), 0))     +   				
SUM(DECODE(STATUS, 'OT', DECODE(CNTR_SIZE, '4', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY*2), 'R', DECODE(QTY, 0, 0, QTY*2), 0), 0), 0)) +   				
SUM(DECODE(STATUS, 'OT', DECODE(CNTR_SIZE, 'H', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY*2), 'R', DECODE(QTY, 0, 0, QTY*2), 0), 0), 0)) + 				
SUM(DECODE(STATUS, 'OT', DECODE(CNTR_SIZE, 'L', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY*2), 'R', DECODE(QTY, 0, 0, QTY*2), 0), 0), 0)) +
SUM(DECODE(STATUS, 'LI', DECODE(CNTR_SIZE, '2', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY), 'R', DECODE(QTY, 0, 0, QTY), 0), 0), 0))     +
SUM(DECODE(STATUS, 'LI', DECODE(CNTR_SIZE, '3', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY), 'R', DECODE(QTY, 0, 0, QTY), 0), 0), 0))     +
SUM(DECODE(STATUS, 'LI', DECODE(CNTR_SIZE, '4', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY*2), 'R', DECODE(QTY, 0, 0, QTY*2), 0), 0), 0)) +
SUM(DECODE(STATUS, 'LI', DECODE(CNTR_SIZE, 'H', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY*2), 'R', DECODE(QTY, 0, 0, QTY*2), 0), 0), 0)) +
SUM(DECODE(STATUS, 'LI', DECODE(CNTR_SIZE, 'L', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY*2), 'R', DECODE(QTY, 0, 0, QTY*2), 0), 0), 0)) +
SUM(DECODE(STATUS, 'LT', DECODE(CNTR_SIZE, '2', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY), 'R', DECODE(QTY, 0, 0, QTY), 0), 0), 0))     +
SUM(DECODE(STATUS, 'LT', DECODE(CNTR_SIZE, '3', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY), 'R', DECODE(QTY, 0, 0, QTY), 0), 0), 0))     +
SUM(DECODE(STATUS, 'LT', DECODE(CNTR_SIZE, '4', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY*2), 'R', DECODE(QTY, 0, 0, QTY*2), 0), 0), 0)) +
SUM(DECODE(STATUS, 'LT', DECODE(CNTR_SIZE, 'H', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY*2), 'R', DECODE(QTY, 0, 0, QTY*2), 0), 0), 0)) +
SUM(DECODE(STATUS, 'LT', DECODE(CNTR_SIZE, 'L', DECODE(CNTR_TYPE, 'F', DECODE(QTY, 0, 0, QTY*2), 'R', DECODE(QTY, 0, 0, QTY*2), 0), 0), 0))      				
, 0)
#if (${budget_flag} == 'B') 
FROM   VSK_BUD_VSL_PORT_SKD V, TDR_HEADER H, TDR_SUMMARY S
#else 
FROM   VSK_VSL_PORT_SKD V, TDR_HEADER H, TDR_SUMMARY S
#end
WHERE  V.VSL_CD = substr(@[vvd], 1, 4)
AND V.SKD_VOY_NO = substr(@[vvd], 5, 4)
AND V.SKD_DIR_CD = substr(@[vvd], 9)
AND    V.YD_CD        = @[yd_cd]
AND    V.VSL_CD       = H.VSL_CD
AND    V.SKD_VOY_NO   = H.VOY_NO
AND    V.SKD_DIR_CD   = H.DIR_CD
AND    V.VPS_PORT_CD  = H.PORT_CD
AND    V.CLPT_IND_SEQ = H.CALL_IND
AND    H.VSL_CD       = S.VSL_CD
AND    H.VOY_NO       = S.VOY_NO
AND    H.DIR_CD       = S.DIR_CD
AND    H.PORT_CD      = S.PORT_CD
AND    H.CALL_IND     = S.CALL_IND
AND    S.STATUS       IN ('LM','OT','LI','LT') -- Outbound cargo + T/S cargo + Inter port cargo + Interport T/S cargo ( full only)			]]></sql>
			<params>
				<param name="vvd" type="12" value="" out="N"/>
				<param name="yd_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
