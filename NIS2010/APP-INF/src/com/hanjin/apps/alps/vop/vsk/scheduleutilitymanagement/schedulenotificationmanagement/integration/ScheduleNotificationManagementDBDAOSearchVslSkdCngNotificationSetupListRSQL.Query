<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ScheduleNotificationManagementDBDAOSearchVslSkdCngNotificationSetupListRSQL">
			<desc><![CDATA[사용자별 Vessel Schedule Notification 수신을 위한 기본정보 세팅정보 조회]]></desc>
			<sql><![CDATA[
SELECT      X.USR_ID
        ,   X.VSL_SLAN_CD
        ,   X.SKD_DIR_CD||' - '||X.VPS_PORT_CD       AS DIR_PORT_DESC
        ,   X.VPS_PORT_CD
        ,   X.SKD_DIR_CD

        ,   X.VSL_SLAN_CD							 AS ORG_VSL_SLAN_CD
        ,   X.VPS_PORT_CD							 AS	ORG_VPS_PORT_CD
        ,   X.SKD_DIR_CD							 AS ORG_SKD_DIR_CD

        ,   X.ETA_DLAY_FM_HRS
        ,   X.ETA_DLAY_TO_HRS
		,	'<'										 AS ETA_DLAY_FM_MARK
		,	'PFS'									 AS ETA_DLAY_FIXMARK
		,	'<'										 AS ETA_DLAY_TO_MARK
		        
        ,   X.ETB_DLAY_FM_HRS
        ,   X.ETB_DLAY_TO_HRS
		,	'<'										 AS ETB_DLAY_FM_MARK
		,	'PFS'									 AS ETB_DLAY_FIXMARK
		,	'<'										 AS ETB_DLAY_TO_MARK
		        
        ,   X.ETD_DLAY_FM_HRS
        ,   X.ETD_DLAY_TO_HRS
		,	'<'										 AS ETD_DLAY_FM_MARK
		,	'PFS'									 AS ETD_DLAY_FIXMARK
		,	'<'										 AS ETD_DLAY_TO_MARK
		        
        ,   DECODE(X.SKP_CLPT_TGT_FLG,'Y','1','0')   AS SKP_CLPT_TGT_FLG 
        ,   DECODE(X.RVS_CLPT_TGT_FLG,'Y','1','0')   AS RVS_CLPT_TGT_FLG
        ,   DECODE(X.APLY_FLG,'Y','1','0')           AS APLY_FLG
        ,   X.CRE_USR_ID
        ,   X.CRE_DT
        ,   X.UPD_USR_ID
        ,   TO_CHAR(X.UPD_DT,'YYYY-MM-DD HH24:MI')	 AS UPD_DT
        
        ,   ''                                       AS LOGIN_USR_ID
		,	''									     AS LANE_CD
		,	''									     AS SLAN_CD
		,	''										 AS PORT_CD
		,	'N'										 AS PK_MODI_FLG
FROM        VSK_VSL_SKD_NTFC_STUP   X
WHERE       1 = 1
AND         X.USR_ID                = @[login_usr_id]

#if (${lane_cd} != '') 
AND			X.VSL_SLAN_CD			= @[lane_cd]
#end
#if (${port_cd} != '') 
AND			X.VPS_PORT_CD			= @[port_cd]
#end

ORDER BY	X.SKD_DIR_CD	ASC
		,	X.VPS_PORT_CD	ASC
			]]></sql>
			<params>
				<param name="login_usr_id" type="12" value="111" out="N"/>
				<param name="lane_cd" type="12" value="" out="N"/>
				<param name="port_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
