<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralInvoiceAuditDBDAOsearchGenInvAuditRSQL">
			<desc><![CDATA[Invoice 정보를 조회합니다.

=======================================
* 2012.11.26 진마리아 CHM-201220618-01 TPB 비용 정보 지정시 해당 정보를 TPB IF용 테이블에 저장하고 제어함
* 2015.03.19 CHM-201534621 TONNAGE배분 관련 조회 항목 추가함]]></desc>
			<sql><![CDATA[
select  X1.*
	   ,X2.CURR_CD AS TRF_CURR_CD
  from  (
          select  T2.ISS_CTY_CD
                 ,T2.SO_SEQ
                 ,max(T1.COST_OFC_CD)         AS COST_OFC_CD
                 ,min(T2.SO_DTL_SEQ)          AS SO_DTL_SEQ
                 ,max(T1.PSO_CHG_STS_CD)      AS PSO_CHG_STS_CD
                 ,max(T2.VSL_CD)              AS VSL_CD
                 ,max(decode(T2.SO_DTL_SEQ, ORG_SO_DTL_SEQ, T2.SKD_VOY_NO,'')) AS SKD_VOY_NO
                 ,max(decode(T2.SO_DTL_SEQ, ORG_SO_DTL_SEQ, T2.SKD_DIR_CD,'')) AS SKD_DIR_CD
                 ,max(T2.LGS_COST_CD)			AS ACCT_CD
                 ,max(
                      (select X.ACCT_CD from TES_LGS_COST X where X.LGS_COST_CD = T2.LGS_COST_CD)
          		) AS COST_CD
                 ,max(decode(DP_IO_BND_CD, 'I', 'IN', 'O', 'OUT', 'INOUT')) AS IO
                 ,max(
                      (select  X.LGS_COST_FULL_NM from TES_LGS_COST X where X.LGS_COST_CD = T2.LGS_COST_CD)
          		) 							AS LGS_COST_FULL_NM
                 ,sum(T2.CALC_AMT) 			AS TARIFF_COST
                 ,sum(decode(T2.CALC_AMT, null, decode(T2.ADJ_AMT, null, T2.LOCL_AMT, T2.ADJ_AMT), T2.ADJ_AMT)) AS ADJCOST
                 ,SUM(T2.LOCL_AMT)        	AS AMOUNT
                 ,max(T2.FOML_DESC)       	AS FOML1
                 ,max(T2.XPR_DESC)        	AS FOML2
                 ,max(T2.XPR_DESC)        	AS COND1
                 ,max(T2.FOML_DESC)       	AS COND2
                 ,max(T2.DIFF_RMK)        	AS REMARK
                 ,max(TO_CHAR(T2.COST_CALC_EFF_FM_DT,'YYYYMMDD')) AS COST_CALC_EFF_FM_DT
                 ,max(TO_CHAR(T2.COST_CALC_EFF_TO_DT,'YYYYMMDD')) AS COST_CALC_EFF_TO_DT
                 ,max(T1.VNDR_SEQ)        	AS VNDR_SEQ
                 ,max(T1.YD_CD)           	AS YD_CD
                 ,max(T2.YD_CHG_NO)       	AS YD_CHG_NO
                 ,max(T2.YD_CHG_VER_SEQ)  	AS YD_CHG_VER_SEQ
                 ,max(
                      (
                        select  TO_CHAR(min(X.VPS_ETD_DT), 'YYYY-MM-DD HH24:MI')
                          from  VSK_VSL_PORT_SKD  X
                         where  X.VSL_CD = T2.VSL_CD
                           and  X.SKD_VOY_NO = T2.SKD_VOY_NO
                           and  X.SKD_DIR_CD = T2.SKD_DIR_CD
                           and  X.YD_CD = T1.YD_CD
                      )
                  ) 							AS ATD
                 ,max(T1.TTL_LOCL_AMT)		AS TTL_LOCL_AMT
                 ,max(T1.INV_LOCL_AMT)		AS INV_LOCL_AMT		--Invoice Local Amount
                 ,max(T1.LOCL_TAX_AMT)		AS LOCL_TAX_AMT
                 ,max(T1.LOCL_WHLD_TAX_AMT)	AS LOCL_WHLD_TAX_AMT
                 ,max(T1.CURR_CD)				AS CURR_CD
                 ,max(to_char(T1.EFF_DT, 'YYYY-MM-DD')) AS EFF_DT
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o86') night
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o75') holiday
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o17') boat
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o110') tugrope
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o57') buoy
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o97') sanitation
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o52') barge
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o78') inspection
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o8') arrtp
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o9') deptp
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o6') arrnt
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o7') depnt
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o10') arrtuh
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o11') deptuh
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o50') arrlh
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o60') deplh
                 ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o111') usdhrs
          	   ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o119') newservice
          	   ,extractvalue(xmltype(nvl(max(T2.INV_COND_DESC),'<o></o>')), '//o125') copilot
          	   ,max(T1.PSO_TRNS_SLP_CTNT)	AS PSO_TRNS_SLP_CTNT
          	   ,to_char(max(T1.ISS_DT), 'YYYYMMDD')     AS ISS_DT
          	   ,to_char(max(T1.ACPT_DT), 'YYYYMMDD')    AS ACPT_DT
          	   ,max(T2.VSL_CD) || max(decode(T2.SO_DTL_SEQ, ORG_SO_DTL_SEQ, T2.SKD_VOY_NO,'')) || max(decode(T2.SO_DTL_SEQ, ORG_SO_DTL_SEQ, T2.SKD_DIR_CD,'')) AS VVD
          	   ,decode(nvl(max(T3.ISS_CTY_CD),'N'),'N','N','Y') AS N3PTY_BIL_IF_FLG
          	   ,max(T3.N3PTY_BIL_TP_CD) 	AS N3PTY_BIL_TP_CD
          	   ,max(T3.IF_RMK) 				AS IF_RMK
          	   ,max(T3.VNDR_SEQ) 			AS N3PTY_VNDR_SEQ
			   ,max(T2.MNL_INP_XCH_RT)		AS MNL_INP_XCH_RT
            from  PSO_CHARGE			T1
                 ,PSO_CHG_DTL			T2
                 ,PSO_N3RD_PTY_IF		T3
           where  T1.ISS_CTY_CD = T2.ISS_CTY_CD
             and  T1.SO_SEQ = T2.SO_SEQ
             and  T2.ISS_CTY_CD = T3.ISS_CTY_CD(+)
             and  T2.SO_SEQ = T3.SO_SEQ(+)
             and  T2.SO_DTL_SEQ = T3.SO_DTL_SEQ(+)
             and  T1.VNDR_SEQ = @[vndr_seq]
             and  T1.INV_NO = @[inv_no]
          group by T2.ISS_CTY_CD, T2.SO_SEQ, T2.ORG_SO_DTL_SEQ
        ) X1
        , PSO_YD_CHG X2
 where  X1.YD_CHG_NO = X2.YD_CHG_NO(+)
   and  X1.YD_CHG_VER_SEQ = X2.YD_CHG_VER_SEQ(+)			]]></sql>
			<params>
				<param name="vndr_seq" type="12" value="111" out="N"/>
				<param name="inv_no" type="12" value="11" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
