<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="OptimizeddistancemgtDBDAOSearchYardGroupRSQL">
			<desc><![CDATA[Port정보를 통해 해당 Yard그룹정보를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT   SUBSTR(A.YD_CD, 1, 5) AS PORT_CD
       , SUBSTR(A.YD_CD, 6, 7) AS TMNL_CD
	   , A.YD_CD AS YD_CD
       , A.YD_NM AS YD_NM
       , B.YD_GRP_ID AS YD_GRP_ID
  FROM MDM_YARD A, VSK_YD_GRP B 
 WHERE 1=1
   AND A.YD_CD = B.YD_CD (+)
   AND A.YD_FCTY_TP_MRN_TML_FLG = 'Y' 
   AND A.DELT_FLG = 'N'
   AND A.LOC_CD LIKE @[port_cd] 
   ORDER BY B.YD_GRP_ID 			]]></sql>
			<params>
				<param name="port_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
