<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralInvoiceAuditDBDAOSearchTpbIfDataRSQL">
			<desc><![CDATA[CSR 승인건에 대해 TPB Call할 대상을 조회합니다.

===================================
* 2012.11.26 진마리아 CHM-201220618-01 TPB 비용 정보 지정시 해당 정보를 TPB IF용 테이블에 저장하고 제어함]]></desc>
			<sql><![CDATA[
SELECT N3PTY_BIL_TP_CD
     , IF_OFC_CD
     , VSL_CD
     , SKD_VOY_NO
     , SKD_DIR_CD
     , YD_CD
     , VNDR_SEQ
     , IF_CURR_CD
     , IF_AMT
     , IF_RMK
     , ACCT_CD
     , LGS_COST_CD
     , IF_USR_ID
     , COST_OFC_CD
     , TO_CHAR(VPS_ETD_DT,'YYYYMMDDHH24MI') VPS_ETD_DT
     , SO_DTL_SEQ
     , IF_SEQ
     , (SELECT VNDR_CNT_CD FROM MDM_VENDOR WHERE VNDR_SEQ = T.VNDR_SEQ) VNDR_CNT_CD
     , (SELECT VNDR_LGL_ENG_NM FROM MDM_VENDOR WHERE VNDR_SEQ = T.VNDR_SEQ) VNDR_LGL_ENG_NM
     , (SELECT YD_NM FROM MDM_YARD WHERE YD_CD = T.YD_CD) YD_NM
     , (SELECT ACCT_ENG_NM FROM MDM_ACCOUNT WHERE ACCT_CD = T.ACCT_CD) ACCT_ENG_NM
     , VSL_CD||SKD_VOY_NO||SKD_DIR_CD AS VVD
     , INV_NO
FROM PSO_N3RD_PTY_IF T
WHERE (T.ISS_CTY_CD, T.SO_SEQ) IN (
                SELECT ISS_CTY_CD, SO_SEQ
                FROM PSO_CHARGE
                WHERE INV_RGST_NO IN (SELECT INV_RGST_NO
                                      FROM AP_PAY_INV
                                      WHERE CSR_NO = @[csr_no]
                                      AND DELT_FLG = 'N'
                                     )
                )			]]></sql>
			<params>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
