<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="VesselReportDBDAOSearchVslPortSkdRSQL">
			<desc><![CDATA[PK Cleansing 화면의 SKD 조회 쿼리
next port를 위해 +30->45로 변경]]></desc>
			<sql><![CDATA[
SELECT * FROM (
SELECT T1.VSL_SLAN_CD
     , T1.VSL_CD
     , T1.SKD_VOY_NO
     , T1.SKD_DIR_CD
     , T1.VSL_CD || T1.SKD_VOY_NO || T1.SKD_DIR_CD VVD
     , T1.SKD_VOY_NO || T1.SKD_DIR_CD SKD_VOY_DIR
     , T2.CLPT_IND_SEQ
     , T2.VPS_PORT_CD
     , T2.VPS_PORT_CD DEP_PORT_CD
--   , LEAD(T2.VPS_PORT_CD, 1) OVER(ORDER BY T1.VSL_SLAN_CD, T1.VSL_CD, T1.SKD_VOY_NO, T1.SKD_DIR_CD, T2.CLPT_SEQ) NXT_PORT_CD
     , LEAD(T2.VPS_PORT_CD  ) OVER (PARTITION BY T2.VSL_CD ORDER BY T2.SKD_VOY_NO, T5.VSL_SLAN_DIR_SEQ, T2.CLPT_SEQ) AS NXT_PORT_CD
     , TO_CHAR(T2.VPS_ETD_DT, 'YYYY-MM-DD HH24:MI') VPS_ETD_DT
	 , NVL2(R.CLPT_IND_SEQ, 'O', 'X') MTC_YN
--	 , '' FM_DT
--	 , '' TO_DT
     , CLPT_SEQ
  FROM VSK_VSL_SKD T1
     , VSK_VSL_PORT_SKD T2
     , MDM_VSL_SVC_LANE T3
     , MDM_VSL_CNTR T4
	 , FCM_DEP_RPT R
     , MDM_VSL_SVC_LANE_DIR T5
 WHERE 1=1
   AND T1.VSL_CD=T2.VSL_CD
   AND T1.SKD_VOY_NO = T2.SKD_VOY_NO
   AND T1.SKD_DIR_CD = T2.SKD_DIR_CD
   AND T1.VSL_SLAN_CD = T3.VSL_SLAN_CD
   AND T1.VSL_CD = T4.VSL_CD
   AND T2.SLAN_CD          = T5.VSL_SLAN_CD
   AND T2.SKD_DIR_CD       = T5.VSL_SLAN_DIR_CD
   AND NVL(T2.SKD_CNG_STS_CD, 'X') <> 'S'
   AND T3.VSL_SVC_TP_CD <> 'O'
   AND NVL(T1.ACT_CRR_CD, T4.CRR_CD)='SML'
   AND T2.TURN_PORT_IND_CD IN ('Y','N')
   AND T2.VSL_CD = R.VSL_CD(+)
   AND T2.SKD_VOY_NO = R.SKD_VOY_NO(+)
   AND T2.SKD_DIR_CD = R.SKD_DIR_CD(+)
   AND T2.VPS_PORT_CD = R.DEP_PORT_CD(+)
   AND T2.CLPT_IND_SEQ = R.CLPT_IND_SEQ(+)
#if(${fm_dt} != '' && ${to_dt} != '')
-- 화면조건 : FM_DT, TO_DT
   AND T2.VPS_ETD_DT BETWEEN TO_DATE(@[fm_dt], 'YYYY-MM-DD') AND TO_DATE(@[to_dt], 'YYYY-MM-DD') + 45  
#end
#if(${vsl_slan_cd} != '')
-- 화면조건 : vsl_slan_cd
	AND T1.VSL_SLAN_CD IN (
	#foreach($sVslSlanCd in ${vel_vsl_slan_cd})
		'$sVslSlanCd',
	#end
		'')
#end
#if( ${vsl_cd} != '' )
-- 화면조건 : vsl_cd
    AND T1.VSL_CD IN (                     
	#foreach($sVslCd in ${vel_vsl_cd})  
		'$sVslCd',  
	#end  
		'') 
#end
#if( ${vps_port_cd} != '' )
-- 화면조건 : vps_port_cd
    AND T2.VPS_PORT_CD IN (                     
	#foreach($sVslPortCd in ${vel_vps_port_cd})  
		'$sVslPortCd',  
	#end  
		'') 
#end
#if(${skd_dir_cd} != '')
-- 화면조건 : skd_dir_cd
    AND T1.SKD_DIR_CD = @[skd_dir_cd]
#end
) WHERE 1 = 1
#if(${fm_dt} != '' && ${to_dt} != '')
-- 화면조건 : FM_DT, TO_DT
   AND VPS_ETD_DT <= @[to_dt]
#end
ORDER BY VPS_ETD_DT			]]></sql>
			<params>
				<param name="fm_dt" type="12" value="" out="N"/>
				<param name="to_dt" type="12" value="" out="N"/>
				<param name="skd_dir_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
