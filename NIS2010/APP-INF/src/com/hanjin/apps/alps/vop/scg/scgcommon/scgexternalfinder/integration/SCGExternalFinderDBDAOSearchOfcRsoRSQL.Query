<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SCGExternalFinderDBDAOSearchOfcRsoRSQL">
			<desc><![CDATA[2011.04.09 [Ticket-ID:CHM-201109927-01] User 별 소속 Office 의 RSO 가져와 표시 하기]]></desc>
			<sql><![CDATA[
SELECT  CASE WHEN ML.CONTI_CD = 'A' THEN 'ASR'
             WHEN ML.CONTI_CD = 'M' THEN 'AMR'
             WHEN ML.CONTI_CD IN ('E','F') THEN 'EUR' 
             ELSE ''
        END  RGN_SHP_OPR_CD
FROM    COM_USER            MST
    ,   MDM_ORGANIZATION    MO
    ,   MDM_LOCATION        ML
WHERE   1 = 1
  AND     MST.OFC_CD          = MO.OFC_CD
  AND     MO.LOC_CD           = ML.LOC_CD
  AND     MST.USR_ID          = @[usr_id]			]]></sql>
			<params>
				<param name="usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
