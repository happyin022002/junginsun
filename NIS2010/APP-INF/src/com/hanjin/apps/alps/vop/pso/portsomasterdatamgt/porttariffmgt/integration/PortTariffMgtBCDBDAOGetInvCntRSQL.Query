<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PortTariffMgtBCDBDAOGetInvCntRSQL">
			<desc><![CDATA[Delete 버튼 클릭 후 해당 row 의 Invoice 수를 체크한다.]]></desc>
			<sql><![CDATA[
SELECT COUNT(*) INV_CNT 
FROM (
	SELECT B.ISS_CTY_CD,B.SO_SEQ
	  FROM PSO_YD_CHG A, PSO_CHARGE B, PSO_CHG_DTL C
	 WHERE 1=1
	   AND A.YD_CHG_NO      = @[yd_chg_no]
	   AND A.YD_CHG_VER_SEQ = @[yd_chg_ver_seq]
	   AND A.YD_CHG_NO      = C.YD_CHG_NO 
	   AND A.YD_CHG_VER_SEQ = C.YD_CHG_VER_SEQ 
	   AND C.ISS_CTY_CD     = B.ISS_CTY_CD
	   AND C.SO_SEQ         = B.SO_SEQ
	GROUP BY B.ISS_CTY_CD,B.SO_SEQ
)			]]></sql>
			<params>
				<param name="yd_chg_no" type="12" value="" out="N"/>
				<param name="yd_chg_ver_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
