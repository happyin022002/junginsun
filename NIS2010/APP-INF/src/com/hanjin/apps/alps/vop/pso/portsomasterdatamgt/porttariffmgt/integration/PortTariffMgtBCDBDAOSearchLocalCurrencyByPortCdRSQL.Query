<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PortTariffMgtBCDBDAOSearchLocalCurrencyByPortCdRSQL">
			<desc><![CDATA[PORT_CD를 입력받아 지역통화를 구한다. <단건조회>]]></desc>
			<sql><![CDATA[
SELECT NVL(A.CURR_CD, B.AR_CURR_CD) CURRENCY
FROM   MDM_CURRENCY     A
      ,MDM_ORGANIZATION B
WHERE  A.CNT_CD(+) = SUBSTR(B.LOC_CD, 1, 2)
AND    B.DELT_FLG = 'N'
AND    ROWNUM = 1
AND    B.LOC_CD = @[port_cd]			]]></sql>
			<params>
				<param name="port_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
