<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralInvoiceAuditDBDAOsearchApPayInvRSQL">
			<desc><![CDATA[searchApPayInv]]></desc>
			<sql><![CDATA[
select 
    INV_RGST_NO,
    'PSO' INV_SUB_SYS_CD,
    COST_OFC_CD,
    INV_OFC_CD,
    VNDR_SEQ,
    YD_CD,
    INV_NO,
    to_char(ISS_DT, 'YYYYMMDD') INV_ISS_DT,
    to_char(ACPT_DT, 'YYYYMMDD')  INV_RCV_DT,
    to_char(EFF_DT, 'YYYYMMDD')  INV_EFF_DT,
    to_char(ACPT_DT, 'YYYYMMDD')  INV_CFM_DT,
    PAY_TERM_DYS VNDR_TERM_NM,
    to_char(DUE_DT, 'YYYYMMDD')  PAY_DUE_DT,       --iss + Term
    CURR_CD INV_CURR_CD,
    --NVL(INV_LOCL_AMT, 0) - NVL(LOCL_WHLD_TAX_AMT, 0)  INV_TTL_AMT,	--CSR연계시 Withholding Tax를 뺀다.
    NVL(INV_LOCL_AMT, 0)  INV_TTL_AMT,
    LOCL_TAX_AMT INV_VAT_AMT,
    LOCL_WHLD_TAX_AMT WHLD_TAX_AMT, --
    LOCL_NET_AMT INV_NET_AMT,
    LOCL_DDCT_AMT INV_DDCT_AMT,
    'N' TAX_RFND_FLG,
    --TTL_LOCL_AMT INV_AMT,
     LOCL_NET_AMT INV_AMT,
    'N' JO_FLG,
    'N' COM_VVD_FLG,
    'N' INV_RJCT_FLG,
    'N' INV_CXL_FLG,
    'N' EVID_HLD_FLG,
    'N' DELT_FLG,
    'USERID' CRE_USR_ID,
    SYSDATE CRE_DT,
    'USERID' UPD_USR_ID,
    SYSDATE UPD_DT,
	PSO_TRNS_SLP_CTNT,	
    DECODE(PSO_TRNS_SLP_CTNT, 'AR', '투자비보전관련 항비대체 ('||to_char(ISS_DT, 'YYYY.MM')||')' ) INV_RMK
FROM PSO_CHARGE
WHERE 
1=1
#if(${inv_no}!='')
AND INV_NO = @[inv_no]
AND VNDR_SEQ = @[vndr_seq] 
#else
and ISS_CTY_CD = @[iss_cty_cd]
and SO_SEQ = @[so_seq]
#end			]]></sql>
			<params>
				<param name="inv_no" type="12" value="" out="N"/>
				<param name="vndr_seq" type="12" value="" out="N"/>
				<param name="iss_cty_cd" type="12" value="" out="N"/>
				<param name="so_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
