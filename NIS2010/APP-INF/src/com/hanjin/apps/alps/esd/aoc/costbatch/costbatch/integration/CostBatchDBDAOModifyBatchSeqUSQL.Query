<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CostBatchDBDAOModifyBatchSeqUSQL">
			<desc><![CDATA[Re-Batch로 인한 HDR Table의 Batch Seq 수정]]></desc>
			<sql><![CDATA[
#if (${rhq_cd} == 'HAMRU') 
UPDATE  AOC_EUR_INLND_TRF_HDR
#elseif (${rhq_cd} == 'NYCRA') 
UPDATE  AOC_USA_INLND_TRF_HDR
#else
UPDATE  AOC_CHN_INLND_TRF_HDR
#end

SET     COST_TRF_BAT_SEQ = (
                             SELECT  MAX(COST_TRF_BAT_SEQ)
                             FROM    AOC_TRF_BAT
                             WHERE   1 = 1
                             AND     COST_TRF_BAT_SEQ > @[cost_trf_bat_seq]
                             AND     ( CNT_CD, IO_BND_CD ) IN ( (@[cnt_cd], @[io_bnd_cd]) )
                           )
      , UPD_OFC_CD = @[usr_ofc_cd]
      , LOCL_UPD_DT = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[usr_ofc_cd])
      , UPD_USR_ID = @[upd_usr_id]
      , UPD_DT = SYSDATE
WHERE   1 = 1
AND     COST_TRF_NO = @[cost_trf_no]			]]></sql>
			<params>
				<param name="cost_trf_bat_seq" type="12" value="" out="N"/>
				<param name="cnt_cd" type="12" value="" out="N"/>
				<param name="io_bnd_cd" type="12" value="" out="N"/>
				<param name="usr_ofc_cd" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
				<param name="cost_trf_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
