<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="TerminalAgreementManageDBDAOSearchAgreementCostRSQL">
			<desc><![CDATA[Agreement Lgs Cost Code, Flag 정보 조회]]></desc>
			<sql><![CDATA[
SELECT	A.LGS_COST_CD, A.LGS_COST_ABBR_NM, C.TML_AGMT_DIV_FLG
		, A.LGS_COST_CD || '\t' || A.LGS_COST_ABBR_NM AS LGS_COST_CD_NM
FROM	TES_LGS_COST a, TES_TML_AGMT_COST b, TES_TML_AGMT_VRFY_MZD c
WHERE	a.lgs_cost_cd	= b.lgs_cost_cd
AND		a.lgs_cost_cd	= c.lgs_cost_cd																			
AND		(DECODE(@[yd_chr_cd]||@[yd_fcty_tp_mrn_tml_flg]||@[yd_fcty_tp_cy_flg],
								'NYY', b.mrn_tml_flg,
								'NYN', b.mrn_tml_flg,
								'FYY', b.fdck_cy_flg,
								'FNY', b.fdck_cy_flg ) = 'Y'
OR		b.cfs_flg		IN (DECODE(@[yd_fcty_tp_cfs_flg],'N','N','Y'),'N')
OR		b.rail_rmp_flg	IN (DECODE(@[yd_fcty_tp_rail_rmp_flg],'N','N','Y'),'N'))
ORDER BY lgs_cost_opt_no			]]></sql>
			<params>
				<param name="yd_chr_cd" type="12" value="" out="N"/>
				<param name="yd_fcty_tp_mrn_tml_flg" type="12" value="" out="N"/>
				<param name="yd_fcty_tp_cy_flg" type="12" value="" out="N"/>
				<param name="yd_fcty_tp_cfs_flg" type="12" value="" out="N"/>
				<param name="yd_fcty_tp_rail_rmp_flg" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
