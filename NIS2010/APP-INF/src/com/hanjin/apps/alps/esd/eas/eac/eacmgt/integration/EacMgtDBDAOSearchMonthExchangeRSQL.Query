<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="EacMgtDBDAOSearchMonthExchangeRSQL">
			<desc><![CDATA[환율정보조회]]></desc>
			<sql><![CDATA[
SELECT  ROUND 
        ( 
            @[expn_aud_rslt_inv_aud_diff_amt] / 
            (   SELECT  USD_LOCL_XCH_RT
                FROM    GL_MON_XCH_RT XCH 
                WHERE   XCH.ACCT_XCH_RT_YRMON   = to_char(to_date(@[inv_cfm_dt], 'YYYY-MM-dd'), 'YYYYMM') -- Confirm Date
                AND     XCH.ACCT_XCH_RT_LVL     = 1
                AND     XCH.CURR_CD             = @[curr_cd] -- w/o 또는 invoice currency
            ) , 2
        ) AS EXPN_AUD_RSLT_INV_USD_DIFF_AMT
FROM    DUAL			]]></sql>
			<params>
				<param name="expn_aud_rslt_inv_aud_diff_amt" type="12" value="" out="N"/>
				<param name="inv_cfm_dt" type="12" value="" out="N"/>
				<param name="curr_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
