<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PsoadvanceauditDBDAOMultiPsoConfigUSQL">
			<desc><![CDATA[Pre-Audit Criterion setting 내역을 저장한다 ]]></desc>
			<sql><![CDATA[
MERGE INTO EAS_PORT_SO_CHG_ACCT K USING DUAL
ON(    K.LGS_COST_CD = @[cost_cd]
   AND K.AUD_OFC_CD = @[aud_ofc_cd]
) 
WHEN MATCHED THEN
    UPDATE
    SET LGS_COST_AUD_FLG = DECODE(@[lgs_cost_aud_flg],0,'N','Y')
       ,EXPN_MAX_PRMT_RTO = @[expn_max_prmt_rto]
       ,EXPN_PRMT_RTO_RSN = @[expn_prmt_rto_rsn]
       ,UPD_USR_ID = @[upd_usr_id]
       ,UPD_DT = SYSDATE
WHEN NOT MATCHED THEN
    INSERT(
     K.LGS_COST_CD
    ,K.LGS_COST_AUD_FLG
    ,K.EXPN_MAX_PRMT_RTO
    ,K.EXPN_PRMT_RTO_RSN
    ,K.AUD_OFC_CD 
    ,K.CRE_USR_ID
    ,K.CRE_DT
    ,K.UPD_USR_ID
    ,K.UPD_DT
    )
    VALUES
    (
      @[cost_cd]
    , DECODE(@[lgs_cost_aud_flg],0,'N','Y')
    , @[expn_max_prmt_rto]
    , @[expn_prmt_rto_rsn]
    , @[aud_ofc_cd]
    , @[upd_usr_id]
    , SYSDATE
    , @[upd_usr_id]
    , SYSDATE
    )			]]></sql>
			<params>
				<param name="cost_cd" type="12" value="" out="N"/>
				<param name="aud_ofc_cd" type="12" value="" out="N"/>
				<param name="lgs_cost_aud_flg" type="12" value="" out="N"/>
				<param name="expn_max_prmt_rto" type="12" value="" out="N"/>
				<param name="expn_prmt_rto_rsn" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
