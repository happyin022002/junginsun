<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RailBillingReqCreateDBDAOsearchRailBillingReqCreateEmptyRSQL">
			<desc><![CDATA[Rail Billing Empty Cntr Request : Location 별 Billing 가능 Cntr Type 조회]]></desc>
			<sql><![CDATA[
SELECT   x.yd_cd                                                              
        			,x.yd_nm                                                              
        			,x.yd_addr                                                            
        			,x.d2_flg                                                             
        			,x.d4_flg                                                             
        			,x.d5_flg                                                             
        			,x.d7_flg                                                             
        			,x.o2_flg                                                             
        			,x.o4_flg                                                             
        			,x.a2_flg                                                             
        			,x.a4_flg
					,x.a5_flg                                                             
        			,x.r5_flg                                                             
        			,x.r2_flg 
        			,x.o5_flg                                                            
        			,x.loc_cd                                                             
        			,x.loc_nm                                                              
        	    FROM (SELECT   SUBSTR(rout_org_nod_cd, 1, 5) loc_cd                       
        	                  ,MAX(b.loc_nm) loc_nm                                       
        	                  ,rout_org_nod_cd yd_cd                                      
        	                  ,MAX(c.yd_nm) yd_nm                                         
        	                  ,REPLACE(MAX(c.yd_addr), CHR(13) || CHR(10), ' ') yd_addr   
        	                  ,NVL(MAX(d2_capa_flg), 'N') d2_flg                          
        	                  ,NVL(MAX(d4_capa_flg), 'N') d4_flg                          
        	                  ,NVL(MAX(d5_capa_flg), 'N') d5_flg                          
        	                  ,NVL(MAX(d7_capa_flg), 'N') d7_flg                          
        	                  ,NVL(MAX(o2_capa_flg), 'N') o2_flg                          
        	                  ,NVL(MAX(o4_capa_flg), 'N') o4_flg                          
        	                  ,NVL(MAX(a2_capa_flg), 'N') a2_flg                          
        	                  ,NVL(MAX(a4_capa_flg), 'N') a4_flg
							  ,NVL(MAX(a5_capa_flg), 'N') a5_flg                         
        	                  ,NVL(MAX(r5_capa_flg), 'N') r5_flg                          
        	                  ,NVL(MAX(r2_capa_flg), 'N') r2_flg  
        	                  ,NVL(MAX(o5_capa_flg), 'N') o5_flg                          
        	              FROM prd_inlnd_rout_mst a, mdm_location b, mdm_yard c           
        	             WHERE SUBSTR(rout_org_nod_cd, 1, 5) = b.loc_cd                   
        	               AND a.rout_org_nod_cd = c.yd_cd   
        	               AND a.pctl_io_bnd_cd = @[pctl_io_bnd_cd]                                       
        	               AND NVL(a.delt_flg, 'N') = 'N'                                 
        	               AND a.wrs_mty_cmdt_cd IS NOT NULL                              
        	          GROUP BY rout_org_nod_cd) x                                         
        	ORDER BY x.loc_nm, x.yd_nm			]]></sql>
			<params>
				<param name="pctl_io_bnd_cd" type="12" value="M" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
