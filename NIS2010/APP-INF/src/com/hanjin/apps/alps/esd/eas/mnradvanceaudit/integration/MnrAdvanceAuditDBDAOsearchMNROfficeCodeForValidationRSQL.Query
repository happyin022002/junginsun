<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="MnrAdvanceAuditDBDAOsearchMNROfficeCodeForValidationRSQL">
			<desc><![CDATA[사용자가 입력한 OFFICE CODE가 실제 존재하는지 여부를 파악하는 쿼리]]></desc>
			<sql><![CDATA[
SELECT A.OFC_CD,
       EAS_0363,
       EAS_0362,
	   DECODE(MNR_COMMON_PKG.MNR_GET_RHQ_OFC_FNC(A.OFC_CD),A.OFC_CD,'Y','N') RHQ_OFC_CD
  FROM MDM_ORGANIZATION A,
  (SELECT DISTINCT AUD_OFC_CD OFC_CD,
       'Y' EAS_0363
  FROM EAS_MNR_PRE_AUD_RTO_CFG) B,
  (SELECT DISTINCT AUD_OFC_CD OFC_CD,
       'Y' EAS_0362
  FROM EAS_MNR_PRE_AUD_VRFY_CFG) C
 WHERE 1 = 1
   AND A.DELT_FLG = 'N'
   AND A.OFC_CD = @[i_ofc_cd]
   AND A.OFC_CD = B.OFC_CD (+)
   AND A.OFC_CD = C.OFC_CD (+)			]]></sql>
			<params>
				<param name="i_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
