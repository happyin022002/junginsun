<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AsiaOceanFeederCostManageDBDAOSearchFeederCostTariffInfoRSQL">
			<desc><![CDATA[searchFeederCostTariffInfo

* History
2013.01.14 이혜민 CHM-201322300 [AOC] Batch creation 시 기준 WGT 입력 기능추가 요청]]></desc>
			<sql><![CDATA[
SELECT  A.COST_TRF_STS_CD
       ,COMMCODE_PKG.GET_COMDTL_NAME_FNC('CD03051', A.COST_TRF_STS_CD) COST_TRF_STS_NM
       , ( SELECT  CURR_CD
          FROM    AOC_CHN_FDR_TRF_DTL D
          WHERE   D.COST_TRF_NO = A.COST_TRF_NO
          AND     ROWNUM <= 1
        ) CURR_CD
       ,TO_CHAR(A.EFF_FM_DT, 'YYYY-MM-DD') EFF_FM_DT
       ,TO_CHAR(A.LOCL_UPD_DT, 'YYYY-MM-DD') UPD_DT
       ,(SELECT USR_NM FROM COM_USER
          WHERE USR_ID = A.UPD_USR_ID ) UPD_USR_ID
       ,(SELECT DECODE(GUI_FLG, 'Y', 'Y', 'N', DECODE(TAR_FLG, 'Y', 'Y', 'N'), 'N')
         FROM (
         SELECT
           (--Ocean Cost의 Tariff No.가 가장 최신인지 여부 확인
            SELECT CASE WHEN COUNT(1) > 0 THEN 'Y' ELSE 'N' END
              FROM AOC_CHN_FDR_TRF_HDR
             WHERE RHQ_CD = AOC_TRF_CALC_PKG.GET_RHQ_OFC_CD(@[in_ofc_cd])
               AND COST_TRF_NO > @[in_cost_trf_no]
           )
           AS TAR_FLG,
           (--Ocean Feeder Cost의 Guideline 존재 여부 확인
            SELECT CASE WHEN COUNT(1) > 0 THEN 'Y' ELSE 'N' END
              FROM PRI_TRF_FDR_COST_VER_MAPG
             WHERE 1 = 1
               AND FDR_COST_TRF_NO = @[in_cost_trf_no]
           )
           AS GUI_FLG
        FROM DUAL)) NEXT_TRF_FLG             
       ,A.RHQ_CD
       , (
          SELECT  CNTR_40FT_CRTE_WGT
          FROM    AOC_TRF_BAT
          WHERE   1 = 1
          AND     COST_TRF_BAT_SEQ = A.COST_TRF_BAT_SEQ
        ) CNTR_40FT_CRTE_WGT
       , (
          SELECT  CNTR_20FT_CRTE_WGT
          FROM    AOC_TRF_BAT
          WHERE   1 = 1
          AND     COST_TRF_BAT_SEQ = A.COST_TRF_BAT_SEQ
        ) CNTR_20FT_CRTE_WGT 	
  FROM AOC_CHN_FDR_TRF_HDR A
 WHERE A.COST_TRF_NO = @[in_cost_trf_no]			]]></sql>
			<params>
				<param name="in_ofc_cd" type="12" value="" out="N"/>
				<param name="in_cost_trf_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
