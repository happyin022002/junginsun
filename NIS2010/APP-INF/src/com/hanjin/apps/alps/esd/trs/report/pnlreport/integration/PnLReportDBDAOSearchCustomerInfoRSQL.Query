<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PnLReportDBDAOSearchCustomerInfoRSQL">
			<desc><![CDATA[2012.07.24 변종건 [CHM-201217633] Customer 정보 조회]]></desc>
			<sql><![CDATA[
SELECT  CUST_CNT_CD || LPAD(CUST_SEQ,6,'0') AS CUST_CD
      , CUST_LGL_ENG_NM AS CUST_NM
FROM    MDM_CUSTOMER
WHERE   1 = 1
AND     CUST_CNT_CD = SUBSTRB(TRIM(@[s_cust_cd]),1,2)
AND     CUST_SEQ = TO_NUMBER(SUBSTRB(TRIM(@[s_cust_cd]),3))
AND     DELT_FLG = 'N'
AND     ROWNUM = 1			]]></sql>
			<params>
				<param name="s_cust_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
