<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="TrsAudDBDAOSearchSpecialSoOfTransportRSQL">
			<desc><![CDATA[Special S/O of Transport 조회]]></desc>
			<sql><![CDATA[
SELECT S.EQ_NO
      ,S.EQ_TPSZ_CD
      ,S.TRSP_CRR_MOD_CD
	  ,( SELECT INTG_CD_VAL_DP_DESC FROM COM_INTG_CD_DTL WHERE INTG_CD_ID = 'CD00279' AND INTG_CD_VAL_CTNT = S.TRSP_SO_TP_CD ) TRSP_SO_TP_CD
      ,S.TRSP_SO_OFC_CTY_CD||S.TRSP_SO_SEQ AS SO_NO
      ,TO_CHAR (S.LOCL_CRE_DT, 'YYYY-MM-DD HH24:MI:SS') SO_LOCL_CRE_DT
      ,(SELECT X.USR_NM FROM COM_USER X WHERE X.USR_ID = S.UPD_USR_ID) AS SO_USR_NM     
      ,S.TRSP_WO_OFC_CTY_CD||S.TRSP_WO_SEQ AS WO_NO
      ,TO_CHAR (W.LOCL_CRE_DT, 'YYYY-MM-DD HH24:MI:SS') WO_LOCL_CRE_DT
      ,W.CRE_OFC_CD WO_OFC_CD
      ,(SELECT X.USR_NM FROM COM_USER X WHERE X.USR_ID = W.CRE_USR_ID) AS WO_USR_NM      
      ,S.FM_NOD_CD
      ,S.VIA_NOD_CD
      ,S.TO_NOD_CD
      ,S.DOR_NOD_CD
      ,WVDR.VNDR_SEQ
      ,WVDR.VNDR_ABBR_NM AS VNDR_NM
      ,PVNDR.VNDR_SEQ AS PRNT_VNDR_SEQ
      ,PVNDR.VNDR_ABBR_NM AS PRNT_VNDR_NM
      ,S.N3PTY_BIL_FLG
      ,S.CURR_CD
      ,S.BZC_AMT
      ,S.NEGO_AMT
      ,S.FUEL_SCG_AMT
      ,S.SCG_VAT_AMT
      ,S.ETC_ADD_AMT
      ,S.BZC_AMT + NVL (S.FUEL_SCG_AMT, 0)+ NVL (S.SCG_VAT_AMT, 0) + NVL (S.NEGO_AMT, 0) + NVL (S.ETC_ADD_AMT, 0)+NVL (S.HJL_HNDL_AMT, 0) AS WO_TOT_AMT
      ,ROUND ((NVL (S.BZC_AMT, 0) + NVL (S.FUEL_SCG_AMT, 0) + NVL (S.NEGO_AMT, 0) + NVL (S.ETC_ADD_AMT, 0) + NVL (S.HJL_HNDL_AMT, 0) + NVL (S.SCG_VAT_AMT, 0)) / 
             CASE WHEN NVL(S.CURR_CD,'USD') = 'USD' THEN 1
                  ELSE 
                  (SELECT USD_LOCL_XCH_RT
                     FROM GL_MON_XCH_RT XCH
                    WHERE XCH.ACCT_XCH_RT_LVL = 1 
                      AND XCH.CURR_CD           = S.CURR_CD
                      AND XCH.ACCT_XCH_RT_YRMON = NVL(TO_CHAR(W.LOCL_CRE_DT,'YYYYMM'),TO_CHAR (S.LOCL_CRE_DT, 'YYYYMM')))
                   END
             , 2) WO_USD_TOT_AMT
      ,S.INV_NO
      ,IVDR.VNDR_SEQ AS INV_VNDR_SEQ
      ,REPLACE(REPLACE(DECODE(S.TRSP_SO_TP_CD, 'S', S.SPL_ISS_RSN, S.TRSP_PURP_RSN), CHR(13)||CHR(10), ' '), chr(34), '') TRSP_PURP_RSN  
      ,REPLACE(REPLACE(S.INTER_RMK, CHR(13)||CHR(10), ' '), chr(34), '')  INTER_RMK
      ,REPLACE(REPLACE(S.SPCL_INSTR_RMK, CHR(13)||CHR(10), ' '), chr(34), '')  SPCL_INSTR_RMK
      ,S.BKG_NO
	  ,S.POR_CD
      ,S.POL_CD
      ,S.POD_CD
      ,S.DEL_CD
      ,(SELECT 'Y'
          FROM EAS_TRSP_COST_CHK X
         WHERE X.TRSP_SO_OFC_CTY_CD = S.TRSP_SO_OFC_CTY_CD
           AND X.TRSP_SO_SEQ        = S.TRSP_SO_SEQ
           AND X.EAC_SYS_IF_CD      = 'TR1'
           AND X.LGS_COST_CD        = 'XXXXXX'
        ) EAC_IF_FLG
      ,CASE WHEN S.TRSP_SO_TP_CD = 'Y' THEN 1
            WHEN S.TRSP_SO_TP_CD = 'S' THEN 2
            WHEN S.TRSP_SO_TP_CD = 'O' THEN 3
       END ORD
  FROM TRS_TRSP_SVC_ORD S
      ,TRS_TRSP_WRK_ORD W
      ,MDM_VENDOR WVDR
      ,MDM_VENDOR PVNDR
      ,MDM_VENDOR IVDR
 WHERE 1=1
   AND S.TRSP_WO_OFC_CTY_CD = W.TRSP_WO_OFC_CTY_CD
   AND S.TRSP_WO_SEQ        = W.TRSP_WO_SEQ   
   AND WVDR.VNDR_SEQ = CASE WHEN S.HJL_NO IS NOT NULL THEN (SELECT X.HJL_VNDR_SEQ FROM TRS_TRSP_HJL_SVC_ORD X WHERE X.TRSP_SO_OFC_CTY_CD = S.TRSP_SO_OFC_CTY_CD AND X.TRSP_SO_SEQ = S.TRSP_SO_SEQ)
                            ELSE S.VNDR_SEQ
                       END
   AND PVNDR.VNDR_SEQ = WVDR.PRNT_VNDR_SEQ
   AND IVDR.VNDR_SEQ = CASE WHEN S.HJL_NO IS NOT NULL THEN (SELECT X.HJL_INV_VNDR_SEQ FROM TRS_TRSP_HJL_SVC_ORD X WHERE X.TRSP_SO_OFC_CTY_CD = S.TRSP_SO_OFC_CTY_CD AND X.TRSP_SO_SEQ = S.TRSP_SO_SEQ)
                            ELSE S.VNDR_SEQ
                       END   
   AND S.DELT_FLG = 'N'
   AND W.DELT_FLG = 'N'
   AND S.TRSP_SO_TP_CD IN ('S', 'O')

   AND S.CRE_OFC_CD IN (SELECT OFC_CD
                          FROM MDM_ORGANIZATION
                         WHERE DELT_FLG = 'N'
                       CONNECT BY NOCYCLE PRIOR OFC_CD = PRNT_OFC_CD
                       START WITH OFC_CD = @[s_rhq_ofc_cd]
                       )
   #if (${s_ofc_cd} != '')
   AND S.CRE_OFC_CD = @[s_ofc_cd]
   #end
   AND S.LOCL_CRE_DT BETWEEN TO_DATE (REPLACE(@[s_fm_dt],'-',''), 'rrrrmmdd') AND TO_DATE (REPLACE(@[s_to_dt],'-',''), 'rrrrmmdd') + 0.999999
   #if (${s_bnd_cd} != '')
        AND S.TRSP_BND_CD = @[s_bnd_cd]
   #end
   #if (${s_trsp_crr_mod_cd} != '')
        AND S.TRSP_CRR_MOD_CD = @[s_trsp_crr_mod_cd]
   #end
   #if (${s_eac_if} != '')
      #if (${s_eac_if} == 'Y')
         AND EXISTS (SELECT '1'
                       FROM EAS_TRSP_COST_CHK X
                      WHERE X.TRSP_SO_OFC_CTY_CD = S.TRSP_SO_OFC_CTY_CD
                        AND X.TRSP_SO_SEQ        = S.TRSP_SO_SEQ
                        AND X.EAC_SYS_IF_CD      = 'TR1'
                        AND X.LGS_COST_CD        = 'XXXXXX'
                     )
      #else
         AND NOT EXISTS (SELECT '1'
                           FROM EAS_TRSP_COST_CHK X
                          WHERE X.TRSP_SO_OFC_CTY_CD = S.TRSP_SO_OFC_CTY_CD
                            AND X.TRSP_SO_SEQ        = S.TRSP_SO_SEQ
                            AND X.EAC_SYS_IF_CD      = 'TR1'
                            AND X.LGS_COST_CD        = 'XXXXXX'
                         )
      #end
   #end
UNION 
SELECT S.EQ_NO
      ,S.EQ_TPSZ_CD
      ,S.TRSP_CRR_MOD_CD
      ,( SELECT INTG_CD_VAL_DP_DESC FROM COM_INTG_CD_DTL WHERE INTG_CD_ID = 'CD00279' AND INTG_CD_VAL_CTNT = S.TRSP_SO_TP_CD ) TRSP_SO_TP_CD
      ,S.TRSP_SO_OFC_CTY_CD||S.TRSP_SO_SEQ AS SO_NO
      ,TO_CHAR (S.LOCL_CRE_DT, 'YYYY-MM-DD HH24:MI:SS') SO_LOCL_CRE_DT
      ,(SELECT X.USR_NM FROM COM_USER X WHERE X.USR_ID = S.UPD_USR_ID) AS SO_USR_NM     
      ,S.TRSP_WO_OFC_CTY_CD||S.TRSP_WO_SEQ AS WO_NO
      ,TO_CHAR (W.LOCL_CRE_DT, 'YYYY-MM-DD HH24:MI:SS') WO_LOCL_CRE_DT
      ,W.CRE_OFC_CD
      ,(SELECT X.USR_NM FROM COM_USER X WHERE X.USR_ID = W.CRE_USR_ID) AS WO_USR_NM      
      ,S.FM_NOD_CD
      ,S.VIA_NOD_CD
      ,S.TO_NOD_CD
      ,S.DOR_NOD_CD
      ,WVDR.VNDR_SEQ
      ,WVDR.VNDR_ABBR_NM AS VNDR_NM
      ,PVNDR.VNDR_SEQ AS PRNT_VNDR_SEQ
      ,PVNDR.VNDR_ABBR_NM AS PRNT_VNDR_NM
      ,S.N3PTY_BIL_FLG
      ,S.CURR_CD
      ,S.BZC_AMT
      ,S.NEGO_AMT
      ,S.FUEL_SCG_AMT
      ,S.SCG_VAT_AMT
      ,S.ETC_ADD_AMT
      ,S.BZC_AMT + NVL (S.FUEL_SCG_AMT, 0)+ NVL (S.SCG_VAT_AMT, 0) + NVL (S.NEGO_AMT, 0) + NVL (S.ETC_ADD_AMT, 0)+NVL (S.HJL_HNDL_AMT, 0) AS WO_TOT_AMT
      ,ROUND ((NVL (S.BZC_AMT, 0) + NVL (S.FUEL_SCG_AMT, 0) + NVL (S.NEGO_AMT, 0) + NVL (S.ETC_ADD_AMT, 0) + NVL (S.HJL_HNDL_AMT, 0) + NVL (S.SCG_VAT_AMT, 0)) / 
             CASE WHEN NVL(S.CURR_CD,'USD') = 'USD' THEN 1
                  ELSE 
                  (SELECT USD_LOCL_XCH_RT
                     FROM GL_MON_XCH_RT XCH
                    WHERE XCH.ACCT_XCH_RT_LVL = 1 
                      AND XCH.CURR_CD           = S.CURR_CD
                      AND XCH.ACCT_XCH_RT_YRMON = NVL(TO_CHAR(W.LOCL_CRE_DT,'YYYYMM'),TO_CHAR (S.LOCL_CRE_DT, 'YYYYMM')))
                   END
             , 2) WO_USD_TOT_AMT
      ,S.INV_NO
      ,IVDR.VNDR_SEQ AS INV_VNDR_SEQ
      ,REPLACE(REPLACE(DECODE(S.TRSP_SO_TP_CD, 'S', S.SPL_ISS_RSN, S.TRSP_PURP_RSN), CHR(13)||CHR(10), ' '), chr(34), '') TRSP_PURP_RSN  
      ,REPLACE(REPLACE(S.INTER_RMK, CHR(13)||CHR(10), ' '), chr(34), '')  INTER_RMK
      ,REPLACE(REPLACE(S.SPCL_INSTR_RMK, CHR(13)||CHR(10), ' '), chr(34), '')  SPCL_INSTR_RMK
      ,S.BKG_NO
      ,S.POR_CD
      ,S.POL_CD
      ,S.POD_CD
      ,S.DEL_CD
      ,(SELECT 'Y'
          FROM EAS_TRSP_COST_CHK X
         WHERE X.TRSP_SO_OFC_CTY_CD = S.TRSP_SO_OFC_CTY_CD
           AND X.TRSP_SO_SEQ        = S.TRSP_SO_SEQ
           AND X.EAC_SYS_IF_CD      = 'TR1'
           AND X.LGS_COST_CD        = 'XXXXXX'
        ) EAC_IF_FLG
      ,CASE WHEN S.TRSP_SO_TP_CD = 'Y' THEN 1
            WHEN S.TRSP_SO_TP_CD = 'S' THEN 2
            WHEN S.TRSP_SO_TP_CD = 'O' THEN 3
       END ORD      
  FROM TRS_TRSP_SVC_ORD S
      ,TRS_TRSP_WRK_ORD W
      ,MDM_VENDOR WVDR
      ,MDM_VENDOR PVNDR
      ,MDM_VENDOR IVDR
 WHERE 1=1
   AND S.TRSP_WO_OFC_CTY_CD = W.TRSP_WO_OFC_CTY_CD
   AND S.TRSP_WO_SEQ        = W.TRSP_WO_SEQ   
   AND WVDR.VNDR_SEQ = CASE WHEN S.HJL_NO IS NOT NULL THEN (SELECT X.HJL_VNDR_SEQ FROM TRS_TRSP_HJL_SVC_ORD X WHERE X.TRSP_SO_OFC_CTY_CD = S.TRSP_SO_OFC_CTY_CD AND X.TRSP_SO_SEQ = S.TRSP_SO_SEQ)
                            ELSE S.VNDR_SEQ
                       END
   AND PVNDR.VNDR_SEQ = WVDR.PRNT_VNDR_SEQ
   AND IVDR.VNDR_SEQ = CASE WHEN S.HJL_NO IS NOT NULL THEN (SELECT X.HJL_INV_VNDR_SEQ FROM TRS_TRSP_HJL_SVC_ORD X WHERE X.TRSP_SO_OFC_CTY_CD = S.TRSP_SO_OFC_CTY_CD AND X.TRSP_SO_SEQ = S.TRSP_SO_SEQ)
                            ELSE S.VNDR_SEQ
                       END   
   AND S.DELT_FLG = 'N'
   AND W.DELT_FLG = 'N'
   AND (S.TRSP_SO_OFC_CTY_CD, S.TRSP_SO_SEQ) IN (SELECT X.PRNT_TRSP_SO_OFC_CTY_CD
                                                       ,X.PRNT_TRSP_SO_SEQ
                                                   FROM TRS_TRSP_SVC_ORD X
                                                  WHERE X.TRSP_SO_TP_CD = 'S'
                                                    AND X.DELT_FLG = 'N'
                                                    AND X.CRE_OFC_CD IN (SELECT OFC_CD
                                                                           FROM MDM_ORGANIZATION
                                                                          WHERE DELT_FLG = 'N'
                                                                        CONNECT BY NOCYCLE PRIOR OFC_CD = PRNT_OFC_CD
                                                                          START WITH OFC_CD = @[s_rhq_ofc_cd]
                                                                         )
                                                    #if (${s_ofc_cd} != '')
                                                    AND X.CRE_OFC_CD = @[s_ofc_cd]
                                                    #end
                                                    AND X.LOCL_CRE_DT BETWEEN TO_DATE (REPLACE(@[s_fm_dt],'-',''), 'rrrrmmdd') AND TO_DATE (REPLACE(@[s_to_dt],'-',''), 'rrrrmmdd') + 0.999999
                                                    #if (${s_bnd_cd} != '')
                                                        AND X.TRSP_BND_CD = @[s_bnd_cd]
                                                    #end
                                                    #if (${s_trsp_crr_mod_cd} != '')
                                                        AND X.TRSP_CRR_MOD_CD = @[s_trsp_crr_mod_cd]
                                                    #end
                                                ) 
   AND S.TRSP_SO_TP_CD IN ('Y', 'M')
   #if (${s_eac_if} != '')
      #if (${s_eac_if} == 'Y')
         AND EXISTS (SELECT '1'
                       FROM EAS_TRSP_COST_CHK X
                      WHERE X.TRSP_SO_OFC_CTY_CD = S.TRSP_SO_OFC_CTY_CD
                        AND X.TRSP_SO_SEQ        = S.TRSP_SO_SEQ
                        AND X.EAC_SYS_IF_CD      = 'TR1'
                        AND X.LGS_COST_CD        = 'XXXXXX'
                     )
      #else
         AND NOT EXISTS (SELECT '1'
                           FROM EAS_TRSP_COST_CHK X
                          WHERE X.TRSP_SO_OFC_CTY_CD = S.TRSP_SO_OFC_CTY_CD
                            AND X.TRSP_SO_SEQ        = S.TRSP_SO_SEQ
                            AND X.EAC_SYS_IF_CD      = 'TR1'
                            AND X.LGS_COST_CD        = 'XXXXXX'
                         )
      #end
   #end
 ORDER BY EQ_NO, VNDR_SEQ, ORD			]]></sql>
			<params>
				<param name="s_rhq_ofc_cd" type="12" value="" out="N"/>
				<param name="s_ofc_cd" type="12" value="" out="N"/>
				<param name="s_fm_dt" type="12" value="" out="N"/>
				<param name="s_to_dt" type="12" value="" out="N"/>
				<param name="s_bnd_cd" type="12" value="" out="N"/>
				<param name="s_trsp_crr_mod_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
