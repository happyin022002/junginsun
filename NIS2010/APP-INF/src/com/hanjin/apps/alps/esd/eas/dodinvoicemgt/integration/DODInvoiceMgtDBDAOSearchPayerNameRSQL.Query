<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DODInvoiceMgtDBDAOSearchPayerNameRSQL">
			<desc><![CDATA[SearchPayerName]]></desc>
			<sql><![CDATA[
SELECT 'EAS' AS JOB_TP
	,'' AS GUBUN
	, PAYR_NM AS PAYR_NM
FROM EAS_PAYR_INFO 
WHERE  CUST_CNT_CD 	= SUBSTR(@[s_cust_cd], 1, 2)
AND    CUST_SEQ 		= SUBSTR(@[s_cust_cd], 3)
#if (${s_cust_gubun} == '1') 
UNION ALL
SELECT 'MDM' AS JOB_TP
	,'GENERAL' AS GUBUN
	,VNDR_LGL_ENG_NM AS PAYR_NM
FROM MDM_VENDOR
WHERE VNDR_SEQ 			= @[s_cust_cd]
#elseif (${s_cust_gubun} == '2') 
UNION ALL
SELECT 'MDM' AS JOB_TP
    ,'CREDIT' AS GUBUN
    ,LOCL_NM  AS PAYR_NM
FROM MDM_CR_CUST
WHERE CUST_CNT_CD 		= SUBSTR(@[s_cust_cd], 1, 2)
AND CUST_SEQ 			= SUBSTR(@[s_cust_cd], 3)
UNION ALL
SELECT 'MDM' AS JOB_TP
    ,'GENERAL' AS GUBUN
    ,CUST_LGL_ENG_NM AS PAYR_NM
FROM MDM_CUSTOMER
WHERE CUST_CNT_CD 		= SUBSTR(@[s_cust_cd], 1, 2)
AND CUST_SEQ 			= SUBSTR(@[s_cust_cd], 3)
#end
			]]></sql>
			<params>
				<param name="s_cust_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
