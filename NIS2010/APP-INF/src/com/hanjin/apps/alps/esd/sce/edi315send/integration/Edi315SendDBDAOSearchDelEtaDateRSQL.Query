<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="Edi315SendDBDAOSearchDelEtaDateRSQL">
			<desc><![CDATA[TRAMS MODE에 따른 DEL ETA를 구한다.]]></desc>
			<sql><![CDATA[
SELECT 	TO_CHAR(ESTM_DT,'YYYYMMDDHH24MI') DEL_ETA,
		TO_CHAR(ESTM_GDT,'YYYYMMDDHH24MI') DEL_ETA_GMT,
		TO_CHAR(ACT_DT,'YYYYMMDDHH24MI') DEL_ATA,
        DECODE(NOD_CD, NULL, '', DECODE(ACT_DT, NULL, '', TO_CHAR(GLOBALDATE_PKG.TIME_CONV_FNC(SUBSTR(NOD_CD,0,5), ACT_DT, 'GMT'), 'YYYYMMDDHH24MI'))) DEL_ATA_GMT
FROM (
      SELECT  CASE WHEN SUBSTR(A.COP_RAIL_CHK_CD ,2,1) = 'I' THEN
             CASE WHEN B.ACT_CD = 'FIRRUD' THEN '1' 
                  WHEN B.ACT_CD = 'FITZAD' THEN '2' END 
        ELSE CASE WHEN B.ACT_CD = 'FIWMUD' THEN '3' 
                  WHEN B.ACT_CD = 'FITZAD' THEN '4'  END
        END CHK, ESTM_DT, ESTM_GDT, ACT_DT, NOD_CD
 FROM SCE_COP_HDR A, SCE_COP_DTL B
 WHERE A.COP_NO = B.COP_NO
   AND A.DEL_NOD_CD = B.NOD_CD
   AND A.COP_NO = @[e_cop_no]) A
   WHERE CHK IS NOT NULL
   AND ROWNUM = 1			]]></sql>
			<params>
				<param name="e_cop_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
