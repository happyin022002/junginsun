<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ReplanManageDBDAOSearchSoByPlnSoRSQL">
			<desc><![CDATA[cop_no 와 cost_act_grp_seq 로 so 정보를 찾는다]]></desc>
			<sql><![CDATA[
select 
	trsp_so_ofc_cty_cd,
	trsp_so_seq,
	bkg_no,
	trsp_so_sts_cd,
	cop_no,
	cost_act_grp_seq
from
	trs_trsp_rail_bil_ord
where 
	cop_no = @[cop_no]
	and cost_act_grp_seq = @[cost_act_grp_seq]
	and nvl(delt_flg, 'N') = 'N'

union all

select 
	trsp_so_ofc_cty_cd,
	trsp_so_seq,
	bkg_no,
	trsp_so_sts_cd,
	cop_no,
	cost_act_grp_seq
from
	trs_trsp_svc_ord
where 
	cop_no = @[cop_no]
	and cost_act_grp_seq = @[cost_act_grp_seq]
	and nvl(delt_flg, 'N') = 'N'
			]]></sql>
			<params>
				<param name="cop_no" type="12" value="" out="N"/>
				<param name="cost_act_grp_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
