<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccrualBatchExecuteResultDBDAOSearchOfficeTypeCheckRSQL">
			<desc><![CDATA[SearchOfficeTypeCheck]]></desc>
			<sql><![CDATA[
SELECT   X.OFC_CD       
        , CASE WHEN X.OFC_TP_CD   = 'HT' THEN 'HT'  /* 본사 */
              WHEN X.OFC_KND_CD  = '2'  THEN 'HQ'  /* 지역본부 또는 지역본부직속 */
              ELSE 'OTH'
         END                            AS OFC_TP_CD 
--      ,  CASE WHEN X.OFC_TP_CD   = 'HT' THEN 'HT'  /* 본사 */
--              WHEN X.OFC_KND_CD  = '2'  THEN X.AR_HD_QTR_OFC_CD  /* 지역본부 또는 지역본부직속 */
--              ELSE ''
--         END                            AS RHQ_CD
FROM     MDM_ORGANIZATION   X 
WHERE    X.DELT_FLG         = 'N' 
AND       X.OFC_CD          = @[ofc_cd]  /* Login or changed office binding */
			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
