<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DODInvoiceMgtDBDAOSearchPayerPhoneNoRSQL">
			<desc><![CDATA[PayerPhone조회]]></desc>
			<sql><![CDATA[
SELECT DISTINCT 'EAS' AS JOB_TP
	,'' AS GUBUN
	,CNTC_PNT_PHN_NO AS CNTC_PNT_PHN_NO
FROM EAS_PAYR_CNTC_PNT LL
WHERE CUST_CNT_CD 	= SUBSTR(@[s_cust_cd], 1, 2)
AND   CUST_SEQ 			= SUBSTR(@[s_cust_cd], 3)
#if (${s_cust_gubun} == '1') 
UNION ALL
-- MDM - GENERAL
SELECT DISTINCT 'MDM' AS JOB_TP
    ,'GENERAL'   AS GUBUN
    , B.PHN_NO   AS CNTC_PNT_PHN_NO
FROM MDM_VENDOR A, MDM_VNDR_CNTC_PNT B
WHERE A.VNDR_SEQ 		= B.VNDR_SEQ
AND A.VNDR_SEQ 			= @[s_cust_cd]
AND B.PHN_NO IS NOT NULL
#elseif (${s_cust_gubun} == '2') 
UNION ALL
-- MDM - CREDIT
SELECT DISTINCT 'MDM' AS JOB_TP
	,'CREDIT'  AS GUBUN    
	,IB_PHN_NO AS CNTC_PNT_PHN_NO
FROM MDM_CR_CUST
WHERE CUST_CNT_CD 		= SUBSTR(@[s_cust_cd], 1, 2)
AND CUST_SEQ 			= SUBSTR(@[s_cust_cd], 3)
AND IB_PHN_NO IS NOT NULL
UNION ALL
-- MDM - GENERAL
SELECT DISTINCT 'MDM' AS JOB_TP
    ,'GENERAL'  AS GUBUN
    ,B.PHN_NO   AS CNTC_PNT_PHN_NO
FROM MDM_CUSTOMER A, MDM_CUST_CNTC_PNT B
WHERE A.CUST_CNT_CD 	= B.CUST_CNT_CD
AND A.CUST_SEQ 			= B.CUST_SEQ
AND A.CUST_CNT_CD 		= SUBSTR(@[s_cust_cd], 1, 2)
AND A.CUST_SEQ 			= SUBSTR(@[s_cust_cd], 3)
AND B.PHN_NO IS NOT NULL
#end			]]></sql>
			<params>
				<param name="s_cust_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
