<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="MnrAdvanceAuditDBDAOsearchMNRChargeListRSQL">
			<desc><![CDATA[MNR 심의 대상 목록 조회]]></desc>
			<sql><![CDATA[
SELECT   EI.INV_NO
       , EI.VNDR_SEQ
       , V.VNDR_LGL_ENG_NM AS VNDR_NM
       , EI.EQ_KND_CD
       , DECODE(EI.EQ_KND_CD, 'U', 'Container', 'Z', 'Chassis', 'G', 'M.G. Set', EI.EQ_KND_CD) AS EQ_KND_CD_NM
       , EI.EXPN_AUD_STS_CD AS AUDIT_RESULT
       , EI.CRE_USR_ID
       , EI.CRE_DT
       , EI.UPD_USR_ID
       , EI.UPD_DT
       , EI.EXPN_AUD_RSLT_RMK
       , EI.EXPN_AUD_RSLT_USR_ID
       , ( SELECT USR_NM FROM COM_USER U WHERE EI.EXPN_AUD_RSLT_USR_ID = U.USR_ID ) AS EXPN_AUD_RSLT_USR_NM
       , EI.ATCH_FILE_LNK_ID
       , EI.EXPN_AUD_RSLT_CD
       , EI.RHQ_CD AS RHQ_INV_OFC_CD
       , EI.INV_OFC_CD
       , EI.INV_CFM_DT
       , EI.AUTO_EXPN_AUD_STS_CD AS AUTO_AUDIT
       , EI.CURR_CD AS WO_CURR_CD
       , EI.WO_AMT AS COST_AMT
       , EI.INV_AMT
       , EI.CURR_CNG_FLG AS REFL_EX_YN
       , EI.INV_DIFF_AMT CHG_WO_AMT
       , EI.INV_DIFF_RTO
       , EI.INV_DIFF_RTO AS INV_DIFF_PCT
       , EI.INV_DIFF_RTO AS WO_INV_RTO
       , EI.CRE_OFC_CD
       , EI.LOCL_CRE_DT
       , EI.INV_CHG_AMT 
       , EI.WO_VRFY_FLG AS WK_VRFY_YN
       , EI.ESTM_VRFY_FLG AS EST_VRFY_YN
       , EI.ESTM_VRFY_DESC AS EST_VRFY_DESC
       , EI.WO_VRFY_DESC
       , EI.INV_RGST_NO
       , EI.AUTO_AUD_CFM_DT AS CHECKED_DT
       , TO_CHAR(EI.AUTO_AUD_CFM_DT, 'YYYY-MM-DD') AS AUDIT_DT
       , EI.AUTO_AUD_CFM_USR_ID AS CHECKED_USER_ID
       , ( SELECT USR_NM FROM COM_USER U WHERE EI.AUTO_AUD_CFM_USR_ID = U.USR_ID ) AS CHECKED_USER_NM 
       , AP.CSR_NO
       , MI.GEN_PAY_TERM_CD
       , TO_CHAR(MI.ISS_DT, 'YYYY-MM-DD') AS ISS_DT
       , MI.ISS_OFC_CD
       , TO_CHAR(TO_DATE(IM.PAY_DT, 'YYYYMMDD'), 'YYYY-MM-DD')  AS AP_PAY_DT
       , TO_CHAR(TO_DATE(IM.INV_TERM_DT, 'YYYYMMDD'), 'YYYY-MM-DD') AS PAY_DUE_DT
       , TO_CHAR(MI.CFM_DT, 'YYYY-MM-DD') AS CFM_DT
       , AP.INV_RMK
       , AP.INV_STS_CD
       , ( SELECT MGC.MNR_CD_DESC FROM MNR_GEN_CD MGC WHERE AP.INV_STS_CD = MGC.MNR_CD_ID AND MGC.PRNT_CD_ID = 'CD00042' AND ROWNUM = 1 ) AS INV_STS_NM
       , (
           SELECT   DECODE(MAX(CFM.EAC_NO), NULL, '', 'Y') 
           FROM     EAS_MNR_CFM_INV_DTL CFM
           WHERE    1 = 1
           AND      EI.INV_NO = CFM.INV_NO
           AND      EI.VNDR_SEQ = CFM.VNDR_SEQ
           AND      EI.EQ_KND_CD = CFM.EQ_KND_CD
         ) AS EAC_YN
       , MI.MNR_INP_TP_CD
       , MI.CRE_USR_ID
       , CASE WHEN MI.MNR_INP_TP_CD = 'M' THEN ( SELECT USR_NM FROM COM_USER U WHERE MI.CRE_USR_ID = U.USR_ID )
              WHEN MI.MNR_INP_TP_CD = 'W' THEN NVL( ( SELECT MNR_PRNR_LGL_ENG_NM FROM MNR_PARTNER P WHERE MI.CRE_USR_ID = P.SP_PTAL_ID AND ROWNUM = 1 ), MI.CRE_USR_ID )
              ELSE MI.CRE_USR_ID
         END AS INV_CRE_USER_NM
       , CASE WHEN EI.ESTM_VRFY_FLG = 'Y' THEN '0'
              WHEN EI.WO_VRFY_FLG = 'Y' THEN '0'
              WHEN EI.EXPN_MAX_PRMT_RTO < EI.INV_DIFF_RTO THEN '0'
              WHEN EI.MLT_WO_CURR_FLG = 'Y' THEN '0'
              WHEN EI.EXPN_AUD_STS_CD IS NOT NULL THEN '0'
              WHEN EI.INV_DIFF_RTO <= -1 AND EI.EXPN_AUD_STS_CD IS NULL THEN '1'
              WHEN EI.ESTM_VRFY_DESC IS NOT NULL THEN '1'
              WHEN EI.WO_VRFY_DESC IS NOT NULL THEN '1'
              WHEN EI.AUTO_EXPN_AUD_STS_CD = 'F' THEN '1'
              WHEN ABS(EI.INV_DIFF_RTO) < 1 AND EI.EXPN_AUD_STS_CD IS NULL THEN '1' 
              WHEN EI.EXPN_MAX_PRMT_RTO > EI.INV_DIFF_RTO AND EI.EXPN_AUD_STS_CD IS NULL THEN '1'
              ELSE '0'
         END SEL
       , CASE WHEN EI.WO_VRFY_FLG = 'Y' THEN ''
              WHEN EI.ESTM_VRFY_FLG = 'Y' THEN ''
              WHEN EI.EXPN_MAX_PRMT_RTO < EI.INV_DIFF_RTO THEN ''
              WHEN EI.MLT_WO_CURR_FLG = 'Y' THEN ''
              WHEN EI.EXPN_AUD_STS_CD IS NOT NULL THEN ''
              WHEN EI.INV_DIFF_RTO <= -1 AND EI.EXPN_AUD_STS_CD IS NULL THEN 'E'
              WHEN EI.ESTM_VRFY_DESC IS NOT NULL THEN 'E'
              WHEN EI.WO_VRFY_DESC IS NOT NULL THEN 'E'
              WHEN EI.AUTO_EXPN_AUD_STS_CD = 'F' THEN 'E'
              WHEN ABS(EI.INV_DIFF_RTO) < 1 AND EI.EXPN_AUD_STS_CD IS NULL THEN 'P' 
              WHEN EI.EXPN_MAX_PRMT_RTO > EI.INV_DIFF_RTO AND EI.EXPN_AUD_STS_CD IS NULL THEN 'E'
              ELSE ''
         END SELECT_FLG
       , CASE WHEN EI.WO_VRFY_FLG = 'Y' THEN ''
              WHEN EI.ESTM_VRFY_FLG = 'Y' THEN ''
              WHEN EI.EXPN_MAX_PRMT_RTO < EI.INV_DIFF_RTO THEN ''
              WHEN EI.MLT_WO_CURR_FLG = 'Y' THEN ''
              WHEN EI.EXPN_AUD_STS_CD IS NOT NULL THEN ''
              WHEN EI.INV_DIFF_RTO <= -1 AND EI.EXPN_AUD_STS_CD IS NULL THEN 'E'
              WHEN EI.ESTM_VRFY_DESC IS NOT NULL THEN 'E'
              WHEN EI.WO_VRFY_DESC IS NOT NULL THEN 'E'
              WHEN EI.AUTO_EXPN_AUD_STS_CD = 'F' THEN 'E'
              WHEN ABS(EI.INV_DIFF_RTO) < 1 AND EI.EXPN_AUD_STS_CD IS NULL THEN 'P' 
              WHEN EI.EXPN_MAX_PRMT_RTO > EI.INV_DIFF_RTO AND EI.EXPN_AUD_STS_CD IS NULL THEN 'E'
              ELSE ''
         END SELECT_FLG_TEMP
       , MI.CURR_CD AS INV_CURR_CD
       , (
           SELECT   MAX(BAT_PROG_STS_CD)
           FROM     EAS_AUTO_AUD_BAT X
           WHERE    1 = 1
           AND      SUB_SYS_CD = 'MNR'
           AND      X.INV_NO        = EI.INV_NO
           AND      X.INV_VNDR_SEQ  = EI.VNDR_SEQ
           AND      X.EQ_KND_CD     = EI.EQ_KND_CD
           AND      X.CRE_DT > SYSDATE - 1
         ) BAT_PROG_STS_CD
       , (
           SELECT   MAX(INTG_CD_VAL_DP_DESC)
           FROM     EAS_AUTO_AUD_BAT BAT
                  , COM_INTG_CD_DTL CD
           WHERE    1 = 1
           AND      EI.INV_NO = BAT.INV_NO
           AND      EI.VNDR_SEQ = BAT.INV_VNDR_SEQ
           AND      EI.EQ_KND_CD = BAT.EQ_KND_CD
           AND      BAT.SUB_SYS_CD = 'MNR'
           AND      BAT.BAT_PROG_STS_CD = CD.INTG_CD_VAL_CTNT
           AND      CD.INTG_CD_ID = 'CD03051'
           AND      BAT.CRE_DT > SYSDATE - 1
         ) BAT_PROG_STS_NM
       , EI.EXPN_MAX_PRMT_RTO
       , DECODE(EI.MLT_WO_CURR_FLG, 'Y', 'Y', NULL) AS MLT_WO_CURR_FLG
       , EI.AUD_CURR_CD AS INV_AUD_CURR_CD
       , EI.AUD_DIFF_AMT AS INV_AUD_DIFF_AMT
       , EI.AUD_USD_DIFF_AMT AS INV_AUD_USD_DIFF_AMT
FROM     EAS_MNR_CFM_INV EI
       , AP_PAY_INV AP
       , AP_INV_HDR IM
       , MDM_VENDOR V
       , MNR_PAY_INV_WRK MI
WHERE    1 = 1
AND      EI.INV_NO = AP.INV_NO
AND      EI.INV_RGST_NO = AP.INV_RGST_NO
AND      AP.CSR_NO = IM.CSR_NO(+)
AND      EI.VNDR_SEQ = V.VNDR_SEQ
AND      EI.INV_NO = MI.INV_NO
AND      EI.INV_RGST_NO = MI.INV_RGST_NO
AND      AP.DELT_FLG = 'N'
AND      MI.MNR_INV_STS_CD = 'HC'
AND      IM.RCV_ERR_FLG(+) IS NULL --E(AP REJECT) OR NULL
AND      IM.IF_FLG(+) IS NULL -- Y(정상) E(ERROR) NULL(진행안함)
AND      IM.AFT_ACT_FLG(+) IS NULL -- N(CANCEL) X(CANCEL : ) NULL(정상)
AND      EI.INV_CFM_DT BETWEEN TO_DATE(@[s_start_dt] || '000000', 'YYYY-MM-DDHH24MISS') AND TO_DATE(@[s_end_dt] || '235959', 'YYYY-MM-DDHH24MISS')
#if(${s_rhq_ofc_cd} != 'ALL' && ${s_rhq_ofc_cd} != '')
AND      AP.INV_OFC_CD IN
         (
           SELECT   OFC_CD 
           FROM     MDM_ORGANIZATION
           WHERE    1 = 1
           AND      DELT_FLG = 'N'
           CONNECT BY NOCYCLE PRIOR OFC_CD = PRNT_OFC_CD
           START WITH OFC_CD = @[s_rhq_ofc_cd]
         )
#end
#if(${s_ofc_cd} != 'ALL' && ${s_ofc_cd} != '')
AND      AP.INV_OFC_CD = @[s_ofc_cd]
#end
#if(${s_cost_group_cd} != 'ALL' && ${s_cost_group_cd} !='')
AND      EI.EQ_KND_CD = @[s_cost_group_cd]
#end
#if(${s_vndr_seq} !='')
AND      AP.VNDR_SEQ = @[s_vndr_seq]
#end

#if(${s_csr_no} !='')
AND      AP.CSR_NO IN (
	#foreach ($user_csrNos IN ${csrNos})
		#if($velocityCount < $csrNos.size())
                    '$user_csrNos',
		#else
                    '$user_csrNos'
		#end
	#end              
         )
#end

#if(${s_csr_status} !='ALL' && ${s_csr_status} !='')
AND      AP.INV_STS_CD = @[s_csr_status]
#end

#if(${s_inv_no} !='')
AND      MI.INV_NO IN (
	#foreach ($user_invNos IN ${invNos})
		#if($velocityCount < $invNos.size())
                    '$user_invNos',
		#else
                    '$user_invNos'
		#end
	#end
                  )
#end

#if(${s_auto_aud_sts_cd} != 'ALL' && ${s_auto_aud_sts_cd} != '')
AND      EI.AUTO_EXPN_AUD_STS_CD = @[s_auto_aud_sts_cd]
#end

#if(${s_expn_aud_sts_cd} != 'ALL' && ${s_expn_aud_sts_cd} != '')
	#if(${s_expn_aud_sts_cd} == 'N')
AND      EI.EXPN_AUD_STS_CD IS NULL 
	#elseif(${s_expn_aud_sts_cd} == 'D')
AND      EI.EXPN_AUD_STS_CD IS NOT NULL 
	#else
AND      EI.EXPN_AUD_STS_CD = @[s_expn_aud_sts_cd]
	#end
#end
#if(${s_cost_cd} !='')
AND      EXISTS
         (
           SELECT   'X'
           FROM     MNR_ORD_DTL DTL
           WHERE    1 = 1
           AND      MI.PAY_INV_SEQ = DTL.PAY_INV_SEQ
           AND      DTL.COST_CD IN
                    (
    #foreach ($user_costCds IN ${costCds})
        #if($velocityCount < $costCds.size())
                '$user_costCds',
        #else
                '$user_costCds'
        #end
    #end

                    )
         )
#end
#if(${s_difference} != 'ALL' && ${s_difference} != '')
    #if(${s_difference} == 'E')
AND      EI.ESTM_VRFY_FLG = 'Y'
    #elseif(${s_difference} == 'W')
AND      EI.WO_VRFY_FLG = 'Y'
    #elseif(${s_difference} == 'M')
AND      EI.MLT_WO_CURR_FLG = 'Y'
    #else
        #if(${s_err_type} == 'ZERO')
AND      EI.INV_DIFF_AMT = 0
        #elseif(${s_err_type} == 'PLUS')
AND      EI.INV_DIFF_AMT > 0
        #elseif(${s_err_type} == 'MINUS')
AND      EI.INV_DIFF_AMT < 0
        #else
AND      EI.INV_DIFF_AMT != 0
        #end
    #end
#end
#if(${s_difference} == 'E' && ${s_err_type} != '')
AND      EXISTS
         (
           SELECT   'X'
           FROM     MNR_RPR_RQST_HDR RH
                  , MNR_RPR_RQST_DTL RD
                  , MNR_ORD_HDR OH
                  , MNR_ORD_DTL OD
           WHERE    1 = 1
           AND      RH.RQST_EQ_NO = RD.RQST_EQ_NO
           AND      RH.RPR_RQST_SEQ = RD.RPR_RQST_SEQ
           AND      RH.RPR_RQST_VER_NO = RD.RPR_RQST_VER_NO
           AND      RH.MNR_ORD_OFC_CTY_CD = OH.MNR_ORD_OFC_CTY_CD
           AND      RH.MNR_ORD_SEQ = OH.MNR_ORD_SEQ
           AND      RH.RQST_EQ_NO = OD.EQ_NO
           AND      OH.MNR_ORD_OFC_CTY_CD = OD.MNR_ORD_OFC_CTY_CD
           AND      OH.MNR_ORD_SEQ = OD.MNR_ORD_SEQ
           AND      OD.PAY_INV_SEQ = MI.PAY_INV_SEQ
           AND      OH.MNR_GRP_TP_CD = 'RPR'
           AND      RD.MNR_VRFY_TP_CD IN (
    #foreach ($user_errTypes IN ${errTypes})
        #if($velocityCount < $errTypes.size())
                           '$user_errTypes',
        #else
                           '$user_errTypes'
        #end
    #end 
                    )
         )
#end
#if(${s_difference} == 'W' && ${s_err_type} != '')
AND      EXISTS
         (
           SELECT   'X'
           FROM     MNR_ORD_HDR OH
                  , MNR_ORD_DTL OD
           WHERE    1 = 1
           AND      OH.MNR_ORD_OFC_CTY_CD = OD.MNR_ORD_OFC_CTY_CD
           AND      OH.MNR_ORD_SEQ = OD.MNR_ORD_SEQ
           AND      OD.PAY_INV_SEQ = MI.PAY_INV_SEQ
           AND      OH.EQ_KND_CD = EI.EQ_KND_CD
           AND      OH.MNR_GRP_TP_CD = 'RPR'
           AND      OD.MNR_VRFY_TP_CD IN (
    #foreach ($user_errTypes IN ${errTypes})
        #if($velocityCount < $errTypes.size())
                           '$user_errTypes',
        #else
                           '$user_errTypes'
        #end
    #end 
                    )              
         )
#end			]]></sql>
			<params>
				<param name="s_start_dt" type="12" value="" out="N"/>
				<param name="s_end_dt" type="12" value="" out="N"/>
				<param name="s_rhq_ofc_cd" type="12" value="" out="N"/>
				<param name="s_ofc_cd" type="12" value="" out="N"/>
				<param name="s_cost_group_cd" type="12" value="" out="N"/>
				<param name="s_vndr_seq" type="12" value="" out="N"/>
				<param name="s_csr_status" type="12" value="" out="N"/>
				<param name="s_auto_aud_sts_cd" type="12" value="" out="N"/>
				<param name="s_expn_aud_sts_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
