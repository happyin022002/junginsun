<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CustomerEdiDBDAOSearchPerRepPupModiRSQL">
			<desc><![CDATA[SearchPerRepPupModi]]></desc>
			<sql><![CDATA[
SELECT DECODE(USE_FLG, 'Y',1,0) AS S_USE_FLG
     , RPT_COL_SEQ S_RPT_COL_SEQ
     , RPT_COL_NM S_RPT_COL_NM
     , CRE_USR_ID S_CRE_USR_ID
     , EDI_GRP_CD S_EDI_GRP_CD
     , RPT_COL_DESC S_RPT_COL_DESC
     , EDI_STS_FLG S_EDI_STS_FLG
     , '-' S_CUST_EDI_STS_CD
     , 1 S_HIDDEN_FLG 
FROM SCE_PERF_RPT_FOM P
WHERE 1=1
AND P.EDI_STS_FLG = 'N'
AND P.CRE_USR_ID =  @[cre_usr_id]
AND P.EDI_GRP_CD = @[cs_grp_id]
 UNION ALL
SELECT 
  S_USE_FLG
, S_RPT_COL_SEQ
, S_RPT_COL_NM
, S_CRE_USR_ID
, S_EDI_GRP_CD
, S_RPT_COL_DESC
, S_EDI_STS_FLG
, SUBSTR(MAX(SYS_CONNECT_BY_PATH(S.S_CUST_EDI_STS_CD, ',')),2) S_CUST_EDI_STS_CD
, S_HIDDEN_FLG
FROM 
(
SELECT DECODE(USE_FLG, 'Y',1,0) AS S_USE_FLG
     , RPT_COL_SEQ S_RPT_COL_SEQ
     , RPT_COL_NM S_RPT_COL_NM
     , CRE_USR_ID S_CRE_USR_ID
     , P.EDI_GRP_CD S_EDI_GRP_CD
     , RPT_COL_DESC S_RPT_COL_DESC
     , EDI_STS_FLG S_EDI_STS_FLG
     , E.CUST_EDI_STS_CD S_CUST_EDI_STS_CD
     , DECODE(E.CUST_EDI_STS_CD, NULL, 0, 1) S_HIDDEN_FLG
     , EDI_STS_SEQ
     , ROW_NUMBER() OVER (PARTITION BY RPT_COL_SEQ ORDER BY EDI_STS_SEQ) RNUM
FROM SCE_PERF_RPT_FOM P, EDI_GRP_CGO E
WHERE 1=1
AND P.CRE_USR_ID =  @[cre_usr_id]
AND P.EDI_GRP_CD = @[cs_grp_id]
AND P.EDI_STS_FLG(+) = 'Y'
AND E.EDI_GRP_CD(+) = @[cs_grp_id]
AND E.EDI_STND_STS_CD(+) = SUBSTR(RPT_COL_NM,1, LENGTH(RPT_COL_NM)-2)
) S
GROUP BY
  S_USE_FLG
, S_RPT_COL_SEQ
, S_RPT_COL_NM
, S_CRE_USR_ID
, S_EDI_GRP_CD
, S_RPT_COL_DESC
, S_EDI_STS_FLG
, S_HIDDEN_FLG
START WITH RNUM = 1
CONNECT BY PRIOR RNUM = RNUM - 1 AND PRIOR S.S_RPT_COL_SEQ = S.S_RPT_COL_SEQ
ORDER BY S_RPT_COL_SEQ			]]></sql>
			<params>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="cs_grp_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
