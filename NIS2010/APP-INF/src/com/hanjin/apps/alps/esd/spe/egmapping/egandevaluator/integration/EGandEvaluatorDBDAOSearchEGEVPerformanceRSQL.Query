<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="EGandEvaluatorDBDAOSearchEGEVPerformanceRSQL">
			<desc><![CDATA[Performance Evaluator 를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT A.EG_ID
     , A.EG_NM
     , PER_EVR_USR_ID
     , PER_EVR_USR_NM
     , EV_KND_SEQ
     , NVL(EV_KND_CD,'P') AS EV_KND_CD
     , A.EG_RHQ_CD
     , A.EG_OFC_CD
  FROM SPE_EV_GRP A
     , (SELECT EG_ID,PER_EVR_USR_ID,PER_EVR_USR_NM,EV_KND_SEQ, EV_KND_CD
          FROM (SELECT EG_ID
                     , EVR_USR_ID AS PER_EVR_USR_ID
                     , USR_NM AS  PER_EVR_USR_NM
                     , EV_KND_SEQ
                     , EV_KND_CD 
                  FROM SPE_EV_GRP_EVR A
                     , COM_USER B
                 WHERE EV_KND_CD = 'P'
                   AND A.EVR_USR_ID = B.USR_ID
                   AND B.USE_FLG = 'Y'                   
             )
        ) B
 WHERE A.EG_ID = B.EG_ID(+)
   AND A.DELT_FLG = 'N' 
   AND A.EG_ID = @[eg_id]
ORDER BY A.EG_ID DESC, PER_EVR_USR_ID			]]></sql>
			<params>
				<param name="eg_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
