<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="EvaluationGroupMappingDBDAOModifyEGBEMappingUSQL">
			<desc><![CDATA[EG vs Evalulator Mapping 데이터를 수정 한다]]></desc>
			<sql><![CDATA[
UPDATE SPE_SP_BZC_EV_GRP
   SET BZC_EV_GRD_CD   = @[bzc_ev_grd_cd]
     , EV_YR           = @[ev_yr]
     , EV_DT           = (SELECT CASE WHEN NVL(BZC_EV_GRD_CD,'A') = NVL(@[bzc_ev_grd_cd],'A') THEN EV_DT ELSE SYSDATE  END FROM SPE_SP_BZC_EV_GRP
                          WHERE SP_BZC_EG_SEQ    = @[sp_bzc_eg_seq]
                         )
     , UPD_USR_ID      = @[upd_usr_id]
     , UPD_DT          = SYSDATE
     , SP_SEQ          = @[sp_seq]
 WHERE EG_ID = @[eg_id]
   AND SP_BZC_EG_SEQ    = @[sp_bzc_eg_seq]			]]></sql>
			<params>
				<param name="bzc_ev_grd_cd" type="12" value="" out="N"/>
				<param name="ev_yr" type="12" value="" out="N"/>
				<param name="sp_bzc_eg_seq" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
				<param name="sp_seq" type="12" value="" out="N"/>
				<param name="eg_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
