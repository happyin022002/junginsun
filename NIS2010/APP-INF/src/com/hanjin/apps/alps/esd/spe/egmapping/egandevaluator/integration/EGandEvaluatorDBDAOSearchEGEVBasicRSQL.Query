<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="EGandEvaluatorDBDAOSearchEGEVBasicRSQL">
			<desc><![CDATA[Basic Evaluator 를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT A.EG_ID
     , A.EG_NM

     , BZC_EVR_USR_ID
     , BZC_EVR_USR_NM
     , EV_KND_SEQ
     , NVL(EV_KND_CD,'B') AS EV_KND_CD
     , NVL2(B.BZC_EVR_USR_ID,'','I') ISINPUT
     , A.EG_RHQ_CD
     , A.EG_OFC_CD
  FROM SPE_EV_GRP A
     , (SELECT A.EG_ID, BZC_EVR_USR_ID,BZC_EVR_USR_NM, EV_KND_SEQ, EV_KND_CD
          FROM (SELECT EG_ID
                     , EVR_USR_ID AS  BZC_EVR_USR_ID
                     , USR_NM AS  BZC_EVR_USR_NM
                     , EV_KND_SEQ
                     , EV_KND_CD
                  FROM SPE_EV_GRP_EVR A
                     , COM_USER B
                 WHERE EV_KND_CD = 'B'
                   AND A.EVR_USR_ID = B.USR_ID
                   AND B.USE_FLG = 'Y'
               ) A         
        ) B
 WHERE A.EG_ID = B.EG_ID(+)
   AND A.DELT_FLG = 'N' 
   AND EG_RHQ_CD        = @[s_eg_rhq_cd]
#if(${s_eg_ofc_cd} != '')
   AND EG_OFC_CD        = @[s_eg_ofc_cd]
#end
#if(${s_ev_svc_cate_cd} != '' )
   AND EV_SVC_CATE_CD   = @[s_ev_svc_cate_cd]
#end
ORDER BY A.EG_ID DESC,BZC_EVR_USR_ID			]]></sql>
			<params>
				<param name="s_eg_rhq_cd" type="12" value="" out="N"/>
				<param name="s_eg_ofc_cd" type="12" value="" out="N"/>
				<param name="s_ev_svc_cate_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
