<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ProductCatalogCreateDBDAOUpdateAssignVvdMasterUSQL">
			<desc><![CDATA[UpdateAssignVvdMaster]]></desc>
			<sql><![CDATA[
UPDATE PRD_PROD_CTL_MST
SET
trnk_vsl_cd = SUBSTR(@[vvd],1,4),
trnk_skd_voy_no = SUBSTR(@[vvd],5,4),
trnk_skd_dir_cd = SUBSTR(@[vvd],9,1),
upd_dt = SYSDATE
WHERE
pctl_no IN (SELECT pctl_no FROM bkg_booking WHERE bkg_no = @[bkg_no] 
			   UNION -- COP HDR의 모든 PCTL NO 에도 VVD UPDATE
			   SELECT DISTINCT pctl_no FROM sce_cop_hdr
			   WHERE bkg_no = @[bkg_no])
			]]></sql>
			<params>
				<param name="vvd" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
