<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="TESeBillingAckManageDBDAOGetAckSendEDIInvoiceListRSQL">
			<desc><![CDATA[ACK대상의 EDI INVOICE목록 가져오기]]></desc>
			<sql><![CDATA[
SELECT 
H.VNDR_SEQ, H.INV_OFC_CD, H.TML_EDI_SO_OFC_CTY_CD, H.TML_EDI_SO_SEQ, H.INV_NO, H.TTL_INV_AMT
FROM TES_EDI_SO_HDR H
WHERE 1=1
AND H.VNDR_SEQ = @[vndr_seq]
AND H.INV_OFC_CD = @[ofc_cd]
AND H.TML_EDI_SO_SEQ >= 0
AND NVL(H.DELT_FLG,'N') <> 'Y'
AND H.TML_INV_STS_CD = 'R'
--AND H.TML_SO_OFC_CTY_CD IS NOT NULL
--AND H.TML_SO_SEQ IS NOT NULL
AND H.CRE_DT >= CASE
                WHEN @[cfm_dt] IS NOT NULL AND LENGTH(TRIM(SUBSTR(REPLACE(@[cfm_dt],'-',''),1,8))) = 8
                THEN TO_DATE(SUBSTR(REPLACE(@[cfm_dt],'-',''),1,8),'YYYYMMDD') 
                ELSE SYSDATE - 2
                END
AND NOT EXISTS (
    SELECT *
    FROM TES_EDI_ACK_SND_LOG L, TES_EDI_ACK_SND_LOG_INV I    
    WHERE 1=1
    AND L.EDI_SND_DT = I.EDI_SND_DT
    AND L.SND_LOG_SEQ = I.SND_LOG_SEQ
    --AND L.ACK_SND_STS_CD IN ('N','S')
    AND L.ACK_ACT_TP_CD = @[ack_act_tp_cd]
    AND I.TML_EDI_SO_OFC_CTY_CD = H.TML_EDI_SO_OFC_CTY_CD
    AND I.TML_EDI_SO_SEQ = H.TML_EDI_SO_SEQ
)
#if (${lmt_knt} != '')
AND ROWNUM <= @[lmt_knt]
#else 
#end			]]></sql>
			<params>
				<param name="vndr_seq" type="12" value="" out="N"/>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="cfm_dt" type="12" value="" out="N"/>
				<param name="ack_act_tp_cd" type="12" value="" out="N"/>
				<param name="lmt_knt" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
