<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DwellNotificationDBDAOSearchDwllReasonT96RSQL">
			<desc><![CDATA[T96 reson 데이터 조회]]></desc>
			<sql><![CDATA[
SELECT 
    CASE WHEN DWLL_RSN_TP_CD='A' THEN 'Available for Pick up'||CHR(10)
    ELSE (
    ( CASE WHEN ((DWL.CA_FLG='Y' AND SUBSTR(DWL.FOC_CD,1,2)='YY') OR (DWL.CA_FLG='N' AND DWL.FOC_CD='YYY')) AND DWL.RAIL_MODE = 'N' THEN NVL2(DWL.INSTR_RMK, 'Cntr Delay Reason:'||DECODE(DWL.DWLL_RSN_TP_CD,'D','Demurrage Pending, ')||DWL.INSTR_RMK||CHR(10), NVL2(DWL.INTER_RMK, 'Cntr Delay Reason:'||DECODE(DWL.DWLL_RSN_TP_CD,'D','Demurrage Pending, ')||DWL.INTER_RMK||CHR(10), ''))
        WHEN ((DWL.CA_FLG='Y' AND SUBSTR(DWL.FOC_CD,1,2)='YY') OR (DWL.CA_FLG='N' AND DWL.FOC_CD='YYY')) AND DWL.RAIL_MODE = 'Y' THEN 
         (SELECT NVL2(RPT.CRNT_DWLL_RMK, 'Cntr Delay Reason:'||DECODE(DWL.DWLL_RSN_TP_CD,'D','Demurrage Pending, ')||RPT.CRNT_DWLL_RMK||CHR(10), DECODE(DWL.DWLL_RSN_TP_CD,'D','Cntr Delay Reason:Demurrage Pending, ')) FROM SCE_RAIL_TZ_RPT RPT WHERE RPT.TRSP_SO_OFC_CTY_CD = SUBSTR(RAIL_FM_TO_NOD_CD, 15, 3) AND RPT.TRSP_SO_SEQ = SUBSTR(RAIL_FM_TO_NOD_CD, 18))
        ELSE 'Cntr Delay Reason:'||
         (CASE WHEN DWL.RAIL_MODE = 'Y' AND SUBSTR(DWL.FOC_CD,1,2) <> 'YY' THEN (SELECT R.CRNT_DWLL_RMK||',' FROM SCE_RAIL_TZ_RPT R WHERE R.TRSP_SO_OFC_CTY_CD = SUBSTR(RAIL_FM_TO_NOD_CD, 15, 3) AND R.TRSP_SO_SEQ = SUBSTR(RAIL_FM_TO_NOD_CD, 18)) ELSE '' END
                       || CASE WHEN DWL.RAIL_MODE = 'N' AND SUBSTR(DWL.FOC_CD,1,1) <> 'Y' THEN 'Ocean freight is not paid,' ELSE '' END
                       || CASE WHEN DWL.RAIL_MODE = 'N' AND SUBSTR(DWL.FOC_CD,2,1) <> 'Y' THEN ' Original B/L is not collected,' ELSE '' END
                       || CASE WHEN DWL.CA_FLG='N' AND SUBSTR(DWL.FOC_CD,3,1) = 'H' THEN ' Customs Hold,' ELSE '' END
                       || DECODE(DWL.DWLL_RSN_TP_CD,'D',' Demurrage Pending'))||CHR(10)
     END )) END
    || (CASE WHEN DWL.RAIL_MODE='N' AND TO_CHAR(GLOBALDATE_PKG.TIME_CONV_FNC('KRPUS', SYSDATE+2, 'USNYC'),'YYYYMMDD') >= TO_CHAR(TO_DATE(DWL.FT_END_DT, 'YYYYMMDD'),'YYYYMMDD') THEN
      NVL2(DWL.FT_END_DT, 'Note : Last Free Day at the port is '||SUBSTR(DWL.FT_END_DT,1,4)||'-'||SUBSTR(DWL.FT_END_DT,5,2)||'-'||SUBSTR(DWL.FT_END_DT,7,2), '') END)
    || NVL2(DWL.DWL_VVD_RSN, 'VVD Delay Reason:'||DWL.DWL_VVD_RSN, '') DWLL_RSN
FROM
(
    SELECT
    CASE WHEN SUBSTR(H.POD_CD, 1, 2) = 'CA' AND SUBSTR(H.DEL_CD, 1, 2) = 'CA' THEN 'Y' ELSE 'N' END CA_FLG
    , (SELECT INTER_RMK FROM BKG_DO_REF B WHERE H.BKG_NO = B.BKG_NO) INTER_RMK
    , (SELECT /*+ INDEX_DESC(INS XPKBKG_USA_CUST_SVC_INSTR) */ INSTR_RMK FROM BKG_USA_CUST_SVC_INSTR I WHERE H.BKG_NO = I.BKG_NO AND I.DELT_FLG = 'N' AND INSTR_RMK_TP_CD='96T' AND ROWNUM=1) INSTR_RMK
    , (SELECT DWLL_RSN FROM SCE_DWLL_RSN R WHERE R.VSL_CD=H.VSL_CD AND R.SKD_VOY_NO=H.SKD_VOY_NO AND R.SKD_DIR_CD=H.SKD_DIR_CD) DWL_VVD_RSN
    , NVL(FRT_CLT_FLG,'N')||NVL(OBL_RDEM_FLG,'N')||NVL(CSTMS_CLR_CD,'N') FOC_CD
    , RAIL_SO_FLG RAIL_MODE
    , (SELECT TO_CHAR(MIN(C.FT_END_DT),'YYYYMMDD') FT_END_DT FROM DMT_CHG_CALC C
                    WHERE (C.SYS_AREA_GRP_ID, C.CNTR_NO, C.CNTR_CYC_NO) IN (SELECT D.SYS_AREA_GRP_ID ,D.CNTR_NO ,D.CNTR_CYC_NO FROM DMT_CHG_BKG_CNTR D WHERE D.BKG_NO IN (
                    SELECT BKG_NO FROM SCE_COP_HDR IN_A WHERE IN_A.MST_COP_NO = A.MST_COP_NO))
                      AND C.CNTR_NO = H.CNTR_NO
                      AND C.DMDT_CHG_STS_CD IN ('F', 'C', 'I', 'L', 'N', 'U')
                      AND C.DMDT_TRF_CD = 'DMIF' 
                      AND C.DMDT_CHG_LOC_DIV_CD = 'POD'
                      AND SUBSTR(C.FM_MVMT_YD_CD,1,5) = H.POD_CD    
                    GROUP BY C.SYS_AREA_GRP_ID, C.CNTR_NO, C.CNTR_CYC_NO, C.DMDT_TRF_CD, C.DMDT_CHG_LOC_DIV_CD) FT_END_DT
    , (SELECT RPAD(O.FM_NOD_CD, 7, ' ') || RPAD(O.TO_NOD_CD, 7, ' ') || TRSP_SO_OFC_CTY_CD|| TRSP_SO_SEQ
                        FROM TRS_TRSP_RAIL_BIL_ORD O
                        WHERE O.DELT_FLG ='N'
                        AND NVL(O.TRSP_FRST_FLG,'N') = 'N'
                        AND O.COP_NO = A.COP_NO
                        AND SUBSTR(O.POD_NOD_CD,1,5) = SUBSTR(O.FM_NOD_CD,1,5)
                        AND O.TRSP_BND_CD = 'I'
                        AND ROWNUM = 1) RAIL_FM_TO_NOD_CD
    ,@[dwll_rsn_tp_cd] DWLL_RSN_TP_CD                    
    FROM
      SCE_DWLL_NTFC_CNDDT H
    , SCE_COP_HDR A
    WHERE 1=1
    AND H.EML_SND_DT= @[eml_snd_dt]
    AND H.DWLL_TM_TP_CD= @[dwll_tm_tp_cd]
    AND H.CNTR_NO= @[cntr_no]
    AND H.BKG_NO= @[bkg_no]
    AND H.CNTR_NO = A.CNTR_NO
    AND H.BKG_NO = A.BKG_NO
) DWL			]]></sql>
			<params>
				<param name="dwll_rsn_tp_cd" type="12" value="" out="N"/>
				<param name="eml_snd_dt" type="12" value="" out="N"/>
				<param name="dwll_tm_tp_cd" type="12" value="" out="N"/>
				<param name="cntr_no" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
