<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ActualCustomerPopupDBDAOSearchActualCustomerNameRSQL">
			<desc><![CDATA[Actual Customer Name 조회]]></desc>
			<sql><![CDATA[
#if (${sCustInfoIndicator} == 'EUR')
 
SELECT M.CUST_LGL_ENG_NM FCTRY_NM,
  A.FCTRY_ADDR FCTRY_ADDR
FROM MDM_CUSTOMER M ,
  TRS_TRSP_ACT_CUST_ADDR A
WHERE M.CUST_CNT_CD||M.CUST_SEQ = @[act_cust_cd]
  AND M.CUST_CNT_CD = A.ACT_CUST_CNT_CD (+)
  AND M.CUST_SEQ = A.ACT_CUST_SEQ (+)
  AND NVL(M.NMD_CUST_FLG, 'N') <> 'Y'
  AND 1 = A.ACT_CUST_ADDR_SEQ (+)
  AND M.DELT_FLG = 'N'

#elseif (${sCustInfoIndicator} == 'XEUR')

SELECT D.ACT_CUST_NM FCTRY_NM,
  D.ACT_CUST_ADDR FCTRY_ADDR
FROM TRS_TRSP_USA_ACT_CUST C,
  TRS_TRSP_USA_ACT_CUST_DTL D
WHERE C.ACT_CUST_CNT_CD||C.ACT_CUST_SEQ = @[act_cust_cd]
  AND C.TRSP_ACT_CUST_NO=D.TRSP_ACT_CUST_NO
  AND C.DELT_FLG='N'

#end			]]></sql>
			<params>
				<param name="act_cust_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
