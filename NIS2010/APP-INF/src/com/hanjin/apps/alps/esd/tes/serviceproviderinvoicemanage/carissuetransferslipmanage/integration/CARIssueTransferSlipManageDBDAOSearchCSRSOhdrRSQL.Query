<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CARIssueTransferSlipManageDBDAOSearchCSRSOhdrRSQL">
			<desc><![CDATA[SearchCSRSOhdr]]></desc>
			<sql><![CDATA[
SELECT B.VNDR_NO, (SELECT DECODE(VNDR_CNT_CD,'KR',VNDR_LOCL_LANG_NM,VNDR_LGL_ENG_NM) FROM  MDM_VENDOR  WHERE  VNDR_SEQ =B.VNDR_NO) INV_DESC,
	COUNT(B.CSR_NO) NO_OF_INV,
	B.CSR_CURR_CD, B.CSR_AMT, B.ATTR_CTNT2,
	TO_CHAR(MAX(B.ISS_DT),'YYYY-MM-DD') ISS_DT, TO_CHAR(MAX(B.RCV_DT),'YYYY-MM-DD') RCV_DT, B.VNDR_TERM_NM,
	TO_CHAR(B.DUE_DT,'YYYY-MM-DD') DUE_DT
FROM (
 SELECT
	 A.CSR_NO,
	 A.CSR_CURR_CD,
	 A.CSR_AMT,
	 CASE
	 WHEN A.VNDR_TERM_NM IS NOT NULL AND SUBSTR(A.VNDR_TERM_NM,0,1)='O' THEN TO_DATE(A.INV_TERM_DT,'YYYY-MM-DD')+0
	 ELSE TO_DATE(A.INV_TERM_DT,'YYYY-MM-DD')+TO_NUMBER(A.VNDR_TERM_NM)
	 END  DUE_DT,
	 A.ATTR_CTNT2,
	 A.IF_ERR_RSN,
	 A.VNDR_NO,
	 A.VNDR_TERM_NM,
	 H.ISS_DT,
	 C.APRO_RQST_NO,
	 H.RCV_DT
 FROM TES_TML_SO_HDR H, COM_APRO_CSR_DTL C, COM_APRO_RQST_HDR R, AP_INV_HDR A
 WHERE 1=1
 AND H.CSR_NO = C.CSR_NO
 AND C.APRO_RQST_NO = R.APRO_RQST_NO
 AND H.CSR_NO = A.CSR_NO
 AND NVL(H.DELT_FLG,'N') <> 'Y'
 AND A.SRC_CTNT = 'SO_TERMINAL'
 AND A.CSR_NO = @[csr_no]
) B
GROUP BY B.CSR_NO, B.CSR_CURR_CD, B.CSR_AMT,
	B.DUE_DT, B.ATTR_CTNT2, B.IF_ERR_RSN, B.VNDR_NO,
	B.VNDR_TERM_NM
			]]></sql>
			<params>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
