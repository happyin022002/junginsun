<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceAuditDBDAORejectInvoiceUSQL">
			<desc><![CDATA[Invoice 상태를 Reject 상태로 수정]]></desc>
			<sql><![CDATA[
 UPDATE TRS_TRSP_INV_WRK SET		
 	INV_RJCT_FLG  		= 'Y',		
 	TRSP_INV_AUD_STS_CD	= 'RJ',		
	INV_RJCT_DT 		= GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[ofc_cd])		
 WHERE 			
  	INV_NO = @[inv_no]			
  	AND INV_VNDR_SEQ 	= @[paymt_sp_cd]			
		/* 2008.04.29 ETS OPEN */
  	AND HJL_NO IS NULL			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
				<param name="paymt_sp_cd" type="2" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
