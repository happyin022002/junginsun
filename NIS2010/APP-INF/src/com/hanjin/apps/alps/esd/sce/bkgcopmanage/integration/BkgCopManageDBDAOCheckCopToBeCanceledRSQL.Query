<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BkgCopManageDBDAOCheckCopToBeCanceledRSQL">
			<desc><![CDATA[container detach 될 때 호출하여 COP 가 bkg qty 보다 더 초과되어 존재할 경우에는 container detach 된 COP 를 cancel 시킨다.]]></desc>
			<sql><![CDATA[
WITH RMN_COP AS (
    SELECT A.BKG_NO,
      B.CNTR_TPSZ_CD,
      COUNT(*) AS CNTR_QTY
    FROM (
        SELECT BKG_NO,
          COP_NO,
          CNTR_TPSZ_CD
        FROM SCE_COP_HDR
        WHERE COP_NO = @[cop_no]) A,
      SCE_COP_HDR B,
      BKG_BOOKING C,
      SCE_COP_CNTR_REPO_RULE D
    WHERE A.BKG_NO = B.BKG_NO
      AND A.BKG_NO = C.BKG_NO
      AND A.CNTR_TPSZ_CD = D.CNTR_TPSZ_CD (+)
      AND B.COP_NO != @[cop_no]
      AND B.COP_STS_CD != 'X'
      AND (CASE WHEN C.FLEX_HGT_FLG = 'Y'
          AND B.CNTR_TPSZ_CD = D.PROV_CNTR_TPSZ_CD
          AND A.CNTR_TPSZ_CD != B.CNTR_TPSZ_CD THEN 'TRUE' WHEN A.CNTR_TPSZ_CD = B.CNTR_TPSZ_CD THEN 'TRUE' ELSE 'FALSE' END) = 'TRUE'
    GROUP BY A.BKG_NO, B.CNTR_TPSZ_CD ) 
SELECT CASE WHEN SUM(CEIL(B.OP_CNTR_QTY)) <= MAX(D.SUM_CNTR_QTY) THEN 'CANCEL' ELSE 'REMAIN' END AS CHK_RSLT
FROM BKG_QUANTITY B,
  RMN_COP C,
  (
    SELECT SUM(CNTR_QTY) AS SUM_CNTR_QTY
    FROM RMN_COP) D
WHERE B.BKG_NO = C.BKG_NO
  AND B.CNTR_TPSZ_CD = C.CNTR_TPSZ_CD			]]></sql>
			<params>
				<param name="cop_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
