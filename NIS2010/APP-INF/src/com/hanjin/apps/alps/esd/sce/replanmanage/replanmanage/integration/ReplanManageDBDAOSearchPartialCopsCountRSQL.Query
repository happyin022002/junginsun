<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ReplanManageDBDAOSearchPartialCopsCountRSQL">
			<desc><![CDATA[partial 관계로 엮인 cop의 갯수를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT 
    COUNT(*) CNT
FROM SCE_COP_HDR
WHERE 1=1
AND (CNTR_NO, TRNK_VSL_CD, TRNK_SKD_VOY_NO, TRNK_SKD_DIR_CD) IN 
    (
        SELECT CNTR_NO, TRNK_VSL_CD, TRNK_SKD_VOY_NO, TRNK_SKD_DIR_CD FROM SCE_COP_HDR WHERE (CNTR_NO, BKG_NO) = ((@[cntr_no], @[bkg_no]))
#if (${sts_flg} == 'C')  
        AND COP_STS_CD IN ('C','T') 
#elseif (${sts_flg} == 'F')
        AND COP_STS_CD = 'F'
#elseif (${sts_flg} == 'A')
        AND COP_STS_CD IN ('C', 'T', 'F')
#elseif (${sts_flg} == 'X')
        AND COP_STS_CD = 'X'
#end
    )
#if (${sts_flg} == 'C' or ${sts_flg} == 'X')  
    AND COP_STS_CD IN ('C','T') 
#elseif (${sts_flg} == 'F')
    AND COP_STS_CD = 'F'
#elseif (${sts_flg} == 'A')
    AND COP_STS_CD IN ('C', 'T', 'F')
#end			]]></sql>
			<params>
				<param name="cntr_no" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
