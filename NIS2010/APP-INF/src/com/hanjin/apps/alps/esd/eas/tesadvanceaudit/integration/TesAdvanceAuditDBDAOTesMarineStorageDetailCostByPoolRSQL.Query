<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="TesAdvanceAuditDBDAOTesMarineStorageDetailCostByPoolRSQL">
			<desc><![CDATA[TesMarineStorageDetailCostByPool]]></desc>
			<sql><![CDATA[
SELECT   Z.CALC_TP_CD
  , Z.LGS_COST_CD
  , (SELECT LGS_COST_FULL_NM  FROM TES_LGS_COST WHERE LGS_COST_CD = Z.LGS_COST_CD) AS LGS_COST_FULL_NM 
  , Z.FP_CALC_PRD_CD
  , Z.PRD_YM
  , Z.STK_VOL_QTY
  , Z.INV_VOL_QTY
  , Z.DIFF_VOL_QTY
  , Z.FP_TEU_QTY
  , Z.OVR_VOL_QTY
  , Z.VOL_TR_UT_CD
  , Z.CTRT_RT
  , Z.CURR_CD
  , Z.INV_XCH_RT
  , Z.INV_AMT
  , Z.CALC_AMT
  , Z.CALC_RMK
  , Z.INV_OFC_CD
  , Z.INV_NO
  , Z.YD_CD
  , Z.VNDR_SEQ
  , (SELECT YD_NM FROM MDM_YARD WHERE YD_CD = Z.YD_CD) AS YD_NM
  , (SELECT VNDR_LGL_ENG_NM FROM MDM_VENDOR WHERE VNDR_SEQ = Z.VNDR_SEQ) AS VNDR_NM  
  , Z.INV_CFM_DT
  , Z.FM_PRD_DT
  , Z.TO_PRD_DT
  , Z.TML_INV_TP_CD
  , Z.TML_CALC_IND_CD
  , Z.STO_DYS_IND_CD
  , Z.CALC_COST_GRP_CD
  , Z.TML_AGMT_OFC_CTY_CD
  , Z.TML_AGMT_SEQ
  , Z.TML_AGMT_VER_NO
  , Z.TML_AGMT_OFC_CTY_CD || LPAD(Z.TML_AGMT_SEQ, 5, '0') AS AGMT_NO
  , SUBSTR(LPAD(Z.TML_AGMT_VER_NO, 4, '0'), 0, 2 ) || '.' || SUBSTR(LPAD(Z.TML_AGMT_VER_NO, 4, '0'), 3, 2 ) AS AGMT_VER_NO
  , Z.TOT_VOL
  , Z.TOT_AMT
  , DECODE(Z.CALC_TP_CD, 'A', Z.CTRT_RT, ROUND( Z.TOT_AMT / DECODE(Z.TOT_VOL, 0, 1, Z.TOT_VOL), 2) ) AS AVG_RT
  , Z.ESTM_VOL
  , DECODE(Z.CALC_TP_CD, 'A', Z.ESTM_VOL * Z.CTRT_RT * NVL(INV_XCH_RT, 1), Z.ESTM_VOL * ROUND( Z.TOT_AMT / DECODE(Z.TOT_VOL, 0, 1, Z.TOT_VOL), 2) * NVL(INV_XCH_RT, 1) ) AS ESTM_AMT
  , CASE WHEN EXPN_MAX_PRMT_RTO < (1 - (CASE WHEN CALC_TP_CD = 'A'
              THEN Z.ESTM_VOL * Z.CTRT_RT
              ELSE Z.ESTM_VOL * ROUND( Z.TOT_AMT / DECODE(Z.TOT_VOL, 0, 1, Z.TOT_VOL), 2)
             END) / DECODE(Z.INV_AMT, 0, 1, Z.INV_AMT)) * 100
    THEN 'Y'
    END AS EXCEED_AVG_FLG

  , DECODE(( SELECT EAC_NO
   FROM   EAS_TML_AUD E
       , EAS_TML_AUD_DTL EA
   WHERE  1 = 1
   AND    E.INV_NO      = Z.INV_NO
   AND    E.YD_CD       = Z.YD_CD
   AND    E.VNDR_SEQ    = Z.VNDR_SEQ
   AND    E.INV_CFM_DT  = Z.INV_CFM_DT
   AND    E.INV_NO      = EA.INV_NO(+)
   AND    E.VNDR_SEQ    = EA.VNDR_SEQ(+)
   AND    E.INV_CFM_DT  = EA.INV_CFM_DT(+)
   AND    E.EXPN_AUD_SEQ   = EA.EXPN_AUD_SEQ(+)
   AND    Z.CALC_TP_CD     = EA.CALC_TP_CD(+)
   AND    Z.LGS_COST_CD = EA.LGS_COST_CD(+)
   AND    Z.FP_CALC_PRD_CD = EA.FP_CALC_PRD_CD (+)
    ), NULL, 'N', 'Y') AS EAC_FLG
  , ( SELECT EXPN_AUD_SEQ
   FROM EAS_TML_AUD E
   WHERE  1    = 1
   AND    E.INV_NO      = Z.INV_NO
   AND    E.YD_CD       = Z.YD_CD
   AND    E.VNDR_SEQ    = Z.VNDR_SEQ
   AND    E.INV_CFM_DT  = Z.INV_CFM_DT
    ) AS EXPN_AUD_SEQ
FROM (

  SELECT   A.CALC_TP_CD
    , A.LGS_COST_CD
    , A.FP_CALC_PRD_CD
    , A.PRD_YM
    , A.STK_VOL_QTY
    , A.INV_VOL_QTY
    , A.DIFF_VOL_QTY
    , A.FP_TEU_QTY
    , A.OVR_VOL_QTY
    , A.VOL_TR_UT_CD
    , A.CTRT_RT
    , A.CURR_CD
    , A.INV_XCH_RT
    , A.INV_AMT
    , A.CALC_AMT
    , A.CALC_RMK
    , A.YD_CD
    , A.INV_OFC_CD
    , A.INV_NO
    , A.VNDR_SEQ
    , A.INV_CFM_DT
    , A.FM_PRD_DT
    , A.TO_PRD_DT
    , A.TML_INV_TP_CD
    , A.TML_CALC_IND_CD
    , A.STO_DYS_IND_CD
    , A.CALC_COST_GRP_CD
    , A.TML_AGMT_OFC_CTY_CD
    , A.TML_AGMT_SEQ
    , A.TML_AGMT_VER_NO
    , A.EXPN_MAX_PRMT_RTO
    , ( SELECT SUM(X.CNTR_TTL_QTY)
      FROM EAS_TML_STO_TTL_QTY X
      WHERE 1 = 1
      AND  X.TML_AUD_YRMON  = A.PRD_YM
      AND  X.YD_CD    = A.YD_CD
      AND  X.FULL_MTY_CD  = 'M'
      AND  X.STO_AUD_QTY_CLSS_CD IN ('T', 'I')
      ) AS TOT_VOL
      
    , ( SELECT SUM(X.CNTR_TTL_AMT)
      FROM EAS_TML_STO_TTL_AMT X
      WHERE 1 = 1
      AND  X.TML_AUD_YRMON  = A.PRD_YM
      AND  X.YD_CD    = A.YD_CD
      AND  X.TML_INV_TP_CD  = 'ST'
      AND  X.CALC_COST_GRP_CD = 'SP'
      AND  X.LGS_COST_CD  = A.LGS_COST_CD
      AND  X.CURR_CD   = A.CURR_CD
      ) AS TOT_AMT
      
    , ( SELECT SUM(X.CNTR_TTL_QTY)
      FROM EAS_TML_STO_YD_DLY_QTY X
      WHERE 1 = 1
      AND  X.YD_CD    = A.YD_CD
      AND  X.FULL_MTY_CD  = 'M'
      AND  X.STO_AUD_QTY_CLSS_CD IN ('T', 'I')
      AND  X.CNMV_DT BETWEEN A.FM_PRD_DT AND A.TO_PRD_DT
      ) AS ESTM_VOL
  FROM (
    SELECT   D.CALC_TP_CD
      , D.LGS_COST_CD
      --, DECODE(MAX(D.FP_CALC_PRD_CD), 'D', 'DAY', 'M', 'MONTH') AS FP_CALC_PRD_CD
	  , MAX(D.FP_CALC_PRD_CD) AS FP_CALC_PRD_CD
      , MAX(TO_CHAR(ADD_MONTHS(TO_DATE(AD.FM_PRD_DT, 'YYYYMMDD'),-1), 'YYYYMM')) AS PRD_YM
      , SUM(D.STK_VOL_QTY) AS STK_VOL_QTY
      , SUM(D.INV_VOL_QTY) AS INV_VOL_QTY
      , SUM(D.DIFF_VOL_QTY) AS DIFF_VOL_QTY
      , SUM(D.FP_TEU_QTY) AS FP_TEU_QTY
      , SUM(D.OVR_VOL_QTY) AS OVR_VOL_QTY
      , MAX(D.VOL_TR_UT_CD) AS VOL_TR_UT_CD
      , MAX(D.CTRT_RT) AS CTRT_RT 
      , MAX(H.CURR_CD) AS CURR_CD
      , MAX(D.INV_XCH_RT) AS INV_XCH_RT
      , SUM(D.INV_AMT) AS INV_AMT
      , SUM(D.CALC_AMT) AS CALC_AMT
      , MAX(D.CALC_RMK) AS CALC_RMK
      , MAX(H.YD_CD) AS YD_CD
      , MAX(H.INV_OFC_CD) AS INV_OFC_CD
      , MAX(H.INV_NO) AS INV_NO
      , MAX(H.VNDR_SEQ) AS VNDR_SEQ
      , MAX(H.INV_CFM_DT) AS INV_CFM_DT
      , MAX(AD.FM_PRD_DT) AS FM_PRD_DT
      , MAX(AD.TO_PRD_DT) AS TO_PRD_DT
      , MAX(H.TML_INV_TP_CD) AS TML_INV_TP_CD
      , MAX(H.TML_CALC_IND_CD) AS TML_CALC_IND_CD
      , MAX(H.STO_DYS_IND_CD) AS STO_DYS_IND_CD
      , MAX(D.CALC_COST_GRP_CD ) AS CALC_COST_GRP_CD 
      , MAX(D.TML_AGMT_OFC_CTY_CD) AS TML_AGMT_OFC_CTY_CD
      , MAX(D.TML_AGMT_SEQ) AS TML_AGMT_SEQ
      , MAX(D.TML_AGMT_VER_NO) AS TML_AGMT_VER_NO
      , MAX(AC.EXPN_MAX_PRMT_RTO) AS EXPN_MAX_PRMT_RTO
    FROM TES_TML_SO_HDR H
      , TES_TML_SO_DTL D
      , TES_TML_SO_COST SC
      , EAS_TML_AUTO_AUD_CRTE AC
      , EAS_TML_AUD AD
    WHERE 1 = 1
    AND  H.TML_SO_OFC_CTY_CD = D.TML_SO_OFC_CTY_CD
    AND  H.TML_SO_SEQ  = D.TML_SO_SEQ
    AND  D.LGS_COST_CD  = SC.LGS_COST_CD
    AND  D.LGS_COST_CD  = AC.LGS_COST_CD
    AND  AC.AUD_OFC_CD  = EAS_EXPN_AUD_PKG.GET_RHQ_OFC_CD(H.INV_OFC_CD)
    AND  H.INV_NO     = AD.INV_NO
    AND  H.VNDR_SEQ   = AD.VNDR_SEQ
    AND  H.INV_CFM_DT = AD.INV_CFM_DT
    AND  SC.EAS_AUD_FLG  = 'Y'
    AND  H.TML_INV_TP_CD  = 'ST'
    AND  D.CALC_COST_GRP_CD = 'SP'
    AND  H.YD_CD    = @[s_yd_cd]
    AND  H.VNDR_SEQ = @[s_vndr_seq]
    AND  H.INV_NO   = @[s_inv_no]
    GROUP BY  D.CALC_TP_CD
      , D.LGS_COST_CD
    ) A
  ) Z			]]></sql>
			<params>
				<param name="s_yd_cd" type="12" value="" out="N"/>
				<param name="s_vndr_seq" type="12" value="" out="N"/>
				<param name="s_inv_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
