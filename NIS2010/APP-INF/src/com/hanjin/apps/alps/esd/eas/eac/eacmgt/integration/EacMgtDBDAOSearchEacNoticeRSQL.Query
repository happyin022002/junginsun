<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="EacMgtDBDAOSearchEacNoticeRSQL">
			<desc><![CDATA[메일 발송 정보를 조회한다]]></desc>
			<sql><![CDATA[
SELECT A.EML_SUBJ_CTNT 
     , A.EML_CTNT 
     , B.VNDR_EML
     , B.PHN_NO
     , B.FAX_NO
     , B.EAC_EML_USE_FLG
     , B.EAC_FAX_USE_FLG
     , (SELECT USR_EML FROM EAS_EXPN_AUD_CS_PSON_CFG WHERE EAC_USR_ID = @[cre_usr_id]) AS USR_EML
     , (SELECT NTC_CC_RCV_EML FROM EAS_EXPN_AUD_CS_PSON_CFG WHERE EAC_USR_ID = @[cre_usr_id]) AS NTC_CC_RCV_EML
     , (SELECT DECODE(COUNT(1),0,'N','Y') FROM EAS_EXPN_AUD_CS_RJCT_HIS WHERE EAC_NO = A.EAC_NO) AS SND_YN
  FROM EAS_EXPN_AUD_CS_MGMT A
     , EAS_EXPN_AUD_CS_CNTC_PNT B
 WHERE A.VNDR_SEQ = B.VNDR_SEQ
   AND A.VNDR_CNTC_PNT_SEQ = B.VNDR_CNTC_PNT_SEQ
   AND A.EAC_NO = @[eac_no]			]]></sql>
			<params>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="eac_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
