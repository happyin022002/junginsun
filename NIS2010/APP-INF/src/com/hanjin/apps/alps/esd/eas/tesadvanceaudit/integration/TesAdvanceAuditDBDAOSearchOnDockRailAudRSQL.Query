<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="TesAdvanceAuditDBDAOSearchOnDockRailAudRSQL">
			<desc><![CDATA[On-Dock Invoice를 심사한다.]]></desc>
			<sql><![CDATA[
SELECT INV_NO
		, VNDR_SEQ
		, TO_CHAR(MAX(INV_CFM_DT), 'YYYYMMDDHH24MISS') AS INV_CFM_DT
		, MAX(TML_INV_TP_CD) AS TML_INV_TP_CD
		, MAX(YD_CD) AS YD_CD
		, TO_CHAR(MAX(ISS_DT), 'YYYYMMDDHH24MISS') ISS_DT
		, MAX(EAS_EXPN_AUD_PKG.GET_RHQ_OFC_CD(INV_OFC_CD)) AS RHQ_CD
		, MAX(INV_OFC_CD) AS INV_OFC_CD
		, MAX(COST_OFC_CD) AS COST_OFC_CD
		, MAX(CURR_CD) AS CURR_CD
		, SUM(INV_AMT) AS INV_AMT
		, SUM(INV_AMT) AS EXPN_AUD_ESTM_AMT		     
		, COUNT(DISTINCT ERR_LGS_COST_CD) AS AUD_LGS_COST_CD_QTY
		, WM_CONCAT(DISTINCT VRFY_RSLT_CD_CTNT) AS VRFY_RSLT_CD_CTNT
		, SUM(NVL(VOL_AUD_TGT_QTY, 0)) AS VOL_AUD_TGT_QTY
		, 'S' AS BAT_VOL_RSLT_CD
		, 'S' AS BAT_AMT_RSLT_CD
		, 'S' AS BAT_ESTM_VOL_RSLT_CD
		, LEAST(MIN(VRFY_RSLT_AUD_CD), MIN(VOL_AOTO_AUD_CD), MIN(CALC_TP_CD_AUD) ) AS AUTO_EXPN_AUD_STS_CD
		, COUNT(1) AS AUD_DTL_TGT_QTY
		, WM_CONCAT(DISTINCT CALC_TP_CD) AS CALC_TP_CD_CTNT
FROM	(
		SELECT AAA.*
				, CASE WHEN VRFY_RSLT_CD_CTNT IS NOT NULL THEN 'F' ELSE 'S'
				  END AS VRFY_RSLT_AUD_CD
				, CASE WHEN NVL(VOL_AUD_TGT_QTY, 0) > 0 THEN 'C' ELSE 'S'
				  END VOL_AOTO_AUD_CD
				, CASE WHEN CALC_TP_CD = 'M' THEN 'C' ELSE 'S'
				  END CALC_TP_CD_AUD
				, (CASE WHEN VRFY_RSLT_CD_CTNT IS NOT NULL THEN LGS_COST_CD
						WHEN NVL(VOL_AUD_TGT_QTY, 0) > 0 THEN LGS_COST_CD
						WHEN CALC_TP_CD = 'M' THEN LGS_COST_CD
				  END) ERR_LGS_COST_CD
		FROM	(
				SELECT AA.*
						, (CASE WHEN AA.CALC_VOL_QTY <> AA.RVIS_VOL_QTY THEN 1 ELSE 0 END) AS VOL_AUD_TGT_QTY
						, (SELECT	WM_CONCAT(DISTINCT X.DSCR_IND_CD)
							FROM	TES_TML_SO_CNTR_LIST X
							WHERE	X.TML_SO_OFC_CTY_CD         = AA.TML_SO_OFC_CTY_CD
							AND		X.TML_SO_SEQ                = AA.TML_SO_SEQ
							AND		NVL(X.CNTR_TPSZ_CD, 'N')    = NVL(AA.CNTR_TPSZ_CD, 'N')
							AND		DECODE(X.CNTR_STY_CD, 'F', 'F', 'M') = SUBSTR(AA.LGS_COST_CD, 6, 1)
							AND		NVL(X.DCGO_CLSS_CD, 'N')    = AA.DCGO_FLG
							AND		DECODE(TO_CHAR(X.WRK_DT,'DY'), 'SAT', 'SA', 'SUN', 'SU', 'HOL', 'HO', 'WD') = AA.TML_WRK_DY_CD 
							AND		(X.VRFY_RSLT_IND_CD = 'CO' AND X.MODI_FLG = 'Y')
						  ) AS VRFY_RSLT_CD_CTNT
				FROM	(
						SELECT  D.LGS_COST_CD
								, D.CALC_TP_CD
								, D.CNTR_TPSZ_CD
								, D.TML_WRK_DY_CD
								, DECODE(NVL(D.DCGO_IND_CD, 'N'), 'N', 'N', 'Y') AS DCGO_FLG
								, SUM(D.CALC_VOL_QTY) AS CALC_VOL_QTY
								, SUM(D.RVIS_VOL_QTY) AS RVIS_VOL_QTY
								, MAX(D.VOL_TR_UT_CD) AS VOL_TR_UT_CD
								, MAX(D.CTRT_RT) AS CTRT_RT
								, MAX(H.CURR_CD) AS CURR_CD
								, MAX(D.INV_XCH_RT) AS INV_XCH_RT
								, SUM(D.INV_AMT) AS INV_AMT
								, SUM(D.CALC_AMT) AS CALC_AMT
								, MAX(D.CALC_RMK) AS CALC_RMK
								, MAX(D.N3PTY_FLG) AS N3PTY_FLG
								, MAX(H.YD_CD) AS YD_CD
								, MAX(H.INV_OFC_CD) AS INV_OFC_CD
								, MAX(H.INV_NO) AS INV_NO
								, MAX(H.VNDR_SEQ) AS VNDR_SEQ
								, MAX(H.INV_CFM_DT) AS INV_CFM_DT
								, MAX(H.TML_INV_TP_CD) AS TML_INV_TP_CD
								, MAX(H.TML_SO_OFC_CTY_CD) AS TML_SO_OFC_CTY_CD
								, MAX(H.TML_SO_SEQ) AS TML_SO_SEQ
								, MAX(H.COST_OFC_CD) AS COST_OFC_CD
								, MAX(H.ISS_DT) AS ISS_DT
						FROM 	TES_TML_SO_HDR H
								, TES_TML_SO_DTL D
						WHERE	1	= 1
						AND		H.TML_SO_OFC_CTY_CD     = D.TML_SO_OFC_CTY_CD
						AND		H.TML_SO_SEQ            = D.TML_SO_SEQ
						AND		NVL(H.DELT_FLG, 'N')    <> 'Y'
						AND		H.TML_INV_STS_CD        <> 'R'
						AND		H.TML_INV_RJCT_STS_CD   <> 'RJ'
						AND		H.TML_INV_TP_CD         = 'ON'
						AND		H.VNDR_SEQ              = @[vndr_seq]
						AND		H.INV_NO                = @[inv_no]
						GROUP BY D.LGS_COST_CD
								, D.CALC_TP_CD
								, D.CNTR_TPSZ_CD
								, D.TML_WRK_DY_CD
								, DECODE(NVL(D.DCGO_IND_CD, 'N'), 'N', 'N', 'Y')
						) AA
				) AAA
		) AAAA
GROUP BY INV_NO
		, VNDR_SEQ
		, TML_SO_OFC_CTY_CD
		, TML_SO_SEQ			]]></sql>
			<params>
				<param name="vndr_seq" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
