<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="JOOutstandinggroupManageDBDAOSearchTPBGroupModifyListRSQL">
			<desc><![CDATA[SearchTPBGroupModifyList]]></desc>
			<sql><![CDATA[
SELECT
  DECODE( /* 2008-11-20 O WAN-KI 1.2 JO TPB CANCEL CSR VALID 추가 */
      (SELECT COUNT(0) FROM AP_INV_HDR
       WHERE CSR_NO = A.CSR_NO
       AND SRC_CTNT = 'SO_TERMINAL'
       AND APRO_FLG = 'Y' AND IF_FLG = 'Y'
       AND NVL(RCV_ERR_FLG,'N') <> 'E')
       ,0 ,'N' ,'Y'
  ) AS CSRVALID
  ,DECODE(A.OFC_CD,@[user_ofc_cd],DECODE(B.N3PTY_INV_NO,NULL,'Y','N'),'N') AS EDITABLE
  ,A.OTS_DTL_SEQ
  ,A.N3PTY_NO
  ,A.N3PTY_NO_DP_SEQ
  ,A.N3PTY_SRC_SUB_SYS_CD
  ,TPB_GET_N3PTY_BIL_TP_NM_FNC(A.N3PTY_BIL_TP_CD) AS N3PTY_BIL_TP_NM
  ,A.N3PTY_SRC_NO
  ,A.BKG_NO  BKG_NO_ALL
  ,A.BL_NO   BL_NO_ALL
  ,A.VSL_CD||A.SKD_VOY_NO||SUBSTR(A.FINC_DIR_CD,1,1) G_VVD
  ,EQ_NO
  ,A.VNDR_CUST_DIV_CD
  ,CASE A.VNDR_CUST_DIV_CD
     WHEN 'V' THEN LPAD(TO_CHAR(A.VNDR_SEQ),6,'0')
     WHEN 'C' THEN A.CUST_CNT_CD||LPAD(A.CUST_SEQ,6,'0')
     WHEN 'S' THEN A.N3PTY_OFC_CD END
     TRD_PARTY_VAL
  ,CASE WHEN C.OTS_STS_CD IN ('R','T','J') THEN COMMCODE_PKG.GET_COMDTL_NAME_FNC('CD02799',B.OTS_STS_DTL_CD)
        ELSE COMMCODE_PKG.GET_COMDTL_NAME_FNC('CD00588',C.OTS_STS_CD)
   END AS OTS_STS_NM
  ,DECODE(A.IF_CURR_CD,NULL,A.CFM_CURR_CD,A.IF_CURR_CD) CURR_CD
  ,A.CFM_AMT
  ,A.N3PTY_BIL_TP_CD
  ,A.BKG_NO
  ,A.BL_NO
  ,A.VSL_CD
  ,A.SKD_VOY_NO
  ,A.FINC_DIR_CD
  ,A.VVD_CD
  ,A.VNDR_SEQ
  ,A.CUST_CNT_CD
  ,A.CUST_SEQ
  ,A.N3PTY_OFC_CD
FROM TPB_OTS_DTL      A
  ,TPB_OTS_GRP        B
  ,TPB_OTS_GRP_STS    C
WHERE 1=1
  AND A.N3PTY_BIL_TP_CD = 'JO'
  AND A.N3PTY_NO = B.N3PTY_NO
  AND B.N3PTY_NO = C.N3PTY_NO
  AND A.N3PTY_DELT_TP_CD IN ('N','S')
  AND B.N3PTY_DELT_TP_CD IN ('N')
  AND C.OTS_STS_LST_FLG = 'Y'
  AND A.N3PTY_NO = @[s_n3pty_no]
ORDER BY N3PTY_NO, N3PTY_NO_DP_SEQ			]]></sql>
			<params>
				<param name="user_ofc_cd" type="12" value="" out="N"/>
				<param name="s_n3pty_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
