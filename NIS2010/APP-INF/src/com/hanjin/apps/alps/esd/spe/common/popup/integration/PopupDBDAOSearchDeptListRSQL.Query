<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PopupDBDAOSearchDeptListRSQL">
			<desc><![CDATA[조직트리룰 조회한다]]></desc>
			<sql><![CDATA[
#if(${efpt_ofc_cd}=='A')
SELECT LEVEL AS SLEVEL
     , OFC_CD
     , (SELECT INTG_CD_VAL_DP_SEQ
          FROM COM_INTG_CD_DTL 
         WHERE INTG_CD_ID ='CD03373' 
           AND INTG_CD_VAL_CTNT =A.OFC_CD
         ) AS DP_SEQ
FROM MDM_ORGANIZATION A
CONNECT BY NOCYCLE PRIOR A.OFC_CD = A.PRNT_OFC_CD
START WITH A.OFC_CD IN (SELECT INTG_CD_VAL_CTNT  AS OFC_CD
                          FROM COM_INTG_CD_DTL
                         WHERE INTG_CD_ID ='CD03373'      
                       )
ORDER SIBLINGS BY DP_SEQ
#else
SELECT LEVEL AS SLEVEL, OFC_CD
FROM MDM_ORGANIZATION
WHERE NVL(DELT_FLG, 'N') <> 'Y'
CONNECT BY NOCYCLE PRIOR OFC_CD = PRNT_OFC_CD

START WITH OFC_CD=@[efpt_ofc_cd]

ORDER SIBLINGS BY OFC_CD
#end
			]]></sql>
			<params>
				<param name="efpt_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
