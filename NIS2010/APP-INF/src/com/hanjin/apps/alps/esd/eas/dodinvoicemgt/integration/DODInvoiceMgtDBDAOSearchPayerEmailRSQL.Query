<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DODInvoiceMgtDBDAOSearchPayerEmailRSQL">
			<desc><![CDATA[SearchPayerEmail]]></desc>
			<sql><![CDATA[
SELECT 'EAS' AS JOB_TP
	,'' AS GUBUN
	,CNTC_PNT_EML 	AS CNTC_PNT_EML
FROM EAS_PAYR_CNTC_PNT
WHERE CUST_CNT_CD = SUBSTR(@[s_cust_cd], 1, 2)
AND   CUST_SEQ 		= SUBSTR(@[s_cust_cd], 3)
#if (${s_cust_gubun} == '1')
UNION ALL
-- MDM - GENERAL
SELECT DISTINCT 'MDM' AS JOB_TP
    ,'GENERAL' AS GUBUN
    , B.VNDR_EML 	AS CNTC_PNT_EML
FROM MDM_VENDOR A, MDM_VNDR_CNTC_PNT B
WHERE A.VNDR_SEQ 		= B.VNDR_SEQ
AND A.VNDR_SEQ 			= @[s_cust_cd]
AND B.VNDR_EML IS NOT NULL
#elseif (${s_cust_gubun} == '2') 
UNION ALL
-- MDM - CREDIT
SELECT DISTINCT 'MDM' AS JOB_TP
	,'CREDIT'  AS GUBUN
	,IB_EML    AS CNTC_PNT_EML
FROM MDM_CR_CUST
WHERE CUST_CNT_CD 		= SUBSTR(@[s_cust_cd], 1, 2)
AND CUST_SEQ 			= SUBSTR(@[s_cust_cd], 3)
AND IB_EML  IS NOT NULL
UNION ALL
-- MDM - GENERAL
SELECT DISTINCT 'MDM' AS JOB_TP
    ,'GENERAL'    AS GUBUN
    , B.CUST_EML 	AS CNTC_PNT_EML
FROM MDM_CUSTOMER A, MDM_CUST_CNTC_PNT B
WHERE A.CUST_CNT_CD 	= B.CUST_CNT_CD
AND A.CUST_SEQ 			= B.CUST_SEQ
AND A.CUST_CNT_CD 		= SUBSTR(@[s_cust_cd], 1, 2)
AND A.CUST_SEQ 			= SUBSTR(@[s_cust_cd], 3)
AND B.CUST_EML IS NOT NULL
#end			]]></sql>
			<params>
				<param name="s_cust_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
