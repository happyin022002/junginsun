<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="EacMgtDBDAOSearchCurrencyRSQL">
			<desc><![CDATA[Currency 값을 조회한다.]]></desc>
			<sql><![CDATA[
SELECT BIL_CURR_CD, BIL_CURR_CD AS BIL_CURR_CD1 FROM MDM_ORGANIZATION WHERE OFC_CD = @[ofc_cd]
UNION ALL SELECT 'USD' AS BIL_CURR_CD, 'USD' AS BIL_CURR_CD1 FROM DUAL
UNION SELECT 'CAD' AS BIL_CURR_CD, 'CAD' AS BIL_CURR_CD1 FROM DUAL WHERE 'US' = (SELECT DECODE(C.CNT_CD,'HQ','KR',C.CNT_CD) CNT_CD
                                                                                   FROM MDM_ORGANIZATION B
                                                                                      , MDM_LOCATION C    
                                                                                  WHERE 1 = 1
                                                                                    AND B.OFC_CD = @[ofc_cd]
                                                                                    AND NVL(B.DELT_FLG,'N') <> 'Y'
                                                                                    AND NVL(C.DELT_FLG,'N') <> 'Y'
                                                                                    AND B.LOC_CD = C.LOC_CD
                                                                                 )
UNION SELECT DECODE(@[ofc_cd],'HFABA','ILS','EUR') AS BIL_CURR_CD, DECODE(@[ofc_cd],'HFABA','ILS','EUR') AS BIL_CURR_CD1 FROM DUAL WHERE 'HAMRU' = TRS_COMMON_PKG.TRS_GET_RHQ_OFC_CD(@[ofc_cd])
UNION SELECT 'HKD' AS BIL_CURR_CD, 'HKD' AS BIL_CURR_CD1 FROM DUAL WHERE 'SZPSC' = @[ofc_cd]			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
