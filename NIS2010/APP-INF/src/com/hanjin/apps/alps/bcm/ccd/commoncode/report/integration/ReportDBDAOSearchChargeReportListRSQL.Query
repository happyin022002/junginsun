<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ReportDBDAOSearchChargeReportListRSQL">
			<desc><![CDATA[다운로드용 Charge정보조회]]></desc>
			<sql><![CDATA[
SELECT 
CHG_CD,
CHG_NM,
FRT_CHG_TP_CD,
CHG_REV_TP_CD,
CHG_APLY_TP_CD,
CHG_APLY_AREA_CD,
APLY_SVC_MOD_FLG, 
CO_CHG_ACCT_CD, 
REP_CHG_CD, 
USE_CO_TP_CD, 
AUTO_RAT_FLG, 
DP_SEQ, 
CY_RD_TERM_FLG, 
CFS_RD_TERM_FLG, 
DOR_RD_TERM_FLG, 
TKL_TML_FLG, 
NA_RD_TERM_FLG, 
DELT_FLG,
CRE_USR_ID,
TO_CHAR(CRE_DT, 'YYYY-MM-DD HH24:MI:SS') CRE_DT,
UPD_USR_ID,
TO_CHAR(UPD_DT, 'YYYY-MM-DD HH24:MI:SS') UPD_DT
FROM MDM_CHARGE
WHERE  1=1
#if (${chg_cd} != '')
AND CHG_CD  LIKE @[chg_cd]||'%'
#end
#if (${chg_nm} != '')
AND UPPER(CHG_NM) LIKE '%'||UPPER(@[chg_nm])||'%'
#end
#if (${rep_chg_cd} != '' && ${rep_chg_cd} != ' ')
AND REP_CHG_CD = @[rep_chg_cd]
#end
#if (${status} == 'N') 
AND DELT_FLG <> 'Y'
#elseif (${status} == 'Y') 
AND DELT_FLG = @[status]
#end			]]></sql>
			<params>
				<param name="chg_cd" type="12" value="" out="N"/>
				<param name="chg_nm" type="12" value="" out="N"/>
				<param name="rep_chg_cd" type="12" value="" out="N"/>
				<param name="status" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
