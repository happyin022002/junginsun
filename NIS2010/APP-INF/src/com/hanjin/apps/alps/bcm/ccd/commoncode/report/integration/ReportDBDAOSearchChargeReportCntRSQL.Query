<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ReportDBDAOSearchChargeReportCntRSQL">
			<desc><![CDATA[Charge 정보조회Count]]></desc>
			<sql><![CDATA[
SELECT COUNT(CHG_CD) AS CNT
FROM MDM_CHARGE
WHERE  1=1
#if (${chg_cd} != '')
AND CHG_CD  LIKE @[chg_cd]||'%'
#end
#if (${chg_nm} != '')
AND UPPER(CHG_NM) LIKE '%'||UPPER(@[chg_nm])||'%'
#end
#if (${rep_chg_cd} != '' && ${rep_chg_cd} != ' ')
AND REP_CHG_CD = @[rep_chg_cd]
#end
#if (${status} == 'N') 
AND DELT_FLG <> 'Y'
#elseif (${status} == 'Y') 
AND DELT_FLG = @[status]
#end 			]]></sql>
			<params>
				<param name="chg_cd" type="12" value="" out="N"/>
				<param name="chg_nm" type="12" value="" out="N"/>
				<param name="rep_chg_cd" type="12" value="" out="N"/>
				<param name="status" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
