<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CustMainDBDAOModifyCreditCustCodeUSQL">
			<desc><![CDATA[Credit Customer auto invoice update]]></desc>
			<sql><![CDATA[
UPDATE MDM_CR_CUST MCC
SET (MCC.AUTO_INV_IB_FLG
      ,MCC.AUTO_INV_IB_HJS_REF_NO
      ,MCC.AUTO_INV_IB_CUST_REF_NO_FLG
      ,MCC.AUTO_INV_IB_LOCL_CHG_FLG
      ,MCC.AUTO_INV_IB_EML)
    = (SELECT MCR.AUTO_INV_FLG
              , MCR.HJS_REF_NO
              , MCR.CUST_REF_NO_FLG
              , MCR.LOCL_CHG_FLG
              , MCR.HJS_REF_EML
       FROM MDM_CUST_REP MCR 
       WHERE MCR.CUST_CNT_CD = MCC.CUST_CNT_CD 
       AND MCR.CUST_SEQ = MCC.CUST_SEQ 
       AND MCR.IO_BND_CD = 'I'
       AND ROWNUM = 1
       )
     ,(MCC.AUTO_INV_OB_FLG
      ,MCC.AUTO_INV_OB_HJS_REF_NO
      ,MCC.AUTO_INV_OB_CUST_REF_NO_FLG
      ,MCC.AUTO_INV_OB_LOCL_CHG_FLG
      ,MCC.AUTO_INV_OB_EML)
    = (SELECT MCR.AUTO_INV_FLG
              , MCR.HJS_REF_NO
              , MCR.CUST_REF_NO_FLG
              , MCR.LOCL_CHG_FLG
              , MCR.HJS_REF_EML
       FROM MDM_CUST_REP MCR 
       WHERE MCR.CUST_CNT_CD = MCC.CUST_CNT_CD 
       AND MCR.CUST_SEQ = MCC.CUST_SEQ 
       AND MCR.IO_BND_CD = 'O'
       AND ROWNUM = 1
       )
WHERE MCC.CUST_CNT_CD = @[cust_cnt_cd]
AND MCC.CUST_SEQ = @[cust_seq]			]]></sql>
			<params>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
				<param name="cust_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
