<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GEMPlanningPerformanceDBDAOAddChangeApprovalRequestOfficeAndRqstNoCSQL">
			<desc><![CDATA[2011.04.18 [CHM-201108838-01] 이준범
Title   : OFC code Change 설정 시 Assigned Expense Data 변경 요청
DESC : Request의 기존 OFC_CD 를 변경될 OFC_CD 로 생성 한다]]></desc>
			<sql><![CDATA[
INSERT INTO GEM_REQUEST
( GEN_EXPN_RQST_NO
 ,PLN_YRMON
 ,GEN_EXPN_RQST_TP_CD
 ,RQST_OFC_CD
 ,CRE_USR_ID
 ,CRE_DT
 ,UPD_USR_ID
 ,UPD_DT
)
SELECT TRIM(SUBSTR(GEN_EXPN_RQST_NO, 1, 2)||@[bfr_ofc_cd]||SUBSTR(GEN_EXPN_RQST_NO, LENGTH(@[ofc_cd]) + 3, 12))
      ,PLN_YRMON
      ,GEN_EXPN_RQST_TP_CD
      ,@[bfr_ofc_cd]
      ,@[usr_id]
      ,SYSDATE
      ,@[usr_id]
      ,SYSDATE
  FROM GEM_REQUEST
 WHERE GEN_EXPN_RQST_NO IN (
                            SELECT GEN_EXPN_RQST_NO
                              FROM GEM_ITEM
                             WHERE GEN_EXPN_RQST_NO IN ( 
                                                        SELECT GEN_EXPN_RQST_NO
                                                          FROM GEM_REQUEST
                                                         WHERE PLN_YRMON LIKE SUBSTR(@[stnd_dt], 1, 4)||'%'
                                                       )
                              AND OFC_CD = @[bfr_ofc_cd]
                           )
   AND RQST_OFC_CD = @[ofc_cd]			]]></sql>
			<params>
				<param name="bfr_ofc_cd" type="12" value="" out="N"/>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="stnd_dt" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
