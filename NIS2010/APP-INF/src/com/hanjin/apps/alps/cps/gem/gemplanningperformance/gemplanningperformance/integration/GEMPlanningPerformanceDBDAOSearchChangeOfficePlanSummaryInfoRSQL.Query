<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GEMPlanningPerformanceDBDAOSearchChangeOfficePlanSummaryInfoRSQL">
			<desc><![CDATA[2011.03.16 이준범 [CHM-201108838-01]
Title : OFC code Change 설정 시 Assigned Expense Data 변경 요청
Description : 이행 데이터 변경시 해당 기준 년월일 조회]]></desc>
			<sql><![CDATA[
SELECT GEN_EXPN_RQST_NO
      ,OFC_CD
      ,GEN_EXPN_CD
      ,GEN_EXPN_ITM_NO
      ,GEN_EXPN_TRNS_DIV_CD
      ,GEN_EXPN_RQST_SEQ
      ,GEN_EXPN_APRO_STEP_CD
      ,GEN_EXPN_APSTS_CD
      ,GEN_EXPN_APRO_AUTH_OFC_CD
      ,JAN_AMT
      ,FEB_AMT
      ,MAR_AMT
      ,APR_AMT
      ,MAY_AMT
      ,JUN_AMT
      ,JUL_AMT
      ,AUG_AMT
      ,SEP_AMT
      ,OCT_AMT
      ,NOV_AMT
      ,DEC_AMT
      ,APRO_OPIN_RMK
      ,CRE_USR_ID
      ,CRE_DT
      ,UPD_USR_ID
      ,UPD_DT      
  FROM GEM_APRO_STEP
 WHERE GEN_EXPN_RQST_NO IN ( 
                            SELECT GEN_EXPN_RQST_NO
                              FROM GEM_REQUEST
                             WHERE PLN_YRMON LIKE SUBSTR(@[stnd_dt], 1, 4)||'%'
                           )
   AND OFC_CD IN (@[ofc_cd],@[bfr_ofc_cd])
   AND GEN_EXPN_APRO_STEP_CD = 'CO'
   AND GEN_EXPN_APSTS_CD     = 'AP'			]]></sql>
			<params>
				<param name="stnd_dt" type="12" value="" out="N"/>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="bfr_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
