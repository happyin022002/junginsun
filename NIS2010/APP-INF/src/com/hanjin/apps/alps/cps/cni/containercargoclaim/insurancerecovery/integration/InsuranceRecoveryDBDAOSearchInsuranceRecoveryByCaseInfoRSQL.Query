<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InsuranceRecoveryDBDAOSearchInsuranceRecoveryByCaseInfoRSQL">
			<desc><![CDATA[InsuranceRecoveryByCase 정보조회]]></desc>
			<sql><![CDATA[
SELECT
    CGO_CLM_NO
  , CLM_AREA_CD
  , HDLR_OFC_CD
  , HDLR_USR_ID
  , TO_CHAR(UPD_DT , 'YYYYMMDD') UPD_DT
  , TRNK_REF_VVD_NO
  , CNI_GET_CLM_MISC_NM_FNC('08' , CGO_CLM_STS_CD , '2') CGO_CLM_STS_NM
  , CGO_CLM_STS_CD
  , CS_CLZ_DT
  , (TO_DATE (NVL (CS_CLZ_DT, TO_CHAR (SYSDATE, 'YYYYMMDD')), 'YYYYMMDD')      - TO_DATE (PRLM_CLM_NTC_DT, 'YYYYMMDD')) + 1 AS HPD
  , (TO_DATE (NVL (CGO_CLM_STL_DT, TO_CHAR (SYSDATE, 'YYYYMMDD')), 'YYYYMMDD') - TO_DATE (FMAL_CLM_RCV_DT, 'YYYYMMDD')) + 1 AS NHP
  , CGO_CLM_STL_DT
  , PRLM_CLM_NTC_DT
  , FMAL_CLM_RCV_DT
  , CGO_CLM_STL_TP_CD
  , CGO_CLM_TP_CD
  , MJR_CLM_DMG_LSS_CD
  , N3RD_LABL_PTY_CD
  , INCI_PLC_TP_CD
  , INCI_OCCR_DT
  , CLM_CGO_TP_CD
  , CLMT_LOCL_AMT
  , CLMT_LOCL_CURR_CD
  , CLMT_LOCL_XCH_RT
  , CLMT_USD_AMT
  , CNI_GET_PTY_NM_FNC (INSUR_CLM_PTY_NO, '1') INSUR_CLM_PTY_ABBR_NM
  , CNI_GET_PTY_NM_FNC (INSUR_CLM_PTY_NO, '2') INSUR_PTY_NM
  , INSUR_CLM_PTY_NO
  , CGO_CLM_STL_LOCL_AMT
  , CGO_CLM_STL_LOCL_CURR_CD
  , CGO_CLM_STL_XCH_RT
  , CGO_CLM_STL_USD_AMT
  , LABL_PTY_RCVR_LOCL_AMT
  , LABL_PTY_RCVR_LOCL_CURR_CD
  , LABL_PTY_RCVR_DT
  , LABL_PTY_RCVR_LOCL_XCH_RT
  , LABL_PTY_RCVR_USD_AMT
  , INSUR_DMND_AMT
  , INSUR_DMND_CURR_CD
  , INSUR_FMAL_CLM_DT
  , INSUR_XCH_RT
  , INSUR_DMND_USD_AMT
  , INSUR_RCVR_DT
  , INSUR_RCVR_USD_AMT
  , INSUR_RMK
  , RCVR_USD_AMT
FROM
    CNI_CLM_V
WHERE
    CGO_CLM_NO = @[cgo_clm_no]			]]></sql>
			<params>
				<param name="cgo_clm_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
