<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ApprovalDBDAOCheckUpdateRevVVDRSQL">
			<desc><![CDATA[Rev VVD 업데이트 여부를 확인한다]]></desc>
			<sql><![CDATA[
SELECT NVL((
            SELECT MIN (EFF_YRMON)||'01' DT
            FROM AP_PERIOD
           WHERE SYS_DIV_CD = '15'
             AND EFF_YRMON >= SUBSTR(A.GL_DT,1,6)
             AND OFC_CD IN (A.TJ_OFC_CD,(SELECT M.AR_HD_QTR_OFC_CD FROM MDM_ORGANIZATION M WHERE M.OFC_CD = A.TJ_OFC_CD))
             AND AR_AP_DIV_CD = 'P'
             AND CLZ_STS_CD='O'),'N') AS NEW_GL_DT
  FROM AP_INV_HDR A
 WHERE A.CSR_NO = @[csr_no]
			]]></sql>
			<params>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
