<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AuthorizationDBDAOsearchAllAuthPgmInfoRSQL">
			<desc><![CDATA[전체 모듈에 대한 Authorization 정보 조회]]></desc>
			<sql><![CDATA[
SELECT 
P.SUB_SYS_CD,
P.PGM_NO,
B.AUTH_PGM_BTN_SEQ, 
B.AUTH_APRO_TP_CD,
(SELECT CD.INTG_CD_VAL_DP_DESC FROM COM_INTG_CD_DTL CD 
  WHERE CD.INTG_CD_ID='CD03436' AND CD.INTG_CD_VAL_CTNT = B.AUTH_APRO_TP_CD AND ROWNUM=1) AUTH_APRO_TP_NM,
B.PGM_BTN_ID, 
DECODE(B.PGM_BTN_NM, 'EXCEL_DOWN_DUMMY', '', B.PGM_BTN_NM) PGM_BTN_NM,
B.USE_FLG BTN_USE_FLG,
F.PGM_FLD_ID, 
F.PGM_FLD_NM, 
F.USE_FLG FLD_USE_FLG,
P.AUTH_PGM_SEQ,
F.AUTH_PGM_FLD_SEQ,  
C.PGM_NM, 
P.USE_FLG PGM_USE_FLG,
P.PGM_RMK
FROM COM_AUTH_PGM P, COM_PROGRAM C, COM_AUTH_PGM_BTN B, COM_AUTH_PGM_FLD F
WHERE 1=1
AND P.PGM_NO = C.PGM_NO
AND NVL(C.USE_FLG,'N') = 'Y'
AND P.AUTH_PGM_SEQ = B.AUTH_PGM_SEQ--(+)
AND B.AUTH_PGM_BTN_SEQ = F.AUTH_PGM_BTN_SEQ(+)
ORDER BY P.SUB_SYS_CD, C.PGM_NM, B.PGM_BTN_NM, F.PGM_FLD_NM			]]></sql>
			<params>
			</params>
		</query>
	</querys>
</sqls>
