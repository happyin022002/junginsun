<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AuthorizationDBDAOsearchAuthSndEmlPgmRSQL">
			<desc><![CDATA[Auth 메일 발송 내용 중 요청 화면 정보 조회]]></desc>
			<sql><![CDATA[
SELECT H.RQST_USR_ID
	  ,H.RQST_USR_NM
	  ,P.SUB_SYS_CD
	  ,C.PGM_NM
	  ,TO_CHAR(H.RQST_ST_DT, 'YYYY/MM/DD HH24:MI:SS') AS RQST_ST_DT
	  --,H.AUTH_APRO_RQST_RMK
	  ,U.USR_EML
FROM  COM_AUTH_APRO_RQST H, COM_AUTH_PGM_BTN B, COM_AUTH_PGM P, COM_PROGRAM C, COM_USER U
WHERE 1=1
AND H.AUTH_APRO_RQST_NO = @[auth_apro_rqst_no]
AND H.AUTH_PGM_BTN_SEQ = B.AUTH_PGM_BTN_SEQ
AND B.AUTH_PGM_SEQ = P.AUTH_PGM_SEQ
AND P.PGM_NO = C.PGM_NO
AND H.RQST_USR_ID = U.USR_ID
AND NVL(H.CFM_FLG,'N') = 'Y'
AND NVL(B.USE_FLG,'N') = 'Y'
AND NVL(P.USE_FLG,'N') = 'Y'
AND NVL(C.USE_FLG,'N') = 'Y'			]]></sql>
			<params>
				<param name="auth_apro_rqst_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
