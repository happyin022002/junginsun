<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CustomerDBDAOTotalCustomerRSQL">
			<desc><![CDATA[총 카운트 조회]]></desc>
			<sql><![CDATA[
SELECT COUNT(*)
  	FROM MDM_CUSTOMER A 
#if(${zip_cd} != '')
        ,MDM_CUST_ADDR B 
#end
 	WHERE 1=1
      AND A.DELT_FLG <> 'Y'
	  AND NVL(NMD_CUST_FLG, 'N') = 'N'
#if(${cust_cnt_cd} != '')
      AND A.CUST_CNT_CD||lpad(A.CUST_SEQ,6,0) LIKE @[cust_cnt_cd] || '%'
#end

#if(${cust_lgl_eng_nm} != '')
	#if(${include} == 'on')
	  AND upper(A.CUST_LGL_ENG_NM) LIKE '%' || upper(@[cust_lgl_eng_nm]) || '%'
	#else
	  AND upper(A.CUST_LGL_ENG_NM) LIKE upper(@[cust_lgl_eng_nm]) || '%'
	#end
#end
#if(${ofc_cd} != '')
      AND A.OFC_CD LIKE @[ofc_cd] || '%'
#end
#if(${zip_cd} != '')
      AND A.CUST_CNT_CD = B.CUST_CNT_CD(+) 
      AND A.CUST_SEQ = B.CUST_SEQ(+)
      AND B.PRMRY_CHK_FLG(+) = 'Y' 
      AND B.ZIP_CD LIKE @[zip_cd] || '%'
#end			]]></sql>
			<params>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
				<param name="cust_lgl_eng_nm" type="12" value="" out="N"/>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="zip_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
