<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ReceiveQueueDBDAOupdateApInvHdr4USQL">
			<desc><![CDATA[updateApInvHdr4]]></desc>
			<sql><![CDATA[
UPDATE ap_inv_hdr
   SET rcv_err_flg = @[if_flg],
       rcv_err_rsn = @[if_err_rsn],
       cxl_dt = SUBSTR(@[cxl_dt],1,8)
 WHERE csr_no = @[csr_no]
 AND NVL(rcv_err_flg,'N') <> 'E' -- Cancelled 처리 되지 않은 건만 업데이트
			]]></sql>
			<params>
				<param name="if_flg" type="12" value="" out="N"/>
				<param name="if_err_rsn" type="12" value="" out="N"/>
				<param name="cxl_dt" type="12" value="" out="N"/>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
