		</screen>

    <screen name="alpsSignOnSSO" template="templateNoneJS">
      <parameter key="title"  value="ALPS!" direct="true"/>
      <parameter key="body"    value="/main.jsp" />
    </screen>

		<screen name="alpsSignOn" template="templateNoneJS">
			<parameter key="title"  value="ALPS!" direct="true"/>
			<parameter key="body"    value="/main.jsp" />
		</screen>

    <screen name="SignOff" template="templateNoneJS">
      <parameter key="title"  value="한진해운" direct="true"/>
      <parameter key="body"   value="/logout.jsp" />
    </screen>
    
    <screen name="SignOffSSO" >
      <parameter key="title"  value="한진해운" direct="true"/>
      <parameter key="body"   value="/logoutSSO.jsp" />
