<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableCommonDBDAOsearchOfficeInfoRSQL">
			<desc><![CDATA[유저의 소속 office 정보 조회]]></desc>
			<sql><![CDATA[
SELECT DECODE(@[ofc_lvl_tp], 'QUERY', SOI.OFC_INQ_LVL_CD, SOI.OFC_ENTR_LVL_CD) OFC_ENTR_LVL_CD
     , NVL(MO.AR_OFC_CD, MO.OFC_CD) AS AR_OFC_CD
	 , NVL(SOI.OTS_CD, 'ARO') AS OTS_CD
FROM   MDM_ORGANIZATION  MO,
       SCO_OFC_INFO  SOI
WHERE  MO.OFC_CD = @[usr_ofc_cd]
AND    MO.AR_OFC_CD = SOI.OFC_CD(+)			]]></sql>
			<params>
				<param name="ofc_lvl_tp" type="12" value="" out="N"/>
				<param name="usr_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
