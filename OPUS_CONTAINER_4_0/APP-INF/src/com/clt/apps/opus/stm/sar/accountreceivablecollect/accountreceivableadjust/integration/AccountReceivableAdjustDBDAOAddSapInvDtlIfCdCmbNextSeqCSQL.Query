<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableAdjustDBDAOAddSapInvDtlIfCdCmbNextSeqCSQL">
			<desc><![CDATA[임시 로직 Insert SCO_LEGR_CD_CMB table]]></desc>
			<sql><![CDATA[
#if(${sys_tp_cd} == 'ADJ')

INSERT INTO SCO_LEGR_CD_CMB
(
    CD_CMB_SEQ
    , COA_SEQ
    , LEGR_ACCT_TP_CD
    , ENBL_FLG
    , SGM_CTNT1
    , SGM_CTNT2
    , SGM_CTNT3
    , SGM_CTNT4
    , SGM_CTNT5
	, SGM_CTNT6
    , CRE_USR_ID
    , CRE_DT
    , UPD_USR_ID
    , UPD_DT
)
SELECT
    SCO_LEGR_CD_CMB_SEQ.NEXTVAL
    , '1'
	#if(${rvs_flg} == 'N')
    	, (SELECT ACCTG_MNG_TP_CD FROM MDM_ACCOUNT MA WHERE MA.ACCT_CD = (SELECT DECODE(SUBSTR(${gain_and_lss_amt} ,1,1), '-', LEGR_XCH_DIFF_INCM_ACCT_CD, LEGR_XCH_DIFF_LSS_ACCT_CD ) FROM SAR_ACCT_MTX WHERE ACCT_CTNT1 = 'ADJ' AND ACCT_TP_CD = @[adj_tp_cd]))
	#else
		, (SELECT ACCTG_MNG_TP_CD FROM MDM_ACCOUNT MA WHERE MA.ACCT_CD = (SELECT DECODE(SUBSTR(${gain_and_lss_amt} ,1,1), '-', LEGR_XCH_DIFF_LSS_ACCT_CD, LEGR_XCH_DIFF_INCM_ACCT_CD ) FROM SAR_ACCT_MTX WHERE ACCT_CTNT1 = 'ADJ' AND ACCT_TP_CD = @[adj_tp_cd]))
	#end
    , 'Y'
    , SGM_CTNT1
    , SGM_CTNT2
    , SGM_CTNT3
	#if(${rvs_flg} == 'N')
    	, (SELECT DECODE(SUBSTR(${gain_and_lss_amt} ,1,1), '-', LEGR_XCH_DIFF_INCM_ACCT_CD, LEGR_XCH_DIFF_LSS_ACCT_CD ) FROM SAR_ACCT_MTX WHERE ACCT_CTNT1 = 'ADJ' AND ACCT_TP_CD = @[adj_tp_cd])
	#else
		, (SELECT DECODE(SUBSTR(${gain_and_lss_amt} ,1,1), '-', LEGR_XCH_DIFF_LSS_ACCT_CD, LEGR_XCH_DIFF_INCM_ACCT_CD ) FROM SAR_ACCT_MTX WHERE ACCT_CTNT1 = 'ADJ' AND ACCT_TP_CD = @[adj_tp_cd])
	#end
    , SGM_CTNT5
	, SGM_CTNT6
    , 'SYSTEM'
    , SYSDATE
    , 'SYSTEM'
    , SYSDATE
FROM SCO_LEGR_CD_CMB
WHERE CD_CMB_SEQ = @[dtrb_cd_cmb_seq]

#elseif(${sys_tp_cd} == 'OFF')

INSERT INTO SCO_LEGR_CD_CMB
(
    CD_CMB_SEQ
    , COA_SEQ
    , LEGR_ACCT_TP_CD
    , ENBL_FLG
    , SGM_CTNT1
    , SGM_CTNT2
    , SGM_CTNT3
    , SGM_CTNT4
    , SGM_CTNT5
	, SGM_CTNT6
    , CRE_USR_ID
    , CRE_DT
    , UPD_USR_ID
    , UPD_DT
)
SELECT
    SCO_LEGR_CD_CMB_SEQ.NEXTVAL
    , '1'
    , (SELECT ACCTG_MNG_TP_CD FROM MDM_ACCOUNT MA WHERE MA.ACCT_CD = @[off_gain_and_lss_acct_cd])
    , 'Y'
    , SGM_CTNT1
    , SGM_CTNT2
    , SGM_CTNT3
    , @[off_gain_and_lss_acct_cd]
    , SGM_CTNT5
	, SGM_CTNT6
    , 'SYSTEM'
    , SYSDATE
    , 'SYSTEM'
    , SYSDATE
FROM SCO_LEGR_CD_CMB
WHERE CD_CMB_SEQ = @[dtrb_cd_cmb_seq]

#end			]]></sql>
			<params>
				<param name="adj_tp_cd" type="12" value="" out="N"/>
				<param name="dtrb_cd_cmb_seq" type="12" value="" out="N"/>
				<param name="off_gain_and_lss_acct_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
