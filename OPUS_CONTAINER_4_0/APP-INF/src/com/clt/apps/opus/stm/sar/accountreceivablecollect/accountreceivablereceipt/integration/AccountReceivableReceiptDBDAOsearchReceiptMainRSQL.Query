<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableReceiptDBDAOsearchReceiptMainRSQL">
			<desc><![CDATA[Receipt 정보 조회]]></desc>
			<sql><![CDATA[
SELECT A.RCT_SEQ
    , A.RCT_NO
    , A.RCT_OFC_CD
    , A.CHQ_NO
    , A.BANK_ACCT_SEQ
	, B.BANK_ACCT_NM
	, C.DP_PRCS_KNT
    , A.RCT_DT
    , A.RCT_DPS_DT
    , A.MTRTY_DT
    , A.RCT_TP_CD
    , A.RCT_CURR_CD
    , SAR_GET_FMT_MASK_FNC(A.RCT_CURR_CD, A.RCT_AMT) RCT_AMT
    , A.RCT_CUST_CNT_CD
    , LPAD(A.RCT_CUST_SEQ, 6, '0') RCT_CUST_SEQ
    , A.RCT_RMK
    , DECODE(A.BANK_CHG_AMT, '', '', SAR_GET_FMT_MASK_FNC(A.RCT_CURR_CD, A.BANK_CHG_AMT)) BANK_CHG_AMT
    , A.AGN_OFC_CD
    , A.AGN_CD
    , A.ASA_NO
    , A.RCT_CXL_DT
    , A.RCT_CXL_RSN_CD
    , A.RCT_CXL_CATE_CD
    , A.RCT_CXL_RMK
    , A.RCT_PRN_FLG
    , A.CRE_USR_ID
    , A.CRE_DT
    , A.UPD_USR_ID
    , A.UPD_DT
	, A.BAL_RCT_AMT
	, A.RCT_STS_CD
	, DECODE(A.RCT_STS_CD, 'UNID', SAR_GET_FMT_MASK_FNC(A.RCT_CURR_CD, A.BAL_RCT_AMT), SAR_GET_FMT_MASK_FNC(A.RCT_CURR_CD, '0')) UNID_AMT
	, DECODE(A.RCT_STS_CD, 'UNAPP', SAR_GET_FMT_MASK_FNC(A.RCT_CURR_CD, A.BAL_RCT_AMT), SAR_GET_FMT_MASK_FNC(A.RCT_CURR_CD, '0')) UNAPP_AMT
	, DECODE(A.RCT_STS_CD, 'APP', SAR_GET_FMT_MASK_FNC(A.RCT_CURR_CD, A.RCT_AMT), 'UNAPP', SAR_GET_FMT_MASK_FNC(A.RCT_CURR_CD, (A.RCT_AMT - A.BAL_RCT_AMT)), SAR_GET_FMT_MASK_FNC(A.RCT_CURR_CD, '0')) APP_AMT
	, DECODE(A.RCT_STS_CD, 'CXL', (SELECT LU_DESC
       							   FROM SCO_LU_DTL
       							   WHERE LU_TP_CD = 'RECEIPT CANCEL REASON'
	   							   AND LU_CD = A.RCT_CXL_RSN_CD
       							   AND ENBL_FLG = 'Y'), '') CXL_DESC
	, IB_OB_CD BOUND_TYPE
	, RCT_INV_TP_CD INVOICE_TYPE
FROM SAR_RECEIPT A,
	 SAP_BANK_ACCT B,
	 MDM_CURRENCY C
WHERE A.BANK_ACCT_SEQ = B.BANK_ACCT_SEQ
AND A.RCT_CURR_CD = C.CURR_CD
AND A.RCT_OFC_CD = @[rct_ofc_cd]
AND A.RCT_NO = @[rct_no]			]]></sql>
			<params>
				<param name="rct_ofc_cd" type="12" value="" out="N"/>
				<param name="rct_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
