<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableAdjustDBDAOsearchAdjustHdrListRSQL">
			<desc><![CDATA[Retrieve Outstanding Adjustment ]]></desc>
			<sql><![CDATA[
SELECT SAH.BL_NO,
	   SAH.BKG_NO,
	   SAH.INV_NO,
	   SAH.INV_OFC_CD,
	   SAH.SHP_TO_CUST_CNT_CD||'-'||LPAD(SAH.BIL_TO_CUST_SEQ, 6, '0') AS BIL_TO_CUST_CD,
	   SAH.LOCL_VVD_CD,
	   SAH.OTS_ADJ_SEQ,
	   SAH.SHP_TO_CUST_CNT_CD AS BIL_TO_CUST_CNT_CD,
	   SAH.BIL_TO_CUST_SEQ,
	   SAH.ADJ_RMK,
	   SAH.RVS_FLG,
	   SAH.AP_OFC_CD,
	   SAH.ASA_NO,
	   SAH.VNDR_NO,
	   SAH.AP_CURR_CD,
	   SAH.AP_CRS_CURR_AMT,
	   SAH.GAIN_AND_LSS_AMT,
	   SAH.AP_RMK,
	   SAH.ADJ_DT,
	   ADJ_TP_CD
	FROM SAR_ADJ_HDR SAH
 WHERE SAH.ADJ_NO = @[adj_no]  
#if (${adjt_ofc_cd} != '')
   AND sah.adj_ofc_cd =  @[adjt_ofc_cd]
#end			]]></sql>
			<params>
				<param name="adj_no" type="12" value="" out="N"/>
				<param name="adjt_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
