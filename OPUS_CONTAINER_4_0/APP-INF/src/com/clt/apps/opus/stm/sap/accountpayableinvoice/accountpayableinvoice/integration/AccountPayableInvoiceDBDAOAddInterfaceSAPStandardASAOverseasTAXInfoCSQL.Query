<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountPayableInvoiceDBDAOAddInterfaceSAPStandardASAOverseasTAXInfoCSQL">
			<desc><![CDATA[ASA 전표 중 TAX인 경우에는 해당 Item Line과 별도로 분리하여 해당 Tax Line 생성 처리]]></desc>
			<sql><![CDATA[
INSERT INTO SAP_AP_IF 
      ( AP_IF_SEQ
      , IF_SEQ_NO
      , REC_ID
      , ACCT_CO_CD
      , IF_DOC_TP_CD
      , DOC_DT
      , PST_DT
      , REF_DOC_NO
      , DOC_HDR_CD
      , CURR_CD
      , TAX_CALC_AUTO_FLG
      , PST_KEY_CD
      , VAT_TAX_CD
      , LOCL_AMT
      , DOC_AMT
      , LOCL_TAX_AMT
      , DOC_TAX_AMT
      , ASGN_NO
      , ITM_DESC
      , PLN_DT
      , COST_CTR_CD
      , ORD_NO
      , MN_ASET_NO
      , SUB_ASET_NO
      , ASET_TJ_TP_CD
      , ASET_VAL_DT
      , GL_ACCT_NO
      , CUST_NO
      , VNDR_CRTR_ACCT_NO
      , DUE_DT_CALC_BSEL_DT
      , PAY_MZD_CD
      , STE_CNTRL_BANK_IND_CD
      , MTRL_NO
      , FUEL_LAND_QTY
      , MEAS_BSE_UT_CD
      , PFITCTR_CD
      , ALTN_ACCT_NO
      , BIZ_PRNR_REF_KEY_CD1
      , BIZ_PRNR_REF_KEY_CD2
      , LINE_ITM_REF_KEY_CD
      , INSTR_KEY_CD1
      , INSTR_KEY_CD2
      , INSTR_KEY_CD3
      , PAY_REF_CD
      , AUTOMTC_PAY_CURR_CD
      , PAY_CURR_AMT
      , CTRT_NO
      , CTRT_TP_CD
      , PAY_RSN_CD
      , CLSS_CD
      , ACT_PLC_CD
      , ENTR_EXPN_ID
      , BUD_MGMT_DIV_CD
      , ACT_DT
      , VSL_CD
      , VVL_CD
      , HUS_BANK_ID
      , PAY_BLCK_KEY_CD
      , CRE_USR_ID
      , CRE_DT
      , UPD_USR_ID
      , UPD_DT
      , IF_FLG
      , IF_FILE_ID
      , IF_DT
      , IF_ITM_CATE_CD
      )
      SELECT  SAP_IF_TO_SAP_SEQ.NEXTVAL           AS IF_SEQ
            , @[slip_interface_seq]               AS SLIP_IF_SEQ_NO
            , NULL                                AS RECORD_ID
            , '1000'                              AS COMPANY_CODE
            , 'H5'                                AS DOCUMENT_TYPE
            , TO_CHAR(SIH.INV_DT, 'YYYYMMDD')     AS DOCUMENT_DATE
            , SIH.GL_DT                           AS POSTING_DATE
            , SUBSTR(SIH.INV_NO, 1, 16)           AS REFERENCE_DOCUMENT_NO
            , 'OPR305' || TO_CHAR(SYSDATE, 'YYYYMMDDHH24MISS') AS DOCUMENT_HEADER_TEXT
            , SIH.INV_CURR_CD                     AS CURRENCE_CODE
            , NULL                                AS TAX_CALCULATE_AUTO_FLAG
            , CASE WHEN SID.DTRB_AMT < 0 THEN '11'           
                   WHEN SID.DTRB_AMT >= 0 THEN '01'
              ELSE '01' END                       AS POST_KEY
            , NULL                                AS TAX_ON_SALES
            , DECODE(SIH.INV_CURR_CD, @[functional_currency], NULL, ABS(NVL(SID.DTRB_FUNC_AMT, 0))) AS LOCAL_AMOUNT  -- 2014.10.27 금액수정
            , ABS(NVL(SID.DTRB_AMT, 0))           AS DOCUMENT_AMOUNT
            , NULL                                AS LOCAL_TAX_AMOUNT
            , NULL                                AS DOCUMENT_TAX_AMOUNT
            , SUBSTR(SIH.INV_NO, 1, 16)           AS ASSIGNMENT_NUMBER
            , NULL                                AS ITEM_TEXT
            , NULL                                AS PLANNING_DATE
            , NULL                                AS COST_CENTER   -- Profit Center(Code Conversion)
            , NULL                                AS ORDER_NUMBER
            , NULL                                AS MAIN_ASSET_NUMBER
            , NULL                                AS ASSET_SUB_NUMBER
            , NULL                                AS ASSET_TRANSACTION_TYPE
            , NULL                                AS ASSET_VALUE_DATE
            , NULL                                AS GL_ACCOUNT_NO --- VTM의 G/L Account 처리
            , MO.MODI_AGN_CD                      AS CUSTOMER_NUMBER  -- 2015.01.08 변경 --- Office SAP-ID  (Code Conversion)
            , NULL                                AS VENDOR_ACCOUNT_NO
            , CASE WHEN NVL(AMT.DIFF_AMT, 0) <> 0 THEN 
                   (SELECT  TO_CHAR((TO_DATE(SAM.ASA_PRD_TO_DT, 'YYYYMMDD') + NVL(MO1.ASA_CR_TERM_DYS, 0)), 'YYYYMMDD') 
                    FROM    SAR_ASA_MST SAM, MDM_ORGANIZATION MO1 WHERE SAM.OFC_CD = MO1.OFC_CD AND SAM.ASA_NO = SIH.ATTR_CTNT2 AND ROWNUM = 1)
              ELSE NULL  END                      AS CALCULATE_DUE_DATE
            , NULL                                AS PAYMENT_METHOD -- Payment Method (Code Conversion)
            , NULL                                AS STATE_CENTRAL_BANK
            , NULL                                AS MATERIAL_NO
            , NULL                                AS QUANTITY
            , NULL                                AS BASE_UNIT
            , NULL                                AS PROFIT_CENTER -- Profit Center(Code Conversion)
            , '5360000000'                        AS ALTERNATIVE_ACCOUNT_NO   --- VTM의 G/L Account 처리
            , 'A106'                              AS BIZ_PARTNER_REF_KEY1 --2015.01.26 수정 -- Profit Center (Code Conversion)
            , NULL                                AS BIZ_PARTNER_REF_KEY2 -- GT 
            , NULL                                AS LINE_ITEM_REF_KEY    -- Office SAP-ID (Code Conversion)
            , NULL                                AS INSTRUCTION_KEY1
            , NULL                                AS INSTRUCTION_KEY2
            , NULL                                AS INSTRUCTION_KEY3
            , DECODE(SUBSTR(SLCC.SGM_CTNT4, 1, 1), '2', '35', '31') AS PAYMENT_REFERENCE
            , NULL                                AS AUTOMATIC_PAY_CURRENCY
            , NULL                                AS PAYMENT_CURR_AMOUNT
            , MO.MODI_AGN_CD                      AS CONTRACT_NUMBER    -- 2015.01.08 변경 --- Office SAP-ID  (Code Conversion)
            , 'Z'                                 AS CONTRACT_TYPE
            , NULL                                AS PAYMENT_REASON
            , NULL                                AS CLASSIFICATION
            , NULL                                AS ACTIVITY_PLACE  --POL DTX code (Code Conversion)
            , NULL                                AS ENTERTAINMENT_EXP_ID
            , NULL                                AS BUDGET_MANAGE_DIVISION
            , NULL                                AS ACTIVITY_DATE
            , NULL                                AS VESSEL  --Trunk Vessel DTX code (Code Conversion)
            , NULL                                AS VVL_CODE --Trunk VVD DTX code (Code Conversion)
            , NULL                                AS HOUSE_BANK
            , NULL                                AS PAYMENT_BLOCK_KEY
            , @[usr_id]                           AS CRE_USR_ID
            , SYSDATE                             AS CRE_DT
            , @[usr_id]                           AS UPD_USR_ID
            , SYSDATE                             AS UPD_DT
            , 'N'                                 AS INTERFACE_FLAG
            , NULL                                AS INTERFACE_FILE_ID
            , NULL                                AS INTERFACE_DATE
            , 'REV_TAX(OVERSEAS)'                 AS IF_ITEM_CATEGROY
      FROM    SAP_INV_HDR SIH
            , SAP_INV_DTL SID
            , SCO_LEGR_CD_CMB SLCC
            , MDM_ORGANIZATION MO -- 2014.10.23 추가 
            , (SELECT   A.INV_SEQ
                      , SUM(A.EXPENSE_AMT) AS EXPENSE_AMT
                      , SUM(A.ASA_AMT) AS ASA_AMT
                      , ABS(SUM(A.EXPENSE_AMT) + SUM(A.ASA_AMT)) AS DIFF_AMT 
                      , CASE WHEN MAX(A.EXPENSE_RATE) >= MAX(A.ASA_RATE) AND SUM(A.ORG_ASA_AMT) < 0 THEN DECODE(SIGN(SUM(A.EXPENSE_AMT) - SUM(A.ASA_AMT)), -1, '40', '50')
                             WHEN MAX(A.EXPENSE_RATE) < MAX(A.ASA_RATE) AND SUM(A.ORG_ASA_AMT) < 0  THEN DECODE(SIGN(SUM(A.EXPENSE_AMT) - SUM(A.ASA_AMT)), -1, '50', '40')
                             WHEN MAX(A.EXPENSE_RATE) >= MAX(A.ASA_RATE) AND SUM(A.ORG_ASA_AMT) >= 0 THEN DECODE(SIGN(SUM(A.EXPENSE_AMT) - SUM(A.ASA_AMT)), -1, '40', '50')
                             WHEN MAX(A.EXPENSE_RATE) < MAX(A.ASA_RATE) AND SUM(A.ORG_ASA_AMT) >= 0  THEN DECODE(SIGN(SUM(A.EXPENSE_AMT) - SUM(A.ASA_AMT)), -1, '50', '40')
                        ELSE DECODE(SIGN(SUM(A.EXPENSE_AMT) - SUM(A.ASA_AMT)), -1, '40', '50') END AS POST_KEY2
                      , CASE WHEN SUM(A.EXPENSE_AMT) + SUM(A.ASA_AMT) > 0 THEN '50' ELSE '40' END AS POST_KEY
               FROM     (
                        SELECT  SIH.INV_SEQ
                              , DECODE(SLCC.SGM_CTNT4, ASA_ACCT.ASA_CLEAR_ACCT, NULL, SID.DTRB_XCH_RT) AS EXPENSE_RATE
                              , DECODE(SLCC.SGM_CTNT4, ASA_ACCT.ASA_CLEAR_ACCT, SID.DTRB_XCH_RT, NULL) AS ASA_RATE
                              , DECODE(SLCC.SGM_CTNT4, ASA_ACCT.ASA_CLEAR_ACCT, NULL, SID.DTRB_FUNC_AMT) AS EXPENSE_AMT
                              , DECODE(SLCC.SGM_CTNT4, ASA_ACCT.ASA_CLEAR_ACCT, SID.DTRB_FUNC_AMT, NULL) AS ASA_AMT
                              , DECODE(SLCC.SGM_CTNT4, ASA_ACCT.ASA_CLEAR_ACCT, SID.DTRB_FUNC_AMT, NULL) AS ORG_ASA_AMT
                        FROM    SAP_INV_HDR SIH
                              , SAP_INV_DTL SID
                              , SCO_LEGR_CD_CMB SLCC
                              , (SELECT  SLD.LU_CD AS ASA_CLEAR_ACCT FROM SCO_LU_HDR SLH, SCO_LU_DTL SLD
                                 WHERE   SLH.LU_TP_CD = SLD.LU_TP_CD AND SLH.LU_TP_CD = 'ASA CLEARING ACCOUNT' AND NVL(SLD.ENBL_FLG, 'Y') = 'Y'
                                 AND     NVL(SLD.LU_ST_DT, SYSDATE) >= SYSDATE AND SLH.LU_APPL_CD = 'SAP'AND ROWNUM = 1) ASA_ACCT
                        WHERE   SIH.INV_SEQ = SID.INV_SEQ 
                        AND     SID.DTRB_CD_CMB_SEQ = SLCC.CD_CMB_SEQ
                        AND     NVL(SID.RVS_FLG, 'N') = 'N'
                        AND     SIH.INV_SEQ = @[inv_seq] 
                        ) A
               GROUP    BY A.INV_SEQ) AMT
      WHERE   SIH.INV_SEQ = SID.INV_SEQ 
      AND     SIH.INV_SEQ = AMT.INV_SEQ(+)
      AND     SID.DTRB_CD_CMB_SEQ = SLCC.CD_CMB_SEQ
      AND     SIH.OFC_CD = MO.OFC_CD -- 2014.10.23 추가 
      AND     SID.LINE_TP_LU_CD <> 'PREPAY'   
      AND     SID.DTRB_AMT <> 0 --2015.02.03 추가
      AND     SIH.INV_SEQ = @[inv_seq]
      AND     SLCC.SGM_CTNT4 IN (SELECT  SLD.LU_CD FROM SCO_LU_HDR SLH, SCO_LU_DTL SLD  
                                 WHERE   SLH.LU_TP_CD = SLD.LU_TP_CD AND SLH.LU_TP_CD = 'AP TAX ACCOUNT' AND NVL(SLD.ENBL_FLG, 'Y') = 'Y'
                                 AND     NVL(SLD.LU_ST_DT, SYSDATE) >= SYSDATE AND SLH.LU_APPL_CD = 'SAP'AND SLD.ATTR_CTNT1 IN ('EXTERNAL', 'INTERNAL', 'WITHHOLDING'))			]]></sql>
			<params>
				<param name="slip_interface_seq" type="12" value="" out="N"/>
				<param name="functional_currency" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="inv_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
