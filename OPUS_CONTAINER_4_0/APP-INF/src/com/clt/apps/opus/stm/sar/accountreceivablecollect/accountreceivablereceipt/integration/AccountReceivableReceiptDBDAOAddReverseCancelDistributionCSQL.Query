<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableReceiptDBDAOAddReverseCancelDistributionCSQL">
			<desc><![CDATA[Add reverse or cancel distribution]]></desc>
			<sql><![CDATA[
INSERT INTO SAR_CLT_DTRB
(
	CLT_DTRB_SEQ
	, DTRB_SRC_SEQ
	, DTRB_SRC_TBL_CD
	, DTRB_SRC_TP_CD
	, DTRB_CD_CMB_SEQ
	, INP_DR_AMT
	, INP_CR_AMT
	, ACCT_DR_AMT
	, ACCT_CR_AMT
	, ORZ_SEQ
	, FM_DTRB_SRC_SEQ
	, CURR_CD
	, CONV_XCH_RT
	, ACCT_XCH_RT_LVL
	, ACCT_XCH_RT_DT
	, CUST_CNT_CD
	, CUST_SEQ
	, RVS_SRC_SEQ
	, FM_INP_DR_AMT
	, FM_INP_CR_AMT
	, FM_ACCT_DR_AMT
	, FM_ACCT_CR_AMT
	, CRE_USR_ID
	, CRE_DT
	, UPD_USR_ID
	, UPD_DT
	, AR_IF_SEQ
	, AR_IF_STS_CD
	, AR_IF_ERR_DESC
)
SELECT SAR_CLT_DTRB_SEQ.NEXTVAL
	   , @[rcv_appl_seq]
	   , DTRB_SRC_TBL_CD
	   , DTRB_SRC_TP_CD
	   , DTRB_CD_CMB_SEQ
	   , INP_CR_AMT
	   , INP_DR_AMT
	   , ACCT_CR_AMT
	   , ACCT_DR_AMT
	   , '-1'
	   , DECODE(FM_DTRB_SRC_SEQ, NULL, NULL, @[rcv_appl_seq] - 1)
	   , CURR_CD
	   , CONV_XCH_RT
	   , ACCT_XCH_RT_LVL
	   , ACCT_XCH_RT_DT
	   , CUST_CNT_CD
	   , CUST_SEQ
	   , @[tgt_rcv_appl_seq]
	   , NULL
	   , NULL
	   , NULL
	   , NULL
	   , @[cre_usr_id]
	   , SYSDATE
	   , @[upd_usr_id]
	   , SYSDATE
	   , NULL
       , 'P'
       , NULL
FROM SAR_CLT_DTRB
WHERE DTRB_SRC_SEQ = @[tgt_rcv_appl_seq]
AND DTRB_SRC_TBL_CD = 'RCT'			]]></sql>
			<params>
				<param name="rcv_appl_seq" type="12" value="" out="N"/>
				<param name="tgt_rcv_appl_seq" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
