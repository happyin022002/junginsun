<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableAdjustDBDAOcreateAutoSettlementHeaderInfoCSQL">
			<desc><![CDATA[SAR_ADJ_HDR 테이블에 insert]]></desc>
			<sql><![CDATA[
INSERT INTO  SAR_ADJ_HDR
(
     OTS_ADJ_SEQ
	,ADJ_NO
	,ADJ_DT
	,BL_NO
	,BKG_NO
	,INV_NO
	,INV_OFC_CD
	,ADJ_TP_CD
	,BIL_TO_CUST_CNT_CD
	,BIL_TO_CUST_SEQ
	,SHP_TO_CUST_CNT_CD
	,SHP_TO_CUST_SEQ
	,LOCL_VVD_CD
	,TRNK_VVD_CD
	,SAIL_DT
	,SAIL_ARR_DT
	,OBRD_DT
	,IO_BND_CD
	,DUE_DT
	,SREP_CD
	,ADJ_RMK
	,XCH_RT_TP_CD
	,XCH_RT_DT
	,CR_FLG
	,AR_TAX_IND_CD
	,AR_TJ_TP_CD
	,AR_FINC_SRC_CD
	,MAX_AR_IF_NO
	,AP_CURR_CD
	,AP_CRS_CURR_AMT
	,GAIN_AND_LSS_AMT
	,AP_OFC_CD
	,VNDR_NO
	,AP_RMK
	,RVS_FLG
	,ASA_NO
	,CRE_USR_ID
	,CRE_DT
	,UPD_USR_ID
	,UPD_DT
	,ADJ_KEY_NO
	,ADJ_OFC_CD
)
SELECT @[ots_adj_seq],
       @[adj_no],
       REPLACE(@[adj_dt], '-', ''),
       SOH.BL_NO,
       SOH.BKG_NO,
       SOH.INV_NO,
       SOH.CLT_OFC_CD,
       @[adj_tp_cd],
       SOH.BIL_TO_CUST_CNT_CD,
       SOH.BIL_TO_CUST_SEQ,
       SOH.SHP_TO_CUST_CNT_CD,
       SOH.SHP_TO_CUST_SEQ,
       SOH.VSL_CD||SOH.SKD_VOY_NO||SOH.DIR_CD AS LOCL_VVD_CD,
	   SOH.TRNK_VVD_CD,
       NULL  SAIL_DT,
       SOH.SAIL_ARR_DT,
       NULL  OBRD_DT,
       SOH.BKG_IO_BND_CD,
       SOH.DUE_DT,
       SOH.cust_srep_cd ,
       NULL     ADJ_RMK,
       SOH.XCH_RT_TP_CD,
       SOH.XCH_RT_DT,
       SOH.CR_MK_FLG  CR_FLG,
       NULL    AR_TAX_IND_CD,
       NULL    TJ_SRC_NM,
       SOH.OTS_SRC_CD,
       SOH.MAX_AR_IF_NO,
       NULL    AP_CURR_CD,
       NULL    AP_CRS_CURR_AMT,
       NULL    GAIN_AND_LSS_AMT,
       NULL    AP_OFC_CD,
       NULL    VNDR_NO,
       NULL    AP_RMK,
       NULL    RVS_FLG,
       NULL    ASA_NO,
       @[cre_usr_id],
       SYSDATE, 
       @[cre_usr_id],
       SYSDATE,
	   @[adj_key_no],
	   SOH.CLT_OFC_CD
FROM   SAR_OTS_HDR  SOH,
       SAR_OTS_HIS  SOHI
WHERE  SOH.MAX_AR_IF_NO||'1' = SOHI.IF_NO
AND    SOH.RHQ_CD = @[rhq_cd]
AND    SOH.OTS_OFC_CD = @[ots_ofc_cd]  
AND    SOH.CLT_OFC_CD = @[clt_ofc_cd]
AND    SOH.BL_NO = @[bl_no]  
AND    SOH.INV_NO = @[inv_no] 
AND    SOHI.OTS_HIS_TP_CD = 'OTS' 
AND    SOH.STL_FLG = 'N'
AND    ROWNUM = 1			]]></sql>
			<params>
				<param name="ots_adj_seq" type="12" value="" out="N"/>
				<param name="adj_no" type="12" value="" out="N"/>
				<param name="adj_dt" type="12" value="" out="N"/>
				<param name="adj_tp_cd" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="adj_key_no" type="12" value="" out="N"/>
				<param name="rhq_cd" type="12" value="" out="N"/>
				<param name="ots_ofc_cd" type="12" value="" out="N"/>
				<param name="clt_ofc_cd" type="12" value="" out="N"/>
				<param name="bl_no" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
