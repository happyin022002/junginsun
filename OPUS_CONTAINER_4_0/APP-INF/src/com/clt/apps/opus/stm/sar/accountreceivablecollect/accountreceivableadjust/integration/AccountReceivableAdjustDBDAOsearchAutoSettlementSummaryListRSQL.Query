<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableAdjustDBDAOsearchAutoSettlementSummaryListRSQL">
			<desc><![CDATA[Retrieve Temporary Autosettlement Entry Summary]]></desc>
			<sql><![CDATA[
SELECT A.CLT_OFC_CD AS OFC_CD,
	   A.BL_CURR_CD AS OFC_BL_CURR_CD,
	   NVL(C.DP_PRCS_KNT, 2) LCL_PRCS,
	   NVL(D.DP_PRCS_KNT, 2) BL_PRCS,  
       COUNT(*) AS OFC_BL_CNT,
       SUM(A.BAL_AMT) AS OFC_BAL_AMT,   
	   SUM(A.BAL_LOCL_AMT) AS OFC_LCL_AMT, 
       SUM(A.BAL_USD_AMT) AS OFC_USD_AMT
FROM   SAR_AUTO_STL_TMP A,
	   MDM_ORGANIZATION B,
	   MDM_CURRENCY C,
	   MDM_CURRENCY D
WHERE
A.BAT_SEQ = @[bat_seq] 
AND A.CLT_OFC_CD = B.OFC_CD
AND B.AR_CURR_CD = C.CURR_CD
AND A.BL_CURR_CD = D.CURR_CD
GROUP BY
    A.CLT_OFC_CD,
	A.BL_CURR_CD,
	C.DP_PRCS_KNT,
	D.DP_PRCS_KNT
ORDER BY
    A.CLT_OFC_CD,
	A.BL_CURR_CD			]]></sql>
			<params>
				<param name="bat_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
