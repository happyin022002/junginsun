<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountPayablePaymentDBDAOModifySOInterfaceTRSUSQL">
			<desc><![CDATA[ModifySOInterfaceTRS]]></desc>
			<sql><![CDATA[
--UPDATE 		TRS_TRSP_INV_WRK
--SET 		TRSP_INV_AUD_STS_CD  		= 'PD'
--			,PAY_DT 					= TO_DATE(SUBSTR([PAY_DT],1,8),'YYYYMMDD')
--			,INV_CHK_TRNS_NO			= [INV_CHK_TRNS_NO]
--			,INV_PAY_MZD_CD 			= [INV_PAY_MZD_CD]
--WHERE 		CSR_NO 						= [CSR_NO]
UPDATE TRS_TRSP_INV_WRK A
SET (A.TRSP_INV_AUD_STS_CD, A.PAY_DT, A.INV_PAY_MZD_CD)
    = (
       SELECT 'PD'
             ,MAX(SPH.PAY_DT) PAY_DT
             ,SIH.PAY_MZD_LU_CD
       FROM  SAP_INV_HDR SIH
            ,SAP_PAY_HDR SPH 
            ,SAP_PAY_DTL SPD
       WHERE SPH.PAY_SEQ = SPD.PAY_SEQ
       AND   SIH.INV_SEQ = SPD.INV_SEQ
       AND   SIH.INV_NO = A.CSR_NO
       GROUP BY SIH.INV_NO, SIH.PAY_MZD_LU_CD
      ) 
WHERE   A.CSR_NO = @[csr_no]
AND EXISTS  (
              SELECT 'Y'
              FROM  SAP_INV_HDR SIH
              WHERE 1=1
              AND SIH.INV_NO = A.CSR_NO              
            )			]]></sql>
			<params>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
