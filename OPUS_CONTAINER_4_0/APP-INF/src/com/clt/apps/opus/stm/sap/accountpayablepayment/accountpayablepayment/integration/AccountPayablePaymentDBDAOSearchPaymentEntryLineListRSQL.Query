<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountPayablePaymentDBDAOSearchPaymentEntryLineListRSQL">
			<desc><![CDATA[AccountPayablePaymentDBDAOSearchPaymentEntryLineListRSQL]]></desc>
			<sql><![CDATA[
SELECT SPD.INV_PAY_SEQ,
       SPD.PAY_SEQ,
       SIH.INV_NO,
       TO_CHAR(SIH.INV_DT,'YYYYMMDD') AS INV_DT,
       TRIM(OPUSADM.SAP_GET_CUR_AMT_FNC(SIH.INV_CURR_CD, SIH.INV_AMT)) AS INV_AMT,
       TO_CHAR(SPD.ACCTG_DT,'YYYYMMDD') AS ACCTG_DT,
       SIH.INV_DESC,
       TRIM(OPUSADM.SAP_GET_CUR_AMT_FNC(SIH.INV_PAY_CURR_CD, SPD.PAY_AMT)) AS PAY_AMT,
	   	SPD.PAY_FUNC_AMT,
        SPD.LIAB_CD_CMB_SEQ,
		SPD.XTER_BANK_ACCT_SEQ,
		SPD.REMIT_VNDR_NO,
		SPD.PAY_SKD_NO,
		SIH.INV_SEQ,
	   	'' AS USR_ID
FROM SAP_INV_HDR SIH,
     SAP_PAY_HDR SPH, 
     SAP_PAY_DTL SPD
WHERE SPH.PAY_SEQ = SPD.PAY_SEQ
AND  SIH.INV_SEQ = SPD.INV_SEQ
AND SPD.PAY_SEQ = @[pay_seq]
ORDER BY SPD.INV_PAY_SEQ ASC, SPD.PAY_SKD_NO ASC			]]></sql>
			<params>
				<param name="pay_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
