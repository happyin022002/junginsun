<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableAgentDBDAOSearchASARemittanceExpDrCrAmtRSQL">
			<desc><![CDATA[select Remittance EXP Adjust]]></desc>
			<sql><![CDATA[
SELECT NVL(SUM(CASE WHEN B.ADJ_AMT < 0 THEN B.ADJ_AMT ELSE 0 END), 0) AS DEBIT_AMT  
         , NVL(SUM(CASE WHEN B.ADJ_AMT > 0 THEN B.ADJ_AMT ELSE 0 END), 0) AS CREDIT_AMT
     FROM SAR_ADJ_HDR   A, 
          SAR_ADJ_DTL   B     
    WHERE 1 = 1
      AND A.OTS_ADJ_SEQ = B.OTS_ADJ_SEQ
      AND A.ASA_NO = @[asa_no]
      AND B.ADJ_TP_CD = 'EX'
      AND NVL(A.RVS_FLG,'N') <> 'Y'			]]></sql>
			<params>
				<param name="asa_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
