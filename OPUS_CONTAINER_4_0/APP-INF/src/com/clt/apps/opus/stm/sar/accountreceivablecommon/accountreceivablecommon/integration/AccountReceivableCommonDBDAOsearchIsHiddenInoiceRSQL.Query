<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableCommonDBDAOsearchIsHiddenInoiceRSQL">
			<desc><![CDATA[searchIsHiddenInoice]]></desc>
			<sql><![CDATA[
WITH OFC_INFO
AS (
    SELECT 
      @[ofc_cd] AS OFC_CD,
      AR_OFC_CD
      FROM MDM_ORGANIZATION
      WHERE OFC_CD = @[ofc_cd]
      AND ROWNUM = 1
)
SELECT
    OFC_INFO.OFC_CD,
    OFC_INFO.AR_OFC_CD,
    MO.AR_HD_QTR_OFC_CD, 
    DECODE(OFC_INFO.OFC_CD,MO.AR_HD_QTR_OFC_CD,'Y','N') AS HQ_FLG,
    SO.OTS_CATE_CD,
    DECODE(SO.OTS_CATE_CD,'INV','N',DECODE(OFC_INFO.OFC_CD,MO.AR_HD_QTR_OFC_CD,'N','Y')) INV_HDN_YN
FROM 
MDM_ORGANIZATION MO,
SCO_OFC_INFO SO,
OFC_INFO
WHERE 
OFC_INFO.AR_OFC_CD = MO.OFC_CD(+)
AND OFC_INFO.AR_OFC_CD = SO.OFC_CD(+)			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
