<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableAgentDBDAOSearchASACltRfndTTLAmtRSQL">
			<desc><![CDATA[get SUM ASA Collection & Refund TTL Amount]]></desc>
			<sql><![CDATA[
SELECT  
       MAX(AR_OFC_CD)  AS AR_OFC_CD
     , MAX(ASA_CURR_CD)  AS ASA_CURR_CD
     , SUM(DECODE(ASA_TP_CD, 'C',TTL_AMT,-1 * TTL_AMT)) TTL_AMT
FROM SAR_AGN_CLT_RFND_MST
WHERE ASA_NO = @[asa_no]
			]]></sql>
			<params>
				<param name="asa_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
