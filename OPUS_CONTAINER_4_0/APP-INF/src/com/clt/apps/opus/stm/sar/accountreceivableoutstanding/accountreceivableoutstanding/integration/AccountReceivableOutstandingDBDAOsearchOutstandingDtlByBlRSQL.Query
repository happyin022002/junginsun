<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableOutstandingDBDAOsearchOutstandingDtlByBlRSQL">
			<desc><![CDATA[Outstanding Inquiry by B/L(Invoice) Detail]]></desc>
			<sql><![CDATA[
SELECT 
         A.RHQ_CD
       , A.OTS_OFC_CD
       , A.BL_NO
       , A.INV_NO
       , A.BL_CURR_CD 
       , A.CHG_TP_CD 
       , A.INV_AMT 
       , A.INV_UPD_DT
       , A.RCT_AMT
       , A.RCT_UPD_DT
       , A.ADJ_AMT 
       , A.ADJ_UPD_DT
       , A.BAL_AMT
       , A.BAL_UPD_DT
       , A.LOCL_XCH_RT
       , A.USD_XCH_RT                 
       , A.BAL_LOCL_AMT
       , A.BAL_USD_AMT
       , B.BIL_TO_CUST_CNT_CD || LPAD(B.BIL_TO_CUST_SEQ,6, '0') CUST_NUM
       , B.BKG_NO
FROM     SAR_OTS_DTL A
       , SAR_OTS_HDR B
WHERE 1 = 1          
  AND A.RHQ_CD = B.RHQ_CD
  AND A.OTS_OFC_CD = B.OTS_OFC_CD
  AND A.BL_NO = B.BL_NO
  AND A.INV_NO = B.INV_NO
  AND A.BL_NO = @[bl_no]
  AND A.RHQ_CD = @[rhq_cd]
  AND A.OTS_OFC_CD = @[ots_ofc_cd]
  AND A.INV_NO = @[inv_no]			]]></sql>
			<params>
				<param name="bl_no" type="12" value="" out="N"/>
				<param name="rhq_cd" type="12" value="" out="N"/>
				<param name="ots_ofc_cd" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
