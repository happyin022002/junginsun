<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableOutstandingDBDAOmodifyOTSSettleFlagUSQL">
			<desc><![CDATA[OTS Settle Flag 와 Exrate Flag 를 Update 한다.]]></desc>
			<sql><![CDATA[
UPDATE SAR_OTS_HDR SET
    STL_FLG = NVL((SELECT 'N'
       	   		   FROM SAR_OTS_DTL
       	   		   WHERE RHQ_CD = @[rhq_cd]
       	   		   AND OTS_OFC_CD = @[ots_ofc_cd]
       	   		   AND BL_NO = @[bl_no]
       	   		   AND INV_NO = @[inv_no]
		   		   AND NVL(BAL_AMT, 0) <> 0
		   		   AND ROWNUM = 1), 'Y')
    , OTS_RT_FLG = NVL((SELECT 'N' 
       	   				FROM SAR_OTS_DTL
           				WHERE RHQ_CD = @[rhq_cd]
           				AND OTS_OFC_CD = @[ots_ofc_cd]
           				AND BL_NO = @[bl_no]
           				AND INV_NO = @[inv_no]
						AND NVL(INV_AMT, 0) <> 0
	       				AND (NVL(LOCL_XCH_RT, 0) = 0 OR NVL(USD_XCH_RT, 0) = 0)
           				AND ROWNUM = 1), 'Y')
	, UPD_USR_ID = @[upd_usr_id]
    , UPD_DT = SYSDATE
WHERE RHQ_CD = @[rhq_cd]
AND OTS_OFC_CD = @[ots_ofc_cd]
AND BL_NO = @[bl_no]
AND INV_NO = @[inv_no]			]]></sql>
			<params>
				<param name="rhq_cd" type="12" value="" out="N"/>
				<param name="ots_ofc_cd" type="12" value="" out="N"/>
				<param name="bl_no" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
