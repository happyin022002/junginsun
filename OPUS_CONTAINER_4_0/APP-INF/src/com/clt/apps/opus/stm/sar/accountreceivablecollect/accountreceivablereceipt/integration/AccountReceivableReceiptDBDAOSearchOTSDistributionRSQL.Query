<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableReceiptDBDAOSearchOTSDistributionRSQL">
			<desc><![CDATA[Search OTS Distribution info]]></desc>
			<sql><![CDATA[
SELECT A.OTS_CD_CMB_SEQ 			
     , A.CURR_CD        	  				
     , A.BIL_TO_CUST_CNT_CD 		
     , A.BIL_TO_CUST_SEQ    
     , B.REC_ACCT_MTX_SEQ
	 , B.BAL_AMT
FROM SAR_OTS_DTRB A,
	 SAR_OTS_CHG B
WHERE A.OTS_HIS_SEQ = B.OTS_HIS_SEQ
AND A.CHG_TP_CD = B.CHG_TP_CD
AND A.OTS_HIS_SEQ = @[ots_his_seq]
AND A.CHG_TP_CD = @[chg_tp_cd]
AND A.ACCT_CLSS_CD = 'REC'			]]></sql>
			<params>
				<param name="ots_his_seq" type="12" value="" out="N"/>
				<param name="chg_tp_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
