<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableOutstandingDBDAOsearchINVForOutstandingHeaderRSQL">
			<desc><![CDATA[Outstanding Header를 생성하기 위한 Invoice 정보를 select]]></desc>
			<sql><![CDATA[
SELECT B.AR_HD_QTR_OFC_CD RHQ_CD
       , DECODE(NVL(D.OTS_CD, 'ARO'), 'COU', D.REP_OTS_OFC_CD, A.AR_OFC_CD) OTS_OFC_CD
       , A.BL_SRC_NO BL_NO
       , DECODE(C.OTS_SMRY_CD, 'INV', NVL(A.INV_NO, '**********'), '**********') INV_NO
       , A.LOCL_CURR_CD OFC_CURR_CD
       , 'INVAR' OTS_SRC_CD
       , A.ACT_CUST_CNT_CD BIL_TO_CUST_CNT_CD
       , A.ACT_CUST_SEQ BIL_TO_CUST_SEQ
       , A.BKG_NO
       , A.VSL_CD
       , A.SKD_VOY_NO
       , A.SKD_DIR_CD DIR_CD
       , A.TRNK_VSL_CD||A.TRNK_SKD_VOY_NO||A.TRNK_SKD_DIR_CD TRNK_VVD_CD
       , A.SVC_SCP_CD
       , A.SLAN_CD LANE_CD
       , A.SAIL_ARR_DT
       , A.IO_BND_CD BKG_IO_BND_CD
       , A.POR_CD
       , A.POL_CD
       , A.POD_CD
       , A.DEL_CD
       , A.SREP_CD CUST_SREP_CD
       , A.DUE_DT
       , A.INV_REF_NO BKG_REF_NO
       , A.AP_AR_OFFST_NO
       , A.CUST_CR_FLG CR_MK_FLG
       , A.XCH_RT_USD_TP_CD XCH_RT_TP_CD
       , A.ISS_DT INV_DT
       , A.AR_OFC_CD CLT_OFC_CD
       , A.SC_NO
       , A.REV_TP_CD||A.REV_SRC_CD REV_TP_SRC_CD
	   , A.INV_CUST_CNT_CD SHP_TO_CUST_CNT_CD
	   , A.INV_CUST_SEQ SHP_TO_CUST_SEQ
       , A.XCH_RT_N3RD_TP_CD
 	   , A.XCH_RT_DT
	   , A.AR_IF_NO MAX_AR_IF_NO
	   , A.SAIL_DT
	   , A.UPD_USR_ID CRE_USR_ID
	   , A.UPD_USR_ID
	   , DECODE(C.OTS_SMRY_CD, 'INV', A.INV_CURR_CD, '') INV_CURR_CD
	   , DECODE(DECODE(C.OTS_SMRY_CD, 'INV', A.INV_CURR_CD, ''), '', '', DECODE(DECODE(C.OTS_SMRY_CD, 'INV', A.INV_CURR_CD, ''), A.LOCL_CURR_CD, 1, A.INV_LOCL_XCH_RT)) INV_LOCL_XCH_RT
  	   , DECODE(DECODE(C.OTS_SMRY_CD, 'INV', A.INV_CURR_CD, ''), '', '', DECODE(DECODE(C.OTS_SMRY_CD, 'INV', A.INV_CURR_CD, ''), 'USD', 1, A.INV_USD_XCH_RT)) INV_USD_XCH_RT
	   , A.AR_OFC_CD
	   , NVL((SELECT DISTINCT 'N'
              FROM INV_AR_MN IAM,
                   INV_AR_CHG IAC
              WHERE IAM.AR_IF_NO = IAC.AR_IF_NO
              AND IAM.AR_OFC_CD = A.AR_OFC_CD
              AND IAM.BL_SRC_NO = A.BL_SRC_NO
              AND IAM.REV_TP_CD <> 'M'
              GROUP BY IAC.CURR_CD
              HAVING SUM(IAC.CHG_AMT) <> 0), 'Y') BKG_STL_FLG
FROM INV_AR_MN A,
     MDM_ORGANIZATION B,
	 INV_AR_STUP_OFC C,
	 SCO_OFC_INFO D
WHERE A.AR_OFC_CD = B.OFC_CD
AND A.AR_OFC_CD = C.AR_OFC_CD(+)
AND A.AR_OFC_CD = D.OFC_CD(+)
AND C.DELT_FLG(+) = 'N'
AND A.AR_IF_NO = @[if_no]			]]></sql>
			<params>
				<param name="if_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
