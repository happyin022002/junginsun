<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableAdjustDBDAOsearchAutosettlementSetupDateRSQL">
			<desc><![CDATA[Search Sail Arrival Date, GL Date, Balance Update Date]]></desc>
			<sql><![CDATA[
SELECT
    TO_CHAR(ADD_MONTHS(GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC((SELECT AR_OFC_CD                                           
						   FROM MDM_ORGANIZATION                                           
						   WHERE OFC_CD = @[l_ofc_cd])), - 2),
       'YYYYMMDD') AS SAIL_ARR_DT,
	TO_CHAR(GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC((SELECT AR_OFC_CD                                           
						   FROM MDM_ORGANIZATION                                           
						   WHERE OFC_CD = @[l_ofc_cd])),
       'YYYYMMDD') AS ADJ_DT,
    TO_CHAR(ADD_MONTHS(GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC((SELECT AR_OFC_CD                                           
						   FROM MDM_ORGANIZATION                                           
						   WHERE OFC_CD = @[l_ofc_cd])), - 1),
       'YYYYMMDD') AS BAL_UPD_DT
FROM DUAL			]]></sql>
			<params>
				<param name="l_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
