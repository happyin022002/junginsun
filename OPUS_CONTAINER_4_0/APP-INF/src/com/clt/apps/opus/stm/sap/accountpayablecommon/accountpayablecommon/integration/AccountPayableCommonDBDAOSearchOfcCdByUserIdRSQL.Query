<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountPayableCommonDBDAOSearchOfcCdByUserIdRSQL">
			<desc><![CDATA[Login User의 Office 정보 조건으로 Office 테이블의 AP Office]]></desc>
			<sql><![CDATA[
SELECT AP_OFC_CD, AR_CURR_CD, LOC_CD
FROM (
SELECT 0 AS ORD, MO2.AP_OFC_CD ,  MO2.AR_CURR_CD , MO2.LOC_CD  
FROM MDM_ORGANIZATION MO
   , MDM_ORGANIZATION MO2
WHERE MO.OFC_CD  = @[ofc_cd]
AND   MO.AP_OFC_CD = MO2.OFC_CD
UNION
SELECT 1 AS ORD, MO2.AP_OFC_CD ,  MO2.AR_CURR_CD , MO2.LOC_CD 
FROM MDM_ORGANIZATION MO
   , MDM_ORGANIZATION MO2
WHERE MO.OFC_CD  = (SELECT OFC_CD 
                FROM COM_USER
                WHERE USR_ID = @[usr_id])
AND   MO.AP_OFC_CD = MO2.OFC_CD
ORDER BY ORD
) T
WHERE 1=1 
AND   ROWNUM=1			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
