<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableReceiptDBDAOsearchReceivableForOTSDetailRSQL">
			<desc><![CDATA[OTS Detail 반영대상 Receivable 정보 조회]]></desc>
			<sql><![CDATA[
SELECT B.RHQ_CD
    , B.OTS_OFC_CD
    , B.BL_NO
    , B.INV_NO
    , B.CURR_CD BL_CURR_CD
    , A.CHG_TP_CD
    , NVL(SUM(A.APLY_AMT), 0) RCT_AMT
    , A.UPD_USR_ID
FROM SAR_RCV_APPL A,
     SAR_OTS_HIS B,
	 SAR_RCV_APPL_SEQ_TMP C
WHERE A.OTS_HIS_SEQ = B.OTS_HIS_SEQ
AND A.RCV_APPL_SEQ = C.RCV_APPL_SEQ
GROUP BY B.RHQ_CD
    , B.OTS_OFC_CD
    , B.BL_NO
    , B.INV_NO
    , B.CURR_CD
    , A.CHG_TP_CD
    , A.UPD_USR_ID			]]></sql>
			<params>
			</params>
		</query>
	</querys>
</sqls>
