<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableAdjustDBDAOSearchApGlDtListRSQL">
			<desc><![CDATA[Retrieve Outstanding Adjustment ]]></desc>
			<sql><![CDATA[
SELECT MAX(ADJ_GL_DT) AS AP_GL_DT
FROM SAR_ADJ_HIS
WHERE ADJ_NO = @[adj_no]
#if(${dt_tp_cd} == 'G')
	#if(${rvs_flg} == 'N')
		AND ADJ_STS_CD = 'ADJUST'
	#elseif(${rvs_flg} == 'Y')
		AND ADJ_STS_CD = 'REVERSE'
	#end
#else
	AND ADJ_STS_CD = 'ADJUST'
#end			]]></sql>
			<params>
				<param name="adj_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
