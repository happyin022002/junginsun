<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableAdjustDBDAOsearchOutstandingForApplyAdjustRvsRSQL">
			<desc><![CDATA[Search Target OTS for Apply and Adjust Reverse]]></desc>
			<sql><![CDATA[
SELECT
    A.ADJ_NO,
    A.ADJ_AMT * (-1) AS ADJ_AMT,
    A.ADJ_GL_DT,
    A.ADJ_CD_CMB_SEQ, 
    A.CHG_TP_CD,
    A.ADJ_TP_CD,
    A.ADJ_RMK,
    A.GL_TRNS_SEQ,
    A.GL_TRNS_DT,
    A.ORZ_SEQ,
    A.ACCTG_EVNT_SEQ,
    A.CRE_USR_ID,
    A.UPD_USR_ID,
    A.OTS_HIS_SEQ,
    A.ACCT_MTX_SEQ,
    A.ADJ_KEY_NO,
    C.ADJ_SRC_CURR_CD,
	A.ADJ_ACCT_AMT * (-1) AS ADJ_ACCT_AMT,
	A.ADJ_CRS_CURR_AMT * (-1) AS ADJ_CRS_CURR_AMT,
	A.ADJ_CRS_CURR_CD,
	A.AP_RMK,
	A.ADJ_OFC_CD, 
	A.GL_CRS_CURR_AMT * (-1) AS GL_CRS_CURR_AMT,
	A.GL_CRS_CURR_CD,
	A.GL_CRS_EX_RATE
FROM
    SAR_ADJ_HIS A,
    SAR_ADJ_HDR B,
    SAR_ADJ_DTL C
WHERE 1=1
AND A.ADJ_NO = B.ADJ_NO
AND A.CHG_TP_CD = C.CHG_TP_CD
AND B.OTS_ADJ_SEQ = C.OTS_ADJ_SEQ
AND A.ADJ_NO = @[adj_no]
AND C.ADJ_SRC_CURR_CD = @[bl_curr_cd]
AND C.CHG_TP_CD = @[chg_tp_cd]
ORDER BY
     ADJ_HIS_SEQ			]]></sql>
			<params>
				<param name="adj_no" type="12" value="" out="N"/>
				<param name="bl_curr_cd" type="12" value="" out="N"/>
				<param name="chg_tp_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
