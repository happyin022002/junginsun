<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableCommonDBDAOsearchIndExrateRSQL">
			<desc><![CDATA[개별화주 환율 조회]]></desc>
			<sql><![CDATA[
SELECT NVL(DECODE(@[rvs_flg], 'Y', IVS_XCH_RT, INV_XCH_RT), '0') EXRATE
FROM  INV_CUST_AND_DLY_XCH_RT
WHERE CUST_CNT_CD = @[inv_cust_cnt_cd]
AND   CUST_SEQ  = @[inv_cust_seq]
AND   IO_BND_CD = @[io_bnd_cd]
AND   replace(@[xch_rt_dt],'-','') BETWEEN FM_DT AND TO_DT
AND   CHG_CURR_CD = DECODE(@[rvs_flg], 'Y', @[lcl_curr_cd], @[chg_curr_cd])
AND   LOCL_CURR_CD = DECODE(@[rvs_flg], 'Y', @[chg_curr_cd], @[lcl_curr_cd])
AND   XCH_RT_TP_CD = 'I'			]]></sql>
			<params>
				<param name="rvs_flg" type="12" value="" out="N"/>
				<param name="inv_cust_cnt_cd" type="12" value="" out="N"/>
				<param name="inv_cust_seq" type="12" value="" out="N"/>
				<param name="io_bnd_cd" type="12" value="" out="N"/>
				<param name="xch_rt_dt" type="12" value="" out="N"/>
				<param name="lcl_curr_cd" type="12" value="" out="N"/>
				<param name="chg_curr_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
