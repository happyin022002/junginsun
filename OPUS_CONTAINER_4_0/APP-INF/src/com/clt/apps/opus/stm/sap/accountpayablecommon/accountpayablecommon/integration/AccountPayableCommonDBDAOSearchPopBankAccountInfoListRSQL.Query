<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountPayableCommonDBDAOSearchPopBankAccountInfoListRSQL">
			<desc><![CDATA[조건을 기준으로 등록되어 있는 은행계좌 정보에서 해당하는 계좌 내역을 조회 처리]]></desc>
			<sql><![CDATA[
SELECT A.BANK_ACCT_NM,
       A.BANK_ACCT_NO,
       A.BANK_ACCT_SEQ,
       A.CURR_CD,
       A.MLT_CURR_FLG,
       B.BANK_NM,
       DECODE(A.ACCT_TP_CD, 'O', 'AP/AR','P','AP','R','AR') AS ACCT_TP_CD
  FROM SAP_BANK_ACCT A,
       SAP_BANK_BRNC B
 WHERE A.BANK_BRNC_SEQ = B.BANK_BRNC_SEQ
#if (${acct_tp_cd} != 'ALL')
   AND A.ACCT_TP_CD <> 'R'
#end
#if (${bank_acct_nm} != '')
   AND UPPER(A.BANK_ACCT_NM) LIKE UPPER(@[bank_acct_nm]) || '%'
#end
#if (${bank_acct_no} != '')
   AND UPPER(A.BANK_ACCT_NO) LIKE UPPER(@[bank_acct_no]) || '%'
#end
#if (${ofc_cd} != '')
   AND A.OPN_OFC_CD = @[ofc_cd]
#end
#if (${bank_acct_tp_nm} != '')
   AND A.BANK_ACCT_TP_NM = @[bank_acct_tp_nm]
#end			]]></sql>
			<params>
				<param name="bank_acct_nm" type="12" value="" out="N"/>
				<param name="bank_acct_no" type="12" value="" out="N"/>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="bank_acct_tp_nm" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
