<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableAdjustDBDAOsearchAdjustDtlListRSQL">
			<desc><![CDATA[Retrieve Outstanding Adjustment ]]></desc>
			<sql><![CDATA[
SELECT SAD.CHG_TP_CD,
	   SAD.ADJ_SRC_CURR_CD AS BL_CURR_CD,
	   TRIM(SAR_GET_CUR_AMT_FNC(SAD.ADJ_SRC_CURR_CD, SAD.OTS_BAL_AMT)) AS OTS_BAL_AMT,       
       TRIM(SAR_GET_CUR_AMT_FNC(SAD.ADJ_SRC_CURR_CD, SAD.ADJ_AMT)) AS OTS_ADJ_BAL_AMT,    
	   SAD.ADJ_XCH_RT,
	   SAD.ADJ_CRS_CURR_CD,
	   TRIM(SAR_GET_CUR_AMT_FNC(SAD.ADJ_CRS_CURR_CD, SAD.ADJ_CRS_CURR_AMT)) AS ADJ_CRS_CURR_AMT,
	   SAD.OTS_ADJ_SEQ,
	   SAD.ADJ_TP_CD
FROM SAR_ADJ_DTL SAD,
     SAR_ADJ_HDR SAH	     	     
WHERE SAD.OTS_ADJ_SEQ = SAH.OTS_ADJ_SEQ
AND SAH.ADJ_NO = @[adj_no]
#if (${adjt_ofc_cd} != '')
   AND sah.adj_ofc_cd =  @[adjt_ofc_cd]
#end
ORDER BY
	SAD.CHG_TP_CD,
	SAD.ADJ_SRC_CURR_CD			]]></sql>
			<params>
				<param name="adj_no" type="12" value="" out="N"/>
				<param name="adjt_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
