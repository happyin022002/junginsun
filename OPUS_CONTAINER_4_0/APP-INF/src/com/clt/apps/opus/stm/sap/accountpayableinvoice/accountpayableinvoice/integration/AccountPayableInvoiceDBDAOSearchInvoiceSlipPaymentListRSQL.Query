<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountPayableInvoiceDBDAOSearchInvoiceSlipPaymentListRSQL">
			<desc><![CDATA[STM_SAP_0030 Invoice Slip Inquiry - Invoice Payment List Retrieve]]></desc>
			<sql><![CDATA[
SELECT  SBA.BANK_ACCT_NO             AS BANK_ACCT_NO
      , SPH.PAY_NO                   AS PAY_NO
      , SPH.PAY_MZD_LU_CD            AS PAY_MZD_LU_CD
      , DECODE(SPH.PAY_TP_CD, 'M', 'Manual', 'B', 'Batch') AS PAY_TP_CD
      , SPH.DOC_SEQ                  AS DOC_SEQ
      , SPH.CURR_CD                  AS CURR_CD
      , SPH.PAY_DT                   AS PAY_DT
      , SPD.ACCTG_PST_FLG            AS ACCTG_PST_FLG
      , OPUSADM.SAP_GET_CUR_AMT_FNC(SPH.CURR_CD, SPD.PAY_AMT) AS PAY_AMT
FROM    SAP_PAY_HDR SPH
      , SAP_PAY_DTL SPD
      , SAP_BANK_ACCT SBA
WHERE   SPH.PAY_SEQ = SPD.PAY_SEQ
AND     SPH.BANK_ACCT_SEQ = SBA.BANK_ACCT_SEQ
AND     SPD.INV_SEQ = @[inv_seq]			]]></sql>
			<params>
				<param name="inv_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
