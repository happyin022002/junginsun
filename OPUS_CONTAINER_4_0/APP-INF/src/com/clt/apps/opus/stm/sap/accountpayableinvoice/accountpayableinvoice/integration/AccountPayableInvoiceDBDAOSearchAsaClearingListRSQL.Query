<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountPayableInvoiceDBDAOSearchAsaClearingListRSQL">
			<desc><![CDATA[SearchAsaClearingList]]></desc>
			<sql><![CDATA[
SELECT  SID.ROWID                           AS ROW_ID 
	  , SIH.INV_SEQ                         AS INV_SEQ
	  , SIH.INV_NO                          AS INV_NO
	  , SID.DTRB_LINE_NO                    AS DTRB_LINE_NO
	  , NVL(SIH.ATTR_CTNT5, SIH.ATTR_CTNT2) AS ASA_NO
	  , SIH.INV_CURR_CD                     AS INV_CURR_CD
	  , SIH.OFC_CD                          AS AP_OFFICE_CODE
	  , SIH.LIAB_CD_CMB_SEQ                 AS LIAB_CD_CMB_SEQ
	  , MO.OFC_CD                           AS ASA_OFFICE_CODE
	  , SAM.AGN_CD                          AS ASA_AGENT_CODE
	  , SAM.ASA_PRD_TO_DT                   AS ASA_PERIOD_TO
	  , MO.REP_CUST_CNT_CD                  AS ASA_CUST_CNT_CD
	  , MO.REP_CUST_SEQ                     AS ASA_CUST_SEQ
	  , NVL(MO.ASA_CR_TERM_DYS,0)           AS ASA_CREDIT_TERM
	  , SAM.CURR_CD                         AS ASA_CURRENCY_CODE
	  , MO.LOC_CD                           AS ASA_LOCATION_CODE
	  , MO.AR_HD_QTR_OFC_CD                 AS ASA_AR_HQ_OFFICE
	  , SID.INV_DTRB_SEQ                    AS INV_DTRB_SEQ
	  , SID.DTRB_AMT                        AS DTRB_AMT
	  , SID.ACCTG_DT                        AS ACCOUNTING_DATE
	  , SID.DTRB_CD_CMB_SEQ                 AS DTRB_CD_CMB_SEQ
	  , SIH.AP_INV_SRC_CD                   AS SOURCE_CODE
	  , MO.FINC_RGN_CD                      AS FINANCE_REGION_CD
	  , MO.GL_CTR_CD                        AS GL_CENTER_CD
	  , MO.AR_CURR_CD                       AS AR_CURR_CD
	  , DECODE(SIH.AP_INV_SRC_CD, 'COMMISSION', 'ACM', 'AEP') AS ASA_EXPENSE_TYPE
	  , (SELECT  ACCT_TP_CD FROM SAR_ACCT_MTX WHERE ACCT_CTNT1 ='REC' AND ACCT_CTNT2 ='STM AP' AND ACCT_CTNT3 ='AGENT' AND ROWNUM = 1) AS REP_TP_SRC_CD
	  , (SELECT  ACCT_TP_CD FROM SAR_ACCT_MTX WHERE ACCT_CTNT1 ='REV' AND ACCT_CTNT2 ='STM AP' AND ACCT_CTNT3 = 'AGENT'
	     AND ACCT_CTNT4 = 'ASA' AND ACCT_TP_CD = DECODE(SIH.AP_INV_SRC_CD, 'COMMISSION', 'ACM', 'AEP') AND ROWNUM = 1) AS CHG_TP_CD
	  , TO_CHAR((TO_DATE(SAM.ASA_PRD_TO_DT, 'YYYYMMDD') + NVL(MO.ASA_CR_TERM_DYS, 0)), 'YYYYMMDD') AS DUE_DATE
	  , 'O' AS BKG_IO_FLAG
	  , 'SAP' || TO_CHAR(SYSDATE,'YYMMDD') || LPAD(SAR_OTS_IF_NO_SEQ.NEXTVAL, 4, '0') AS IF_NO
	  , 'ASA'                               AS REV_TP_SRC_CD
	  , SIH.UPD_USR_ID AS USR_ID
FROM    SAP_INV_HDR SIH
	  , SAP_INV_DTL SID
	  , SAR_ASA_MST SAM
	  , MDM_ORGANIZATION MO
	  , SCO_LEGR_CD_CMB SLCC
WHERE   SIH.INV_SEQ = SID.INV_SEQ 
AND     SIH.ATTR_CATE_NM = 'INVOICES'
AND     NVL(SIH.ATTR_CTNT5, SIH.ATTR_CTNT2) = SAM.ASA_NO
AND     SAM.OFC_CD = MO.OFC_CD 
AND     SAM.ASA_FSH_DT IS NULL
AND     SAM.CURR_CD = SIH.INV_CURR_CD
AND     SIH.INV_AMT = 0
AND     SID.DTRB_CD_CMB_SEQ = SLCC.CD_CMB_SEQ
AND     SLCC.SGM_CTNT4  = ( SELECT SLD.LU_CD 
				            FROM SCO_LU_HDR SLH, SCO_LU_DTL SLD 
				            WHERE SLH.LU_APPL_CD = 'SAP' 
				            AND SLH.LU_TP_CD = 'ASA CLEARING ACCOUNT' 
				            AND SLH.LU_TP_CD = SLD.LU_TP_CD
				            AND SLD.ENBL_FLG = 'Y'
				            AND ROWNUM = 1 )  
AND     SID.ATTR_CTNT13 IS NULL
#if (${inv_no} != '') 
AND     SIH.INV_NO = @[inv_no]
#end			]]></sql>
			<params>
				<param name="inv_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
