<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountPayableInvoiceDBDAOSearchInvoiceInterfacePaymentMethodCheckRSQL">
			<desc><![CDATA[AccountPayableInvoiceDBDAOSearchInvoiceInterfacePaymentMethodCheckRSQL]]></desc>
			<sql><![CDATA[
SELECT   NVL(DECODE(MV.PAY_MZD_CD, 'CSH', 'CASH'
                                 , 'CHK', 'CHECK'
                                 , 'CKG', 'CHECK(G/EXP)'
                                 , 'CKO', 'CHECK(O/EXP)'
                                 , 'CLE', 'CLEARING'
                                 , 'CMA', 'CMS ACH'
                                 , 'CMG', 'CMS CHECK(G/EXP)'
                                 , 'CMO', 'CMS CHECK(O/EXP)'
                                 , 'CMW', 'CMS WIRE'
                                 , 'EFT', 'EFT'
                                 , 'WIR', 'WIRE'
                                 , 'AUD', 'AUTO DEBIT'
                                 , 'ICO', 'CMS ICO'
                                 , 'IDD', 'CMS IDD'
                                 , MV.PAY_MZD_CD), MV.PAY_MZD_CD) AS PAYMENT_METHOD  
       , MV.PAY_TERM_TP_CD AS PAY_TERM_TP_CD
       , NVL(MV.BANK_ACCT_FLG, 'N') AS BANK_ACCT_FLG
FROM     MDM_VENDOR MV
WHERE    MV.VNDR_SEQ = TO_NUMBER(@[vndr_no])
AND      NVL(MV.DELT_FLG, 'N') <> 'Y'			]]></sql>
			<params>
				<param name="vndr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
