<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountPayablePaymentDBDAOAddAccountingDetailPayHeaderInfoCSQL">
			<desc><![CDATA[AddAccountingDetailPayHeaderInfo]]></desc>
			<sql><![CDATA[
INSERT INTO SAP_ACCTG_EVNT_DTL 
    ( ACCTG_LINE_SEQ
    , ACCTG_HDR_SEQ
    , ACCTG_EVNT_LINE_NO
    , ACCTG_LINE_TP_CD
    , CURR_CD
    , CONV_XCH_RT
    , CONV_XCH_RT_TP_CD
    , CONV_XCH_DT
    , INP_DR_AMT
    , INP_CR_AMT
    , ACCT_DR_AMT
    , ACCT_CR_AMT
    , ACCTG_SRC_TBL_NM
    , ACCTG_SRC_SEQ
    , GL_SUB_LEGR_LNK_SEQ
    , ACCTG_DESC
    , ACCTG_ERR_CD
    , GL_TRNS_ERR_CD
    , N3PTY_NO
    , N3PTY_SUB_NO
    , SUB_LEGR_DOC_SEQ
    , ACCTG_PGM_APPL_NM
    , OFC_CD
    , ATTR_CTNT1
    , ATTR_CTNT2
    , ATTR_CTNT3
    , ATTR_CTNT4
    , ATTR_CTNT5
    , ATTR_CTNT6
    , ATTR_CTNT7
    , ATTR_CTNT8
    , ATTR_CTNT9
    , ATTR_CTNT10
    , END_PRN_DOC_NO
    , ACCTG_VAT_CD
    , CRE_USR_ID
    , CRE_DT
    , UPD_USR_ID
    , UPD_DT
    , ACCT_CD_CMB_SEQ
    )
	SELECT
     SAP_ACCTG_EVNT_DTL_SEQ.NEXTVAL   AS ACCTG_LINE_SEQ
	,ACCTG_HDR_SEQ
	,ACCTG_EVNT_LINE_NO
	,ACCTG_LINE_TP_CD
	,CURR_CD
	,CONV_XCH_RT
	,CONV_XCH_RT_TP_CD
	,CONV_XCH_DT
	,INP_DR_AMT
	,INP_CR_AMT
	,ACCT_DR_AMT
	,ACCT_CR_AMT
	,ACCTG_SRC_TBL_NM
	,ACCTG_SRC_SEQ
	,GL_SUB_LEGR_LNK_SEQ
	,ACCTG_DESC
	,ACCTG_ERR_CD
	,GL_TRNS_ERR_CD
	,N3PTY_NO
	,N3PTY_SUB_NO
	,SUB_LEGR_DOC_SEQ
	,ACCTG_PGM_APPL_NM
	,OFC_CD
	,ATTR_CTNT1
	,ATTR_CTNT2
	,ATTR_CTNT3
	,ATTR_CTNT4
	,ATTR_CTNT5
	,ATTR_CTNT6
	,ATTR_CTNT7
	,ATTR_CTNT8
	,ATTR_CTNT9
	,ATTR_CTNT10
	,END_PRN_DOC_NO
	,ACCTG_VAT_CD
	,CRE_USR_ID
	,CRE_DT
	,UPD_USR_ID
	,UPD_DT
	,ACCT_CD_CMB_SEQ
FROM (
        SELECT  
              @[accounting_header_id]          AS ACCTG_HDR_SEQ
            , (SELECT MAX(NVL(ACCTG_EVNT_LINE_NO,0)) + 1 FROM SAP_ACCTG_EVNT_DTL X WHERE ACCTG_HDR_SEQ = @[accounting_header_id] )  AS ACCTG_EVNT_LINE_NO
            , 'CASH'                           AS ACCTG_LINE_TP_CD
            , SPH.CURR_CD                      AS CURR_CD
            , SPH.PAY_XCH_RT                   AS CONV_XCH_RT
            , SPH.XCH_RT_TP_CD                 AS CONV_XCH_RT_TP_CD
            , TO_DATE(SPH.PAY_XCH_DT,'YYYYMMDD')                   AS CONV_XCH_DT
            , DECODE(SIGN(SPH.PAY_AMT), -1, SPH.PAY_AMT, NULL)           AS INP_DR_AMT
            , DECODE(SIGN(SPH.PAY_AMT), -1, NULL, SPH.PAY_AMT)           AS INP_CR_AMT
            , DECODE(SIGN(SPH.PAY_FUNC_AMT), -1, SPH.PAY_FUNC_AMT, NULL) AS ACCT_DR_AMT
            , DECODE(SIGN(SPH.PAY_FUNC_AMT), -1, NULL, SPH.PAY_FUNC_AMT) AS ACCT_CR_AMT
            , 'SAP_PAY_HDR'                    AS ACCTG_SRC_TBL_NM
            , SPH.PAY_SEQ                      AS ACCTG_SRC_SEQ
            , ''                               AS GL_SUB_LEGR_LNK_SEQ
            , SPH.PAY_DESC                     AS ACCTG_DESC
            , ''                               AS ACCTG_ERR_CD
            , ''                               AS GL_TRNS_ERR_CD
            , SPH.VNDR_NO                      AS N3PTY_NO
            , ''                               AS N3PTY_SUB_NO
            , ''                               AS SUB_LEGR_DOC_SEQ
            , 'AP'                             AS ACCTG_PGM_APPL_NM
            , SPH.OFC_CD                       AS OFC_CD
            , MV.VNDR_LGL_ENG_NM               AS ATTR_CTNT1
            , ''                               AS ATTR_CTNT2
            , TO_CHAR(SPH.PAY_SEQ)             AS ATTR_CTNT3
            , SPH.DOC_SEQ                      AS ATTR_CTNT4
            , SPH.DOC_SEQ                      AS ATTR_CTNT5
            , 'AP Payments'                    AS ATTR_CTNT6
            , ''                               AS ATTR_CTNT7
            , ''                               AS ATTR_CTNT8
            , ''                               AS ATTR_CTNT9
            , 'CASH'                           AS ATTR_CTNT10
            , ''                               AS END_PRN_DOC_NO
            , ''                               AS ACCTG_VAT_CD
            , @[usr_id]                        AS CRE_USR_ID
            , SYSDATE                          AS CRE_DT
            , @[usr_id]                        AS UPD_USR_ID
            , SYSDATE                          AS UPD_DT
            , SBA.ASET_CD_CMB_SEQ              AS ACCT_CD_CMB_SEQ
      FROM    SAP_PAY_HDR SPH
            , MDM_VENDOR MV
            , SAP_BANK_ACCT SBA
      WHERE   TO_NUMBER(SPH.VNDR_NO) = MV.VNDR_SEQ
      AND     SPH.BANK_ACCT_SEQ = SBA.BANK_ACCT_SEQ 
      AND     SPH.PAY_SEQ = @[pay_seq]
) A			]]></sql>
			<params>
				<param name="accounting_header_id" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="pay_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
