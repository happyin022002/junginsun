<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountPayableCommonDBDAOSearchCreditCardListRSQL">
			<desc><![CDATA[CreditCardList Popup]]></desc>
			<sql><![CDATA[
SELECT  SCM.CRD_SEQ                            AS CRD_SEQ
      , SCM.CRD_NO                             AS CRD_NO
      , SCM.CRD_PGM_NM                         AS CRD_PGM_NM
      , SCM.CRD_PGM_CD                         AS CRD_PGM_CD
      , SCM.CRD_PGM_CURR_CD                    AS CRD_PGM_CURR_CD
      , SCM.CRD_BRND_LU_CD                     AS CRD_BRND_LU_CD
      , SCM.CRD_MBR_NM                         AS CRD_MBR_NM
      , SCM.CRD_DEPT_NM                        AS CRD_DEPT_NM
      , TO_CHAR(SCM.CRD_DTRB_DT,'YYYY-MM-DD')  AS CRD_DTRB_DT
      , SCM.CRD_DTRB_OFC_CD                    AS CRD_DTRB_OFC_CD
      , TO_CHAR(SCM.CRD_INACT_DT,'YYYY-MM-DD') AS CRD_INACT_DT
      , SCM.CRD_TP_LU_CD                       AS CRD_TP_LU_CD
      , SCM.CRD_VNDR_NO 					   AS VNDR_NO
      ,  (SELECT MV.VNDR_LGL_ENG_NM  
         FROM  MDM_VENDOR MV
         WHERE MV.VNDR_SEQ = SCM.CRD_VNDR_NO ) AS VNDR_LGL_ENG_NM
      , SCM.CRD_CD_CMB_SEQ                     AS CRD_CD_CMB_SEQ
      , SLCC.SGM_CTNT1                         AS COMPANY_CODE
      , SLCC.SGM_CTNT2                         AS REGION_CODE
      , SLCC.SGM_CTNT3                         AS CENTER_CODE
      , SLCC.SGM_CTNT4                         AS ACCOUNT_CODE
      , SLCC.SGM_CTNT5                         AS INTERCOMPANYCODE
      , SLCC.SGM_CTNT6                         AS VVDCODE
      , SCM.CRD_DESC                           AS CRD_DESC
      , TO_CHAR(SCM.CRD_EXP_DT,'YYYY-MM-DD')   AS CRD_EXP_DT
FROM    SAP_CRD_MST SCM
      , SCO_LEGR_CD_CMB SLCC
WHERE   SCM.CRD_CD_CMB_SEQ = SLCC.CD_CMB_SEQ(+)
#if     (${crd_no} != '')
AND     SCM.CRD_NO LIKE @[crd_no]||'%'
#end
#if     (${crd_pgm_nm} != '')
AND     SCM.CRD_PGM_NM LIKE @[crd_pgm_nm]||'%'
#end
#if     (${crd_pgm_cd} != '')
AND     SCM.CRD_PGM_CD = @[crd_pgm_cd] 
#end
#if     (${crd_mbr_nm} != '')
AND     SCM.CRD_MBR_NM LIKE @[crd_mbr_nm]||'%'
#end
#if     (${crd_dtrb_ofc_cd} != '')
AND     SCM.CRD_DTRB_OFC_CD = @[crd_dtrb_ofc_cd]
#end			]]></sql>
			<params>
				<param name="crd_no" type="12" value="" out="N"/>
				<param name="crd_pgm_nm" type="12" value="" out="N"/>
				<param name="crd_pgm_cd" type="12" value="" out="N"/>
				<param name="crd_mbr_nm" type="12" value="" out="N"/>
				<param name="crd_dtrb_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
