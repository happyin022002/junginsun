<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableCommonDBDAOsearchAccountTypeRSQL">
			<desc><![CDATA[Account Type 별 Code List 조회]]></desc>
			<sql><![CDATA[
#if (${acct_ctnt} == 'ADJ')
    SELECT ACCT_TP_CD
           , ACCT_TP_NM
           , PAY_ACCT_CD
           , AMT_SGN_CD
    FROM SAR_ACCT_MTX
    WHERE ACCT_CTNT1 = @[acct_ctnt]
    AND ACCT_CTNT2 = @[acct_ctnt2]
    AND ACCT_CTNT4 = @[acct_ctnt4]
    AND NVL(DELT_FLG, 'N') = 'N'
    UNION
    SELECT A.ACCT_TP_CD
           , A.ACCT_TP_NM
           , A.PAY_ACCT_CD
           , A.AMT_SGN_CD
    FROM SAR_ACCT_MTX A,
         SCO_OFC_INFO B
    WHERE A.ACCT_TP_CD IN (B.OFC_ADJ_TP_CD1, B.OFC_ADJ_TP_CD2, B.OFC_ADJ_TP_CD3, B.OFC_ADJ_TP_CD4, B.OFC_ADJ_TP_CD5)
    AND A.ACCT_CTNT1 = @[acct_ctnt]
    AND A.ACCT_CTNT2 = @[acct_ctnt2]
    AND NVL(A.ACCT_CTNT4, 'N') <> @[acct_ctnt4]
    AND NVL(A.DELT_FLG, 'N') = 'N'
    AND B.OFC_CD = SUBSTR(@[ofc_cd], 1, 5)
    ORDER BY ACCT_TP_CD
#elseif (${acct_ctnt} == 'WRTF')
    SELECT ACCT_TP_CD
           , ACCT_TP_NM
           , PAY_ACCT_CD
           , AMT_SGN_CD
    FROM SAR_ACCT_MTX
    WHERE ACCT_CTNT1 = @[acct_ctnt]
    AND ACCT_CTNT2 = @[acct_ctnt2]
    AND NVL(DELT_FLG, 'N') = 'N'
    UNION
    SELECT A.ACCT_TP_CD
           , A.ACCT_TP_NM
           , A.PAY_ACCT_CD
           , A.AMT_SGN_CD
    FROM SAR_ACCT_MTX A,
         SCO_OFC_INFO B
    WHERE A.ACCT_TP_CD IN (B.OFC_WRTF_TP_CD1, B.OFC_WRTF_TP_CD2, B.OFC_WRTF_TP_CD3, B.OFC_WRTF_TP_CD4, B.OFC_WRTF_TP_CD5)
    AND A.ACCT_CTNT1 = @[acct_ctnt]
    AND NVL(A.ACCT_CTNT2, 'N') <> @[acct_ctnt2]
    AND NVL(A.DELT_FLG, 'N') = 'N'
    AND B.OFC_CD = @[ofc_cd]
    ORDER BY ACCT_TP_CD
#end			]]></sql>
			<params>
				<param name="acct_ctnt" type="12" value="" out="N"/>
				<param name="acct_ctnt2" type="12" value="" out="N"/>
				<param name="acct_ctnt4" type="12" value="" out="N"/>
				<param name="ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
