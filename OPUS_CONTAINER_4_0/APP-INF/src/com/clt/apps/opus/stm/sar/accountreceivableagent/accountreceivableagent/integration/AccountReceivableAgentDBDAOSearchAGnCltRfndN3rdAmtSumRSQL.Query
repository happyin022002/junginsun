<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableAgentDBDAOSearchAGnCltRfndN3rdAmtSumRSQL">
			<desc><![CDATA[search Agent collection refund third amount summary]]></desc>
			<sql><![CDATA[
SELECT SUM(N3RD_AMT) AS N3RD_AMT,
       N3RD_CURR_CD AS N3RD_CURR_CD,
       SUM(N3RD_LOCL_AMT) AS N3RD_LOCL_AMT
FROM   (
        SELECT NVL(N3RD_AMT1, 0) AS N3RD_AMT
             , N3RD_CURR_CD1 AS N3RD_CURR_CD
             , NVL(N3RD_LOCL_AMT1, 0) AS N3RD_LOCL_AMT          
        FROM SAR_AGN_CLT_RFND_MST
        WHERE 1 = 1
          AND ASA_NO = @[asa_no]
          AND APRO_FLG = 'Y'
          AND ASA_TP_CD IN ('C', 'R')
        UNION ALL
        SELECT NVL(N3RD_AMT2, 0) AS N3RD_AMT
             , N3RD_CURR_CD2 AS N3RD_CURR_CD
             , NVL(N3RD_LOCL_AMT2, 0) AS N3RD_LOCL_AMT          
        FROM SAR_AGN_CLT_RFND_MST
        WHERE 1 = 1
          AND ASA_NO = @[asa_no]
          AND APRO_FLG = 'Y'
          AND ASA_TP_CD IN ('C', 'R')
        UNION ALL
        SELECT NVL(N3RD_AMT3, 0) AS N3RD_AMT
             , N3RD_CURR_CD3 AS N3RD_CURR_CD
             , NVL(N3RD_LOCL_AMT3, 0) AS N3RD_LOCL_AMT          
        FROM SAR_AGN_CLT_RFND_MST
        WHERE 1 = 1
          AND ASA_NO = @[asa_no]
          AND APRO_FLG = 'Y'
          AND ASA_TP_CD IN ('C', 'R')
        UNION ALL
        SELECT NVL(N3RD_AMT4, 0) AS N3RD_AMT
             , N3RD_CURR_CD4 AS N3RD_CURR_CD
             , NVL(N3RD_LOCL_AMT4, 0) AS N3RD_LOCL_AMT                   
        FROM SAR_AGN_CLT_RFND_MST
        WHERE 1 = 1
          AND ASA_NO = @[asa_no]
          AND APRO_FLG = 'Y'
          AND ASA_TP_CD IN ('C', 'R')            
)
WHERE  N3RD_CURR_CD IS NOT NULL
GROUP BY N3RD_CURR_CD
HAVING SUM(N3RD_LOCL_AMT) <> 0 			]]></sql>
			<params>
				<param name="asa_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
