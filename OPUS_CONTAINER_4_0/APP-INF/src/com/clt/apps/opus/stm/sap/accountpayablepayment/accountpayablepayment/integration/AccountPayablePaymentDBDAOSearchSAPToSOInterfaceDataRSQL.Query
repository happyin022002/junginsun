<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountPayablePaymentDBDAOSearchSAPToSOInterfaceDataRSQL">
			<desc><![CDATA[SAP 에서 지불, void, delete 되었을때 so 에 flag 및 기타정보 제공시 필요한 데이타 search]]></desc>
			<sql><![CDATA[
SELECT 
	 MAX(TO_CHAR(SPH.PAY_DT,'YYYYMMDD')) AS PAY_DT
	,SIH.PAY_MZD_LU_CD                   AS PAY_MZD_LU_CD
    ,SUM(SPD.PAY_AMT)                    AS PAY_AMT
FROM  SAP_INV_HDR SIH
	,SAP_PAY_HDR SPH 
	,SAP_PAY_DTL SPD
WHERE SPH.PAY_SEQ = SPD.PAY_SEQ
AND   SIH.INV_SEQ = SPD.INV_SEQ
AND   SIH.INV_NO = @[inv_no]
GROUP BY SIH.INV_NO, SIH.PAY_MZD_LU_CD			]]></sql>
			<params>
				<param name="inv_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
