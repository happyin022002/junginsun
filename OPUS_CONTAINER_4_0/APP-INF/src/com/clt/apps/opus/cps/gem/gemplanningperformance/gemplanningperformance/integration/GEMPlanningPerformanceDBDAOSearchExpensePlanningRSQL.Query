<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GEMPlanningPerformanceDBDAOSearchExpensePlanningRSQL">
			<desc><![CDATA[집행단위, 지역그룹|BU CTRL , 비용주관팀 , 사무국 에서 등록한 비용계획을 조회
2010.11.05 [CHM-201006871-01] 이준범
1) Request expense 후 Reject된 데이터를 Initial 기능에서 수정할 수 있는 로직 오류 발생 확인
2) Request expense  Initial 기능에서는 Request 상태인 데이터만 조회하도록 기존 오류 보완
]]></desc>
			<sql><![CDATA[
SELECT A.GEN_EXPN_RQST_NO
      ,A.OFC_CD
      ,A.GEN_EXPN_CD
      ,A.GEN_EXPN_ITM_NO
      ,A.GEN_EXPN_TRNS_DIV_CD
      ,A.GEN_EXPN_RQST_SEQ
      ,A.CRNT_GEN_EXPN_APRO_STEP_CD
      ,A.CRNT_GEN_EXPN_APSTS_CD
      ,A.GEN_EXPN_ITM_DESC
      ,A.GEN_EXPN_CALC_BSS_DESC
      ,A.RQST_OPIN_RMK
      ,A.JAN_AMT
      ,A.FEB_AMT
      ,A.MAR_AMT
      ,A.APR_AMT
      ,A.MAY_AMT
      ,A.JUN_AMT
      ,A.JUL_AMT
      ,A.AUG_AMT
      ,A.SEP_AMT
      ,A.OCT_AMT
      ,A.NOV_AMT
      ,A.DEC_AMT
      ,TO_CHAR(A.UPD_DT,'YYYYMMDDHH24MISS') ITM_UPD_DT
      ,TO_CHAR(E.UPD_DT,'YYYYMMDDHH24MISS') REQ_UPD_DT
      ,B.JAN_AMT RQST_JAN_AMT
      ,B.FEB_AMT RQST_FEB_AMT
      ,B.MAR_AMT RQST_MAR_AMT
      ,B.APR_AMT RQST_APR_AMT
      ,B.MAY_AMT RQST_MAY_AMT
      ,B.JUN_AMT RQST_JUN_AMT
      ,B.JUL_AMT RQST_JUL_AMT
      ,B.AUG_AMT RQST_AUG_AMT
      ,B.SEP_AMT RQST_SEP_AMT
      ,B.OCT_AMT RQST_OCT_AMT
      ,B.NOV_AMT RQST_NOV_AMT
      ,B.DEC_AMT RQST_DEC_AMT
      ,B.GEN_EXPN_APRO_STEP_CD
      ,B.GEN_EXPN_APSTS_CD
      ,C.ENG_ABBR_NM
      ,C.KRN_ABBR_NM
      , (  B.JAN_AMT
         + B.FEB_AMT
         + B.MAR_AMT
         + B.APR_AMT
         + B.MAY_AMT
         + B.JUN_AMT
         + B.JUL_AMT
         + B.AUG_AMT
         + B.SEP_AMT
         + B.OCT_AMT
         + B.NOV_AMT
         + B.DEC_AMT
        ) RQST_LOCL_AMT
      ,C.TIC_CD
FROM   GEM_ITEM A, GEM_APRO_STEP B, GEM_EXPENSE C, GEM_OFC_MTX D , GEM_REQUEST E
WHERE  1 = 1
AND    E.GEN_EXPN_RQST_NO = @[gen_expn_rqst_no]
AND    E.GEN_EXPN_RQST_NO = A.GEN_EXPN_RQST_NO
AND    E.GEN_EXPN_RQST_TP_CD IN ('EA','EI')
#if (${rqst_ofc_cd} != '') 
AND    E.RQST_OFC_CD = @[rqst_ofc_cd]
#end
#if (${cre_usr_id} != '') 
AND    E.CRE_USR_ID = @[cre_usr_id]
#end
AND    A.OFC_CD = B.OFC_CD
AND    A.GEN_EXPN_CD = B.GEN_EXPN_CD
AND    A.GEN_EXPN_ITM_NO = B.GEN_EXPN_ITM_NO
AND    A.GEN_EXPN_TRNS_DIV_CD = B.GEN_EXPN_TRNS_DIV_CD
AND    A.GEN_EXPN_RQST_SEQ = B.GEN_EXPN_RQST_SEQ
AND    A.GEN_EXPN_RQST_NO = B.GEN_EXPN_RQST_NO
AND    A.CRNT_GEN_EXPN_APSTS_CD = B.GEN_EXPN_APSTS_CD
AND    A.CRNT_GEN_EXPN_APRO_STEP_CD = B.GEN_EXPN_APRO_STEP_CD
AND    C.GEN_EXPN_CD = D.GEN_EXPN_CD
AND    C.GEN_EXPN_GRP_LVL = '4'
AND    C.DELT_FLG = 'N'
AND    D.OFC_CD = A.OFC_CD
AND    C.GEN_EXPN_CD = A.GEN_EXPN_CD
AND    A.CRNT_GEN_EXPN_APSTS_CD = 'RQ'
AND    A.GEN_EXPN_APRO_AUTH_OFC_CD = @[rqst_ofc_cd]
ORDER BY A.GEN_EXPN_RQST_SEQ , A.OFC_CD , A.GEN_EXPN_CD ,A.GEN_EXPN_ITM_NO			]]></sql>
			<params>
				<param name="gen_expn_rqst_no" type="12" value="" out="N"/>
				<param name="rqst_ofc_cd" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
