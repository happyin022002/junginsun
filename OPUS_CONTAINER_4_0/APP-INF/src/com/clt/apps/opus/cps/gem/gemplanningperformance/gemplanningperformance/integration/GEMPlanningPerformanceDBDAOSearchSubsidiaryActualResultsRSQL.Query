<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GEMPlanningPerformanceDBDAOSearchSubsidiaryActualResultsRSQL">
			<desc><![CDATA[현지법인의 실적을 월별로 조회한다]]></desc>
			<sql><![CDATA[
SELECT A.RSLT_YRMON
      ,A.OFC_CD
      ,A.GEN_EXPN_CD
      ,DECODE(@[lang_div], 'KOR', C.KRN_ABBR_NM, 'ENG', C.ENG_ABBR_NM) ABBR_NM
      ,B.LOCL_CURR_CD
      ,B.RQST_UT_VAL
      ,A.PERF_AMT
      ,(A.GEN_EXPN_AMT/B.RQST_UT_VAL) GEN_EXPN_AMT
      ,(A.SLP_PERF_AMT/B.RQST_UT_VAL) SLP_PERF_AMT
      ,((A.SLP_PERF_AMT/B.RQST_UT_VAL)-A.PERF_AMT) SLP_PERF_AMT01
      ,'%' RATIO
      ,A.GEN_EXPN_OVR_RTO_RSN
      ,TO_CHAR(A.CRE_DT, 'YYYYMMDD') CRE_DT
	  ,A.CRE_USR_ID CRE_USR_ID
  FROM (
        SELECT @[pln_yr]||@[pln_mon] RSLT_YRMON
              ,A.OFC_CD
              ,A.GEN_EXPN_CD
              ,SUM(NVL(B.PERF_AMT,0)) PERF_AMT
              ,SUM(A.GEN_EXPN_AMT) GEN_EXPN_AMT
              ,SUM(A.SLP_PERF_AMT) SLP_PERF_AMT
              ,MAX(DECODE(A.RSLT_YRMON, @[pln_yr]||@[pln_mon], A.GEN_EXPN_OVR_RTO_RSN)) GEN_EXPN_OVR_RTO_RSN
              ,MAX(NVL(DECODE(B.RSLT_YRMON, @[pln_yr]||@[pln_mon], B.UPD_DT), A.UPD_DT)) CRE_DT
			  ,MAX(B.CRE_USR_ID) CRE_USR_ID
          FROM (
                SELECT RSLT_YRMON 
                      ,OFC_CD
                      ,GEN_EXPN_CD
                      ,SUM(GEN_EXPN_INIT_AMT + GEN_EXPN_ADD_AMT + GEN_EXPN_TRNS_AMT) GEN_EXPN_AMT
                      ,SUM(SLP_PERF_AMT) SLP_PERF_AMT
                      ,MAX(GEN_EXPN_OVR_RTO_RSN) GEN_EXPN_OVR_RTO_RSN
                      ,MAX(UPD_DT) UPD_DT
                  FROM GEM_RSLT_SMRY
                 WHERE 1 = 1
#if (${pln_yr} != '' && ${pln_mon} != '')
		   AND RSLT_YRMON BETWEEN @[pln_yr]||'01' AND @[pln_yr]||@[pln_mon]
#end
                   AND OFC_CO_DIV_CD = 'S'
                 GROUP BY RSLT_YRMON
                         ,OFC_CD
                         ,GEN_EXPN_CD 
                ) A
               ,(         
                 SELECT RSLT_YRMON
                       ,OFC_CD
                       ,GEN_EXPN_CD
                       ,CURR_CD
                       ,PERF_AMT
                       ,UPD_DT
					   ,CRE_USR_ID
                   FROM GEM_SUBS_PERF
                  WHERE RSLT_YRMON = @[pln_yr]||@[pln_mon]
                ) B
           WHERE A.RSLT_YRMON  = B.RSLT_YRMON(+)
             AND A.OFC_CD      = B.OFC_CD(+)
             AND A.GEN_EXPN_CD = B.GEN_EXPN_CD(+)
        GROUP BY @[pln_yr]||@[pln_mon]
                ,A.OFC_CD
                ,A.GEN_EXPN_CD 
       ) A
      ,GEM_OFFICE B
      ,GEM_EXPENSE C
 WHERE A.OFC_CD = B.OFC_CD
   AND A.GEN_EXPN_CD = C.GEN_EXPN_CD
#if(${sls_ofc_div_cd} != '')
   AND A.OFC_CD in (   
        				  SELECT OFC_CD      
  							FROM GEM_OFC_HIS
							START WITH OFC_CD IN (    
        						SELECT DISTINCT L_4 CODE
          						FROM GEM_OFC_LEVEL_V A, GEM_OFFICE B
         						WHERE 1=1
								AND A.L_4 = B.OFC_CD
                                AND B.OFC_CO_DIV_CD = 'S'
		   						#if(${sls_ofc_div_cd} != '')
           						AND A.RGN_OFC_FLG LIKE @[sls_ofc_div_cd]||'%'
		   						#end		
		   						#if(${ofc_lvl1} != '' && ${ofc_lvl2} != '' && ${ofc_lvl3} != '') 
		   						AND A.L_4 LIKE @[ofc_lvl3]||'%' 
		   						#end
		   						#if(${ofc_lvl1} != '' && ${ofc_lvl2} != '' && ${ofc_lvl3} == '') 
		   						AND A.L_3 LIKE @[ofc_lvl2]||'%' 
		   						#end
		   						#if(${ofc_lvl1} != '' && ${ofc_lvl2} == '' && ${ofc_lvl3} == '') 
		   						AND A.L_2 LIKE @[ofc_lvl1]||'%' 
		   						#end
							)
							CONNECT BY PRIOR OFC_CD = BFR_OFC_CD
   )
#end
ORDER BY A.OFC_CD
        ,A.GEN_EXPN_CD			]]></sql>
			<params>
				<param name="lang_div" type="12" value="" out="N"/>
				<param name="pln_yr" type="12" value="" out="N"/>
				<param name="pln_mon" type="12" value="" out="N"/>
				<param name="sls_ofc_div_cd" type="12" value="" out="N"/>
				<param name="ofc_lvl3" type="12" value="" out="N"/>
				<param name="ofc_lvl2" type="12" value="" out="N"/>
				<param name="ofc_lvl1" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
