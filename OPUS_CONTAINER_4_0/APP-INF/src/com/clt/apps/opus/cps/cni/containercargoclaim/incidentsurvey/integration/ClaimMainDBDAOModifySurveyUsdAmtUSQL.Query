<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ClaimMainDBDAOModifySurveyUsdAmtUSQL">
			<desc><![CDATA[HandlingCost 의 Survey Type의 inv_usd_amt 변경시 Survey 테이블의 usd_amt 값을 변경한다.(sum값으로)]]></desc>
			<sql><![CDATA[
UPDATE
    CNI_CGO_CLM_SVEY
SET
    (
        SVYR_FEE_USD_AMT
      , SVYR_FEE_LOCL_AMT
    )
    =
    (
        SELECT
            (
                SELECT
                    NVL (SUM (INV_USD_AMT), 0)
                FROM
                    CNI_CGO_CLM_COST COST
                WHERE
                    COST.CGO_CLM_NO    = @[cgo_clm_no]
                    AND CLM_COST_TP_CD IN ('SS','SP','SC')
            )
         , ROUND ( 
           (
                SELECT
                    NVL (SUM (INV_USD_AMT), 0)
                FROM
                    CNI_CGO_CLM_COST COST
                WHERE
                    COST.CGO_CLM_NO    = @[cgo_clm_no]
                    AND CLM_COST_TP_CD IN ('SS','SP','SC')
            )
            * SVYR_XCH_RT , 2
         )
        FROM
            CNI_CGO_CLM_SVEY
        WHERE
            CGO_CLM_NO = @[cgo_clm_no]
    )
WHERE
    CGO_CLM_NO = @[cgo_clm_no]			]]></sql>
			<params>
				<param name="cgo_clm_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
