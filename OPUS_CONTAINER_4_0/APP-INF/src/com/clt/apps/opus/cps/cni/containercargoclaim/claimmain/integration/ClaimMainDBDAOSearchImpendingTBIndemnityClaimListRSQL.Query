<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ClaimMainDBDAOSearchImpendingTBIndemnityClaimListRSQL">
			<desc><![CDATA[time bar 리스트조회]]></desc>
			<sql><![CDATA[
SELECT
    TM_BAR_DT
  , CGO_CLM_DIV_CD
  , CGO_CLM_NO
  , CLM_AREA_CD
  , HDLR_OFC_CD
  , HDLR_USR_ID
  , CGO_CLM_STS_CD
  , LABL_CLM_PTY_NM
  , USR_EML
FROM
    (
        SELECT
            A.TM_BAR_DT
          , B.CGO_CLM_DIV_CD
          , B.CGO_CLM_NO
          , (
                SELECT
                    CLM_AREA_CD
                FROM
                    CNI_AREA_OFC
                WHERE
                    OFC_CD = B.HDLR_OFC_CD
            )
            CLM_AREA_CD
          , B.HDLR_OFC_CD
          , B.HDLR_USR_ID
          , B.CGO_CLM_CLZ_CD || B.CGO_CLM_STS_CD   AS CGO_CLM_STS_CD
          , CNI_GET_PTY_NM_FNC (A.CLM_PTY_NO, '2') AS LABL_CLM_PTY_NM
          , (
                SELECT
                    USR_EML
                FROM
                    COM_USER
                WHERE
                    USR_ID = B.HDLR_USR_ID
            )
            USR_EML
        FROM
            CNI_CGO_CLM_LABL_PTY A
          , CNI_CGO_CLM B
        WHERE
            (
                B.TM_BAR_DT   >= TO_CHAR (CNI_GET_GMT_FNC (@[usr_id]), 'YYYYMMDD')
                AND B.TM_BAR_DT <= TO_CHAR (CNI_GET_GMT_FNC (@[usr_id]) + INTERVAL '15' DAY, 'YYYYMMDD')
            )
            AND A.CGO_CLM_NO          = B.CGO_CLM_NO
            AND B.CGO_CLM_STS_CD NOT IN ('N', 'C', 'X')
    )
WHERE
    1               = 1
#if (${cond_for} == '1') 
    AND HDLR_USR_ID = @[usr_id]
#end
#if (${cond_for} == '2') 
    AND HDLR_OFC_CD =
    (
        SELECT
            OFC_CD
        FROM
            COM_USER
        WHERE
            USR_ID = @[usr_id]
    )
#end
#if (${cond_for} == '3') 
    AND CLM_AREA_CD =
    (
        SELECT
            CLM_AREA_CD
        FROM
            CNI_AREA_OFC
        WHERE
            OFC_CD =
            (
                SELECT
                    OFC_CD
                FROM
                    COM_USER
                WHERE
                    USR_ID = @[usr_id]
            )
    )
#end
ORDER BY TM_BAR_DT			]]></sql>
			<params>
				<param name="usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
