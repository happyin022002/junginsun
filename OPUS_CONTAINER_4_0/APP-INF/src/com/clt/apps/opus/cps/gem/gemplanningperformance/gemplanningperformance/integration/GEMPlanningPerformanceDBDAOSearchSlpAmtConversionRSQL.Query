<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GEMPlanningPerformanceDBDAOSearchSlpAmtConversionRSQL">
			<desc><![CDATA[품의서의 전표금액을 조직의 Local Currency 기준으로 전환 한다.]]></desc>
			<sql><![CDATA[
SELECT TO_NUMBER(NVL(DECODE( @[slp_curr_cd], @[ofc_curr_cd], #if(${slp_amt} != '')${slp_amt} #else 0 #end, (#if(${slp_amt} != '')${slp_amt} #else 0 #end/A.USD_LOCL_XCH_RT)*B.USD_LOCL_XCH_RT),0)) code
  FROM GL_MON_XCH_RT A , GL_MON_XCH_RT B
 WHERE A.ACCT_XCH_RT_YRMON     = SUBSTR(@[gl_eff_dt],1,6)
   AND A.CURR_CD = @[slp_curr_cd]
   AND A.ACCT_XCH_RT_LVL    = '1'
   AND A.ACCT_XCH_RT_YRMON  = B.ACCT_XCH_RT_YRMON
   AND B.CURR_CD = @[ofc_curr_cd]
   AND B.ACCT_XCH_RT_LVL    = '1'			]]></sql>
			<params>
				<param name="slp_curr_cd" type="12" value="KRW" out="N"/>
				<param name="ofc_curr_cd" type="12" value="KRW" out="N"/>
				<param name="gl_eff_dt" type="12" value="20090618" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
