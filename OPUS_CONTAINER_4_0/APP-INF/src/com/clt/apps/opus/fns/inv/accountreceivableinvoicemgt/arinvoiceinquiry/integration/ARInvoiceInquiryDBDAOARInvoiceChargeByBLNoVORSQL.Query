<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceInquiryDBDAOARInvoiceChargeByBLNoVORSQL">
			<desc><![CDATA[DESC Enter..]]></desc>
			<sql><![CDATA[
SELECT CHG_CD,
  MNL_FLG,
  CASE WHEN RAT_AS_CNTR_QTY < 0 THEN RAT_AS_CNTR_QTY*-1 ELSE RAT_AS_CNTR_QTY END RAT_AS_CNTR_QTY,
  SAR_GET_FMT_MASK_FNC(CURR_CD,TRF_RT_AMT) TRF_RT_AMT,
  PER_TP_CD,
  CURR_CD,
  SAR_GET_FMT_MASK_FNC(CURR_CD,CHG_AMT) CHG_AMT,
  DP_PRCS_KNT,
  INV_XCH_RT,
  LOCL_CURR_CD,
  SAR_GET_FMT_MASK_FNC(LOCL_CURR_CD,LOCAL_TOTAL) LOCAL_TOTAL,
  DP_PRCS_KNT DP_PRCS_KNT_LOCAL
FROM (
    SELECT B.CHG_CD,
      B.MF_DIV_CD MNL_FLG,
      SUM(CASE WHEN B.CHG_AMT>0 THEN B.RAT_AS_CNTR_QTY ELSE B.RAT_AS_CNTR_QTY*-1 END) RAT_AS_CNTR_QTY,
      B.TRF_RT_AMT,
      B.PER_TP_CD,
      B.CURR_CD,
      SUM(B.CHG_AMT) CHG_AMT,
      D.DP_PRCS_KNT,
      B.INV_XCH_RT,
      A.LOCL_CURR_CD,
      SUM(SAR_GET_CUR_AMT_FNC(A.LOCL_CURR_CD,B.CHG_AMT*B.INV_XCH_RT)) LOCAL_TOTAL,
      E.DP_PRCS_KNT DP_PRCS_KNT_LOCAL
    FROM INV_AR_MN A,
      INV_AR_CHG B,
      MDM_CURRENCY D,
      MDM_CURRENCY E
    WHERE A.AR_IF_NO = B.AR_IF_NO
      AND D.CURR_CD = B.CURR_CD
      AND E.CURR_CD = A.LOCL_CURR_CD
#if (${bl_src_no} != '')
      AND A.BL_SRC_NO = @[bl_src_no]
#end
#if (${bkg_no} != '')
      AND A.BKG_NO = @[bkg_no]
#end
      AND A.AR_OFC_CD = @[office]
      AND NVL(A.INV_DELT_DIV_CD, 'N') <> 'Y'
      AND B.CHG_AMT <> 0
#if (${rev_type} == 'B') 
      AND A.REV_TP_CD = 'B'
#elseif (${rev_type} == 'C') 
      AND A.REV_TP_CD = 'C'
#elseif (${rev_type} == 'D') 
      AND A.REV_TP_CD = 'M' AND A.REV_SRC_CD IN ('DM','DT')
#elseif (${rev_type} == 'M') 
      AND A.REV_TP_CD = 'M' AND A.REV_SRC_CD NOT IN ('DM','DT')
#elseif (${rev_type} == 'BC') 
      AND A.REV_TP_CD IN ('B','C')
#elseif (${rev_type} == 'BD') 
      AND (A.REV_TP_CD = 'B' OR (A.REV_TP_CD = 'M' AND A.REV_SRC_CD IN ('DM','DT')))
#elseif (${rev_type} == 'BM') 
      AND (A.REV_TP_CD = 'B' OR (A.REV_TP_CD = 'M' AND A.REV_SRC_CD NOT IN ('DM','DT')))
#elseif (${rev_type} == 'CD') 
      AND (A.REV_TP_CD = 'C' OR (A.REV_TP_CD = 'M' AND A.REV_SRC_CD IN ('DM','DT')))
#elseif (${rev_type} == 'CM') 
      AND (A.REV_TP_CD = 'C' OR (A.REV_TP_CD = 'M' AND A.REV_SRC_CD NOT IN ('DM','DT')))
#elseif (${rev_type} == 'DM') 
      AND A.REV_TP_CD = 'M'
#elseif (${rev_type} == 'BCD') 
      AND (A.REV_TP_CD IN ('B','C') OR (A.REV_TP_CD = 'M' AND A.REV_SRC_CD IN ('DM','DT')))
#elseif (${rev_type} == 'BCM') 
      AND (A.REV_TP_CD IN ('B','C') OR (A.REV_TP_CD = 'M' AND A.REV_SRC_CD NOT IN ('DM','DT')))
#elseif (${rev_type} == 'BDM') 
      AND A.REV_TP_CD IN ('B','M')
#elseif (${rev_type} == 'CDM') 
      AND A.REV_TP_CD IN ('C','M')
#end
    GROUP BY B.CHG_CD, B.MF_DIV_CD, B.TRF_RT_AMT, DECODE(B.PER_TP_CD, 'PC', TO_CHAR(B.CHG_SEQ), B.PER_TP_CD), B.PER_TP_CD, B.CURR_CD, D.DP_PRCS_KNT, B.INV_XCH_RT, A.LOCL_CURR_CD, E.DP_PRCS_KNT)
WHERE CHG_AMT <> 0
ORDER BY CHG_CD, MNL_FLG, CURR_CD, TRF_RT_AMT, PER_TP_CD			]]></sql>
			<params>
				<param name="bl_src_no" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="office" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
