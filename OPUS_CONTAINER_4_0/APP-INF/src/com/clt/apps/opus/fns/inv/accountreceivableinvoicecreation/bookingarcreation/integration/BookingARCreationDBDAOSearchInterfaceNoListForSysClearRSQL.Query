<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BookingARCreationDBDAOSearchInterfaceNoListForSysClearRSQL">
			<desc><![CDATA[SYS CLEAR 대상 INTERFACE NUMBER를 구한다.]]></desc>
			<sql><![CDATA[
WITH  INV_AR_MN_TEMP  AS
       (SELECT  AR_IF_NO, AR_OFC_CD, BL_SRC_NO, ACT_CUST_CNT_CD, ACT_CUST_SEQ, VSL_CD, SKD_VOY_NO, SKD_DIR_CD, DECODE(REV_TP_CD,'M','M','B','B','C','B') REV_TP_CD, NVL(BFR_INV_CURR_CD, 'N') BFR_INV_CURR_CD          
        FROM    INV_AR_MN
        WHERE   AR_OFC_CD = @[ar_ofc_cd] --:OFC_CD 
        AND     OTS_PAY_CD IS NULL AND ORG_INV_NO IS NULL --Except migration data       
        #if (${bl_src_no} != '')
        AND BL_SRC_NO = @[bl_src_no]
        #end
        #if (${act_cust_cnt_cd} != '')
        AND ACT_CUST_CNT_CD = @[act_cust_cnt_cd]
        #end
        #if (${act_cust_seq} != '')
        AND ACT_CUST_SEQ = @[act_cust_seq]
        #end
        #if (${vsl_cd} != '')
        AND VSL_CD = @[vsl_cd]
        #end
        #if (${skd_voy_no} != '')
        AND SKD_VOY_NO = @[skd_voy_no]
        #end
        #if (${skd_dir_cd} != '')
        AND SKD_DIR_CD = @[skd_dir_cd]
        #end
        AND INV_ISS_FLG = 'N'
        AND BL_INV_CFM_DT IS NOT NULL  
        AND NVL(INV_DELT_DIV_CD,'N') <> 'Y'   
       ) 
SELECT  A.AR_IF_NO
FROM    INV_AR_MN_TEMP  A,
       (SELECT  AR_OFC_CD, BL_SRC_NO, ACT_CUST_CNT_CD, ACT_CUST_SEQ, VSL_CD, SKD_VOY_NO, SKD_DIR_CD, REV_TP_CD, BFR_INV_CURR_CD
        FROM   (SELECT  /*+ ORDERED USE_NL(A B) INDEX(B XAK3INV_AR_CHG) */
                        A.AR_OFC_CD, A.BL_SRC_NO, A.ACT_CUST_CNT_CD, A.ACT_CUST_SEQ, A.VSL_CD, A.SKD_VOY_NO, A.SKD_DIR_CD, A.REV_TP_CD, A.BFR_INV_CURR_CD, B.CURR_CD,
                        SUM(B.CHG_AMT)              SUM_CHG_AMT,
                        COUNT(DISTINCT A.AR_IF_NO)  CNT_AR_IF_NO
                FROM    INV_AR_MN_TEMP   A,
                        INV_AR_CHG  B
                WHERE   A.AR_IF_NO = B.AR_IF_NO
                GROUP BY A.AR_OFC_CD, A.BL_SRC_NO, A.ACT_CUST_CNT_CD, A.ACT_CUST_SEQ, A.VSL_CD, A.SKD_VOY_NO, A.SKD_DIR_CD, A.REV_TP_CD, A.BFR_INV_CURR_CD, B.CURR_CD, B.INV_XCH_RT
				)
        GROUP BY AR_OFC_CD, BL_SRC_NO, ACT_CUST_CNT_CD, ACT_CUST_SEQ, VSL_CD, SKD_VOY_NO, SKD_DIR_CD, REV_TP_CD, BFR_INV_CURR_CD
        HAVING MIN(CNT_AR_IF_NO) > 1  AND  MAX(ABS(SUM_CHG_AMT)) = 0
       )  B
WHERE   A.AR_OFC_CD       = B.AR_OFC_CD
AND     A.BL_SRC_NO       = B.BL_SRC_NO
AND     A.ACT_CUST_CNT_CD = B.ACT_CUST_CNT_CD
AND     A.ACT_CUST_SEQ    = B.ACT_CUST_SEQ
AND     A.VSL_CD          = B.VSL_CD
AND     A.SKD_VOY_NO      = B.SKD_VOY_NO
AND     A.SKD_DIR_CD      = B.SKD_DIR_CD
AND     A.REV_TP_CD       = B.REV_TP_CD
AND	 	A.BFR_INV_CURR_CD = B.BFR_INV_CURR_CD			]]></sql>
			<params>
				<param name="ar_ofc_cd" type="12" value="" out="N"/>
				<param name="bl_src_no" type="12" value="" out="N"/>
				<param name="act_cust_cnt_cd" type="12" value="" out="N"/>
				<param name="act_cust_seq" type="12" value="" out="N"/>
				<param name="vsl_cd" type="12" value="" out="N"/>
				<param name="skd_voy_no" type="12" value="" out="N"/>
				<param name="skd_dir_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
