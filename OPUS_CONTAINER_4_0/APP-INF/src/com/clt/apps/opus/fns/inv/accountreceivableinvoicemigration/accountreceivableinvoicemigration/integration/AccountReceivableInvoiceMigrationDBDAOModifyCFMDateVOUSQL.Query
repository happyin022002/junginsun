<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableInvoiceMigrationDBDAOModifyCFMDateVOUSQL">
			<desc><![CDATA[Modify CFM Date]]></desc>
			<sql><![CDATA[
UPDATE OPUSADM_TMP.INV_AR_MN SET 
#if (${flag} == 'good') 
BL_INV_CFM_DT = TO_CHAR(GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[ar_ofc_cd]),'YYYYMMDD')
, IF_SEQ = (SELECT NVL((SELECT MAX(IF_SEQ) FROM OPUSADM_TMP.INV_AR_MN WHERE BL_SRC_NO = @[bl_src_no] ), 0) + 1 FROM DUAL)
#else
BL_INV_CFM_DT = null
, IF_SEQ = null
, GL_EFF_DT = null
#end
WHERE AR_IF_NO = @[if_no]
#if (${flag} == 'good')
  AND BL_INV_CFM_DT IS NULL
#end			]]></sql>
			<params>
				<param name="ar_ofc_cd" type="12" value="" out="N"/>
				<param name="bl_src_no" type="12" value="" out="N"/>
				<param name="if_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
