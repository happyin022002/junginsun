<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableEDISendDBDAOSearchInvoiceEdiChgInfoRSQL">
			<desc><![CDATA[SearchInvoiceEdiChgInfo]]></desc>
			<sql><![CDATA[
SELECT '{BL_CHARGE_INFO' || CHR(10) 
       || 'BL_CHARGE_CD:' || B.CHG_CD || CHR(10) 
       || 'BL_CHARGE_DESC:' ||B.CHG_FULL_NM|| CHR(10) 
       || 'BL_CHARGE_TP_NM:' || (SELECT REP_CHG_NM FROM MDM_CHARGE MC, MDM_REP_CHG MR WHERE MC.CHG_CD = B.CHG_CD AND MC.REP_CHG_CD = MR.REP_CHG_CD) || CHR(10) 
       || 'BL_CHARGE_CURR:' ||B.CURR_CD|| CHR(10) 
       || 'BL_CHARGE_AMT:' ||B.CHG_AMT ||CHR(10) 
       || 'BL_CHARGE_AMT_USD:' || ROUND(B.CHG_AMT * SAR_GET_GL_XCH_RT_FNC('1', A.SAIL_DT, B.CURR_CD, 'USD'), 2) ||CHR(10) 
       || 'BL_INV_CURR:' || NVL(A.INV_CURR_CD, A.LOCL_CURR_CD) || CHR(10) 
       || 'BL_INV_CURR_AMT:' || ROUND(B.CHG_AMT * NVL(B.ISS_XCH_RT, B.INV_XCH_RT), NVL(D.DP_PRCS_KNT, C.DP_PRCS_KNT)) ||CHR(10) 
       || 'BL_INV_TAX:' ||'0.00'|| CHR(10) 
       || 'BL_INV_CURR_TTL_AMT:' || ROUND(B.CHG_AMT * NVL(B.ISS_XCH_RT, B.INV_XCH_RT), NVL(D.DP_PRCS_KNT, C.DP_PRCS_KNT)) ||CHR(10) 
       || 'BL_LOCAL_CURR:' ||A.LOCL_CURR_CD|| CHR(10) 
       || 'BL_LOCAL_CURR_AMT:' || ROUND(B.CHG_AMT * B.INV_XCH_RT, C.DP_PRCS_KNT) ||CHR(10) 
       || 'BL_LOCAL_TAX:' ||'0.00'|| CHR(10) 
       || 'BL_LOCAL_CURR_TTL_AMT:' || ROUND(B.CHG_AMT * B.INV_XCH_RT, C.DP_PRCS_KNT) ||CHR(10) 
       || 'BL_FRT_IND:' ||DECODE(A.IO_BND_CD, 'O', 'P', 'C') || CHR(10) 
       || 'BL_RATED_AS:' ||B.RAT_AS_CNTR_QTY || CHR(10) 
       || 'BL_RATE:' ||B.TRF_RT_AMT || CHR(10) 
       || 'BL_INV_EX_RATE:' ||B.INV_XCH_RT|| CHR(10) 
       || 'BL_TAX_RATE:' ||'0.00'|| CHR(10) 
       || 'BL_PERTYPE:' || B.PER_TP_CD ||CHR(10)
       || 'BL_TARIFF:' || NVL(A.SC_NO, A.RFA_NO)|| CHR(10) 
       || '}BL_CHARGE_INFO' || CHR(10) 
  FROM INV_AR_MN A,
       INV_AR_CHG B,
       MDM_CURRENCY C,
       MDM_CURRENCY D
  WHERE A.AR_IF_NO = B.AR_IF_NO
  AND A.LOCL_CURR_CD = C.CURR_CD(+)
  AND A.INV_CURR_CD = D.CURR_CD(+)
  AND A.AR_IF_NO = @[ar_if_no]
  AND B.PER_TP_CD IN ('BL','PC')			]]></sql>
			<params>
				<param name="ar_if_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
