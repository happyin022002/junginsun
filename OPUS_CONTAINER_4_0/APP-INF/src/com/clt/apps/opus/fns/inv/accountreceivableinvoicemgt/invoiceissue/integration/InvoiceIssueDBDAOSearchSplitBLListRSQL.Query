<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueDBDAOSearchSplitBLListRSQL">
			<desc><![CDATA[Search Split BL List]]></desc>
			<sql><![CDATA[
SELECT B.BL_SRC_NO, B.MAX_AR_IF_NO, B.BL_CNT, A.INV_DELT_DIV_CD
FROM INV_AR_MN A,
    (SELECT BL_SRC_NO
           , MAX(AR_IF_NO) MAX_AR_IF_NO
           , (SELECT COUNT(DISTINCT BL_SRC_NO)
              FROM INV_AR_MN
              WHERE AR_OFC_CD = @[ar_ofc_cd]
              AND BL_SRC_NO IN (${bl_nos})) BL_CNT
    FROM INV_AR_MN MN
    WHERE AR_OFC_CD = @[ar_ofc_cd]
    AND BL_SRC_NO IN (${bl_nos})
    AND REV_TP_CD <> 'M'
    AND EXISTS (SELECT 'X'
                FROM INV_AR_MN
                WHERE AR_OFC_CD = MN.AR_OFC_CD
                AND BL_SRC_NO = MN.BL_SRC_NO
                AND REV_TP_CD <> 'M'
                AND NVL(INV_SPLIT_CD, 'N') = 'S'
                AND INV_DELT_DIV_CD <> 'Y'
                AND BL_INV_CFM_DT IS NOT NULL)
    AND EXISTS (SELECT 'X'
                FROM INV_AR_MN
                WHERE AR_IF_NO = (SELECT MAX(AR_IF_NO)
                                  FROM INV_AR_MN
                                  WHERE AR_OFC_CD = MN.AR_OFC_CD 
                                  AND BL_SRC_NO = MN.BL_SRC_NO
                                  AND REV_TP_CD <> 'M')
                AND INV_DELT_DIV_CD <> 'Y'
                AND BL_INV_CFM_DT IS NOT NULL
                AND INV_ISS_FLG = 'N'
                AND NVL(INV_SPLIT_CD, 'N') = 'N')
    GROUP BY BL_SRC_NO) B
WHERE A.AR_IF_NO = B.MAX_AR_IF_NO			]]></sql>
			<params>
				<param name="ar_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
