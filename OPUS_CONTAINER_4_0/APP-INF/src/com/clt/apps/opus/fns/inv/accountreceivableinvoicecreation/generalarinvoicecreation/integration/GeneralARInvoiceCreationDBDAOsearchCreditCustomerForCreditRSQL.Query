<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralARInvoiceCreationDBDAOsearchCreditCustomerForCreditRSQL">
			<desc><![CDATA[GeneralARInvoiceCreationDBDAOsearchCreditCustomerForCreditRSQL]]></desc>
			<sql><![CDATA[
SELECT DECODE(@[io_bnd_cd], 'I', TO_CHAR(TO_DATE(@[sail_arr_dt], 'YYYYMMDD') + NVL(IB_CR_TERM_DYS, 0), 'YYYYMMDD')
                               , TO_CHAR(TO_DATE(@[sail_arr_dt], 'YYYYMMDD') + NVL(OB_CR_TERM_DYS, 0), 'YYYYMMDD')) DUE_DT
  FROM MDM_CR_CUST
 WHERE CUST_CNT_CD = @[cust_cnt_cd]
   AND CUST_SEQ = @[cust_seq]
   AND @[sail_arr_dt] BETWEEN CR_ST_DT AND CR_END_DT
   AND DECODE(@[io_bnd_cd], 'I', NVL(IB_CR_TERM_DYS, 0), NVL(OB_CR_TERM_DYS, 0)) > 0
   AND NVL(DELT_FLG,'N') <>'Y'			]]></sql>
			<params>
				<param name="io_bnd_cd" type="12" value="" out="N"/>
				<param name="sail_arr_dt" type="12" value="" out="N"/>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
				<param name="cust_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
