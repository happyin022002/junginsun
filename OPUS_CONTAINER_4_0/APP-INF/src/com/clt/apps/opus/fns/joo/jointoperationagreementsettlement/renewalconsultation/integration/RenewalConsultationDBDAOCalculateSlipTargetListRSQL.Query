<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RenewalConsultationDBDAOCalculateSlipTargetListRSQL">
			<desc><![CDATA[Slip 대상을 조회 한다.]]></desc>
			<sql><![CDATA[
WITH V_MDM_ORG AS (
    SELECT D.OFC_CD
         , D.LOC_CD
         , D.AP_CTR_CD
         , D.AP_OFC_CD
         , D.FINC_RGN_CD
      FROM MDM_ORGANIZATION D
         , MDM_ORGANIZATION E
     WHERE D.OFC_CD = E.AP_OFC_CD
       AND E.OFC_CD = @[ofc_cd]
       AND ROWNUM   = 1
)
SELECT INV.SLP_TP_CD
     , INV.SLP_FUNC_CD
     , INV.SLP_OFC_CD
     , INV.SLP_ISS_DT
     , INV.SLP_SER_NO
     , ROUND(INV.ACT_AMT, 2) AS TOT_AMOUNT
     , INV.ACCT_YRMON
     , INV.JO_CRR_CD
     , INV.INV_NO
     , INV.PRNR_REF_NO
     , SUBSTR(INV.INV_NO,1, 7)||SUBSTR(INV.INV_NO,9, 2)||LPAD(ROWNUM, 3, '0') AS KEY_NO
     , DTL.VSL_CD
     , DTL.SKD_VOY_NO
     , DTL.SKD_DIR_CD
     , DTL.REV_DIR_CD
     , DTL.REV_YRMON
     , DTL.STL_VVD_SEQ
     , DTL.ACT_AMT AS STL_LOCL_AMT
     , STL.JO_STL_ITM_CD
     , STL.RLANE_CD
     , STL.LOCL_CURR_CD
     , ACC.DR_ACCT_CD
     , ACC.CR_ACCT_CD
     , ORG.AP_CTR_CD AS DR_CTR_CD
     , ORG.AP_CTR_CD AS CR_CTR_CD
     , ORG.LOC_CD AS DR_LOC_CD
     , ORG.LOC_CD AS CR_LOC_CD
     , 'DR' AS DR_CR_CD
     , STL.JO_CRR_CD||'/'||ITM.JO_STL_ITM_NM AS SLP_DESC
     , ( SELECT CASE WHEN COUNT(VVD.REV_YRMON) > 0 THEN 'N' ELSE 'Y' END
           FROM AR_MST_REV_VVD VVD
          WHERE VVD.VSL_CD        = STL.VSL_CD
            AND VVD.SKD_VOY_NO    = STL.SKD_VOY_NO
            AND VVD.SKD_DIR_CD    = STL.SKD_DIR_CD
            AND VVD.RLANE_DIR_CD  = STL.REV_DIR_CD
            AND VVD.RLANE_CD      = STL.RLANE_CD
       ) AS VVD_CXL_FLG
  FROM JOO_INVOICE INV
     , JOO_INV_DTL DTL
     , JOO_STL_TGT STL
     , JOO_STL_ITM ITM
     , JOO_STL_ITM_ACCT ACC
     , V_MDM_ORG ORG
 WHERE 1=1
   AND INV.INV_NO           = @[inv_no]
   AND INV.ACCT_YRMON       = @[acct_yrmon]
   AND INV.RE_DIVR_CD       = @[re_divr_cd]
   AND INV.ACCTG_CRR_CD     = @[acctg_crr_cd]
   AND INV.LOCL_CURR_CD     = @[locl_curr_cd]
   AND INV.PRNR_REF_NO      = @[prnr_ref_no]
   AND INV.ACCT_YRMON       = DTL.ACCT_YRMON
   AND INV.JO_CRR_CD        = DTL.JO_CRR_CD
   AND INV.INV_NO           = DTL.INV_NO
   AND INV.RE_DIVR_CD       = DTL.RE_DIVR_CD
   AND DTL.VSL_CD           = STL.VSL_CD
   AND DTL.SKD_VOY_NO       = STL.SKD_VOY_NO
   AND DTL.SKD_DIR_CD       = STL.SKD_DIR_CD
   AND DTL.REV_DIR_CD       = STL.REV_DIR_CD
   AND DTL.REV_YRMON        = STL.REV_YRMON
   AND DTL.STL_VVD_SEQ      = STL.STL_VVD_SEQ
   AND STL.JO_STL_ITM_CD    = ITM.JO_STL_ITM_CD
   AND INV.RE_DIVR_CD       = ACC.RE_DIVR_CD
   AND ITM.JO_STL_ITM_CD    = ACC.JO_STL_ITM_CD
 ORDER BY DTL.VSL_CD
     , DTL.SKD_VOY_NO
     , DTL.SKD_DIR_CD
     , DTL.REV_DIR_CD
     , DTL.REV_YRMON   
     , ITM.ORD_SEQ			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
				<param name="acct_yrmon" type="12" value="" out="N"/>
				<param name="re_divr_cd" type="12" value="" out="N"/>
				<param name="acctg_crr_cd" type="12" value="" out="N"/>
				<param name="locl_curr_cd" type="12" value="" out="N"/>
				<param name="prnr_ref_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
