<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="INVCommonDAOsearchAROfficeListRSQL">
			<desc><![CDATA[searchAROfficeList]]></desc>
			<sql><![CDATA[
SELECT A.AR_HD_QTR_OFC_CD AR_HD_QTR_OFC_CD
     , A.AR_OFC_CD AR_OFC_CD
	 , A.SO_IF_CD AR_AGN_STL_CD
	 , B.AR_OFC_CD AR_OFC_CD_LOGIN
	 , A.AR_CURR_CD AR_CURR_CD
	 , NVL(A.AR_CTRL_OFC_CD, 'N') AR_CTRL_OFC_CD
	 , A.LOC_CD LOC_CD
	 , DECODE(C.SYS_AREA_GRP_ID, 'KOR', DECODE(SUBSTR(A.LOC_CD, 1, 2), 'JP', 'JPN', 'KOR'), C.SYS_AREA_GRP_ID) SVR_ID
     , NVL(D.XCH_RT_RVS_FLG,'N') XCH_RT_RVS_FLG
     , E.DP_PRCS_KNT
	 , A.REP_CUST_CNT_CD
	 , A.REP_CUST_SEQ
	 , NVL(D.XCH_RT_USD_TP_CD,'V') XCH_RT_TP_CD
     , D.OTS_SMRY_CD
     , D.INV_DUP_FLG
     , D.INV_MLT_BL_ISS_FLG
     , D.INV_VAT_CHG_CD
     , D.INV_VAT_CHG_RT
     , D.CPY_INV_KNT
	 , NVL(D.XCH_RT_N3RD_TP_CD,'V') XCH_RT_N3RD_TP_CD
     , A.ALTN_CURR_DIV_CD
  FROM MDM_ORGANIZATION A
     , (SELECT AR_HD_QTR_OFC_CD, AR_OFC_CD, LOC_CD
          FROM MDM_ORGANIZATION
         WHERE OFC_CD = @[ofc_cd]) B
	 , COM_SYS_AREA_GRP_ID C
     , INV_AR_STUP_OFC D
     , MDM_CURRENCY E
 WHERE A.AR_HD_QTR_OFC_CD = B.AR_HD_QTR_OFC_CD
   AND A.OFC_CD = A.AR_OFC_CD   
   AND A.OFC_CD = D.AR_OFC_CD(+)   
--   AND SUBSTR(A.LOC_CD, 1, 2) = SUBSTR(B.LOC_CD, 1, 2)
   AND SUBSTR(A.LOC_CD, 1, 2) = C.CNT_CD
   AND C.CO_IND_CD = 'H' 
   AND A.AR_CURR_CD = E.CURR_CD  
 ORDER BY A.AR_OFC_CD			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
