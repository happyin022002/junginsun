<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceCorrectionDBDAOSearchChangeCustomerInvoiceListRSQL">
			<desc><![CDATA[   ]]></desc>
			<sql><![CDATA[
SELECT DISTINCT MN.INV_NO,
       MN.INV_REF_NO,
       MN.ISS_DT,
       MN.BL_SRC_NO,
       MN.VSL_CD||MN.SKD_VOY_NO||MN.SKD_DIR_CD VVD,
       MN.POL_CD,
       MN.POD_CD,
       MN.SVC_SCP_CD,
       MN.IO_BND_CD,
       MN.LOCL_CURR_CD,
       SAR_GET_FMT_MASK_FNC(MN.LOCL_CURR_CD,CSUM.INV_TTL_LOCL_AMT) INV_TTL_LOCL_AMT,
	   MN.INV_CUST_CNT_CD||'-'||LPAD(MN.INV_CUST_SEQ, 6, '0') INV_CUST_CD,
       MN.INV_CURR_CD
  FROM INV_AR_MN      MN,
	   (SELECT INV_NO, NVL(SUM(CURR_LOCL_AMT),0) INV_TTL_LOCL_AMT
         FROM ( SELECT MN.INV_NO,
                       SUM(SAR_GET_CUR_AMT_FNC(MN.LOCL_CURR_CD,CHG.CHG_AMT*CHG.INV_XCH_RT)) CURR_LOCL_AMT
                  FROM INV_AR_CHG     CHG,
                       INV_AR_MN      MN,
                       MDM_CURRENCY   CUR
                 WHERE CHG.AR_IF_NO     = MN.AR_IF_NO
                   AND MN.OTS_PAY_CD IS NULL AND MN.ORG_INV_NO IS NULL --Except migration data
                   AND MN.AR_OFC_CD       = @[ofc_cd]
                   AND MN.ISS_DT BETWEEN REPLACE(@[iss_fm_dt],'-','') AND REPLACE(@[iss_to_dt],'-','')
                   AND MN.ACT_CUST_CNT_CD = @[cnt_cd]
                   AND MN.ACT_CUST_SEQ = @[cust_cd]
                   AND NVL(MN.INV_DELT_DIV_CD,'N') <> 'Y'
                   AND NVL(MN.INV_ISS_FLG,'N') = 'Y'
				   AND NVL(MN.INV_CLR_FLG,'N') = 'N'
                   AND CUR.CURR_CD = MN.LOCL_CURR_CD
                 GROUP BY MN.INV_NO, CHG.CURR_CD, CHG.INV_XCH_RT, CUR.DP_PRCS_KNT)
          GROUP BY INV_NO ) CSUM 
 WHERE MN.INV_NO = CSUM.INV_NO
   AND MN.OTS_PAY_CD IS NULL AND MN.ORG_INV_NO IS NULL --Except migration data
   AND MN.AR_OFC_CD     = @[ofc_cd]
   AND MN.ISS_DT BETWEEN REPLACE(@[iss_fm_dt],'-','') AND REPLACE(@[iss_to_dt],'-','')
   AND MN.ACT_CUST_CNT_CD = @[cnt_cd]
   AND MN.ACT_CUST_SEQ = @[cust_cd]
   AND MN.INV_CURR_CD = @[inv_curr_cd]
   --AND MN.REV_TP_CD <> 'M'
   AND NVL(MN.INV_DELT_DIV_CD,'N') <> 'Y'
   AND NVL(MN.INV_ISS_FLG,'N') = 'Y'
   AND NVL(MN.INV_CLR_FLG,'N') = 'N'
   --AND NVL(MN.INV_SPLIT_CD,'N') NOT IN ('M','X') 2010-01-18 이상희 과장
   AND MN.INV_NO != 'SYS CLEAR'
   AND NOT EXISTS (SELECT 'X'
                   FROM INV_AR_MN
                   WHERE (AR_OFC_CD, BL_SRC_NO) IN (SELECT AR_OFC_CD, BL_SRC_NO
                                                    FROM INV_AR_MN
                                                    WHERE AR_OFC_CD = MN.AR_OFC_CD
                                                    AND INV_NO = MN.INV_NO)
                   AND BL_INV_CFM_DT IS NOT NULL
                   AND INV_DELT_DIV_CD <> 'Y'
                   AND INV_ISS_FLG = 'N')
   AND NOT EXISTS (SELECT COUNT(DISTINCT P.BL_SRC_NO)
                   FROM INV_AR_MN P,
                        INV_AR_ISS_DTL Q
                   WHERE Q.INV_NO = MN.INV_NO
                   AND Q.AR_IF_NO = P.AR_IF_NO
                   HAVING COUNT(DISTINCT P.BL_SRC_NO) > 1)
 ORDER BY MN.INV_NO			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="iss_fm_dt" type="12" value="" out="N"/>
				<param name="iss_to_dt" type="12" value="" out="N"/>
				<param name="cnt_cd" type="12" value="" out="N"/>
				<param name="cust_cd" type="12" value="" out="N"/>
				<param name="inv_curr_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
