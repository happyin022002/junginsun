<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BookingARCreationDBDAOModifyCFMDateVOUSQL">
			<desc><![CDATA[[경리환율 존재하는 경우] ERP I/F  처리
[경리환율 존재하지 않는 경우] INV_AR_MN.BL_INV_CFM_DT 컬럼을 NULL 로 Update 하고 종료(No Good 처리한다는 의미)]]></desc>
			<sql><![CDATA[
UPDATE INV_AR_MN SET 
#if (${flag} == 'good') 
BL_INV_CFM_DT = TO_CHAR(GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[ar_ofc_cd]),'YYYYMMDD')
, IF_SEQ = (SELECT NVL((SELECT MAX(IF_SEQ) FROM INV_AR_MN WHERE BL_SRC_NO = @[bl_src_no] ), 0) + 1 FROM DUAL)
#else
BL_INV_CFM_DT = null
, IF_SEQ = null
, GL_EFF_DT = null
#end
WHERE AR_IF_NO = @[if_no]
#if (${flag} == 'good')
  AND BL_INV_CFM_DT IS NULL
#end			]]></sql>
			<params>
				<param name="ar_ofc_cd" type="12" value="" out="N"/>
				<param name="bl_src_no" type="12" value="" out="N"/>
				<param name="if_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
