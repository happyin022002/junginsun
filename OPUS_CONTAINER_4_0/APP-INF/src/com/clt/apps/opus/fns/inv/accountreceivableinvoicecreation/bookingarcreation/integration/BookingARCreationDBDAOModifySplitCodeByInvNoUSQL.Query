<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BookingARCreationDBDAOModifySplitCodeByInvNoUSQL">
			<desc><![CDATA[INV_AR_MN 테이블에 Update

Master가 되는 대상  데이터에 Split ind를 'M'으로 update  함.]]></desc>
			<sql><![CDATA[
UPDATE INV_AR_MN
   SET INV_SPLIT_CD = @[inv_split_cd],
       UPD_USR_ID	= @[upd_usr_id],
	   UPD_DT       = SYSDATE
 WHERE NVL(INV_SPLIT_CD,'M') NOT IN ('S','C','E','X')
   AND AR_IF_NO IN (SELECT DISTINCT MN.AR_IF_NO
					  FROM INV_AR_ISS_DTL DTL,
						   INV_AR_CHG     CHG,
						   INV_AR_MN      MN
					 WHERE DTL.AR_IF_NO = CHG.AR_IF_NO
					   AND DTL.CHG_SEQ      = CHG.CHG_SEQ
					   AND CHG.AR_IF_NO     = MN.AR_IF_NO
					   AND MN.AR_OFC_CD       = @[ofc_cd]
					   AND DTL.INV_NO         = @[inv_no]
					   --AND MN.REV_TP_CD <> 'M' 2009-12-02 김현화 수석
					   AND NVL(MN.INV_DELT_DIV_CD,'N') <> 'Y'
					   AND NVL(MN.INV_SPLIT_CD,'N') NOT IN ('M','X'))			]]></sql>
			<params>
				<param name="inv_split_cd" type="12" value="" out="N"/>
				<param name="upd_usr_id" type="12" value="" out="N"/>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
