<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="JOOFindCodeAndCheckDBDAOBasicPortRSQL">
			<desc><![CDATA[Port 조회]]></desc>
			<sql><![CDATA[
#if (${name} == 'C')
--Cycle인 경우 Basic Port가 없을 수 있으므로 Basic Port는 걸지 않는다.
SELECT
       DISTINCT
       B.VPS_PORT_CD AS CODE,
       TO_CHAR(B.VPS_ETA_DT,'YYYYMMDDHH24MISS')||','||TO_CHAR(B.VPS_ETD_DT,'YYYYMMDDHH24MISS') AS NAME,
       C.RLANE_DIR_CD AS SUPER_CD1,
       NVL(C.DELT_FLG,'N') AS SUPER_CD2,
       B.CLPT_SEQ
FROM   VSK_VSL_PORT_SKD B,
	   AR_MST_REV_VVD   C
WHERE  B.SLAN_CD         = SUBSTR(C.RLANE_CD,1,3)
AND    B.VSL_CD          = C.VSL_CD
AND    B.SKD_VOY_NO      = C.SKD_VOY_NO
AND    B.SKD_DIR_CD      = C.SKD_DIR_CD
AND    B.CLPT_IND_SEQ    = '1'
AND    C.VSL_CD          = SUBSTR(@[super_cd2],1,4)
AND    C.SKD_VOY_NO      = SUBSTR(@[super_cd2],5,4)
AND    C.SKD_DIR_CD      = SUBSTR(@[super_cd2],9,1)
AND    C.RLANE_CD        = @[super_cd1]
ORDER  BY B.CLPT_SEQ
#else
SELECT
       DISTINCT
       A.PORT_CD AS CODE,
       TO_CHAR(B.VPS_ETA_DT,'YYYYMMDDHH24MISS')||','||TO_CHAR(B.VPS_ETD_DT,'YYYYMMDDHH24MISS') AS NAME,
       C.RLANE_DIR_CD AS SUPER_CD1,
       NVL(C.DELT_FLG,'N') AS SUPER_CD2,
       B.CLPT_SEQ
FROM   (
		SELECT
		       N1ST_STL_BZC_PORT_CD AS PORT_CD
		FROM   JOO_STL_BSS_PORT A
		WHERE  A.JO_CRR_CD  = @[code]
		AND    A.RLANE_CD   = @[super_cd1]
#if (${name} == 'R')
--2010.03.15 Round이면 basic port에 east bound밖에 없으므로...
--2010.04.08 Round이면 한 건만 입력되므로 가져오게 한다. (EAST 만 넣는게 아니라 NEWS 한 건만 넣는다.)
--		AND    A.SKD_DIR_CD = 'E'
		AND    ROWNUM = 1
#else
		AND    A.SKD_DIR_CD = SUBSTR(@[super_cd2],9,1)
#end
		UNION ALL
		SELECT
		       N2ND_STL_BZC_PORT_CD AS PORT_CD
		FROM   JOO_STL_BSS_PORT A
		WHERE  A.JO_CRR_CD  = @[code]
		AND    A.RLANE_CD   = @[super_cd1]
#if (${name} == 'R')
--2010.03.15 Round이면 basic port에 east bound밖에 없으므로...
--2010.04.08 Round이면 한 건만 입력되므로 가져오게 한다. (EAST 만 넣는게 아니라 NEWS 한 건만 넣는다.)
--		AND    A.SKD_DIR_CD = 'E'
		AND    ROWNUM = 1
#else
		AND    A.SKD_DIR_CD = SUBSTR(@[super_cd2],9,1)
#end
		AND    A.N2ND_STL_BZC_PORT_CD IS NOT NULL
		UNION ALL
		SELECT
		       N3RD_STL_BZC_PORT_CD AS PORT_CD
		FROM   JOO_STL_BSS_PORT A
		WHERE  A.JO_CRR_CD  = @[code]
		AND    A.RLANE_CD   = @[super_cd1]
#if (${name} == 'R')
--2010.03.15 Round이면 basic port에 east bound밖에 없으므로...
--2010.04.08 Round이면 한 건만 입력되므로 가져오게 한다. (EAST 만 넣는게 아니라 NEWS 한 건만 넣는다.)
--		AND    A.SKD_DIR_CD = 'E'
		AND    ROWNUM = 1
#else
		AND    A.SKD_DIR_CD = SUBSTR(@[super_cd2],9,1)
#end
		AND    A.N3RD_STL_BZC_PORT_CD IS NOT NULL
		) A,
		VSK_VSL_PORT_SKD B,
		AR_MST_REV_VVD   C
WHERE  A.PORT_CD         = B.VPS_PORT_CD(+)
AND    C.RLANE_CD        = @[super_cd1]
AND    C.VSL_CD          = SUBSTR(@[super_cd2],1,4)
AND    C.SKD_VOY_NO      = SUBSTR(@[super_cd2],5,4)
AND    C.SKD_DIR_CD      = SUBSTR(@[super_cd2],9,1)
AND    B.SLAN_CD     (+) = SUBSTR(@[super_cd1],1,3)
AND    B.VSL_CD      (+) = SUBSTR(@[super_cd2],1,4)
AND    B.SKD_VOY_NO  (+) = SUBSTR(@[super_cd2],5,4)
AND    B.SKD_DIR_CD  (+) = SUBSTR(@[super_cd2],9,1)
AND    B.CLPT_IND_SEQ(+) = '1'
ORDER  BY B.CLPT_SEQ
#end			]]></sql>
			<params>
				<param name="super_cd2" type="12" value="HNBL0037E" out="N"/>
				<param name="super_cd1" type="12" value="AEXAE" out="N"/>
				<param name="code" type="12" value="COS" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
