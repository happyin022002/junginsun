<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceCustomerMgtDBDAOsearchCustomerVORSQL">
			<desc><![CDATA[   ]]></desc>
			<sql><![CDATA[
select 
	decode(a.cust_cnt_cd,null,null,a.cust_cnt_cd||'-'||LPAD(a.cust_seq, 6, '0')) cust_cd,
	a.cust_cnt_cd cust_cnt_cd,
	a.cust_seq	cust_seq,
	a.cust_lgl_eng_nm cust_lgl_eng_nm ,
	a.cust_locl_lang_nm cust_locl_lang_nm, 
	a.ofc_cd||' ' ofc_cd,
	a.cust_rgst_no cust_rgst_no,
	b.cr_amt cr_amt,
	b.cr_amt cr_amt2,
	b.cr_clt_ofc_cd cr_clt_ofc_cd,
	decode(b.act_cust_cnt_cd,null,null,b.act_cust_cnt_cd||'-'||LPAD(b.act_cust_seq, 6, '0')) act_payer,
	b.act_cust_cnt_cd act_cust_cnt_cd,
	b.act_cust_seq act_cust_seq,
	b.ownr_nm ownr_nm,
	nvl(b.ib_cr_term_dys,0) ib_cr_term_dys,
	nvl(b.ob_cr_term_dys,0) ob_cr_term_dys,
	b.kr_ib_ofc_cd kr_ib_ofc_cd,
	nvl(b.locl_zip_cd,c.zip_cd) locl_zip_cd,
	b.cr_flg cr_flg,
	b.locl_nm locl_nm,
	b.cr_curr_cd,
	C.BZET_ADDR addr
from mdm_customer a,mdm_cr_cust b, mdm_cust_addr c
where a.cust_seq = b.cust_seq(+)	
and a.cust_seq = c.cust_seq(+)
and a.cust_cnt_cd = b.cust_cnt_cd(+)
and a.cust_cnt_cd = c.cust_cnt_cd(+)
and c.prmry_chk_flg(+) = 'Y'
--AND NVL(a.BLK_DIV_FLG,'N') <> 'Y'
AND NVL(a.CNTR_DIV_FLG,'N') ='Y' --2010-06-04 김현화수석
#if (${cust_type} == 'CM')
	#if (${chk_nm} == 'Y')
		#if (${cust_nm1}!= '')
		AND UPPER(a.cust_lgl_eng_nm) like '%' || UPPER(@[cust_nm1]) || '%'
		#end
		#if (${cust_nm2}!= '')
		AND UPPER(a.cust_lgl_eng_nm) like '%' || UPPER(@[cust_nm2]) || '%'
		#end
		#if (${cust_nm3}!= '')
		AND UPPER(a.cust_lgl_eng_nm) like '%' || UPPER(@[cust_nm3]) || '%'
		#end
	#else
		AND	UPPER(a.cust_lgl_eng_nm) like UPPER(@[cust_nm])|| '%'
	#end
#elseif (${cust_type} == 'LCL')
	#if (${chk_nm} == 'Y')
		#if (${cust_nm1}!= '')
		AND UPPER(b.locl_nm) like '%' || UPPER(@[cust_nm1]) || '%'
		#end
		#if (${cust_nm2}!= '')
		AND UPPER(b.locl_nm) like '%' || UPPER(@[cust_nm2]) || '%'
		#end
		#if (${cust_nm3}!= '')
		AND UPPER(b.locl_nm) like '%' || UPPER(@[cust_nm3]) || '%'
		#end
	#else
		AND	UPPER(b.locl_nm) like UPPER(@[cust_nm])|| '%'
	#end
#end
#if (${cr_flg} != '')
and NVL(b.cr_flg,'N') = @[cr_flg]
#end
#if (${credit_type} != '')
#if (${credit_type}  ==  'I')
and nvl(b.ib_cr_term_dys,0) > 0
#elseif (${credit_type} == 'O') 	
and nvl(b.ob_cr_term_dys,0) > 0
#end
#end
#if (${cr_clt_ofc_cd} != '')
and b.cr_clt_ofc_cd like '%'|| @[cr_clt_ofc_cd]|| '%'
#end
#if (${locl_zip_cd} != '')
and (b.locl_zip_cd like REPLACE(REPLACE(@[locl_zip_cd],' ',''),'-','') || '%' or c.zip_cd like  REPLACE(REPLACE(@[locl_zip_cd],' ',''),'-','') || '%')
#end
#if (${cust_cnt_cd} != '')
and	a.cust_cnt_cd = @[cust_cnt_cd]
#end
and a.delt_flg ='N'			]]></sql>
			<params>
				<param name="cust_nm1" type="12" value="" out="N"/>
				<param name="cust_nm2" type="12" value="" out="N"/>
				<param name="cust_nm3" type="12" value="" out="N"/>
				<param name="cust_nm" type="12" value="" out="N"/>
				<param name="cr_flg" type="12" value="" out="N"/>
				<param name="cr_clt_ofc_cd" type="12" value="" out="N"/>
				<param name="locl_zip_cd" type="12" value="" out="N"/>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
