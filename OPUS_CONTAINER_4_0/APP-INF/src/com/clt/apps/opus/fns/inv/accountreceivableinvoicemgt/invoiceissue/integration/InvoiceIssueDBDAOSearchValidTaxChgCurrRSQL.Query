<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueDBDAOSearchValidTaxChgCurrRSQL">
			<desc><![CDATA[Tax 금액이 Local Currency로 존재하지 않은 BL 체크]]></desc>
			<sql><![CDATA[
SELECT DECODE(COUNT(*),0,'PASS','FAIL') AS CHK_CURR
FROM INV_AR_CHG IAC, INV_AR_MN IAM
WHERE IAC.AR_IF_NO = @[ar_if_no]
AND   IAC.AR_IF_NO = IAM.AR_IF_NO
AND   IAC.TJ_SRC_NM = 'VAT'
AND   IAC.CURR_CD <> IAM.LOCL_CURR_CD			]]></sql>
			<params>
				<param name="ar_if_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
