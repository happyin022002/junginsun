<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ARInvoiceCorrectionDBDAOSearchChangeCustomerInvoiceChargeRSQL">
			<desc><![CDATA[   ]]></desc>
			<sql><![CDATA[
SELECT CHG_CD,
       RAT_AS_CNTR_QTY,
       SAR_GET_FMT_MASK_FNC(CURR_CD,TRF_RT_AMT) TRF_RT_AMT,
       PER_TP_CD,
       CURR_CD,
       SAR_GET_FMT_MASK_FNC(CURR_CD,CHG_AMT) CHG_AMT,
       INV_XCH_RT,
       SAR_GET_CUR_AMT_FNC(LOCL_CURR_CD,LOCL_AMT) LOCL_AMT,
       INV_TTL_LOCL_AMT,
       DP_PRCS_KNT_LOCAL
  FROM (SELECT CHG.CHG_CD,
               ABS(SUM(CASE WHEN CHG.CHG_AMT > 0 THEN CHG.RAT_AS_CNTR_QTY ELSE CHG.RAT_AS_CNTR_QTY * (-1) END)) RAT_AS_CNTR_QTY,
               CHG.TRF_RT_AMT,
               CHG.PER_TP_CD,
               CHG.CURR_CD,
               SUM(CHG.CHG_AMT) CHG_AMT,
               CHG.INV_XCH_RT,
               SUM(SAR_GET_CUR_AMT_FNC(MN.LOCL_CURR_CD,CHG.CHG_AMT*CHG.INV_XCH_RT)) LOCL_AMT,
               CUR.DP_PRCS_KNT DP_PRCS_KNT_LOCAL
          FROM INV_AR_ISS_DTL DTL,
               INV_AR_CHG     CHG,
               INV_AR_MN      MN,
               MDM_CURRENCY   CUR
         WHERE DTL.AR_IF_NO = CHG.AR_IF_NO
           AND DTL.CHG_SEQ      = CHG.CHG_SEQ
           AND CHG.AR_IF_NO     = MN.AR_IF_NO
           AND CUR.CURR_CD = MN.LOCL_CURR_CD
           AND MN.OTS_PAY_CD IS NULL AND MN.ORG_INV_NO IS NULL --Except migration data
           AND MN.AR_OFC_CD       = @[ar_ofc_cd]
           AND DTL.INV_NO         = @[inv_no]
           AND NVL(MN.INV_DELT_DIV_CD,'N') <> 'Y'
		   --AND NVL(MN.INV_SPLIT_CD,'N') NOT IN ('M','X') 2010-01-18 이상희 과장
           --AND MN.REV_TP_CD <> 'M' 2009-12-02 김현화 수석
         GROUP BY CHG.CHG_CD,
                  CHG.TRF_RT_AMT,
                  CHG.RAT_AS_CNTR_QTY,
                  CHG.PER_TP_CD,
                  CHG.CURR_CD,
                  CHG.INV_XCH_RT,
                  CUR.DP_PRCS_KNT) A,
      (SELECT NVL(SUM(CURR_LOCL_AMT),0) INV_TTL_LOCL_AMT, MAX(LOCL_CURR_CD) LOCL_CURR_CD
         FROM ( SELECT CHG.CURR_CD,
                       SUM(SAR_GET_CUR_AMT_FNC(MN.LOCL_CURR_CD,CHG.CHG_AMT*CHG.INV_XCH_RT)) CURR_LOCL_AMT,
                  	   MN.LOCL_CURR_CD	
				 FROM INV_AR_ISS_DTL DTL,
                       INV_AR_CHG     CHG,
                       INV_AR_MN      MN,
                       MDM_CURRENCY   CUR
                 WHERE DTL.AR_IF_NO = CHG.AR_IF_NO
                   AND DTL.CHG_SEQ      = CHG.CHG_SEQ
                   AND CHG.AR_IF_NO     = MN.AR_IF_NO
                   AND MN.OTS_PAY_CD IS NULL AND MN.ORG_INV_NO IS NULL --Except migration data
                   AND MN.AR_OFC_CD       = @[ar_ofc_cd]
                   AND DTL.INV_NO         = @[inv_no]
                   AND NVL(MN.INV_DELT_DIV_CD,'N') <> 'Y'
                   AND CUR.CURR_CD = MN.LOCL_CURR_CD
                 GROUP BY CHG.CURR_CD, CHG.INV_XCH_RT, CUR.DP_PRCS_KNT,MN.LOCL_CURR_CD)) B       
 WHERE A.CHG_AMT <> 0 
 ORDER BY CURR_CD, CHG_CD, PER_TP_CD , TRF_RT_AMT , RAT_AS_CNTR_QTY			]]></sql>
			<params>
				<param name="ar_ofc_cd" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
