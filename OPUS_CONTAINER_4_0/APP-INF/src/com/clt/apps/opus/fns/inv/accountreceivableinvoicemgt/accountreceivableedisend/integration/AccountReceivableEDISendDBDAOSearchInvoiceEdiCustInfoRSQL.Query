<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AccountReceivableEDISendDBDAOSearchInvoiceEdiCustInfoRSQL">
			<desc><![CDATA[SearchInvoiceEdiCustInfo]]></desc>
			<sql><![CDATA[
SELECT '{CUST_INFO' || CHR(10) 
       || 'CUST_TP_CD:' || BKG_CUST_TP_CD|| CHR(10) 
	   || 'CUST_NM:' || REPLACE(REPLACE(CUST_NM,CHR(13)||CHR(10),CHR(10)),CHR(10), ' ') ||CHR(10) 
       || 'CUST_TAX_NO:' ||(SELECT CUST_RGST_NO FROM MDM_CUSTOMER WHERE CUST_CNT_CD = BCUST.CUST_CNT_CD AND CUST_SEQ = BCUST.CUST_SEQ) || CHR(10) 
       || 'CUST_BK_REMIT:' ||(SELECT BANK_ACCT_NO FROM MDM_CR_CUST WHERE CUST_CNT_CD = BCUST.CUST_CNT_CD AND CUST_SEQ = BCUST.CUST_SEQ) || CHR(10) 
       || 'CUST_ADDR1:' ||BKG_TOKEN_NL_FNC(BCUST.CUST_ADDR, 1, '')|| CHR(10) 
       || 'CUST_ADDR2:' ||BKG_TOKEN_NL_FNC(BCUST.CUST_ADDR, 2, '')|| CHR(10)  
       || 'CUST_ADDR3:' ||BKG_TOKEN_NL_FNC(BCUST.CUST_ADDR, 3, '')|| CHR(10) 
       || 'CUST_ADDR4:' ||BKG_TOKEN_NL_FNC(BCUST.CUST_ADDR, 4, '')|| CHR(10)  
       || 'CUST_ADDR5:' ||BKG_TOKEN_NL_FNC(BCUST.CUST_ADDR, 5, '')|| CHR(10)  
       || 'CUST_CITY:' || BCUST.CUST_CTY_NM || CHR(10) 
       || 'CUST_STATE:' ||BCUST.CUST_STE_CD || CHR(10) 
       || 'CUST_ZIP:' ||BCUST.CUST_ZIP_ID|| CHR(10) 
       || 'CUST_CNT_CD:' ||BCUST.CUST_CNT_CD|| CHR(10) 
       || '{CONTACT_INFO' || CHR(10) 
       || 'CONTACT_NM:' ||ADDR.CNTC_PSON_NM|| CHR(10) 
       || 'CONTACT_DEPT:' || ''|| CHR(10) 
       || 'CONTACT_EMAIL:' ||CNTC.CUST_EML|| CHR(10) 
       || 'CONTACT_FAX:' ||CNTC.FAX_NO|| CHR(10) 
       || 'CONTACT_TEL:' || CNTC.PHN_NO||CHR(10) 
       || '}CONTACT_INFO' || CHR(10) 
       || '{CUST_CD_INFO' || CHR(10) 
       || 'CUST_CD_TP_CD:' ||'CC'|| CHR(10) 
       || 'CUST_CD:' ||BCUST.CUST_CNT_CD||BCUST.CUST_SEQ || CHR(10) 
       || '}CUST_CD_INFO' || CHR(10) 
       || '{REGULATORY_INFO' || CHR(10) 
       || 'DUNS:' || ''||CHR(10) 
       || '}REGULATORY_INFO' || CHR(10) 
       || '}CUST_INFO' || CHR(10) 
  FROM BKG_CUSTOMER BCUST,
       MDM_CUST_ADDR ADDR,
       MDM_CUST_CNTC_PNT CNTC
 WHERE BKG_NO = @[bkg_no]
   AND BCUST.CUST_CNT_CD = ADDR.CUST_CNT_CD(+)
   AND BCUST.CUST_SEQ = ADDR.CUST_SEQ(+)
   AND BCUST.CUST_CNT_CD = CNTC.CUST_CNT_CD(+)
   AND BCUST.CUST_SEQ = CNTC.CUST_SEQ(+)
   AND ADDR.PRMRY_CHK_FLG(+) = 'Y'
   AND CNTC.CUST_CNTC_PNT_SEQ(+) = 1
   AND BCUST.BKG_CUST_TP_CD IN ('A','C','E','F','N','S')
   AND BCUST.CUST_CNT_CD IS NOT NULL
   AND BCUST.CUST_SEQ IS NOT NULL
UNION ALL
SELECT '{CUST_INFO' || CHR(10) 
       || 'CUST_TP_CD:' || 'P'|| CHR(10) 
	   || 'CUST_NM:' || REPLACE(REPLACE(MCUST.CUST_LGL_ENG_NM,CHR(13)||CHR(10),CHR(10)),CHR(10), ' ') ||CHR(10) 
       || 'CUST_TAX_NO:' ||MCUST.CUST_RGST_NO || CHR(10) 
       || 'CUST_BK_REMIT:' ||(SELECT BANK_ACCT_NO FROM MDM_CR_CUST WHERE CUST_CNT_CD = MCUST.CUST_CNT_CD AND CUST_SEQ = MCUST.CUST_SEQ) || CHR(10) 
       || 'CUST_ADDR1:' ||ADDR.LOCL_ADDR1|| CHR(10) 
       || 'CUST_ADDR2:' ||ADDR.LOCL_ADDR2|| CHR(10)  
       || 'CUST_ADDR3:' ||ADDR.LOCL_ADDR3|| CHR(10) 
       || 'CUST_ADDR4:' ||ADDR.LOCL_ADDR4|| CHR(10)  
       || 'CUST_ADDR5:' ||''|| CHR(10)  
       || 'CUST_CITY:' || ADDR.CTY_NM || CHR(10) 
       || 'CUST_STATE:' ||ADDR.STE_CD || CHR(10) 
       || 'CUST_ZIP:' ||ADDR.ZIP_CD|| CHR(10) 
       || 'CUST_CNT_CD:' ||MCUST.CUST_CNT_CD|| CHR(10) 
       || '{CONTACT_INFO' || CHR(10) 
       || 'CONTACT_NM:' ||ADDR.CNTC_PSON_NM|| CHR(10) 
       || 'CONTACT_DEPT:' || ''|| CHR(10) 
       || 'CONTACT_EMAIL:' ||CNTC.CUST_EML|| CHR(10) 
       || 'CONTACT_FAX:' ||CNTC.FAX_NO|| CHR(10) 
       || 'CONTACT_TEL:' || CNTC.PHN_NO||CHR(10) 
       || '}CONTACT_INFO' || CHR(10) 
       || '{CUST_CD_INFO' || CHR(10) 
       || 'CUST_CD_TP_CD:' ||'CC'|| CHR(10) 
       || 'CUST_CD:' ||MCUST.CUST_CNT_CD||MCUST.CUST_SEQ || CHR(10) 
       || '}CUST_CD_INFO' || CHR(10) 
       || '{REGULATORY_INFO' || CHR(10) 
       || 'DUNS:' || ''||CHR(10) 
       || '}REGULATORY_INFO' || CHR(10) 
       || '}CUST_INFO' || CHR(10) 
  FROM MDM_CUSTOMER MCUST,
       MDM_CUST_ADDR ADDR,
       MDM_CUST_CNTC_PNT CNTC,
       INV_AR_MN IAM
 WHERE IAM.AR_IF_NO = @[ar_if_no]
   AND IAM.ACT_CUST_CNT_CD = MCUST.CUST_CNT_CD
   AND IAM.ACT_CUST_SEQ = MCUST.CUST_SEQ
   AND MCUST.CUST_CNT_CD = ADDR.CUST_CNT_CD(+)
   AND MCUST.CUST_SEQ = ADDR.CUST_SEQ(+)
   AND MCUST.CUST_CNT_CD = CNTC.CUST_CNT_CD(+)
   AND MCUST.CUST_SEQ = CNTC.CUST_SEQ(+)
   AND ADDR.PRMRY_CHK_FLG(+) = 'Y'
   AND CNTC.CUST_CNTC_PNT_SEQ(+) = 1
UNION ALL
SELECT '{CUST_INFO' || CHR(10) 
       || 'CUST_TP_CD:' || 'IO'|| CHR(10) 
	   || 'CUST_NM:' || REPLACE(REPLACE(MORG.OFC_ENG_NM,CHR(13)||CHR(10),CHR(10)),CHR(10), ' ') ||CHR(10) 
       || 'CUST_TAX_NO:' ||MORG.OFC_TAX_ID || CHR(10) 
       || 'CUST_BK_REMIT:' ||'' || CHR(10) 
       || 'CUST_ADDR1:' ||SUBSTR(MORG.OFC_ADDR, 1, 35)|| CHR(10) 
       || 'CUST_ADDR2:' ||SUBSTR(MORG.OFC_ADDR, 36, 35)|| CHR(10)  
       || 'CUST_ADDR3:' ||SUBSTR(MORG.OFC_ADDR, 71, 35)|| CHR(10) 
       || 'CUST_ADDR4:' ||SUBSTR(MORG.OFC_ADDR, 106, 35)|| CHR(10)  
       || 'CUST_ADDR5:' ||SUBSTR(MORG.OFC_ADDR, 141, 35)|| CHR(10)  
       || 'CUST_CITY:' || '' || CHR(10) 
       || 'CUST_STATE:' ||MLOC.STE_CD || CHR(10) 
       || 'CUST_ZIP:' ||MORG.OFC_ZIP_CD|| CHR(10) 
       || 'CUST_CNT_CD:' ||MLOC.CNT_CD|| CHR(10) 
       || '{CONTACT_INFO' || CHR(10) 
       || 'CONTACT_NM:' || REPLACE(REPLACE(MORG.OFC_ENG_NM,CHR(13)||CHR(10),CHR(10)),CHR(10), ' ') ||CHR(10) 
       || 'CONTACT_DEPT:' || ''|| CHR(10) 
       || 'CONTACT_EMAIL:' ||MORG.OFC_REP_EML|| CHR(10) 
       || 'CONTACT_FAX:' ||MORG.OFC_FAX_NO|| CHR(10) 
       || 'CONTACT_TEL:' || MORG.OFC_PHN_NO||CHR(10) 
       || '}CONTACT_INFO' || CHR(10) 
       || '{CUST_CD_INFO' || CHR(10) 
       || 'CUST_CD_TP_CD:' ||'OC'|| CHR(10) 
       || 'CUST_CD:' ||MORG.OFC_CD|| CHR(10) 
       || '}CUST_CD_INFO' || CHR(10) 
       || '{REGULATORY_INFO' || CHR(10) 
       || 'DUNS:' || ''||CHR(10) 
       || '}REGULATORY_INFO' || CHR(10) 
       || '}CUST_INFO' || CHR(10) 
  FROM MDM_ORGANIZATION MORG,
       MDM_LOCATION MLOC,
       INV_AR_MN IAM
 WHERE IAM.AR_IF_NO = @[ar_if_no]
   AND IAM.AR_OFC_CD = MORG.OFC_CD
   AND MORG.LOC_CD = MLOC.LOC_CD			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="ar_if_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
