<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralARInvoiceCreationDBDAOcheckCustomerRSQL">
			<desc><![CDATA[GeneralARInvoiceCreationDBDAOcheckCustomerRSQL]]></desc>
			<sql><![CDATA[
SELECT DECODE(@[ofc_agent_mark], 'O', @[rep_cust_cnt_cd], 'S', @[rep_cust_cnt_cd], @[cust_cnt_cd]) CUST_CNT_CD
     , DECODE(@[ofc_agent_mark], 'O', @[rep_cust_seq], 'S', @[rep_cust_seq], @[cust_seq]) CUST_SEQ
  FROM DUAL
 WHERE EXISTS (SELECT 'X'
                 FROM MDM_CUSTOMER
                WHERE CUST_CNT_CD = @[cust_cnt_cd]
                  AND CUST_SEQ = @[cust_seq]
 				  AND NVL(DELT_FLG,'N') = 'N'
                  --AND NVL(BLK_DIV_FLG,'N') <> 'Y')
                  AND NVL(CNTR_DIV_FLG,'N') ='Y') --2010-06-04 김현화수석			]]></sql>
			<params>
				<param name="ofc_agent_mark" type="12" value="" out="N"/>
				<param name="rep_cust_cnt_cd" type="12" value="" out="N"/>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
				<param name="rep_cust_seq" type="12" value="" out="N"/>
				<param name="cust_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
