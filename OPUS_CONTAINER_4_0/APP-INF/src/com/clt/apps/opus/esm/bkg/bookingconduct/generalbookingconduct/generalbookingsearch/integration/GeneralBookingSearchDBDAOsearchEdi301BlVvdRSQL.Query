<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralBookingSearchDBDAOsearchEdi301BlVvdRSQL">
			<desc><![CDATA[searchEdi301BlVvd]]></desc>
			<sql><![CDATA[
SELECT '{BL_VVD'																          || CHR(10)
	|| 'VVDCODE:'			|| VVD.VSL_CD										          || CHR(10)
	|| 'VVDLOYD:'			|| VSL.LLOYD_NO	    								          || CHR(10)
	|| 'VVDVSLNAME:'		|| VSL.VSL_ENG_NM									          || CHR(10)
    || 'VVDVSL_CALL_SIGN:'	|| VSL.CALL_SGN_NO  								          || CHR(10)
	|| 'VVDVOY:'			|| VVD.SKD_VOY_NO    								          || CHR(10)
	|| 'VVDDIR:'			|| VVD.SKD_DIR_CD									          || CHR(10)
	|| 'VVD_CONSORTIUM_VOY_NO:' || VSK_COMMON_PKG.GET_CSSM_VOY_NO_FNC(VVD.VSL_CD,VVD.SKD_VOY_NO,VVD.SKD_DIR_CD,VVD.POL_CD,'O') || CHR(10)
	|| 'VVD_SERVICE_LCD:'																  || CHR(10)
	|| 'VVDPOLUNLC:'		|| VVD.POL_CD										          || CHR(10)
	|| 'VVDPOLQUAL:'		|| DECODE(LENGTH(POL.LOC_AMS_PORT_CD), 4, 'D', 5, 'K', ' ')   || CHR(10)
	|| 'VVDPOLPORT:'		|| POL.LOC_AMS_PORT_CD										  || CHR(10)
	|| 'VVDPOLNAME:'		|| POL.LOC_NM										          || CHR(10)
	|| 'VVDPOL_CNT_NM:'		|| (SELECT MC.CNT_NM FROM MDM_COUNTRY MC WHERE MC.CNT_CD = SUBSTR(VVD.POL_CD,1,2) AND ROWNUM = 1) || CHR(10)
	|| 'VVDPODUNLC:'		|| VVD.POD_CD										          || CHR(10)
	|| 'VVDPODQUAL:'		|| DECODE(LENGTH(POD.LOC_AMS_PORT_CD), 4, 'D', 5, 'K', ' ')   || CHR(10)
	|| 'VVDPODPORT:'		|| POD.LOC_AMS_PORT_CD										  || CHR(10)
	|| 'VVDPODNAME:'		|| POD.LOC_NM										          || CHR(10)
	|| 'VVDPOD_CNT_NM:'		|| (SELECT MC.CNT_NM FROM MDM_COUNTRY MC WHERE MC.CNT_CD = SUBSTR(VVD.POD_CD,1,2) AND ROWNUM = 1) || CHR(10)
    || 'REF1VVDVOY:'	                                                                  || CHR(10)
	|| 'VVDPOLETA:'			|| TO_CHAR(POL_SKD.VPS_ETA_DT, 'RRRRMMDDHH24MI')	          || CHR(10)
	|| 'VVDPOLETD:'			|| TO_CHAR(POL_SKD.VPS_ETD_DT, 'RRRRMMDDHH24MI')	          || CHR(10)
	|| 'VVDPOLETD_GTM:'		|| TO_CHAR(GLOBALDATE_PKG.TIME_CONV_FNC(VVD.POL_CD,POL_SKD.VPS_ETD_DT,'GMT'), 'RRRRMMDDHH24MI')	          || CHR(10)
	|| 'VVDPODETA:'			|| TO_CHAR(POD_SKD.VPS_ETA_DT, 'RRRRMMDDHH24MI')	          || CHR(10)
	|| 'VVDPODETA_GTM:'		|| TO_CHAR(GLOBALDATE_PKG.TIME_CONV_FNC(VVD.POD_CD,POD_SKD.VPS_ETA_DT,'GMT'), 'RRRRMMDDHH24MI')	          || CHR(10)
	|| '}BL_VVD'																		  BL_VVD
  FROM bkg_vvd VVD
		, VSK_VSL_PORT_SKD POL_SKD
		, VSK_VSL_PORT_SKD POD_SKD
		, MDM_location POL, MDM_location POD
		, MDM_VSL_CNTR VSL
 WHERE VVD.pol_cd		    = POL.loc_cd
   AND VVD.pod_cd		    = POD.loc_cd
   AND VVD.VSL_CD		    = VSL.VSL_CD(+)
   AND VVD.VSL_CD		    = POL_SKD.VSL_CD(+)
   AND VVD.SKD_VOY_NO	    = POL_SKD.SKD_VOY_NO(+)
   AND VVD.SKD_DIR_CD		= POL_SKD.SKD_DIR_CD(+)
   AND VVD.POL_CD		    = POL_SKD.VPS_PORT_CD(+)
   AND VVD.POL_CLPT_IND_SEQ = POL_SKD.CLPT_IND_SEQ(+)
   AND VVD.VSL_CD		    = POD_SKD.VSL_CD(+)
   AND VVD.SKD_VOY_NO	    = POD_SKD.SKD_VOY_NO(+)
   AND VVD.SKD_DIR_CD		= POD_SKD.SKD_DIR_CD(+)
   AND VVD.POD_CD		    = POD_SKD.VPS_PORT_CD(+)
   AND VVD.POD_CLPT_IND_SEQ = POD_SKD.CLPT_IND_SEQ(+)
   AND VVD.bkg_no		    = @[bkg_no]
 ORDER BY VVD.VSL_PRE_PST_CD, VVD.VSL_SEQ			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="AEVZ7115007" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
