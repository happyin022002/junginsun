<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BLIssuanceDBDAOsearchCustInfoRSQL">
			<desc><![CDATA[BLIssuanceDBDAOsearchCustInfoRSQL.Query]]></desc>
			<sql><![CDATA[
SELECT 
	BKG_NO, 
	DECODE(BKG_CUST_TP_CD, 'S', 'SHPR', 'FWDR') as CUST_TP, 
	CUST_CNT_CD||DECODE(LPAD(CUST_SEQ, 6, 0), '000000', '', LPAD(CUST_SEQ, 6, 0)) as CUST_CD, 
	CUST_NM 
FROM BKG_CUSTOMER 
WHERE BKG_NO = @[bkg_no] 
AND BKG_CUST_TP_CD IN ('S', 'F')			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
