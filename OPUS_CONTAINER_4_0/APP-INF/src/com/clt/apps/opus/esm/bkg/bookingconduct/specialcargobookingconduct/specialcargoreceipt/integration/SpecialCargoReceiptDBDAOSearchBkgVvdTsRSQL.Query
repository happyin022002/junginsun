<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SpecialCargoReceiptDBDAOSearchBkgVvdTsRSQL">
			<desc><![CDATA[t/s 화면에서 vvd 재지정시 special cargo 재 request를 위한 vvd를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT A1.BKG_NO
      ,A1.VSL_PRE_PST_CD
      ,A1.VSL_SEQ
      ,A1.VSL_CD
      ,A1.SKD_VOY_NO
      ,A1.SKD_DIR_CD
      ,A1.POL_CLPT_IND_SEQ
      ,A1.POL_CD
      ,A1.POD_CD
      ,A1.CRE_USR_ID
      ,A1.CRE_DT
      ,A1.UPD_USR_ID
      ,A1.UPD_DT
      ,A1.POD_CLPT_IND_SEQ
      ,A1.POL_YD_CD
      ,A1.POD_YD_CD
      ,A1.SLAN_CD
FROM BKG_VVD A1
,BKG_BL_DOC A2
,MDM_VSL_SVC_LANE A3
,(select bkg_no, MIN(SPCL_CGO_APRO_CD) SPCL_CGO_APRO_CD
    from 
		    (SELECT BKG_NO, SPCL_CGO_APRO_CD
		        FROM BKG_DG_CGO DG
		       WHERE BKG_NO = @[bkg_no]
				 AND SPCL_CGO_APRO_CD <> 'C'
		       UNION ALL
		      SELECT BKG_NO, SPCL_CGO_APRO_CD
		        FROM BKG_RF_CGO DG
		       WHERE BKG_NO = @[bkg_no]
				 AND SPCL_CGO_APRO_CD <> 'C'
		       UNION ALL
		      SELECT BKG_NO, SPCL_CGO_APRO_CD
		        FROM BKG_AWK_CGO
		       WHERE BKG_NO = @[bkg_no]
				 AND SPCL_CGO_APRO_CD <> 'C'
		       UNION ALL
		      SELECT BKG_NO, SPCL_CGO_APRO_CD
		        FROM BKG_BB_CGO
		       WHERE BKG_NO = @[bkg_no]
				 AND SPCL_CGO_APRO_CD <> 'C'
		       UNION ALL
		      SELECT BKG_NO, SPCL_CGO_APRO_CD
		        FROM BKG_STWG_CGO
		       WHERE BKG_NO = @[bkg_no]
				 AND SPCL_CGO_APRO_CD <> 'C'
			)
 group by bkg_no
) SPCL
WHERE A1.BKG_NO = @[bkg_no]
AND A1.BKG_NO = A2.BKG_NO
AND A1.BKG_NO = SPCL.BKG_NO 
				-- 전부 'Y'이면 post만
and 'Y' = case when spcl.SPCL_CGO_APRO_CD = 'Y' and a1.vsl_pre_pst_cd = 'U' then 'Y'
               when (spcl.SPCL_CGO_APRO_CD <> 'Y') AND (a1.vsl_pre_pst_cd = 'T' OR a1.vsl_pre_pst_cd = 'U') THEN 'Y'
               else 'N' end
AND A1.SLAN_CD                    = A3.VSL_SLAN_CD
AND A3.SPCL_CGO_RQST_TGT_LANE_FLG = 'Y'
AND A3.VSL_SVC_TP_CD              <> 'O' 
AND A3.DELT_FLG                   = 'N'
AND A1.VSL_CD                     IS NOT NULL			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="SEL014898300" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
