<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AGNCommApprovalDBDAOAddCsrHeaderApInvHdrInfoCSQL">
			<desc><![CDATA[AP_INV_HDR 에 데이터를 생성한다.]]></desc>
			<sql><![CDATA[
INSERT INTO AP_INV_HDR
         ( CSR_NO,
           CSR_TP_CD,
           INV_DT,
           INV_TERM_DT,
           GL_DT,
           VNDR_NO,
           CSR_AMT,
           CSR_CURR_CD,
           VNDR_TERM_NM,
           INV_DESC,
           ATTR_CATE_NM,
           ATTR_CTNT1,
           ATTR_CTNT2,
		   ATTR_CTNT8,
           ATTR_CTNT10,
		   ATTR_CTNT14,
           SRC_CTNT,
           PAY_MZD_LU_CD,
           PAY_GRP_LU_CD,
           COA_CO_CD,
           COA_RGN_CD,
           COA_CTR_CD,
           COA_ACCT_CD,
           COA_VVD_CD,
           COA_INTER_CO_CD,
           COA_FTU_N1ST_CD,
           COA_FTU_N2ND_CD,
           APRO_FLG,
           TAX_DECL_FLG,
           PPAY_APLY_FLG,
           TJ_OFC_CD,
           USR_EML,
           CRE_DT,
           CRE_USR_ID,
           EAI_EVNT_DT
         )
    SELECT
           @[csr_no]               AS CSR_NO,
      CASE
      WHEN SIGN(@[csr_amt]) = -1
      THEN 'CREDIT'
      ELSE 'STANDARD'
       END                       AS CSR_TP_CD,
           @[inv_dt]             AS INV_DT,
           @[inv_dt]             AS INV_TERM_DT,
           @[gl_dt]              AS GL_DT,
           @[vndr_no]            AS VNDR_NO,
           ROUND(@[csr_amt], 2)  AS CSR_AMT,
           @[curr_cd]            AS CSR_CURR_CD,
           @[vndr_term_nm]       AS VNDR_TERM_NM,
           @[inv_desc]           AS INV_DESC,
           'Invoices'            AS ATTR_CATE_NM,
           ' '                   AS ATTR_CTNT1,
           @[asa_no]             AS ATTR_CTNT2,
		   TO_CHAR(sysdate,'yyyymmddhh24miss') AS ATTR_CTNT8,
           @[usr_nm]         AS ATTR_CTNT10,
		   @[s_rev_chg]          AS ATTR_CTNT14,
           'COMMISSION'          AS SRC_CTNT,
        	(SELECT PAY_MZD_CD
           	   FROM MDM_VENDOR
          	  WHERE VNDR_SEQ = @[vndr_no]) AS PAY_MZD_LU_CD,
           @[pay_grp_lu_cd]      AS PAY_GRP_LU_CD,
           '01'                  AS COA_CO_CD,
           @[finc_rgn_cd]        AS COA_RGN_CD,
           @[ap_ctr_cd]          AS COA_CTR_CD,
           '210111'              AS COA_ACCT_CD,
           '0000000000'          AS COA_VVD_CD,
           @[coa_intr_cmpy_cd]   AS COA_INTER_CO_CD,
           '000000'              AS COA_FTU_N1ST_CD,
           '000000'              AS COA_FTU_N2ND_CD,
           'Y'                   AS APRO_FLG,
           'N'                   AS TAX_DECL_FLG,
           'N'                   AS PPAY_APLY_FLG,
           @[ap_ofc_cd]          AS TJ_OFC_CD,
           @[usr_eml]        AS USR_EML,
           SYSDATE               AS CRE_DT,
           @[cre_usr_id]         AS CRE_USR_ID,
           SYSDATE               AS EAI_EVNT_DT
      FROM DUAL			]]></sql>
			<params>
				<param name="csr_no" type="12" value="" out="N"/>
				<param name="csr_amt" type="12" value="" out="N"/>
				<param name="inv_dt" type="12" value="" out="N"/>
				<param name="gl_dt" type="12" value="" out="N"/>
				<param name="vndr_no" type="12" value="" out="N"/>
				<param name="curr_cd" type="12" value="" out="N"/>
				<param name="vndr_term_nm" type="12" value="" out="N"/>
				<param name="inv_desc" type="12" value="" out="N"/>
				<param name="asa_no" type="12" value="" out="N"/>
				<param name="usr_nm" type="12" value="" out="N"/>
				<param name="s_rev_chg" type="12" value="" out="N"/>
				<param name="pay_grp_lu_cd" type="12" value="" out="N"/>
				<param name="finc_rgn_cd" type="12" value="" out="N"/>
				<param name="ap_ctr_cd" type="12" value="" out="N"/>
				<param name="coa_intr_cmpy_cd" type="12" value="" out="N"/>
				<param name="ap_ofc_cd" type="12" value="" out="N"/>
				<param name="usr_eml" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
