<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BLIssuanceDBDAOSearchInvoiceEdiCntrChgInfoRSQL">
			<desc><![CDATA[BLIssuanceDBDAOSearchInvoiceEdiCntrChgInfo]]></desc>
			<sql><![CDATA[
SELECT '{CNTR_CHARGE_INFO' || CHR(10) 
       || 'CHARGE_CD:'   || CHG_CD ||CHR(10) 
       || 'CHARGE_DESC:'    ||(SELECT CHG_NM FROM MDM_CHARGE WHERE CHG_CD = BC.CHG_CD) || CHR(10) 
       || 'CHARGE_TP_NM:' || (SELECT REP_CHG_NM FROM MDM_CHARGE MC, MDM_REP_CHG MR WHERE MC.CHG_CD = BC.CHG_CD AND MC.REP_CHG_CD = MR.REP_CHG_CD) || CHR(10) 
       || 'CHARGE_CURR:' || CURR_CD || CHR(10) 
	   || 'CHARGE_AMT:' || CHG_AMT || CHR(10) 
	   || 'CHARGE_AMT_USD:' || '100' || CHR(10) 
	   || 'INV_CURR:' || 'USD' || CHR(10) 
	   || 'INV_CURR_AMT:' || '100' || CHR(10) 
	   || 'INV_TAX:' || '0.00' || CHR(10) 
	   || 'INV_CURR_TTL_AMT:' ||'100'|| CHR(10) 
	   || 'LOCAL_CURR:' || 'USD'||CHR(10) 
	   || 'LOCAL_CURR_AMT:' ||'100'|| CHR(10) 
	   || 'LOCAL_TAX:' || '0.00'||CHR(10) 
	   || 'LOCAL_CURR_TTL_AMT:' ||'100'|| CHR(10) 
	   || 'FRT_IND:' || FRT_TERM_CD || CHR(10) 
	   || 'RATED_AS:' || RAT_AS_QTY ||CHR(10) 
	   || 'RATE:' || CHG_UT_AMT ||CHR(10) 
	   || 'INV_EX_RATE:' ||'0.99'|| CHR(10) 
	   || 'TAX_RATE:' ||'0.99'|| CHR(10) 
	   || 'PERTYPE:' || RAT_UT_CD ||CHR(10) 
	   || 'TARIFF:' || CASE WHEN RFA_NO NOT LIKE 'DUM%' THEN RFA_NO
	                        WHEN TAA_NO NOT LIKE 'DUM%' THEN TAA_NO
	                        WHEN SC_NO  NOT LIKE 'DUM%' THEN SC_NO
	                   ELSE ''
	                   END
	   || CHR(10) 
	   || '}CNTR_CHARGE_INFO' || CHR(10) AS BKG_CNTR
,      BC.CNTR_NO
FROM   BKG_CNTR_RT BC, BKG_BOOKING BK
 WHERE BC.BKG_NO = @[bkg_no]
   AND BC.CNTR_NO = @[cntr_no]
   AND BC.BKG_NO = BK.BKG_NO
 ORDER BY BC.CNTR_NO			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="cntr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
