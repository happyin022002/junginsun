<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CsScreenDBDAOsearchQtyForCntrByTpszRSQL">
			<desc><![CDATA[Inbound C/S Screen 화면의 TP/SZ, BKG Q'TY, CNTR QTY를 List로 조회한다.]]></desc>
			<sql><![CDATA[
SELECT DISTINCT A.CNTR_TPSZ_CD                          AS CNTR_TPSZ_CD
        ,ltrim(to_char(A.OP_CNTR_QTY, '99,999,90.99'))  AS BKG_QTY
        ,ltrim(to_char(B.ACT_CNTR_QTY, '99,999,90.99')) AS CNTR_QTY
  FROM BKG_QUANTITY   A, ( SELECT A.BKG_NO
                                , A.CNTR_TPSZ_CD                                      AS CNTR_TPSZ_CD
                                , ltrim(to_char(SUM(A.CNTR_VOL_QTY), '99,999,90.99')) AS ACT_CNTR_QTY
                            FROM BKG_CONTAINER A
                            WHERE A.BKG_NO  = A.BKG_NO
                            GROUP BY  A.BKG_NO,A.CNTR_TPSZ_CD
                         ) B
 WHERE A.BKG_NO       = @[bkg_no]
 AND A.BKG_NO       = B.BKG_NO
 ORDER BY A.CNTR_TPSZ_CD			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
