<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CustomerInfoManageDBDAOSearchCustomerVORSQL">
			<desc><![CDATA[SearchCustomerVO 생성 쿼리]]></desc>
			<sql><![CDATA[
SELECT A.CUST_CNT_CD,A.CUST_SEQ, -- CCD 넘길때 사용
       A.CUST_CNT_CD||LPAD(A.CUST_SEQ,6,'0') CUST_CD,A.CUST_LGL_ENG_NM,A.LOC_CD,A.OFC_CD,B.SREP_CD PRE_SREP_CD,B.SREP_CD,B.SREP_PRMRY_FLG,A.CUST_STS_CD,TO_CHAR(A.UPD_DT,'YYYY-MM-DD') LST_UPD_DT
   FROM MDM_CUSTOMER A,SAM_CUST_SLS_REP_INFO B
  WHERE B.SREP_CD = @[srep_cd]
  AND A.CUST_CNT_CD = B.CUST_CNT_CD
  AND A.CUST_SEQ = B.CUST_SEQ
  AND A.CNTR_DIV_FLG = 'Y'
and b.delt_flg = 'N'			]]></sql>
			<params>
				<param name="srep_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
