<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SCRateProposalDBDAORsltRtRoutOrgPntListVORSQL">
			<desc><![CDATA[Rate Origin Point조회]]></desc>
			<sql><![CDATA[
SELECT PROP_NO
      ,AMDT_SEQ
      ,SVC_SCP_CD
      ,GEN_SPCL_RT_TP_CD
      ,CMDT_HDR_SEQ
      ,ROUT_SEQ
      ,ORG_DEST_TP_CD
      ,ROUT_PNT_SEQ
      ,ROUT_PNT_LOC_TP_CD
      ,ROUT_PNT_LOC_DEF_CD
      ,DECODE(ROUT_PNT_LOC_TP_CD
             ,'G'
             ,(SELECT PRC_GRP_LOC_DESC
                FROM PRI_SP_SCP_GRP_LOC
               WHERE PROP_NO = A.PROP_NO
                 AND AMDT_SEQ = A.AMDT_SEQ
                 AND SVC_SCP_CD = A.SVC_SCP_CD
                 AND PRC_GRP_LOC_CD = A.ROUT_PNT_LOC_DEF_CD
                 AND ROWNUM = 1)
             ,'L'
             ,(SELECT LOC_NM
                FROM MDM_LOCATION
               WHERE LOC_CD = A.ROUT_PNT_LOC_DEF_CD
                 AND ROWNUM = 1)) AS ROUT_PNT_LOC_DEF_NM
      ,PRC_TRSP_MOD_CD
      ,RCV_DE_TERM_CD
      ,LOC_GRD_CNT_CD
      ,LOC_GRD_CD
      ,PRC_PROG_STS_CD
      ,(SELECT INTG_CD_VAL_DP_DESC
          FROM COM_INTG_CD_DTL
         WHERE INTG_CD_ID = 'CD01719'
           AND INTG_CD_VAL_CTNT = PRC_PROG_STS_CD
           AND ROWNUM = 1) AS PRC_PROG_STS_NM
      ,SRC_INFO_CD
      ,(SELECT INTG_CD_VAL_DP_DESC
          FROM COM_INTG_CD_DTL
         WHERE INTG_CD_ID = 'CD02064'
           AND INTG_CD_VAL_CTNT = SRC_INFO_CD
           AND ROWNUM = 1) AS SRC_INFO_NM
      ,N1ST_CMNC_AMDT_SEQ
      ,NEXT_N1ST_CMNC_AMDT_SEQ
      ,(SELECT TO_CHAR(EFF_DT, 'YYYYMMDD')
          FROM PRI_SP_SCP_MN
         WHERE PROP_NO = A.PROP_NO
           AND AMDT_SEQ = A.N1ST_CMNC_AMDT_SEQ
           AND SVC_SCP_CD = A.SVC_SCP_CD) AS EFF_DT
      ,(SELECT CASE
                 WHEN M.AMDT_SEQ = A.AMDT_SEQ THEN
                  TO_CHAR(M.EXP_DT, 'YYYYMMDD')
                 WHEN M.EFF_DT <= N.EXP_DT THEN
                  TO_CHAR(M.EFF_DT - 1, 'YYYYMMDD')
                 ELSE
                  TO_CHAR(N.EXP_DT, 'YYYYMMDD')
               END AS EXP_DT
          FROM PRI_SP_SCP_MN M, PRI_SP_SCP_MN N
         WHERE M.PROP_NO = A.PROP_NO
           AND N.PROP_NO = A.PROP_NO
           AND M.AMDT_SEQ = @[amdt_seq]
           AND N.AMDT_SEQ = M.AMDT_SEQ - DECODE(@[amdt_seq], A.AMDT_SEQ, 0, 0, 0, 1)
           AND M.SVC_SCP_CD = A.SVC_SCP_CD
           AND N.SVC_SCP_CD = A.SVC_SCP_CD) AS EXP_DT
      ,ACPT_USR_ID
      ,ACPT_OFC_CD
      ,(SELECT USR_NM FROM COM_USER WHERE USR_ID = A.ACPT_USR_ID AND ROWNUM = 1) || ' / ' || A.ACPT_OFC_CD AS ACPT_USR_NM
      ,TO_CHAR(A.ACPT_DT, 'YYYYMMDD') AS ACPT_DT
      ,CRE_USR_ID
      ,CRE_DT
      ,UPD_USR_ID
      ,UPD_DT
      ,FIRST_VALUE(DECODE(ROUT_PNT_LOC_TP_CD, 'G', 1, 'L', 2, 99)) OVER(PARTITION BY PROP_NO, SVC_SCP_CD, GEN_SPCL_RT_TP_CD, CMDT_HDR_SEQ, ROUT_SEQ, ORG_DEST_TP_CD, ROUT_PNT_SEQ ORDER BY AMDT_SEQ) AS N1ST_ORD_REF
      ,FIRST_VALUE(ROUT_PNT_LOC_DEF_CD) OVER(PARTITION BY PROP_NO, SVC_SCP_CD, GEN_SPCL_RT_TP_CD, CMDT_HDR_SEQ, ROUT_SEQ, ORG_DEST_TP_CD, ROUT_PNT_SEQ ORDER BY AMDT_SEQ) AS N2ND_ORD_REF
  FROM (SELECT PROP_NO
              ,AMDT_SEQ
              ,SVC_SCP_CD
              ,GEN_SPCL_RT_TP_CD
              ,CMDT_HDR_SEQ
              ,ROUT_SEQ
              ,ORG_DEST_TP_CD
              ,ROUT_PNT_SEQ
              ,ROUT_PNT_LOC_TP_CD
              ,ROUT_PNT_LOC_DEF_CD
              ,PRC_TRSP_MOD_CD
              ,RCV_DE_TERM_CD
              ,LOC_GRD_CNT_CD
              ,LOC_GRD_CD
              ,PRC_PROG_STS_CD
              ,SRC_INFO_CD
              ,N1ST_CMNC_AMDT_SEQ
              ,LEAD(N1ST_CMNC_AMDT_SEQ) OVER(PARTITION BY PROP_NO, SVC_SCP_CD, GEN_SPCL_RT_TP_CD, CMDT_HDR_SEQ, ROUT_SEQ, ORG_DEST_TP_CD, ROUT_PNT_SEQ ORDER BY AMDT_SEQ) AS NEXT_N1ST_CMNC_AMDT_SEQ
              ,ACPT_USR_ID
              ,ACPT_OFC_CD
              ,ACPT_DT
              ,CRE_USR_ID
              ,CRE_DT
              ,UPD_USR_ID
              ,UPD_DT
          FROM PRI_SP_SCP_RT_ROUT_PNT
         WHERE PROP_NO = @[prop_no]
           AND (  (AMDT_SEQ = @[amdt_seq] OR (AMDT_SEQ = @[amdt_seq] - 1 AND SRC_INFO_CD IN ('NW', 'PC', 'PM', 'GC', 'GM', 'AM')))
               OR (AMDT_SEQ = @[amdt_seq] AND SRC_INFO_CD IN ('NW', 'PC', 'PM', 'GC', 'GM', 'AM'))
                )
           AND SVC_SCP_CD = @[svc_scp_cd]
           AND GEN_SPCL_RT_TP_CD = @[gen_spcl_rt_tp_cd]
           AND CMDT_HDR_SEQ = @[cmdt_hdr_seq]
           AND ROUT_SEQ = @[rout_seq]
           AND ORG_DEST_TP_CD = 'O') A
 WHERE NEXT_N1ST_CMNC_AMDT_SEQ IS NULL
    OR N1ST_CMNC_AMDT_SEQ <> NEXT_N1ST_CMNC_AMDT_SEQ
 ORDER BY N1ST_ORD_REF, N2ND_ORD_REF, ROUT_PNT_SEQ, AMDT_SEQ			]]></sql>
			<params>
				<param name="amdt_seq" type="2" value="2" out="N"/>
				<param name="prop_no" type="12" value="TES090001" out="N"/>
				<param name="svc_scp_cd" type="12" value="ACE" out="N"/>
				<param name="gen_spcl_rt_tp_cd" type="12" value="G" out="N"/>
				<param name="cmdt_hdr_seq" type="2" value="1" out="N"/>
				<param name="rout_seq" type="2" value="1" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
