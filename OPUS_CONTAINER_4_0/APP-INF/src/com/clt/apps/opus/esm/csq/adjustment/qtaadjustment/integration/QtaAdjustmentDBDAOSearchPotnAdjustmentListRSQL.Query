<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="QtaAdjustmentDBDAOSearchPotnAdjustmentListRSQL">
			<desc><![CDATA[[Portion Adjustment by Head Office]을 [조회] 합니다
[Portion Adjustment by RHQ]을 [조회] 합니다]]></desc>
			<sql><![CDATA[
SELECT DISTINCT
       A2.BSE_TP_CD
      ,A2.BSE_YR
      ,A2.BSE_QTR_CD
      ,DECODE(A2.OFC_VW_CD,'C','Contract','Loading')    AS OFC_VW_CD
      ,DECODE(A3.OB_DIV_CD,'N','N.OB','O/B')            AS OB_DIV_CD
      ,A2.QTA_STEP_CD
      ,A2.QTA_RLSE_VER_NO
      ,A2.RHQ_CD
      ,A2.RGN_OFC_CD
      ,A2.TRD_CD
      ,A2.SUB_TRD_CD
      ,A2.RLANE_CD
      ,A2.CONV_DIR_CD
      ,A2.DIR_CD
      ,SUBSTR(A2.APLY_FM_YRWK,5,2) AS APLY_FM_YRWK
      ,SUBSTR(A2.APLY_TO_YRWK,5,2) AS APLY_TO_YRWK
      ,SUBSTR(A2.APLY_FM_YRWK,5,2) AS ORG_FM_YRWK
      ,SUBSTR(A2.APLY_TO_YRWK,5,2) AS ORG_TO_YRWK
      ,A2.GID_LOD_POTN_RTO
      ,A2.GID_REV_POTN_RTO
      ,A2.LOD_POTN_RTO
      ,A2.REV_POTN_RTO
      ,A2.FM_VVD_CD
      ,A2.TO_VVD_CD
      ,DENSE_RANK() OVER(PARTITION BY A2.BSE_TP_CD, A2.BSE_YR, A2.BSE_QTR_CD, A2.OFC_VW_CD, A2.QTA_STEP_CD, A2.TRD_CD, A2.RLANE_CD
                         ORDER BY A2.TRD_CD, A2.RLANE_CD, A2.CONV_DIR_CD
#if (${f_gubun} == 'RHQ')
                                     ,A2.RHQ_CD
#end
									, A2.APLY_FM_YRWK
                         ) GRP_NO
  FROM CSQ_QTA_LANE_OFC A1
      ,CSQ_CFM_QTA_POTN_MGMT A2
      ,CSQ_DAT_RLT A3
 WHERE 1=1
   AND A2.BSE_TP_CD    = A3.BSE_TP_CD
   AND A2.BSE_YR       = A3.BSE_YR
   AND A2.BSE_QTR_CD   = A3.BSE_QTR_CD
   AND A2.OFC_VW_CD    = A3.OFC_VW_CD
   AND A2.TRD_CD       = A3.TRD_CD
   AND A2.CONV_DIR_CD  = A3.CONV_DIR_CD
   AND A2.RHQ_CD       = A3.RHQ_CD

   AND A1.BSE_TP_CD    = A2.BSE_TP_CD
   AND A1.BSE_YR       = A2.BSE_YR
   AND A1.BSE_QTR_CD   = A2.BSE_QTR_CD
   AND A1.OFC_VW_CD    = A2.OFC_VW_CD
   AND A1.RHQ_CD       = A2.RHQ_CD
#if (${f_gubun} == 'RHQ')
   AND A1.RGN_OFC_CD   = A2.RGN_OFC_CD
#end
   AND A1.TRD_CD       = A2.TRD_CD
   AND A1.RLANE_CD     = A2.RLANE_CD
   AND A1.DIR_CD       = A2.DIR_CD
   AND A1.CSQ_ACT_FLG  = 'Y'
   AND A2.BSE_TP_CD    = @[f_bse_tp_cd]
   AND A2.BSE_YR       = @[f_bse_yr]
   AND A2.BSE_QTR_CD   = DECODE(@[f_bse_tp_cd], 'Y', '00', @[f_bse_qtr_cd])
   AND A2.OFC_VW_CD    = @[f_ofc_vw_cd]
#if (${f_gubun} == 'HO')
   AND A2.QTA_STEP_CD  = @[f_qta_step_cd]
   AND A3.TEAM_CD      = (SELECT CASE WHEN @[ofc_cd] IN (SELECT INTG_CD_VAL_CTNT FROM COM_INTG_CD_DTL WHERE INTG_CD_ID = 'CD03255')
                                                       THEN A3.TEAM_CD
                                                  ELSE @[ofc_cd]
                                                END TEAM_CD
                                          FROM DUAL)
#elseif (${f_gubun} == 'RHQ')
   AND A2.QTA_STEP_CD  <> '02'
   AND A3.RHQ_CD       = (SELECT CASE WHEN @[ofc_cd] IN (SELECT INTG_CD_VAL_CTNT FROM COM_INTG_CD_DTL WHERE INTG_CD_ID = 'CD03255')
                                                       THEN A3.RHQ_CD
                                                  ELSE @[ofc_cd]
                                                END RHQ_CD
                                          FROM DUAL)
#end
#if (${f_trd_cd} != '' && ${f_trd_cd} != 'All')
   AND A2.TRD_CD       = @[f_trd_cd]
#end
#if (${f_rlane_cd} != '' && ${f_rlane_cd} != 'All')
   AND A2.RLANE_CD     IN (${f_rlane_cd})
#end
#if (${f_click} != 'on' && ${f_conv_dir_cd} != '' && ${f_conv_dir_cd} != 'All')
   AND A2.CONV_DIR_CD  = @[f_conv_dir_cd]
#end
#if (${f_ob_div_cd} != '' && ${f_ob_div_cd} != 'All')
   AND A3.OB_DIV_CD   = @[f_ob_div_cd]
#end
#if (${f_rgn_ofc_cd} != '' && ${f_rgn_ofc_cd} != 'All')
   AND A2.RGN_OFC_CD   = @[f_rgn_ofc_cd]
#end
 ORDER BY A2.TRD_CD
         ,A2.SUB_TRD_CD
         ,A2.RLANE_CD
         ,A2.CONV_DIR_CD
         ,APLY_FM_YRWK
         ,APLY_TO_YRWK
         ,A2.RHQ_CD
         ,A2.RGN_OFC_CD			]]></sql>
			<params>
				<param name="f_bse_tp_cd" type="12" value="" out="N"/>
				<param name="f_bse_yr" type="12" value="" out="N"/>
				<param name="f_bse_qtr_cd" type="12" value="" out="N"/>
				<param name="f_ofc_vw_cd" type="12" value="" out="N"/>
				<param name="f_qta_step_cd" type="12" value="" out="N"/>
				<param name="ofc_cd" type="12" value="" out="N"/>
				<param name="f_trd_cd" type="12" value="" out="N"/>
				<param name="f_conv_dir_cd" type="12" value="" out="N"/>
				<param name="f_ob_div_cd" type="12" value="" out="N"/>
				<param name="f_rgn_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
