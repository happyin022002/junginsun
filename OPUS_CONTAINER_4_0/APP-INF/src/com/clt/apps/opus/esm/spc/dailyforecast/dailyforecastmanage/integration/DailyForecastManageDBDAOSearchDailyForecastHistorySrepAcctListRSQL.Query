<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DailyForecastManageDBDAOSearchDailyForecastHistorySrepAcctListRSQL">
			<desc><![CDATA[SearchDailyForecastHistorySrepAcctList
2016.05.12 SPC_GET_HC_RT_BSA_FNC : SKD_VOY_NO parm 추가
2016.06.07 #14443 Incident 처리 (SPC_GET_HC_RT_BSA_FNC : SKD_VOY_NO comma 추가)]]></desc>
			<sql><![CDATA[
SELECT A.SLS_OFC_CD  AS SLS_OFC_CD , 
         A.SREP_USR_ID AS SREP_USR_ID,
         NVL(D.USR_NM, '*'||A.SREP_USR_ID) AS SREP_NM,
         TO_CHAR(A.MODI_GDT, 'YYYY-MM-DD HH24:MI:SS') AS MODI_GDT,
         NVL(E.USR_NM, '*'||A.CFM_USR_ID) AS MODI_USR,
         DECODE(A.FCAST_CUST_TP_CD, '0', NULL, A.FCAST_CUST_TP_CD)        AS FCAST_CUST_TP_CD,
         DECODE(A.FCAST_CUST_TP_CD, '0', NULL, A.CUST_CNT_CD||A.CUST_SEQ) AS CUST_CD         ,
         DECODE(B.CUST_ABBR_NM, NULL, B.CUST_LGL_ENG_NM, B.CUST_ABBR_NM)  AS CUST_NM         ,
         --20160211.ADD
         A.CTRT_NO,								--20160325.MOD
         A.CTRT_CUST_CNT_CD||A.CTRT_CUST_SEQ    AS CTRT_CUST_CD,
        (SELECT DECODE(CUST_ABBR_NM, NULL, CUST_LGL_ENG_NM, CUST_ABBR_NM)  FROM MDM_CUSTOMER 
          WHERE 1=1
          AND CUST_CNT_CD = A.CTRT_CUST_CNT_CD
          AND CUST_SEQ    = A.CTRT_CUST_SEQ ) 	AS CTRT_CUST_NM,
         DECODE(A.FCAST_CUST_TP_CD, '0', '+', DECODE(A.POL_YD_CD, '0000000', '+', POL_YD_CD)) AS POL_CD,
         DECODE(A.FCAST_CUST_TP_CD, '0', '+', DECODE(A.POD_YD_CD, '0000000', '+', POD_YD_CD)) AS POD_CD,
         NVL(A.FCAST_TTL_QTY, 0) + NVL(A.FCAST_40FT_HC_QTY, 0) * SPC_GET_HC_RT_BSA_FNC(A.TRD_CD, A.RLANE_CD, A.DIR_CD, A.VSL_CD,A.SKD_VOY_NO, 'D5') + NVL(A.FCAST_45FT_HC_QTY, 0) * SPC_GET_HC_RT_BSA_FNC(A.TRD_CD, A.RLANE_CD, A.DIR_CD, A.VSL_CD, A.SKD_VOY_NO,'D7') + NVL(A.FCAST_53FT_QTY, 0) * 2  AS FCAST_TTL_TEU_QTY,
         A.FCAST_TTL_QTY        AS FCAST_TTL_QTY      ,
         A.FCAST_40FT_HC_QTY    AS FCAST_40FT_HC_QTY  ,
         A.FCAST_45FT_HC_QTY    AS FCAST_45FT_HC_QTY  ,
         A.FCAST_53FT_QTY       AS FCAST_53FT_QTY     ,
         A.FCAST_RF_QTY         AS FCAST_RF_QTY       ,
         A.FCAST_TTL_WGT        AS FCAST_TTL_WGT      ,
         A.USD_BKG_TTL_QTY      AS USD_BKG_TTL_QTY    ,
         A.USD_BKG_20FT_QTY     AS USD_BKG_20FT_QTY   ,
         A.USD_BKG_40FT_QTY     AS USD_BKG_40FT_QTY   ,
         A.USD_BKG_40FT_HC_QTY  AS USD_BKG_40FT_HC_QTY,
         A.USD_BKG_45FT_HC_QTY  AS USD_BKG_45FT_HC_QTY,
         A.USD_BKG_53FT_QTY     AS USD_BKG_53FT_QTY   ,
         A.USD_BKG_RF_QTY       AS USD_BKG_RF_QTY     ,
         A.USD_BKG_TTL_WGT      AS USD_BKG_TTL_WGT    ,
         DECODE(A.FCAST_CUST_TP_CD, '0', 1, DECODE(A.POD_YD_CD, '0000000', 2, 3)) AS LVL
        ,A.VSL_CD||A.SKD_VOY_NO||A.SKD_DIR_CD 	AS VVD_CD 		--20160215.ADD
    FROM SPC_DLY_FCAST_CUST_HIS A,
         MDM_CUSTOMER           B,
         MDM_SLS_REP            C,
         COM_USER               D,
         COM_USER               E,
         COA_MON_VVD            V          						--20160215.ADD
   WHERE 1=1
     AND A.IOC_TS_CD      = @[ioc]
     AND A.SLS_RGN_OFC_CD = @[salesOffice]
     AND A.SLS_OFC_CD  LIKE @[subOffice]||'%'
     AND A.CFM_FLG        = 'Y'

#if (${vvd} != '')
     AND A.VSL_CD         = @[vslcd]
     AND A.SKD_VOY_NO     = @[skdvoyno]
     AND A.SKD_DIR_CD     = @[skddircd]
#end

#if (${vvd} == '')
     AND A.TRD_CD     LIKE @[trade]    ||'%'
     AND A.SUB_TRD_CD LIKE @[subTrade] ||'%'
     AND A.RLANE_CD   LIKE @[lane]     ||'%'
     AND A.DIR_CD     LIKE @[bound]    ||'%'
#end


#if (${customer} != '')
     AND DECODE(a.fcast_cust_tp_cd, '0', '1', a.cust_cnt_cd) = DECODE(a.fcast_cust_tp_cd, '0', '1', @[custcntcd])
     AND DECODE(a.fcast_cust_tp_cd, '0', '1', a.cust_seq)    = DECODE(a.fcast_cust_tp_cd, '0', '1', @[custseq])
#end
     AND A.SREP_USR_ID LIKE @[salesRep]||'%'
     AND A.CUST_CNT_CD    = B.CUST_CNT_CD(+)
     AND A.CUST_SEQ       = B.CUST_SEQ   (+)
     AND A.SREP_USR_ID    = C.SREP_CD    (+)
     AND C.EMPE_CD        = D.USR_ID     (+)
     AND A.CFM_USR_ID     = E.USR_ID     (+)
#if (${customer} != '')
     AND EXISTS ( SELECT '1'
                    FROM SPC_DLY_FCAST_CUST_HIS B
                   WHERE A.RLANE_CD    = B.RLANE_CD
                     AND A.DIR_CD      = B.DIR_CD
                     AND A.VSL_CD      = B.VSL_CD
                     AND A.SKD_VOY_NO  = B.SKD_VOY_NO
                     AND A.SKD_DIR_CD  = B.SKD_DIR_CD
                     AND A.IOC_TS_CD   = B.IOC_TS_CD
                     AND A.SREP_USR_ID = B.SREP_USR_ID
                     AND B.cust_cnt_cd = @[custcntcd]
                     AND B.cust_seq    = @[custseq]
                     AND A.MODI_GDT    = B.MODI_GDT
                )
#end

--20160215.ADD
#if (${vvd} == '')
     AND SUBSTR(V.SLS_YRMON, 1, 4)||V.COST_WK  IN ( SELECT COST_YR||COST_WK
                                                         FROM (  SELECT P.COST_YR,
                                                                        P.COST_WK
                                                                   FROM COA_WK_PRD P
                                                                  WHERE P.COST_YR||P.COST_WK >= @[year]||@[week]
                                                               ORDER BY P.COST_YR||P.COST_WK ) Z
                                                        WHERE ROWNUM <= @[duration] )
#end

     AND A.RLANE_CD    = V.RLANE_CD
     AND A.TRD_CD      = V.TRD_CD
     AND A.SUB_TRD_CD  = V.SUB_TRD_CD
     AND A.VSL_CD      = V.VSL_CD
     AND A.SKD_VOY_NO  = V.SKD_VOY_NO
     AND A.SKD_DIR_CD  = V.DIR_CD

ORDER BY 
#if (${vvd} == '')
         A.VSL_CD||A.SKD_VOY_NO||A.SKD_DIR_CD , 	--20160215.ADD
#end
         SREP_USR_ID  ,
         MODI_GDT DESC,
         FCAST_CUST_TP_CD DESC,
         CUST_CD,
         CTRT_NO,			            --20160211.ADD, 20160325.MOD
         CTRT_CUST_CD,					--20160211.ADD
         POL_CD ,
         POD_CD			]]></sql>
			<params>
				<param name="ioc" type="12" value="" out="N"/>
				<param name="salesOffice" type="12" value="" out="N"/>
				<param name="subOffice" type="12" value="" out="N"/>
				<param name="vslcd" type="12" value="" out="N"/>
				<param name="skdvoyno" type="12" value="" out="N"/>
				<param name="skddircd" type="12" value="" out="N"/>
				<param name="trade" type="12" value="" out="N"/>
				<param name="subTrade" type="12" value="" out="N"/>
				<param name="lane" type="12" value="" out="N"/>
				<param name="bound" type="12" value="" out="N"/>
				<param name="custcntcd" type="12" value="" out="N"/>
				<param name="custseq" type="12" value="" out="N"/>
				<param name="salesRep" type="12" value="" out="N"/>
				<param name="year" type="12" value="" out="N"/>
				<param name="week" type="12" value="" out="N"/>
				<param name="duration" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
