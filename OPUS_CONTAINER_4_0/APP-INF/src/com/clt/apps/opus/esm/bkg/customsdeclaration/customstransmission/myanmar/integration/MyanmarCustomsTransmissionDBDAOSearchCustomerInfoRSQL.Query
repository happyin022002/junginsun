<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="MyanmarCustomsTransmissionDBDAOSearchCustomerInfoRSQL">
			<desc><![CDATA[2012.02.02 변종건 [CHM-201215473-01] Malaysis (MYTPP) Customs Manifest 전송 기능 추가 요청]]></desc>
			<sql><![CDATA[
SELECT    DECODE(C.BKG_CUST_TP_CD,'S','SH','C','CN','F','FW','N','N1','A','N2') CUSTOMER_TYPE
         ,C.CUST_CNT_CD||TO_CHAR(C.CUST_SEQ,'000000') CUSTOMER_CD
		 ,CASE WHEN C.ADDR_PRN_FLG = 'N' AND C.BKG_CUST_TP_CD = 'F' THEN ''
		  ELSE 	CASE WHEN C.BKG_CUST_TP_CD = 'S' THEN DECODE(@[spc_loc],'SGSIN','HJ SINGAPORE','MYPKG','HJ PORT KLANG',REPLACE(C.CUST_NM,CHR(10),' '))
		 		ELSE REPLACE(C.CUST_NM,CHR(10),' ')
	     		END
          END 									   								CUSTOMER_NM1
		 ,CASE WHEN C.ADDR_PRN_FLG = 'N' AND C.BKG_CUST_TP_CD = 'F' THEN ''
		  ELSE	CASE WHEN C.BKG_CUST_TP_CD = 'S' THEN DECODE(@[spc_loc],'SGSIN','','MYPKG','','')
		 		ELSE ''
		 		END
          END 																	CUSTOMER_NM2
		 ,CASE WHEN C.ADDR_PRN_FLG = 'Y' THEN 
			CASE WHEN C.BKG_CUST_TP_CD = 'S' THEN DECODE(@[spc_loc],'SGSIN','HANJIN SHIPPING(SINGAPORE)PTE LTD','MYPKG','HANJIN SHIPPING LINE MALAYSIA SDN BHD',CASE WHEN INSTR(C.CUST_ADDR, CHR(10), 1, 1) != 0 THEN SUBSTR(C.CUST_ADDR, 1, INSTR(C.CUST_ADDR, CHR(10), 1, 1)-1) ELSE SUBSTR(C.CUST_ADDR, 1) END)
		 	ELSE CASE WHEN INSTR(C.CUST_ADDR, CHR(10), 1, 1) != 0 THEN SUBSTR(C.CUST_ADDR, 1, INSTR(C.CUST_ADDR, CHR(10), 1, 1)-1) ELSE SUBSTR(C.CUST_ADDR, 1) END
		 	END
		  ELSE ''
          END 																	CUSTOMER_ADDR1
		 ,CASE WHEN C.ADDR_PRN_FLG = 'Y' THEN 
			CASE WHEN C.BKG_CUST_TP_CD = 'S' THEN DECODE(@[spc_loc],'SGSIN','460 ALEXANDRA ROAD,','MYPKG','C605, LEVEL 6 , WISMA CONSPLANT 1',CASE WHEN INSTR(C.CUST_ADDR, CHR(10), 1, 2) != 0 THEN SUBSTR(C.CUST_ADDR, INSTR(C.CUST_ADDR, CHR(10), 1, 1)+2, INSTR(C.CUST_ADDR, CHR(10), 1, 2)-2-INSTR(C.CUST_ADDR, CHR(10), 1, 1)) ELSE CASE WHEN INSTR(C.CUST_ADDR, CHR(10), 1, 1) != 0 THEN SUBSTR(C.CUST_ADDR, INSTR(C.CUST_ADDR, CHR(10), 1, 1)+2) ELSE null END END)
		 	ELSE CASE WHEN INSTR(C.CUST_ADDR, CHR(10), 1, 2) != 0 THEN SUBSTR(C.CUST_ADDR, INSTR(C.CUST_ADDR, CHR(10), 1, 1)+2, INSTR(C.CUST_ADDR, CHR(10), 1, 2)-2-INSTR(C.CUST_ADDR, CHR(10), 1, 1)) ELSE CASE WHEN INSTR(C.CUST_ADDR, CHR(10), 1, 1) != 0 THEN SUBSTR(C.CUST_ADDR, INSTR(C.CUST_ADDR, CHR(10), 1, 1)+2) ELSE null END END
		 	END
		  ELSE ''
          END 																	CUSTOMER_ADDR2
		 ,CASE WHEN C.ADDR_PRN_FLG = 'Y' THEN 
			CASE WHEN C.BKG_CUST_TP_CD = 'S' THEN DECODE(@[spc_loc],'SGSIN','#07-02/06, PSA BUILDING','MYPKG','NO : 2 JALAN SS16/4 , 47500',CASE WHEN INSTR(C.CUST_ADDR, CHR(10), 1, 3) != 0 THEN SUBSTR(C.CUST_ADDR, INSTR(C.CUST_ADDR, CHR(10), 1, 2)+2, INSTR(C.CUST_ADDR, CHR(10), 1, 3)-2-INSTR(C.CUST_ADDR, CHR(10), 1, 2)) ELSE CASE WHEN INSTR(C.CUST_ADDR, CHR(10), 1, 2) != 0 THEN SUBSTR(C.CUST_ADDR, INSTR(C.CUST_ADDR, CHR(10), 1, 2)+2) ELSE null END END)
		 	ELSE CASE WHEN INSTR(C.CUST_ADDR, CHR(10), 1, 3) != 0 THEN SUBSTR(C.CUST_ADDR, INSTR(C.CUST_ADDR, CHR(10), 1, 2)+2, INSTR(C.CUST_ADDR, CHR(10), 1, 3)-2-INSTR(C.CUST_ADDR, CHR(10), 1, 2)) ELSE CASE WHEN INSTR(C.CUST_ADDR, CHR(10), 1, 2) != 0 THEN SUBSTR(C.CUST_ADDR, INSTR(C.CUST_ADDR, CHR(10), 1, 2)+2) ELSE null END END
		 	END
		  ELSE ''
          END 																	CUSTOMER_ADDR3
         ,( SELECT U.USR_NM     FROM COM_USER U WHERE USR_ID = @[usr_id] ) CONTACT_NM 
         ,( SELECT U.XTN_PHN_NO FROM COM_USER U WHERE USR_ID = @[usr_id] ) CONTACT_TEL 
         ,( SELECT U.FAX_NO     FROM COM_USER U WHERE USR_ID = @[usr_id] ) CONTACT_FAX 
         ,( SELECT U.USR_EML    FROM COM_USER U WHERE USR_ID = @[usr_id] ) CONTACT_EMAIL 
FROM      BKG_CUSTOMER C
WHERE     1 = 1
AND       C.BKG_NO = @[bkg_no]
AND       C.BKG_CUST_TP_CD IN ('C','F','N','S')
AND 	  C.CUST_NM IS NOT NULL
--AND       C.CUST_CNT_CD IS NOT NULL
--AND       C.CUST_SEQ IS NOT NULL
ORDER BY  BKG_CUST_TP_CD DESC			]]></sql>
			<params>
				<param name="spc_loc" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
