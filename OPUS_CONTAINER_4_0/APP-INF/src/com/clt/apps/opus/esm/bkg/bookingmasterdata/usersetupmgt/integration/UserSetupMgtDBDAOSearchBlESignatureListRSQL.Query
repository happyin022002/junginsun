<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="UserSetupMgtDBDAOSearchBlESignatureListRSQL">
			<desc><![CDATA[SearchBlESignatureList]]></desc>
			<sql><![CDATA[
SELECT BL_ESIG_SEQ
	, ESIG_N1ST_NM
	, ESIG_LST_NM
    ,(SELECT MC.SCONTI_CD FROM MDM_COUNTRY MC WHERE MC.CNT_CD = BKG_BL_ESIG.CNT_CD) AS REGION_NM
	, CNT_CD
	, ACT_FLG
	, ESIG_FILE_NM
	, (SELECT FILE_PATH_URL FROM COM_UPLD_FILE WHERE FILE_SAV_ID = ESIG_FILE_SAV_ID) AS ESIG_FILE_PATH_RMK
	, ESIG_FILE_SAV_ID
	, INIT_FILE_NM
	, (SELECT FILE_PATH_URL FROM COM_UPLD_FILE WHERE FILE_SAV_ID = INIT_FILE_SAV_ID) AS INIT_FILE_PATH_RMK
	, INIT_FILE_SAV_ID
	, ESIG_DESC
	, CRE_USR_ID
	, TO_CHAR(CRE_DT, 'YYYY-MM-DD')  AS CRE_DT		--SJH.20141114.ADD
	, UPD_USR_ID
	, TO_CHAR(UPD_DT, 'YYYY-MM-DD')  AS UPD_DT		--SJH.20141114.ADD 
	, (SELECT FILE_PATH_URL || '/' || FILE_SAV_ID FROM COM_UPLD_FILE B WHERE B.FILE_SAV_ID = ESIG_FILE_SAV_ID) AS ESIG_SERVER_PATH
    , (SELECT FILE_PATH_URL || '/' || FILE_SAV_ID FROM COM_UPLD_FILE B WHERE B.FILE_SAV_ID = INIT_FILE_SAV_ID) AS INIT_SERVER_PATH
FROM BKG_BL_ESIG
WHERE 1=1
#if (${country_code} != '')
	AND CNT_CD = @[country_code]
#end
#if (${esignature_last_name} != '')
	AND UPPER(ESIG_LST_NM) LIKE '%' || UPPER(@[esignature_last_name]) || '%'		--SJH.20141114.MOD
#end
#if (${bl_esig_seq} != '')
	AND BL_ESIG_SEQ = @[bl_esig_seq]
#end			]]></sql>
			<params>
				<param name="country_code" type="12" value="" out="N"/>
				<param name="esignature_last_name" type="12" value="" out="N"/>
				<param name="bl_esig_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
