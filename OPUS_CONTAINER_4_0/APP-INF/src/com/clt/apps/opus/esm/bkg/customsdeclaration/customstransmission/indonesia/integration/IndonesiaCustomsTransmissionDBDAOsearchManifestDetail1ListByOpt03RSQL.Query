<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="IndonesiaCustomsTransmissionDBDAOsearchManifestDetail1ListByOpt03RSQL">
			<desc><![CDATA[searchManifestDetail1ListByOpt03]]></desc>
			<sql><![CDATA[
SELECT E.VSL_ENG_NM AS DTL_VSL_ENG_NM,
       E.CALL_SGN_NO AS DTL_CALL_SGN_NO,
       B.VSL_CD AS DTL_VSL_CD,
       B.SKD_VOY_NO AS DTL_SKD_VOY_NO,
       B.SKD_DIR_CD AS DTL_SKD_DIR_CD,
      DECODE(C.BKG_NO, NULL, 'MSG:' || B.BKG_NO, B.BKG_NO) AS BKG_NO,
       B.BL_NO,
       B.POR_CD,
       B.POL_CD,
       B.POD_CD,
       B.DEL_CD,
       TO_CHAR(C.OBL_ISS_DT, 'YYYYMMDD') AS OBL_ISS_DT,
#if (${bound_cd} == 'I')
       LTRIM(TO_CHAR(NVL(D.PCK_QTY,0), '99999999')) AS PCK_QTY,
#elseif (${bound_cd} == 'O')
       LTRIM(TO_CHAR(NVL(D.PCK_QTY,0), '00000000')) AS PCK_QTY,
#end
       
       DECODE(PKG.CSTMS_PCK_TP_CD, NULL, decode(D.PCK_TP_CD, null, 'PK', D.PCK_TP_CD), PKG.CSTMS_PCK_TP_CD) AS PCK_TP_CD,
       REPLACE(LTRIM(TO_CHAR(NVL(D.ACT_WGT,0), '00000000000000.0000')), '.', '') AS ACT_WGT,
       D.WGT_UT_CD,
       REPLACE(LTRIM(TO_CHAR(NVL(D.MEAS_QTY,0), '00000000000000.0000')), '.', '') AS MEAS_QTY,
       D.MEAS_UT_CD

  FROM BKG_VVD A,
       BKG_BOOKING B,
       BKG_BL_ISS C,
       BKG_BL_DOC D,
       MDM_VSL_CNTR E,
       (SELECT DECODE(@[bound_cd], 'O', @[pol_cd], @[pod_cd]) AS PORT_CD
          FROM DUAL) G,
       BKG_CSTMS_PCK_TP_CONV PKG

 WHERE 1 = 1
#if (${bound_cd} == 'I')
   AND @[mf_tp_cd] = '03I'
#elseif (${bound_cd} == 'O')
   AND @[mf_tp_cd] = '05E'
#end
   AND A.VSL_CD = SUBSTR(@[vvd], 1, 4)
   AND 1 = (CASE WHEN @[bound_cd] = 'O' AND A.POD_CD = NVL(@[pod_cd], A.POD_CD) THEN 1
                 WHEN @[bound_cd] = 'I' AND A.POL_CD = NVL(@[pol_cd], A.POL_CD) THEN 1
                 ELSE 0
            END)
   AND A.SKD_VOY_NO = SUBSTR(@[vvd], 5, 4)
   AND A.SKD_DIR_CD = SUBSTR(@[vvd], 9, 1)
   AND A.POL_CD <> G.PORT_CD
   AND A.POD_CD <> G.PORT_CD
   AND 1 = (SELECT -- Indonesia Port가 POL과 POD 사이에 있음, CLPT_SEQ로 비교
                   CASE WHEN MAX(DECODE(E.VPS_PORT_CD, A.POL_CD, E.CLPT_SEQ, NULL)) < MAX(DECODE(E.VPS_PORT_CD, G.PORT_CD, E.CLPT_SEQ, NULL)) AND
                             MAX(DECODE(E.VPS_PORT_CD, G.PORT_CD, E.CLPT_SEQ, NULL)) < MAX(DECODE(E.VPS_PORT_CD, A.POD_CD, E.CLPT_SEQ, NULL)) THEN 1
                        ELSE 0
                   END
                 FROM VSK_VSL_PORT_SKD E
                WHERE E.VSL_CD = A.VSL_CD
                  AND E.SKD_VOY_NO = A.SKD_VOY_NO
                  AND E.SKD_DIR_CD = A.SKD_DIR_CD
                  AND E.VPS_PORT_CD IN (A.POL_CD, A.POD_CD, G.PORT_CD))
   AND B.BKG_NO = A.BKG_NO
   AND B.BKG_STS_CD <> 'X'
   AND B.BKG_CGO_TP_CD IN ('F', 'R', 'B')
   AND C.BKG_NO(+) = B.BKG_NO
   AND D.BKG_NO = B.BKG_NO
   AND B.VSL_CD = E.VSL_CD
   AND EXISTS (SELECT '*'
                 FROM BKG_CONTAINER F
                WHERE F.BKG_NO = B.BKG_NO)
   AND D.PCK_TP_CD = PKG.PCK_TP_CD(+)
   AND PKG.CNT_CD(+) = 'ID'
#if (${bound_cd} == 'I' || ${bound_cd} == 'O')
 ORDER BY BL_NO
#end			]]></sql>
			<params>
				<param name="bound_cd" type="12" value="" out="N"/>
				<param name="pol_cd" type="12" value="" out="N"/>
				<param name="pod_cd" type="12" value="" out="N"/>
				<param name="mf_tp_cd" type="12" value="" out="N"/>
				<param name="vvd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
