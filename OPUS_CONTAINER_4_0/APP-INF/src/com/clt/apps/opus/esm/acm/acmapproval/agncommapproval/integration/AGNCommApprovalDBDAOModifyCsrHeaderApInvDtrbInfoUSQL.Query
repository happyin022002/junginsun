<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AGNCommApprovalDBDAOModifyCsrHeaderApInvDtrbInfoUSQL">
			<desc><![CDATA[AP_INV_DTRB에 데이터를 업데이트한다.]]></desc>
			<sql><![CDATA[
UPDATE AP_INV_DTRB A
       SET INV_AMT
         = INV_AMT
         +
         (     SELECT
                      ROUND (X.CSR_AMT - SUM (Y.INV_AMT) ,2)
                 FROM AP_INV_HDR X,
                      AP_INV_DTRB Y
                WHERE X.CSR_NO = A.CSR_NO
                  AND X.CSR_NO = Y.CSR_NO
             GROUP BY X.CSR_AMT
         )
     WHERE A.CSR_NO = @[csr_no]
       AND
         (
           LINE_SEQ,
           LINE_NO
         )
        IN
         (
               SELECT
                      LINE_SEQ,
                      LINE_NO
                 FROM AP_INV_DTRB
                WHERE CSR_NO = A.CSR_NO
                  AND ROWNUM = 1
         )			]]></sql>
			<params>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
