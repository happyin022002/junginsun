<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CustomerInfoManageDBDAOSearchCustActvityListRSQL">
			<desc><![CDATA[SearchCustActvityList]]></desc>
			<sql><![CDATA[
SELECT SLS_ACT_SEQ
     , SREP_CMT_DESC
--     , KMAN_LST_NM || KMAN_N1ST_NM AS KEYMAN_NM
     , SREP_CD
     , MST.SLS_ACT_TP_DESC AS SLS_ACT_TP_DESC
     , DTL.SLS_ACT_SUB_TP_DESC AS SLS_ACT_SUB_TP_DESC      
     , ACT_PLN_DT
     , SLS_ACT_ACT_DT
     , NVL2(SLS_ACT_ACT_DT, 'Close','Processing') AS SLS_STS
--	 , '' KEYMAN_NM
	 , '' USER_ID
FROM SAM_SLS_ACT 
--   , SAM_CUST_KMAN_INFO
   , SAM_SLS_ACT_TP_MST MST
   , SAM_SLS_ACT_TP_DTL DTL
WHERE 1=1
--AND SAM_SLS_ACT.CUST_CNT_CD = SAM_CUST_KMAN_INFO.CUST_CNT_CD
--AND SAM_SLS_ACT.CUST_SEQ = SAM_CUST_KMAN_INFO.CUST_SEQ
AND SAM_SLS_ACT.SLS_ACT_TP_CD = MST.SLS_ACT_TP_CD
AND SAM_SLS_ACT.SLS_ACT_SUB_TP_CD = DTL.SLS_ACT_SUB_TP_CD
AND SAM_SLS_ACT.CUST_CNT_CD = SUBSTR(@[cust_cd],1,2)
AND SAM_SLS_ACT.CUST_SEQ = TO_NUMBER(SUBSTR(@[cust_cd],3,6))
ORDER BY SLS_ACT_SEQ			]]></sql>
			<params>
				<param name="cust_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
