<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CLLCDLManifestDBDAOsearchLoadSumByPodRSQL">
			<desc><![CDATA[searchLoadSumByPod]]></desc>
			<sql><![CDATA[
SELECT POD_CD
, DECODE(SUM(LO_40H),0,'',SUM(LO_40H)) LO_40H
, DECODE(SUM(LO_40),0,'',SUM(LO_40)) LO_40
, DECODE(SUM(LO_20),0,'',SUM(LO_20)) LO_20
, DECODE(SUM(LO_45),0,'',SUM(LO_45)) LO_45

, DECODE(SUM(TS_40H),0,'',SUM(TS_40H)) TS_40H
, DECODE(SUM(TS_40),0,'',SUM(TS_40)) TS_40
, DECODE(SUM(TS_20),0,'',SUM(TS_20)) TS_20
, DECODE(SUM(TS_45),0,'',SUM(TS_45)) TS_45

, DECODE(SUM(MT_40H),0,'',SUM(MT_40H)) MT_40H
, DECODE(SUM(MT_40),0,'',SUM(MT_40)) MT_40
, DECODE(SUM(MT_20),0,'',SUM(MT_20)) MT_20
, DECODE(SUM(MT_45),0,'',SUM(MT_45)) MT_45

, DECODE(SUM(NVL(LO_40H,0)+NVL(TS_40H,0)+NVL(MT_40H,0)),0,'',SUM(NVL(LO_40H,0)+NVL(TS_40H,0)+NVL(MT_40H,0))) TO_40H
, DECODE(SUM(NVL(LO_40,0)+NVL(TS_40,0)+NVL(MT_40,0)),0,'',SUM(NVL(LO_40,0)+NVL(TS_40,0)+NVL(MT_40,0))) TO_40
, DECODE(SUM(NVL(LO_20,0)+NVL(TS_20,0)+NVL(MT_20,0)),0,'',SUM(NVL(LO_20,0)+NVL(TS_20,0)+NVL(MT_20,0))) TO_20
, DECODE(SUM(NVL(LO_45,0)+NVL(TS_45,0)+NVL(MT_45,0)),0,'',SUM(NVL(LO_45,0)+NVL(TS_45,0)+NVL(MT_45,0))) TO_45

, DECODE(SUM(WGT + WGT_MT)/1000,0,'',SUM(WGT + WGT_MT)/1000) WGT_MT
FROM (
    SELECT MAX(DECODE(BK.POD_CD,'XXXXX','XXXXX',NVL(LO.UN_LOC_CD,BV.POD_CD))) POD_CD
	, BK.BKG_NO BKG_NO
	, SUM(DECODE(BKG_CGO_TP_CD, 'P', 0, 'R', 0, DECODE(BV.POL_CD,BK.POL_CD, DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'2',BQ.OP_CNTR_QTY,0),0))) LO_20
	, SUM(DECODE(BKG_CGO_TP_CD, 'P', 0, 'R', 0, DECODE(BV.POL_CD,BK.POL_CD, DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'2', 0, '5', 0, '7', 0, '9', 0, '8', 0, BQ.OP_CNTR_QTY),0))) LO_40
	, SUM(DECODE(BKG_CGO_TP_CD, 'P', 0, 'R', 0, DECODE(BV.POL_CD,BK.POL_CD, DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'5',BQ.OP_CNTR_QTY, '8',BQ.OP_CNTR_QTY, '9',BQ.OP_CNTR_QTY,0),0))) LO_40H
	, SUM(DECODE(BKG_CGO_TP_CD, 'P', 0, 'R', 0, DECODE(BV.POL_CD,BK.POL_CD, DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'7',BQ.OP_CNTR_QTY,0),0))) LO_45
	
	, SUM(DECODE(BKG_CGO_TP_CD, 'P', 0, 'R', 0, DECODE(BV.POL_CD,BK.POL_CD, 0, DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'2',BQ.OP_CNTR_QTY,0)))) TS_20
	, SUM(DECODE(BKG_CGO_TP_CD, 'P', 0, 'R', 0, DECODE(BV.POL_CD,BK.POL_CD, 0, DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'2', 0, '5', 0, '7', 0, '8', 0, '9', 0, BQ.OP_CNTR_QTY)))) TS_40
	, SUM(DECODE(BKG_CGO_TP_CD, 'P', 0, 'R', 0, DECODE(BV.POL_CD,BK.POL_CD, 0, DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'5',BQ.OP_CNTR_QTY,'8',BQ.OP_CNTR_QTY,'9',BQ.OP_CNTR_QTY,0)))) TS_40H
	, SUM(DECODE(BKG_CGO_TP_CD, 'P', 0, 'R', 0, DECODE(BV.POL_CD,BK.POL_CD, 0, DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'7',BQ.OP_CNTR_QTY,0)))) TS_45
	
	, SUM(DECODE(BKG_CGO_TP_CD, 'P', DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'2',BQ.OP_CNTR_QTY,0), 'R', DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'2',BQ.OP_CNTR_QTY,0), 0)) MT_20
	, SUM(DECODE(BKG_CGO_TP_CD, 'P', DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'2', 0, '5', 0, '7', 0, '8', 0, '9', 0, BQ.OP_CNTR_QTY), 'R', DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'2', 0, '5', 0, '7', 0, '8', 0, '9', 0, BQ.OP_CNTR_QTY), 0)) MT_40
	, SUM(DECODE(BKG_CGO_TP_CD, 'P', DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'5',BQ.OP_CNTR_QTY,'8',BQ.OP_CNTR_QTY,'9',BQ.OP_CNTR_QTY,0), 'R', DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'5',BQ.OP_CNTR_QTY,'8',BQ.OP_CNTR_QTY,'9',BQ.OP_CNTR_QTY,0), 0)) MT_40H
	, SUM(DECODE(BKG_CGO_TP_CD, 'P', DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'7',BQ.OP_CNTR_QTY,0), 'R', DECODE(SUBSTR(BQ.CNTR_TPSZ_CD,2,1),'7',BQ.OP_CNTR_QTY,0), 0)) MT_45
	, SUM(TP.CNTR_TPSZ_TARE_WGT*BQ.OP_CNTR_QTY) WGT_MT
	, MAX(DECODE(NVL(DOC.WGT_UT_CD, 0), 'LBS', ROUND (NVL(DOC.ACT_WGT, 0)*0.4536, 3), NVL(DOC.ACT_WGT, 0))) WGT
	, MAX(DECODE(BK.POD_CD,'XXXXX',100,VPS.CLPT_SEQ)) CLPT_SEQ
    FROM BKG_BOOKING BK
	, BKG_BL_DOC DOC
	, BKG_VVD BV
	, BKG_QUANTITY BQ
	, VSK_VSL_PORT_SKD VPS
	, MDM_CNTR_TP_SZ TP
	, MDM_LOCATION LO
WHERE BK.BKG_NO = BV.BKG_NO
AND BK.BKG_NO = BQ.BKG_NO
AND BK.BKG_NO = DOC.BKG_NO
AND BQ.CNTR_TPSZ_CD = TP.CNTR_TPSZ_CD
AND BV.VSL_CD = VPS.VSL_CD
AND BV.SKD_VOY_NO = VPS.SKD_VOY_NO
AND BV.SKD_DIR_CD = VPS.SKD_DIR_CD
AND BV.POD_CD = VPS.VPS_PORT_CD
AND VPS.VPS_PORT_CD = LO.LOC_CD
AND BV.VSL_CD = SUBSTR(@[in_vvd_cd],1,4)
AND BV.SKD_VOY_NO = SUBSTR(@[in_vvd_cd],5,4)
AND BV.SKD_DIR_CD = SUBSTR(@[in_vvd_cd],9,1)
AND BV.POL_CD = @[in_pol_cd]
#if (${in_pol_yd_cd} != '')
AND BV.POL_YD_CD = @[in_pol_cd]||@[in_pol_yd_cd]
#end
AND BK.BKG_STS_CD IN ( 'F','W')
AND BK.BKG_OFC_CD LIKE @[in_bkg_ofc_cd]||'%'
AND BQ.CNTR_TPSZ_CD NOT IN ('Q2','Q4')
AND VPS.CLPT_IND_SEQ = '1'
AND NVL(BK.SPLIT_RSN_CD,' ') <> 'M'
GROUP BY BK.BKG_NO)
GROUP BY POD_CD, CLPT_SEQ
ORDER BY CLPT_SEQ			]]></sql>
			<params>
				<param name="in_vvd_cd" type="12" value="" out="N"/>
				<param name="in_pol_cd" type="12" value="" out="N"/>
				<param name="in_pol_yd_cd" type="12" value="" out="N"/>
				<param name="in_bkg_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
