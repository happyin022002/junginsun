<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="LaneSimulationDBDAOSearchSimDailyHireListRSQL">
			<desc><![CDATA[Daily Hire List 검색]]></desc>
			<sql><![CDATA[
SELECT FLAG 
          ,VSL_CD 
          ,VSL_OSHP_CD 
          ,VSL_CLSS_CAPA 
   #foreach (${header_value} IN ${header})
  	      ,NVL(SUM(DECODE(SGRP_COST_CD,'${header_value}', VSL_DLY_COST_AMT)),0) ${header_value}
   #end
          ,'0' 
          , VSL_DLY_UC_AMT 
          , LYP_COST_AMT 
          , LYP_FLG 
      FROM ( 
         SELECT DISTINCT 
                DECODE(NVL(A2.VSL_CD,'*'),'*','I','R') FLAG 
               ,A1.VSL_CD 
               ,A2.VSL_CD AS VSL_CD2 
               ,A1.VOP_CD 
               ,A3.VSL_OSHP_CD 
               ,A1.VSL_CLSS_CAPA 
               ,A2.SGRP_COST_CD 
               ,A2.VSL_DLY_COST_AMT 
               ,A1.SIM_DT 
               ,A1.SIM_NO 
               ,A2.VSL_DLY_UC_AMT 
               ,A2.LYP_COST_AMT 
               ,A2.LYP_FLG 
         FROM COA_SIM_VSL_SET_INFO A1 
             ,COA_SIM_DLY_HIR A2, 
              ( 
               SELECT VSL_CD, VSL_CLSS_CAPA, VSL_OSHP_CD 
                 FROM COA_VSL_RGST 
                WHERE VSL_TP_CD = 'C' 
                  AND NVL(DELT_FLG,'N') = 'N' 
                  AND VSL_OSHP_CD IN ('OWN','CHT') 
                  AND VOP_CD = COM_ConstantMgr_PKG.COM_getCompanyCode_FNC() 
               UNION ALL 
               SELECT VSL_CD, VSL_CLSS_CAPA, VSL_OSHP_CD 
                 FROM COA_SIM_VSL_RGST 
                WHERE VSL_OSHP_CD IN ('OWN','CHT') 
                  AND VOP_CD = COM_ConstantMgr_PKG.COM_getCompanyCode_FNC() 
               ) A3 
         WHERE A1.SIM_DT     = @[sim_dt] 
           AND A1.SIM_NO     = @[sim_no] 
           AND A1.SIM_DIV_CD = '1' 
           AND A1.VSL_CD     = A3.VSL_CD 
           AND A1.VSL_CD     = A2.VSL_CD(+) 
           AND A1.SIM_DT     = A2.SIM_DT(+) 
           AND A1.SIM_NO     = A2.SIM_NO(+) 
        ) 
   GROUP BY FLAG 
           ,VSL_CD 
           ,VSL_CD2 
           ,VSL_OSHP_CD 
           ,VSL_CLSS_CAPA 
           ,VSL_DLY_UC_AMT 
           ,LYP_COST_AMT 
           ,LYP_FLG 
   ORDER BY VSL_CD			]]></sql>
			<params>
				<param name="sim_dt" type="12" value="" out="Y"/>
				<param name="sim_no" type="12" value="" out="Y"/>
			</params>
		</query>
	</querys>
</sqls>
