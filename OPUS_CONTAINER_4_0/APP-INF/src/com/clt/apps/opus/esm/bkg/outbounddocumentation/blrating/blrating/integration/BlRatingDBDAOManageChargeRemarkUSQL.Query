<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BlRatingDBDAOManageChargeRemarkUSQL">
			<desc><![CDATA[ManageChargeRemark]]></desc>
			<sql><![CDATA[
#if (${ca_flg} == 'Y')
	#if (${sql_type} == 'count') 
	
		SELECT COUNT(BKG_NO) FROM BKG_RT_HIS  WHERE BKG_NO= @[bkg_no] AND CORR_NO='TMP0000001'
	
	#elseif (${sql_type} == 'insert') 
	
		INSERT INTO BKG_RT_HIS(BKG_NO, CORR_NO, DIFF_RMK, RT_INTER_RMK, CRE_USR_ID, CRE_DT, UPD_USR_ID, UPD_DT,BKG_RT_WHF_EXPT_CD)
		VALUES(@[bkg_no], 'TMP0000001', @[diff_rmk], @[inter_rmk], @[user_id], sysdate, @[user_id], sysdate, null)
	
	#elseif (${sql_type} == 'update') 
	
		UPDATE BKG_RT_HIS
		SET DIFF_RMK = @[diff_rmk], RT_INTER_RMK = @[inter_rmk]
		WHERE 
		BKG_NO = @[bkg_no]
		AND CORR_NO='TMP0000001'
	
	#end
#else
	#if (${sql_type} == 'count') 
	
		SELECT COUNT(BKG_NO) FROM BKG_RATE  WHERE BKG_NO= @[bkg_no]
	
	#elseif (${sql_type} == 'insert') 
	
		INSERT INTO BKG_RATE(BKG_NO, DIFF_RMK, RT_INTER_RMK, CRE_USR_ID, CRE_DT, UPD_USR_ID, UPD_DT,BKG_RT_WHF_EXPT_CD)
		VALUES(@[bkg_no], @[diff_rmk], @[inter_rmk], @[user_id], sysdate, @[user_id], sysdate, null)
	
	#elseif (${sql_type} == 'update') 
	
		UPDATE BKG_RATE
		SET DIFF_RMK = @[diff_rmk], RT_INTER_RMK = @[inter_rmk]
		WHERE 
		BKG_NO = @[bkg_no]
	
	#end

#end				]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="diff_rmk" type="12" value="" out="N"/>
				<param name="inter_rmk" type="12" value="" out="N"/>
				<param name="user_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
