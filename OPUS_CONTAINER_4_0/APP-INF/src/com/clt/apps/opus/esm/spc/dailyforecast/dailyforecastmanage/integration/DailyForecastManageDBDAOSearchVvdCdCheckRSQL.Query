<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DailyForecastManageDBDAOSearchVvdCdCheckRSQL">
			<desc><![CDATA[VVD 가 유효한지 체크한다.]]></desc>
			<sql><![CDATA[
SELECT DECODE(COUNT(*),0,'N',1,'Y','D') VVD_YN 
  FROM COA_MON_VVD  
 WHERE 1=1 
       AND IOC_CD = DECODE(@[ioc_ts_cd], 'O', 'O', 'I') 
       AND VSL_CD = @[vsl_cd] 
       AND SKD_VOY_NO = @[skd_voy_no] 
       AND DIR_CD = @[skd_dir_cd]  
       
       #if (${trd_cd} != '') 
       AND TRD_CD = @[trd_cd] 
       #end
	   #if (${sub_trd_cd} != '') 	
       AND SUB_TRD_CD = @[sub_trd_cd] 
       #end
       #if (${rlane_cd} != '') 	
       AND RLANE_CD = @[rlane_cd] 
       #end			]]></sql>
			<params>
				<param name="ioc_ts_cd" type="12" value="" out="N"/>
				<param name="vsl_cd" type="12" value="" out="N"/>
				<param name="skd_voy_no" type="12" value="" out="N"/>
				<param name="skd_dir_cd" type="12" value="" out="N"/>
				<param name="trd_cd" type="12" value="" out="N"/>
				<param name="sub_trd_cd" type="12" value="" out="N"/>
				<param name="rlane_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
