<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CODCorrectionDBDAOmodifyBkgCodTotalCostUSQL">
			<desc><![CDATA[bkg_cod에 cod_chg_ttl_cost_amt에 bkg_cod_cost의 chg_amt의 합을 update]]></desc>
			<sql><![CDATA[
UPDATE BKG_COD SET 
	COD_CHG_TTL_COST_AMT = (select sum(chg_amt) 
                              from bkg_cod_cost 
							  where bkg_no = @[bkg_no]
                              and  cod_rqst_seq = @[cod_rqst_seq])
 #if(${cod_cng_cost_rmk}!='') 
  ,	COD_CNG_COST_RMK = @[cod_cng_cost_rmk]
 #end
  ,	UPD_USR_ID = @[usr_id]
  ,	UPD_DT = sysdate
WHERE	BKG_NO = @[bkg_no]
AND	COD_RQST_SEQ = @[cod_rqst_seq]			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="cod_rqst_seq" type="2" value="" out="N"/>
				<param name="cod_cng_cost_rmk" type="12" value="" out="N"/>
				<param name="usr_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
