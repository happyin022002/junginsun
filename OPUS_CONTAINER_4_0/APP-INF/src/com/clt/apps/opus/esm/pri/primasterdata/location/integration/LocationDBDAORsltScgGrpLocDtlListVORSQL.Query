<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="LocationDBDAORsltScgGrpLocDtlListVORSQL">
			<desc><![CDATA[surcharge location code 조회]]></desc>
			<sql><![CDATA[
SELECT CASE A.DTL_LOC_TP_CD WHEN 'L' THEN L.LOC_CD
                            WHEN 'C' THEN c.cnt_cd
                            WHEN 'R' THEN r.rgn_cd
                            ELSE ''
       END LOC_CD
	 , CASE A.DTL_LOC_TP_CD WHEN 'L' THEN L.LOC_NM
                            WHEN 'C' THEN c.cnt_NM
                            WHEN 'R' THEN r.rgn_NM
                            ELSE ''
       END LOC_NM
     , CASE A.DTL_LOC_TP_CD WHEN 'L' THEN L.RGN_CD
                            WHEN 'R' THEN r.RGN_CD
                            ELSE ''
       END RGN_CD
     , CASE A.DTL_LOC_TP_CD WHEN 'L' THEN L.SCONTI_CD
                            WHEN 'C' THEN C.SCONTI_CD
                            ELSE ''
       END SCONTI_CD
       
  FROM PRI_SCG_GRP_LOC_DTL A
	 , MDM_LOCATION L
     , MDM_COUNTRY C
     , MDM_REGION R       
 WHERE A.DTL_LOC_DEF_CD = L.LOC_CD(+)
   AND A.DTL_LOC_DEF_CD = C.CNT_CD(+)
   AND A.DTL_LOC_DEF_CD = R.RGN_CD(+)
   
   AND A.SVC_SCP_CD 	= @[svc_scp_cd]
   AND A.GRP_LOC_SEQ 	= @[grp_loc_seq]
   AND A.CHG_CD 		= @[chg_cd]
 ORDER BY A.DTL_LOC_TP_CD ASC			]]></sql>
			<params>
				<param name="svc_scp_cd" type="12" value="" out="N"/>
				<param name="grp_loc_seq" type="12" value="" out="N"/>
				<param name="chg_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
