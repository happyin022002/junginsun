<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BSAManageDBDAOModifySpcJoTTLWeight1USQL">
			<desc><![CDATA[ModifySpcJoTTLWeight1]]></desc>
			<sql><![CDATA[
UPDATE BSA_JNT_OP_CRR_CAPA X
     SET UPD_USR_ID   = @[upd_usr_id],
         UPD_DT       = SYSDATE,
        (CRR_BSA_CAPA, SPC_CTRL_SLT_CAPA) = (
                                              SELECT NVL(SUM(DECODE(B.BSA_OP_JB_CD, '007', B.SPC_CTRL_SLT_CAPA)), 0) * NVL(SUM(DECODE(B.BSA_OP_JB_CD, '008', B.SPC_CTRL_SLT_CAPA)), 0)  CRR_BSA_CAPA,
                                                     NVL(SUM(DECODE(B.BSA_OP_JB_CD, '007', B.SPC_CTRL_SLT_CAPA)), 0) * NVL(SUM(DECODE(B.BSA_OP_JB_CD, '008', B.SPC_CTRL_SLT_CAPA)), 0)  SPC_CTRL_SLT_CAPA
                                              FROM BSA_JNT_OP_CRR_CAPA B
                                              WHERE B.BSA_SEQ   = X.BSA_SEQ
                                                AND B.TRD_CD    = X.TRD_CD
                                                AND B.RLANE_CD  = X.RLANE_CD
                                                AND B.DIR_CD    = X.DIR_CD
                                                AND B.VSL_CAPA  = X.VSL_CAPA
                                                AND B.VOP_CD    = X.VOP_CD
                                                AND B.BSA_OP_CD = X.BSA_OP_CD
                                                AND B.CRR_CD    = X.CRR_CD
                                                AND B.BSA_OP_JB_CD IN ('007', '008')
                                             )
 WHERE X.BSA_OP_JB_CD = '009'
   AND X.BSA_OP_CD = @[bsa_op_cd]
   AND X.TRD_CD    = @[trd_cd]
   AND X.RLANE_CD  = @[rlane_cd]
   AND X.DIR_CD    = @[dir_cd]
   AND X.VOP_CD    = @[vop_cd]
   AND X.VSL_CAPA  = @[vsl_capa]
   AND X.BSA_SEQ   = @[bsa_seq]			]]></sql>
			<params>
				<param name="upd_usr_id" type="12" value="" out="N"/>
				<param name="bsa_op_cd" type="12" value="" out="Y"/>
				<param name="trd_cd" type="12" value="" out="Y"/>
				<param name="rlane_cd" type="12" value="" out="Y"/>
				<param name="dir_cd" type="12" value="" out="Y"/>
				<param name="vop_cd" type="12" value="" out="Y"/>
				<param name="vsl_capa" type="12" value="" out="Y"/>
				<param name="bsa_seq" type="12" value="" out="Y"/>
			</params>
		</query>
	</querys>
</sqls>
