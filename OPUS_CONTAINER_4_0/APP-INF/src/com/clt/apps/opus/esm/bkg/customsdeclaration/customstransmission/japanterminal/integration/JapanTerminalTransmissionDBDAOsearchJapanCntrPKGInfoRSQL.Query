<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="JapanTerminalTransmissionDBDAOsearchJapanCntrPKGInfoRSQL">
			<desc><![CDATA[flat file japan container package 정보를 가져온다.]]></desc>
			<sql><![CDATA[
--PKG             
--PUNIT           
--WGT             
--WUNIT           
--MEAS            
--MUNIT           

SELECT SUM(PCK_QTY) AS PCK_QTY,
       MAX(DECODE(PKG.CSTMS_PCK_TP_CD, NULL, JC.PCK_TP_CD, PKG.CSTMS_PCK_TP_CD)) AS PCK_TP_CD,
       SUM(CNTR_WGT) AS CNTR_WGT,
       DECODE(NVL(MAX(WGT_UT_CD), 'KGS'), 'LBS', 'LBR', 'KGS', 'KGM', MAX(WGT_UT_CD)) AS WGT_UT_CD,
       SUM(MEAS_QTY) AS MEAS_QTY,
       DECODE(NVL(MAX(MEAS_UT_CD), 'CBM'), 'CMF', 'FTQ', 'MTQ') AS MEAS_UT_CD

  FROM BKG_TML_EDI_JP_CNTR JC,
       BKG_CSTMS_PCK_TP_CONV PKG

 WHERE JC.BKG_NO LIKE SUBSTR(@[bkg_no], 1, 12)||'%'
   AND JC.BKG_SKD_SEQ = 0
   AND JC.PCK_TP_CD = PKG.PCK_TP_CD(+)
   AND PKG.CNT_CD(+) = 'JP'			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
