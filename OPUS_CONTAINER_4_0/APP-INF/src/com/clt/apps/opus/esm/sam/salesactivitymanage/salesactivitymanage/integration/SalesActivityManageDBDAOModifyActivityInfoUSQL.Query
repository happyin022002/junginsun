<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SalesActivityManageDBDAOModifyActivityInfoUSQL">
			<desc><![CDATA[Update Sales Activity Info]]></desc>
			<sql><![CDATA[
UPDATE SAM_SLS_ACT
   SET SREP_CMT_DESC = @[srep_cmt_desc]
      ,UPD_DT        = SYSDATE
      ,SLS_MGR_CMT_DESC = @[sls_mgr_cmt_desc]
      ,ACT_PLN_DT = @[plan_dt]
      ,SLS_ACT_ACT_DT = @[actual_dt]
      ,UPD_USR_ID = @[cre_usr_id]
      ,SLS_ACT_TP_CD = @[purpose1]
      ,SLS_ACT_SUB_TP_CD = @[purpose2]
      ,ACT_CHNL_CD = @[channel]
 WHERE 1=1
   AND CUST_CNT_CD = SUBSTR(@[cus_code],1,2)
   AND CUST_SEQ = SUBSTR(@[cus_code],3,6)
   AND SLS_ACT_SEQ = @[activity_no]			]]></sql>
			<params>
				<param name="srep_cmt_desc" type="12" value="" out="N"/>
				<param name="sls_mgr_cmt_desc" type="12" value="" out="N"/>
				<param name="plan_dt" type="12" value="" out="N"/>
				<param name="actual_dt" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="purpose1" type="12" value="" out="N"/>
				<param name="purpose2" type="12" value="" out="N"/>
				<param name="channel" type="12" value="" out="N"/>
				<param name="cus_code" type="12" value="" out="N"/>
				<param name="activity_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
