<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SCBasicStandardNoteGuidelineDAOPriSgStndNoteCtntVORSQL">
			<desc><![CDATA[   ]]></desc>
			<sql><![CDATA[
SELECT
    A.SVC_SCP_CD,
    A.NOTE_HDR_SEQ,
    A.NOTE_SEQ,
    A.NOTE_CTNT_SEQ,
    A.NOTE_CTNT,
    A.NOTE_CONV_MAPG_ID,
    A.DP_SEQ,
    A.NOTE_CONV_MAPG_ID,
    --A.CRE_USR_ID,
	(SELECT USR_NM||' / '||OFC_CD FROM COM_USER WHERE USR_ID = A.CRE_USR_ID) CRE_USR_ID,
    TO_CHAR(A.CRE_DT, 'YYYYMMDD') CRE_DT,
    A.UPD_USR_ID,
    A.UPD_DT,
	(SELECT DECODE(COUNT(NOTE_CONV_MAPG_ID),0,0,1) 
	   FROM PRI_SC_NOTE_CONV
	  WHERE NOTE_CONV_MAPG_ID = A.NOTE_CONV_MAPG_ID ) NOTE_CONV_FLG
FROM PRI_SG_STND_NOTE_CTNT A
WHERE	A.SVC_SCP_CD = @[svc_scp_cd]
AND	    A.NOTE_HDR_SEQ = @[note_hdr_seq]
AND	    A.NOTE_SEQ = @[note_seq]
ORDER BY A.DP_SEQ			]]></sql>
			<params>
				<param name="svc_scp_cd" type="12" value="" out="N"/>
				<param name="note_hdr_seq" type="2" value="" out="N"/>
				<param name="note_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
