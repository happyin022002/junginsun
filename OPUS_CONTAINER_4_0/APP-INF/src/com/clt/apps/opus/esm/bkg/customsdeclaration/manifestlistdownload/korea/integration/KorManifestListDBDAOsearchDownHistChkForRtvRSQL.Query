<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="KorManifestListDBDAOsearchDownHistChkForRtvRSQL">
			<desc><![CDATA[최초 다운인지 여부를 판단하여 기존에 다운된 데이터가 있을 경우엔 BKG 테이블상의 Cancel된 데이터를 포함하는 list를 조회하도록 한다.]]></desc>
			<sql><![CDATA[
SELECT COUNT(*) CNT
  FROM BKG_CSTMS_KR_BL
 WHERE VSL_CD = SUBSTR(@[vvd],1,4)
   AND SKD_VOY_NO = SUBSTR(@[vvd],5,4)
   AND SKD_DIR_CD = SUBSTR(@[vvd],9,1)
   AND DECODE(@[in_bound], 'I', TS_POD_CD, TS_POL_CD)  = DECODE(@[in_bound], 'I', @[pod_loc], @[pol_loc])
#if(${in_bound}!='O')
   AND CSTMS_DECL_TP_CD IN ('I', 'T')
#else
   AND CSTMS_DECL_TP_CD IN ('E', 'R')
#end   
   AND DMST_PORT_CD = @[kt_port]			]]></sql>
			<params>
				<param name="vvd" type="12" value="" out="N"/>
				<param name="in_bound" type="12" value="" out="N"/>
				<param name="pod_loc" type="12" value="" out="N"/>
				<param name="pol_loc" type="12" value="" out="N"/>
				<param name="kt_port" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
