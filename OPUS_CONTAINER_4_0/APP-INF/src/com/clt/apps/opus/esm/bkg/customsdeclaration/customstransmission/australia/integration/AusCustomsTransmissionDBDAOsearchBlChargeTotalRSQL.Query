<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AusCustomsTransmissionDBDAOsearchBlChargeTotalRSQL">
			<desc><![CDATA[호주세관 및 항만청으로 전송할 Manifest B/L Charge Total 정보를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT	 
		SUM(DECODE(FRT_TERM_CD,'P',CHG_AMT,0)) ppd_total,
		SUM(DECODE(FRT_TERM_CD,'C',CHG_AMT,0)) cct_total,
		NVL(CURR_CD, '') total_cur
		 
FROM   BKG_CHG_RT
WHERE	BKG_NO = @[bkg_no]
AND	FRT_INCL_XCLD_DIV_CD = 'N'
GROUP BY FRT_TERM_CD, NVL(CURR_CD,'')			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
