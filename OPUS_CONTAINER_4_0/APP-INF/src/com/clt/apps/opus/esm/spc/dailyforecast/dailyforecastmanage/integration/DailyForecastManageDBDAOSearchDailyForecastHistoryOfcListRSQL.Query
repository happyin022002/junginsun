<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DailyForecastManageDBDAOSearchDailyForecastHistoryOfcListRSQL">
			<desc><![CDATA[SearchDailyForecastHistoryOfcList
2016.05.12 SPC_GET_HC_RT_BSA_FNC : SKD_VOY_NO parm 추가 
]]></desc>
			<sql><![CDATA[
SELECT A.TRD_CD     AS TRD_CD    ,
         A.SUB_TRD_CD AS SUB_TRD_CD,
         A.RLANE_CD   AS RLANE_CD  ,
         A.SKD_DIR_CD AS SKD_DIR_CD,
         DECODE(A.IOC_TS_CD, 'O', 'OCN', 'I', 'IPC', 'TS') AS IOC_CD    ,
         DECODE(A.SLS_OFC_CD, '', '+', A.SLS_OFC_CD)       AS SLS_OFC_CD,
         SUBSTR(V.SLS_YRMON, 1, 4)||V.COST_WK              AS BSE_WK    ,
         V.VSL_CD||V.SKD_VOY_NO||V.DIR_CD                  AS VVD       ,
         A.BSE_DT                                          AS BSE_DT    ,
         DECODE(A.POL_YD_CD, '', '+', A.POL_YD_CD)         AS POL_CD    ,
         DECODE(A.POD_YD_CD, '', '+', A.POD_YD_CD)         AS POD_CD    ,
         SUM(NVL(A.FCAST_LOD_QTY, 0) + NVL(A.FCAST_40FT_HC_QTY, 0) * SPC_GET_HC_RT_BSA_FNC(A.TRD_CD, A.RLANE_CD, A.DIR_CD, A.VSL_CD, A.SKD_VOY_NO,'D5') + NVL(A.FCAST_45FT_HC_QTY, 0) * SPC_GET_HC_RT_BSA_FNC(A.TRD_CD, A.RLANE_CD, A.DIR_CD, A.VSL_CD,A.SKD_VOY_NO, 'D7') + NVL(A.FCAST_53FT_QTY, 0) * 2) AS FCAST_TTL_TEU_QTY,
         SUM(A.FCAST_LOD_QTY)     AS FCAST_LOD_QTY    ,
         SUM(A.FCAST_40FT_HC_QTY) AS FCAST_40FT_HC_QTY,
         SUM(A.FCAST_45FT_HC_QTY) AS FCAST_45FT_HC_QTY,
         SUM(A.FCAST_53FT_QTY)    AS FCAST_53FT_QTY   ,
         SUM(A.FCAST_RF_QTY)      AS FCAST_RF_QTY     ,
         SUM(A.FCAST_TTL_WGT)     AS FCAST_TTL_WGT    ,
         SUM(A.ALOC_LOD_QTY)      AS ALOC_LOD_QTY     ,
         SUM(A.ALOC_40FT_HC_QTY)  AS ALOC_40FT_HC_QTY ,
         SUM(A.ALOC_45FT_HC_QTY)  AS ALOC_45FT_HC_QTY ,
         SUM(A.ALOC_53FT_QTY)     AS ALOC_53FT_QTY    ,
         SUM(A.ALOC_RF_QTY)       AS ALOC_RF_QTY      ,
         SUM(A.ALOC_TTL_WGT)      AS ALOC_TTL_WGT     ,
         DECODE(A.POL_YD_CD, '', 1, DECODE(A.POD_YD_CD, '', 2, 3)) AS LVL
    FROM SPC_DLY_FCAST_HIS A,
         COA_MON_VVD       V
   WHERE 1=1
#if (${vvd} != '')
     AND V.VSL_CD     LIKE @[vslcd]    ||'%'
     AND V.SKD_VOY_NO LIKE @[skdvoyno] ||'%'
     AND V.DIR_CD     LIKE @[skddircd] ||'%'
#end
     AND A.IOC_TS_CD  LIKE @[ioc]      ||'%'
#if (${vvd} == '')
     AND A.TRD_CD     LIKE @[trade]    ||'%'
     AND A.SUB_TRD_CD LIKE @[subTrade] ||'%'
     AND A.RLANE_CD   LIKE @[lane]     ||'%'
     AND A.DIR_CD     LIKE @[bound]    ||'%'
#end
#if (${salesOffice} != '' && ${subOffice} == '')
     AND A.SLS_OFC_CD = @[salesOffice]
     AND A.OFC_KND_CD = @[ofckndcd]
#end
#if ((${subOffice} != '' && ${salesOffice} == '') || (${subOffice} != '' && ${salesOffice} != ''))
     AND A.SLS_OFC_CD = @[subOffice]
     AND A.OFC_KND_CD = @[ofckndcd]
#end
#if (${vvd} == '')
     AND SUBSTR(V.SLS_YRMON, 1, 4)||V.COST_WK  IN ( SELECT COST_YR||COST_WK
                                                         FROM (  SELECT P.COST_YR,
                                                                        P.COST_WK
                                                                   FROM COA_WK_PRD P
                                                                  WHERE P.COST_YR||P.COST_WK >= @[year]||@[week]
                                                               ORDER BY P.COST_YR||P.COST_WK ) Z
                                                        WHERE ROWNUM <= @[duration] )
#end

     AND A.FCAST_TP_CD = 'D'  
     AND A.RLANE_CD    = V.RLANE_CD
     AND A.TRD_CD      = V.TRD_CD
     AND A.SUB_TRD_CD  = V.SUB_TRD_CD
     AND A.VSL_CD      = V.VSL_CD
     AND A.SKD_VOY_NO  = V.SKD_VOY_NO
     AND A.SKD_DIR_CD  = V.DIR_CD
GROUP BY GROUPING SETS (
                         (A.TRD_CD, A.SUB_TRD_CD,A.RLANE_CD, A.SKD_DIR_CD, V.SLS_YRMON,V.COST_WK, V.VSL_CD||V.SKD_VOY_NO||V.DIR_CD, A.IOC_TS_CD, A.BSE_DT, A.SLS_OFC_CD, POL_YD_CD, POD_YD_CD),
                         (A.TRD_CD, A.SUB_TRD_CD,A.RLANE_CD, A.SKD_DIR_CD, V.SLS_YRMON,V.COST_WK, V.VSL_CD||V.SKD_VOY_NO||V.DIR_CD, A.IOC_TS_CD, A.BSE_DT, A.SLS_OFC_CD, POL_YD_CD),
                         (A.TRD_CD, A.SUB_TRD_CD,A.RLANE_CD, A.SKD_DIR_CD, V.SLS_YRMON,V.COST_WK, V.VSL_CD||V.SKD_VOY_NO||V.DIR_CD, A.IOC_TS_CD, A.BSE_DT, A.SLS_OFC_CD)
                       )
ORDER BY A.TRD_CD    ,
         A.SUB_TRD_CD,
         A.RLANE_CD  ,
         A.SKD_DIR_CD,
         SUBSTR(V.SLS_YRMON,1,4)||V.COST_WK DESC,
         VVD           ,
         A.IOC_TS_CD   ,
         A.SLS_OFC_CD  ,
         BSE_DT    DESC,
         POL_YD_CD DESC,
         LVL           ,
         POD_YD_CD			]]></sql>
			<params>
				<param name="vslcd" type="12" value="" out="N"/>
				<param name="skdvoyno" type="12" value="" out="N"/>
				<param name="skddircd" type="12" value="" out="N"/>
				<param name="ioc" type="12" value="" out="N"/>
				<param name="trade" type="12" value="" out="N"/>
				<param name="subTrade" type="12" value="" out="N"/>
				<param name="lane" type="12" value="" out="N"/>
				<param name="bound" type="12" value="" out="N"/>
				<param name="salesOffice" type="12" value="" out="N"/>
				<param name="ofckndcd" type="12" value="" out="N"/>
				<param name="subOffice" type="12" value="" out="N"/>
				<param name="year" type="12" value="" out="N"/>
				<param name="week" type="12" value="" out="N"/>
				<param name="duration" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
