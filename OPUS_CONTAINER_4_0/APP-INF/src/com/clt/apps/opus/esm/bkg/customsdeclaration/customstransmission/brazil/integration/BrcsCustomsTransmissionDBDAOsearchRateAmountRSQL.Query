<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BrcsCustomsTransmissionDBDAOsearchRateAmountRSQL">
			<desc><![CDATA[Rate 정보를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT  
	NVL(CHG_CD, '') FCTYPE 
	,CHG_UT_AMT RATE 
	,RAT_AS_QTY REVENUETON 
	,DECODE(FRT_TERM_CD,'P', NVL(CHG_AMT,0),0.0) PPD 
	,DECODE(FRT_TERM_CD,'C', NVL(CHG_AMT,0),0.0) CCT 
	,CURR_CD CURRENCYCODE 
	,'' EXCHRATE 
	,TRF_ITM_NO TARIFF 
	,RAT_UT_CD PERTYPE 
	,N3PTY_RCV_OFC_CD RATEOFC 
FROM  BKG_CHG_RT 
WHERE BKG_NO          =   @[bkg_no]
AND  FRT_INCL_XCLD_DIV_CD    =   'N' 
		
#if (${hide_check} == '1') 
	AND  PRN_HDN_FLG = 'N' 
#end			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
