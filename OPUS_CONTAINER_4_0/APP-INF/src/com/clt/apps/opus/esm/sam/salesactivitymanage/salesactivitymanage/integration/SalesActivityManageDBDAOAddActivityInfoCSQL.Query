<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SalesActivityManageDBDAOAddActivityInfoCSQL">
			<desc><![CDATA[Sales Activity 정보 입력]]></desc>
			<sql><![CDATA[
INSERT INTO SAM_SLS_ACT (
            SLS_ACT_SEQ
          , SREP_CD
          , CUST_CNT_CD
          , CUST_SEQ
          , SLS_MGR_CMT_DESC
          , SREP_CMT_DESC
          , CALL_RPT_FLG
          , ACT_PLN_DT
          , SLS_ACT_ACT_DT
          , CRE_USR_ID
          , CRE_DT
          , ACT_CHNL_CD
          , UPD_DT		
          , UPD_USR_ID
          , SLS_ACT_TP_CD
          , SLS_ACT_SUB_TP_CD
        ) 
VALUES (  (SELECT @[sls_code] || NVL(TRIM(TO_CHAR(MAX(SUBSTR(SLS_ACT_SEQ, 6, 8))+1,'000')), '001')
          FROM SAM_SLS_ACT
          WHERE CUST_CNT_CD = SUBSTR(@[cus_code],1,2)
		  AND CUST_SEQ = SUBSTR(@[cus_code],3,6)
          AND SREP_CD = @[sls_code] )
       , @[sls_code]
       , SUBSTR(@[cus_code],1,2)
       , SUBSTR(@[cus_code],3,6)
       , @[sls_mgr_cmt_desc]
       , @[srep_cmt_desc]
	   , 'N'
       , @[plan_dt]
       , @[actual_dt]
       , @[cre_usr_id]
       , SYSDATE
       , @[channel]
       , SYSDATE       
       , @[cre_usr_id]
       , @[purpose1]
       , @[purpose2]
)			]]></sql>
			<params>
				<param name="sls_code" type="12" value="" out="N"/>
				<param name="cus_code" type="12" value="" out="N"/>
				<param name="sls_mgr_cmt_desc" type="12" value="" out="N"/>
				<param name="srep_cmt_desc" type="12" value="" out="N"/>
				<param name="plan_dt" type="12" value="" out="N"/>
				<param name="actual_dt" type="12" value="" out="N"/>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="channel" type="12" value="" out="N"/>
				<param name="purpose1" type="12" value="" out="N"/>
				<param name="purpose2" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
