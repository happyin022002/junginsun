<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralBookingReceiptDBDAOModifyBookingStatusUSQL">
			<desc><![CDATA[GeneralBookingReceiptDBDAOModifyBookingStatus]]></desc>
			<sql><![CDATA[
#if (${ca_flg}== 'Y')
UPDATE BKG_BKG_HIS SET
#else
UPDATE BKG_BOOKING SET 
#end
	WT_RSN_SPCL_CGO_FLG = @[wt_rsn_spcl_cgo_flg]
,	WT_RSN_HLD_FLG      = @[wt_rsn_hld_flg]
,	BKG_STS_CD = @[bkg_sts_cd]
,   BKG_CXL_DT = DECODE(@[bkg_sts_cd], 'X'
				, GLOBALDATE_PKG.TIME_CONV_FNC(COM_ConstantMgr_PKG.COM_getBaseLocationCode_FNC(),sysdate,BKG_COM_USER_LOC_FNC(@[upd_usr_id]))
				, NULL)
,   BKG_CXL_GDT = DECODE(@[bkg_sts_cd], 'X'
				, GLOBALDATE_PKG.TIME_CONV_FNC(COM_ConstantMgr_PKG.COM_getBaseLocationCode_FNC(), sysdate, 'GMT')
				, NULL)
,	UPD_USR_ID = @[upd_usr_id]
,	UPD_DT     = SYSDATE
#if (${bkg_sts_cd} == 'F')
,	BKG_WT_CHK_FLG = 'N'
#end
#if (${message} != '')
,	XTER_RMK = SUBSTR('CANCEL REASON : ' || UPPER(@[message]) || '\n' || TO_CLOB(XTER_RMK), 1, 4000) 
#end
WHERE	BKG_NO = @[bkg_no]
#if (${ca_flg}== 'Y')
AND   CORR_NO = 'TMP0000001'
#end
and ((BKG_CGO_TP_CD <> 'P' AND BKG_STS_CD <> 'X')
	OR
	 (BKG_CGO_TP_CD = 'P'))			]]></sql>
			<params>
				<param name="wt_rsn_spcl_cgo_flg" type="12" value="N" out="N"/>
				<param name="wt_rsn_hld_flg" type="12" value="N" out="N"/>
				<param name="bkg_sts_cd" type="12" value="F" out="N"/>
				<param name="upd_usr_id" type="12" value="2006505" out="N"/>
				<param name="message" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="KHIZ1120001" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
