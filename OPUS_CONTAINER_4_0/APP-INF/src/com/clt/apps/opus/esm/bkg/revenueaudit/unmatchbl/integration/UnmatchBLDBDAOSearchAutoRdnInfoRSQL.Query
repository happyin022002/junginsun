<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="UnmatchBLDBDAOSearchAutoRdnInfoRSQL">
			<desc><![CDATA[checkTaaSurchargeDiscrepancyDetail]]></desc>
			<sql><![CDATA[
SELECT B.BL_NO
      ,B.BKG_NO
      ,(SELECT OFC_CD FROM MDM_OFC_GRP_MAPG
		WHERE OFC_GRP_ID ='000002'
		  AND SUB_SYS_CD ='BKG') AS ISS_OFC_CD
      ,O.AR_HD_QTR_OFC_CD AS RCT_RHQ_CD
      ,B.BKG_OFC_CD AS RCT_OFC_CD
      ,O.AR_HD_QTR_OFC_CD AS RESPB_RHQ_CD
      ,B.BKG_OFC_CD AS RESPB_OFC_CD
      ,'D' AS UMCH_TP_CD
      ,'' AS UMCH_SUB_TP_CD
      ,'3' AS RDN_ISS_RSN_CD
      ,DECODE(R.BKG_CTRT_TP_CD, 'S', B.SC_NO
                              , 'R', B.RFA_NO
                              , 'T', B.TAA_NO) AS SC_RFA_NO
      ,'1' AS REV_AUD_TOOL_CD
      ,'' AS RDN_RMK
      ,TO_CHAR(SYSDATE, 'YYYYMMDD') AS RDN_ISS_DT
      ,TO_CHAR(SYSDATE, 'IW') AS RDN_ISS_DT_WK
  FROM BKG_BOOKING B
      ,BKG_BL_DOC D
      ,BKG_REV_UMCH_ITM UMCH
      ,BKG_RATE R
      ,MDM_ORGANIZATION O
 WHERE B.BKG_NO = @[bkg_no]
   AND B.BKG_NO = D.BKG_NO
   AND D.BDR_FLG = 'Y'
   AND B.BKG_NO = UMCH.BKG_NO
   AND UMCH.UMCH_TP_CD = 'D'
   AND UMCH.UMCH_BKG_SEQ = (SELECT MAX(UMCH_BKG_SEQ) FROM BKG_REV_UMCH_ITM WHERE BKG_NO=UMCH.BKG_NO)
   AND B.BKG_NO = R.BKG_NO
   AND O.OFC_CD = B.BKG_OFC_CD
   AND NOT EXISTS (
                   SELECT RDN_NO
                     FROM (
                           SELECT RDN_NO    
                                 ,RDN_STS_CD
                             FROM BKG_REV_DR_NOTE A
                            WHERE BKG_NO    = @[bkg_no]
                              AND NOT EXISTS  (
                                               SELECT 'X'
                                                 FROM BKG_REV_DR_NOTE B
                                                WHERE B.RDN_NO    = A.RDN_NO
                                                  AND B.RVIS_SEQ  > A.RVIS_SEQ
                                              )
                          )
                    WHERE RDN_STS_CD  NOT IN ( 'ST', 'CL' )
                   )
   AND D.BDR_DT + 2 < GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(B.BKG_OFC_CD)			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
