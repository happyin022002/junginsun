<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RFAProposalMainDBDAORsltPropCustInfoVORSQL">
			<desc><![CDATA[RsltPropCustInfoVO]]></desc>
			<sql><![CDATA[
SELECT
    CUST.CUST_CNT_CD                                					,
    CUST.CUST_SEQ                                   					,
    CUST.CNTR_CUST_TP_CD PRC_CTRT_CUST_TP_CD 	,
	CUST_TY.INTG_CD_VAL_DESC PRC_CTRT_CUST_TP_NM                        ,
    CUST.CUST_LGL_ENG_NM CTRT_PTY_NM                					,
    ADDR.BZET_ADDR ||' '||ADDR.CTY_NM||DECODE(ADDR.STE_CD||ADDR.ZIP_CD,'','',', '||ADDR.STE_CD||' '||ADDR.ZIP_CD) CTRT_PTY_ADDR                    					,
    CUST.VBS_CLSS_CD CTRT_CUST_VAL_SGM_CD           					,
    MDM.INTG_CD_VAL_DP_DESC CTRT_CUST_VAL_SGM       					,
    CUST.SREP_CD RESPB_SREP_CD                  					,
	SREP.SREP_NM CTRT_CUST_SREP_NM										,
    SREP.OFC_CD RESPB_SLS_OFC_CD                					,
    '' CTRT_PTY_SGN_NM                              					,
    '' CTRT_PTY_SGN_TIT_NM
FROM
    MDM_CUSTOMER CUST   ,
    MDM_CUST_ADDR ADDR  ,
    COM_INTG_CD_DTL MDM ,
	MDM_SLS_REP SREP    ,
	COM_INTG_CD_DTL CUST_TY
WHERE
    CUST.CUST_CNT_CD        = @[cust_cnt_cd]
AND CUST.CUST_SEQ           = @[cust_seq]
AND CUST.DELT_FLG			= 'N'
AND CUST.CNTR_DIV_FLG 		= 'Y'
AND (CUST.NMD_CUST_FLG      <> 'Y' OR CUST.NMD_CUST_FLG IS NULL)
AND CUST.CUST_CNT_CD        = ADDR.CUST_CNT_CD(+)
AND CUST.CUST_SEQ           = ADDR.CUST_SEQ(+)
AND ADDR.PRMRY_CHK_FLG(+)   = 'Y'
AND MDM.INTG_CD_ID(+)       = 'CD00698'
AND MDM.INTG_CD_VAL_CTNT(+) = CUST.VBS_CLSS_CD
AND CUST.SREP_CD 			= SREP.SREP_CD(+)
AND CUST_TY.INTG_CD_ID(+)   = 'CD00697'
--AND DECODE(CUST.CNTR_CUST_TP_CD,'N','N','I') = CUST_TY.INTG_CD_VAL_CTNT
AND CUST.CNTR_CUST_TP_CD = CUST_TY.INTG_CD_VAL_CTNT(+)
AND (CUST.SLS_DELT_EFF_DT IS NULL OR CUST.SLS_DELT_EFF_DT > TO_CHAR(SYSDATE,'yyyy-MM-dd'))			]]></sql>
			<params>
				<param name="cust_cnt_cd" type="12" value="" out="N"/>
				<param name="cust_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
