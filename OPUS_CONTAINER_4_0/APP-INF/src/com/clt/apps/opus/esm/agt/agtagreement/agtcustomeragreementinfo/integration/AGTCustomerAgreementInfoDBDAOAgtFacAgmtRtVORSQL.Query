<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AGTCustomerAgreementInfoDBDAOAgtFacAgmtRtVORSQL">
			<desc><![CDATA[조회]]></desc>
			<sql><![CDATA[
SELECT A.FRT_FWRD_CNT_CD||TO_CHAR(A.FRT_FWRD_CUST_SEQ, 'FM000000') AS FRT_FWRD_CNT_CD_SEQ,
       DECODE( TO_CHAR(A.FRT_FWRD_CUST_SEQ, 'FM000000'), '999999', 'REP. CUSTOMER', NVL(REPLACE(REPLACE(B.CUST_LGL_ENG_NM, CHR(13)||CHR(10), ' '), CHR(9), ' '), ' ')) AS FRT_FWRD_CNT_NM,
       NVL(DECODE(A.SHPR_CNT_CD||TO_CHAR(A.SHPR_CUST_SEQ, 'FM000000'), '*000000', '*', A.SHPR_CNT_CD||TO_CHAR(A.SHPR_CUST_SEQ, 'FM000000')), '*') AS SHPR_CNT_CD_SEQ,
       NVL(REPLACE(REPLACE(C.CUST_LGL_ENG_NM, CHR(13)||CHR(10), ' '), CHR(9), ' '), ' ') AS SHPR_CNT_NM,
       NVL(A.POR_GRP_TP_CD, '*') AS POR_GRP_TP_CD,
       NVL(A.POR_ROUT_CD, '*') AS POR_ROUT_CD,
       NVL(A.POL_GRP_TP_CD, '*') AS POL_GRP_TP_CD,
       NVL(A.POL_ROUT_CD, '*') AS POL_ROUT_CD,
       NVL(A.POD_GRP_TP_CD, '*') AS POD_GRP_TP_CD,
       NVL(A.POD_ROUT_CD, '*') AS POD_ROUT_CD,
       NVL(A.DEL_GRP_TP_CD, '*') AS DEL_GRP_TP_CD,
       NVL(A.DEL_ROUT_CD, '*') AS DEL_ROUT_CD,
       NVL(A.BKG_RCV_TERM_CD, '*') AS BKG_RCV_TERM_CD,
       NVL(a.bkg_de_term_cd, '*') AS BKG_DE_TERM_CD,
       NVL(a.fac_sgl_flg, '*') AS FAC_SGL_FLG,
--// 2008.02.19-sunganj : 정영한 대리의 요청사항에 의하여 DF(Double Factor) column 추가
       NVL(A.FAC_DBL_FLG, '*') AS FAC_DBL_FLG,
       A.GRS_NET_DIV_CD,
       NVL(A.SVC_SCP_CD, '*') AS SVC_SCP_CD,
       NVL(A.FM_EFF_DT, '20000101') AS FM_EFF_DT,
       NVL(A.TO_EFF_DT, '29990101') AS TO_EFF_DT,
       NVL(A.SC_NO, '*') AS SC_NO,
       NVL(A.RFA_NO, '*') AS RFA_NO,
       NVL(A.CMDT_TP_CD, '*') AS CMDT_TP_CD,
       NVL(A.CMDT_CD, '*') AS CMDT_CD,
       DECODE(A.CMDT_TP_CD, '2', E.REP_CMDT_NM, '3', F.CMDT_NM) AS CMDT_NM,
       NVL(A.FAC_DIV_CD, ' ') AS FAC_DIV_CD,
       NVL(A.FAC_TP_CD, ' ') AS FAC_TP_CD,
       DECODE (A.FAC_DIV_CD, 'BL', 0, NVL(A.BKG_FAC_RT, 0)) AS BKG_FAC_RT,
--//2008.03.11(sunganj) Double Rate(Special Rate) 추가
       NVL(A.FAC_SPCL_CNTR_TP_CTNT1, ' ') AS FAC_SPCL_CNTR_TP_CTNT1,
       NVL(A.FAC_SPCL_CNTR_RT1, 0) AS FAC_SPCL_CNTR_RT1,
       NVL(A.FAC_SPCL_CNTR_TP_CTNT2, ' ') AS FAC_SPCL_CNTR_TP_CTNT2,
       NVL(A.FAC_SPCL_CNTR_RT2, 0) AS FAC_SPCL_CNTR_RT2,
--//			2009-04-13 (kevin) CURR_CD 추가
       NVL(A.CURR_CD, 'USD') AS CURR_CD,
       DECODE (A.FAC_DIV_CD, 'BL', NVL(A.BKG_FAC_RT, 0), 0) AS BKG_FAC_BL_AMT,
       NVL(A.FAC_BX_RT, 0) AS FAC_BX_RT,
       NVL(A.FAC_TEU_RT, 0) AS FAC_TEU_RT,
       NVL(A.FAC_FEU_RT, 0) AS FAC_FEU_RT,
       NVL(A.FAC_RF_TEU_RT, 0) AS FAC_RF_TEU_RT,
       NVL(A.FAC_RF_FEU_RT, 0) AS FAC_RF_FEU_RT,
--//			 2008.01.25(sunganj) Container Type 2개 추가 : STEU, SFEU
       NVL(A.FAC_SPCL_TEU_RT, 0) AS FAC_SPCL_TEU_RT,
       NVL(A.FAC_SPCL_FEU_RT, 0) AS FAC_SPCL_FEU_RT,
       NVL(A.FAC_CHG_CTNT, ' ') AS FAC_CHG_CTNT,
       NVL(A.COMM_PROC_STS_CD, 'RN') AS COMM_PROC_STS_CD,
       A.FAC_RQST_USR_ID,
       A.FAC_APRO_USR_ID,
       TO_CHAR(A.FAC_APRO_DT, 'yyyyMMdd') AS FAC_APRO_DT,
       A.COMM_PROC_RSLT_RSN,
       A.FAC_RT_SEQ,
       A.FAC_OFC_CD,
       A.FAC_RQST_USR_EML,
       A.FAC_APRO_USR_EML,
       G.USR_NM FAC_RQST_USR_NAME,
       A.CRE_USR_ID,
       TO_CHAR(A.CRE_DT, 'yyyyMMddHH24miss') AS CRE_DT,
       A.UPD_USR_ID,
       TO_CHAR(A.UPD_DT, 'yyyyMMddHH24miss') AS UPD_DT
FROM   AGT_FAC_AGMT_RT A,
       MDM_CUSTOMER B,
       MDM_CUSTOMER C,
       MDM_REP_CMDT E,
       MDM_COMMODITY F,
       COM_USER G
WHERE  A.FAC_OFC_CD = @[fac_ofc_cd] 
#if (${s_sts_cd} != '')
AND    A.COMM_PROC_STS_CD = @[s_sts_cd] 
#end
AND    A.FRT_FWRD_CNT_CD = B.CUST_CNT_CD(+)
AND    A.FRT_FWRD_CUST_SEQ = B.CUST_SEQ(+)
AND    A.SHPR_CNT_CD = C.CUST_CNT_CD(+)
AND    A.SHPR_CUST_SEQ = C.CUST_SEQ(+)
AND    A.CMDT_CD = E.REP_CMDT_CD(+)
AND    A.CMDT_CD = F.CMDT_CD(+)
AND    A.FAC_RQST_USR_ID = G.USR_ID(+)
ORDER BY 14, 15, 16, 17, 2, 3, 4, 5, 6, 7, 8			]]></sql>
			<params>
				<param name="fac_ofc_cd" type="12" value="" out="Y"/>
				<param name="s_sts_cd" type="12" value="" out="Y"/>
			</params>
		</query>
	</querys>
</sqls>
