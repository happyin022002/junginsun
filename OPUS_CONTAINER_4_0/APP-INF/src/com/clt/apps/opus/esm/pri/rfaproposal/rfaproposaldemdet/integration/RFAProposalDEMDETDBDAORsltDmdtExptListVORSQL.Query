<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RFAProposalDEMDETDBDAORsltDmdtExptListVORSQL">
			<desc><![CDATA[RFA DEMDET List 조회]]></desc>
			<sql><![CDATA[
SELECT A.PROP_NO
     , A.AMDT_SEQ
     , A.DMDT_FT_TP_CD
     , A.PRC_PROG_STS_CD
     , A.SRC_INFO_CD
     , A.ACPT_USR_ID
     , A.ACPT_OFC_CD
     , A.ACPT_DT
	 , A.N1ST_CMNC_AMDT_SEQ
     , NVL((SELECT TO_CHAR(EFF_DT, 'YYYYMMDD') FROM PRI_RP_MN WHERE PROP_NO = A.PROP_NO AND AMDT_SEQ = A.N1ST_CMNC_AMDT_SEQ)
          ,(SELECT TO_CHAR(EFF_DT, 'YYYYMMDD') FROM PRI_RP_MN WHERE PROP_NO = A.PROP_NO AND AMDT_SEQ = A.AMDT_SEQ)) EFF_DT
     , CASE
        WHEN A.AMDT_SEQ = @[amdt_seq] THEN TO_CHAR(M.EXP_DT, 'YYYYMMDD')
        ELSE (
			  SELECT CASE WHEN M.EFF_DT <= N.EXP_DT THEN TO_CHAR(M.EFF_DT - 1,'YYYYMMDD')
                          ELSE TO_CHAR(N.EXP_DT,'YYYYMMDD')
                     END AS EXP_DT
                FROM PRI_RP_MN N
               WHERE PROP_NO = M.PROP_NO AND AMDT_SEQ = M.AMDT_SEQ-1 
			 )
     END  EXP_DT
  FROM PRI_RP_DMDT A
     , PRI_RP_MN M
 WHERE A.PROP_NO = @[prop_no]
   AND A.AMDT_SEQ IN (@[amdt_seq], @[amdt_seq]-1)
   AND M.PROP_NO = A.PROP_NO
   AND M.AMDT_SEQ = @[amdt_seq]
   AND (A.AMDT_SEQ = @[amdt_seq]
	OR (A.AMDT_SEQ = @[amdt_seq]-1
		AND A.SRC_INFO_CD <> 'AD'
		AND NOT EXISTS (SELECT 'X' FROM PRI_RP_DMDT C
                         WHERE C.PROP_NO = A.PROP_NO
                           AND C.AMDT_SEQ = @[amdt_seq]
                           AND C.N1ST_CMNC_AMDT_SEQ = A.N1ST_CMNC_AMDT_SEQ)
	   )
	)
ORDER BY A.AMDT_SEQ			]]></sql>
			<params>
				<param name="amdt_seq" type="12" value="" out="N"/>
				<param name="prop_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
