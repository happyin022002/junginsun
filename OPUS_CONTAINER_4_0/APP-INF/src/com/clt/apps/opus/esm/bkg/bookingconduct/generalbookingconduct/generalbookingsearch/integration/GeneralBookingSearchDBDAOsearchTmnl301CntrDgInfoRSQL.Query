<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralBookingSearchDBDAOsearchTmnl301CntrDgInfoRSQL">
			<desc><![CDATA[searchTmnl301CntrDgInfo]]></desc>
			<sql><![CDATA[
SELECT '{CNTR_DANGER'														      || CHR(10)
    || 'PROPERNAME:'    || BKG_SPCLCHAR_CONV_FNC(DG.PRP_SHP_NM,'E')				  || CHR(10)
    || 'TECHNAME:'      || BKG_SPCLCHAR_CONV_FNC(NVL(HZD_DESC, ' '),'E')	  	  || CHR(10)
    || 'DG_APPROVAL:'   || (SELECT   SA.APRO_REF_NO
							FROM     SCG_APRO_RQST      SAR
							      ,  SCG_VVD_APRO_RQST  SVAR
							      ,  SCG_AUTHORIZATION  SA
							      ,  BKG_VVD BV
							WHERE    1 = 1
							AND      SAR.BKG_NO           = SVAR.BKG_NO
							AND      SAR.BKG_NO           = BV.BKG_NO
							AND      SAR.SPCL_CGO_APRO_RQST_SEQ = SVAR.SPCL_CGO_APRO_RQST_SEQ
							AND      SAR.SPCL_CGO_CATE_CD = 'DG'
							AND      SAR.LST_RQST_DAT_FLG = 'Y'
							AND      SVAR.BKG_NO           = SA.BKG_NO
							AND      SVAR.SPCL_CGO_APRO_RQST_SEQ = SA.SPCL_CGO_APRO_RQST_SEQ
							AND      SVAR.BKG_NO           = DG.BKG_NO
							AND      SVAR.VSL_CD           = BV.VSL_CD
							AND      SVAR.SKD_VOY_NO       = BV.SKD_VOY_NO
							AND      SVAR.SKD_DIR_CD       = BV.SKD_DIR_CD
							AND      BV.VSL_PRE_PST_CD||BV.VSL_SEQ = (SELECT MIN(BV1.VSL_PRE_PST_CD||BV1.VSL_SEQ) FROM BKG_VVD BV1 WHERE BV1.BKG_NO = BV.BKG_NO)
							AND      SA.SPCL_CGO_AUTH_SEQ= (SELECT   MAX(SAM.SPCL_CGO_AUTH_SEQ)
                            							    FROM     SCG_AUTHORIZATION SAM
                               								WHERE    SAM.BKG_NO         = SA.BKG_NO
                               								AND      SAM.SPCL_CGO_APRO_RQST_SEQ = SA.SPCL_CGO_APRO_RQST_SEQ
                               								)  
                            AND      ROWNUM = 1) 													  || CHR(10)
	|| 'UNBR:'			|| DG.IMDG_UN_NO                                          || CHR(10)
    || 'CLAS:'			|| DG.IMDG_CLSS_CD									      || CHR(10)
	|| 'DESC:'			|| BKG_SPCLCHAR_CONV_FNC(DG.PRP_SHP_NM,'E')		      	  || CHR(10)
	|| 'PHON:'			|| DG.EMER_CNTC_PHN_NO_CTNT								  || CHR(10)
    || 'PERSON:'		|| DG.EMER_CNTC_PSON_NM								  	  || CHR(10)
    || 'PAGE:'			                         								  || CHR(10)
	|| 'FPNT:'			|| DG.FLSH_PNT_CDO_TEMP									  || CHR(10)
	|| 'FPUN:'			|| 'C'												      || CHR(10)
	|| 'DG_REMARK:'		|| BKG_SPCLCHAR_CONV_FNC(REPLACE(NVL(DG.DIFF_RMK, ' '),CHR(10), ' '),'E')     || CHR(10)
	|| 'EMSNO:'			|| NVL(DG.EMS_NO, ' ')		         					  || CHR(10)
	|| 'PSACLS:'		|| NVL(DG.PSA_NO, ' ')								      || CHR(10)
	|| 'PKGGRP:'		|| NVL(DG.IMDG_PCK_GRP_CD, ' ')							  || CHR(10)
    || 'MFAG1:'			                                       					  || CHR(10)
    || 'MFAG2:'			            							                  || CHR(10)
	|| 'MAR_POLL:'		|| NVL(DG.MRN_POLUT_FLG,' ')							  || CHR(10)
	|| 'LABEL_CD:'		|| NVL((select LBL.IMDG_SUBS_RSK_LBL_CD IMO_SRL
                                  from SCG_IMDG_SUBS_RSK_LBL LBL 
                                 where DG.IMDG_UN_NO      = LBL.IMDG_UN_NO 
                                   and DG.IMDG_UN_NO_SEQ = LBL.IMDG_UN_NO_SEQ
                                   and rownum = 1), ' ') 						  || CHR(10)
	|| 'LABEL_DESC:'														      || CHR(10)
	|| 'D_PKG:'			|| NVL(DG.OUT_IMDG_PCK_QTY1, 0)							  || CHR(10)
	|| 'D_PKGUNIT:'		|| NVL(DG.OUT_IMDG_PCK_CD1, ' ')						  || CHR(10)
	|| 'NWGT:'			|| NVL(DG.NET_WGT, 0)								      || CHR(10)
	|| 'NWGT_UNIT:KGS'														      || CHR(10)
	|| 'GWGT:'			|| NVL(DG.GRS_WGT, 0)							          || CHR(10)
	|| 'GWGT_UNIT:'		|| NVL(DG.WGT_UT_CD, ' ')								  || CHR(10)
	|| 'MEA:'			|| NVL(DG.MEAS_QTY, 0)								      || CHR(10)
	|| 'MEA_UNIT:'		|| NVL(DG.MEAS_UT_CD, ' ')								  || CHR(10)
	|| 'HAZ_CONT:'		|| NVL(DG.HZD_DESC, ' ')							      || CHR(10)
	|| 'STWG:'			|| NVL(DG.SPCL_STWG_RQST_DESC, ' ')						  || CHR(10)
    || 'LABEL1:'		|| NVL(DG.IMDG_SUBS_RSK_LBL_CD1, ' ')					  || CHR(10)
    || 'LABEL2:'		|| NVL(DG.IMDG_SUBS_RSK_LBL_CD2, ' ')					  || CHR(10)
    || 'LABEL3:'		|| NVL(DG.IMDG_SUBS_RSK_LBL_CD3, ' ')					  || CHR(10)
	|| 'IMO_LIMIT:'     || NVL(DG.IMDG_LMT_QTY_FLG, ' ')						  || CHR(10)
	|| '}CNTR_DANGER'				      										  || CHR(10) CNTR_DG_INFO
  FROM BKG_DG_CGO DG
 WHERE DG.BKG_NO		= @[bkg_no]
   AND DG.CNTR_TPSZ_CD is not null
   AND DG.DG_CNTR_SEQ   = @[dg_cntr_seq]
 ORDER BY DG.CNTR_CGO_SEQ			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="dg_cntr_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
