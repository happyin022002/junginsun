<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CostManageDBDAOSearchBasicCmcbCoaUcPfmcSectorRSQL">
			<desc><![CDATA[Basic CMCB for IAS Sector_COA UC PFMC List를 조회한다.
COA CM cost UC와 CSQ간 차이를 조회]]></desc>
			<sql><![CDATA[
WITH COA_DATA AS
(SELECT BSE_TP_CD
      ,BSE_YR
      ,BSE_QTR_CD
      ,OFC_VW_CD
      ,RLANE_CD
      ,DIR_CD
      ,TRD_CD
      ,SUB_TRD_CD
      ,POL_CD
      ,POD_CD
--      ,SUM(LOD_QTY) AS LOD_QTY
--      ,SUM(REV)     AS REV
--      ,SUM(PA_CM_COST_TTL_AMT) AS PA_CM_COST_TTL_AMT
--      ,SUM(RA_CM_COST_TTL_AMT) AS RA_CM_COST_TTL_AMT
      ,ROUND(DECODE(SUM(NVL(LOD_QTY,0)), 0, 0, SUM(NVL(PA_CM_COST_TTL_AMT,0))/SUM(NVL(LOD_QTY,0)))) AS PA_CM_UC_AMT
      ,ROUND(DECODE(SUM(NVL(LOD_QTY,0)), 0, 0, SUM(NVL(RA_CM_COST_TTL_AMT,0))/SUM(NVL(LOD_QTY,0)))) AS RA_CM_UC_AMT
      ,POL_CALL_SEQ
      ,POD_CALL_SEQ
  FROM (
        SELECT B2.BSE_TP_CD
              ,B2.BSE_YR
              ,B2.BSE_QTR_CD
              ,B2.OFC_VW_CD
              ,B2.TRD_CD
              ,B2.SUB_TRD_CD
              ,B2.RLANE_CD
              ,B2.DIR_CD
              ,B1.CTRT_RGN_OFC
              ,B1.SLS_RGN_OFC
              ,B1.CTRT_OFC_CD
              ,B1.SLS_OFC_CD
              ,B1.VVD
              ,B2.POL_CD
              ,B2.POD_CD
              ,B1.LOD_QTY
              ,B1.REV
              ,B1.RA_CM_COST_TTL_AMT
              ,B1.PA_CM_COST_TTL_AMT
              ,B2.POL_CALL_SEQ
              ,B2.POD_CALL_SEQ
          FROM (
                  SELECT /*+ NO_MERGE */ 
                         TRD_CD
                        ,SUB_TRD_CD
                        ,RLANE_CD
                        ,DIR_CD
                        ,(SELECT N2ND_PRNT_OFC_CD FROM CSQ_ORGANIZATION_V WHERE OFC_CD = CTRT_OFC_CD) CTRT_RHQ_OFC
                        ,CASE WHEN    CTRT_OFC_CD = 'NYCNA'
                                   OR CTRT_OFC_CD = 'HAMUR'
                                   OR CTRT_OFC_CD = 'SINWA'
                                   OR CTRT_OFC_CD = 'SHAAS' THEN SUBSTR(CTRT_OFC_CD, 1, 3)||'BB'
                                                            ELSE (SELECT N4TH_PRNT_OFC_CD FROM CSQ_ORGANIZATION_V WHERE OFC_CD = CTRT_OFC_CD)
                          END AS CTRT_RGN_OFC
                        ,(SELECT N2ND_PRNT_OFC_CD FROM CSQ_ORGANIZATION_V WHERE OFC_CD = SLS_OFC_CD) SLS_RHQ_OFC
                        ,CASE WHEN    SLS_OFC_CD = 'NYCNA'
                                   OR SLS_OFC_CD = 'HAMUR'
                                   OR SLS_OFC_CD = 'SINWA'
                                   OR SLS_OFC_CD = 'SHAAS' THEN SUBSTR(SLS_OFC_CD, 1, 3)||'BB'
                                                           ELSE (SELECT N4TH_PRNT_OFC_CD FROM CSQ_ORGANIZATION_V WHERE OFC_CD = SLS_OFC_CD)
                          END AS SLS_RGN_OFC
                        ,CTRT_OFC_CD
                        ,SLS_OFC_CD
                        ,COST_WK
                        ,VSL_CD||SKD_VOY_NO||DIR_CD AS VVD
                        ,DECODE(SUBSTR(CNTR_TPSZ_CD, -1), 2, BKG_QTY, BKG_QTY * 2) AS LOD_QTY
                        ,NVL(BKG_REV, 0) + NVL(BKG_OFT_REV, 0) + NVL(BKG_MISC_REV, 0) + NVL(SCR_CHG_REV, 0) AS REV
                        ,BKG_POL_CD
                        ,BKG_POD_CD
                        ,RA_CM_COST_TTL_AMT
                        ,PA_CM_COST_TTL_AMT
                    FROM COA_BKG_EXPN_DTL_WK
                   WHERE SUBSTR(SLS_YRMON, 1, 4)||COST_WK BETWEEN @[f_fm_wk] AND @[f_to_wk]
                     AND DELT_FLG      = 'N'
                     AND BKG_STS_CD    IN ('F','S','W')
                     AND BKG_CGO_TP_CD <> 'P'
                     AND BL_NO_TP      IN ('M','0')
                     AND RLANE_CD      = @[f_rlane_cd]
               ) B1
              ,CSQ_SCTR_LANE_OFC B2
         WHERE B2.BSE_TP_CD    = @[f_bse_tp_cd]
           AND B2.BSE_YR       = @[f_bse_yr]
           AND B2.BSE_QTR_CD   = DECODE(@[f_bse_tp_cd], 'Y', '00', @[f_bse_qtr_cd])
           AND B2.OFC_VW_CD = 'L'
           AND B2.TRD_CD       = B1.TRD_CD
           AND B2.SUB_TRD_CD   = B1.SUB_TRD_CD
           AND B2.RLANE_CD     = B1.RLANE_CD
           AND B2.DIR_CD       = B1.DIR_CD
           AND B2.POL_CD       = B1.BKG_POL_CD
           AND B2.POD_CD       = B1.BKG_POD_CD
           AND B2.RGN_OFC_CD   = DECODE(B2.OFC_VW_CD, 'C', B1.CTRT_RGN_OFC, 'L', B1.SLS_RGN_OFC)
           AND B1.CTRT_RHQ_OFC IS NOT NULL
           AND B1.SLS_RHQ_OFC  IS NOT NULL
           AND B2.CSQ_ACT_FLG  = 'Y'
       )
 GROUP BY BSE_TP_CD
         ,BSE_YR
         ,BSE_QTR_CD
         ,OFC_VW_CD
         ,TRD_CD
         ,SUB_TRD_CD
         ,RLANE_CD
         ,DIR_CD
         ,POL_CD
         ,POD_CD
         ,POL_CALL_SEQ
         ,POD_CALL_SEQ
)
SELECT A2.BSE_TP_CD
       ,A2.BSE_YR
       ,A2.BSE_QTR_CD
       ,A2.TRD_CD
       ,A2.SUB_TRD_CD
       ,A2.RLANE_CD
       ,A2.DIR_CD
       ,A2.POL_CD
       ,A2.POD_CD
       ,NVL(A1.PA_CM_UC_AMT, 0) AS COA_PA_CM_UC_AMT
       ,NVL(A1.RA_CM_UC_AMT, 0) AS COA_RA_CM_UC_AMT
       ,NVL(A2.PA_CM_UC_AMT, 0) - NVL(A1.PA_CM_UC_AMT, 0) AS PA_CM_UC_AMT
       ,NVL(A2.RA_CM_UC_AMT, 0) - NVL(A1.RA_CM_UC_AMT, 0) AS RA_CM_UC_AMT
       ,A1.POL_CALL_SEQ
       ,A1.POD_CALL_SEQ
FROM COA_DATA A1, CSQ_SCTR_PAIR_COST A2
WHERE 1=1
AND A2.BSE_TP_CD    = @[f_bse_tp_cd]
AND A2.BSE_YR       = @[f_bse_yr]
AND A2.BSE_QTR_CD   = DECODE(@[f_bse_tp_cd], 'Y', '00', @[f_bse_qtr_cd])
AND A2.SUB_TRD_CD   = @[f_sub_trd_cd]
AND A2.RLANE_CD     = @[f_rlane_cd]
AND A2.DIR_CD       = @[f_dir_cd]
#if (${f_pol_cd} != '' && ${f_pol_cd} != 'All')
AND A2.POL_CD       = @[f_pol_cd]
#end
#if (${f_pod_cd} != '' && ${f_pod_cd} != 'All')
AND A2.POD_CD       = @[f_pod_cd]
#end
AND A1.DIR_CD(+) = A2.DIR_CD
AND A1.POL_CD(+) = A2.POL_CD
AND A1.POD_CD(+) = A2.POD_CD
ORDER BY A2.DIR_CD, A2.POL_CD, A2.POD_CD			]]></sql>
			<params>
				<param name="f_fm_wk" type="12" value="" out="N"/>
				<param name="f_to_wk" type="12" value="" out="N"/>
				<param name="f_rlane_cd" type="12" value="" out="N"/>
				<param name="f_bse_tp_cd" type="12" value="" out="N"/>
				<param name="f_bse_yr" type="12" value="" out="N"/>
				<param name="f_bse_qtr_cd" type="12" value="" out="N"/>
				<param name="f_sub_trd_cd" type="12" value="" out="N"/>
				<param name="f_dir_cd" type="12" value="" out="N"/>
				<param name="f_pol_cd" type="12" value="" out="N"/>
				<param name="f_pod_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
