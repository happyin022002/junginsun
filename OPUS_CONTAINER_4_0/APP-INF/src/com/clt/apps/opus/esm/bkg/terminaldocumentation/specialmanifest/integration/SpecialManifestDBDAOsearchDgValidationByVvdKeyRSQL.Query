<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="SpecialManifestDBDAOsearchDgValidationByVvdKeyRSQL">
			<desc><![CDATA[bl_no / pol_cd / pod_cd를 입력시 validation]]></desc>
			<sql><![CDATA[
SELECT B.POL_CD
      ,B.POD_CD
      ,'NYK' AS CGO_OPR_CD
  FROM BKG_BOOKING A
      ,BKG_VVD     B
 WHERE 1=1
   AND A.BKG_NO        = B.BKG_NO
   AND A.BKG_STS_CD    <> 'X'
   AND B.VSL_CD        = SUBSTR(@[vvd_cd], 1, 4)
   AND B.SKD_VOY_NO    = SUBSTR(@[vvd_cd], 5, 4)
   AND B.SKD_DIR_CD    = SUBSTR(@[vvd_cd], 9, 1)
#if (${cond_type} == 'bl_no') 
   AND A.BL_NO         = @[cond_value]
#end
#if (${d_type} == 'D' || ${d_type} == 'DO' || ${d_type} == 'O')
   AND B.POD_CD        = @[port_cd]
#elseif (${d_type} == 'L' || ${d_type} == 'PL' || ${d_type} == 'P')
   AND B.POL_CD        = @[port_cd]
#end

UNION ALL

SELECT RQST.POL_CD
      ,RQST.POD_CD
      ,(SELECT CGO.CGO_OPR_CD
          FROM SCG_PRNR_APRO_RQST_CGO CGO
         WHERE RQST.BKG_REF_NO = CGO.BKG_REF_NO
           AND ROWNUM = 1
       ) AS CGO_OPR_CD
  FROM SCG_PRNR_APRO_RQST RQST
 WHERE 1=1
   AND RQST.VSL_CD     = SUBSTR(@[vvd_cd], 1, 4)
   AND RQST.SKD_VOY_NO = SUBSTR(@[vvd_cd], 5, 4)
   AND RQST.SKD_DIR_CD = SUBSTR(@[vvd_cd], 9, 1)
#if (${cond_type} == 'bl_no') 
   AND RQST.BKG_REF_NO = @[cond_value]
#end
#if (${d_type} == 'D' || ${d_type} == 'DO' || ${d_type} == 'O')
   AND RQST.POD_CD     = @[port_cd]
#elseif (${d_type} == 'L' || ${d_type} == 'PL' || ${d_type} == 'P')
   AND RQST.POL_CD     = @[port_cd]
#end			]]></sql>
			<params>
				<param name="vvd_cd" type="12" value="" out="N"/>
				<param name="cond_value" type="12" value="" out="N"/>
				<param name="port_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
