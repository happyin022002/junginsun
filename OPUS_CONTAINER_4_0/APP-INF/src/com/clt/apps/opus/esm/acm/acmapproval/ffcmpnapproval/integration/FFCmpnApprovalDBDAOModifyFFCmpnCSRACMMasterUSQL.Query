<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="FFCmpnApprovalDBDAOModifyFFCmpnCSRACMMasterUSQL">
			<desc><![CDATA[ModifyFFCmpnCSRACMMaster]]></desc>
			<sql><![CDATA[
/* ACM_FF_CMPN UPDATE */
UPDATE ACM_FF_CMPN A 
   SET A.FF_CMPN_STS_CD = 'IF', 
       A.GL_DT            = (SELECT DISTINCT B.GL_DT FROM AP_INV_HDR B WHERE B.CSR_NO = A.CSR_NO), 
       A.FF_CMPN_RMK = 'APPROVAL REQUEST!', 
		/* REQUEST의 경우 날짜 검색 조건을 충족하기 위해 LOCAL TIME으로 UPDATE */
       A.IF_DT = (SELECT GLOBALDATE_PKG.TIME_CONV_FNC('KRPUS',SYSDATE,LOC_CD) 
                       FROM MDM_ORGANIZATION WHERE OFC_CD = A.AP_OFC_CD), 
	   A.APRO_DT = (SELECT GLOBALDATE_PKG.TIME_CONV_FNC('KRPUS',SYSDATE,LOC_CD) 
                       FROM MDM_ORGANIZATION WHERE OFC_CD = A.AP_OFC_CD)
WHERE A.CSR_NO = @[csr_no]			]]></sql>
			<params>
				<param name="csr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
