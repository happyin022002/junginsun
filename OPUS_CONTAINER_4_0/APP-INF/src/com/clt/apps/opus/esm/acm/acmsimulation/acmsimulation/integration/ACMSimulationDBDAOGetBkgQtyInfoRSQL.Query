<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ACMSimulationDBDAOGetBkgQtyInfoRSQL">
			<desc><![CDATA[GetBkgQtyInfo]]></desc>
			<sql><![CDATA[
SELECT 
       NVL(SUM(QTY.OP_CNTR_QTY), 0) AS BOX ,
       NVL(SUM(DECODE(SUBSTR(QTY.CNTR_TPSZ_CD, 2, 1), '2', DECODE(SUBSTR(QTY.CNTR_TPSZ_CD, 1, 1), 'R', 0, QTY.OP_CNTR_QTY), 0)), 0) AS TEU, 
       NVL(SUM(DECODE(SUBSTR(QTY.CNTR_TPSZ_CD, 2, 1), '2', 0, DECODE(SUBSTR(QTY.CNTR_TPSZ_CD, 1, 1), 'R', 0, QTY.OP_CNTR_QTY))), 0) AS FEU, 
       NVL(SUM(DECODE(SUBSTR(QTY.CNTR_TPSZ_CD, 1, 1), 'R', QTY.OP_CNTR_QTY, 0)), 0)                                                 AS RBOX, 
       NVL(SUM(DECODE(SUBSTR(QTY.CNTR_TPSZ_CD, 1, 1), 'R', DECODE(SUBSTR(QTY.CNTR_TPSZ_CD, 2, 1), '2', QTY.OP_CNTR_QTY, 0), 0)), 0) AS RTEU, 
       NVL(SUM(DECODE(SUBSTR(QTY.CNTR_TPSZ_CD, 1, 1), 'R', DECODE(SUBSTR(QTY.CNTR_TPSZ_CD, 2, 1), '2', 0, QTY.OP_CNTR_QTY), 0)), 0) AS RFEU
  FROM BKG_QUANTITY QTY
-- WHERE QTY.BKG_NO = v_bkg_no --> only Master
 WHERE QTY.BKG_NO IN (SELECT DISTINCT BKG_NO 
                      FROM  BKG_BL_DOC 
                      WHERE BKG_NO = @[bkg_no]
                        OR (BL_CVRD_TP_CD = 'C' AND MST_CVRD_BL_NO = @[bkg_no] )
                      )
   AND QTY.CNTR_TPSZ_CD NOT LIKE 'Q%'			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
