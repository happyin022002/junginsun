<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CargoReleaseOrderDBDAOsearchEdiFullCntrRlseOrderDgInfoRSQL">
			<desc><![CDATA[searchEdiFullCntrRlseOrderDgInfo]]></desc>
			<sql><![CDATA[
SELECT '{CNTR_DANGER'														      || CHR(10)
	|| 'UNNBR:'			|| DG.IMDG_UN_NO                                          || CHR(10)
    || 'CLASS:'			|| DG.IMDG_CLSS_CD									      || CHR(10)
	|| 'DG_DESC:'		|| DG.PRP_SHP_NM								      	  || CHR(10)
	|| 'PHONE:'			|| DG.EMER_CNTC_PHN_NO_CTNT								  || CHR(10)
    || 'PAGE:'			                         								  || CHR(10)
	|| 'FLSH_TEMP:'		|| DG.FLSH_PNT_CDO_TEMP									  || CHR(10)
	|| 'FLSH_UNIT:'		|| 'C'												      || CHR(10)
	|| 'DG_REMARK:'		|| REPLACE(NVL(DG.DIFF_RMK, ' '),CHR(10), ' ')   || CHR(10)
	|| 'EMSNO:'			|| NVL(DG.EMS_NO, ' ')		         					  || CHR(10)
	|| 'PSACLS:'		|| NVL(DG.PSA_NO, ' ')								      || CHR(10)
	|| 'PKGGRP:'		|| NVL(DG.IMDG_PCK_GRP_CD, ' ')							  || CHR(10)
    || 'MFAG1:'			                                       					  || CHR(10)
    || 'MFAG2:'			            							                  || CHR(10)
	|| 'MAR_POLL:'		|| NVL(DG.MRN_POLUT_FLG,' ')							  || CHR(10)
	|| 'LABEL_CD:'		|| NVL((SELECT LBL.IMDG_SUBS_RSK_LBL_CD IMO_SRL
                                  FROM SCG_IMDG_SUBS_RSK_LBL LBL 
                                 WHERE DG.IMDG_UN_NO      = LBL.IMDG_UN_NO 
                                   AND DG.IMDG_UN_NO_SEQ = LBL.IMDG_UN_NO_SEQ
                                   AND ROWNUM = 1), ' ') 						  || CHR(10)
	|| 'LABEL_DESC:'														      || CHR(10)
	|| 'D_PKG:'			|| NVL(DG.OUT_IMDG_PCK_QTY1, '')						  || CHR(10)
	|| 'D_PKGUNIT:'		|| NVL(DG.OUT_IMDG_PCK_CD1, ' ')						  || CHR(10)
	|| 'NWGT:'			|| NVL(DG.NET_WGT, '')								      || CHR(10)
	|| 'NWGT_UNIT:KGM'   												          || CHR(10)
	|| 'GWGT:'			|| NVL(DG.GRS_WGT, '')							          || CHR(10)
	|| 'GWGT_UNIT:'		|| NVL(DG.WGT_UT_CD, ' ')								  || CHR(10)
	|| 'MEA:'			|| NVL(DG.MEAS_QTY, '')								      || CHR(10)
	|| 'MEA_UNIT:'		|| NVL(DG.MEAS_UT_CD, ' ')								  || CHR(10)
	|| 'HAZ_CONT:'		|| NVL(DG.HZD_DESC, ' ')							      || CHR(10)
	|| 'STWG:'			|| NVL(DG.SPCL_STWG_RQST_DESC, ' ')						  || CHR(10)
    || 'LABEL:'			|| NVL((SELECT LBL.IMDG_SUBS_RSK_LBL_CD IMO_SRL
                                FROM SCG_IMDG_SUBS_RSK_LBL LBL 
                                WHERE DG.IMDG_UN_NO      = LBL.IMDG_UN_NO 
                                  AND DG.IMDG_UN_NO_SEQ = LBL.IMDG_UN_NO_SEQ
                                  AND ROWNUM = 1), ' ') 						  || CHR(10)	
    || 'IMO_LIMIT_QTY:' || NVL(DG.IMDG_LMT_QTY_FLG ,'N')                          || CHR(10)	
	|| '}CNTR_DANGER'				      										  || CHR(10) 
    || '}CNTR_INFO'				      								              || CHR(10)
FROM BKG_CONTAINER BCNTR,
      BKG_DG_CGO DG
WHERE BCNTR.BKG_NO   = @[bkg_no]
  AND BCNTR.CNTR_NO  = @[cntr_no]
  AND DG.BKG_NO(+)   = BCNTR.BKG_NO 
  AND DG.CNTR_NO(+)  = BCNTR.CNTR_NO
ORDER BY DG.DCGO_SEQ			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="cntr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
