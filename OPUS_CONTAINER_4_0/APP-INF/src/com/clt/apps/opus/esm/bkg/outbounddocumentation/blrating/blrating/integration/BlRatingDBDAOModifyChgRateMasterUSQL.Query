<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BlRatingDBDAOModifyChgRateMasterUSQL">
			<desc><![CDATA[ModifyChgRateMaster]]></desc>
			<sql><![CDATA[
#if (${caflag} == 'Y') 
 UPDATE BKG_RT_HIS
 SET 
    RT_BL_TP_CD = 'N'
 WHERE   
	BKG_NO IN  
	(
	select BKG_NO from  BKG_BL_DOC  WHERE  MST_CVRD_BL_NO =  CASE WHEN LENGTH(@[bl_no])>=12 THEN SUBSTR(@[bl_no],0,12)
                                                                  ELSE SUBSTR(@[bl_no],0,10)
                                                             END
	)

#else 

 UPDATE BKG_RATE
 SET 
    RT_BL_TP_CD = 'N'
 WHERE   
	BKG_NO = 
	(
	   	select BKG_NO from  BKG_BL_DOC  WHERE  MST_CVRD_BL_NO =  CASE WHEN LENGTH(@[bl_no])>=12 THEN SUBSTR(@[bl_no],0,12)
                                                                      ELSE SUBSTR(@[bl_no],0,10)
                                                                 END
	)
#end			]]></sql>
			<params>
				<param name="bl_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
