<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="AGNCommRequestDBDAOGetChgInfo2RSQL">
			<desc><![CDATA[GetChgInfo2]]></desc>
			<sql><![CDATA[
SELECT 
    SUM(HO) AS HO,
    SUM(HD) AS HD,
    SUM(FO) AS FO,
    SUM(FD) AS FD
FROM (
    SELECT 
           CASE WHEN A.CHG_CD IN ('OIH', 'OHC') THEN 1 ELSE 0 END  AS HO,
           CASE WHEN A.CHG_CD IN ('DIH', 'DHC') THEN 1 ELSE 0 END  AS HD,
           CASE WHEN A.CHG_CD = 'OAR' THEN 1 ELSE 0 END  AS FO,
           CASE WHEN A.CHG_CD = 'DAR' THEN 1 ELSE 0 END  AS FD
      FROM BKG_CHG_RT A
     WHERE A.BKG_NO = @[bkg_no]
       AND A.CHG_CD IN ( 'OIH' , 'DIH' , 'OAR', 'DAR', 'OHC', 'DHC' )
       AND A.FRT_INCL_XCLD_DIV_CD = 'N'
        )			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
