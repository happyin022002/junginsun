<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CustomerInfoManageDBDAOModifyMoreInfoUSQL">
			<desc><![CDATA[ModifyMoreInfo]]></desc>
			<sql><![CDATA[
MERGE INTO SAM_CUST_OTR_INFO
USING DUAL
ON (
        CUST_CNT_CD = SUBSTR(@[cust_cd],1,2)
    AND CUST_SEQ = TO_NUMBER(SUBSTR(@[cust_cd],3,8))
   )
    WHEN MATCHED THEN
    UPDATE 
    SET    
       INDUS_TP_N1ST_DESC = @[indus_tp_n1st_desc]
     , MJR_N1ST_TRD_CD = @[mjr_n1st_trd_cd]
     , MJR_N2ND_TRD_CD = @[mjr_n2nd_trd_cd]
     , INDUS_TP_N2ND_DESC = @[indus_tp_n2nd_desc]
     , PRF_N2ND_REP_CMDT_CD = @[prf_n2nd_rep_cmdt_cd]
     , PRF_N1ST_REP_CMDT_CD = @[prf_n1st_rep_cmdt_cd]
     , YRY_VOL_QTY = @[yry_vol_qty]
     , CUST_SLA_FLG = @[cust_sla_flg]
     , UPD_USR_ID = @[user_id]
     , UPD_DT = SYSDATE
    WHEN NOT MATCHED THEN
     INSERT (
               CUST_CNT_CD
             , CUST_SEQ
             , INDUS_TP_N1ST_DESC
             , MJR_N1ST_TRD_CD
             , MJR_N2ND_TRD_CD
             , INDUS_TP_N2ND_DESC
             , PRF_N2ND_REP_CMDT_CD
             , PRF_N1ST_REP_CMDT_CD
             , YRY_VOL_QTY
             , CUST_SLA_FLG
             , CRE_USR_ID
             , UPD_USR_ID
             , CRE_DT
             , UPD_DT
            )
    VALUES (  
              SUBSTR(@[cust_cd],1,2)
            , TO_NUMBER(SUBSTR(@[cust_cd],3,8))
            , @[indus_tp_n1st_desc]
            , @[mjr_n1st_trd_cd]
            , @[mjr_n2nd_trd_cd]
            , @[indus_tp_n2nd_desc]
            , @[prf_n2nd_rep_cmdt_cd]
            , @[prf_n1st_rep_cmdt_cd]
            , @[yry_vol_qty]
            , @[cust_sla_flg]
            , @[user_id]
            , @[user_id]
            , SYSDATE
            , SYSDATE
        )			]]></sql>
			<params>
				<param name="cust_cd" type="12" value="" out="N"/>
				<param name="indus_tp_n1st_desc" type="12" value="" out="N"/>
				<param name="mjr_n1st_trd_cd" type="12" value="" out="N"/>
				<param name="mjr_n2nd_trd_cd" type="12" value="" out="N"/>
				<param name="indus_tp_n2nd_desc" type="12" value="" out="N"/>
				<param name="prf_n2nd_rep_cmdt_cd" type="12" value="" out="N"/>
				<param name="prf_n1st_rep_cmdt_cd" type="12" value="" out="N"/>
				<param name="yry_vol_qty" type="12" value="" out="N"/>
				<param name="cust_sla_flg" type="12" value="" out="N"/>
				<param name="user_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
