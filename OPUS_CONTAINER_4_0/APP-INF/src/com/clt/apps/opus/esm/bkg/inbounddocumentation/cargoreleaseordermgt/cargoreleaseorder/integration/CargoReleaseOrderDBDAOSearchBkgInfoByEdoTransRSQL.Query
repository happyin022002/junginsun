<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CargoReleaseOrderDBDAOSearchBkgInfoByEdoTransRSQL">
			<desc><![CDATA[Edo Trans 파일을 검색한다.]]></desc>
			<sql><![CDATA[
SELECT BK.POL_CD
     , BK.POD_CD
     , BK.DEL_CD
     , BK.BL_NO
     , SUBSTR(REPLACE(NVL(BC1.CUST_NM,' ')  ,CHR(10),' '),1,  35) AS CNEE_NM
     , SUBSTR(REPLACE(NVL(BC1.CUST_ADDR,' '),CHR(10),' '),1,  35) AS CNEE_ADDR1
     , SUBSTR(REPLACE(NVL(BC1.CUST_ADDR,' '),CHR(10),' '),36, 35) AS CNEE_ADDR2
     , SUBSTR(REPLACE(NVL(BC1.CUST_ADDR,' '),CHR(10),' '),70, 35) AS CNEE_ADDR3
     , SUBSTR(REPLACE(NVL(BC2.CUST_NM,' ')  ,CHR(10),' '),1,  35) AS NTFY_NM
     , SUBSTR(REPLACE(NVL(BC2.CUST_ADDR,' '),CHR(10),' '),1,  35) AS NTFY_ADDR1
     , SUBSTR(REPLACE(NVL(BC2.CUST_ADDR,' '),CHR(10),' '),36, 35) AS NTFY_ADDR2
     , SUBSTR(REPLACE(NVL(BC2.CUST_ADDR,' '),CHR(10),' '),70, 35) AS NTFY_ADDR3
     , SUBSTR(NVL(REPLACE(DECODE(BK.CUST_TO_ORD_FLG, 'Y', BC2.CUST_NM, BC1.CUST_NM), CHR(10),' '), ' ') , 1, 35) AS ASPH_NM           -- 실화주명
     , (SELECT /*+ INDEX_DESC ( BKDO XPKBKG_DO ) */ RCVR_BIZ_NO FROM BKG_DO BKDO WHERE BKDO.BKG_NO = BK.BKG_NO AND ROWNUM = 1 ) AS ASPH_BIZ_NO -- 실화주 사업자번호
     , DOC.CSTMS_DESC
     , TO_CHAR(DOC.PCK_QTY)  AS PCK_QTY
     , DOC.PCK_TP_CD
     , TO_CHAR(DOC.ACT_WGT)  AS ACT_WGT
     , TO_CHAR(DOC.MEAS_QTY) AS MEAS_QTY
     , DECODE((SELECT BKG_NO FROM BKG_EDO_LOG WHERE BKG_NO = BK.BKG_NO AND EDO_RSLT_CD = 'A'),'','O','U') AS BRAC -- BRAC ( 값이 있으면 'U',값이 없으면 'O') 최초 전송인지 재전송인지 구분 (O : Origin(최초),U : Update(재전송))
     , (SELECT CMDT.REP_CMDT_NM FROM MDM_REP_CMDT CMDT WHERE CMDT.REP_CMDT_CD = BK.REP_CMDT_CD) AS CMDT_DESC -- CMDT_DESC
     , BK.VSL_CD || BK.SKD_VOY_NO || BK.SKD_DIR_CD AS VSL_VD
     , CNTR.VSL_ENG_NM  AS VSL_NM
     , (SELECT /*+ INDEX_DESC ( BKDO XPKBKG_DO ) */ SELF_TRNS_FLG FROM BKG_DO BKDO WHERE BKDO.BKG_NO = BK.BKG_NO AND ROWNUM = 1 ) AS SELF_IND
FROM BKG_BOOKING  BK
   , BKG_VVD      VVD
   , MDM_VSL_CNTR CNTR
   , BKG_CUSTOMER BC1
   , BKG_CUSTOMER BC2
   , BKG_BL_DOC   DOC
WHERE VVD.BKG_NO         = BK.BKG_NO 
  AND VVD.POD_CD         = NVL(BK.PRE_RLY_PORT_CD, BK.POD_CD ) 
  AND VVD.VSL_PRE_PST_CD IN ('T', 'U')   
  AND VVD.VSL_CD         = CNTR.VSL_CD
  AND BK.BKG_NO          = BC1.BKG_NO
  AND BC1.BKG_CUST_TP_CD = 'C'
  AND BK.BKG_NO          = BC2.BKG_NO
  AND BC2.BKG_CUST_TP_CD = 'N'
  AND BK.BKG_NO          = DOC.BKG_NO  
  AND BK.BKG_NO          = @[bkg_no]			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
