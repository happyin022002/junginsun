<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CommonDBDAOSearchSaqMonthlyLoadTargetTradeBoundListRSQL">
			<desc><![CDATA[분기 냉동컨테이너 RHQ login Load Target 조회시 Trd_cd & Dir_cd 조회]]></desc>
			<sql><![CDATA[
SELECT  DISTINCT																			                      
        DECODE(@[trdCd], '', TRD_CD, DIR_CD)    AS CODE ,                         
        DECODE(@[trdCd], '', TRD_CD, dir_cd)    AS TEXT                           
FROM    SAQ_MON_LOD_TGT_OFC A                                              
WHERE   1 = 1                                                              
AND     A.BSE_YR        = @[year]                                                
AND     A.BSE_QTR_CD    = @[quarter]                                                
AND     A.SLS_RHQ_CD    = (SELECT DISTINCT                                 
							         N2ND_PRNT_OFC_CD                         
							  FROM   SAQ_ORGANIZATION_V                       
					          WHERE  1 = 1                                    
					          AND    OFC_CD  = @[ofcCd]							  
							 )                                                
AND     TRD_CD          LIKE @[trdCd] || '%'  			]]></sql>
			<params>
				<param name="trdCd" type="12" value="" out="N"/>
				<param name="year" type="12" value="" out="N"/>
				<param name="quarter" type="12" value="" out="N"/>
				<param name="ofcCd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
