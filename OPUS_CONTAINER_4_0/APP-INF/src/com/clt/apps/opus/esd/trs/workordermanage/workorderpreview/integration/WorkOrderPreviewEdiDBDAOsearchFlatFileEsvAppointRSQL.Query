<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="WorkOrderPreviewEdiDBDAOsearchFlatFileEsvAppointRSQL">
			<desc><![CDATA[NYK-Hawk_FFile(ESV_N)-JOEDI_EU_OUTBOUND
{APPOINTMENT]]></desc>
			<sql><![CDATA[
SELECT T1.* 
FROM 
(
SELECT '' APPT_REF
      ,SUBSTR(D.DOR_ADDR, 1, 50) AS APPT_NM
      ,SUBSTR(D.DOR_ADDR, 51, 50) APPT_ADD1
      ,SUBSTR(D.DOR_ADDR, 101, 50) APPT_ADD2
      ,SUBSTR(D.DOR_ADDR, 151, 50) APPT_ADD3
      ,'' AS APPT_ADD4
      ,B.LOC_LOCL_LANG_NM AS APPT_CITY
      ,NVL(C.STE_NM, LTRIM(REGEXP_SUBSTR(B.LOC_NM, '+[^,]+', 1, 2))) AS APPT_SATE
      ,SUBSTR(D.LOC_CD, 1, 2) AS APPT_CNT
      ,DECODE(D.TRO_SUB_SEQ, SO.TRO_SUB_SEQ, SO.DOR_PST_CD, D.DOR_ZIP_ID) AS APPT_POSTAL
      ,'' AS APPT_TZ
      ,DECODE(D.TRO_SUB_SEQ, SO.TRO_SUB_SEQ, SO.CNTC_PSON_NM, D.CNTC_PSON_NM) AS APPT_CONTACT_NM
      ,DECODE(D.TRO_SUB_SEQ, SO.TRO_SUB_SEQ, SO.CNTC_PSON_PHN_NO, D.CNTC_PHN_NO) AS APPT_CONTACT_TE
      ,'' AS APPT_COMMENT
      ,NVL(TRIM(D.LOD_REF_NO), '') AS LOAD_REF
      ,TRIM(REPLACE(REPLACE(SO.SPCL_INSTR_RMK, CHR(13), ''), CHR(10), '')) AS SPCL_INSTR
      ,TO_CHAR(DECODE(NVL(SO.MLT_STOP_DE_FLG, 'N'), 'Y', D.ARR_DT, TMP.DOR_NOD_PLN_DT), 'YYYYMMDDHH24MISS') AS APPT_PLN_DT
      ,'' AS APPT_ACTL_INDT
      ,'' AS APPT_ACTL_OUTDT
      ,DECODE (SO.DOR_SVC_TP_CD,'UD', 'Undecided','LL', 'Live Load','LU', 'Live Unload','ST', 'Street Turn','DP', 'Drop and Pick', 'Delivery') AS APPT_TYPE
  FROM TRS_TRSP_WRK_ORD_PRV_TMP TMP
      ,TRS_TRSP_SVC_ORD SO
      ,BKG_EUR_TRO_DTL  D
      ,MDM_LOCATION     B
      ,MDM_STATE        C
 WHERE TMP.WO_PRV_GRP_SEQ = @[wo_prv_grp_seq]
   AND TMP.WO_ISS_NO = @[wo_iss_no]
   AND SO.TRSP_SO_OFC_CTY_CD = @[trsp_so_ofc_cty_cd]
   AND SO.TRSP_SO_SEQ = @[trsp_so_seq]
   AND TMP.TRSP_SO_OFC_CTY_CD = SO.TRSP_SO_OFC_CTY_CD
   AND TMP.TRSP_SO_SEQ = SO.TRSP_SO_SEQ
   AND SO.TRSP_COST_DTL_MOD_CD = 'DR'
   AND SO.BKG_NO = D.BKG_NO
   AND SO.TRSP_BND_CD = D.IO_BND_CD
   AND SO.TRO_SEQ = D.TRO_SEQ
   AND D.LOC_CD = B.LOC_CD(+)
   AND B.CNT_CD = C.CNT_CD(+)
   AND B.STE_CD = C.STE_CD(+)
 ORDER BY D.TRO_SUB_SEQ
) T1 RIGHT OUTER JOIN DUAL
  ON 1 = 1			]]></sql>
			<params>
				<param name="wo_prv_grp_seq" type="12" value="" out="N"/>
				<param name="wo_iss_no" type="12" value="" out="N"/>
				<param name="trsp_so_ofc_cty_cd" type="12" value="" out="N"/>
				<param name="trsp_so_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
