<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PoolChassisDBDAOConfirmInvoicePoolChassisUSQL">
			<desc><![CDATA[Invoice 상태를 Confirm 상태로 변경]]></desc>
			<sql><![CDATA[
UPDATE TRS_TRSP_INV_WRK
   SET TRSP_INV_AUD_STS_CD = 'CF'
      ,UPD_USR_ID          = @[usr_id]
      ,INV_CFM_DT          = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(CRE_OFC_CD)
      ,UPD_DT              = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(CRE_OFC_CD)
      ,LOCL_UPD_DT         = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(CRE_OFC_CD)
 WHERE INV_NO = @[inv_no]
   AND INV_VNDR_SEQ = @[paymt_sp_cd]			]]></sql>
			<params>
				<param name="usr_id" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
				<param name="paymt_sp_cd" type="2" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
