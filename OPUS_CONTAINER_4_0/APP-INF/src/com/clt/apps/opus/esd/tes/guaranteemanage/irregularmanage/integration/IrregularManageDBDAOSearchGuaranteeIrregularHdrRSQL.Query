<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="IrregularManageDBDAOSearchGuaranteeIrregularHdrRSQL">
			<desc><![CDATA[Guarantee 에서 Irregular 등록할 Header 정보 조회]]></desc>
			<sql><![CDATA[
SELECT 
		  GH.GNTE_NO
		, GH.OFC_CD
		, GH.GNTE_TP_CD
		, GH.CURR_CD
		, GH.BKG_STS_CD
		, IH.IRR_TP_CD
		, IH.RESPB_PTY_NM
		, IH.IRR_RSN_RMK
		, IH.IRR_PRVT_RMK
		, IH.IRR_TTL_AMT
		, IH.IRR_STF_ERR_FLG
		, IH.IRR_SYS_ERR_FLG
		, IH.IRR_CHSS_SHTG_FLG
		, IH.IRR_OTR_FLG
		, IH.IRR_LATE_DIS_FLG
		, IH.IRR_LACK_OF_FLW_FLG
		, IH.IRR_CXL_WO_FLG
		, IH.IRR_EQ_SHTG_FLG
		, IH.OP_COST_OCP_FLG
		, IH.OP_COST_TNK_ORD_FLG
		, IH.OP_COST_TEAM_TRKG_FLG
		, IH.OP_COST_XTRA_FT_FLG
		, IH.OP_COST_SPTG_ICRZ_FLG
		, IH.OP_COST_OTR_TML_CHSS_FLG
		, IH.OP_COST_MNR_FLG
		, IH.OP_COST_TRI_AXL_FLG
		, IH.DELT_FLG
		, GH.CRE_USR_ID
		, TO_CHAR(GLOBALDATE_PKG.TIME_CONV_OFC_FNC((SELECT OFC_CD FROM TABLE (COM_OfficeCodeMgr_PKG.COM_getOfficeCodeList_FNC('000001', 'TES'))), IH.CRE_DT, IH.OFC_CD), 'YYYY-MM-DD') CRE_DT
		, GH.UPD_USR_ID
		, TO_CHAR(GLOBALDATE_PKG.TIME_CONV_OFC_FNC((SELECT OFC_CD FROM TABLE (COM_OfficeCodeMgr_PKG.COM_getOfficeCodeList_FNC('000001', 'TES'))), IH.UPD_DT, IH.OFC_CD), 'YYYY-MM-DD') UPD_DT
		, GH.DEPT_NO
FROM	TES_GNTE_HDR GH
		, TES_IRR_HDR IH
WHERE	1	= 1
AND     GH.GNTE_NO  = IH.GNTE_NO(+)
#if (${gnte_no} != '') 
AND		GH.GNTE_NO	= @[gnte_no]
#end
ORDER BY IH.GNTE_NO			]]></sql>
			<params>
				<param name="gnte_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
