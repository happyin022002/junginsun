<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvOfcAtrtMgmtDBDAOSearchTrsTrspOfcCdMdmOrganizationRSQL">
			<desc><![CDATA[invoice office 코드조회 mdm organization의 ofc_eng_name 과 함께 코드와 영어이름 등등을 조회하게 테이블 조인을 하는 쿼리]]></desc>
			<sql><![CDATA[
SELECT A.INV_OFC_CD, 
       (SELECT OFC_ENG_NM FROM MDM_ORGANIZATION WHERE OFC_CD = A.INV_OFC_CD) AS INV_OFC_ENG_NM, 
       A.OFC_CD,
       (SELECT OFC_ENG_NM FROM MDM_ORGANIZATION WHERE OFC_CD = A.OFC_CD) AS OFC_ENG_NM, 
       A.CRE_USR_ID,
       A.UPD_USR_ID,
       TO_CHAR(A.CRE_DT, 'YYYY.MM.DD HH24:MI:SS') AS CRE_DT,
       TO_CHAR(A.UPD_DT, 'YYYY.MM.DD HH24:MI:SS') AS UPD_DT
  FROM TRS_TRSP_INV_OFC A
WHERE 1=1
#if (${inv_ofc_cd} != '')
   AND A.INV_OFC_CD IN (@[inv_ofc_cd])
#end

#if (${ofc_cd} != '')
   AND A.OFC_CD IN (@[ofc_cd])
#end			]]></sql>
			<params>
				<param name="inv_ofc_cd" type="12" value="5" out="N"/>
				<param name="ofc_cd" type="12" value="5" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
