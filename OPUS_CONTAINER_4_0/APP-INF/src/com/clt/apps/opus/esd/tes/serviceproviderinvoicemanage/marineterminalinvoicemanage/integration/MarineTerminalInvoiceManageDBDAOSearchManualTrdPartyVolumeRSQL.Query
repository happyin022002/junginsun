<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="MarineTerminalInvoiceManageDBDAOSearchManualTrdPartyVolumeRSQL">
			<desc><![CDATA[SearchManualTrdPartyVolume]]></desc>
			<sql><![CDATA[
SELECT DISTINCT R.CNTR_NO,
					R.CNTR_TPSZ_CD,
					T.TML_IF_OFC_CD,  --TRD KEY
					T.TML_IF_SEQ,  --TRD KEY
					R.TML_SO_DTL_SEQ,
					@[lgs_cost_cd]	LGS_COST_CD,
					DECODE(NVL(T.CNTR_NO,'0'),'0','0','1') CHK,
					H.TML_INV_TP_CD,
					H.INV_NO,
					H.VNDR_SEQ,
					H.YD_CD,
					H.TML_SO_OFC_CTY_CD,
					H.TML_SO_SEQ,
					R.BKG_NO,
					--R.BKG_NO_SPLIT,
					T.BL_NO,
					--T.BL_NO_TP,
					--T.BL_NO_CHK,
					T.IO_BND_CD,
					H.CURR_CD,
					H.ERR_INV_NO,
					T.IF_AMT,
					T.IF_RMK,
					T.VNDR_CUST_DIV_CD,
					T.VNDR_CNT_CD,
					T.N3PTY_VNDR_SEQ,
					T.CUST_CNT_CD,
					T.CUST_SEQ,
					T.N3PTY_OFC_CD,
			CASE WHEN T.N3PTY_BIL_TP_CD IS NULL THEN
/*           TPB Billing case (AW)에 대한 IF 오류 수정  ( 2009-09-18 )	
			 TPB_N3RD_PTY_BIL_TP 와 조인해서 사용하지 않는 코드일 경우 가져오지 않고 Default 는 없는것으로 수정. 
				(SELECT
						CASE WHEN A.CNT IS NOT NULL AND A.CNT>=1 THEN A.N3PTY_BIL_CS_CD
						ELSE 'CY' END N3PTY_BIL_CS_CD
				 FROM (
						SELECT
							(SELECT COUNT(N3PTY_BIL_CS_CD) FROM TES_TML_N3RD_PTY_COST  WHERE LGS_COST_CD=[lgs_cost_cd]) CNT,
							(SELECT N3PTY_BIL_CS_CD FROM TES_TML_N3RD_PTY_COST WHERE LGS_COST_CD=[lgs_cost_cd]) N3PTY_BIL_CS_CD
						FROM DUAL
				 ) A)
*/
				(SELECT  CASE WHEN CNT IS NOT NULL AND CNT >= 1
				THEN N3PTY_BIL_CS_CD END N3PTY_BIL_CS_CD
				FROM    (
						SELECT  COUNT(N3PTY_BIL_CS_CD) CNT, N3PTY_BIL_CS_CD
						FROM    TES_TML_N3RD_PTY_COST A, TPB_N3RD_PTY_BIL_TP B
						WHERE   1   = 1
						AND     A.N3PTY_BIL_CS_CD   = B.N3PTY_BIL_TP_CD
						AND     A.LGS_COST_CD       = @[lgs_cost_cd]
						AND     B.ACT_FLG           = 'Y'
						AND     B.N3PTY_BIL_TP_CD   != 'JO'
						GROUP BY N3PTY_BIL_CS_CD
						)
				)
			ELSE T.N3PTY_BIL_TP_CD
			END N3PTY_BIL_TP_CD,
			CASE
			WHEN T.VNDR_CUST_DIV_CD = 'C' THEN ''||T.CUST_SEQ
			WHEN T.VNDR_CUST_DIV_CD = 'S' THEN T.N3PTY_OFC_CD
			WHEN T.VNDR_CUST_DIV_CD = 'V' THEN ''||T.N3PTY_VNDR_SEQ
			END POP_VALUE
	FROM TES_TML_SO_HDR H, TES_TML_SO_RVIS_LIST R, TES_N3RD_PTY_IF T
	WHERE  H.TML_SO_OFC_CTY_CD = R.TML_SO_OFC_CTY_CD
	AND    H.TML_SO_SEQ = R.TML_SO_SEQ
	AND    R.TML_SO_OFC_CTY_CD = T.TML_SO_OFC_CTY_CD(+)
	AND    R.TML_SO_SEQ = T.TML_SO_SEQ(+)
	AND    R.TML_SO_DTL_SEQ = T.TML_SO_DTL_SEQ(+)
	AND    H.TML_SO_OFC_CTY_CD = @[tml_so_ofc_cty_cd]
	AND    H.TML_SO_SEQ = @[tml_so_seq]
	AND    R.TML_SO_DTL_SEQ = @[tml_so_dtl_seq]
	AND    R.VSL_CD     = SUBSTR(@[vvd],1,4)
	AND    R.SKD_VOY_NO = SUBSTR(@[vvd],5,4)
	AND    R.SKD_DIR_CD = SUBSTR(@[vvd],9,1)
	AND    R.LGS_COST_CD = @[lgs_cost_cd]
	AND    R.LGS_COST_CD = T.LGS_COST_CD(+)
	AND    R.CNTR_NO = T.CNTR_NO(+)
	AND    NVL(T.CXL_FLG,'N') = 'N'
	ORDER BY R.CNTR_NO, R.CNTR_TPSZ_CD, T.IO_BND_CD			]]></sql>
			<params>
				<param name="lgs_cost_cd" type="12" value="" out="N"/>
				<param name="tml_so_ofc_cty_cd" type="12" value="" out="N"/>
				<param name="tml_so_seq" type="12" value="" out="N"/>
				<param name="tml_so_dtl_seq" type="12" value="" out="N"/>
				<param name="vvd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
