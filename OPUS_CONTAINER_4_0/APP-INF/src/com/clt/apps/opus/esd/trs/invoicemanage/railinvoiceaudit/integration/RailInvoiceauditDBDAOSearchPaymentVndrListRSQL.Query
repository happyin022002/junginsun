<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RailInvoiceauditDBDAOSearchPaymentVndrListRSQL">
			<desc><![CDATA[Rail Invoice Payment Vendor 정보 조회]]></desc>
			<sql><![CDATA[
##
#if (${vndr_tp} != 'P')
SELECT V.VNDR_SEQ
      ,V.VNDR_LGL_ENG_NM
      ,(SELECT COUNT(*)
          FROM AP_INV_NO_CHK_V
         WHERE INV_NO = @[invNo]
           AND VNDR_SEQ = V.VNDR_SEQ) FLAG
  FROM MDM_VENDOR V
 WHERE V.VNDR_SEQ = @[railRoadCode]
#else
SELECT V.VNDR_SEQ
      ,V.VNDR_LGL_ENG_NM
      ,(SELECT COUNT(*)
          FROM AP_INV_NO_CHK_V
         WHERE INV_NO = @[invNo]
           AND VNDR_SEQ = V.PRNT_VNDR_SEQ) FLAG
  FROM MDM_VENDOR V
 WHERE V.VNDR_SEQ = (SELECT PRNT_VNDR_SEQ FROM MDM_VENDOR WHERE VNDR_SEQ = @[railRoadCode])
#end			]]></sql>
			<params>
				<param name="invNo" type="12" value="" out="N"/>
				<param name="railRoadCode" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
