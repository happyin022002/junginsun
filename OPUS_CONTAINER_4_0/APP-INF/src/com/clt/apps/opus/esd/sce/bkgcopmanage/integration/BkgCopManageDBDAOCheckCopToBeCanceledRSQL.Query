<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="BkgCopManageDBDAOCheckCopToBeCanceledRSQL">
			<desc><![CDATA[container detach �맆 �븣 �샇異쒗븯�뿬 COP 媛� bkg qty 蹂대떎 �뜑 珥덇낵�릺�뼱 議댁옱�븷 寃쎌슦�뿉�뒗 container detach �맂 COP 瑜� cancel �떆�궓�떎.]]></desc>
			<sql><![CDATA[
WITH RMN_COP AS (
    SELECT A.BKG_NO,
           B.CNTR_TPSZ_CD,
           COUNT(*) AS CNTR_QTY
      FROM (SELECT BKG_NO,
                   COP_NO,
                   CNTR_TPSZ_CD
              FROM SCE_COP_HDR
             WHERE COP_NO = @[cop_no]
           ) A,
           SCE_COP_HDR B,
           BKG_BOOKING C,
           SCE_COP_CNTR_REPO_RULE D
     WHERE A.BKG_NO = B.BKG_NO
       AND A.BKG_NO = C.BKG_NO
       AND A.CNTR_TPSZ_CD = D.CNTR_TPSZ_CD (+)
       AND B.COP_NO != @[cop_no]
       AND B.COP_STS_CD != 'X'
       AND (CASE WHEN C.FLEX_HGT_FLG = 'Y' AND B.CNTR_TPSZ_CD = D.PROV_CNTR_TPSZ_CD AND A.CNTR_TPSZ_CD != B.CNTR_TPSZ_CD THEN 'TRUE' 
                 WHEN A.CNTR_TPSZ_CD = B.CNTR_TPSZ_CD THEN 'TRUE' 
                 ELSE 'FALSE' 
             END) = 'TRUE'
       AND NOT EXISTS (SELECT 'X' FROM SCE_PLN_SO_LIST
                        WHERE COP_NO = @[cop_no]
                          AND TRSP_SO_STS_CD IN ('C','R','I')
                      )
     GROUP BY A.BKG_NO, B.CNTR_TPSZ_CD 
) 
SELECT CASE WHEN SUM(CEIL(B.OP_CNTR_QTY)) <= MAX(D.SUM_CNTR_QTY) THEN 'CANCEL' 
            ELSE 'REMAIN' 
        END AS CHK_RSLT
  FROM BKG_QUANTITY B,
       RMN_COP C,
       (SELECT SUM(CNTR_QTY) AS SUM_CNTR_QTY
          FROM RMN_COP
       ) D
 WHERE B.BKG_NO = C.BKG_NO
   AND B.CNTR_TPSZ_CD = C.CNTR_TPSZ_CD			]]></sql>
			<params>
				<param name="cop_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
