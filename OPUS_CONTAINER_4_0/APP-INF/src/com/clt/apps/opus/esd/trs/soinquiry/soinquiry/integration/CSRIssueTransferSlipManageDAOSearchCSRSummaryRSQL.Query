<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CSRIssueTransferSlipManageDAOSearchCSRSummaryRSQL">
			<desc><![CDATA[CSR 생성 대상 리스트 조회]]></desc>
			<sql><![CDATA[
SELECT																									
			VNDR_NO																							
		,	VNDR_SEQ_NAME																					
		,	COUNT(VNDR_NO) CNT_INV																			
		,	PAY_TERM_TP_CD																					
		,	CURR_CD																							
		,	SUM(TOTAL_AMT) TOTAL_AMT																		
		,	GEN_PAY_TERM_CD    																				
		, 	DECODE(GEN_PAY_TERM_CD, 'IN' , TO_CHAR(MAX(INV_ISS_DT) + 5 , 'YYYYMMDD')      					
 			                      , 'OUT', TO_CHAR(MAX(INV_ISS_DT) + 60, 'YYYYMMDD')     					
 			                      , 'O60', TO_CHAR(MAX(INV_ISS_DT)	   , 'YYYYMMDD')						
 			                      , 'O45', TO_CHAR(MAX(INV_ISS_DT)	   , 'YYYYMMDD')						
 			                      , TO_CHAR(MAX(INV_ISS_DT) + TO_NUMBER(GEN_PAY_TERM_CD), 'YYYYMMDD'))      
	 		PAYMENT_DUE_DT		         																	
		,	SO_OFC_CD		         																		

		,   (SELECT Y.CONTI_CD                 
               FROM MDM_ORGANIZATION X        
                   ,MDM_LOCATION Y            
              WHERE X.LOC_CD = Y.LOC_CD       
                AND X.OFC_CD = SO_OFC_CD      
        )  CONTI_CD                           
 FROM      (                                                                               
			SELECT																			
						W.INV_NO															
					,	W.INV_VNDR_SEQ VNDR_NO												
					,	M.VNDR_LGL_ENG_NM VNDR_SEQ_NAME										
					,	M.PAY_TERM_TP_CD													
					,	W.INV_CURR_CD CURR_CD												
					,	W.INV_TTL_AMT TOTAL_AMT												
					,	M.GEN_PAY_TERM_CD                                                   
     				,	CASE WHEN LOC.CONTI_CD != 'M'										
     						 THEN W.CRE_OFC_CD                     							
     						 ELSE ORD.CRE_OFC_CD                							
     				    END  SO_OFC_CD							                            
     				,	W.INV_ISS_DT														
         FROM          TRS_TRSP_INV_WRK		W											
					,	MDM_VENDOR				M											
					,	TRS_TRSP_SVC_ORD		ORD											
					,	MDM_LOCATION		    LOC											
         WHERE			W.CRE_OFC_CD						= @[costOfcCd]

#if(${invCfmDt} != '')
		  AND			TO_CHAR(W.INV_CFM_DT,'YYYY-MM-DD')	= @[invCfmDt]

#if(${vndrSeq} != '')
		  AND			W.INV_VNDR_SEQ						= @[vndrSeq]

         AND			W.TRSP_INV_AUD_STS_CD				= 'CF'                          
         AND			NVL(W.INV_HLD_FLG	, ' ')			<> 'T'                          
         AND			NVL(W.DELT_FLG		, 'N')			= 'N'                           
         AND      		NVL(ORD.DELT_FLG	, 'N')       	= 'N'                           
         AND			W.INV_VNDR_SEQ						= M.VNDR_SEQ                    
         AND			ORD.INV_NO							= W.INV_NO                      
         AND			ORD.INV_VNDR_SEQ					= W.INV_VNDR_SEQ                
         AND			SUBSTR(ORD.TO_NOD_CD,1,5)			= LOC.LOC_CD                    

         GROUP BY		W.INV_NO															
					,	W.INV_VNDR_SEQ														
					,	M.VNDR_LGL_ENG_NM													
					,	W.INV_CURR_CD														
					,	M.GEN_PAY_TERM_CD													
					,	M.PAY_TERM_TP_CD													
					,	W.INV_TTL_AMT														
					,	W.INV_ISS_DT														
     				,	CASE WHEN LOC.CONTI_CD != 'M'										
     						 THEN W.CRE_OFC_CD                     							
     						 ELSE ORD.CRE_OFC_CD                							
     				    END         							                            
			UNION ALL																		

			SELECT																				
						W.INV_NO																
					,	W.INV_VNDR_SEQ 						VNDR_NO								
					,	M.VNDR_LGL_ENG_NM 					VNDR_SEQ_NAME						
					,	M.PAY_TERM_TP_CD					PAY_TERM_TP_CD						
					,	W.INV_CURR_CD 						CURR_CD								
					,	W.INV_TTL_AMT * (-1)				TOTAL_AMT		/* REFUND (-1)	*/	
					,	M.GEN_PAY_TERM_CD       			GEN_PAY_TERM_CD                 	
     				,	NVL(ORD.CRE_OFC_CD, W.CRE_OFC_CD) 	SO_OFC_CD							
     				,	W.INV_ISS_DT						INV_ISS_DT							
			FROM        TRS_TRSP_INV_WRK					W									
					,	MDM_VENDOR							M									
					,	TRS_TRSP_RFND_INV					ORD									
			WHERE		W.CRE_OFC_CD						= @[costOfcCd]

#if(${invCfmDt} != '')
			AND			TO_CHAR(W.INV_CFM_DT,'YYYY-MM-DD')	= @[invCfmDt]

#if(${vndrSeq} != '')
			AND			W.INV_VNDR_SEQ						= @[vndrSeq]

			AND			W.TRSP_INV_AUD_STS_CD				= 'CF'                          
			AND			NVL(W.INV_HLD_FLG,' ')				<> 'T'                          
			AND			NVL(W.DELT_FLG,'N')					= 'N'                           
			AND     	NVL(ORD.DELT_FLG,'N')       		= 'N'                           
			AND			W.INV_VNDR_SEQ						= M.VNDR_SEQ                    
			AND			ORD.INV_NO							= W.INV_NO                      
			AND			ORD.INV_VNDR_SEQ					= W.INV_VNDR_SEQ                

           GROUP BY    W.INV_NO															
					,   W.INV_VNDR_SEQ														
					,   W.CRE_OFC_CD														
					,	M.VNDR_LGL_ENG_NM													
					,	W.INV_CURR_CD														
					,	M.GEN_PAY_TERM_CD													
					,	M.PAY_TERM_TP_CD													
					,	ORD.CRE_OFC_CD														
					,	W.INV_TTL_AMT														
					,	W.INV_ISS_DT														

			UNION ALL																		

			SELECT		DISTINCT															
						W.INV_NO															
					,	W.INV_VNDR_SEQ														
					,	M.VNDR_LGL_ENG_NM													
					,	M.PAY_TERM_TP_CD                                                    
					,	W.INV_CURR_CD														
					,	W.INV_TTL_AMT														
					,	M.GEN_PAY_TERM_CD                                                   
					,	NVL(ORD.CRE_OFC_CD, W.CRE_OFC_CD) SO_OFC_CD									
     				,	W.INV_ISS_DT														
         FROM          TRS_TRSP_RAIL_INV_WRK	W											
					,	TRS_TRSP_RAIL_INV_DTL  	DTL											
					,	MDM_VENDOR				M											
					,	TRS_TRSP_RAIL_BIL_ORD ORD											
					,	TRS_TRSP_RAIL_BIL_VNDR_SET VNDR										
         WHERE			W.CRE_OFC_CD							= @[costOfcCd]

#if(${invCfmDt} != '')
			AND			TO_CHAR(W.INV_CFM_DT,'YYYY-MM-DD')		= @[invCfmDt]

#if(${vndrSeq} != '')
			AND			W.INV_VNDR_SEQ							= @[vndrSeq]


			AND			W.TRSP_INV_AUD_STS_CD					= 'CF'                      
			AND			NVL(W.INV_HLD_FLG	, ' ')				<> 'T'                      
			AND			NVL(W.DELT_FLG		, 'N')				= 'N'                       
			AND     	NVL(ORD.DELT_FLG	, 'N')     			= 'N'                       
			AND			W.INV_VNDR_SEQ							= M.VNDR_SEQ                
			AND     	W.INV_NO                    			= DTL.INV_NO          				
			AND     	W.INV_VNDR_SEQ              			= DTL.INV_VNDR_SEQ         			
			AND     	DTL.INV_NO                  			= VNDR.INV_NO               (+)     
			AND    		DTL.INV_VNDR_SEQ            			= VNDR.INV_VNDR_SEQ         (+)     
			AND     	DTL.TRSP_SO_OFC_CTY_CD      			= VNDR.TRSP_SO_OFC_CTY_CD   (+)     
			AND     	DTL.TRSP_SO_SEQ             			= VNDR.TRSP_SO_SEQ          (+)     
			AND     	DTL.SUB_INV_SEQ             			= VNDR.SUB_RAIL_SEQ         (+)     
			AND     	DTL.TRSP_SO_OFC_CTY_CD      			= ORD.TRSP_SO_OFC_CTY_CD    (+)     
			AND     	DTL.TRSP_SO_SEQ             			= ORD.TRSP_SO_SEQ           (+)     
			GROUP BY	W.INV_NO															
					,   W.INV_VNDR_SEQ														
					,   W.CRE_OFC_CD														
					,	M.VNDR_LGL_ENG_NM													
					,	W.INV_CURR_CD														
					,	M.GEN_PAY_TERM_CD													
					,	M.PAY_TERM_TP_CD													
					,	ORD.CRE_OFC_CD														
					,	W.INV_TTL_AMT														
					,	W.INV_ISS_DT														
UNION ALL																		
     SELECT                                                                    
           W.INV_NO                                                            
         , W.INV_VNDR_SEQ                      VNDR_NO                         
         , M.VNDR_LGL_ENG_NM                   VNDR_SEQ_NAME                   
         , M.PAY_TERM_TP_CD                    PAY_TERM_TP_CD                  
         , W.INV_CURR_CD                       CURR_CD                         
         , W.INV_TTL_AMT                       TOTAL_AMT                       
         , M.GEN_PAY_TERM_CD                   GEN_PAY_TERM_CD                      
         , NVL(ORD.CRE_OFC_CD, W.CRE_OFC_CD)   SO_OFC_CD                       
         , W.INV_ISS_DT            INV_ISS_DT                                  
     FROM  TRS_TRSP_INV_WRK          W                                         
         , MDM_VENDOR                M                                         
         , TRS_TRSP_POOL_CHSS_INV          ORD                          
     WHERE W.CRE_OFC_CD                = @[costOfcCd]

#if(${invCfmDt} != '')
			AND	TO_CHAR(W.INV_CFM_DT,'YYYY-MM-DD')	= @[invCfmDt]

#if(${vndrSeq} != '')
			AND	W.INV_VNDR_SEQ						= @[vndrSeq]


       AND W.TRSP_INV_AUD_STS_CD       = 'CF'                              
       AND NVL(W.INV_HLD_FLG,' ')     <> 'T'                               
       AND NVL(W.DELT_FLG,'N')         = 'N'                             
       AND NVL(ORD.DELT_FLG,'N')       = 'N'                                           
       AND W.INV_VNDR_SEQ              = M.VNDR_SEQ                     
       AND ORD.INV_NO                  = W.INV_NO                       
       AND ORD.INV_VNDR_SEQ            = W.INV_VNDR_SEQ                 
  GROUP BY W.INV_NO                                                     
         , W.INV_VNDR_SEQ                                               
         , W.CRE_OFC_CD                                                 
         , M.VNDR_LGL_ENG_NM                                             
         , W.INV_CURR_CD                                                 
         , M.GEN_PAY_TERM_CD                                             
         , M.PAY_TERM_TP_CD                                              
         , ORD.CRE_OFC_CD                                                
         , W.INV_TTL_AMT                                                 
         , W.INV_ISS_DT                                                  	
			) A																				

	GROUP BY	SO_OFC_CD																	
			,	CURR_CD																		
			,	VNDR_NO																		
			,	VNDR_SEQ_NAME																
			,	GEN_PAY_TERM_CD																
			,	PAY_TERM_TP_CD			]]></sql>
			<params>
				<param name="costOfcCd" type="12" value="" out="N"/>
				<param name="invCfmDt" type="12" value="" out="N"/>
				<param name="vndrSeq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
