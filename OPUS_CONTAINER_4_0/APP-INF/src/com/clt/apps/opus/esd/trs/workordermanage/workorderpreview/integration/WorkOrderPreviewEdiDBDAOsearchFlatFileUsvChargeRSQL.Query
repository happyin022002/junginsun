<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="WorkOrderPreviewEdiDBDAOsearchFlatFileUsvChargeRSQL">
			<desc><![CDATA[CHARGE]]></desc>
			<sql><![CDATA[
SELECT T1.* 
FROM 
(
	SELECT STOP_NO
		  ,SVC_CD
		  ,AMOUNT
		  ,CURRENCY
		  ,TRIM(TO_CHAR(CASE WHEN FUEL_RTO = 0 THEN ROUND(SCG_AMT * 100 / NULLIF(AMOUNT, 0), 2) ELSE FUEL_RTO END, '999999990.90')) FSC_PERCENT
		  ,'true' AS BILLABLE
		  ,'' AS CHARGE_REF
		  ,'' AS BILLTO
		  ,'' AS CHG_COMMENT
	  FROM (SELECT '' STOP_NO
				  ,'TRCOST' AS SVC_CD
				  ,DECODE((NVL(SO.BZC_AMT, 0) + NVL(SO.NEGO_AMT, 0)), 0, 0.01, NVL(SO.BZC_AMT, 0) + NVL(SO.NEGO_AMT, 0)) AS AMOUNT
				  ,SO.CURR_CD AS CURRENCY
				  ,NVL(D.SCG_AMT, 0) SCG_AMT
				  ,NVL(D.FUEL_RTO, 0) FUEL_RTO
			  FROM TRS_TRSP_SVC_ORD SO
				  ,TRS_TRSP_SCG_DTL D
			 WHERE SO.TRSP_SO_OFC_CTY_CD = @[trsp_so_ofc_cty_cd]
			   AND SO.TRSP_SO_SEQ = @[trsp_so_seq]
			   AND NVL2(@[cntr_no], SO.EQ_NO, 'XX') = NVL2(@[cntr_no], @[cntr_no], 'XX')
			   AND NVL2(@[cntr_tpsz], SO.EQ_TPSZ_CD, 'XX') = NVL2(@[cntr_tpsz], @[cntr_tpsz], 'XX')              
			   AND SO.TRSP_SO_OFC_CTY_CD = D.TRSP_SO_OFC_CTY_CD(+)
			   AND SO.TRSP_SO_SEQ = D.TRSP_SO_SEQ(+)
			   AND SUBSTR(D.LGS_COST_CD(+), 3, 2) = 'FU')
	UNION ALL
	SELECT '' STOP_NO
		  ,DECODE(SUBSTR(DTL.LGS_COST_CD, 3, 2), 'FU', 'SCFAAL', DTL.LGS_COST_CD)  AS SVC_CD
		  ,DTL.SCG_AMT AS AMOUNT
		  ,SO.CURR_CD AS CURRENCY
		  ,DECODE(SUBSTR(DTL.LGS_COST_CD, 3, 2), 'FU', TO_CHAR(DTL.FUEL_RTO), '') AS FSC_PERCENT
		  ,'true' AS BILLABLE
		  ,'' AS CHARGE_REF
		  ,'' AS BILLTO
		  ,'' AS CHG_COMMENT
	  FROM TRS_TRSP_SVC_ORD SO
		  ,TRS_TRSP_SCG_DTL DTL
	 WHERE SO.TRSP_SO_OFC_CTY_CD = DTL.TRSP_SO_OFC_CTY_CD
	   AND SO.TRSP_SO_SEQ = DTL.TRSP_SO_SEQ
	   AND SO.TRSP_SO_OFC_CTY_CD = @[trsp_so_ofc_cty_cd]
	   AND SO.TRSP_SO_SEQ = @[trsp_so_seq]
	   AND NVL2(@[cntr_no], SO.EQ_NO, 'XX') = NVL2(@[cntr_no], @[cntr_no], 'XX')
	   AND NVL2(@[cntr_tpsz], SO.EQ_TPSZ_CD, 'XX') = NVL2(@[cntr_tpsz], @[cntr_tpsz], 'XX')
	   AND SUBSTR(DTL.LGS_COST_CD(+), 3, 2) <> 'FU'
) T1 RIGHT OUTER JOIN DUAL
  ON 1 = 1			]]></sql>
			<params>
				<param name="trsp_so_ofc_cty_cd" type="12" value="" out="N"/>
				<param name="trsp_so_seq" type="12" value="" out="N"/>
				<param name="cntr_no" type="12" value="" out="N"/>
				<param name="cntr_tpsz" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
