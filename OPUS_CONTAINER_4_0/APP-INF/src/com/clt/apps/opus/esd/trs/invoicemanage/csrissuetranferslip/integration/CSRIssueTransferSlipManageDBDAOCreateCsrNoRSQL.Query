<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CSRIssueTransferSlipManageDBDAOCreateCsrNoRSQL">
			<desc><![CDATA[CSR 번호를 채번]]></desc>
			<sql><![CDATA[
SELECT '12' || @[CSR_TYPE] 
            || (SELECT AP_OFC_CD FROM MDM_ORGANIZATION WHERE OFC_CD = @[COST_OFC_CD])
			|| (SELECT TO_CHAR(GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[COST_OFC_CD]), 'YYMM') FROM DUAL)
			|| (SELECT LPAD(NVL(MAX(SUBSTR(CSR_NO, 13, 4)), 0) + 1, 4, '0')
					FROM AP_CSR_NO
				 WHERE SUBSTR(CSR_NO, 1, 12) = '12' || @[CSR_TYPE] || (SELECT AP_OFC_CD FROM MDM_ORGANIZATION WHERE OFC_CD = @[COST_OFC_CD]) ||
							 (SELECT TO_CHAR(GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[COST_OFC_CD]), 'YYMM') FROM DUAL)) NEW_CSR_NO
	FROM DUAL			]]></sql>
			<params>
				<param name="CSR_TYPE" type="12" value="" out="N"/>
				<param name="COST_OFC_CD" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
