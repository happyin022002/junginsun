<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RailInvoiceauditDBDAOModifyTrsRailInvDtlRailSoUSQL">
			<desc><![CDATA[S/O 테이블에 Invoice정보를 반영]]></desc>
			<sql><![CDATA[
UPDATE TRS_TRSP_RAIL_BIL_ORD A
   SET FINC_VSL_CD     = NVL((SELECT DISTINCT X.VSL_CD
                               FROM AR_MST_REV_VVD X
                              WHERE X.VSL_CD = A.VSL_CD
                                AND X.SKD_VOY_NO = A.SKD_VOY_NO
                                AND X.SKD_DIR_CD = A.SKD_DIR_CD
                                AND X.SLAN_CD = A.SLAN_CD
                                AND X.DELT_FLG = 'N')
                            ,(SELECT VSL_CD FDR_VSL_CD FROM BKG_BOOKING WHERE BKG_NO = A.BKG_NO))
      ,FINC_SKD_VOY_NO = NVL((SELECT DISTINCT X.SKD_VOY_NO
                               FROM AR_MST_REV_VVD X
                              WHERE X.VSL_CD = A.VSL_CD
                                AND X.SKD_VOY_NO = A.SKD_VOY_NO
                                AND X.SKD_DIR_CD = A.SKD_DIR_CD
                                AND X.SLAN_CD = A.SLAN_CD
                                AND X.DELT_FLG = 'N')
                            ,(SELECT SKD_VOY_NO FDR_SKD_VOY_NO FROM BKG_BOOKING WHERE BKG_NO = A.BKG_NO))
      ,FINC_SKD_DIR_CD = DECODE(SIGN((SELECT count(X.VSL_CD) - 1
                                       FROM AR_MST_REV_VVD X
                                      WHERE X.VSL_CD = A.VSL_CD
                                        AND X.SKD_VOY_NO = A.SKD_VOY_NO
                                        AND X.SKD_DIR_CD = A.SKD_DIR_CD
                                        AND X.SLAN_CD = A.SLAN_CD
                                        AND X.DELT_FLG = 'N'))
                               ,-1
                               ,(SELECT A.SKD_DIR_CD || NVL(COA_REV_DIR_CONV_FNC(VVD.SLAN_CD, VVD.POL_CD, VVD.SKD_DIR_CD), A.SKD_DIR_CD)
                                  FROM BKG_VVD VVD
                                 WHERE VVD.BKG_NO = A.BKG_NO
                                   AND VVD.VSL_PRE_PST_CD = 'T'
                                   AND ROWNUM = 1)
                               ,0
                               ,(SELECT A.SKD_DIR_CD || NVL(X.RLANE_DIR_CD, A.SKD_DIR_CD)
                                  FROM AR_MST_REV_VVD X
                                 WHERE X.VSL_CD = A.VSL_CD
                                   AND X.SKD_VOY_NO = A.SKD_VOY_NO
                                   AND X.SKD_DIR_CD = A.SKD_DIR_CD
                                   AND X.SLAN_CD = A.SLAN_CD
                                   AND X.DELT_FLG = 'N')
                               ,1
                               ,(SELECT A.SKD_DIR_CD || NVL(COA_REV_DIR_CONV_FNC(VVD.SLAN_CD, VVD.POL_CD, VVD.SKD_DIR_CD), A.SKD_DIR_CD)
                                  FROM BKG_VVD VVD
                                 WHERE VVD.BKG_NO = A.BKG_NO
                                   AND VVD.VSL_PRE_PST_CD = 'T'
                                   AND ROWNUM = 1))
      ,UPD_USR_ID      = @[sUsrId]
      ,LOCL_UPD_DT     = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[sOfcCd])
 WHERE A.TRSP_SO_OFC_CTY_CD = @[trsp_so_ofc_cty_cd]
   AND A.TRSP_SO_SEQ = @[trsp_so_seq]			]]></sql>
			<params>
				<param name="sUsrId" type="12" value="" out="N"/>
				<param name="sOfcCd" type="12" value="" out="N"/>
				<param name="trsp_so_ofc_cty_cd" type="12" value="" out="N"/>
				<param name="trsp_so_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
