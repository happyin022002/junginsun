<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CSRIssueTransferSlipManageDBDAOUpdateRailCntrFincVVDUSQL">
			<desc><![CDATA[Rail CNTR VVD를 업데이트한다]]></desc>
			<sql><![CDATA[
UPDATE TRS_TRSP_RAIL_INV_DTL D
   SET D.FINC_VVD_CD = DECODE(SIGN((SELECT COUNT(REV.VSL_CD) - 1
                                     FROM TRS_TRSP_RAIL_BIL_ORD SO, AR_MST_REV_VVD REV
                                    WHERE SO.TRSP_SO_OFC_CTY_CD = D.TRSP_SO_OFC_CTY_CD
                                      AND SO.TRSP_SO_SEQ = D.TRSP_SO_SEQ
                                      AND SO.VSL_CD = REV.VSL_CD
                                      AND SO.SKD_VOY_NO = REV.SKD_VOY_NO
                                      AND SO.SKD_DIR_CD = REV.SKD_DIR_CD
                                      AND SO.SLAN_CD = REV.SLAN_CD
                                      AND REV.DELT_FLG = 'N'
                                      AND NVL(SO.DELT_FLG, 'N') = 'N'))
                             ,-1
                             ,'CNTC' || SUBSTR(TRS_GET_GL_DT_FNC('', @[AP_OFC_CD], @[INV_DT], '15'), 3, 4) || 'MM'
                             ,0
                             ,(SELECT REV.VSL_CD || REV.SKD_VOY_NO || REV.SKD_DIR_CD || REV.RLANE_DIR_CD
                                FROM TRS_TRSP_RAIL_BIL_ORD SO, AR_MST_REV_VVD REV
                               WHERE SO.TRSP_SO_OFC_CTY_CD = D.TRSP_SO_OFC_CTY_CD
                                 AND SO.TRSP_SO_SEQ = D.TRSP_SO_SEQ
                                 AND SO.VSL_CD = REV.VSL_CD
                                 AND SO.SKD_VOY_NO = REV.SKD_VOY_NO
                                 AND SO.SKD_DIR_CD = REV.SKD_DIR_CD
                                 AND SO.SLAN_CD = REV.SLAN_CD
                                 AND REV.DELT_FLG = 'N'
                                 AND NVL(SO.DELT_FLG, 'N') = 'N')
                             ,1
                             ,(SELECT VVD.VSL_CD || VVD.SKD_VOY_NO || VVD.SKD_DIR_CD || NVL(COA_REV_DIR_CONV_FNC(VVD.SLAN_CD, VVD.POL_CD, VVD.SKD_DIR_CD), VVD.SKD_DIR_CD)
                                FROM TRS_TRSP_RAIL_BIL_ORD SO, BKG_VVD VVD
                               WHERE SO.TRSP_SO_OFC_CTY_CD = D.TRSP_SO_OFC_CTY_CD
                                 AND SO.TRSP_SO_SEQ = D.TRSP_SO_SEQ
                                 AND VVD.BKG_NO = SO.BKG_NO
                                 AND VVD.VSL_PRE_PST_CD = 'T'
                                 AND ROWNUM = 1))
 WHERE D.INV_VNDR_SEQ = @[INV_VNDR_SEQ]
 #if ($INV_NO.size() > 0) 
  AND D.INV_NO  IN  (
    #foreach( ${key} in ${INV_NO}) 
      #if($velocityCount < $INV_NO.size()) 
        '$key', 
      #else 
        '$key' 
      #end 
    #end
  )
#end			]]></sql>
			<params>
				<param name="AP_OFC_CD" type="12" value="" out="N"/>
				<param name="INV_DT" type="12" value="" out="N"/>
				<param name="INV_VNDR_SEQ" type="2" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
