<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CSRIssueTransferSlipManageDBDAOUpdateCntrFincVVDUSQL">
			<desc><![CDATA[CNTR VVD를 업데이트한다]]></desc>
			<sql><![CDATA[
UPDATE TRS_TRSP_SVC_ORD D
   SET D.FINC_VVD_CD = DECODE(SIGN((SELECT COUNT(*) - 1
                                     FROM AR_MST_REV_VVD REV
                                    WHERE REV.VSL_CD = D.VSL_CD
                                      AND REV.SKD_VOY_NO = D.SKD_VOY_NO
                                      AND REV.SKD_DIR_CD = D.SKD_DIR_CD
                                      AND REV.SLAN_CD = D.SLAN_CD
                                      AND REV.DELT_FLG = 'N'))
                             ,-1
                             ,'CNTC' || SUBSTR(TRS_GET_GL_DT_FNC('', @[AP_OFC_CD], @[INV_DT], '15'), 3, 4) || 'MM'
                             ,0
                             ,(SELECT REV.VSL_CD || REV.SKD_VOY_NO || REV.SKD_DIR_CD || REV.RLANE_DIR_CD
                                FROM AR_MST_REV_VVD REV
                               WHERE REV.VSL_CD = D.VSL_CD
                                 AND REV.SKD_VOY_NO = D.SKD_VOY_NO
                                 AND REV.SKD_DIR_CD = D.SKD_DIR_CD
                                 AND REV.SLAN_CD = D.SLAN_CD
                                 AND REV.DELT_FLG = 'N')
                             ,1
                             ,(SELECT VVD.VSL_CD || VVD.SKD_VOY_NO || VVD.SKD_DIR_CD || NVL(COA_REV_DIR_CONV_FNC(VVD.SLAN_CD, VVD.POL_CD, VVD.SKD_DIR_CD), VVD.SKD_DIR_CD)
                                FROM BKG_VVD VVD
                               WHERE VVD.BKG_NO = D.BKG_NO
                                 AND VSL_PRE_PST_CD = 'T'
                                 AND ROWNUM = 1))
 WHERE D.INV_VNDR_SEQ = @[INV_VNDR_SEQ]
 #if ($INV_NO.size() > 0) 
  AND D.INV_NO  IN  (
    #foreach( ${key} in ${INV_NO}) 
      #if($velocityCount < $INV_NO.size()) 
        '$key', 
      #else 
        '$key' 
      #end 
    #end
  )
#end			]]></sql>
			<params>
				<param name="AP_OFC_CD" type="12" value="" out="N"/>
				<param name="INV_DT" type="12" value="" out="N"/>
				<param name="INV_VNDR_SEQ" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
