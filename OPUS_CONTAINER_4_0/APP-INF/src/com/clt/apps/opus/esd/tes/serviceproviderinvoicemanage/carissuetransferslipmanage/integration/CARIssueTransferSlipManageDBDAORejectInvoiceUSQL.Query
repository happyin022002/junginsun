<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CARIssueTransferSlipManageDBDAORejectInvoiceUSQL">
			<desc><![CDATA[RejectInvoice]]></desc>
			<sql><![CDATA[
UPDATE TES_TML_SO_HDR T
 SET	T.TML_INV_RJCT_STS_CD = 'RJ',
 	    T.INV_RJCT_DT = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[inv_ofc_cd]),
		T.UPD_DT = SYSDATE,
		T.LOCL_UPD_DT = GLOBALDATE_PKG.TIME_LOCAL_OFC_FNC(@[inv_ofc_cd])
 WHERE	1=1
 AND T.TML_SO_OFC_CTY_CD	= @[tml_so_ofc_cty_cd]
 AND T.TML_SO_SEQ			= @[tml_so_seq]
 AND NVL(T.DELT_FLG,'N') <> 'Y'
 AND T.TML_INV_STS_CD = 'A'     -- CSR 결재처리 상태('P')는 Disapprove할 수 없게 하기 위해 추가합니다.			]]></sql>
			<params>
				<param name="inv_ofc_cd" type="12" value="" out="N"/>
				<param name="tml_so_ofc_cty_cd" type="12" value="" out="N"/>
				<param name="tml_so_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
