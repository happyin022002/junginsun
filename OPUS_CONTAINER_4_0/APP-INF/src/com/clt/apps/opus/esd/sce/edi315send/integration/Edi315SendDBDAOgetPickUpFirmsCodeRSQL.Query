<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="Edi315SendDBDAOgetPickUpFirmsCodeRSQL">
			<desc><![CDATA[getPickUpFirmsCode]]></desc>
			<sql><![CDATA[
SELECT CASE WHEN YD2.YD_CSTMS_NO IS NOT NULL THEN YD2.YD_CSTMS_NO || '/' || YD2.YD_CD
            ELSE NULL
        END AS PKUP_FIRMS
FROM (
    SELECT DECODE( ANTC.VSL_INFO_SET_FLG --- VSL_INFO_SET_FLG에 영향받는 7항목(처리)
          , 'Y', ANTC.PKUP_YD_CD , NVL(DECODE( BKGM.POD_CD , 'BEANR', AHDG.ATTR_CTNT3 , 'NLRTM', RCNV.ATTR_CTNT2 , NULL ) , NVL(SUBSTR(BKGM.COP_VAL, 15), VSK_ETA_YD_CD) ) ) AS PKUP_YD_CD
    FROM (
        SELECT BKGM.BKG_NO AS BKG_NO ,
          BKGM.POD_CD ,
          BKGM.VSL_CD ,
          BKGM.SKD_VOY_NO ,
          BKGM.SKD_DIR_CD ,
          VSKD.YD_CD AS VSK_ETA_YD_CD ,
          (
            SELECT SUBSTR( MAX ( DECODE(COPD.ACT_CD, 'FITRDO', '1', '0') || NVL(TO_CHAR(COPD.PLN_DT, 'YYYYMMDDHH24MISS'), '00000000000000') || NVL(TO_CHAR(NVL(COPD.ACT_DT, COPD.ESTM_DT), 'YYYYMMDDHH24MISS'), '00000000000000') || COPD.NOD_CD ) , 16) COP_VAL
            FROM SCE_COP_HDR COPM ,
              SCE_COP_DTL COPD
            WHERE SUBSTR(BKGM.DEL_CD, 1, 2) = 'US'
              AND COPM.BKG_NO = BKGM.BKG_NO
              AND COPD.COP_NO = COPM.COP_NO
              AND COPM.COP_STS_CD <> 'X'
              AND COPD.ACT_CD IN ('FITRDO',
                  'FUVMAD') -- FITRDO우선 처리
              ) AS COP_VAL
        FROM BKG_BOOKING BKGM ,
          VSK_VSL_PORT_SKD VSKD ,
          BKG_VVD BVVD
        WHERE 1 = 1
          AND BKGM.BL_NO = @[bkg_no] -- BL NO (OPTIONAL 5-1)
          AND BVVD.VSL_CD = VSKD.VSL_CD(+) -- Duration이 아닌경우에는 데이터를 추출하기 위하여 해당과 같이 처리한다. (20100106 Park Mangeon)
          AND BVVD.SKD_VOY_NO = VSKD.SKD_VOY_NO(+)
          AND BVVD.SKD_DIR_CD = VSKD.SKD_DIR_CD(+)
          AND BVVD.POD_CD = VSKD.VPS_PORT_CD(+)
          AND BVVD.POD_CLPT_IND_SEQ = VSKD.CLPT_IND_SEQ(+)
          AND BKGM.BKG_NO =BVVD.BKG_NO
          AND BKGM.POD_CD = BVVD.POD_CD ) BKGM LEFT OUTER JOIN BKG_ARR_NTC ANTC ON (ANTC.BKG_NO = BKGM.BKG_NO) LEFT OUTER JOIN BKG_CSTMS_ANR_VVD AVVD -- ANRBS
      ON ( AVVD.VSL_CD = BKGM.VSL_CD
          AND AVVD.SKD_VOY_NO = BKGM.SKD_VOY_NO
          AND AVVD.SKD_DIR_CD = BKGM.SKD_DIR_CD ) LEFT OUTER JOIN BKG_HRD_CDG_CTNT AHDG -- ANRBS SUB CODE
      ON ( AHDG.HRD_CDG_ID = 'ANR_CSTMS_BRTH_CD'
          AND AHDG.ATTR_CTNT2 = AVVD.BRTH_DESC ) LEFT OUTER JOIN BKG_CSTMS_RTM_VSL RVVD -- NLRTM 
      ON ( RVVD.VSL_CD = BKGM.VSL_CD
          AND RVVD.SKD_VOY_NO = BKGM.SKD_VOY_NO
          AND RVVD.SKD_DIR_CD = BKGM.SKD_DIR_CD
          AND RVVD.VSL_CALL_REF_STS_CD <> 'C' ) LEFT OUTER JOIN BKG_CSTMS_CD_CONV_CTNT RCNV -- NLRTM SUB
      ON ( RCNV.CNT_CD = 'NL'
          AND RCNV.CSTMS_DIV_ID = 'BERTH_CD'
          AND RCNV.ATTR_CTNT1 = RVVD.BRTH_CTNT) ) INQS ,
  MDM_YARD YD2 -- P/Up FIRMS
WHERE 1 = 1
  AND YD2.YD_CD(+) = INQS.PKUP_YD_CD			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
