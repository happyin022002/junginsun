<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralInvoiceAuditDBDAOgetTermDueDateRSQL">
			<desc><![CDATA[getTermDueDate]]></desc>
			<sql><![CDATA[
SELECT  DECODE(GEN_PAY_TERM_CD, 'IN', 5, 'OUT', 60, 'O60', 0, 'O45', 0,  NVL(TO_NUMBER(GEN_PAY_TERM_CD), 0)) pay_term_days, 
        TO_CHAR(DECODE(GEN_PAY_TERM_CD, 'IN', 5, 'OUT', 60, 'O60', 0, 'O45', 0,  NVL(TO_NUMBER(GEN_PAY_TERM_CD), 0)) + to_date(@[iss_dt], 'YYYY-MM-DD'), 'YYYY-MM-DD') due_dt
	FROM MDM_VENDOR
	WHERE VNDR_SEQ = @[vndr_seq]			]]></sql>
			<params>
				<param name="iss_dt" type="12" value="" out="N"/>
				<param name="vndr_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
