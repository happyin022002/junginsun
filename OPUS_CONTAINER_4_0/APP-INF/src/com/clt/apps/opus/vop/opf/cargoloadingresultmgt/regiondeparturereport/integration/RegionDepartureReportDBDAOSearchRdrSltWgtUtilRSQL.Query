<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RegionDepartureReportDBDAOSearchRdrSltWgtUtilRSQL">
			<desc><![CDATA[RDR Slot/WGT Util 정보를 조회한다. (메인 조회)]]></desc>
			<sql><![CDATA[
/*****EXT*****/
SELECT M.OPR_CD																				 AS OPR_CD 
,       SUM(DECODE(M.TYPE,'F',M.SLOT_QTY,0))                                                  AS FULL
,       SUM(DECODE(M.TYPE,'E',M.SLOT_QTY,0))                                                  AS EMPTY
,       SUM(DECODE(M.TYPE,'A',M.SLOT_QTY,0))                                                  AS AKBB
,       SUM(DECODE(M.TYPE,'3',M.SLOT_QTY,'H',M.SLOT_QTY,'L',M.SLOT_QTY,0))                                   AS HC45
,       SUM(DECODE(M.TYPE,'F',M.SLOT_QTY,0))+SUM(DECODE(M.TYPE,'E',M.SLOT_QTY,0))+
        +SUM(DECODE(M.TYPE,'A',M.SLOT_QTY,0))+SUM(DECODE(M.TYPE,'3',M.SLOT_QTY,0))+SUM(DECODE(M.TYPE,'H',M.SLOT_QTY,'L',M.SLOT_QTY,0)) AS TOTAL_SLOT
,       SUM(DECODE(M.TYPE,'F',M.WEIGHT,0))                AS total_wgt
FROM   RDR_HEADER H, RDR_UTILIZE M
WHERE  H.VSL_CD     = @[vsl_cd]
AND    H.VOY_NO     = @[voy_no]
AND    H.DIR_CD     = @[dir_cd]
AND    H.REGION  	= @[region]
#if (${port_cd} != '') 
AND    H.PORT_CD  = @[port_cd] 
#end
AND    H.VSL_CD    = M.VSL_CD
AND    H.VOY_NO    = M.VOY_NO
AND    H.DIR_CD    = M.DIR_CD
AND    H.REGION    = M.REGION
GROUP BY M.OPR_CD
HAVING 
          SUM( CASE WHEN M.TYPE IN ('F','E','A') THEN M.SLOT_QTY ELSE 0 END ) > 0 
     OR   SUM( NVL(M.SLOT_HC20,0) )+SUM( NVL(M.SLOT_HC,0)  )+SUM( NVL(M.SLOT_45,0) ) >0
ORDER  BY M.OPR_CD			]]></sql>
			<params>
				<param name="vsl_cd" type="12" value="" out="N"/>
				<param name="voy_no" type="12" value="" out="N"/>
				<param name="dir_cd" type="12" value="" out="N"/>
				<param name="region" type="12" value="" out="N"/>
				<param name="port_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
