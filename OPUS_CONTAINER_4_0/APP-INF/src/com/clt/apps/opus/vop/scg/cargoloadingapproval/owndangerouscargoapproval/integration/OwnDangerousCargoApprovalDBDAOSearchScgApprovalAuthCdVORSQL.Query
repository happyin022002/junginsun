<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="OwnDangerousCargoApprovalDBDAOSearchScgApprovalAuthCdVORSQL">
			<desc><![CDATA[승인결과 값을 조회한다.]]></desc>
			<sql><![CDATA[
SELECT 	BKG_NO
	,  	CGO_SEQ
	,  	SPCL_CGO_AUTH_CD

    --,  [spcl_cgo_apro_rqst_seq] AS SPCL_CGO_APRO_RQST_SEQ
    --,  [vsl_pre_pst_cd] AS VSL_PRE_PST_CD
    --,  [vsl_seq] AS VSL_SEQ

	,	SPCL_CGO_APRO_RQST_SEQ
	,	VSL_PRE_PST_CD
	,	VSL_SEQ

	,  	DECODE(SPCL_CGO_APRO_RQST_SEQ,@[spcl_cgo_apro_rqst_seq],'Y','N')	AS UPD_FLG 

FROM (

	SELECT 	A.BKG_NO
		,  	A.CGO_SEQ 

		----,  DECODE(A.VSL_PRE_PST_CD,'U',DECODE(G.SPCL_CGO_AUTH_CD,'N','N','Y','Y','R'),NVL(G.SPCL_CGO_AUTH_CD,'R')) AS SPCL_CGO_AUTH_CD
		,  	DECODE(A.VSL_PRE_PST_CD,'U',DECODE(G.SPCL_CGO_AUTH_CD,'N','N','Y','Y','P','P','R'),NVL(G.SPCL_CGO_AUTH_CD,'R')) AS SPCL_CGO_AUTH_CD

		,  	A.SPCL_CGO_APRO_RQST_SEQ

		,	A.VSL_PRE_PST_CD
		,	A.VSL_SEQ

	FROM (

		SELECT 	B.BKG_NO
			,  	B.SPCL_CGO_APRO_RQST_SEQ
			,  	B.VSL_PRE_PST_CD
	        ,  	B.VSL_SEQ
			,	A.SPCL_CGO_CATE_CD
			#if (${scg_flg} == 'DG1' || ${scg_flg} == 'DG2') 
			, 	C.DCGO_SEQ 					AS CGO_SEQ
			#end
			#if (${scg_flg} == 'AWK' || ${scg_flg} == '45')
			, 	C.AWK_CGO_SEQ 				AS CGO_SEQ
			#end
			#if (${scg_flg} == 'BB') 
			, 	C.BB_CGO_SEQ 				AS CGO_SEQ
			#end
			#if (${scg_flg} == 'RF') 
			, 	C.RC_SEQ 					AS CGO_SEQ
			#end
			#if (${scg_flg} == 'SS') 
			, 	C.STWG_SEQ 					AS CGO_SEQ 
			#end
		FROM 	SCG_APRO_RQST 				A
			,	SCG_VVD_APRO_RQST 			B
		#if (${scg_flg} == 'DG1' || ${scg_flg} == 'DG2') 
			,	BKG_DG_CGO 					C
		#end
		#if (${scg_flg} == 'AWK' || ${scg_flg} == '45')
			,	BKG_AWK_CGO 				C
		#end
		#if (${scg_flg} == 'BB') 
			,	BKG_BB_CGO 					C
		#end
		#if (${scg_flg} == 'RF') 
			,	BKG_RF_CGO 					C
		#end
		#if (${scg_flg} == 'SS')
			,	BKG_STWG_CGO 				C
		#end
		WHERE 	A.BKG_NO 					= B.BKG_NO
		AND 	A.SPCL_CGO_APRO_RQST_SEQ 	= B.SPCL_CGO_APRO_RQST_SEQ          
		#if (${scg_flg} != '') 
		AND   	B.BKG_NO 					= C.BKG_NO
		#end
		AND   	A.LST_RQST_DAT_FLG 			= 'Y'
		AND   	A.BKG_NO 					= @[bkg_no]

		#if (${scg_flg} == 'DG1' || ${scg_flg} == 'DG2') 
		AND   	A.SPCL_CGO_CATE_CD 			= 'DG'
		#end
		#if (${scg_flg} == 'AWK' || ${scg_flg} == '45')
		AND	  	A.SPCL_CGO_CATE_CD 			= 'AK'
		#end
		#if (${scg_flg} == 'BB') 
		AND	  	A.SPCL_CGO_CATE_CD 			= 'BB'
		#end
		#if (${scg_flg} == 'RF') 
		AND	  	A.SPCL_CGO_CATE_CD 			= 'RF'
		#end
		#if (${scg_flg} == 'SS') 
		AND	  	A.SPCL_CGO_CATE_CD 			= 'SS'
		#end
 
		#if (${scg_flg} == 'DG1' || ${scg_flg} == 'DG2') 
		AND   	C.DCGO_SEQ 					= @[dcgo_seq]
		#end
		#if (${scg_flg} == 'AWK' || ${scg_flg} == '45')
		AND	  	C.AWK_CGO_SEQ 				= @[awk_cgo_seq]
		#end
		#if (${scg_flg} == 'BB') 
		AND	  	C.BB_CGO_SEQ 				= @[bb_cgo_seq]
		#end
		#if (${scg_flg} == 'RF') 
		AND	  	C.RC_SEQ 					= @[rc_seq]
		#end
		#if (${scg_flg} == 'SS') 
		AND	  	C.STWG_SEQ 					= @[stwg_cgo_seq]
		#end

		) 									A
		, SCG_AUTHORIZATION 				G
	WHERE A.BKG_NO 							= G.BKG_NO					(+)
	AND   A.SPCL_CGO_CATE_CD 				= G.SPCL_CGO_CATE_CD 		(+)
	AND   A.SPCL_CGO_APRO_RQST_SEQ 			= G.SPCL_CGO_APRO_RQST_SEQ	(+)
	AND   A.VSL_PRE_PST_CD 					= G.VSL_PRE_PST_CD			(+)
	AND   A.VSL_SEQ 						= G.VSL_SEQ					(+)

	#if (${scg_flg} == 'DG1' || ${scg_flg} == 'DG2') 
	AND   A.CGO_SEQ 						= G.DCGO_SEQ				(+)
	#end
	#if (${scg_flg} == 'AWK' || ${scg_flg} == '45')
	AND	  A.CGO_SEQ 						= G.AWK_CGO_SEQ				(+)
	#end
	#if (${scg_flg} == 'BB') 
	AND	  A.CGO_SEQ 						= G.BB_CGO_SEQ				(+)
	#end
	#if (${scg_flg} == 'RF') 
	AND	  A.CGO_SEQ 						= G.RC_SEQ					(+)
	#end
	#if (${scg_flg} == 'SS') 
	AND	  A.CGO_SEQ 						= G.STWG_CGO_SEQ			(+)
	#end

	--::2015-05-06::--ORDER BY DECODE(A.VSL_PRE_PST_CD,'U',DECODE(G.SPCL_CGO_AUTH_CD,'N','N','Y','Y','R'),NVL(G.SPCL_CGO_AUTH_CD,'R'))
    --::2015-05-24::--ORDER BY DECODE(A.VSL_PRE_PST_CD,'U',DECODE(NVL(G.SPCL_CGO_AUTH_CD,'R'),'R',200,'N',1,'Y',200,'P',200),DECODE(NVL(G.SPCL_CGO_AUTH_CD,'R'),'R',120,'N',1,'Y',100,'P',110)) ASC
	ORDER BY	CASE	WHEN A.SPCL_CGO_CATE_CD = 'SS' THEN 999
						ELSE
							CASE WHEN A.VSL_PRE_PST_CD = 'U' THEN DECODE(NVL(G.SPCL_CGO_AUTH_CD,'R'),'R',200,'N',1,'Y',200,'P',200)
--								 ELSE DECODE(NVL(G.SPCL_CGO_AUTH_CD,'R'),'R',99,'N',1,'Y',100,'P',110)
								 ELSE DECODE(NVL(G.SPCL_CGO_AUTH_CD,'R'),'R',99,'P',2,'N',1,'Y',100)
							END		
			 	END		ASC
	)
WHERE ROWNUM < 2
 			]]></sql>
			<params>
				<param name="spcl_cgo_apro_rqst_seq" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="dcgo_seq" type="12" value="" out="N"/>
				<param name="awk_cgo_seq" type="12" value="" out="N"/>
				<param name="bb_cgo_seq" type="12" value="" out="N"/>
				<param name="rc_seq" type="12" value="" out="N"/>
				<param name="stwg_cgo_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
