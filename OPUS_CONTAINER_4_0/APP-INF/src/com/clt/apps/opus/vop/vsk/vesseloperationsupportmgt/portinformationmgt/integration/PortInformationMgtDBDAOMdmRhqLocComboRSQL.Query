<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PortInformationMgtDBDAOMdmRhqLocComboRSQL">
			<desc><![CDATA[dummy]]></desc>
			<sql><![CDATA[
#if (${rhq} != '^') 
SELECT  LOC_CD AS VAL
	,   LOC_CD AS NAME
FROM 	(            
        
              SELECT    MX.LOC_CD
                     ,  (
                        SELECT    MAX(DECODE(MO.OFC_TP_CD, 'HQ', MO.OFC_CD))--  AS VAL    
                            FROM    MDM_ORGANIZATION MO
                            CONNECT BY   NOCYCLE PRIOR MO.PRNT_OFC_CD  = MO.OFC_CD
                            START WITH   MO.OFC_CD             = MX.SLS_OFC_CD
                        ) AS POR_RHQ
            FROM    MDM_LOCATION   		MX 
			WHERE  	MX.CALL_PORT_FLG  	= 'Y'
			AND		MX.DELT_FLG 		= 'N'
        
--             SELECT LOC_CD, (SELECT OFC_CD FROM TABLE(COM_OfficeCodeMgr_PKG.COM_getOfficeCodeList_FNC('000001', 'VSK'))) AS POR_RHQ
--             FROM   MDM_LOCATION
--             WHERE  DECODE(CONTI_CD, 'F', 'E', CONTI_CD) = 'E'
--             AND    NVL(DELT_FLG, 'N') = 'N'
--             AND    CALL_PORT_FLG = 'Y'
--             UNION ALL
--             SELECT LOC_CD, (SELECT OFC_CD FROM TABLE(COM_OfficeCodeMgr_PKG.COM_getOfficeCodeList_FNC('000002', 'VSK'))) AS POR_RHQ
--             FROM   MDM_LOCATION
--             WHERE  CONTI_CD  = 'M'
--             AND    NVL(DELT_FLG, 'N') = 'N'
--             AND    CALL_PORT_FLG = 'Y'
--             UNION ALL
--             SELECT LOC_CD, (SELECT OFC_CD FROM TABLE(COM_OfficeCodeMgr_PKG.COM_getOfficeCodeList_FNC('000003', 'VSK'))) AS POR_RHQ
--             FROM   MDM_LOCATION
--             WHERE  CONTI_CD  = 'A'
--             AND    NVL(DELT_FLG, 'N') = 'N'
--             AND    CALL_PORT_FLG = 'Y'

     	)
WHERE   POR_RHQ = DECODE(SUBSTR(@[rhq], 1, 3), 'ALL', POR_RHQ, @[rhq])
ORDER BY VAL ASC
#else
SELECT 
    LOC_CD AS VAL
,   LOC_CD AS NAME
FROM   MDM_LOCATION
WHERE  DELT_FLG = 'N'
AND    CALL_PORT_FLG = 'Y'
ORDER BY NAME ASC
#end			]]></sql>
			<params>
				<param name="rhq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
