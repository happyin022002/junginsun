<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ActualScheduleMgtDBDAOcheckInputActDateEffectivenessRSQL">
			<desc><![CDATA[Validation Check Logic for Inputted Future Date]]></desc>
			<sql><![CDATA[
SELECT 	CASE	WHEN @[act_arr_dt] IS NULL																					THEN ''
				WHEN SIGN(GLOBALDATE_PKG.TIME_LOCAL_FNC(@[vps_port_cd]) - TO_DATE(@[act_arr_dt],'YYYY-MM-DD HH24:MI')) < 0	THEN 'Arrival'
            	ELSE ''
       	END		AS INPUT_ATA_DATE_EFFECTIVENESS
	,	
		CASE	WHEN @[act_brth_dt] IS NULL																					THEN ''
				WHEN SIGN(GLOBALDATE_PKG.TIME_LOCAL_FNC(@[vps_port_cd]) - TO_DATE(@[act_brth_dt],'YYYY-MM-DD HH24:MI')) < 0	THEN 'Berthing'
            	ELSE ''
       	END		AS INPUT_ATB_DATE_EFFECTIVENESS
	,
		CASE	WHEN @[act_dep_dt] IS NULL																					THEN ''
				WHEN SIGN(GLOBALDATE_PKG.TIME_LOCAL_FNC(@[vps_port_cd]) - TO_DATE(@[act_dep_dt],'YYYY-MM-DD HH24:MI')) < 0	THEN 'Departure'
            	ELSE ''
       	END		AS INPUT_ATD_DATE_EFFECTIVENESS
FROM	DUAL			]]></sql>
			<params>
				<param name="act_arr_dt" type="12" value="" out="N"/>
				<param name="vps_port_cd" type="12" value="" out="N"/>
				<param name="act_brth_dt" type="12" value="" out="N"/>
				<param name="act_dep_dt" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
