<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="GeneralInvoiceAuditDBDAOgetDemdetHolidayETARSQL">
			<desc><![CDATA[해당 ETA의 Holiday/휴일 여부를 구한다.]]></desc>
			<sql><![CDATA[
SELECT ''''||MAX(NVL(DD,'N'))||''''
  FROM (
        SELECT DECODE(MAX(CNT),0,'N','Y') DD
          FROM (
                -- 휴일 등록을 한경우
                SELECT /*+ NO_EXPAND INDEX_DESC ( D XPKDMT_HOLIDAY ) */
                       COUNT(*) CNT
                  FROM DMT_HOLIDAY D
                     , VSK_VSL_PORT_SKD V
                     , MDM_LOCATION L
                 WHERE 1=1
                   AND V.VSL_CD         = SUBSTR(@[vvd], 1, 4)
                   AND V.SKD_VOY_NO     = SUBSTR(@[vvd], 5, 4)
                   AND V.SKD_DIR_CD     = SUBSTR(@[vvd], 9)
                   AND V.YD_CD          = @[yd_cd]
                   AND V.CLPT_IND_SEQ   = @[clpt_ind_seq]
                   AND NVL(V.VT_ADD_CALL_FLG, 'N') = 'N' /*2015.07.21 Add*/
                   AND D.HOL_YR         = TO_CHAR(V.VPS_ETA_DT, 'YYYY')
                   AND D.CNT_CD         = SUBSTR(V.VPS_PORT_CD,1,2)
                   AND D.HOL_DT         = TRUNC(V.VPS_ETA_DT)
                   AND V.VPS_PORT_CD    = L.LOC_CD
                   AND D.RGN_CD IN (L.RGN_CD        , ' ')
                   AND D.STE_CD IN (L.STE_CD        , ' ')
                   AND D.LOC_CD IN (V.VPS_PORT_CD   , ' ')
                   AND ROWNUM = 1
                 UNION ALL
                SELECT CASE WHEN WKND_TP_CD = 'TF' THEN DECODE(TO_CHAR(V.VPS_ETA_DT,'D'),5, 1, 6, 1, 0 )
                            WHEN WKND_TP_CD = 'FS' THEN DECODE(TO_CHAR(V.VPS_ETA_DT,'D'),6, 1, 7, 1, 0 )
                            WHEN SUBSTR(V.VPS_PORT_CD, 1, 2) = 'KR' THEN DECODE(TO_CHAR(V.VPS_ETA_DT,'D'), 7, 0, 1, 1, 0)
                            ELSE DECODE(TO_CHAR(V.VPS_ETA_DT,'D'), 7, 1, 1, 1, 0)
                       END CNT
                  FROM DMT_WEEKEND D
                     , VSK_VSL_PORT_SKD V
                 WHERE 1=1
                   AND V.VSL_CD         = SUBSTR(@[vvd], 1, 4)
                   AND V.SKD_VOY_NO     = SUBSTR(@[vvd], 5, 4)
                   AND V.SKD_DIR_CD     = SUBSTR(@[vvd], 9)
                   AND V.YD_CD          = @[yd_cd]
                   AND V.CLPT_IND_SEQ   = @[clpt_ind_seq]
                   AND NVL(V.VT_ADD_CALL_FLG, 'N') = 'N' /*2015.07.21 Add*/
                   AND D.CNT_CD      (+)= SUBSTR(V.VPS_PORT_CD,1,2)
           )
      )			]]></sql>
			<params>
				<param name="vvd" type="12" value="" out="N"/>
				<param name="yd_cd" type="12" value="" out="N"/>
				<param name="clpt_ind_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
