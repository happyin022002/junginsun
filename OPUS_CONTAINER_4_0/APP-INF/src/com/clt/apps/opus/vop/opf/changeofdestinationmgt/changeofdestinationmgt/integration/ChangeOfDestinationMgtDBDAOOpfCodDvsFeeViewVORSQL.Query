<sqls>
	<querys>
		<query name="ChangeOfDestinationMgtDBDAOOpfCodDvsFeeViewVORSQL">
			<desc><![CDATA[dummy]]></desc>
			<sql><![CDATA[
WITH V_CONTI AS (
    SELECT 'A' AS CONTI_CD, 'Asia' AS CONTI_NM FROM DUAL
    UNION ALL
    SELECT 'E' AS CONTI_CD, 'Europe' AS CONTI_NM FROM DUAL
    UNION ALL
    SELECT 'M' AS CONTI_CD, 'America' AS CONTI_NM FROM DUAL
    UNION ALL
    SELECT 'F' AS CONTI_CD, 'Africa' AS CONTI_NM FROM DUAL )
--SELECT * FROM V_LOC;
SELECT V.CONTI_NM
     , A.CONTI_CD
     , MAX(DECODE(A.CONTI_CD, 'A', DECODE(A.DVS_FEE_TP_CD, '2', A.DVS_FEE_AMT, ''), 'E', DECODE(A.DVS_FEE_TP_CD, '2', A.DVS_FEE_AMT, ''),'')) T20FT
     , MAX(DECODE(A.CONTI_CD, 'A', DECODE(A.DVS_FEE_TP_CD, '4', A.DVS_FEE_AMT, ''), 'E', DECODE(A.DVS_FEE_TP_CD, '4', A.DVS_FEE_AMT, ''),'')) T40FT
     , MAX(DECODE(A.CONTI_CD, 'A', DECODE(A.DVS_FEE_TP_CD, 'I', A.DVS_FEE_AMT, ''), 'E', DECODE(A.DVS_FEE_TP_CD, 'I', A.DVS_FEE_AMT, ''),'')) TPORT
     , MAX(DECODE(A.DVS_FEE_TP_CD, 'P', A.DVS_FEE_AMT, '')) TBL
  FROM OPF_COD_DVS_FEE A
     , V_CONTI V
 WHERE 1=1
   AND A.DELT_FLG = 'N'
   AND A.CONTI_CD = V.CONTI_CD
 GROUP BY V.CONTI_NM, A.CONTI_CD
 ORDER BY A.CONTI_CD			]]></sql>
			<params>
			</params>
		</query>
	</querys>
</sqls>
