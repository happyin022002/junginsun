<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="RegionDepartureReportDBDAORDRSlotUtilVORSQL">
			<desc><![CDATA[RDRSlotUtilVO Select Query]]></desc>
			<sql><![CDATA[
SELECT M.OPR_CD																				 AS OPR_CD,
       SUM(DECODE(M.TYPE,'F',M.SLOT_QTY,0))                                                  AS FULL,
       SUM(DECODE(M.TYPE,'E',M.SLOT_QTY,0))                                                  AS EMPTY,
       SUM(DECODE(M.TYPE,'A',M.SLOT_QTY,0))                                                  AS AKBB,
       SUM(DECODE(M.TYPE,'3',M.SLOT_QTY,'H',M.SLOT_QTY,'L',M.SLOT_QTY,0))                    AS HC45,
       SUM(DECODE(M.TYPE,'F',M.SLOT_QTY,0))+SUM(DECODE(M.TYPE,'E',M.SLOT_QTY,0))+SUM(DECODE(M.TYPE,'3',M.SLOT_QTY,0))+
       SUM(DECODE(M.TYPE,'A',M.SLOT_QTY,0))+SUM(DECODE(M.TYPE,'H',M.SLOT_QTY,'L',M.SLOT_QTY,0)) AS TOTAL_SLOT,
       SUM(WEIGHT)                                                                              AS TOTAL_WGT
FROM   RDR_HEADER H, RDR_UTILIZE M
WHERE  H.VSL_CD     = @[vsl_cd] 
AND    H.VOY_NO     = @[voy_no] 
AND    H.DIR_CD     = @[dir_cd] 
AND    H.REGION  	= @[region] 
#if (${opr_cd} != '' && ${opr_cd} != 'All') 
AND    M.OPR_CD    = @[opr_cd] 
#end
AND    H.VSL_CD    = M.VSL_CD
AND    H.VOY_NO    = M.VOY_NO
AND    H.DIR_CD    = M.DIR_CD
AND    H.REGION    = M.REGION
GROUP BY M.OPR_CD
ORDER BY M.OPR_CD			]]></sql>
			<params>
				<param name="vsl_cd" type="12" value="" out="N"/>
				<param name="voy_no" type="12" value="" out="N"/>
				<param name="dir_cd" type="12" value="" out="N"/>
				<param name="region" type="12" value="" out="N"/>
				<param name="opr_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
