<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="VesselScheduleMgtDBDAOCstSkdByPortRSQL">
			<desc><![CDATA[해당 Port의 Costal Schedule 정보를 조회합니다.]]></desc>
			<sql><![CDATA[
SELECT  VSL_CD
        , SKD_VOY_NO
        , SKD_DIR_CD
        , VSL_CD || SKD_VOY_NO || SKD_DIR_CD AS VVD
        , (
            SELECT  VSL_ENG_NM
            FROM    MDM_VSL_CNTR
            WHERE   VSL_CD = T11.VSL_CD
          ) AS VSL_ENG_NM
        , VSL_SLAN_CD
        , IB_CSSM_VOY_NO
        , OB_CSSM_VOY_NO

		, CASE 	WHEN CGO_CLZ_DT IS NOT NULL 	THEN TO_CHAR(CGO_CLZ_DT		, 'YYYYMMDDHH24MI')	
				--:2016-10-19:--ELSE TO_CHAR(PRD_GET_CCT_FNC(POL_YARD,VSL_SLAN_CD,SKD_DIR_CD,'DR',VSL_CD||SKD_VOY_NO||SKD_DIR_CD,CLPT_IND_SEQ,POL_ETB,POL_ETD), 'YYYYMMDDHH24MI')	
				ELSE TO_CHAR(PRD_COMMON_PKG.PRD_GET_CCT_BY_BKG_INFO_FNC(VSL_CD,SKD_VOY_NO,SKD_DIR_CD,VPS_PORT_CD,CLPT_IND_SEQ,POL_YARD,'NNNNY'), 'YYYYMMDDHH24MI')	
		  END	AS CGO_CLZ_DT

		, CASE 	WHEN DCGO_CLZ_DT IS NOT NULL 	THEN TO_CHAR(DCGO_CLZ_DT	, 'YYYYMMDDHH24MI')	
				--:2016-10-19:--ELSE TO_CHAR(PRD_GET_CCT_FNC(POL_YARD,VSL_SLAN_CD,SKD_DIR_CD,'DG',VSL_CD||SKD_VOY_NO||SKD_DIR_CD,CLPT_IND_SEQ,POL_ETB,POL_ETD), 'YYYYMMDDHH24MI')	
				ELSE TO_CHAR(PRD_COMMON_PKG.PRD_GET_CCT_BY_BKG_INFO_FNC(VSL_CD,SKD_VOY_NO,SKD_DIR_CD,VPS_PORT_CD,CLPT_IND_SEQ,POL_YARD,'YNNNN'), 'YYYYMMDDHH24MI')	
		  END	AS DCGO_CLZ_DT

		, CASE 	WHEN RC_CLZ_DT IS NOT NULL 		THEN TO_CHAR(RC_CLZ_DT		, 'YYYYMMDDHH24MI')	
				--:2016-10-19:--ELSE TO_CHAR(PRD_GET_CCT_FNC(POL_YARD,VSL_SLAN_CD,SKD_DIR_CD,'RF',VSL_CD||SKD_VOY_NO||SKD_DIR_CD,CLPT_IND_SEQ,POL_ETB,POL_ETD), 'YYYYMMDDHH24MI')	
				ELSE TO_CHAR(PRD_COMMON_PKG.PRD_GET_CCT_BY_BKG_INFO_FNC(VSL_CD,SKD_VOY_NO,SKD_DIR_CD,VPS_PORT_CD,CLPT_IND_SEQ,POL_YARD,'NYNNN'), 'YYYYMMDDHH24MI')	
		  END	AS RC_CLZ_DT

		, CASE 	WHEN AWK_CGO_CLZ_DT IS NOT NULL THEN TO_CHAR(AWK_CGO_CLZ_DT	, 'YYYYMMDDHH24MI')	
				--:2016-10-19:--ELSE TO_CHAR(PRD_GET_CCT_FNC(POL_YARD,VSL_SLAN_CD,SKD_DIR_CD,'AK',VSL_CD||SKD_VOY_NO||SKD_DIR_CD,CLPT_IND_SEQ,POL_ETB,POL_ETD), 'YYYYMMDDHH24MI')	
				ELSE TO_CHAR(PRD_COMMON_PKG.PRD_GET_CCT_BY_BKG_INFO_FNC(VSL_CD,SKD_VOY_NO,SKD_DIR_CD,VPS_PORT_CD,CLPT_IND_SEQ,POL_YARD,'NNYNN'), 'YYYYMMDDHH24MI')	
		  END	AS AWK_CGO_CLZ_DT

		, CASE 	WHEN BB_CGO_CLZ_DT IS NOT NULL  THEN TO_CHAR(BB_CGO_CLZ_DT  , 'YYYYMMDDHH24MI')	
				--:2016-10-19:--ELSE TO_CHAR(PRD_GET_CCT_FNC(POL_YARD,VSL_SLAN_CD,SKD_DIR_CD,'BB',VSL_CD||SKD_VOY_NO||SKD_DIR_CD,CLPT_IND_SEQ,POL_ETB,POL_ETD), 'YYYYMMDDHH24MI')	
				ELSE TO_CHAR(PRD_COMMON_PKG.PRD_GET_CCT_BY_BKG_INFO_FNC(VSL_CD,SKD_VOY_NO,SKD_DIR_CD,VPS_PORT_CD,CLPT_IND_SEQ,POL_YARD,'NNNYN'), 'YYYYMMDDHH24MI')	
		  END	AS BB_CGO_CLZ_DT

		, CASE 	WHEN VGM_CLZ_DT IS NOT NULL 	THEN TO_CHAR(VGM_CLZ_DT		, 'YYYYMMDDHH24MI')	
				ELSE TO_CHAR(BKG_GET_VGM_CCT_FNC(POL_YARD,VSL_SLAN_CD,SKD_DIR_CD,'DR',VSL_CD||SKD_VOY_NO||SKD_DIR_CD,CLPT_IND_SEQ,POL_ETB,POL_ETD), 'YYYYMMDDHH24MI')	
		  END	AS VGM_CLZ_DT

        , POL_PORT
        , POL_YARD
		, (
			SELECT YD_NM
			FROM MDM_YARD
			WHERE YD_CD = POL_YARD
		) AS POL_YARD_NM
        , NVL(POL_YARD, '') AS POL_TML_CD
        , TO_CHAR(POL_ETA, 'YYYYMMDDHH24MI') AS POL_ETA
        , TO_CHAR(POL_ETB, 'YYYYMMDDHH24MI') AS POL_ETB
        , TO_CHAR(POL_ETD, 'YYYYMMDDHH24MI') AS POL_ETD
        , SUBSTR(NEXT_PORT_ETA, 13, 5 ) AS NEXT_PORT
        , SUBSTR(NEXT_PORT_ETA, 18    ) AS NEXT_YARD
        , SUBSTR(NEXT_PORT_ETA, 1, 12) AS NEXT_ETA
        , TO_CHAR(PF_ETB, 'YYYYMMDDHH24MI') AS PF_ETB
        , TO_CHAR(PF_ETD, 'YYYYMMDDHH24MI') AS PF_ETD
        , ROUND(DECODE(PF_ETB, NULL, 0, POL_ETB - PF_ETB), 1) AS DELY_ETB_TM
        , ROUND(DECODE(PF_ETD, NULL, 0, POL_ETD - PF_ETD), 1) AS DELY_ETD_TM
        , CARRIER_CD
        , VPS_PORT_CD
        , '' AS TYPE_CD
        , '' AS FM_DT
        , '' AS TO_DT

FROM    (
            SELECT  T1.VSL_CD,  T1.SKD_VOY_NO, T1.SKD_DIR_CD, T1.VSL_SLAN_CD
                    , T2.VPS_PORT_CD AS POL_PORT
					, T2.CLPT_SEQ
					, T2.CLPT_IND_SEQ
                    , T2.YD_CD       AS POL_YARD
                    , T2.VPS_ETA_DT  AS POL_ETA                    
                    , T2.VPS_ETB_DT  AS POL_ETB
                    , T2.VPS_ETD_DT  AS POL_ETD               
                    , T2.PF_ETB_DT   AS PF_ETB
                    , T2.PF_ETD_DT   AS PF_ETD
                    , T2.TURN_PORT_IND_CD    
                    , T2.IB_CSSM_VOY_NO
                    , T2.OB_CSSM_VOY_NO      

					, T2.CGO_CLZ_DT
					, T2.DCGO_CLZ_DT
					, T2.RC_CLZ_DT
					, T2.AWK_CGO_CLZ_DT
					, T2.BB_CGO_CLZ_DT
					, T2.VGM_CLZ_DT
					          
                    , (
                        SELECT  TO_CHAR(S1.VPS_ETA_DT, 'YYYYMMDDHH24MI')||S1.VPS_PORT_CD||S1.YD_CD
                        FROM    VSK_VSL_PORT_SKD S1
                        WHERE   VSL_CD = T2.VSL_CD
                        AND     SKD_VOY_NO = T2.SKD_VOY_NO
                        AND     SKD_DIR_CD = T2.SKD_DIR_CD
                        AND     CLPT_SEQ =  (
                                                SELECT  MIN(CLPT_SEQ)
                                                FROM    VSK_VSL_PORT_SKD
                                                WHERE   VSL_CD = T2.VSL_CD
                                                AND     SKD_VOY_NO = T2.SKD_VOY_NO
                                                AND     SKD_DIR_CD = T2.SKD_DIR_CD
                                                AND     CLPT_SEQ > T2.CLPT_SEQ
                                                      AND     (SKD_CNG_STS_CD IS NULL OR SKD_CNG_STS_CD != 'S')
                         and 	rownum  	= 1
                        )
						AND		ROWNUM		= 1
                      ) AS NEXT_PORT_ETA
                    , NVL(T1.ACT_CRR_CD, T3.CRR_CD) AS CARRIER_CD
                    , DECODE(T4.VSL_SVC_TP_CD, NULL, 'O', 'O', 'O', 'T') AS VSL_SVC_TP_CD
                    , VPS_PORT_CD
            FROM    VSK_VSL_SKD T1, VSK_VSL_PORT_SKD T2, MDM_VSL_CNTR T3, MDM_VSL_SVC_LANE T4
            WHERE   T1.VSL_CD       = T2.VSL_CD
            AND     T1.SKD_VOY_NO   = T2.SKD_VOY_NO
            AND     T1.SKD_DIR_CD   = T2.SKD_DIR_CD
            AND     T1.VSL_CD       = T3.VSL_CD
            AND     T1.VSL_SLAN_CD  = T4.VSL_SLAN_CD
#if (${vps_port_cd} != '') 
            AND     T2.VPS_PORT_CD  = @[vps_port_cd]
#end
#if (${vsl_cd} != '') 
            AND     T1.VSL_CD  = @[vsl_cd]
#end
#if (${vsl_slan_cd} != '') 
            AND     T1.VSL_SLAN_CD  LIKE @[vsl_slan_cd]||'%'
#end
#if (${carrier_cd} != '') 
            AND     @[carrier_cd] = NVL(T1.ACT_CRR_CD, T3.CRR_CD)
#end
            AND     T2.VPS_ETA_DT   BETWEEN TO_DATE(@[fm_dt], 'YYYY-MM-DD') AND  TO_DATE(@[to_dt], 'YYYY-MM-DD') + 0.99999
            AND     (T2.TURN_PORT_IND_CD IS NULL OR T2.TURN_PORT_IND_CD NOT IN ('D', 'V', 'F'))
            AND     (T2.SKD_CNG_STS_CD IS NULL OR T2.SKD_CNG_STS_CD != 'S')
            AND     T4.VSL_TP_CD = 'C' /*컨테이너선*/
        ) T11
WHERE   1 = 1
#if (${type_cd} != '') 
AND		VSL_SVC_TP_CD = @[type_cd]
#end
ORDER BY VSL_CD, SKD_VOY_NO, SKD_DIR_CD, CLPT_SEQ			]]></sql>
			<params>
				<param name="vps_port_cd" type="12" value="" out="N"/>
				<param name="vsl_cd" type="12" value="" out="N"/>
				<param name="vsl_slan_cd" type="12" value="" out="N"/>
				<param name="carrier_cd" type="12" value="" out="N"/>
				<param name="fm_dt" type="12" value="" out="N"/>
				<param name="to_dt" type="12" value="" out="N"/>
				<param name="type_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
