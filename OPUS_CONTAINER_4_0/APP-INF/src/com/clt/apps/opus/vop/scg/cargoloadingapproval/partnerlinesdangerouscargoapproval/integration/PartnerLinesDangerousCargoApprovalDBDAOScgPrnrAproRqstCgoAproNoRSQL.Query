<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PartnerLinesDangerousCargoApprovalDBDAOScgPrnrAproRqstCgoAproNoRSQL">
			<desc><![CDATA[승인번호조회]]></desc>
			<sql><![CDATA[
SELECT  COM_CONSTANTMGR_PKG.COM_GETCOMPANYCODE_FNC()
||SUBSTR('${pol_cd}',3,5)||TO_CHAR(SYSDATE, 'YYMMDD')
||DECODE(NVL(LENGTH(MAX(SUBSTR(APRO_REF_NO,13,15))+1),0),
          0, '001',
          1, '00'||TO_CHAR(MAX(SUBSTR(APRO_REF_NO,13,15))+1),
          2, '0'||TO_CHAR(MAX(SUBSTR(APRO_REF_NO,13,15))+1),
          3, TO_CHAR(MAX(SUBSTR(APRO_REF_NO,13,15))+1) 
        ) 
FROM SCG_PRNR_APRO_RQST_CGO
WHERE SUBSTR(APRO_REF_NO,1,12) = COM_ConstantMgr_PKG.COM_getCompanyCode_FNC()||SUBSTR('${pol_cd}',3,5)||TO_CHAR(SYSDATE, 'yymmdd')
			]]></sql>
			<params>
			</params>
		</query>
	</querys>
</sqls>
