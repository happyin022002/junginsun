<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="OwnDangerousCargoApprovalDBDAOSelectAproRqstForVVDChangeRSQL">
			<desc><![CDATA[selectAproRqstForVVDChange]]></desc>
			<sql><![CDATA[
SELECT     	XX.BKG_NO
      	,   XX.SPCL_CGO_CATE_CD
      	,   YY.SPCL_CGO_APRO_RQST_SEQ
      	,   YY.VSL_PRE_PST_CD
      	,   YY.VSL_SEQ
		,	YY.VSL_CD
		,	YY.SKD_VOY_NO
		,	YY.SKD_DIR_CD

    	,  	YY.POL_CD  					AS LOC_CD
    	,  (SELECT    	NVL(VS.ACT_CRR_CD,VC.CRR_CD)
        	FROM      	VSK_VSL_SKD   	VS
               		,  	MDM_VSL_CNTR  	VC
        	WHERE     	1 = 1
        	AND       	VS.VSL_CD     	= VC.VSL_CD
        	AND       	VS.VSL_CD     	= YY.VSL_CD
			AND			VS.SKD_VOY_NO	= YY.SKD_VOY_NO
			AND			VS.SKD_DIR_CD	= YY.SKD_DIR_CD
        	)			AS CRR_CD
FROM       	SCG_APRO_RQST             	XX
        ,  	SCG_VVD_APRO_RQST         	YY
WHERE      	XX.BKG_NO                 	= YY.BKG_NO
AND        	XX.SPCL_CGO_APRO_RQST_SEQ 	= YY.SPCL_CGO_APRO_RQST_SEQ
AND        	XX.SPCL_CGO_CATE_CD       	= 'DG'
AND        	XX.LST_RQST_DAT_FLG       	= 'N'
AND        	YY.MAPG_EDI_TRSM_STS_CD   	= 'S'
AND        	XX.BKG_NO                 	= @[bkg_no]

AND         YY.SPCL_CGO_APRO_RQST_SEQ   = (SELECT    MAX(T.SPCL_CGO_APRO_RQST_SEQ)
                                           FROM      SCG_VVD_APRO_RQST   		T
                                           WHERE     T.BKG_NO            		= YY.BKG_NO
                                           AND       T.VSL_CD            		= YY.VSL_CD
                                           AND       T.SKD_VOY_NO        		= YY.SKD_VOY_NO
                                           AND       T.SKD_DIR_CD        		= YY.SKD_DIR_CD
                                           )

AND        	NOT EXISTS                	(SELECT   	''
                                      	 FROM     	SCG_APRO_RQST            	X
                                            	,  	SCG_VVD_APRO_RQST        	Y       
                                      	 WHERE    	X.BKG_NO                 	= Y.BKG_NO
                                      	 AND      	X.SPCL_CGO_APRO_RQST_SEQ 	= Y.SPCL_CGO_APRO_RQST_SEQ
                                      	 AND      	X.SPCL_CGO_CATE_CD       	= 'DG'
                                      	 AND      	X.LST_RQST_DAT_FLG       	= 'Y'
                                      	 AND      	X.BKG_NO                 	= XX.BKG_NO
                                      	 AND      	Y.VSL_CD                 	= YY.VSL_CD
                                      	 AND      	Y.SKD_VOY_NO             	= YY.SKD_VOY_NO
                                      	 AND      	Y.SKD_DIR_CD             	= YY.SKD_DIR_CD
                                      	)

AND			1 							= CASE 	WHEN (	SELECT   MAX(T.SPCL_CGO_APRO_RQST_SEQ)
                                                       	FROM     SCG_VVD_APRO_RQST			T
                                                      	WHERE    T.BKG_NO                  	= YY.BKG_NO
                                                      	AND      T.VSL_PRE_PST_CD          	= YY.VSL_PRE_PST_CD
                                                      	AND      T.VSL_SEQ                 	= YY.VSL_SEQ
                                                      	AND      T.MAPG_EDI_TRSM_STS_CD    	= 'SX'           
													 )	> YY.SPCL_CGO_APRO_RQST_SEQ THEN 0
                                               	ELSE 1
                                          END			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
