<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueCollectionMgtDBDAOSearchPayerContactPointRSQL">
			<desc><![CDATA[DEM/DET Payer Info & Fax/E-mail]]></desc>
			<sql><![CDATA[
SELECT SYS_AREA_GRP_ID AS SVR_ID
	,CUST_CNT_CD||LPAD(CUST_SEQ,6,'0') AS CUST_CD
       ,CUST_CNT_CD
       ,CUST_SEQ
       ,CUST_CNTC_PNT_SEQ
       ,DMDT_PAYR_CNTC_PNT_NM AS PAYR_CNTC_PNT_NM
       ,PAYR_CNTC_PNT_PHN_NO
       ,PAYR_CNTC_PNT_FAX_NO
       ,PAYR_CNTC_PNT_EML          
FROM DMT_PAYR_CNTC_PNT
WHERE SYS_AREA_GRP_ID = (SELECT SYS_AREA_GRP_ID 
                         FROM COM_SYS_AREA_GRP_ID
                         WHERE CNT_CD = (SELECT SUBSTR(LOC_CD, 1, 2)
                                         FROM MDM_ORGANIZATION
                                         WHERE OFC_CD = @[s_ofc_cd])
                         AND CO_IND_CD = 'H'
                         )
AND CUST_CNT_CD 	= substr(@[s_cust_cd],1,2)
AND CUST_SEQ 		= substr(@[s_cust_cd],3,6)
ORDER BY CUST_CNTC_PNT_SEQ			]]></sql>
			<params>
				<param name="s_ofc_cd" type="12" value="" out="N"/>
				<param name="s_cust_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
