<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeCalculationDBDAODmtChgCalcRSQL">
			<desc><![CDATA[ChargeCalculationDBDAODmtChgCalcVORSQL.Query]]></desc>
			<sql><![CDATA[
SELECT DISTINCT
	 B.BKG_NO
	,B.BL_NO
	,C.SYS_AREA_GRP_ID AS SVR_ID
	,C.DMDT_CHG_STS_CD
    ,C.CNTR_NO
    ,C.CNTR_CYC_NO
    ,C.DMDT_CHG_LOC_DIV_CD
	,C.OFC_CD
	,C.OFC_RHQ_CD
    ,C.CHG_SEQ
    ,B.CNTR_TPSZ_CD
    ,C.FM_MVMT_YD_CD
    ,C.TO_MVMT_YD_CD
    ,C.FM_MVMT_STS_CD
    ,C.TO_MVMT_STS_CD
    ,C.DMDT_TRF_CD
    ,C.FT_DYS
    ,C.FX_FT_OVR_DYS
    ,TO_CHAR(C.FM_MVMT_DT, 'YYYYMMDD') FM_MVMT_DT
    ,TO_CHAR(C.TO_MVMT_DT, 'YYYYMMDD') TO_MVMT_DT
    ,TO_CHAR(C.FT_CMNC_DT, 'YYYYMMDD') FT_CMNC_DT
    ,TO_CHAR(C.FT_END_DT, 'YYYYMMDD') FT_END_DT
    ,C.BZC_TRF_CURR_CD
    ,C.ORG_CHG_AMT
    ,C.SC_RFA_EXPT_AMT
    ,C.AFT_EXPT_DC_AMT
    ,C.BIL_AMT
    ,DECODE(C.CHG_SEQ, 1, 'G', 'B' 	) AS CHG_TYPE
	,NVL(B.SOC_FLG, 'N') AS SOC_FLG
    ,CASE
        WHEN C.DMDT_TRF_CD='DMIF' AND C.TO_MVMT_STS_CD='ID' THEN 'L'
        WHEN C.DMDT_TRF_CD='DMIF' AND C.TO_MVMT_STS_CD NOT IN ('ID','CS','DR') THEN 'I'
        WHEN C.DMDT_TRF_CD='DMOF' AND C.DMDT_CHG_LOC_DIV_CD<>'POL' THEN 'L'
        WHEN C.DMDT_TRF_CD='DMOF' AND C.DMDT_CHG_LOC_DIV_CD='POL' THEN 'I'
	END AS LI
    ,(	SELECT NVL(HLG_TP_CD, 'N')      /* 'C'ARRIER, 'M'ERCHANT, 'N'ULL */
    	FROM BKG_EUR_TRO
    	WHERE BKG_NO	= B.BKG_NO
    	AND  IO_BND_CD	= SUBSTR(C.DMDT_TRF_CD, 3, 1)    /* IN/OUT BOUND */
    	AND  NVL(CXL_FLG, 'N')    = 'N'
    	AND  CNTR_NO	= C.CNTR_NO
		AND	 ROWNUM = 1
    ) AS CH
    ,(	SELECT 'Y'
    	FROM DUAL
    	WHERE EXISTS (
    		SELECT  BDD.RLSE_STS_CD
    		FROM    BKG_DO     BDO,
            		BKG_DO_DTL BDD
    		WHERE BDO.BKG_NO        = BDD.BKG_NO
    		AND   BDO.BKG_NO        = B.BKG_NO
    		AND   BDD.RLSE_STS_CD IN ('R', 'I')) 
	) AS D_O
    ,(	SELECT  BDD.EVNT_OFC_CD
    	FROM    BKG_DO     BDO,
            	BKG_DO_DTL BDD
    	WHERE BDO.BKG_NO        = BDD.BKG_NO
   		AND   BDO.BKG_NO        = B.BKG_NO
    	AND   BDD.RLSE_STS_CD IN ('R', 'I')
    	AND ROWNUM = 1 
	) AS RLSE_OFC
	,BR.CLT_OFC_CD
	,NVL(C.OFC_TRNS_FLG, 'N') AS OFC_TRNS_FLG
    ,(	SELECT 'S'
    	FROM DUAL
    	WHERE EXISTS (
    		SELECT 1
    		FROM BKG_ROLL_OVR R
    		WHERE R.BKG_NO = B.BKG_NO
    		AND R.ROLL_OVR_RSN_CD = 'S' )
	) AS ROLL_OVR
    ,C.DMDT_INV_NO
	,TO_CHAR(IDT.CRE_DT, 'YYYYMMDD') AS ISS_DT
	,IDT.INV_CURR_CD
	,IDT.CNTR_INV_AMT
	,IDT.DMDT_AR_IF_CD
    ,C.WEB_IND_FLG 
	,DECODE(C.WEB_IND_FLG, 'Y', TO_CHAR(NVL(C.WEB_MTY_DT, C.TO_MVMT_DT), 'YYYY-MM-DD'), TO_CHAR(C.WEB_MTY_DT, 'YYYY-MM-DD')) AS WEB_CRE_DT
	,DECODE(C.WEB_IND_FLG, 'Y', TO_CHAR(NVL(C.WEB_MTY_DT, C.TO_MVMT_DT) + 7, 'YYYY-MM-DD'), TO_CHAR(C.WEB_MTY_DT + 7, 'YYYY-MM-DD')) AS WEB_MTY_DT
    ,C.WEB_NTFY_PIC_NM
    ,C.DUL_TP_EXPT_FLG
    ,C.CXL_BKG_CHG_FLG
    ,NVL(IDT.CRE_OFC_CD, C.OFC_CD) AS CRE_OFC_CD

#*
	,'' NOT_CRE_BAL_FLG
	,'' ORG_FT_OVR_DYS
	,'' SC_RFA_EXPT_OVR_DYS
	,'' AFT_EXPT_OVR_DYS
	,'' DMDT_TRF_APLY_TP_CD
	,'' SC_RFA_AMT
	,'' AFT_EXPT_AMT
	,'' BZC_TRF_SEQ
	,'' BZC_TRF_GRP_SEQ
	,'' BZC_TRF_APLY_DT
	,'' RFA_EXPT_APRO_NO
	,'' RFA_EXPT_DAR_NO
	,'' RFA_EXPT_MAPG_SEQ
	,'' RFA_EXPT_VER_SEQ
	,'' RFA_RQST_DTL_SEQ
	,'' AFT_EXPT_APRO_NO
	,'' AFT_EXPT_DAR_NO
	,'' AFT_EXPT_ADJ_SEQ
	,'' SC_NO
	,'' SC_EXPT_VER_SEQ
	,'' SC_EXPT_GRP_SEQ
	,'' SC_RFA_EXPT_APLY_DT
	,'' CORR_RMK
	,'' OFC_RHQ_CD	
	,'' CMDT_CD
	,'' CMDT_TRF_SEQ
	,'' CMDT_EXPT_APLY_DT
	,'' CMDT_OVR_DYS
	,'' CMDT_EXPT_AMT
	,'' CRE_USR_ID
	,'' UPD_DT
	,'' UPD_USR_ID
	,'' UPD_OFC_CD
	,'' DELT_USR_ID
	,'' DELT_OFC_CD
	,'' CUST_CNT_CD
	,'' CUST_SEQ
	,'' ACT_CNT_CD
	,'' ACT_CUST_SEQ
	,'' FM_MVMT_YR
	,'' FM_MVMT_SEQ
	,'' FM_MVMT_SPLIT_NO 
	,'' TO_MVMT_YR
	,'' TO_MVMT_SEQ
	,'' TO_MVMT_SPLIT_NO
	,'' WEB_NTFY_PIC_TELCM_NO
	,'' WEB_CRE_USR_ID
*#

#if (${est_mk} == 'P') 
FROM	DMT_CHG_PRE_CALC_BKG_CNTR	B
        ,DMT_CHG_PRE_CALC           C
#else
FROM	DMT_CHG_BKG_CNTR	B
        ,DMT_CHG_CALC		C
#end
		,BKG_RATE	BR
        ,(
		SELECT  IM.INV_CURR_CD
				,IM.DMDT_AR_IF_CD
				,IM.CRE_DT
				,IM.CRE_OFC_CD
				,ID.CNTR_INV_AMT
				,ID.DMDT_INV_NO
				,ID.SYS_AREA_GRP_ID
				,ID.CNTR_NO
				,ID.CNTR_CYC_NO
				,ID.DMDT_TRF_CD
				,ID.DMDT_CHG_LOC_DIV_CD
				,ID.CHG_SEQ
		FROM    DMT_INV_MN  IM,
				DMT_INV_DTL ID
		WHERE   IM.BKG_NO			= @[bkg_no]
		AND     IM.DMDT_INV_NO		= ID.DMDT_INV_NO
		AND     IM.CRE_OFC_CD		= ID.CRE_OFC_CD
		AND     IM.DMDT_INV_STS_CD	= 'I'
		) IDT
         
WHERE   B.SYS_AREA_GRP_ID	= C.SYS_AREA_GRP_ID
	AND B.CNTR_NO           = C.CNTR_NO
	AND B.CNTR_CYC_NO       = C.CNTR_CYC_NO
	AND B.BKG_NO			= BR.BKG_NO(+)
	AND B.BKG_NO        	= @[bkg_no]
	AND C.DMDT_TRF_CD       = @[dmdt_trf_cd]

#if (${est_mk} != 'P')
	AND C.DMDT_CHG_STS_CD   IN (
		#foreach( $chg_sts_cd in ${chg_sts_cd_list} )
			#if($velocityCount < $chg_sts_cd_list.size()) '$chg_sts_cd', #else '$chg_sts_cd' #end
		#end
		)
#end

	AND NOT (C.DUL_TP_EXPT_FLG  = 'Y' AND SUBSTR(C.DMDT_TRF_CD, 1, 1) = 'D')
	AND C.DMDT_CHG_LOC_DIV_CD	<> 'SZP'

	AND C.DMDT_INV_NO 			= IDT.DMDT_INV_NO(+)
	AND C.SYS_AREA_GRP_ID 		= IDT.SYS_AREA_GRP_ID(+)
	AND C.CNTR_NO				= IDT.CNTR_NO(+)
	AND C.CNTR_CYC_NO			= IDT.CNTR_CYC_NO(+)
	AND C.DMDT_TRF_CD			= IDT.DMDT_TRF_CD(+)
	AND C.DMDT_CHG_LOC_DIV_CD	= IDT.DMDT_CHG_LOC_DIV_CD(+)
	AND C.CHG_SEQ				= IDT.CHG_SEQ(+)

#if (${rhq_ofc_cd} != 'All')
	AND	C.OFC_RHQ_CD			= @[rhq_ofc_cd]
#end

ORDER BY C.DMDT_TRF_CD, C.CNTR_NO, C.CNTR_CYC_NO, TO_CHAR(C.FM_MVMT_DT, 'YYYYMMDD')			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="dmdt_trf_cd" type="12" value="" out="N"/>
				<param name="rhq_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
