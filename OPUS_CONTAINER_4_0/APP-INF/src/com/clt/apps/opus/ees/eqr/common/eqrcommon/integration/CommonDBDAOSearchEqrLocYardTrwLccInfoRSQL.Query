<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CommonDBDAOSearchEqrLocYardTrwLccInfoRSQL">
			<desc><![CDATA[Truck&Rail&Water Yard 조회]]></desc>
			<sql><![CDATA[
SELECT 
	DECODE(FY.CHK_FLG||TY.CHK_FLG||DECODE(FY.LCC_CD, TY.LCC_CD, 'Y', 'N'), 'YYY', 'Y', 'N') AS YARD_YN
FROM (SELECT 
		'Y' AS CHK_FLG
        , ME.LCC_CD  LCC_CD
     FROM MDM_YARD  MY
     	  ,MDM_LOCATION ML
          ,MDM_EQ_ORZ_CHT ME
		  ,EQR_ECC_LNK EEL
     WHERE  MY.DELT_FLG = 'N'
         AND    SUBSTR(MY.YD_CD, 1, 5) = ML.LOC_CD
         AND    ML.SCC_CD                 = ME.SCC_CD
         AND    MY.YD_CD                  = NVL(@[locfmyard], @[loctoyard])  -- NVL(:fm_yd_cd, :to_yd_cd)
		 AND    EEL.FM_ECC_CD = SUBSTR(MY.YD_CD, 1, 5) 
         AND    TRSP_MOD_CD = 'R'
         AND    NVL(EEL.DELT_FLG,'N') = 'N'
         AND    MY.DELT_FLG <> 'Y'
         AND    ROWNUM                  = 1) FY
     , (SELECT 
			'Y' AS CHK_FLG
            , ME.LCC_CD LCC_CD              
        FROM MDM_YARD  MY
             ,MDM_LOCATION ML
             ,MDM_EQ_ORZ_CHT ME
			 ,EQR_ECC_LNK EEL
        WHERE MY.DELT_FLG = 'N'
         	AND    SUBSTR(MY.YD_CD, 1, 5) = ML.LOC_CD
         	AND    ML.SCC_CD                 = ME.SCC_CD
         	AND    MY.YD_CD                  = NVL(@[loctoyard], @[locfmyard])  -- NVL(:to_yd_cd, :fm_yd_cd)
			AND    EEL.TO_ECC_CD = SUBSTR(MY.YD_CD, 1, 5) 
             AND    NVL(EEL.DELT_FLG,'N') = 'N'
             AND    MY.DELT_FLG <> 'Y'
             AND    TRSP_MOD_CD = 'R'
         	AND    ROWNUM                  = 1) TY			]]></sql>
			<params>
				<param name="locfmyard" type="12" value="11" out="N"/>
				<param name="loctoyard" type="12" value="22" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
