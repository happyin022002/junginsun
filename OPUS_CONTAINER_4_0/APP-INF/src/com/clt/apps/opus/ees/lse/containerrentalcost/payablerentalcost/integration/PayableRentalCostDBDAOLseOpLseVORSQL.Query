<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="PayableRentalCostDBDAOLseOpLseVORSQL">
			<desc><![CDATA[   ]]></desc>
			<sql><![CDATA[
SELECT A.OP_LSE_STS_CD
     , A.VNDR_SEQ
     , DECODE(A.VNDR_SEQ, 146684, 'UNITAS', 2444, 'ICC') AS VNDR_NM
     , TO_CHAR(A.BIL_FM_DT, 'YYYYMMDD') AS BIL_FM_DT
     , TO_CHAR(A.BIL_TO_DT, 'YYYYMMDD') AS BIL_TO_DT
     , A.VSL_CD
     , A.SKD_VOY_NO
     , A.SKD_DIR_CD
     , A.REV_DIR_CD
     , TO_CHAR(A.PAY_DT, 'YYYYMMDD') AS PAY_DT
     , A.CNTR_TPSZ_CD
     , A.AGMT_CTY_CD || LPAD(A.AGMT_SEQ, 6, '0') AS AGMT_NO
     , A.AGMT_REF_NO
     , B.VNDR_LGL_ENG_NM
     , A.CURR_CD
     , A.PRIN_AMT
     , A.BAL_AMT
     , A.INT_AMT
     , A.LIBOR_AMT
     , A.PAY_AMT
     , A.INV_NO
     , A.DIFF_RMK
     , C.LSE_CTRT_NO
     , A.OP_SEQ
     , A.AGMT_CTY_CD
     , A.AGMT_SEQ
     , D.ACCT_CD
     , D.COST_CD
     , A.OP_LSE_QTY
     , D.LGS_COST_FULL_NM AS COST_NM
FROM   LSE_OP_LSE    A
     , MDM_VENDOR    B
     , LSE_AGREEMENT C
     , LSE_RNTL_COST_ACCT_ORD D
WHERE A.VNDR_SEQ = @[vndr_seq]
AND    A.BIL_FM_DT <= TO_DATE(@[bil_to_dt], 'YYYYMMDD')
AND    A.BIL_TO_DT >= TO_DATE(@[bil_fm_dt], 'YYYYMMDD')
AND    B.VNDR_SEQ = A.VNDR_SEQ
AND    A.AGMT_CTY_CD = C.AGMT_CTY_CD
AND    A.AGMT_SEQ = C.AGMT_SEQ
AND    A.OP_LSE_STS_CD <> 'D'
AND    D.LSE_RCV_CHG_TP_CD = 'OPL'
#if ( ${agmt_seq} != '' )
AND    LPAD(A.AGMT_SEQ, 6, '0') = LPAD(@[agmt_seq], 6, '0') 
#end
AND    D.LSTM_CD = NVL( (SELECT  LRC.LSTM_CD
                         FROM LSE_RNTL_COST_ACCT_ORD LRC
                            , LSE_AGREEMENT LA
                         WHERE LRC.LSE_RCV_CHG_TP_CD = D.LSE_RCV_CHG_TP_CD 
                         AND    LRC.LSTM_CD          =  LA.LSTM_CD
                         AND    LA.AGMT_CTY_CD       = C.AGMT_CTY_CD
                         AND    LA.AGMT_SEQ          = C.AGMT_SEQ
                         AND    ROWNUM               = 1)
                      , (SELECT  LRC.LSTM_CD
                         FROM  LSE_RNTL_COST_ACCT_ORD LRC
                         WHERE LRC.LSE_RCV_CHG_TP_CD = D.LSE_RCV_CHG_TP_CD 
                         AND    LRC.LSTM_CD          = 'XX'
                         AND    ROWNUM               = 1))			]]></sql>
			<params>
				<param name="vndr_seq" type="2" value="" out="N"/>
				<param name="bil_to_dt" type="12" value="" out="N"/>
				<param name="bil_fm_dt" type="12" value="" out="N"/>
				<param name="agmt_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
