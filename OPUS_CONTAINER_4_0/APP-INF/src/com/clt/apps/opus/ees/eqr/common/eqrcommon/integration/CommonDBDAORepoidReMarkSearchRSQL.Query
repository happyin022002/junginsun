<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CommonDBDAORepoidReMarkSearchRSQL">
			<desc><![CDATA[repoidReMark 조회]]></desc>
			<sql><![CDATA[
SELECT              						
    CASE WHEN REPO_PLN_DTRB_FLG ='Y' OR REPO_PLN_AUTO_GEN_FLG ='Y' THEN 
        'FALSE'                					          
    ELSE 										
        'TRUE'										                 
    END  STATUS,        						
    SCNR_ID,	
    REPO_PLN_RMK   , 
    REPO_PLN_ID,   
    REPO_PLN_DTRB_FLG	,
	NVL((SELECT 'Y' FROM (
		SELECT 'Y' FROM EQR_PLAN_V WHERE REPO_PLN_ID=@[repo_id] AND ROWNUM=1
		 UNION ALL
         SELECT 'Y' FROM EQR_VSL_LDIS_PLN_COD_TMP WHERE REPO_PLN_ID=@[repo_id] AND ROWNUM=1
		) WHERE ROWNUM=1
		),'N') AS REPO_PLN_LST
FROM 
    EQR_EQ_REPO_PLN  						
WHERE REPO_PLN_ID = @[repo_id]			]]></sql>
			<params>
				<param name="repo_id" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
