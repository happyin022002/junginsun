<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeCalculationDBDAOBalanceCreationChargeVORSQL">
			<desc><![CDATA[Status가 F, C, I 이고, Balance Charge가 없거나 있일 경우 마지막 Balance Charge 이면서  To MVMT Status가 'DR' 인 Charge의 일부 정보를 조회한다.]]></desc>
			<sql><![CDATA[
SELECT	FM_MVMT_STS_CD,
		TO_CHAR(FM_MVMT_DT, 'YYYYMMDD') FM_MVMT_DT,
		FM_MVMT_YD_CD,
		TO_MVMT_STS_CD,
		TO_CHAR(TO_MVMT_DT, 'YYYYMMDD') TO_MVMT_DT,
		TO_MVMT_YD_CD

FROM	DMT_CHG_CALC
            
WHERE	SYS_AREA_GRP_ID		=	@[svr_id]
AND		CNTR_NO				=	@[cntr_no]
AND		CNTR_CYC_NO			=	@[cntr_cyc_no]
AND		DMDT_TRF_CD			=	@[dmdt_trf_cd]
AND		DMDT_CHG_LOC_DIV_CD	=	@[dmdt_chg_loc_div_cd]
AND		CHG_SEQ				=	@[chg_seq]
AND		DMDT_CHG_STS_CD		IN	('F', 'C', 'I')
AND		TO_MVMT_STS_CD		=	'DR'			]]></sql>
			<params>
				<param name="svr_id" type="12" value="" out="N"/>
				<param name="cntr_no" type="12" value="" out="N"/>
				<param name="cntr_cyc_no" type="12" value="" out="N"/>
				<param name="dmdt_trf_cd" type="12" value="" out="N"/>
				<param name="dmdt_chg_loc_div_cd" type="12" value="" out="N"/>
				<param name="chg_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
