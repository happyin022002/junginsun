<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="LeaseReportDBDAOsearchOffHireReportbyMonthSummaryRSQL">
			<desc><![CDATA[월별로 임차한 실적을 조회]]></desc>
			<sql><![CDATA[
WITH PARAM
AS (
    SELECT 
         @[period_stdt] PERIOD_STDT
        ,@[period_eddt] PERIOD_EDDT
        ,@[loc_cd] LOC_CD
        ,@[loc_tp] LOC_TP
        ,@[term_change] TERM_CHANGE
	FROM   DUAL
)
, XXX AS ( 
SELECT
      #foreach($key IN ${tysz})
          SUM(DECODE(DD, '$key' , EE, 0)) $key ,
      #end  
      CC  
FROM ( SELECT 
         TO_CHAR(C.CNTR_STS_EVNT_DT , 'YYYY-MM') CC,
         A.CNTR_TPSZ_CD DD, 
         COUNT(A.CNTR_NO) EE
FROM MST_CONTAINER A,
     MDM_CNTR_TP_SZ B,
     MST_CNTR_STS_HIS C,
     LSE_AGREEMENT D ,
     PARAM P
WHERE A.CNTR_TPSZ_CD = B.CNTR_TPSZ_CD
--  AND A.ONH_YD_CD <> 'KRSEL1H'
  AND A.CO_CRE_FLG = 'N'
  AND A.CNTR_NO = C.CNTR_NO
  AND C.CNTR_STS_EVNT_DT BETWEEN TO_DATE(P.PERIOD_STDT, 'YYYYMMDD') AND TO_DATE(P.PERIOD_EDDT, 'YYYYMMDD')
  AND C.AGMT_CTY_CD = D.AGMT_CTY_CD
  AND C.AGMT_SEQ = D.AGMT_SEQ
--  AND SUBSTR(NVL(C.CNTR_STS_RMK, ' '), 1, 6) <> 'SELLOE'
  --AND C.CNTR_LSTM_CNG_FLG = 'N'
  --AND A.CO_CRE_FLG = P.TERM_CHANGE
  AND C.AGMT_SEQ <> 999990
#if (${term_change} != '' )             
          AND C.CNTR_LSTM_CNG_FLG = P.TERM_CHANGE
#end

#if (${dii} != '' )
  #if (${dii} == 'N' )
		  AND C.CNTR_STS_CD = 'LSO'
  #elseif (${dii} == 'Y' ) 
          AND C.CNTR_STS_CD = 'DIO'
  #end
#else
          AND C.CNTR_STS_CD IN ('LSO', 'DIO')
#end    

#if (${loc_cd} != '' ) 
          AND DECODE(P.loc_tp, 'R', C.RCC_CD, 'L', C.LCC_CD, 'S', C.SCC_CD ) = P.LOC_CD
#end

#if (${lstm_cd_str} != '' ) 
          AND D.LSTM_CD IN ( #foreach($key IN ${lstm_cd})
                                 #if($velocityCount < $lstm_cd.size())
                                     '$key',
                                 #else
                                     '$key'
                                 #end
                             #end )
#end

       GROUP BY TO_CHAR(C.CNTR_STS_EVNT_DT , 'YYYY-MM'), A.CNTR_TPSZ_CD )
GROUP BY CC 
ORDER BY CC )
SELECT
  #foreach($key IN ${tysz})            
   DECODE( AA.RCC , 'Ratio' ,  TO_CHAR( AA.$key , '990.00') , TO_CHAR( AA.$key , '999,999,999,990'  )) $key ,        
  #end
  TO_CHAR( AA.DIV_TOTAL , '999,999,999,990'  ) DIV_TOTAL ,
  TO_CHAR((AA.DIV_TOTAL / BB.DIV_TOTAL ) * 100 , '990.00' ) || '%'  RATIO ,
  AA.RCC
FROM
(SELECT
      #foreach($key IN ${tysz})
         $key ,
      #end  
        (
      #foreach($key IN ${tysz})
          #if($velocityCount < $tysz.size())
              $key + 
          #else
              $key
          #end
      #end 
       ) DIV_TOTAL ,
      CC RCC
FROM XXX
UNION ALL
SELECT
      #foreach($key IN ${tysz})
        SUM( $key ) $key,
      #end  
        (
      #foreach($key IN ${tysz})
          #if($velocityCount < $tysz.size())
              SUM($key) + 
          #else
              SUM($key)
          #end
      #end 
       ) DIV_TOTAL ,
      'G.TTL' RCC
FROM XXX
UNION ALL
SELECT
      #foreach($key IN ${tysz})
       SUM( $key ) / (
          #foreach($key IN ${tysz})            
              #if($velocityCount < $tysz.size())
                   SUM($key) + 
              #else
                   SUM($key)
              #end         
          #end  
                       ) * 100  $key ,
      #end  
      100 DIV_TOTAL ,
      'Ratio' RCC
FROM XXX ) AA , ( SELECT
                    (#foreach($key IN ${tysz})            
                        #if($velocityCount < $tysz.size())
                           SUM($key) + 
                        #else
                           SUM($key)
                        #end         
                     #end ) DIV_TOTAL 
                  FROM XXX ) BB			]]></sql>
			<params>
				<param name="period_stdt" type="12" value="" out="N"/>
				<param name="period_eddt" type="12" value="" out="N"/>
				<param name="loc_cd" type="12" value="" out="N"/>
				<param name="loc_tp" type="12" value="" out="N"/>
				<param name="term_change" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
