<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DMTCommonDBDAODualTypeRHQHierarchyByLocationRSQL">
			<desc><![CDATA[Location 을 포함하는 Dual Type 의 RHQ, Country, Region or State 를 조회하는 쿼리]]></desc>
			<sql><![CDATA[
SELECT	A.CNT_CD, B.CNT_NM, A.RGN_CD, C.RGN_NM, A.STE_CD, D.STE_NM
FROM	DMT_CALC_TP A, MDM_COUNTRY B, MDM_REGION C, MDM_STATE D
WHERE	A.LOC_CD = @[loc_cd]
	AND A.DMDT_CALC_TP_CD = 'D'
	AND A.CNT_CD = B.CNT_CD
	AND A.CNT_CD = C.CNT_CD(+)
	AND A.RGN_CD = C.RGN_CD(+)
	AND A.CNT_CD = D.CNT_CD(+)
	AND A.STE_CD = D.STE_CD(+)			]]></sql>
			<params>
				<param name="loc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
