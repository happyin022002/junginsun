<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="TimeClockStopMgtDBDAOSearchTimeClockChargeListRSQL">
			<desc><![CDATA[Time Clock 저장 후 계산 로직을 처리 할 대상 조회]]></desc>
			<sql><![CDATA[
SELECT C.SYS_AREA_GRP_ID AS SVR_ID
      ,C.CNTR_NO
      ,C.CNTR_CYC_NO
      ,C.DMDT_TRF_CD
      ,C.DMDT_CHG_LOC_DIV_CD
      ,C.CHG_SEQ
      ,B.BKG_NO
	  ,B.BL_NO
      ,B.VSL_CD
      ,B.SKD_VOY_NO
      ,B.SKD_DIR_CD
      ,C.CUST_CNT_CD
      ,C.CUST_SEQ
      ,C.ACT_CNT_CD
      ,C.ACT_CUST_SEQ
      ,SUBSTR (C.DMDT_TRF_CD
              ,3
              ,1
              ) AS IO_BND_CD
      ,B.CNTR_TPSZ_CD
      ,TO_CHAR (C.FM_MVMT_DT, 'YYYYMMDD') AS FM_MVMT_DT
      ,C.FM_MVMT_YD_CD
      ,C.FM_MVMT_STS_CD
      ,TO_CHAR (C.TO_MVMT_DT, 'YYYYMMDD') AS TO_MVMT_DT
      ,C.TO_MVMT_YD_CD
      ,C.TO_MVMT_STS_CD
      ,C.DMDT_CHG_STS_CD
      ,C.OFC_CD
      ,C.OFC_RHQ_CD
      ,NVL (C.OFC_TRNS_FLG, 'N') AS OFC_TRNS_FLG
      ,NVL(C.DUL_TP_EXPT_FLG, 'N') AS DUL_TP_EXPT_FLG
	  ,C.CORR_RMK
	  ,C.WEB_MTY_DT     
      ,NVL(C.CXL_BKG_CHG_FLG, 'N') AS CXL_BKG_CHG_FLG
  FROM DMT_TM_CLK_STOP S
      ,DMT_CHG_CALC C
      ,DMT_CHG_BKG_CNTR B
      ,COM_SYS_AREA_GRP_ID CS
 WHERE S.CLK_STOP_NO = @[clk_stop_no]
   AND C.DMDT_TRF_CD = S.DMDT_TRF_CD
   AND C.OFC_CD = S.CLK_STOP_OFC_CD
   AND (   (    C.FM_MVMT_DT <= TO_DATE(TO_CHAR(S.CLK_STOP_TO_DT,'YYYYMMDD'),'YYYYMMDD')
                                + .99999
            AND C.TO_MVMT_DT >= TO_DATE(TO_CHAR(S.CLK_STOP_TO_DT,'YYYYMMDD'),'YYYYMMDD')
                                + .0
           )
        OR (    C.FM_MVMT_DT <= TO_DATE(TO_CHAR(S.CLK_STOP_FM_DT,'YYYYMMDD'),'YYYYMMDD')
                                + .99999
            AND C.TO_MVMT_DT >= TO_DATE(TO_CHAR(S.CLK_STOP_FM_DT,'YYYYMMDD'),'YYYYMMDD')
                                + .0
           )
        OR (    C.FM_MVMT_DT >= TO_DATE(TO_CHAR(S.CLK_STOP_FM_DT,'YYYYMMDD'),'YYYYMMDD')
                                + .0
            AND C.TO_MVMT_DT <= TO_DATE(TO_CHAR(S.CLK_STOP_TO_DT,'YYYYMMDD'),'YYYYMMDD')
                                + .99999
           )
       )
   AND B.SYS_AREA_GRP_ID = C.SYS_AREA_GRP_ID
   AND B.CNTR_NO = C.CNTR_NO
   AND B.CNTR_CYC_NO = C.CNTR_CYC_NO
   AND C.DMDT_CHG_LOC_DIV_CD NOT IN ('TSP', 'SZP')
   AND C.SYS_AREA_GRP_ID = CS.SYS_AREA_GRP_ID
   AND CS.CO_IND_CD = 'H'
   AND CS.CNT_CD = (SELECT SUBSTR (LOC_CD
                                  ,1
                                  ,2
                                  )
                      FROM MDM_ORGANIZATION
                     WHERE OFC_CD = C.OFC_CD)
   AND C.DMDT_CHG_STS_CD NOT IN ('I', 'T')			]]></sql>
			<params>
				<param name="clk_stop_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
