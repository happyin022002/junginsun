<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeCalculationDBDAOCommodityGroupTariffVORSQL">
			<desc><![CDATA[Commodity Exception Tariff의 Free Time일수 및 주말, 공휴일 포함 여부를 조회한다]]></desc>
			<sql><![CDATA[
SELECT	CMDT_ADD_DYS AS ADD_DYS
		,CMDT_TTL_DYS AS TTL_DYS
		,XCLD_SAT_FLG
		,XCLD_SUN_FLG
		,XCLD_HOL_FLG
		,M.REP_CMDT_CD

		,'' CMDT_EXPT_APLY_DT
		,'' CMDT_CD
		,'' CMDT_OVR_DYS
		,'' CURR_CD
		,'' CMDT_EXPT_AMT

FROM	DMT_CMDT_GRP	G,
		MDM_COMMODITY	M
WHERE	G.SYS_AREA_GRP_ID	= @[svr_id]
AND     G.DMDT_TRF_CD		= @[dmdt_trf_cd]
AND		G.TRF_SEQ			= @[trf_seq]
AND		G.CMDT_CD			= @[cmdt_cd]
AND		G.CMDT_TRF_SEQ		= @[cmdt_trf_seq]
AND     G.DELT_FLG			= 'N'
AND		G.CMDT_CD			= M.CMDT_CD			]]></sql>
			<params>
				<param name="svr_id" type="12" value="" out="N"/>
				<param name="dmdt_trf_cd" type="12" value="" out="N"/>
				<param name="trf_seq" type="12" value="" out="N"/>
				<param name="cmdt_cd" type="12" value="" out="N"/>
				<param name="cmdt_trf_seq" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
