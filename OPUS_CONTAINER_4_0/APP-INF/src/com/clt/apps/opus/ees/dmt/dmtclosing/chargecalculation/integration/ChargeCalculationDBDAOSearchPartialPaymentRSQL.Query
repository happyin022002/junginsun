<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeCalculationDBDAOSearchPartialPaymentRSQL">
			<desc><![CDATA[Partial할 대상 Charge 조회]]></desc>
			<sql><![CDATA[
SELECT	DISTINCT
	 C.SYS_AREA_GRP_ID AS SVR_ID
	,C.CNTR_NO
	,C.CNTR_CYC_NO
	,C.DMDT_TRF_CD
	,C.DMDT_CHG_LOC_DIV_CD
	,C.OFC_CD
	,C.CHG_SEQ
	,DECODE(C.CHG_SEQ, 1, 'G', 'B') CHG_TYPE
	,C.FM_MVMT_STS_CD
	,TO_CHAR(C.FM_MVMT_DT, 'YYYYMMDD') FM_MVMT_DT
	,C.FM_MVMT_YD_CD
	,C.TO_MVMT_STS_CD
	,TO_CHAR(C.TO_MVMT_DT, 'YYYYMMDD') TO_MVMT_DT
	,C.TO_MVMT_YD_CD
	,C.DMDT_CHG_STS_CD
	,C.DMDT_INV_NO
	,D.CRE_OFC_CD
	,D.INV_DTL_SEQ
    ,(SELECT CNTR_TPSZ_CD FROM MST_CONTAINER
        WHERE CNTR_NO = C.CNTR_NO)  CNTR_TPSZ_CD
	,DECODE(C.DMDT_INV_NO, NULL, '', NVL(D.INV_PRT_FLG, 'N')) PARTIAL_MARK	/* INVOICE NO가 존재하는 경우, PARTIAL MARK 표시 */
	,I.DMDT_AR_IF_CD
	,C.CORR_RMK
	,C.MVMT_UMCH_SEQ
	,C.FM_MVMT_YR
	,C.FM_MVMT_SEQ
	,C.FM_MVMT_SPLIT_NO
	,C.TO_MVMT_YR
	,C.TO_MVMT_SEQ
	,C.TO_MVMT_SPLIT_NO
	,C.BZC_TRF_SEQ
	,C.BZC_TRF_GRP_SEQ
	,C.RFA_EXPT_APRO_NO
	,C.RFA_EXPT_DAR_NO
	,C.RFA_RQST_DTL_SEQ
	,C.AFT_EXPT_APRO_NO
	,C.AFT_EXPT_DAR_NO
	,C.AFT_EXPT_ADJ_SEQ
	,C.SC_NO
	,C.SC_EXPT_VER_SEQ
	,C.SC_EXPT_GRP_SEQ
	,C.CUST_CNT_CD
	,C.CUST_SEQ
	,C.ACT_CNT_CD
	,C.ACT_CUST_SEQ
	,TO_CHAR(C.CFM_DT, 'YYYYMMDD') CFM_DT
	,C.CFM_USR_ID
	,C.CFM_OFC_CD
	,TO_CHAR(C.CRE_DT, 'YYYYMMDD') CRE_DT
	,C.CRE_USR_ID
	--,C.CRE_OFC_CD
	,C.OFC_TRNS_FLG
	,C.CALC_DT
	,C.WEB_IND_FLG
	,C.WEB_CRE_USR_ID
	,TO_CHAR(C.WEB_CRE_DT, 'YYYYMMDD') WEB_CRE_DT
	,C.WEB_NTFY_PIC_NM
	,C.WEB_NTFY_PIC_TELCM_NO
	,DECODE(C.WEB_IND_FLG, 'Y',	TO_CHAR(NVL(C.WEB_MTY_DT, C.TO_MVMT_DT), 'YYYYMMDD'),
								TO_CHAR(C.WEB_MTY_DT, 'YYYYMMDD')
	) WEB_MTY_DT
	,TO_CHAR(C.FT_END_DT, 'YYYYMMDD') FT_END_DT	
	,C.DUL_TP_EXPT_FLG
	,C.CXL_BKG_CHG_FLG
	,C.OFC_RHQ_CD

FROM	DMT_CHG_CALC	C,
		DMT_INV_MN		I,
		DMT_INV_DTL		D

WHERE	C.DMDT_INV_NO			=	I.DMDT_INV_NO(+)
AND		C.DMDT_INV_NO			=	D.DMDT_INV_NO(+)
AND		C.CNTR_NO				=	D.CNTR_NO(+)
AND		C.CHG_SEQ				=	D.CHG_SEQ(+)
AND		C.SYS_AREA_GRP_ID		=	@[svr_id]
AND		C.CNTR_NO				=	@[cntr_no]
AND		C.CNTR_CYC_NO			=	@[cntr_cyc_no]
AND		C.DMDT_TRF_CD			=	@[dmdt_trf_cd]
AND		C.DMDT_CHG_LOC_DIV_CD	=	@[dmdt_chg_loc_div_cd]
AND		C.DMDT_CHG_STS_CD		<>	'D'
ORDER BY C.CHG_SEQ			]]></sql>
			<params>
				<param name="svr_id" type="12" value="" out="N"/>
				<param name="cntr_no" type="12" value="" out="N"/>
				<param name="cntr_cyc_no" type="12" value="" out="N"/>
				<param name="dmdt_trf_cd" type="12" value="" out="N"/>
				<param name="dmdt_chg_loc_div_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
