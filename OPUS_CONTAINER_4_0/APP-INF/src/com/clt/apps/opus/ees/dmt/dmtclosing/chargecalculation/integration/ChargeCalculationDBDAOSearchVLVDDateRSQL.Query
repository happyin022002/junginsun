<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeCalculationDBDAOSearchVLVDDateRSQL">
			<desc><![CDATA[VL/VD UPDATE 정보의 Free Time 시작일을 조회한다.]]></desc>
			<sql><![CDATA[
SELECT TO_CHAR (FX_DT, 'YYYYMMDD') FIXED_CMNC
  FROM DMT_VSL_DT_UPD
 WHERE VSL_CD 		= SUBSTR(@[vvd_cd], 1, 4)
   AND SKD_VOY_NO 	= SUBSTR(@[vvd_cd], 5, 4)
   AND SKD_DIR_CD 	= SUBSTR(@[vvd_cd], 9)
   AND LOC_CD		= SUBSTR(@[yd_cd], 1, 5 )
#if (${type} == 'fm')
   AND VL_VD_DIV_CD	= DECODE(SUBSTR(@[dmdt_trf_cd],3,1), 'I', 'VD','VL' )
#elseif (${type} == 'to')
   AND VL_VD_DIV_CD = 'VL'
#end
   AND FX_DT IS NOT NULL			]]></sql>
			<params>
				<param name="vvd_cd" type="12" value="" out="N"/>
				<param name="yd_cd" type="12" value="" out="N"/>
				<param name="dmdt_trf_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
