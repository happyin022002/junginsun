<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DemandNoteSendDBDAOSearchARActualPayerRSQL">
			<desc><![CDATA[Invoice Creation & Issue - Booking]]></desc>
			<sql><![CDATA[
SELECT A.ACT_CUST_CNT_CD||LPAD(A.ACT_CUST_SEQ,6,'0') AS ACT_CUST_CD
       , B.CUST_LGL_ENG_NM AS ACT_CUST_NM
FROM
(
	SELECT ACT_CUST_CNT_CD, ACT_CUST_SEQ
	FROM INV_AR_MN AR
	WHERE BKG_NO = @[bkg_no]
	AND IO_BND_CD = SUBSTR(@[dmdt_trf_cd],3,1) 
	AND AR_IF_NO = (
                  SELECT MAX(AR_IF_NO)
                  FROM INV_AR_MN
                  WHERE BKG_NO = AR.BKG_NO
                  AND   IO_BND_CD = SUBSTR(@[dmdt_trf_cd],3,1) 
                  )
) A,
MDM_CUSTOMER B
WHERE A.ACT_CUST_CNT_CD = B.CUST_CNT_CD
AND A.ACT_CUST_SEQ = B.CUST_SEQ			]]></sql>
			<params>
				<param name="bkg_no" type="12" value="" out="N"/>
				<param name="dmdt_trf_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
