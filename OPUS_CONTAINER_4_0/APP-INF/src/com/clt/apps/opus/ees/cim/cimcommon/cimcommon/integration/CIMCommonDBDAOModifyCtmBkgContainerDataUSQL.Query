<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CIMCommonDBDAOModifyCtmBkgContainerDataUSQL">
			<desc><![CDATA[CTM_BKG_CNTR 수정]]></desc>
			<sql><![CDATA[
UPDATE CTM_BKG_CNTR BC SET (
	BC.CNMV_YR, 
	BC.CNMV_ID_NO, 
	BC.CNMV_CYC_NO, 
	BC.CNMV_STS_CD, 
	BC.CNMV_EVNT_DT
) = 
( 
	SELECT /*+ INDEX_DESC(CM XAK2CTM_MOVEMENT) */
          CM.CNMV_YR
        , CM.CNMV_ID_NO
        , CM.CNMV_CYC_NO
        , CM.MVMT_STS_CD
        , CM.CNMV_EVNT_DT
    FROM  CTM_MOVEMENT CM
    WHERE BC.BKG_NO = CM.BKG_NO
    AND   BC.CNTR_NO = CM.CNTR_NO
    AND   ROWNUM     = 1
)
WHERE  BC.CNTR_NO     = @[cntr_no]
AND    BC.BKG_NO      = @[bkg_no]
AND    EXISTS ( 
			SELECT 'X'
            FROM  CTM_MOVEMENT CM
            WHERE BC.BKG_NO = CM.BKG_NO
            AND    BC.CNTR_NO = CM.CNTR_NO
            GROUP BY CM.BKG_NO, CM.CNTR_NO 
	)			]]></sql>
			<params>
				<param name="cntr_no" type="12" value="" out="N"/>
				<param name="bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
