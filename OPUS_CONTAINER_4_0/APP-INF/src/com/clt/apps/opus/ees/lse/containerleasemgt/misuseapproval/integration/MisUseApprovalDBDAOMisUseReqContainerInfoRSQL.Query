<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="MisUseApprovalDBDAOMisUseReqContainerInfoRSQL">
			<desc><![CDATA[입력된 CNTR에 대한 기본정보를 조회한다.
LT일때 Per-Diem LCC로 변경]]></desc>
			<sql><![CDATA[
SELECT  A.CNTR_NO
         , A.AGMT_CTY_CD
         , A.AGMT_SEQ
         , A.CNTR_TPSZ_CD
         , A.LSTM_CD 
         , TO_CHAR(A.CNMV_DT,'YYYYMMDD') AS CNMV_DT
         , A.CRNT_YD_CD
         , A.CNMV_STS_CD AS MVMT_STS_CD
         , D.POD_CD, D.POL_CD
--        , MST_COMMON_PKG.MST_LSE_AGMT_RT_GET_FNC(A.AGMT_CTY_CD, A.AGMT_SEQ, 'PDM', A.CNTR_TPSZ_CD, A.ONH_YD_CD) AS PDM_AMT
          , DECODE(MST_COMMON_PKG.MST_HO_OFC_CHK_FNC(@[usr_ofc_cd])
 				,'Y',MST_COMMON_PKG.MST_LSE_AGMT_RT_GET_FNC(A.AGMT_CTY_CD, A.AGMT_SEQ, 'PDM', A.CNTR_TPSZ_CD, A.ONH_YD_CD) 
 				,'N','') AS PDM_AMT
         , NVL(B.CNTR_LFT_CHG_AMT,0) AS LON_AMT           
FROM    MST_CONTAINER A,
        MST_CNTR_STS_HIS B, 
        LSE_AGREEMENT C,
		BKG_BOOKING D
WHERE   A.CNTR_NO = B.CNTR_NO 
AND     A.LST_STS_SEQ = B.CNTR_STS_SEQ
AND		B.AGMT_CTY_CD = C.AGMT_CTY_CD
AND     B.AGMT_SEQ = C.AGMT_SEQ  
AND     A.BKG_NO = D.BKG_NO(+)
AND     A.CNTR_NO = @[cntr_no]			]]></sql>
			<params>
				<param name="usr_ofc_cd" type="12" value="" out="N"/>
				<param name="cntr_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
