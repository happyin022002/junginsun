<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ReceivableRentalCostDBDAOReceivableInvoiceCancelUSQL">
			<desc><![CDATA[Receivable Rental Invoice Creation 자료를 취소합니다.]]></desc>
			<sql><![CDATA[
UPDATE  LSE_RCV_RNTL_CHG A
SET     LSE_CNTR_CHG_STS_CD = 'N',
        INV_NO       = NULL,
		TTL_CHG_AMT  = 0,
		CR_AMT		 = 0,
        INV_AMT      = 0,
        INV_CRE_OFC_CD = NULL,
        INV_CRE_USR_ID = NULL,
        INV_CRE_DT   = NULL,
		INV_ISS_DT   = NULL,
		INV_DUE_DT   = NULL,
        SRC_IF_SEQ   = NULL,
        SRC_IF_DT    = NULL,
        UPD_USR_ID   = @[cre_usr_id],
        UPD_DT       = SYSDATE,
		CUST_CNT_CD  = NULL,
		CUST_SEQ     = NULL,
		LOCL_XCH_RT  = NULL,
		LOCL_CURR_CD = NULL,
		LOCL_TAX_FLG = 'N',
		CFM_FLG		 = 'N',
		CFM_OFC_CD 	 = NULL,
		CFM_IF_FLG   = 'N',
		CXL_INV_NO	 = @[inv_no],
		CXL_USR_ID	 = @[cre_usr_id],
		CXL_DT		 = SYSDATE,
		CXL_FLG		 = 'Y'
WHERE   COST_YRMON   = @[cost_yrmon]
AND		INV_NO		 = @[inv_no]
AND     LSE_CNTR_CHG_STS_CD = 'I'			]]></sql>
			<params>
				<param name="cre_usr_id" type="12" value="" out="N"/>
				<param name="inv_no" type="12" value="" out="N"/>
				<param name="cost_yrmon" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
