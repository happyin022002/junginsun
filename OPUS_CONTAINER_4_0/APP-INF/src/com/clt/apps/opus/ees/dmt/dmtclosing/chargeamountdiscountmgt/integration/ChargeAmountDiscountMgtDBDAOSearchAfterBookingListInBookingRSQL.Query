<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeAmountDiscountMgtDBDAOSearchAfterBookingListInBookingRSQL">
			<desc><![CDATA[After Booking Request 를 Charge Container 에서 찾지 못했을 경우 Booking 에서 찾기 위한 조회용 쿼리]]></desc>
			<sql><![CDATA[
SELECT  DISTINCT
		ADJ_RQST_DTL.AFT_EXPT_DAR_NO
	,	ADJ_RQST_DTL.AFT_EXPT_ADJ_SEQ
    ,   ADJ_RQST_DTL.DMDT_TRF_CD
	,   ADJ_RQST_DTL.BKG_NO
	,   ADJ_RQST_DTL.BL_NO
	,   CASE 
            WHEN ADJ_RQST_DTL.FT_ADJ_FLG = 'N' AND ADJ_RQST_DTL.DC_FLG = 'N' 
			THEN 'D' 
			ELSE 'S'
        END CNTR_TP
	,   DECODE(ADJ_RQST_DTL.FT_ADJ_FLG, 'Y', 1, 0) FT_ADJ_FLG       
	,   DECODE(ADJ_RQST_DTL.FT_ADD_DYS, 0, '', ADJ_RQST_DTL.FT_ADD_DYS) FT_ADD_DYS
	,   DECODE(ADJ_RQST_DTL.FT_TTL_DYS, 0, '', ADJ_RQST_DTL.FT_TTL_DYS) FT_TTL_DYS
	,   DECODE(ADJ_RQST_DTL.XCLD_SAT_FLG, 'Y', 1, 0) XCLD_SAT_FLG
	,   DECODE(ADJ_RQST_DTL.XCLD_SUN_FLG, 'Y', 1, 0) XCLD_SUN_FLG
	,   DECODE(ADJ_RQST_DTL.XCLD_HOL_FLG, 'Y', 1, 0) XCLD_HOL_FLG
	,   DECODE(ADJ_RQST_DTL.DC_FLG, 'Y', 1, 0) DC_FLG
	,   ADJ_RQST_DTL.CURR_CD
	,   DECODE(ADJ_RQST_DTL.DC_AMT, 0, '', ADJ_RQST_DTL.DC_AMT) DC_AMT
	,   DECODE(ADJ_RQST_DTL.DC_RTO, 0, '', ADJ_RQST_DTL.DC_RTO) DC_RTO
	,   ADJ_RQST_DTL.EACH_CNTR_FLG
	,   BOOKING.VSL_CD || BOOKING.SKD_VOY_NO || BOOKING.SKD_DIR_CD TVVD
	,   BOOKING.POR_CD
	,   BOOKING.POL_CD
	,   BOOKING.POD_CD
	,   BOOKING.DEL_CD
	,   BOOKING.RCV_TERM_CD || '/' || BOOKING.DE_TERM_CD RD
	,   DECODE(BOOKING.DCGO_FLG, 'N', '', BOOKING.DCGO_FLG) DCGO_FLG
	,   DECODE(BOOKING.RC_FLG, 'N', '', BOOKING.RC_FLG) RC_FLG
	,   DECODE(BOOKING.AWK_CGO_FLG, 'N', '', BOOKING.AWK_CGO_FLG) AWK_CGO_FLG
	,   DECODE(BOOKING.BB_CGO_FLG, 'N', '', BOOKING.BB_CGO_FLG) BB_CGO_FLG
	,   DECODE(BOOKING.RD_CGO_FLG, 'N', '', BOOKING.RD_CGO_FLG) RD_CGO_FLG
	,   DECODE(BOOKING.SOC_FLG, 'N', '', BOOKING.SOC_FLG) SOC_FLG
	,   BOOKING.CMDT_CD
	,   CMDT.CMDT_NM
	,	ADJ_RQST.RQST_OFC_CD

FROM    DMT_AFT_BKG_ADJ_RQST ADJ_RQST
	,   DMT_AFT_BKG_ADJ_RQST_DTL ADJ_RQST_DTL
	,   BKG_BOOKING BOOKING
	,   MDM_COMMODITY CMDT

WHERE	
#if(${dar_no} != '')
		ADJ_RQST.AFT_EXPT_DAR_NO = @[dar_no]
#elseif(${apvl_no} != '')
		ADJ_RQST.AFT_BKG_APRO_NO = @[apvl_no]
#end
	AND ADJ_RQST.AFT_EXPT_DAR_NO = ADJ_RQST_DTL.AFT_EXPT_DAR_NO
	AND ADJ_RQST_DTL.BKG_NO = BOOKING.BKG_NO
	AND BOOKING.CMDT_CD = CMDT.CMDT_CD

ORDER BY AFT_EXPT_ADJ_SEQ			]]></sql>
			<params>
				<param name="dar_no" type="12" value="" out="N"/>
				<param name="apvl_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
