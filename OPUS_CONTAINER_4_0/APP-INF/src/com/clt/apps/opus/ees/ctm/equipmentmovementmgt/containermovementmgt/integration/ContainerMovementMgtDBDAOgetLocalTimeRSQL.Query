<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ContainerMovementMgtDBDAOgetLocalTimeRSQL">
			<desc><![CDATA[현지 시간을 구해온다]]></desc>
			<sql><![CDATA[
SELECT EVENT_DATE, LOCAL_DATE, 
       CASE WHEN EVENT_DATE = LOCAL_DATE THEN 0
            WHEN EVENT_DATE > LOCAL_DATE THEN 1
            ELSE -1
       END  BID
FROM (
SELECT TO_CHAR
          (GLOBALDATE_PKG.TIME_CONV_FNC (SUBSTR (@[org_yd_cd], 0, 5),
                                         TO_DATE (@[cnmv_evnt_dt],
                                                  'yyyy-mm-dd hh24:mi'
                                                 ),
                                         'GMT'
                                        ),
           'yyyymmddhh24mi'
          ) EVENT_DATE,
       TO_CHAR
          (GLOBALDATE_PKG.TIME_CONV_FNC
                                     (COM_CONSTANTMGR_PKG.COM_GETBASELOCATIONCODE_FNC(),
                                      SYSDATE, 
                                      'GMT'
                                     ),
           'yyyymmddhh24mi'
          ) LOCAL_DATE
  FROM DUAL
)			]]></sql>
			<params>
				<param name="org_yd_cd" type="12" value="" out="N"/>
				<param name="cnmv_evnt_dt" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
