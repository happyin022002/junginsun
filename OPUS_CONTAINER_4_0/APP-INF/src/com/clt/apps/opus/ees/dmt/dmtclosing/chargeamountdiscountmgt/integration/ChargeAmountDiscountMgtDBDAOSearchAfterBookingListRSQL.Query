<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="ChargeAmountDiscountMgtDBDAOSearchAfterBookingListRSQL">
			<desc><![CDATA[After Booking Request 조회를 위한 쿼리]]></desc>
			<sql><![CDATA[
SELECT  DISTINCT
		ADJ_RQST_DTL.AFT_EXPT_DAR_NO
	,	ADJ_RQST_DTL.AFT_EXPT_ADJ_SEQ
    ,   ADJ_RQST_DTL.DMDT_TRF_CD
	,   ADJ_RQST_DTL.BKG_NO
	,   ADJ_RQST_DTL.BL_NO
	,   CASE WHEN ADJ_RQST_DTL.FT_ADJ_FLG = 'N' AND ADJ_RQST_DTL.DC_FLG = 'N' THEN 'D' ELSE 'S' END CNTR_TP
	,   DECODE(ADJ_RQST_DTL.FT_ADJ_FLG, 'Y', 1, 0) FT_ADJ_FLG       
	,   DECODE(ADJ_RQST_DTL.FT_ADD_DYS, 0, '', ADJ_RQST_DTL.FT_ADD_DYS) FT_ADD_DYS
	,   DECODE(ADJ_RQST_DTL.FT_TTL_DYS, 0, '', ADJ_RQST_DTL.FT_TTL_DYS) FT_TTL_DYS
	,   DECODE(ADJ_RQST_DTL.XCLD_SAT_FLG, 'Y', 1, 0) XCLD_SAT_FLG
	,   DECODE(ADJ_RQST_DTL.XCLD_SUN_FLG, 'Y', 1, 0) XCLD_SUN_FLG
	,   DECODE(ADJ_RQST_DTL.XCLD_HOL_FLG, 'Y', 1, 0) XCLD_HOL_FLG
	,   DECODE(ADJ_RQST_DTL.DC_FLG, 'Y', 1, 0) DC_FLG
	,   CASE WHEN ADJ_RQST_DTL.FT_ADJ_FLG = 'N' AND ADJ_RQST_DTL.DC_FLG = 'N' THEN '' ELSE ADJ_RQST_DTL.CURR_CD END CURR_CD
	,   DECODE(ADJ_RQST_DTL.DC_AMT, 0, '', ADJ_RQST_DTL.DC_AMT) DC_AMT
	,   DECODE(ADJ_RQST_DTL.DC_RTO, 0, '', ADJ_RQST_DTL.DC_RTO) DC_RTO
	,   ADJ_RQST_DTL.EACH_CNTR_FLG
	,   BKG.VSL_CD || BKG.SKD_VOY_NO || BKG.SKD_DIR_CD TVVD
	,	BKG.POR_CD
	,	BKG.POL_CD
	,	BKG.POD_CD
	,	BKG.DEL_CD
	,	BKG.RCV_TERM_CD || '/' || BKG.DE_TERM_CD RD
	,	(
        	SELECT  CASE WHEN SUM(DECODE(DCGO_FLG, 'Y', 1, 0)) >= 1 THEN 'Y' ELSE '' END
        	FROM    DMT_CHG_BKG_CNTR
        	WHERE   SYS_AREA_GRP_ID = CHG_CNTR.SYS_AREA_GRP_ID
            	AND BKG_NO = CHG_CNTR.BKG_NO
		) DCGO_FLG
	,	(
        	SELECT  CASE WHEN SUM(DECODE(RC_FLG, 'Y', 1, 0)) >= 1 THEN 'Y' ELSE '' END
        	FROM    DMT_CHG_BKG_CNTR
        	WHERE   SYS_AREA_GRP_ID = CHG_CNTR.SYS_AREA_GRP_ID
            	AND BKG_NO = CHG_CNTR.BKG_NO
		) RC_FLG
	,	(
        	SELECT  CASE WHEN SUM(DECODE(AWK_CGO_FLG, 'Y', 1, 0)) >= 1 THEN 'Y' ELSE '' END
        	FROM    DMT_CHG_BKG_CNTR
        	WHERE   SYS_AREA_GRP_ID = CHG_CNTR.SYS_AREA_GRP_ID
            	AND BKG_NO = CHG_CNTR.BKG_NO
		) AWK_CGO_FLG
	,	(
        	SELECT  CASE WHEN SUM(DECODE(BB_CGO_FLG, 'Y', 1, 0)) >= 1 THEN 'Y' ELSE '' END
        	FROM    DMT_CHG_BKG_CNTR
        	WHERE   SYS_AREA_GRP_ID = CHG_CNTR.SYS_AREA_GRP_ID
            	AND BKG_NO = CHG_CNTR.BKG_NO
		) BB_CGO_FLG
	,	(
        	SELECT  CASE WHEN SUM(DECODE(RD_CGO_FLG, 'Y', 1, 0)) >= 1 THEN 'Y' ELSE '' END
        	FROM    DMT_CHG_BKG_CNTR
        	WHERE   SYS_AREA_GRP_ID = CHG_CNTR.SYS_AREA_GRP_ID
            	AND BKG_NO = CHG_CNTR.BKG_NO
		) RD_CGO_FLG
	,	(
        	SELECT  CASE WHEN SUM(DECODE(SOC_FLG, 'Y', 1, 0)) >= 1 THEN 'Y' ELSE '' END
        	FROM    DMT_CHG_BKG_CNTR
        	WHERE   SYS_AREA_GRP_ID = CHG_CNTR.SYS_AREA_GRP_ID
            	AND BKG_NO = CHG_CNTR.BKG_NO
		) SOC_FLG
	,   BKG.CMDT_CD
	,   CMDT.CMDT_NM
	,	ADJ_RQST.RQST_OFC_CD

FROM    DMT_AFT_BKG_ADJ_RQST ADJ_RQST
	,   DMT_AFT_BKG_ADJ_RQST_DTL ADJ_RQST_DTL
	,   DMT_CHG_BKG_CNTR CHG_CNTR
	,   BKG_BOOKING BKG
	,   MDM_COMMODITY CMDT

WHERE	
#if(${dar_no} != '')
		ADJ_RQST.AFT_EXPT_DAR_NO = @[dar_no]
#elseif(${apvl_no} != '')
		ADJ_RQST.AFT_BKG_APRO_NO = @[apvl_no]
#end
	AND ADJ_RQST.AFT_EXPT_DAR_NO = ADJ_RQST_DTL.AFT_EXPT_DAR_NO
	AND ADJ_RQST_DTL.BKG_NO = CHG_CNTR.BKG_NO
	AND	CHG_CNTR.SYS_AREA_GRP_ID = 
		(
			SELECT  SYS_AREA_GRP_ID
			FROM    COM_SYS_AREA_GRP_ID
			WHERE   CNT_CD = 
					(
						CASE 
							WHEN SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 2, 1) = 'M' AND SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 3, 1) = 'I' 
								THEN SUBSTR(CHG_CNTR.POD_CD, 0, 2)
							WHEN SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 2, 1) = 'M' AND SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 3, 1) = 'O' 
								THEN SUBSTR(CHG_CNTR.POL_CD, 0, 2)
							WHEN SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 2, 1) = 'T' AND SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 3, 1) = 'I' 
								THEN SUBSTR(CHG_CNTR.DEL_CD, 0, 2)
							WHEN SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 2, 1) = 'T' AND SUBSTR(ADJ_RQST_DTL.DMDT_TRF_CD, 3, 1) = 'O' 
								THEN SUBSTR(CHG_CNTR.POR_CD, 0, 2)
						END    
					)
				AND CO_IND_CD = 'H'
		)
	AND ADJ_RQST_DTL.BKG_NO = BKG.BKG_NO
	AND BKG.CMDT_CD = CMDT.CMDT_CD

ORDER BY AFT_EXPT_ADJ_SEQ			]]></sql>
			<params>
				<param name="dar_no" type="12" value="" out="N"/>
				<param name="apvl_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
