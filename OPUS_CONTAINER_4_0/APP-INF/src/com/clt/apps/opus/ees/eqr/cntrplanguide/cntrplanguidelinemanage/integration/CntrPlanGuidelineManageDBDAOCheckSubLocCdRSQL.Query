<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CntrPlanGuidelineManageDBDAOCheckSubLocCdRSQL">
			<desc><![CDATA[LCC변경 할 경우 유효성 체크]]></desc>
			<sql><![CDATA[
SELECT CASE WHEN COUNT(1) > 0 THEN 'T'
                              ELSE 'F'
       END LOCA_FLAG                              
  FROM MDM_EQ_ORZ_CHT
 WHERE 1=1
#if (${s_loc_cd} != '') 
   AND RCC_CD = @[s_loc_cd] -- RCC SELECT BOX에서 선택된 정보
#end
#if (${s_sub_loc_cd} != '') 
   AND LCC_CD = @[s_sub_loc_cd]
#end
   AND DELT_FLG = 'N'			]]></sql>
			<params>
				<param name="s_loc_cd" type="12" value="" out="N"/>
				<param name="s_sub_loc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
