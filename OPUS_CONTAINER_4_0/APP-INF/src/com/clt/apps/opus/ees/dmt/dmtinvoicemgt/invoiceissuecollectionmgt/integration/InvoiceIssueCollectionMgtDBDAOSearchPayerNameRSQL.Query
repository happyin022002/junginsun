<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueCollectionMgtDBDAOSearchPayerNameRSQL">
			<desc><![CDATA[PayerName 조회]]></desc>
			<sql><![CDATA[
-- DMT
SELECT 'DMT' AS JOB_TP
	,'' AS GUBUN
	,DMDT_PAYR_NM AS DMDT_PAYR_NM
FROM DMT_PAYR_INFO
WHERE SYS_AREA_GRP_ID 	= (SELECT SYS_AREA_GRP_ID
						   FROM COM_SYS_AREA_GRP_ID
						   WHERE CNT_CD = (SELECT SUBSTR(LOC_CD, 1, 2) 
										   FROM MDM_ORGANIZATION
										   WHERE OFC_CD = @[s_ofc_cd])
						   AND CO_IND_CD = 'H')
AND CUST_CNT_CD 		= SUBSTR(@[s_cust_cd], 1, 2)
AND CUST_SEQ 			= SUBSTR(@[s_cust_cd], 3)
#if (${s_cust_gubun} == '1') 
UNION ALL
SELECT 'MDM' AS JOB_TP
	,'GENERAL' AS GUBUN
	,VNDR_LGL_ENG_NM AS CUST_LGL_ENG_NM
FROM MDM_VENDOR
WHERE VNDR_SEQ 			= @[s_cust_cd]
#elseif (${s_cust_gubun} == '2') 
UNION ALL
SELECT 'MDM' AS JOB_TP
    ,'CREDIT' AS GUBUN
    ,LOCL_NM
FROM MDM_CR_CUST
WHERE CUST_CNT_CD 		= SUBSTR(@[s_cust_cd], 1, 2)
AND CUST_SEQ 			= SUBSTR(@[s_cust_cd], 3)
UNION ALL
SELECT 'MDM' AS JOB_TP
    ,'GENERAL' AS GUBUN
    ,CUST_LGL_ENG_NM
FROM MDM_CUSTOMER
WHERE CUST_CNT_CD 		= SUBSTR(@[s_cust_cd], 1, 2)
AND CUST_SEQ 			= SUBSTR(@[s_cust_cd], 3)
#end
#if (${s_pod_cnt_cd} == 'KR') 
UNION ALL
-- BKG - D/O 신청
SELECT 'BKG' AS JOB_TP
    ,'D/O신청' AS GUBUN
    ,BEP.PTY_NM1
FROM   BKG_EDO_MST         BEM,
       BKG_EDO_PTY_TRSP    BEP
WHERE BEM.EDO_TP_CD   	= '5JN'
AND BEP.EDO_PTY_CD 		= 'MS'
AND BEM.BKG_NO 			= @[s_bkg_no]
AND BEM.EDO_RQST_NO 	= BEP.EDO_RQST_NO
AND BEM.EDO_RQST_SEQ  	= BEP.EDO_RQST_SEQ
UNION ALL     
-- BKG - D/O 실화주
SELECT 'BKG' AS JOB_TP
    ,'D/O 실화주' AS GUBUN
    ,BEP.PTY_NM1
FROM   BKG_EDO_MST         BEM,
       BKG_EDO_PTY_TRSP    BEP
WHERE BEM.EDO_TP_CD   	= '5JN'
AND BEP.EDO_PTY_CD 		= 'AS'
AND BEM.BKG_NO 			= @[s_bkg_no]
AND BEM.EDO_RQST_NO 	= BEP.EDO_RQST_NO
AND BEM.EDO_RQST_SEQ  	= BEP.EDO_RQST_SEQ  
UNION ALL   
-- BKG - 자가운송 신청업체
SELECT 'BKG' AS JOB_TP
    ,'자가운송 신청' AS GUBUN
    ,BEP.PTY_NM1
FROM   BKG_EDO_MST         BEM,
       BKG_EDO_PTY_TRSP    BEP
WHERE BEM.EDO_TP_CD   	= '5JM'
AND BEP.EDO_PTY_CD 		= 'MS'
AND BEM.BKG_NO 			= @[s_bkg_no]
AND BEM.EDO_RQST_NO 	= BEP.EDO_RQST_NO
AND BEM.EDO_RQST_SEQ  	= BEP.EDO_RQST_SEQ     
UNION ALL   
-- BKG - 자가운송 실화주
SELECT 'BKG' AS JOB_TP
    ,'자가운송 실화주' AS GUBUN
    ,BEP.PTY_NM1
FROM   BKG_EDO_MST         BEM,
       BKG_EDO_PTY_TRSP    BEP
WHERE BEM.EDO_TP_CD   	= '5JM'
AND BEP.EDO_PTY_CD 		= 'AS'
AND BEM.BKG_NO 			= @[s_bkg_no]
AND BEM.EDO_RQST_NO 	= BEP.EDO_RQST_NO
AND BEM.EDO_RQST_SEQ  	= BEP.EDO_RQST_SEQ
#end			]]></sql>
			<params>
				<param name="s_ofc_cd" type="12" value="" out="N"/>
				<param name="s_cust_cd" type="12" value="" out="N"/>
				<param name="s_bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
