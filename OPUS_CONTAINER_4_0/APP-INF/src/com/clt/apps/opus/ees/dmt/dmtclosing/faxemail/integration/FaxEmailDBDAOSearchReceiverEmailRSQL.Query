<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="FaxEmailDBDAOSearchReceiverEmailRSQL">
			<desc><![CDATA[Email 을 보낼 수신자의 정보를 조회하는 쿼리]]></desc>
			<sql><![CDATA[
SELECT  DISTINCT USR.USR_EML

FROM    DMT_AFT_BKG_ADJ_RQST_DTL ADJ_RQST_DTL
    ,   DMT_AFT_BKG_CNTR AFT_CNTR
    ,   DMT_CHG_CALC CHG_CALC
    ,   DMT_APRO_EML_RCVR EML_RCVR
    ,   DMT_APRO_EML_RCVR_TRF_TP EML_RCVR_TRF_TP
    ,   COM_USER USR
    
WHERE   ADJ_RQST_DTL.AFT_EXPT_DAR_NO = @[aft_expt_dar_no]
    AND ADJ_RQST_DTL.AFT_EXPT_DAR_NO = AFT_CNTR.AFT_EXPT_DAR_NO
    AND ADJ_RQST_DTL.AFT_EXPT_ADJ_SEQ = AFT_CNTR.AFT_EXPT_ADJ_SEQ
    AND AFT_CNTR.SYS_AREA_GRP_ID = CHG_CALC.SYS_AREA_GRP_ID
    AND AFT_CNTR.CNTR_NO = CHG_CALC.CNTR_NO
    AND AFT_CNTR.CNTR_CYC_NO = CHG_CALC.CNTR_CYC_NO
    AND AFT_CNTR.DMDT_TRF_CD = CHG_CALC.DMDT_TRF_CD
    AND AFT_CNTR.DMDT_CHG_LOC_DIV_CD = CHG_CALC.DMDT_CHG_LOC_DIV_CD
    AND AFT_CNTR.CHG_SEQ = CHG_CALC.CHG_SEQ
    AND CHG_CALC.OFC_CD = EML_RCVR.REF_OFC_CD
    AND EML_RCVR.DELT_FLG = 'N'
    AND EML_RCVR.REF_OFC_CD = EML_RCVR_TRF_TP.REF_OFC_CD
    AND CHG_CALC.DMDT_TRF_CD = EML_RCVR_TRF_TP.DMDT_TRF_CD
    AND EML_RCVR.DMDT_USR_ID = USR.USR_ID			]]></sql>
			<params>
				<param name="aft_expt_dar_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
