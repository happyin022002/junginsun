<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="DMTCommonDBDAOARCurrencyVORSQL">
			<desc><![CDATA[AR CURRENCY 조회]]></desc>
			<sql><![CDATA[
SELECT	AR_CURR_CD
FROM	(
			SELECT  AR_CURR_CD
				,	1 AS IDX
			FROM	MDM_ORGANIZATION
			WHERE	OFC_CD = @[ofc_cd]
				AND	DELT_FLG = 'N'
			UNION ALL
			(
                SELECT  B.AR_CURR_CD, B.IDX
                FROM
                (
					SELECT AR_CURR_CD
                        ,    1 AS IDX
                    FROM    MDM_ORGANIZATION
                    WHERE    OFC_CD = @[ofc_cd]
                    AND    DELT_FLG = 'N'
                ) A, 
                (
                    SELECT    'USD' AS AR_CURR_CD, 2 AS IDX
                    FROM    DUAL
#if (${jsp_no} == '4002' || ${jsp_no} == '3109' ) 
                    UNION ALL
                    SELECT    'EUR', 3 AS IDX
                    FROM    DUAL
#end
                ) B
                WHERE A.AR_CURR_CD != B.AR_CURR_CD(+)
            )
            ORDER BY IDX
        )
WHERE AR_CURR_CD IS NOT NULL			]]></sql>
			<params>
				<param name="ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
