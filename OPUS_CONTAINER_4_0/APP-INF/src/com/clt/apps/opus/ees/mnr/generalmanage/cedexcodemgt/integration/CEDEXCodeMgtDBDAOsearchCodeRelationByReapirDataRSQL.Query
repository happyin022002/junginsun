<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CEDEXCodeMgtDBDAOsearchCodeRelationByReapirDataRSQL">
			<desc><![CDATA[searchCodeRelationByReapirData Repair코드 조회]]></desc>
			<sql><![CDATA[
SELECT DECODE(C.FM_RLT_CD,@[eq_cmpo_cd],'Y','N')  G,
       C.EQ_CEDEX_OTR_CD     CODE,
       C.EQ_CEDEX_OTR_CD_NM  DESCRIPTION,
	   DECODE(C.EQ_CEDEX_RLT_TP_CD,NULL,'CTR',C.EQ_CEDEX_RLT_TP_CD) EQ_CEDEX_RLT_TP_CD,
	   DECODE(C.FM_RLT_CD,NULL,@[eq_cmpo_cd],C.FM_RLT_CD)  FM_RLT_CD,
       DECODE(C.TO_RLT_CD,NULL,C.EQ_CEDEX_OTR_CD,C.TO_RLT_CD)  TO_RLT_CD,
       C.CRE_USR_ID,
       C.CRE_DT,
       C.UPD_USR_ID,
       C.UPD_DT,
       @[eq_cmpo_cd] EQ_CMPO_CD
  FROM ( 
				SELECT A.EQ_CEDEX_OTR_CD,
				       A.EQ_CEDEX_OTR_CD_NM,
				       B.EQ_CEDEX_RLT_TP_CD,
				       B.FM_RLT_CD,
				       B.TO_RLT_CD,
				       B.CRE_USR_ID,
				       B.CRE_DT,
				       B.UPD_USR_ID,
				       B.UPD_DT       
				  FROM
				        ( 
				        SELECT EQ_CEDEX_OTR_CD,
				               EQ_CEDEX_OTR_CD_NM
				          FROM MNR_CEDEX_OTR_CD
				         WHERE EQ_CEDEX_OTR_TP_CD = 'RPR'
				         ) A,
				         (
				        SELECT EQ_CEDEX_RLT_TP_CD,
				               FM_RLT_CD,
				               TO_RLT_CD,
				               CRE_USR_ID,
				               CRE_DT,
				               UPD_USR_ID,
				               UPD_DT
				          FROM MNR_CD_RLT
				         WHERE EQ_CEDEX_RLT_TP_CD = 'CTR'
                           AND FM_RLT_CD = @[eq_cmpo_cd]
				        ) B
				  WHERE A.EQ_CEDEX_OTR_CD = B.TO_RLT_CD(+)
			) C,
			( SELECT @[eq_cmpo_cd] EQ_CMPO_CD
                FROM DUAL ) P 
 WHERE C.TO_RLT_CD = P.EQ_CMPO_CD(+)
 ORDER BY G DESC, CODE			]]></sql>
			<params>
				<param name="eq_cmpo_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
