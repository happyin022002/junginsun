<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="InvoiceIssueCollectionMgtDBDAOSearchInvoiceDetailZeroOverDayRSQL">
			<desc><![CDATA[Invoice detail 중 FX_FT_OVR_DYS가 0 인 건수 조회]]></desc>
			<sql><![CDATA[
SELECT CNTR_NO FROM DMT_INV_DTL
WHERE DMDT_INV_NO 	= @[dmdt_inv_no]
AND CRE_OFC_CD 		= @[cre_ofc_cd]
AND NVL(FX_FT_OVR_DYS,0) = 0
UNION ALL
SELECT CNTR_NO FROM DMT_CHG_CALC
WHERE 
(SYS_AREA_GRP_ID, CNTR_NO, CNTR_CYC_NO, DMDT_TRF_CD, DMDT_CHG_LOC_DIV_CD, CHG_SEQ) 
	IN 
(SELECT SYS_AREA_GRP_ID, CNTR_NO, CNTR_CYC_NO, DMDT_TRF_CD, DMDT_CHG_LOC_DIV_CD, CHG_SEQ 
 FROM DMT_INV_DTL 
 WHERE DMDT_INV_NO 	= @[dmdt_inv_no]
 AND CRE_OFC_CD 	= @[cre_ofc_cd])
AND DMDT_CHG_STS_CD = 'I'
AND FX_FT_OVR_DYS = 0			]]></sql>
			<params>
				<param name="dmdt_inv_no" type="12" value="" out="N"/>
				<param name="cre_ofc_cd" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
