<?xml version="1.0" encoding="UTF-8"?>
<sqls>
	<querys>
		<query name="CimCommonDBODAOscarVesselInformationListRSQL">
			<desc><![CDATA[Vessel Information 리스트 정보]]></desc>
			<sql><![CDATA[
SELECT  
       COMMCODE_PKG.GET_COMDTL_NAME_FNC('CD01233', BV.VSL_PRE_PST_CD)     AS VSL_PRE_PST_CD
    , BV.SLAN_CD                                    AS VSL_SLAN_CD
    , BV.VSL_CD||BV.SKD_VOY_NO||BV.SKD_DIR_CD         AS VSL_VVD
    , BV.POL_YD_CD                                    AS VSL_POL_YD_CD
    , (SELECT TO_CHAR(VPS.VPS_ETD_DT,'YYYY-MM-DD HH24:MI','NLS_DATE_LANGUAGE=AMERICAN')
       FROM VSK_VSL_PORT_SKD VPS
       WHERE BV.VSL_CD        = VPS.VSL_CD
       AND    BV.SKD_VOY_NO   = VPS.SKD_VOY_NO
       AND    BV.SKD_DIR_CD   = VPS.SKD_DIR_CD
       AND    BV.POL_YD_CD    = VPS.YD_CD
       AND    ROWNUM          = 1
      )                                                  AS VSL_ETD
    , BV.POD_YD_CD                                    AS VSL_POD_YD_CD
    , (SELECT TO_CHAR(VPS.VPS_ETB_DT,'YYYY-MM-DD HH24:MI','NLS_DATE_LANGUAGE=AMERICAN')
       FROM VSK_VSL_PORT_SKD VPS
       WHERE BV.VSL_CD        = VPS.VSL_CD
       AND    BV.SKD_VOY_NO   = VPS.SKD_VOY_NO
       AND    BV.SKD_DIR_CD   = VPS.SKD_DIR_CD
       AND    BV.POD_YD_CD    = VPS.YD_CD
       AND    ROWNUM          = 1
      )                                                    AS VSL_ETB
    , TO_CHAR(BV.OSCA_CRE_DT, 'YYYY.MM.DD HH24:MI:SS')  AS VSL_OSCA_CRE_DT
    , TO_CHAR(BV.OSCA_UPD_DT, 'YYYY.MM.DD HH24:MI:SS')  AS VSL_OSCA_UPD_DT
FROM 
	CIM_BKG_VVD_V BV
WHERE BV.BKG_NO = @[h_bkg_no]
ORDER BY DECODE(BV.VSL_PRE_PST_CD, 'S', 1, 'T', 2, 'U', 3) , VSL_SEQ			]]></sql>
			<params>
				<param name="h_bkg_no" type="12" value="" out="N"/>
			</params>
		</query>
	</querys>
</sqls>
